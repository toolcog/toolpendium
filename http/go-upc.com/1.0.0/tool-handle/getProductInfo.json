      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**barcodeUrl**: The URL to the scannable barcode image.",
            "**codeType**: The type of product code (UPC/EAN/ISBN).",
            [
              "**product**: all matching product details.",
              {
                "$ul": [
                  "**brand**: The brand of the product (if available).",
                  "**category**: The category of the product (if available).",
                  "**description**: A description of the product (if available).",
                  "**ean**: The EAN code of the product.",
                  "**imageUrl**: The URL for the product image.",
                  "**name**: The name of the product.",
                  "**region**: The region of the product.",
                  "**specs**: A list of additional item specifications (if available).",
                  "**upc**: The UPC code of the product."
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
