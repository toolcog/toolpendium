{
  "name": "getProductInfo",
  "description": "Retrieve product info for a particular barcode number (UPC, EAN, or ISBN).",
  "parameters": {
    "type": "object",
    "properties": {
      "code": {
        "type": "string"
      }
    },
    "required": [
      "code"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://go-upc.com/api/v1/code/{code}"
    }
  },
  "responses": {
