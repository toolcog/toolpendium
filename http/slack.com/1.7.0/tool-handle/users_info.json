{
  "name": "users_info",
  "description": "Gets information about a user.",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "Authentication token. Requires scope: `users:read`"
      },
      "include_locale": {
        "type": "boolean",
        "description": "Set this to `true` to receive the locale for this user. Defaults to `false`"
      },
      "user": {
        "type": "string",
        "description": "User to get info on"
      }
    },
    "required": [
      "token"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://slack.com/api/users.info{?token,include_locale,user}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "users.info success schema"
        },
        "Schema for successful response from users.info method",
        "**Key properties:**",
        {
          "$ul": [
            "**ok**",
            "**user**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "users.info error schema"
        },
        "Schema for error response from users.info method",
        "**Key properties:**",
        {
          "$ul": [
            "**callstack**",
            "**error**",
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
