{
  "name": "bots_info",
  "description": "Gets information about a bot user.",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "Authentication token. Requires scope: `users:read`"
      },
      "bot": {
        "type": "string",
        "description": "Bot user to get info on"
      }
    },
    "required": [
      "token"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://slack.com/api/bots.info{?token,bot}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "bots.info schema"
        },
        "Schema for successful response from bots.info method",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**bot**",
              {
                "$ul": [
                  "**app_id**",
                  "**deleted**",
                  [
                    "**icons**",
                    {
                      "$ul": [
                        "**image_36**",
                        "**image_48**",
                        "**image_72**"
                      ]
                    }
                  ],
                  "**id**",
                  "**name**",
                  "**updated**",
                  "**user_id**"
                ]
              }
            ],
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "bots.info error schema"
        },
        "Schema for error response from bots.info method",
        "**Key properties:**",
        {
          "$ul": [
            "**callstack**: Note: PHP callstack is only visible in dev/qa",
            "**error**",
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
