{
  "name": "admin_conversations_create",
  "description": "Create a public or private channel-based conversation.",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "Authentication token. Requires scope: `admin.conversations:write`"
      },
      "body": {
        "properties": {
          "description": {
            "description": "Description of the public or private channel to create.",
            "type": "string"
          },
          "is_private": {
            "description": "When `true`, creates a private channel instead of a public channel",
            "type": "boolean"
          },
          "name": {
            "description": "Name of the public or private channel to create.",
            "type": "string"
          },
          "org_wide": {
            "description": "When `true`, the channel will be available org-wide. Note: if the channel is not `org_wide=true`, you must specify a `team_id` for this channel",
            "type": "boolean"
          },
          "team_id": {
            "description": "The workspace to create the channel in. Note: this argument is required unless you set `org_wide=true`.",
            "type": "string"
          }
        },
        "required": [
          "name",
          "is_private"
        ],
        "type": "object"
      }
    },
    "required": [
      "token",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://slack.com/api/admin.conversations.create"
    },
    "headers": {
      "token": {
        "$": "token"
      }
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "admin.conversations.create schema"
        },
        "Schema for successful response of admin.conversations.create",
        "**Key properties:**",
        {
          "$ul": [
            "**channel_id**",
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "admin.conversations.create error schema"
        },
        "Schema for error response from admin.conversations.create",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
