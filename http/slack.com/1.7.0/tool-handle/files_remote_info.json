{
  "name": "files_remote_info",
  "description": "Retrieve information about a remote file added to Slack",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "Authentication token. Requires scope: `remote_files:read`"
      },
      "file": {
        "type": "string",
        "description": "Specify a file by providing its ID."
      },
      "external_id": {
        "type": "string",
        "description": "Creator defined GUID for the file."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://slack.com/api/files.remote.info{?token,file,external_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Default success template"
        },
        "This method either only returns a brief _OK_ response or a verbose schema is not available for this method.",
        "**Key properties:**",
        {
          "$ul": [
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Default error template"
        },
        "This method either only returns a brief _not OK_ response or a verbose schema is not available for this method.",
        "**Key properties:**",
        {
          "$ul": [
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
