{
  "name": "oauth_v2_access",
  "description": "Exchanges a temporary OAuth verifier code for an access token.",
  "parameters": {
    "type": "object",
    "properties": {
      "client_id": {
        "type": "string",
        "description": "Issued when you created your application."
      },
      "client_secret": {
        "type": "string",
        "description": "Issued when you created your application."
      },
      "code": {
        "type": "string",
        "description": "The `code` param returned via the OAuth callback."
      },
      "redirect_uri": {
        "type": "string",
        "description": "This must match the originally submitted URI (if one was sent)."
      }
    },
    "required": [
      "code"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://slack.com/api/oauth.v2.access{?client_id,client_secret,code,redirect_uri}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Default success template"
        },
        "This method either only returns a brief _OK_ response or a verbose schema is not available for this method.",
        "**Key properties:**",
        {
          "$ul": [
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Default error template"
        },
        "This method either only returns a brief _not OK_ response or a verbose schema is not available for this method.",
        "**Key properties:**",
        {
          "$ul": [
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
