{
  "name": "apps_permissions_request",
  "description": "Allows an app to request additional scopes",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "Authentication token. Requires scope: `none`"
      },
      "scopes": {
        "type": "string",
        "description": "A comma separated list of scopes to request for"
      },
      "trigger_id": {
        "type": "string",
        "description": "Token used to trigger the permissions API"
      }
    },
    "required": [
      "token",
      "scopes",
      "trigger_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://slack.com/api/apps.permissions.request{?token,scopes,trigger_id}"
    }
  },
