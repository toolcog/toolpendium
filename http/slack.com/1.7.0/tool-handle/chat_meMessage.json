{
  "name": "chat_meMessage",
  "description": "Share a me message into a channel.",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "Authentication token. Requires scope: `chat:write`"
      },
      "body": {
        "properties": {
          "channel": {
            "description": "Channel to send message to. Can be a public channel, private group or IM channel. Can be an encoded ID, or a name.",
            "type": "string"
          },
          "text": {
            "description": "Text of the message to send.",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://slack.com/api/chat.meMessage"
    },
    "headers": {
      "token": {
        "$": "token"
      }
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "chat.meMessage schema"
        },
        "Schema for successful response from chat.meMessage method",
        "**Key properties:**",
        {
          "$ul": [
            "**channel**",
            "**ok**",
            "**ts**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "chat.meMessage error schema"
        },
        "Schema for error response from chat.meMessage method",
        "**Key properties:**",
        {
          "$ul": [
            "**callstack**: Note: PHP callstack is only visible in dev/qa",
            "**error**",
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
