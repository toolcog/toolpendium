{
  "name": "conversations_info",
  "description": "Retrieve information about a conversation.",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "Authentication token. Requires scope: `conversations:read`"
      },
      "channel": {
        "type": "string",
        "description": "Conversation ID to learn more about"
      },
      "include_locale": {
        "type": "boolean",
        "description": "Set this to `true` to receive the locale for this conversation. Defaults to `false`"
      },
      "include_num_members": {
        "type": "boolean",
        "description": "Set to `true` to include the member count for the specified conversation. Defaults to `false`"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://slack.com/api/conversations.info{?token,channel,include_locale,include_num_members}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "conversations.info success schema"
        },
        "Schema for successful response conversations.info",
        "**Key properties:**",
        {
          "$ul": [
            "**channel**",
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "conversations.info error schema"
        },
        "Schema for error response from conversations.info method",
        "**Key properties:**",
        {
          "$ul": [
            "**callstack**: Note: PHP callstack is only visible in dev/qa",
            "**error**",
            "**needed**",
            "**ok**",
            "**provided**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
