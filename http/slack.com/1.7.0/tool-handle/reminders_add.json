{
  "name": "reminders_add",
  "description": "Creates a reminder.",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "Authentication token. Requires scope: `reminders:write`"
      },
      "body": {
        "properties": {
          "text": {
            "description": "The content of the reminder",
            "type": "string"
          },
          "time": {
            "description": "When this reminder should happen: the Unix timestamp (up to five years from now), the number of seconds until the reminder (if within 24 hours), or a natural language description (Ex. \"in 15 minutes,\" or \"every Thursday\")",
            "type": "string"
          },
          "user": {
            "description": "The user who will receive the reminder. If no user is specified, the reminder will go to user who created it.",
            "type": "string"
          }
        },
        "required": [
          "text",
          "time"
        ],
        "type": "object"
      }
    },
    "required": [
      "token",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://slack.com/api/reminders.add"
    },
    "headers": {
      "token": {
        "$": "token"
      }
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "reminders.add schema"
        },
        "Schema for successful response from reminders.add method",
        "**Key properties:**",
        {
          "$ul": [
            "**ok**",
            [
              "**reminder**",
              {
                "$ul": [
                  "**complete_ts**",
                  "**creator**",
                  "**id**",
                  "**recurring**",
                  "**text**",
                  "**time**",
                  "**user**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "reminders.add error schema"
        },
        "Schema for error response from reminders.add method",
        "**Key properties:**",
        {
          "$ul": [
            "**callstack**: Note: PHP callstack is only visible in dev/qa",
            "**error**",
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
