{
  "name": "reactions_add",
  "description": "Adds a reaction to an item.",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "Authentication token. Requires scope: `reactions:write`"
      },
      "body": {
        "properties": {
          "channel": {
            "description": "Channel where the message to add reaction to was posted.",
            "type": "string"
          },
          "name": {
            "description": "Reaction (emoji) name.",
            "type": "string"
          },
          "timestamp": {
            "description": "Timestamp of the message to add reaction to.",
            "type": "string"
          }
        },
        "required": [
          "channel",
          "name",
          "timestamp"
        ],
        "type": "object"
      }
    },
    "required": [
      "token",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://slack.com/api/reactions.add"
    },
    "headers": {
      "token": {
        "$": "token"
      }
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "reactions.add schema"
        },
        "Schema for successful response from reactions.add method",
        "**Key properties:**",
        {
          "$ul": [
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "reactions.add error schema"
        },
        "Schema for error response from reactions.add method",
        "**Key properties:**",
        {
          "$ul": [
            "**callstack**: Note: PHP callstack is only visible in dev/qa",
            "**error**",
            "**ok**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
