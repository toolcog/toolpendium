{
  "name": "getLKEClusterNode",
  "description": "Returns the values for a specified node object.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "clusterId": {
        "type": "integer",
        "description": "ID of the Kubernetes cluster containing the Node."
      },
      "nodeId": {
        "type": "string",
        "description": "ID of the Node to look up."
      }
    },
    "required": [
      "clusterId",
      "nodeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.linode.com/v4/lke/clusters/{clusterId}/nodes/{nodeId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**id**: The Node's ID.",
            "**instance_id**: The Linode's ID. If no Linode is currently provisioned for this Node, this is `null`.",
            "**status**: The creation status of this Node. This status is distinct from this Node's readiness as a Kubernetes Node Object as determined by the command `kubectl get nodes`."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
