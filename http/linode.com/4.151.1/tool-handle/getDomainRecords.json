{
  "name": "getDomainRecords",
  "description": "Returns a paginated list of Records configured on a Domain in Linode's\nDNS Manager.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "page": {
        "default": 1,
        "minimum": 1,
        "type": "integer",
        "description": "The page of a collection to return."
      },
      "page_size": {
        "default": 100,
        "maximum": 500,
        "minimum": 25,
        "type": "integer",
        "description": "The number of items to return per page."
      },
      "domainId": {
        "type": "integer",
        "description": "The ID of the Domain we are accessing Records for."
      }
    },
    "required": [
      "domainId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.linode.com/v4/domains/{domainId}/records{?page,page_size}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            "**page**: The current [page](/docs/api/#pagination).",
            "**pages**: The total number of [pages](/docs/api/#pagination).",
            "**results**: The total number of results."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
