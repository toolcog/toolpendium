{
  "name": "getObjectStorageCluster",
  "description": "Returns a single Object Storage Cluster.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "clusterId": {
        "type": "string",
        "description": "The ID of the Cluster."
      }
    },
    "required": [
      "clusterId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.linode.com/v4/object-storage/clusters/{clusterId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An Object Storage Cluster",
        "**Key properties:**",
        {
          "$ul": [
            "**domain**: The base URL for this cluster, used for connecting with third-party clients.",
            "**id**: The unique ID for this cluster.",
            "**region**: The region where this cluster is located.",
            "**static_site_domain**: The base URL for this cluster used when hosting static sites.",
            "**status**: This cluster's status."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
