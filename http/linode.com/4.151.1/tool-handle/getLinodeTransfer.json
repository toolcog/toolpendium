{
  "name": "getLinodeTransfer",
  "description": "Returns a Linode's network transfer pool statistics for the current month.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "linodeId": {
        "type": "integer",
        "description": "ID of the Linode to look up."
      }
    },
    "required": [
      "linodeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.linode.com/v4/linode/instances/{linodeId}/transfer"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**billable**: The amount of network transfer this Linode has used, in GB, past your monthly quota.",
            "**quota**: The amount of network transfer this Linode adds to your transfer pool, in GB, for the current month's billing cycle.",
            "**used**: The amount of network transfer used by this Linode, in bytes, for the current month's billing cycle."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
