{
  "name": "deleteLKENodePool",
  "description": "Delete a specific Node Pool from a Kubernetes cluster.\n\n**Deleting a Node Pool is a destructive action and cannot be undone.**\n\nDeleting a Node Pool will delete all Linodes within that Pool.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "clusterId": {
        "type": "integer",
        "description": "ID of the Kubernetes cluster to look up."
      },
      "poolId": {
        "type": "integer",
        "description": "ID of the Pool to look up"
      }
    },
    "required": [
      "clusterId",
      "poolId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "DELETE",
    "url": {
      "$uri": "https://api.linode.com/v4/lke/clusters/{clusterId}/pools/{poolId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
