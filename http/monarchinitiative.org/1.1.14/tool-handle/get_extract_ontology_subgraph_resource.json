{
  "name": "get_extract_ontology_subgraph_resource",
  "description": "Extract a subgraph from an ontology",
  "parameters": {
    "type": "object",
    "properties": {
      "cnode": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Additional classes"
      },
      "include_ancestors": {
        "default": true,
        "type": "boolean",
        "description": "Include Ancestors"
      },
      "include_descendants": {
        "type": "boolean",
        "description": "Include Descendants"
      },
      "relation": {
        "default": [
          "subClassOf",
          "BFO:0000050"
        ],
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Additional classes"
      },
      "include_meta": {
        "default": false,
        "type": "boolean",
        "description": "Include metadata in response"
      },
      "node": {
        "type": "string",
        "description": "class ID, e.g. HP:0001288"
      },
      "ontology": {
        "type": "string",
        "description": "ontology ID, e.g. go, uberon, mp, hp"
      }
    },
    "required": [
      "node",
      "ontology"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/ontol/subgraph/{ontology}/{node}{?cnode,include_ancestors,include_descendants,relation,include_meta}"
    }
  },
  "responses": {}
}
