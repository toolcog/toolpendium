{
  "name": "get_evidence_graph_object",
  "description": "Note that every association is assumed to have a unique ID",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "association id, e.g. 68e686f6-d05b-46b8-ab1f-1da2fff97ada"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/evidence/graph/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**edges**: All edges in graph",
            "**nodes**: All nodes in graph"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
