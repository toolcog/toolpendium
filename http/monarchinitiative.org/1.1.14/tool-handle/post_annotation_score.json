{
  "name": "post_annotation_score",
  "description": "Get annotation score",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/SufficiencyPostInput"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "SufficiencyPostInput": {
        "properties": {
          "features": {
            "description": "list of features",
            "items": {
              "$ref": "#/$defs/Feature"
            },
            "type": "array"
          },
          "id": {
            "description": "curie formatted id",
            "type": "string"
          }
        },
        "type": "object"
      },
      "Feature": {
        "properties": {
          "id": {
            "description": "curie formatted id",
            "type": "string"
          },
          "isPresent": {
            "description": "is the feature present",
            "type": "boolean"
          },
          "label": {
            "description": "curie formatted id",
            "type": "string"
          },
          "type": {
            "description": "feature type (only phenotype supported)",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "/api/sim/score"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**categorical_score**: categorical score",
            "**scaled_score**: scaled score",
            "**simple_score**: simple score"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
