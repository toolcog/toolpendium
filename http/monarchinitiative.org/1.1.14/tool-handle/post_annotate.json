{
  "name": "post_annotate",
  "description": "Annotate a given text using SciGraph annotator",
  "parameters": {
    "type": "object",
    "properties": {
      "content": {
        "type": "string",
        "description": "The text content to annotate"
      },
      "include_category": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Categories to include for annotation"
      },
      "exclude_category": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Categories to exclude for annotation"
      },
      "min_length": {
        "default": 4,
        "type": "string",
        "description": "The minimum number of characters in the annotated entity"
      },
      "longest_only": {
        "default": false,
        "type": "boolean",
        "description": "Should only the longest entity be returned for an overlapping group"
      },
      "include_abbreviation": {
        "default": false,
        "type": "boolean",
        "description": "Should abbreviations be included"
      },
      "include_acronym": {
        "default": false,
        "type": "boolean",
        "description": "Should acronyms be included"
      },
      "include_numbers": {
        "default": false,
        "type": "boolean",
        "description": "Should numbers be included"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "/api/nlp/annotate/{?content,include_category,exclude_category,min_length,longest_only,include_abbreviation,include_acronym,include_numbers}"
    }
  },
  "responses": {}
}
