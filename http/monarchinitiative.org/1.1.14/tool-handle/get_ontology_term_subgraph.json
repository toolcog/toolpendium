{
  "name": "get_ontology_term_subgraph",
  "description": "Extract a subgraph from an ontology term",
  "parameters": {
    "type": "object",
    "properties": {
      "cnode": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Additional classes"
      },
      "include_ancestors": {
        "default": true,
        "type": "boolean",
        "description": "Include Ancestors"
      },
      "include_descendants": {
        "type": "boolean",
        "description": "Include Descendants"
      },
      "relation": {
        "default": [
          "subClassOf",
          "BFO:0000050"
        ],
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Additional classes"
      },
      "include_meta": {
        "default": false,
        "type": "boolean",
        "description": "Include metadata in response"
      },
      "id": {
        "type": "string",
        "description": "CURIE identifier of a GO term, e.g. GO:0007275"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/ontology/term/{id}/subgraph{?cnode,include_ancestors,include_descendants,relation,include_meta}"
    }
  },
  "responses": {}
}
