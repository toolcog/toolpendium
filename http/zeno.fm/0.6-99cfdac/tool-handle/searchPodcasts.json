{
  "name": "searchPodcasts",
  "description": "Search podcasts",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/PodcastSearchParams"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "PodcastSearchParams": {
        "description": "Podcast search params",
        "properties": {
          "filters": {
            "$ref": "#/$defs/PodcastFilters"
          },
          "hitsPerPage": {
            "default": 10,
            "format": "int32",
            "maximum": 1000,
            "minimum": 1,
            "type": "integer"
          },
          "page": {
            "default": 1,
            "format": "int32",
            "minimum": 1,
            "type": "integer"
          },
          "query": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "PodcastFilters": {
        "description": "Filters for podcast search",
        "properties": {
          "category": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "uniqueItems": true
          },
          "country": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "uniqueItems": true
          },
          "language": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "uniqueItems": true
          },
          "podcastType": {
            "enum": [
              "podcasts",
              "shows"
            ],
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.zeno.fm/api/v2/podcasts/search"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Podcast search results",
        "**Key properties:**",
        {
          "$ul": [
            "**hits**",
            "**total**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
