{
  "name": "doSigmaRsvExchange",
  "description": "Builds ErgoPayRequest for SigRSV exchange",
  "parameters": {
    "type": "object",
    "properties": {
      "amount": {
        "format": "int64",
        "type": "integer"
      },
      "address": {
        "type": "string"
      },
      "checkRate": {
        "default": 0,
        "format": "int64",
        "type": "integer"
      },
      "executionFee": {
        "default": 0,
        "format": "int64",
        "type": "integer"
      }
    },
    "required": [
      "amount",
      "address"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.tokenjay.app//sigrsv/exchange/{?amount,address,checkRate,executionFee}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**address**",
            "**addresses**",
            "**message**",
            "**messageSeverity**",
            "**reducedTx**",
            "**reducedTxList**",
            "**replyTo**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "401": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "404": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "409": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
