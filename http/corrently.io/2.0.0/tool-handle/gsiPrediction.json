{
  "name": "gsiPrediction",
  "description": "Retrieval the GreenPowerIndex (Gr√ºnstromIndex) for a given city (by zipcode) in Germany.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "zip": {
        "type": "string",
        "description": "Zipcode (Postleitzahl) of a city in Germany."
      },
      "key": {
        "type": "string",
        "description": "Any valid Stromkonto account (address)."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.corrently.io/v2.0/gsi/prediction{?zip,key}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**forecast**: Prediction for the upcomming hours",
            [
              "**location**: Standarized location info sourced for prediction",
              {
                "$ul": [
                  "**city**: Pretty Print city name",
                  "**zip**: Zipcode (Postleitzahl)"
                ]
              }
            ],
            [
              "**matrix**: Device switching recommendation.",
              {
                "$ul": [
                  [
                    "**h0**: Indicates number of hours a device should run",
                    {
                      "$ul": [
                        "**avg_1**: device should run in 1 hour",
                        "**avg_2**: device should run in 2 hours",
                        "**avg_3**: device should run in 3 hour"
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
