{
  "name": "get_statistics_collection",
  "description": "Returns overall stagtistics",
  "parameters": {
    "type": "object",
    "properties": {
      "page": {
        "type": "string",
        "description": "Search page to request"
      },
      "limit": {
        "default": 50,
        "type": "integer",
        "description": "Results per page"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/v1/info/stat/{?page,limit}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**next_page**: Next page id",
            "**time**: Time took",
            "**total**: Total days reported",
            "**statistics**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
