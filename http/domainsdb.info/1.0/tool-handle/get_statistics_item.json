{
  "name": "get_statistics_item",
  "description": "Returns statistics for specific zone",
  "parameters": {
    "type": "object",
    "properties": {
      "page": {
        "type": "string",
        "description": "Search page to request"
      },
      "limit": {
        "default": 50,
        "type": "integer",
        "description": "Results per page"
      },
      "zone": {
        "type": "string"
      }
    },
    "required": [
      "zone"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/v1/info/stat/{zone}{?page,limit}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**next_page**: Next page id",
            "**time**: Time took",
            "**total**: Total days reported",
            "**statistics**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
