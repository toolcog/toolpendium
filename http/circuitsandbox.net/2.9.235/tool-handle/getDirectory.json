{
  "name": "getDirectory",
  "description": "Get the directory by a search query in ordered way\nOauthScopes: READ_SPACE",
  "parameters": {
    "type": "object",
    "properties": {
      "sortBy": {
        "default": "LAST_CONTENT",
        "enum": [
          "LAST_CONTENT",
          "NAME",
          "NUMBER_OF_USERS",
          "CREATION_DATE"
        ],
        "maxLength": 2048,
        "type": "string",
        "description": "sort the spaces by LAST_CONTENT, NAME, NUMBER_OF_USERS or CREATION_DATE"
      },
      "sortOrder": {
        "default": "ASCENDING",
        "enum": [
          "ASCENDING",
          "DESCENDING"
        ],
        "maxLength": 2048,
        "type": "string",
        "description": "ascending or descending"
      },
      "filter": {
        "default": "NONE",
        "enum": [
          "NONE",
          "JOINED",
          "REQUESTED",
          "OPEN",
          "CLOSED",
          "NOT_JOINED_REQUESTED"
        ],
        "maxLength": 2048,
        "type": "string",
        "description": "filter for spaces (JOINED, REQUESTED, OPEN, CLOSED or NOT_JOINED_REQUESTED)"
      },
      "query": {
        "maxLength": 2048,
        "type": "string",
        "description": "some sort of query"
      },
      "pagePointer": {
        "maxLength": 2048,
        "type": "string",
        "description": "page pointer, start with nothing and for next query use returned pointer"
      },
      "numberOfResults": {
        "default": 25,
        "format": "int32",
        "maximum": 255,
        "minimum": 0,
        "type": "number",
        "description": "number of results to return, 25 by default."
      }
    },
    "required": [
      "sortBy",
      "sortOrder",
      "filter"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://circuitsandbox.net/rest/v2/spaces/directory{?sortBy,sortOrder,filter,query,pagePointer,numberOfResults}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**hasMore**: are more results available, than start another search",
            "**searchPointer**: pointer for stored search ",
            "**spaces**: list of spaces"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
