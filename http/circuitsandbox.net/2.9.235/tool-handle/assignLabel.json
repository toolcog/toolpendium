{
  "name": "assignLabel",
  "description": "Adds a label to a conversation, you can search and organize your conversations based on these labels\nOauthScopes: WRITE_CONVERSATIONS, ORGANIZE_CONVERSATIONS",
  "parameters": {
    "type": "object",
    "properties": {
      "convId": {
        "maxLength": 2048,
        "type": "string",
        "description": "The ID of the conversation to which the label is added"
      },
      "body": {
        "properties": {
          "label": {
            "description": "The actual label ",
            "maxLength": 2048,
            "type": "string"
          }
        },
        "required": [
          "label"
        ],
        "type": "object"
      }
    },
    "required": [
      "convId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://circuitsandbox.net/rest/v2/conversations/{convId}/label"
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**labelId**: The unique ID of the label",
            "**value**: The clear text value"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
