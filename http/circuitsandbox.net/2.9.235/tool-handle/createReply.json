{
  "name": "createReply",
  "description": "creates a reply to a topic\nOauthScopes: WRITE_SPACE",
  "parameters": {
    "type": "object",
    "properties": {
      "spaceId": {
        "maxLength": 2048,
        "type": "string",
        "description": "ID of the space"
      },
      "topicId": {
        "maxLength": 2048,
        "type": "string",
        "description": "ID of the topic"
      },
      "body": {
        "properties": {
          "attachments": {
            "description": "the attached files",
            "items": {
              "maxLength": 16000,
              "type": "string"
            },
            "type": "array"
          },
          "complex": {
            "description": "complex or not",
            "type": "boolean"
          },
          "content": {
            "description": "Content of the reply",
            "maxLength": 200000,
            "type": "string"
          },
          "formMetaData": {
            "description": "formMetaData used in the reply",
            "maxLength": 2048,
            "type": "string"
          },
          "mentionedUser": {
            "description": "the user mentioned in the reply",
            "maxLength": 2048,
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "spaceId",
      "topicId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://circuitsandbox.net/rest/v2/spaces/{spaceId}/topic/{topicId}/reply"
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**parentTopicId**: The Id of the parent topic",
            [
              "**spaceItem**",
              {
                "$ul": [
                  "**Status**: The Status of this item",
                  "**attachments**: The list of attachments",
                  "**complex**: Is this item complex",
                  "**content**: The content of this item",
                  "**creationTime**: The time this item got created",
                  "**creatorId**: The Id of the creator",
                  "**deletedBy**: Incase this item got deleted, the id of the deletor",
                  "**externalAttachments**: A list of external attachments",
                  "**formMetaData**: Incase there is FormMetaData",
                  "**itemId**: the Id of this item",
                  "**mentionedUsers**: A list of userIds who have been mentioned in this item",
                  "**modificationTime**: the time this item got modified",
                  "**numberOfLikes**: The number of likes",
                  "**previews**: A list of previews",
                  "**sharedItems**: missing documentation",
                  "**spaceId**: the Id of the space containing this item",
                  "**tenantId**: the Id of the tenant"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
