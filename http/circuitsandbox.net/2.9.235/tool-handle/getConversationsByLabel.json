{
  "name": "getConversationsByLabel",
  "description": "Returns conversations with matching labels and paginated \nOauthScopes: READ_CONVERSATIONS",
  "parameters": {
    "type": "object",
    "properties": {
      "labelId": {
        "maxLength": 2048,
        "type": "string",
        "description": "Id of the label to look for"
      },
      "nextPagePointer": {
        "maxLength": 2048,
        "type": "string",
        "description": "Pointer to the next page of conversations if there are any"
      },
      "pageSize": {
        "default": 25,
        "format": "int32",
        "maximum": 100,
        "minimum": 1,
        "type": "number",
        "description": "Numbers of max conversations per page"
      }
    },
    "required": [
      "labelId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://circuitsandbox.net/rest/v2/conversations/label/{labelId}{?nextPagePointer,pageSize}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**conversationList**: List of conversations",
            "**hasMore**: Has more pages of conversations",
            "**nextPagePointer**: Pointer to the next set page of conversations"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
