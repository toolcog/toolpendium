{
  "name": "getSpaceReplies",
  "description": "Gets a number of Space replies\nOauthScopes: READ_SPACE",
  "parameters": {
    "type": "object",
    "properties": {
      "spaceId": {
        "maxLength": 2048,
        "type": "string",
        "description": "Id of the containing space"
      },
      "topicId": {
        "maxLength": 2048,
        "type": "string",
        "description": "Id of the topic"
      },
      "searchDirection": {
        "default": "BEFORE",
        "enum": [
          "BEFORE",
          "AFTER"
        ],
        "maxLength": 2048,
        "type": "string",
        "description": "Search before or after a certain timestamp"
      },
      "timestamp": {
        "format": "date-time",
        "type": "string",
        "description": "Timestamp to start the search from"
      },
      "numberOfResults": {
        "default": 25,
        "format": "int32",
        "maximum": 255,
        "minimum": 0,
        "type": "number",
        "description": "The number of results that should be returned"
      }
    },
    "required": [
      "spaceId",
      "topicId",
      "searchDirection"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://circuitsandbox.net/rest/v2/spaces/{spaceId}/topic/{topicId}/reply{?searchDirection,timestamp,numberOfResults}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**parentTopicId**: The Id of the parent topic",
            [
              "**spaceItem**",
              {
                "$ul": [
                  "**Status**: The Status of this item",
                  "**attachments**: The list of attachments",
                  "**complex**: Is this item complex",
                  "**content**: The content of this item",
                  "**creationTime**: The time this item got created",
                  "**creatorId**: The Id of the creator",
                  "**deletedBy**: Incase this item got deleted, the id of the deletor",
                  "**externalAttachments**: A list of external attachments",
                  "**formMetaData**: Incase there is FormMetaData",
                  "**itemId**: the Id of this item",
                  "**mentionedUsers**: A list of userIds who have been mentioned in this item",
                  "**modificationTime**: the time this item got modified",
                  "**numberOfLikes**: The number of likes",
                  "**previews**: A list of previews",
                  "**sharedItems**: missing documentation",
                  "**spaceId**: the Id of the space containing this item",
                  "**tenantId**: the Id of the tenant"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
