{
  "name": "dmConversationByIdEventIdCreate",
  "description": "Creates a new message for a DM Conversation specified by DM Conversation ID",
  "parameters": {
    "type": "object",
    "properties": {
      "dm_conversation_id": {
        "type": "string",
        "description": "The DM Conversation ID."
      },
      "body": {
        "$ref": "#/$defs/CreateMessageRequest"
      }
    },
    "required": [
      "dm_conversation_id"
    ],
    "$defs": {
      "CreateMessageRequest": {
        "anyOf": [
          {
            "$ref": "#/$defs/CreateTextMessageRequest"
          },
          {
            "$ref": "#/$defs/CreateAttachmentsMessageRequest"
          }
        ]
      },
      "CreateTextMessageRequest": {
        "properties": {
          "attachments": {
            "$ref": "#/$defs/DmAttachments"
          },
          "text": {
            "description": "Text of the message.",
            "minLength": 1,
            "type": "string"
          }
        },
        "required": [
          "text"
        ],
        "type": "object"
      },
      "DmAttachments": {
        "description": "Attachments to a DM Event.",
        "items": {
          "$ref": "#/$defs/DmMediaAttachment"
        },
        "type": "array"
      },
      "DmMediaAttachment": {
        "properties": {
          "media_id": {
            "$ref": "#/$defs/MediaId"
          }
        },
        "required": [
          "media_id"
        ],
        "type": "object"
      },
      "MediaId": {
        "description": "The unique identifier of this Media.",
        "example": "1146654567674912769",
        "pattern": "^[0-9]{1,19}$",
        "type": "string"
      },
      "CreateAttachmentsMessageRequest": {
        "properties": {
          "attachments": {
            "$ref": "#/$defs/DmAttachments"
          },
          "text": {
            "description": "Text of the message.",
            "minLength": 1,
            "type": "string"
          }
        },
        "required": [
          "attachments"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.twitter.com/2/dm_conversations/{dm_conversation_id}/messages"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**dm_conversation_id**: Unique identifier of a DM conversation. This can either be a numeric string, or a pair of numeric strings separated by a '-' character in the case of one-on-one DM Conversations.",
                  "**dm_event_id**: Unique identifier of a DM Event."
                ]
              }
            ],
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
