{
  "name": "usersIdFollow",
  "description": "Causes the User(in the path) to follow, or “request to follow” for protected Users, the target User. The User(in the path) must match the User context authorizing the request",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "#/components/schemas/UserIdMatchesAuthenticatedUser",
        "description": "The ID of the authenticated source User that is requesting to follow the target User."
      },
      "body": {
        "$ref": "#/$defs/UsersFollowingCreateRequest"
      }
    },
    "required": [
      "id"
    ],
    "$defs": {
      "UsersFollowingCreateRequest": {
        "properties": {
          "target_user_id": {
            "$ref": "#/$defs/UserId"
          }
        },
        "required": [
          "target_user_id"
        ],
        "type": "object"
      },
      "UserId": {
        "description": "Unique identifier of this User. This is returned as a string in order to avoid complications with languages and tools that cannot handle large integers.",
        "example": "2244994945",
        "pattern": "^[0-9]{1,19}$",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.twitter.com/2/users/{id}/following"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**following**",
                  "**pending_follow**"
                ]
              }
            ],
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
