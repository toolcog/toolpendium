{
  "name": "getRules",
  "description": "Returns rules from a User's active rule set. Users can fetch all of their rules or a subset, specified by the provided rule ids.",
  "parameters": {
    "type": "object",
    "properties": {
      "ids": {
        "items": {
          "$ref": "#/$defs/RuleId"
        },
        "type": "array",
        "description": "A comma-separated list of Rule IDs."
      },
      "max_results": {
        "default": 1000,
        "format": "int32",
        "maximum": 1000,
        "minimum": 1,
        "type": "integer",
        "description": "The maximum number of results."
      },
      "pagination_token": {
        "maxLength": 16,
        "minLength": 16,
        "type": "string",
        "description": "This value is populated by passing the 'next_token' returned in a request to paginate through results."
      }
    },
    "$defs": {
      "RuleId": {
        "description": "Unique identifier of this rule.",
        "example": "120897978112909812",
        "pattern": "^[0-9]{1,19}$",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.twitter.com/2/tweets/search/stream/rules{?ids,max_results,pagination_token}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            [
              "**meta**",
              {
                "$ul": [
                  "**next_token**: The next token.",
                  "**result_count**: Number of Rules in result set.",
                  "**sent**",
                  "**summary**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
