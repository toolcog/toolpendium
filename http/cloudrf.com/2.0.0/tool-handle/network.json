{
  "name": "network",
  "description": "Query your network to find the best server(s) for a given receiver/customer location. A previously generated network is required.",
  "parameters": {
    "type": "object",
    "properties": {
      "net": {
        "type": "string",
        "description": "Network name"
      },
      "nam": {
        "type": "string",
        "description": "Super layer name"
      },
      "lat": {
        "format": "float",
        "type": "number",
        "description": "Latitude in decimal degrees"
      },
      "lon": {
        "format": "float",
        "type": "number",
        "description": "Longitude in decimal degrees"
      },
      "alt": {
        "format": "int32",
        "type": "integer",
        "description": "Height above ground level in metres"
      },
      "rxg": {
        "format": "float",
        "type": "number",
        "description": "Receiver gain in dBi"
      }
    },
    "required": [
      "net",
      "nam",
      "lat",
      "lon",
      "alt"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.cloudrf.com/network{?net,nam,lat,lon,alt,rxg}"
    }
  },
  "responses": {}
}
