{
  "name": "get-inventory",
  "description": "Retrieve inventory for one or more items. This API requires elevated permissions, please speak to your success manager.",
  "parameters": {
    "type": "object",
    "properties": {
      "page": {
        "default": 1,
        "minimum": 1,
        "type": "integer",
        "description": "A multiplier of the number of items (limit parameter) to skip before returning results"
      },
      "limit": {
        "default": 80,
        "maximum": 200,
        "minimum": 1,
        "type": "integer",
        "description": "The numbers of items to return"
      },
      "merchantIds": {
        "items": {
          "type": "integer"
        },
        "type": "array",
        "description": "A CSV of merchant id, '123' or '1,2,3'"
      },
      "warehouseIds": {
        "items": {
          "type": "integer"
        },
        "type": "array",
        "description": "A CSV of warehouse id, '123' or '1,2,3'"
      },
      "externalSkuNames": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "A CSV of sku reference names, 'skuName1' or 'skuName1,skuName2,skuName3'"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.fulfillment.com/v2/inventory{?page,limit,merchantIds,warehouseIds,externalSkuNames}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "ItemInventoryArray.v2"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            [
              "**meta**",
              {
                "$ul": [
                  [
                    "**pagination**",
                    {
                      "$ul": [
                        "**count**: Count of records returned in response, this will be equal to or less then the limit parameter",
                        "**currentPage**: Current page of the response, this will match the page parameter",
                        "**total**: Total number of records available to request",
                        "**totalPages**: Total number of pages available to request"
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "ErrorStandard.v2"
        },
