{
  "name": "Forum_GetPostsThreadedPaged",
  "description": "Returns a thread of posts at the given parent, optionally returning replies to those posts as well as the original parent.",
  "parameters": {
    "type": "object",
    "properties": {
      "getParentPost": {
        "type": "boolean",
        "description": ""
      },
      "page": {
        "format": "int32",
        "type": "integer",
        "description": ""
      },
      "pageSize": {
        "format": "int32",
        "type": "integer",
        "description": ""
      },
      "parentPostId": {
        "format": "int64",
        "type": "integer",
        "description": ""
      },
      "replySize": {
        "format": "int32",
        "type": "integer",
        "description": ""
      },
      "rootThreadMode": {
        "type": "boolean",
        "description": ""
      },
      "showbanned": {
        "type": "string",
        "description": "If this value is not null or empty, banned posts are requested to be returned"
      },
      "sortMode": {
        "format": "int32",
        "type": "integer",
        "description": ""
      }
    },
    "required": [
      "getParentPost",
      "page",
      "pageSize",
      "parentPostId",
      "replySize",
      "rootThreadMode",
      "sortMode"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.bungie.net/Platform/Forum/GetPostsThreadedPaged/{parentPostId}/{page}/{pageSize}/{replySize}/{getParentPost}/{rootThreadMode}/{sortMode}/{?showbanned}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            [
              "**Response**",
              {
                "$ul": [
                  "**authors**",
                  "**availablePages**",
                  "**groups**",
                  "**hasMore**",
                  "**polls**",
                  [
                    "**query**",
                    {
                      "$ul": [
                        "**currentPage**",
                        "**itemsPerPage**",
                        "**requestContinuationToken**"
                      ]
                    }
                  ],
                  "**recruitmentDetails**",
                  "**relatedPosts**",
                  "**replacementContinuationToken**",
                  "**results**",
                  "**searchedTags**",
                  "**totalResults**",
                  "**useTotalResults**: If useTotalResults is true, then totalResults represents an accurate count.\r"
                ]
              }
            ],
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
