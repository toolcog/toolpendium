{
  "name": "Forum_GetPoll",
  "description": "Gets the specified forum poll.",
  "parameters": {
    "type": "object",
    "properties": {
      "topicId": {
        "format": "int64",
        "type": "integer",
        "description": "The post id of the topic that has the poll."
      }
    },
    "required": [
      "topicId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.bungie.net/Platform/Forum/Poll/{topicId}/"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            [
              "**Response**",
              {
                "$ul": [
                  "**authors**",
                  "**availablePages**",
                  "**groups**",
                  "**hasMore**",
                  "**polls**",
                  [
                    "**query**",
                    {
                      "$ul": [
                        "**currentPage**",
                        "**itemsPerPage**",
                        "**requestContinuationToken**"
                      ]
                    }
                  ],
                  "**recruitmentDetails**",
                  "**relatedPosts**",
                  "**replacementContinuationToken**",
                  "**results**",
                  "**searchedTags**",
                  "**totalResults**",
                  "**useTotalResults**: If useTotalResults is true, then totalResults represents an accurate count.\r"
                ]
              }
            ],
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
