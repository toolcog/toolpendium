{
  "name": "GroupV2_ApprovePending",
  "description": "Approve the given membershipId to join the group/clan as long as they have applied.",
  "parameters": {
    "type": "object",
    "properties": {
      "groupId": {
        "format": "int64",
        "type": "integer",
        "description": "ID of the group."
      },
      "membershipId": {
        "format": "int64",
        "type": "integer",
        "description": "The membership id being approved."
      },
      "membershipType": {
        "format": "int32",
        "type": "integer",
        "description": "Membership type of the supplied membership ID."
      }
    },
    "required": [
      "groupId",
      "membershipId",
      "membershipType"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://www.bungie.net/Platform/GroupV2/{groupId}/Members/Approve/{membershipType}/{membershipId}/"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            "**Response**",
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
