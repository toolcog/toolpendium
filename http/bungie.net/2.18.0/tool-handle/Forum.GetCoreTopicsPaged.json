{
  "name": "Forum_GetCoreTopicsPaged",
  "description": "Gets a listing of all topics marked as part of the core group.",
  "parameters": {
    "type": "object",
    "properties": {
      "categoryFilter": {
        "format": "int32",
        "type": "integer",
        "description": "The category filter."
      },
      "locales": {
        "type": "string",
        "description": "Comma seperated list of locales posts must match to return in the result list. Default 'en'"
      },
      "page": {
        "format": "int32",
        "type": "integer",
        "description": "Zero base page"
      },
      "quickDate": {
        "format": "int32",
        "type": "integer",
        "description": "The date filter."
      },
      "sort": {
        "format": "uint8",
        "type": "integer",
        "description": "The sort mode."
      }
    },
    "required": [
      "categoryFilter",
      "page",
      "quickDate",
      "sort"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.bungie.net/Platform/Forum/GetCoreTopicsPaged/{page}/{sort}/{quickDate}/{categoryFilter}/{?locales}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            [
              "**Response**",
              {
                "$ul": [
                  "**authors**",
                  "**availablePages**",
                  "**groups**",
                  "**hasMore**",
                  "**polls**",
                  [
                    "**query**",
                    {
                      "$ul": [
                        "**currentPage**",
                        "**itemsPerPage**",
                        "**requestContinuationToken**"
                      ]
                    }
                  ],
                  "**recruitmentDetails**",
                  "**relatedPosts**",
                  "**replacementContinuationToken**",
                  "**results**",
                  "**searchedTags**",
                  "**totalResults**",
                  "**useTotalResults**: If useTotalResults is true, then totalResults represents an accurate count.\r"
                ]
              }
            ],
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
