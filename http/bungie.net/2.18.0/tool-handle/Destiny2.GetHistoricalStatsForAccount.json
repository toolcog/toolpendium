{
  "name": "Destiny2_GetHistoricalStatsForAccount",
  "description": "Gets aggregate historical stats organized around each character for a given account.",
  "parameters": {
    "type": "object",
    "properties": {
      "destinyMembershipId": {
        "format": "int64",
        "type": "integer",
        "description": "The Destiny membershipId of the user to retrieve."
      },
      "groups": {
        "items": {
          "description": "If the enum value is > 100, it is a \"special\" group that cannot be queried for directly (special cases apply to when they are returned, and are not relevant in general cases)",
          "format": "int32",
          "type": "integer",
          "x-enum-reference": {
            "$ref": "#/components/schemas/schema3"
          }
        },
        "type": "array",
        "description": "Groups of stats to include, otherwise only general stats are returned. Comma separated list is allowed. Values: General, Weapons, Medals."
      },
      "membershipType": {
        "format": "int32",
        "type": "integer",
        "description": "A valid non-BungieNet membership type."
      }
    },
    "required": [
      "destinyMembershipId",
      "membershipType"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.bungie.net/Platform/Destiny2/{membershipType}/Account/{destinyMembershipId}/Stats/{?groups}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            [
              "**Response**",
              {
                "$ul": [
                  "**characters**",
                  [
                    "**mergedAllCharacters**",
                    {
                      "$ul": [
                        [
                          "**merged**",
                          {
                            "$ul": [
                              "**allTime**",
                              "**allTimeTier1**",
                              "**allTimeTier2**",
                              "**allTimeTier3**",
                              "**daily**",
                              "**monthly**"
                            ]
                          }
                        ],
                        "**results**"
                      ]
                    }
                  ],
                  [
                    "**mergedDeletedCharacters**",
                    {
                      "$ul": [
                        [
                          "**merged**",
                          {
                            "$ul": [
                              "**allTime**",
                              "**allTimeTier1**",
                              "**allTimeTier2**",
                              "**allTimeTier3**",
                              "**daily**",
                              "**monthly**"
                            ]
                          }
                        ],
                        "**results**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
