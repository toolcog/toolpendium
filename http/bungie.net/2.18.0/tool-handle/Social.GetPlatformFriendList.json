{
  "name": "Social_GetPlatformFriendList",
  "description": "Gets the platform friend of the requested type, with additional information if they have Bungie accounts. Must have a recent login session with said platform.",
  "parameters": {
    "type": "object",
    "properties": {
      "friendPlatform": {
        "format": "int32",
        "type": "integer",
        "description": "The platform friend type."
      },
      "page": {
        "type": "string",
        "description": "The zero based page to return. Page size is 100."
      }
    },
    "required": [
      "friendPlatform",
      "page"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.bungie.net/Platform/Social/PlatformFriends/{friendPlatform}/{page}/"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            [
              "**Response**",
              {
                "$ul": [
                  "**currentPage**",
                  "**hasMore**",
                  "**itemsPerPage**",
                  "**platformFriends**"
                ]
              }
            ],
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
