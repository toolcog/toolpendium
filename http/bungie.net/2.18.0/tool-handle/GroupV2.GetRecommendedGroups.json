{
  "name": "GroupV2_GetRecommendedGroups",
  "description": "Gets groups recommended for you based on the groups to whom those you follow belong.",
  "parameters": {
    "type": "object",
    "properties": {
      "createDateRange": {
        "format": "int32",
        "type": "integer",
        "description": "Requested range in which to pull recommended groups"
      },
      "groupType": {
        "format": "int32",
        "type": "integer",
        "description": "Type of groups requested"
      }
    },
    "required": [
      "createDateRange",
      "groupType"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://www.bungie.net/Platform/GroupV2/Recommended/{groupType}/{createDateRange}/"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            "**Response**",
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
