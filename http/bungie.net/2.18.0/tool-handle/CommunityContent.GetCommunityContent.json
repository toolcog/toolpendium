{
  "name": "CommunityContent_GetCommunityContent",
  "description": "Returns community content.",
  "parameters": {
    "type": "object",
    "properties": {
      "mediaFilter": {
        "format": "int32",
        "type": "integer",
        "description": "The type of media to get"
      },
      "page": {
        "format": "int32",
        "type": "integer",
        "description": "Zero based page"
      },
      "sort": {
        "format": "uint8",
        "type": "integer",
        "description": "The sort mode."
      }
    },
    "required": [
      "mediaFilter",
      "page",
      "sort"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.bungie.net/Platform/CommunityContent/Get/{sort}/{mediaFilter}/{page}/"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            [
              "**Response**",
              {
                "$ul": [
                  "**authors**",
                  "**availablePages**",
                  "**groups**",
                  "**hasMore**",
                  "**polls**",
                  [
                    "**query**",
                    {
                      "$ul": [
                        "**currentPage**",
                        "**itemsPerPage**",
                        "**requestContinuationToken**"
                      ]
                    }
                  ],
                  "**recruitmentDetails**",
                  "**relatedPosts**",
                  "**replacementContinuationToken**",
                  "**results**",
                  "**searchedTags**",
                  "**totalResults**",
                  "**useTotalResults**: If useTotalResults is true, then totalResults represents an accurate count.\r"
                ]
              }
            ],
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
