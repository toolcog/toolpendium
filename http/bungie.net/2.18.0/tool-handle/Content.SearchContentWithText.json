{
  "name": "Content_SearchContentWithText",
  "description": "Gets content based on querystring information passed in. Provides basic search and text search capabilities.",
  "parameters": {
    "type": "object",
    "properties": {
      "ctype": {
        "type": "string",
        "description": "Content type tag: Help, News, etc. Supply multiple ctypes separated by space."
      },
      "currentpage": {
        "format": "int32",
        "type": "integer",
        "description": "Page number for the search results, starting with page 1."
      },
      "head": {
        "type": "boolean",
        "description": "Not used."
      },
      "locale": {
        "type": "string",
        "description": ""
      },
      "searchtext": {
        "type": "string",
        "description": "Word or phrase for the search."
      },
      "source": {
        "type": "string",
        "description": "For analytics, hint at the part of the app that triggered the search. Optional."
      },
      "tag": {
        "type": "string",
        "description": "Tag used on the content to be searched."
      }
    },
    "required": [
      "locale"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.bungie.net/Platform/Content/Search/{locale}/{?ctype,currentpage,head,searchtext,source,tag}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            [
              "**Response**",
              {
                "$ul": [
                  "**hasMore**",
                  [
                    "**query**",
                    {
                      "$ul": [
                        "**currentPage**",
                        "**itemsPerPage**",
                        "**requestContinuationToken**"
                      ]
                    }
                  ],
                  "**replacementContinuationToken**",
                  "**results**",
                  "**totalResults**",
                  "**useTotalResults**: If useTotalResults is true, then totalResults represents an accurate count.\r"
                ]
              }
            ],
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
