{
  "name": "_GetGlobalAlerts",
  "description": "Gets any active global alert for display in the forum banners, help pages, etc. Usually used for DOC alerts.",
  "parameters": {
    "type": "object",
    "properties": {
      "includestreaming": {
        "type": "boolean",
        "description": "Determines whether Streaming Alerts are included in results"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.bungie.net/Platform/GlobalAlerts/{?includestreaming}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            "**Response**",
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
