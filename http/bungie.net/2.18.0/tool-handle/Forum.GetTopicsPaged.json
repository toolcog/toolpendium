{
  "name": "Forum_GetTopicsPaged",
  "description": "Get topics from any forum.",
  "parameters": {
    "type": "object",
    "properties": {
      "categoryFilter": {
        "format": "int32",
        "type": "integer",
        "description": "A category filter"
      },
      "group": {
        "format": "int64",
        "type": "integer",
        "description": "The group, if any."
      },
      "locales": {
        "type": "string",
        "description": "Comma seperated list of locales posts must match to return in the result list. Default 'en'"
      },
      "page": {
        "format": "int32",
        "type": "integer",
        "description": "Zero paged page number"
      },
      "pageSize": {
        "format": "int32",
        "type": "integer",
        "description": "Unused"
      },
      "quickDate": {
        "format": "int32",
        "type": "integer",
        "description": "A date filter."
      },
      "sort": {
        "format": "uint8",
        "type": "integer",
        "description": "The sort mode."
      },
      "tagstring": {
        "type": "string",
        "description": "The tags to search, if any."
      }
    },
    "required": [
      "categoryFilter",
      "group",
      "page",
      "pageSize",
      "quickDate",
      "sort"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.bungie.net/Platform/Forum/GetTopicsPaged/{page}/{pageSize}/{group}/{sort}/{quickDate}/{categoryFilter}/{?locales,tagstring}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DetailedErrorTrace**",
            "**ErrorCode**",
            "**ErrorStatus**",
            "**Message**",
            "**MessageData**",
            [
              "**Response**",
              {
                "$ul": [
                  "**authors**",
                  "**availablePages**",
                  "**groups**",
                  "**hasMore**",
                  "**polls**",
                  [
                    "**query**",
                    {
                      "$ul": [
                        "**currentPage**",
                        "**itemsPerPage**",
                        "**requestContinuationToken**"
                      ]
                    }
                  ],
                  "**recruitmentDetails**",
                  "**relatedPosts**",
                  "**replacementContinuationToken**",
                  "**results**",
                  "**searchedTags**",
                  "**totalResults**",
                  "**useTotalResults**: If useTotalResults is true, then totalResults represents an accurate count.\r"
                ]
              }
            ],
            "**ThrottleSeconds**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
