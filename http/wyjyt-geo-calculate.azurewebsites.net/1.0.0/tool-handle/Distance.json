{
  "name": "Distance",
  "description": "Calculate the distance between two geo coordinates.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/geoDistanceRequest"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "geoDistanceRequest": {
        "example": "{\"coordinate1\":\"39.801769 -86.157769\",\"coordinate2\":\"38.801769 -85.157769\",\"useEllipse\":false}",
        "properties": {
          "coordinate1": {
            "description": "Geo Coordinate 1 to calculate from.\r\n  Standards are (latlon | utm | mgrs | ecef | epsg3857 | georef | cartesian)",
            "type": "string"
          },
          "coordinate2": {
            "description": "Geo Coordinate 2 to calculate to.\r\n  Standards are (latlon | utm | mgrs | ecef | epsg3857 | georef | cartesian)",
            "type": "string"
          },
          "useEllipse": {
            "description": "Flag to use ellipsoid calculation.\r\n  Default is false, spherical.",
            "type": "boolean"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://wyjyt-geo-calculate.azurewebsites.net/api/Distance"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**bearing**: Bearing direction between the two coordinates in degrees.",
            "**meters**: Distance between the two coordinates in meters."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**reason**: Error message.",
            "**success**: Success or fail."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "500": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
