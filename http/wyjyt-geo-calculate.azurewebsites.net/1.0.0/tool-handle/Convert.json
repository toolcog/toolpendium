{
  "name": "Convert",
  "description": "Convert the list of geo coordinates to a standard format - (latlon | utm | mgrs | ecef | epsg3857 | georef | cartesian)",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/geoConvertRequest"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "geoConvertRequest": {
        "example": "{\"coordinates\":\"39.801769 -86.157769\",\"system\":\"latlon\",\"format\":\"seconds\"}",
        "properties": {
          "coordinates": {
            "description": "Comma-separated list of Geo Coordinates to convert. See accepted Systems below.",
            "type": "string"
          },
          "format": {
            "description": "Output format:\r\n(decimal, degree, minutes, seconds.)\r\nDefault is decimal.",
            "type": "string"
          },
          "system": {
            "description": "Output standard coordinate system:\r\n(latlon | utm | mgrs | ecef | epsg3857 | georef | cartesian).  \r\nDefault is latlon.",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://wyjyt-geo-calculate.azurewebsites.net/api/Convert"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**coordinates**: Comma-separated list of formatted Geo Coordinates."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**reason**: Error message.",
            "**success**: Success or fail."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "500": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
