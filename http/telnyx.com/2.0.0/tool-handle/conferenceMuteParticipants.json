{
  "name": "conferenceMuteParticipants",
  "description": "Mute a list of participants in a conference call",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Uniquely identifies the conference by id or name"
      },
      "body": {
        "$ref": "#/$defs/ConferenceMuteRequest"
      }
    },
    "required": [
      "id",
      "body"
    ],
    "$defs": {
      "ConferenceMuteRequest": {
        "example": {
          "call_control_ids": [
            "v2:T02llQxIyaRkhfRKxgAP8nY511EhFLizdvdUKJiSw8d6A9BborherQ"
          ]
        },
        "properties": {
          "call_control_ids": {
            "description": "Array of unique identifiers and tokens for controlling the call. When empty all participants will be muted.",
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "title": "Conference Mute Request",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.telnyx.com/v2/conferences/{id}/actions/mute"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Conference Command Response"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**result**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
