{
  "name": "conferenceStopAudio",
  "description": "Stop audio being played to all or some participants on a conference call.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Uniquely identifies the conference by id or name"
      },
      "body": {
        "$ref": "#/$defs/ConferenceStopRequest"
      }
    },
    "required": [
      "id",
      "body"
    ],
    "$defs": {
      "ConferenceStopRequest": {
        "properties": {
          "call_control_ids": {
            "description": "List of call control ids identifying participants the audio file should stop be played to. If not given, the audio will be stoped to the entire conference.",
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "title": "Conference Stop Request",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.telnyx.com/v2/conferences/{id}/actions/stop"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Conference Command Response"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**result**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
