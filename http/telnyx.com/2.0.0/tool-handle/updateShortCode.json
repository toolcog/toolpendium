{
  "name": "updateShortCode",
  "description": "Update the settings for a specific short code. To unbind a short code from a profile, set the `messaging_profile_id` to `null` or an empty string.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "uuid",
        "type": "string",
        "description": "The id of the short code"
      },
      "body": {
        "$ref": "#/components/schemas/UpdateShortCodeRequest",
        "description": "Short code update"
      }
    },
    "required": [
      "id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://api.telnyx.com/v2/short_codes/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Short Code Response"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**country_code**: ISO 3166-1 alpha-2 country code.",
                  "**created_at**: ISO 8601 formatted date indicating when the resource was created.",
                  "**id**: Identifies the type of resource.",
                  "**messaging_profile_id**: Unique identifier for a messaging profile.",
                  "**record_type**: Identifies the type of the resource.",
                  "**short_code**: Short digit sequence used to address messages.",
                  "**updated_at**: ISO 8601 formatted date indicating when the resource was updated."
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
