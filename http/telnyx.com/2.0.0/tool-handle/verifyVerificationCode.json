{
  "name": "verifyVerificationCode",
  "description": "Submit a verification code",
  "parameters": {
    "type": "object",
    "properties": {
      "phone_number": {
        "description": "The phone number associated with the verification code being verified.",
        "example": "+13035551234",
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/VerifyVerificationCodeRequest"
      }
    },
    "required": [
      "phone_number",
      "body"
    ],
    "$defs": {
      "VerifyVerificationCodeRequest": {
        "properties": {
          "code": {
            "description": "This is the code the user submits for verification.",
            "example": "17686",
            "type": "string"
          }
        },
        "required": [
          "code"
        ],
        "title": "VerifyVerificationCodeRequest",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.telnyx.com/v2/verifications/by_phone_number/{phone_number}/actions/verify"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "VerifyVerificationCodeResponse"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**phone_number**: +E164 formatted phone number.",
                  "**response_code**: Identifies if the verification code has been accepted or rejected."
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
