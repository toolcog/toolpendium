{
  "name": "DetailRecordsSearch",
  "description": "Search for any detail record across the Telnyx Platform",
  "parameters": {
    "type": "object",
    "properties": {
      "filter[record_type]": {
        "type": "string",
        "description": "Filter by the given record type"
      },
      "filter[date_range]": {
        "type": "string",
        "description": "Filter by the given user-friendly date range"
      },
      "filter": {
        "additionalProperties": true,
        "type": "object",
        "description": "Filter records"
      },
      "page[number]": {
        "default": 1,
        "format": "int32",
        "minimum": 1,
        "type": "integer",
        "description": "Page number"
      },
      "page[size]": {
        "default": 20,
        "format": "int32",
        "maximum": 50,
        "minimum": 1,
        "type": "integer",
        "description": "Page size"
      },
      "sort": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Specifies the sort order for results"
      }
    },
    "required": [
      "filter[record_type]"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.telnyx.com/v2/detail_records{?filter[record_type],filter[date_range],filter,page[number],page[size],sort}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            [
              "**meta**",
              {
                "$ul": [
                  "**page_number**",
                  "**page_size**",
                  "**total_pages**",
                  "**total_results**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
