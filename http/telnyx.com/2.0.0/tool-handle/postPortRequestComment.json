{
  "name": "postPortRequestComment",
  "description": "Creates a comment on a portout request.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "uuid",
        "type": "string",
        "description": "Portout id"
      },
      "body": {
        "properties": {
          "body": {
            "description": "Comment to post on this portout request",
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.telnyx.com/v2/portouts/{id}/comments"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**body**: Comment body",
                  "**created_at**: Comment creation timestamp in ISO 8601 format",
                  "**id**",
                  "**portout_id**: Identifies the associated port request (default: null)",
                  "**record_type**: Identifies the type of the resource.",
                  "**user_id**: Identifies the user who created the comment. Will be null if created by Telnyx Admin"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
