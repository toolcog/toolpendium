        "example": {
          "blocking": "wait",
          "contacts": [
            "15125551000",
            "+1 512 555 1001",
            "5125551002",
            "+1 (512) 555-1004",
            "1-512-555-1005"
          ],
          "whatsapp_user_id": "15125551212"
        },
        "properties": {
