{
  "name": "updatePortoutRequest",
  "description": "Authorize or reject portout request",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "uuid",
        "type": "string",
        "description": "Portout id"
      },
      "status": {
        "enum": [
          "authorized",
          "rejected"
        ],
        "type": "string",
        "description": "Updated portout status"
      }
    },
    "required": [
      "id",
      "status"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://api.telnyx.com/v2/portouts/{id}/{status}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**carrier_name**: Carrier the number will be ported out to",
                  "**created_at**: ISO 8601 formatted date of when the portout was created",
                  "**foc_date**: ISO 8601 formatted Date/Time of the FOC date",
                  "**id**",
                  "**phone_numbers**: Phone numbers associated with this portout",
                  "**record_type**: Identifies the type of the resource.",
                  "**requested_foc_date**: ISO 8601 formatted Date/Time of the user requested FOC date",
                  "**spid**: New service provider spid",
                  "**status**: Status of portout request",
                  "**updated_at**: ISO 8601 formatted date of when the portout was last updated"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
