{
  "name": "ViewRoom",
  "description": "View a room.",
  "parameters": {
    "type": "object",
    "properties": {
      "room_id": {
        "example": "0ccc7b54-4df3-4bca-a65a-3da1ecc777f0",
        "format": "uuid",
        "type": "string",
        "description": "The unique identifier of a room."
      },
      "include_sessions": {
        "example": true,
        "type": "boolean",
        "description": "To decide if room sessions should be included in the response."
      }
    },
    "required": [
      "room_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.telnyx.com/v2/rooms/{room_id}{?include_sessions}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**active_session_id**: The identifier of the active room session if any.",
                  "**created_at**: ISO 8601 timestamp when the room was created.",
                  "**id**: Identifies the room.",
                  "**max_participants**: Maximum participants allowed in the room.",
                  "**record_type**",
                  "**sessions**",
                  "**unique_name**: The unique (within the Telnyx account scope) name of the room.",
                  "**updated_at**: ISO 8601 timestamp when the room was updated."
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**detail**",
            "**meta**",
            [
              "**source**",
              {
                "$ul": [
                  "**parameter**: Indicates which query parameter caused the error.",
                  "**pointer**: JSON pointer (RFC6901) to the offending entity."
                ]
              }
            ],
            "**title**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
