{
  "name": "SimCardOrdersPreview",
  "description": "Preview SIM card order purchases.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "properties": {
          "address_id": {
            "description": "Uniquely identifies the address for the order.",
            "example": "1293384261075731499",
            "format": "int64",
            "type": "string"
          },
          "quantity": {
            "description": "The amount of SIM cards that the user would like to purchase in the SIM card order.",
            "example": 21,
            "minimum": 1,
            "type": "integer"
          }
        },
        "required": [
          "quantity",
          "address_id"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.telnyx.com/v2/sim_card_order_preview"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "202": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**quantity**: The amount of SIM cards requested in the SIM card order.",
                  "**record_type**: Identifies the type of the resource.",
                  [
                    "**shipping_cost**",
                    {
                      "$ul": [
                        "**amount**: A string representing the cost amount.",
                        "**currency**: ISO 4217 currency string."
                      ]
                    }
                  ],
                  [
                    "**sim_cards_cost**",
                    {
                      "$ul": [
                        "**amount**: A string representing the cost amount.",
                        "**currency**: ISO 4217 currency string."
                      ]
                    }
                  ],
                  [
                    "**total_cost**",
                    {
                      "$ul": [
                        "**amount**: A string representing the cost amount.",
                        "**currency**: ISO 4217 currency string."
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "422": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
