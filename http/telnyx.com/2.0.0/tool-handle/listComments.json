{
  "name": "listComments",
  "description": "Retrieve all comments",
  "parameters": {
    "type": "object",
    "properties": {
      "filter[comment_record_type]": {
        "example": "sub_number_order",
        "type": "string",
        "description": "Record type that the comment relates to i.e number_order, sub_number_order or number_order_phone_number"
      },
      "filter[comment_record_id]": {
        "example": "8ffb3622-7c6b-4ccc-b65f-7a3dc0099576",
        "type": "string",
        "description": "ID of the record the comments relate to"
      }
    },
    "required": [
      "filter[comment_record_type]",
      "filter[comment_record_id]"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.telnyx.com/v2/comments{?filter[comment_record_type],filter[comment_record_id]}"
    }
  },
