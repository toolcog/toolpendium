{
  "name": "createPortingOrderComment",
  "description": "Creates a new comment for a porting order.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "uuid",
        "type": "string",
        "description": "Porting Order id"
      },
      "body": {
        "$ref": "#/$defs/CreatePortingOrderComment"
      }
    },
    "required": [
      "id",
      "body"
    ],
    "$defs": {
      "CreatePortingOrderComment": {
        "properties": {
          "body": {
            "example": "Please, let me know when the port completes",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.telnyx.com/v2/porting_orders/{id}/comments"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**body**: Body of comment",
                  "**created_at**: ISO 8601 formatted date indicating when the resource was created.",
                  "**id**",
                  "**porting_order_id**",
                  "**record_type**: Identifies the type of the resource.",
                  "**user_type**: Indicates whether this comment was created by a Telnyx Admin, user, or system"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
