{
  "name": "story_outline_schema",
  "description": "Json Schema for validating Story Outline objects",
  "parameters": {
    "type": "object",
    "properties": {
      "schema_version": {
        "type": "string",
        "description": "The semanitic version of a schema (e.g. '0.3.1')"
      }
    },
    "required": [
      "schema_version"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/story/outline-schema/{schema_version}/story-outline.json"
    }
  },
  "responses": {
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Problem Detail"
        },
        "Error reponse model",
        "**Key properties:**",
        {
          "$ul": [
            "**detail**",
            "**status**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
