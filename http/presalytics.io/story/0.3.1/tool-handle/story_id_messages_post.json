{
  "name": "story_id_messages_post",
  "description": "Add a message to the Story's conversation",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "uuid",
        "type": "string",
        "description": "the id from the story object"
      },
      "body": {
        "type": "string",
        "description": "The message text"
      }
    },
    "required": [
      "id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "/story/{id}/messages"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
