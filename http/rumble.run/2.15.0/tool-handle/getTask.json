{
  "name": "getTask",
  "description": "Get task details",
  "parameters": {
    "type": "object",
    "properties": {
      "task_id": {
        "format": "uuid",
        "type": "string",
        "description": "UUID of the task to retrieve"
      }
    },
    "required": [
      "task_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://console.rumble.run/api/v1.0/org/tasks/{task_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**agent_id**",
            "**client_id**",
            "**created_at**",
            "**created_by**",
            "**created_by_user_id**",
            "**cruncher_id**",
            "**description**",
            "**error**",
            "**hidden**",
            "**id**",
            "**name**",
            "**organization_id**",
            "**params**",
            "**parent_id**",
            "**recur**",
            "**recur_frequency**",
            "**recur_last**",
            "**recur_last_task_id**",
            "**recur_next**",
            "**site_id**",
            "**start_time**",
            "**stats**",
            "**status**",
            "**template_id**",
            "**type**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
