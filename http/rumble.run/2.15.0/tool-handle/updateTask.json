{
  "name": "updateTask",
  "description": "Update task parameters",
  "parameters": {
    "type": "object",
    "properties": {
      "task_id": {
        "format": "uuid",
        "type": "string",
        "description": "UUID of the task to update"
      },
      "body": {
        "$ref": "#/components/schemas/Task",
        "description": "task object"
      }
    },
    "required": [
      "task_id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://console.rumble.run/api/v1.0/org/tasks/{task_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**agent_id**",
            "**client_id**",
            "**created_at**",
            "**created_by**",
            "**created_by_user_id**",
            "**cruncher_id**",
            "**description**",
            "**error**",
            "**hidden**",
            "**id**",
            "**name**",
            "**organization_id**",
            "**params**",
            "**parent_id**",
            "**recur**",
            "**recur_frequency**",
            "**recur_last**",
            "**recur_last_task_id**",
            "**recur_next**",
            "**site_id**",
            "**start_time**",
            "**stats**",
            "**status**",
            "**template_id**",
            "**type**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
