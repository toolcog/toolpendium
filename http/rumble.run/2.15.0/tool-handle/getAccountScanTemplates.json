{
  "name": "getAccountScanTemplates",
  "description": "Get all scan templates across all organizations (up to 1000)",
  "parameters": {
    "type": "object",
    "properties": {
      "search": {
        "type": "string",
        "description": "an optional search string for filtering results"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://console.rumble.run/api/v1.0/account/tasks/templates{?search}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**acl**",
            "**agent_id**",
            "**client_id**",
            "**created_at**",
            "**created_by**",
            "**created_by_user_id**",
            "**cruncher_id**",
            "**description**",
            "**error**",
            "**global**",
            "**grace_period**",
            "**hidden**",
            "**hosted_zone_id**",
            "**id**",
            "**linked_task_count**",
            "**name**",
            "**organization_id**",
            "**params**",
            "**parent_id**",
            "**recur**",
            "**recur_frequency**",
            "**recur_last**",
            "**recur_last_task_id**",
            "**recur_next**",
            "**site_id**",
            "**size_data**",
            "**size_results**",
            "**size_site**",
            "**source_id**",
            "**start_time**",
            "**stats**",
            "**status**",
            "**template_id**",
            "**type**",
            "**updated_at**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
