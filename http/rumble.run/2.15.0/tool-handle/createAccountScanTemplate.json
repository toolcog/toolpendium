{
  "name": "createAccountScanTemplate",
  "description": "Create a new scan template",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/ScanTemplateOptions"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "ScanTemplateOptions": {
        "properties": {
          "acl": {
            "additionalProperties": true,
            "example": {
              "e77602e0-3fb8-4734-aef9-fbc6fdcb0fa8": "user"
            },
            "type": "object"
          },
          "description": {
            "example": "My Scan Template",
            "type": "string"
          },
          "global": {
            "example": false,
            "type": "boolean"
          },
          "name": {
            "example": "My Scan Template",
            "type": "string"
          },
          "params": {
            "additionalProperties": {
              "type": "string"
            },
            "type": "object"
          }
        },
        "required": [
          "name",
          "global",
          "acl"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://console.rumble.run/api/v1.0/account/tasks/templates"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**acl**",
            "**agent_id**",
            "**client_id**",
            "**created_at**",
            "**created_by**",
            "**created_by_user_id**",
            "**cruncher_id**",
            "**description**",
            "**error**",
            "**global**",
            "**grace_period**",
            "**hidden**",
            "**hosted_zone_id**",
            "**id**",
            "**linked_task_count**",
            "**name**",
            "**organization_id**",
            "**params**",
            "**parent_id**",
            "**recur**",
            "**recur_frequency**",
            "**recur_last**",
            "**recur_last_task_id**",
            "**recur_next**",
            "**site_id**",
            "**size_data**",
            "**size_results**",
            "**size_site**",
            "**source_id**",
            "**start_time**",
            "**stats**",
            "**status**",
            "**template_id**",
            "**type**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
