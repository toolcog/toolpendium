{
  "name": "getSite",
  "description": "Get site details",
  "parameters": {
    "type": "object",
    "properties": {
      "site_id": {
        "format": "uuid",
        "type": "string",
        "description": "UUID or name of the site"
      }
    },
    "required": [
      "site_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://console.rumble.run/api/v1.0/org/sites/{site_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**created_at**",
            "**description**",
            "**excludes**",
            "**id**",
            "**name**",
            "**permanent**",
            "**scope**",
            "**subnets**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
