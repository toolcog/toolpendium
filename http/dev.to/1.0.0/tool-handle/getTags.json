{
  "name": "getTags",
  "description": "This endpoint allows the client to retrieve a list of tags that can be used to tag articles.\n\nIt will return tags ordered by popularity.\n\nIt supports pagination, each page will contain 10 tags by default.",
  "parameters": {
    "type": "object",
    "properties": {
      "page": {
        "default": 1,
        "format": "int32",
        "minimum": 1,
        "type": "integer",
        "description": "Pagination page"
      },
      "per_page": {
        "default": 10,
        "format": "int32",
        "maximum": 1000,
        "minimum": 1,
        "type": "integer",
        "description": "Page size (the number of items to return per page). The default maximum value can be overridden by \"API_PER_PAGE_MAX\" environment variable."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.to/api/api/tags{?page,per_page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Representation of a tag",
        "**Key properties:**",
        {
          "$ul": [
            "**bg_color_hex**",
            "**id**: Tag id",
            "**name**",
            "**text_color_hex**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
