{
  "name": "getOrganization",
  "description": "This endpoint allows the client to retrieve a single organization by their username",
  "parameters": {
    "type": "object",
    "properties": {
      "username": {
        "type": "string"
      }
    },
    "required": [
      "username"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.to/api/api/organizations/{username}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Representation of an Organization",
        "**Key properties:**",
        {
          "$ul": [
            "**github_username**",
            "**joined_at**",
            "**location**",
            "**name**",
            "**story**",
            "**summary**",
            "**tag_line**",
            "**tech_stack**",
            "**twitter_username**",
            "**type_of**",
            "**url**",
            "**username**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
