{
  "name": "getCommentsByArticleId",
  "description": "This endpoint allows the client to retrieve all comments belonging to an article or podcast episode as threaded conversations.\n\nIt will return the all top level comments with their nested comments as threads. See the format specification for further details.",
  "parameters": {
    "type": "object",
    "properties": {
      "a_id": {
        "type": "string",
        "description": "Article identifier."
      },
      "p_id": {
        "type": "string",
        "description": "Podcast Episode identifier."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.to/api/api/comments{?a_id,p_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "A Comment on an Article or Podcast Episode",
        "**Key properties:**",
        {
          "$ul": [
            "**created_at**",
            "**id_code**",
            "**image_url**: Podcast image url",
            "**type_of**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
