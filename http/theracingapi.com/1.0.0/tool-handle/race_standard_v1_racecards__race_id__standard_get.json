{
  "name": "race_standard_v1_racecards__race_id__standard_get",
  "description": "Get any race for today or tomorrow (or if classified as a 'big race') by race id, including runner odds for UK & IRE racing. (STANDARD PLAN)",
  "parameters": {
    "type": "object",
    "properties": {
      "race_id": {
        "title": "Race Id",
        "type": "string"
      }
    },
    "required": [
      "race_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.theracingapi.com//v1/racecards/{race_id}/standard"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "RacecardOdds"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**age_band**",
            "**big_race** (default: false)",
            "**course**",
            "**course_id**",
            "**date**",
            "**distance**",
            "**distance_f**",
            "**distance_round**",
            "**field_size**",
            "**going**",
            "**going_detailed**",
            "**is_abandoned** (default: false)",
            "**jumps** (default: )",
            "**off_dt**",
            "**off_time**",
            "**pattern**",
            "**prize**",
            "**race_class**",
            "**race_id**",
            "**race_name**",
            "**rail_movements**",
            "**rating_band**",
            "**region**",
            "**runners**",
            "**stalls**",
            "**surface**",
            "**type**",
            "**weather**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "422": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "HTTPValidationError"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
