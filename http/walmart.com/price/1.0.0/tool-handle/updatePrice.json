{
  "name": "updatePrice",
  "description": "Updates the regular price for a given item.",
  "parameters": {
    "type": "object",
    "properties": {
      "WM_SEC.ACCESS_TOKEN": {
        "type": "string",
        "description": "The access token retrieved in the Token API call"
      },
      "WM_CONSUMER.CHANNEL.TYPE": {
        "type": "string",
        "description": "A unique ID to track the consumer request by channel. Use the Consumer Channel Type received during onboarding"
      },
      "WM_QOS.CORRELATION_ID": {
        "type": "string",
        "description": "A unique ID which identifies each API call and used to track and debug issues; use a random generated GUID for this ID"
      },
      "WM_SVC.NAME": {
        "type": "string",
        "description": "Walmart Service Name"
      },
      "body": {
        "properties": {
          "definitions": {
            "type": "object"
          },
          "offerId": {
            "description": "This is applicable only for promotions",
            "type": "string"
          },
          "pricing": {
            "items": {
              "properties": {
                "comparisonPrice": {
                  "description": "This is applicable only for promotions",
                  "properties": {
                    "amount": {
                      "format": "double",
                      "type": "number"
                    },
                    "currency": {
                      "enum": [
                        "USD",
                        "CAD"
                      ],
                      "type": "string"
                    }
                  },
                  "type": "object"
                },
                "comparisonPriceType": {
                  "description": "This is applicable only for promotions",
                  "enum": [
                    "BASE"
                  ],
                  "type": "string"
                },
                "currentPrice": {
                  "properties": {
                    "amount": {
                      "format": "double",
                      "type": "number"
                    },
                    "currency": {
                      "enum": [
                        "USD",
                        "CAD"
                      ],
                      "type": "string"
                    }
                  },
                  "type": "object"
                },
                "currentPriceType": {
                  "description": "This is applicable only for both promotions and price",
                  "enum": [
                    "BASE",
                    "REDUCED",
                    "CLEARANCE"
                  ],
                  "type": "string"
                },
                "effectiveDate": {
                  "description": "This is applicable only for promotions",
                  "format": "date-time",
                  "type": "string"
                },
                "expirationDate": {
                  "description": "This is applicable only for promotions",
                  "format": "date-time",
                  "type": "string"
                },
                "priceDisplayCodes": {
                  "description": "Represent promo placement. This is applicable only for promotions",
                  "enum": [
                    "CART",
                    "CHECKOUT"
                  ],
                  "type": "string"
                },
                "processMode": {
                  "description": "This is applicable only for promotions",
                  "enum": [
                    "UPSERT",
                    "DELETE"
                  ],
                  "type": "string"
                },
                "promoId": {
                  "description": "This is applicable only for promotions",
                  "type": "string"
                }
              },
              "required": [
                "currentPrice",
                "currentPriceType"
              ],
              "type": "object"
            },
            "type": "array"
          },
          "replaceAll": {
            "description": "This is applicable only for promotions",
            "enum": [
              "true",
              "false"
            ],
            "type": "string"
          },
          "sku": {
            "type": "string"
          }
        },
        "required": [
          "pricing",
          "sku"
        ],
        "type": "object",
        "description": "The request body consists of a Feed file attached to the request."
      }
    },
    "required": [
      "WM_SEC.ACCESS_TOKEN",
      "WM_QOS.CORRELATION_ID",
      "WM_SVC.NAME",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://marketplace.walmartapis.com/v3/price"
    },
    "headers": {
      "WM_SEC.ACCESS_TOKEN": {
        "$": "WM_SEC.ACCESS_TOKEN"
      },
      "WM_CONSUMER.CHANNEL.TYPE": {
        "$": "WM_CONSUMER.CHANNEL.TYPE"
      },
      "WM_QOS.CORRELATION_ID": {
        "$": "WM_QOS.CORRELATION_ID"
      },
      "WM_SVC.NAME": {
        "$": "WM_SVC.NAME"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**",
            "**mart**: Marketplace name. Example: Walmart-US",
            "**message**: A message of acknowledgement for a price update",
            "**sku**: An arbitrary alphanumeric unique ID, specified by the seller, which identifies each item.",
            "**statusCode**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
