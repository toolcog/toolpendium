      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**diagnosisCodes**",
            "**fhirAllergies**",
            "**fhirConditions**",
            "**fhirEncounters**",
