              "**fhirPatient**",
              {
                "$ul": [
                  "**address1**",
                  "**address2**",
                  "**address3**",
                  "**address4**",
                  "**contacts**",
                  "**dateOfBirth**",
                  "**dateOfBirthNoTime**",
                  "**forename**",
                  "**gender**",
                  [
                    "**group**",
                    {
                      "$ul": [
                        "**address1**",
                        "**address2**",
                        "**address3**",
                        "**childGroups**",
                        "**code**",
                        "**contactPoints**",
                        "**created**",
                        "**fhirResourceId**",
                        "**groupFeatures**",
                        [
                          "**groupType**",
                          {
                            "$ul": [
                              "**created**",
                              "**description**",
                              "**descriptionFriendly**",
                              "**displayOrder**",
                              "**id**",
                              "**lastUpdate**",
                              [
                                "**lookupType**",
                                {
                                  "$ul": [
                                    "**created**",
                                    "**description**",
                                    "**id**",
                                    "**lastUpdate**",
                                    "**type**"
                                  ]
                                }
                              ],
                              "**value**"
                            ]
                          }
                        ],
                        "**id**",
                        "**lastImportDate**",
                        "**lastUpdate**",
                        "**links**",
                        "**locations**",
                        "**name**",
                        "**parentGroups**",
                        "**postcode**",
                        "**sftpUser**",
                        "**shortName**",
                        "**visible**",
                        "**visibleToJoin**"
                      ]
                    }
                  ],
                  "**groupCode**",
                  "**identifier**",
                  "**identifiers**",
                  "**postcode**",
                  "**practitioners**",
                  "**surname**"
                ]
              }
            ],
            "**fhirPractitioners**",
            [
              "**group**",
              {
                "$ul": [
                  "**address1**",
                  "**address2**",
                  "**address3**",
                  "**childGroups**",
                  "**code**",
                  "**contactPoints**",
                  "**created**",
                  "**fhirResourceId**",
                  "**groupFeatures**",
                  [
                    "**groupType**",
                    {
                      "$ul": [
                        "**created**",
                        "**description**",
                        "**descriptionFriendly**",
                        "**displayOrder**",
                        "**id**",
                        "**lastUpdate**",
                        [
                          "**lookupType**",
                          {
                            "$ul": [
                              "**created**",
                              "**description**",
                              "**id**",
                              "**lastUpdate**",
                              "**type**"
                            ]
                          }
                        ],
                        "**value**"
                      ]
                    }
