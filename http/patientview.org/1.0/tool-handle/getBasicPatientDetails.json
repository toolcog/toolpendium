{
  "name": "getBasicPatientDetails",
  "description": "Given a User ID, get basic patient information for a user from clinical data stored in FHIR",
  "parameters": {
    "type": "object",
    "properties": {
      "userId": {
        "format": "int64",
        "type": "integer",
        "description": "userId"
      }
    },
    "required": [
      "userId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.patientview.org//patient/{userId}/basic"
    }
  },
  "responses": {
