{
  "name": "Devices_Put",
  "description": "Updates the On/Off Switch on a device\r\n            For new implementations please use the \"actions\" command",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The ID of the device"
      },
      "switchState": {
        "type": "boolean",
        "description": "The new state of the switch"
      },
      "switchNumber": {
        "format": "int32",
        "type": "integer",
        "description": "The number of the switch if there are multiple (1 for L1, 3 for L3)"
      }
    },
    "required": [
      "id",
      "switchState"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://smart-me.com:443/api/Devices/{id}{?switchState,switchNumber}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
