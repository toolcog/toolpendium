{
  "name": "ValuesInPast_Get",
  "description": "Gets the Values for a device at a given Date. The first Value found before the given Date is returned.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The ID of the device"
      },
      "date": {
        "format": "date-time",
        "type": "string",
        "description": "the date of the value"
      }
    },
    "required": [
      "id",
      "date"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://smart-me.com:443/api/ValuesInPast/{id}{?date}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "API Container for a Meter Value",
        "**Key properties:**",
        {
          "$ul": [
            "**Date**: The Date of the Value",
            "**DeviceId**: The ID of the device",
            "**Values**: All values"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
