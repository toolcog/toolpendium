{
  "name": "Actions_Get",
  "description": "Gets all available Actions of a Device",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The ID of the device"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://smart-me.com:443/api/Actions/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "The Information about an Action of a device",
        "**Key properties:**",
        {
          "$ul": [
            "**ActionType**: The Type of this action.",
            "**MaxValue**: The maximum value of this action (e.g. for an AnalogAction)",
            "**MinValue**: The minimum value of this action (e.g. for an AnalogAction)",
            "**Name**: The Name of this action",
            "**ObisCode**: The Obis Code of this action. This is used as ID."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
