{
  "name": "",
  "description": "Get information about a station near a location",
  "parameters": {
    "type": "object",
    "properties": {
      "lat": {
        "format": "float",
        "type": "number",
        "description": "Latitude"
      },
      "lon": {
        "format": "float",
        "type": "number",
        "description": "Longitude"
      }
    },
    "required": [
      "lat",
      "lon"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.deutschebahn.com/reisezentren/v1/reisezentren/loc/{lat}/{lon}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**address**: Street address of travel center",
            "**city**: City of travel center",
            "**id**: Identifying number",
            "**lat**: Latitude of travel center location",
            "**lon**: Longitude of travel center location",
            "**name**: Name of travel center",
            [
              "**openingTimes**: Opening times of the travel center, ordered by week day",
              {
                "$ul": [
                  "**fri**",
                  "**mon**",
                  "**sat**",
                  "**sun**",
                  "**thu**",
                  "**tue**",
                  "**wed**"
                ]
              }
            ],
            "**postCode**: Post code of travel center",
            "**type**: Type of travel center"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
