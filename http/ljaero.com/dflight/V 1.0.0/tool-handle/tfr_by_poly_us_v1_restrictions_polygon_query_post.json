{
  "name": "tfr_by_poly_us_v1_restrictions_polygon_query_post",
  "description": "Retrieve Flight Restrictions located within given area. Request body parameters are:\n* poly:  [GeoJSON Polygon](https://www.rfc-editor.org/rfc/rfc7946.html#appendix-A) defining the area. Max allowed area is 1000 km^2.",
  "parameters": {
    "type": "object",
    "properties": {
      "x-api-key": {
        "title": "X-Api-Key",
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/NOTAMsByPolygon"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "NOTAMsByPolygon": {
        "description": "Geometry-defining arguments for polygon requests",
        "example": {
          "poly": {
            "coordinates": [
              [
                [
                  -155.426425,
                  19.545118
                ],
                [
                  -155.59946,
                  19.440516
                ],
                [
                  -155.348422,
                  19.335847
                ],
                [
                  -155.426425,
                  19.545118
                ]
              ]
            ],
            "type": "Polygon"
          }
        },
        "properties": {
          "poly": {
            "title": "Poly",
            "type": "object"
          }
        },
        "required": [
          "poly"
        ],
        "title": "NOTAMsByPolygon",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://dflight-api.ljaero.com//us/v1/restrictions/polygon-query"
    },
    "headers": {
      "x-api-key": {
        "$": "x-api-key"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "NOTAMsPolyResponse"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**found**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "422": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "HTTPValidationError"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
