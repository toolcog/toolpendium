{
  "name": "getAllProductsV2",
  "description": "Retrieve all products visible in POS â€“ v2",
  "parameters": {
    "type": "object",
    "properties": {
      "organizationUuid": {
        "format": "uuid",
        "type": "string"
      },
      "sort": {
        "type": "boolean",
        "description": "If true, sorts response by created date"
      }
    },
    "required": [
      "organizationUuid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://products.izettle.com/organizations/{organizationUuid}/products/v2{?sort}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**categories**",
            [
              "**category**",
              {
                "$ul": [
                  "**name**",
                  "**uuid**"
                ]
              }
            ],
            "**created**",
            "**description**",
            "**etag**",
            "**externalReference**",
            "**imageLookupKeys**",
            [
              "**metadata**",
              {
                "$ul": [
                  "**inPos**",
                  [
                    "**source**",
                    {
                      "$ul": [
                        "**external**",
                        "**name**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**name**",
            [
              "**online**",
              {
                "$ul": [
                  "**description**",
                  [
                    "**presentation**",
                    {
                      "$ul": [
                        "**additionalImageUrls**",
                        "**displayImageUrl**",
                        "**mediaUrls**"
                      ]
                    }
                  ],
                  [
                    "**seo**",
                    {
                      "$ul": [
                        "**metaDescription**",
                        "**slug**",
                        "**title**"
                      ]
                    }
                  ],
                  [
                    "**shipping**",
                    {
                      "$ul": [
                        "**shippingPricingModel**",
                        [
                          "**weight**",
                          {
                            "$ul": [
                              "**unit**",
                              "**weight**"
                            ]
                          }
                        ],
                        "**weightInGrams**"
                      ]
                    }
                  ],
                  "**status**",
                  "**title**"
                ]
              }
            ],
            [
              "**presentation**",
              {
                "$ul": [
                  "**backgroundColor**",
                  "**imageUrl**",
                  "**textColor**"
                ]
              }
            ],
            "**taxCode**",
            "**taxExempt**",
            "**taxRates**",
            "**unitName**",
            "**updated**",
            "**updatedBy**",
            "**uuid**",
            [
              "**variantOptionDefinitions**",
              {
                "$ul": [
                  "**definitions**"
                ]
              }
            ],
            "**variants**",
            "**vatPercentage**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
