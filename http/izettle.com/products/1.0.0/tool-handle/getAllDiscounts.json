{
  "name": "getAllDiscounts",
  "description": "Retrieve all discounts",
  "parameters": {
    "type": "object",
    "properties": {
      "organizationUuid": {
        "format": "uuid",
        "type": "string"
      }
    },
    "required": [
      "organizationUuid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://products.izettle.com/organizations/{organizationUuid}/discounts"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**amount**",
              {
                "$ul": [
                  "**amount**",
                  "**currencyId**"
                ]
              }
            ],
            "**created**",
            "**description**",
            "**etag**",
            "**externalReference**",
            "**imageLookupKeys**",
            "**name**",
            "**percentage**",
            "**updated**",
            "**updatedBy**",
            "**uuid**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
