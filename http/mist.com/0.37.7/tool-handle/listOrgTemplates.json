{
  "name": "listOrgTemplates",
  "description": "Get List of Org Templates",
  "parameters": {
    "type": "object",
    "properties": {
      "org_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      }
    },
    "required": [
      "org_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.mist.com/api/v1/orgs/{org_id}/templates"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Template",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**applies**: where this template should be applied to, can be org_id, site_ids, sitegroup_ids",
              {
                "$ul": [
                  "**org_id**: org id, should be the same as the org, this shadows sitegroup_ids and site_ids",
                  "**site_ids**: list of site ids",
                  "**sitegroup_ids**: list of sitegroup ids"
                ]
              }
            ],
            "**created_time**",
            "**deviceprofile_ids**: list of Device Profile ids",
            [
              "**exceptions**: where this template should not be applied to (takes precedence)",
              {
                "$ul": [
                  "**site_ids**: list of site ids",
                  "**sitegroup_ids**: list of sitegroup ids"
                ]
              }
            ],
            "**filter_by_deviceprofile**: whether to further filter by Device Profile",
            "**id**",
            "**modified_time**",
            "**name**",
            "**org_id**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
