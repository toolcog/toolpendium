{
  "name": "createOrgNacRule",
  "description": "create Org NAC Rule",
  "parameters": {
    "type": "object",
    "properties": {
      "org_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/nac_rule"
      }
    },
    "required": [
      "org_id"
    ],
    "$defs": {
      "nac_rule": {
        "properties": {
          "action": {
            "enum": [
              "allow",
              "block"
            ],
            "type": "string"
          },
          "apply_tags": {
            "description": "all optional, this goes into Access-Accept",
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "created_time": {
            "readOnly": true,
            "type": "integer"
          },
          "enabled": {
            "default": true,
            "description": "enabled or not",
            "type": "boolean"
          },
          "id": {
            "format": "uuid",
            "minLength": 1,
            "readOnly": true,
            "type": "string"
          },
          "matching": {
            "$ref": "#/$defs/nac_rule_matching"
          },
          "modified_time": {
            "readOnly": true,
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "not_matching": {
            "$ref": "#/$defs/nac_rule_matching"
          },
          "order": {
            "description": "the order of the rule, lower value implies higher priority",
            "type": "number"
          },
          "org_id": {
            "format": "uuid",
            "readOnly": true,
            "type": "string"
          }
        },
        "required": [
          "action",
          "name"
        ],
        "type": "object",
        "x-examples": {
          "example-1": {
            "apply_tags": [
              "c049dfcd-0c73-5014-1c64-062e9903f1e5"
            ],
            "id": "7e700e85-6080-69b9-729e-ee9e012d7408",
            "matching": {
              "auth_type": "cert",
              "nactags": [
                "041d5d36-716c-4cfb-4988-3857c6aa14a2",
                "a809a97f-d599-f812-eb8c-c3f84aabf6ba"
              ],
              "port_types": [
                "wired"
              ]
            },
            "not_matching": {
              "auth_type": "cert",
              "nactags": [
                "041d5d36-716c-4cfb-4988-3857c6aa14a2",
                "a809a97f-d599-f812-eb8c-c3f84aabf6ba"
              ],
              "port_types": [
                "wired"
              ]
            },
            "order": 1
          }
        }
      },
      "nac_rule_matching": {
        "properties": {
          "auth_type": {
            "default": "cert",
            "enum": [
              "cert",
              "idp",
              "mab",
              "psk"
            ],
            "minLength": 1,
            "type": "string"
          },
          "nactags": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "port_types": {
            "items": {
              "enum": [
                "wireless",
                "wired"
              ],
              "type": "string"
            },
            "type": "array"
          },
          "site_ids": {
            "description": "list of site ids to match",
            "items": {
              "format": "uuid",
              "type": "string"
            },
            "type": "array"
          },
          "sitegroup_ids": {
            "description": "list of sitegroup ids to match",
            "items": {
              "format": "uuid",
              "type": "string"
            },
            "type": "array"
          }
        },
        "title": "nac_rule_matching",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.mist.com/api/v1/orgs/{org_id}/nacrules"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**",
            "**apply_tags**: all optional, this goes into Access-Accept",
            "**created_time**",
            "**enabled**: enabled or not (default: true)",
            "**id**",
            [
              "**matching**",
              {
                "$ul": [
                  "**auth_type** (default: cert)",
                  "**nactags**",
                  "**port_types**",
                  "**site_ids**: list of site ids to match",
                  "**sitegroup_ids**: list of sitegroup ids to match"
                ]
              }
            ],
            "**modified_time**",
            "**name**",
            [
              "**not_matching**",
              {
                "$ul": [
                  "**auth_type** (default: cert)",
                  "**nactags**",
                  "**port_types**",
                  "**site_ids**: list of site ids to match",
                  "**sitegroup_ids**: list of sitegroup ids to match"
                ]
              }
            ],
            "**order**: the order of the rule, lower value implies higher priority",
            "**org_id**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
