{
  "name": "restartSiteDevice",
  "description": "Restart / Reboot a device",
  "parameters": {
    "type": "object",
    "properties": {
      "site_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "device_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "body": {
        "properties": {
          "member": {
            "description": "optional for VC member",
            "type": "string"
          },
          "node": {
            "description": "only for SSR: if node is not present, both nodes are restarted\nfor other devices: node should not be present",
