{
  "name": "StartSiteDeviceSyntheticTest",
  "description": "Device Synthetic Test\n",
  "parameters": {
    "type": "object",
    "properties": {
      "site_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "device_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "body": {
        "properties": {
          "hostname": {
            "description": "if `type`==`dns`",
            "type": "string"
          },
          "ip": {
            "description": "if `type`==`arp`",
            "type": "string"
          },
          "password": {
            "description": "if `type`==`radius`",
            "type": "string"
          },
          "type": {
            "enum": [
              "dns",
              "arp",
              "dhcp",
              "curl",
              "radius",
              "speedtest",
              "dhcp6"
            ],
            "type": "string"
          },
          "url": {
            "description": "if `type`==`curl`",
            "type": "string"
          },
          "username": {
            "description": "if `type`==`radius`",
            "type": "string"
          },
          "vlan_id": {
            "type": "integer"
          }
        },
        "type": "object",
        "x-examples": {
          "example-1": {
            "hostname": "google.com",
            "ip": "192.168.3.5",
            "password": "test123",
            "type": "dns",
            "url": "https://www.example.com",
            "username": "user",
            "vlan_id": 30
          }
        }
      }
    },
    "required": [
      "site_id",
      "device_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.mist.com/api/v1/sites/{site_id}/devices/{device_id}/synthetic_test"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**"
          ]
        },
