{
  "name": "createOrgApiToken",
  "description": "Create Org API Token\nNote that the token key is only available during creation time.",
  "parameters": {
    "type": "object",
    "properties": {
      "org_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "body": {
        "description": "",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "privileges": {
            "description": "list of privileges the token has on the orgs/sites",
            "items": {
              "properties": {
                "role": {
                  "enum": [
                    "admin",
                    "write",
                    "read"
                  ],
                  "minLength": 1,
                  "type": "string"
                },
                "scope": {
                  "enum": [
                    "site",
                    "org",
                    "sitegroup"
                  ],
                  "minLength": 1,
                  "type": "string"
                },
                "site_id": {
                  "description": "if `scope`==`site`",
                  "format": "uuid",
                  "type": "string"
                },
                "sitegroup_id": {
                  "description": "if `scope`==`sitegroup`",
                  "format": "uuid",
                  "type": "string"
                }
              },
              "required": [
                "scope",
                "role",
                "site_id"
              ],
              "type": "object"
            },
            "minItems": 1,
            "type": "array",
            "uniqueItems": true
          }
        },
        "required": [
          "name",
          "privileges"
        ],
        "type": "object",
        "x-examples": {
          "example-1": {
            "name": "org_token_xyz",
            "privileges": [
              {
                "role": "read",
                "scope": "org"
              },
              {
                "role": "admin",
                "scope": "site",
                "site_id": "d96e3952-53e8-4266-959a-45acd55f5114"
              },
              {
                "role": "write",
                "scope": "sitegroup",
                "sitegroup_id": "581328b6-e382-f54e-c9dc-999983183a34"
              }
            ]
          }
        }
      }
    },
    "required": [
      "org_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.mist.com/api/v1/orgs/{org_id}/apitokens"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "API Token",
        "**Key properties:**",
        {
          "$ul": [
            "**created_by**: for Org token only. email of the token creator / null if creator is deleted",
            "**created_time**",
            "**id**",
            "**key**",
            "**last_used**",
            "**name**: name of the token",
            "**org_id**",
            "**privileges**: list of privileges the token has on the orgs/sites"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
