{
  "name": "countSiteApps",
  "description": "Count by Distinct Attributes of Applications",
  "parameters": {
    "type": "object",
    "properties": {
      "distinct": {
        "enum": [
          "ap",
          "wcid",
          "ssid",
          "wlan_id app",
          "device_mac",
          "src_ip",
          "port_id",
          "app",
          "category",
          "service"
        ],
        "type": "string",
        "description": "Default for wireless devices is `ap`. Default for wired devices is `device_mac`"
      },
      "device_mac": {
        "type": "string",
        "description": "MAC of the device"
      },
      "app": {
        "type": "string",
        "description": "Application name"
      },
      "wired": {
        "type": "string",
        "description": "If a device is wired or wireless. Default is False."
      },
      "site_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      }
    },
    "required": [
      "site_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.mist.com/api/v1/sites/{site_id}/stats/apps/count{?distinct,device_mac,app,wired}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
