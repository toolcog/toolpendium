{
  "name": "updateOrgTemplate",
  "description": "Update Org Template",
  "parameters": {
    "type": "object",
    "properties": {
      "org_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "template_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "body": {
        "$ref": "#/components/schemas/template",
        "description": "Request Body"
      }
    },
    "required": [
      "org_id",
      "template_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.mist.com/api/v1/orgs/{org_id}/templates/{template_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
