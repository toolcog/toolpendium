{
  "name": "getSiteDiscoveredSwitchesMetrics",
  "description": "Discovered switches related metrics, lists related switch system names & details if not compliant",
  "parameters": {
    "type": "object",
    "properties": {
      "threshold": {
        "type": "string",
        "description": "configurable # ap per switch threshold, default 12"
      },
      "system_name": {
        "type": "string",
        "description": "system name for switch level metrics, optional"
      },
      "site_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      }
    },
    "required": [
      "site_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.mist.com/api/v1/sites/{site_id}/stats/discovered_switches/metrics{?threshold,system_name}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**inactive_wired_vlans**",
              {
                "$ul": [
                  "**details**",
                  "**score**"
                ]
              }
            ],
            [
              "**poe_compliance**",
              {
                "$ul": [
                  [
                    "**details**",
                    {
                      "$ul": [
                        "**total_aps**",
                        "**total_power**"
                      ]
                    }
                  ],
                  "**score**"
                ]
              }
            ],
            [
              "**switch_ap_affinity**",
              {
                "$ul": [
                  [
                    "**details**",
                    {
                      "$ul": [
                        "**system_name**",
                        "**threshold**"
                      ]
                    }
                  ],
                  "**score**"
                ]
              }
            ],
            [
              "**version_compliance**",
              {
                "$ul": [
                  [
                    "**details**",
                    {
                      "$ul": [
                        "**major_versions**",
                        "**total_switch_count**"
                      ]
                    }
                  ],
                  "**score**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
