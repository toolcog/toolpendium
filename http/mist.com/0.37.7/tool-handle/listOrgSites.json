{
  "name": "listOrgSites",
  "description": "Get List of Org Sites",
  "parameters": {
    "type": "object",
    "properties": {
      "limit": {
        "default": 100,
        "minimum": 0,
        "type": "integer"
      },
      "page": {
        "default": 1,
        "minimum": 1,
        "type": "integer"
      },
      "org_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      }
    },
    "required": [
      "org_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.mist.com/api/v1/orgs/{org_id}/sites{?limit,page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Site",
        "**Key properties:**",
        {
          "$ul": [
            "**address**: full address of the site",
            "**alarmtemplate_id**: Alarm Template ID, this takes precedence over the Org-level alarmtemplate_id",
            "**aptemplate_id**: AP Template ID, used by APs",
            "**country_code**: country code for the site (for AP config generation), in two-character",
            "**created_time**",
            "**gatewaytemplate_id**: Gateway Template ID, used by gateways",
            "**id**",
            [
              "**latlng**: site location",
              {
                "$ul": [
                  "**lat**: latitude",
                  "**lng**: longitude"
                ]
              }
            ],
            "**modified_time**",
            "**name**",
            "**networktemplate_id**: Network Template ID, this takes precedence over Site Settings",
            "**notes**: optional, any notes about the site",
            "**org_id**",
            "**rftemplate_id**: RF Template ID, this takes precedence over Site Settings",
            "**secpolicy_id**: SecPolicy ID",
            "**sitegroup_ids**: sitegroups this site belongs to",
            "**sitetemplate_id**: Site Template ID",
            "**timezone**: Timezone the site is at"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
