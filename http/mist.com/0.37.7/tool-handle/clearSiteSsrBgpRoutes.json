          "neighbor": {
            "description": "neighbor ip-address or `all`",
            "minLength": 1,
            "type": "string"
          },
          "type": {
            "default": "hard",
            "enum": [
              "in",
              "out",
              "hard",
              "soft"
            ],
            "minLength": 1,
            "type": "string"
          },
          "vrf": {
            "description": "vrf name",
            "minLength": 1,
            "type": "string"
          }
        },
        "required": [
          "neighbor"
        ],
        "type": "object",
        "x-examples": {
          "example-1": {
            "neighbor": "all",
            "type": "in",
            "vrf": "TestVrf"
          }
        }
