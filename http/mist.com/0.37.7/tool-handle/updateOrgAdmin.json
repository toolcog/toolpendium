{
  "name": "updateOrgAdmin",
  "description": "Invite Org Admin",
  "parameters": {
    "type": "object",
    "properties": {
      "org_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "admin_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "body": {
        "$ref": "#/components/schemas/admin",
        "description": "Request Body"
      }
    },
    "required": [
      "org_id",
      "admin_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.mist.com/api/v1/orgs/{org_id}/admins/{admin_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
