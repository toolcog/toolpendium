{
  "name": "getSiteSlesMetrics",
  "description": "Get the list of metrics for the given scope",
  "parameters": {
    "type": "object",
    "properties": {
      "site_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "scope": {
        "enum": [
          "site",
          "ap",
          "switch",
          "gateway",
          "client"
        ],
        "type": "string"
      },
      "scope_id": {
        "type": "string",
        "description": "* site_id if `scope`==`site`\n* device_id if `scope`==`ap`, `scope`==`switch` or `scope`==`gateway`\n* mac if `scope`==`client`"
      }
    },
    "required": [
      "site_id",
      "scope",
      "scope_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.mist.com/api/v1/sites/{site_id}/sle/{scope}/{scope_id}/metrics"
    }
  },
