{
  "name": "getOrgGuestAuthorization",
  "description": "Get Guest Authorization",
  "parameters": {
    "type": "object",
    "properties": {
      "org_id": {
        "example": "000000ab-00ab-00ab-00ab-0000000000ab",
        "format": "uuid",
        "type": "string"
      },
      "guest_mac": {
        "example": "0000000000ab",
        "pattern": "^[0-9a-fA-F]{12}$",
        "type": "string"
      }
    },
    "required": [
      "org_id",
      "guest_mac"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.mist.com/api/v1/orgs/{org_id}/guests/{guest_mac}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Guest",
        "**Key properties:**",
        {
          "$ul": [
            "**authorized**: whether the guest is current authorized",
            "**authorized_expiring_time**: when the authorization would expire",
            "**authorized_time**: when the guest was authorized",
            "**company**: optional, the info provided by user",
            "**email**: optional, the info provided by user",
            "**field1**: optional, the info provided by user",
            "**field2**",
            "**field3**",
            "**field4**",
            "**mac**: mac",
            "**minutes**: minutes, the maximum is 259200 (180 days)",
            "**name**: optional, the info provided by user",
            "**ssid**",
            "**wlan_id**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
