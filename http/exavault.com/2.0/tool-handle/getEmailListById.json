{
  "name": "getEmailListById",
  "description": "Retrieve all the details of a specific email list including it's name, when it was created and all the email addresses that belong to the group.",
  "parameters": {
    "type": "object",
    "properties": {
      "ev-api-key": {
        "type": "string",
        "description": "API Key required to make the API call."
      },
      "ev-access-token": {
        "type": "string",
        "description": "Access token required to make the API call."
      },
      "id": {
        "type": "integer",
        "description": "ID of the email list to return."
      },
      "include": {
        "type": "string",
        "description": "Related record types to include in the response. Valid option is `ownerUser`"
      }
    },
    "required": [
      "ev-api-key",
      "ev-access-token",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://accountname.exavault.com/api/v2/email-lists/{id}{?include}"
    },
    "headers": {
      "ev-api-key": {
        "$": "ev-api-key"
      },
      "ev-access-token": {
        "$": "ev-access-token"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "EmailListResponse"
        },
        "Response object for a single email list.",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**: A single email group list",
              {
                "$ul": [
                  [
                    "**attributes**: Information for the email list, including its short title and recipient emails",
                    {
                      "$ul": [
                        "**created**: Created datetime",
                        "**emails**: Recipient emails in the email list",
                        "**modified**: Modified datetime",
                        "**name**: Short title for email list"
                      ]
                    }
                  ],
                  "**id**: ID of the email list",
                  [
                    "**relationships**: Related record summary info",
                    {
                      "$ul": [
                        [
                          "**ownerUser**: Information for user who owns the email list",
                          {
                            "$ul": [
                              [
                                "**data**: Identifying info for related record",
                                {
                                  "$ul": [
                                    "**id**: ID number of related record",
                                    "**type**: Kind of record"
                                  ]
                                }
                              ]
                            ]
                          }
                        ]
                      ]
                    }
                  ],
                  "**type**: Type of record. \"emailList\""
                ]
              }
            ],
            "**included**",
            "**responseStatus**: Http Status code"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
