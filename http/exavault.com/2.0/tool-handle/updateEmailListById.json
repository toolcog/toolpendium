{
  "name": "updateEmailListById",
  "description": "Add or remove emails from an email list that can be used to send and share files with groups. \n\n**Notes**\n\n*This call will **replace** your current email list in its entirety.* If you want to keep any existing emails on the list, be sure to submit the call with any current emails you want to keep on the list.  ",
  "parameters": {
    "type": "object",
    "properties": {
      "ev-api-key": {
        "type": "string",
        "description": "API Key required to make the API call."
      },
      "ev-access-token": {
        "type": "string",
        "description": "Access token required to make the API call."
      },
      "id": {
        "type": "integer",
        "description": "ID of the email list to update."
      },
      "body": {
        "properties": {
          "emails": {
            "description": "Email addresses that replace existing list.",
            "example": [
              "yuk@example.com",
              "jdoe@example.com"
            ],
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "name": {
            "description": "Name of the email list.",
            "example": "My friends list",
            "type": "string"
          }
        },
        "title": "UpdateEmailListRequestBody",
        "type": "object",
        "description": ""
      }
    },
    "required": [
      "ev-api-key",
      "ev-access-token",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://accountname.exavault.com/api/v2/email-lists/{id}"
    },
    "headers": {
      "ev-api-key": {
        "$": "ev-api-key"
      },
      "ev-access-token": {
        "$": "ev-access-token"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "EmailListResponse"
        },
        "Response object for a single email list.",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**: A single email group list",
              {
                "$ul": [
                  [
                    "**attributes**: Information for the email list, including its short title and recipient emails",
                    {
                      "$ul": [
                        "**created**: Created datetime",
                        "**emails**: Recipient emails in the email list",
                        "**modified**: Modified datetime",
                        "**name**: Short title for email list"
                      ]
                    }
                  ],
                  "**id**: ID of the email list",
                  [
                    "**relationships**: Related record summary info",
                    {
                      "$ul": [
                        [
                          "**ownerUser**: Information for user who owns the email list",
                          {
                            "$ul": [
                              [
                                "**data**: Identifying info for related record",
                                {
                                  "$ul": [
                                    "**id**: ID number of related record",
                                    "**type**: Kind of record"
                                  ]
                                }
                              ]
                            ]
                          }
                        ]
                      ]
                    }
                  ],
                  "**type**: Type of record. \"emailList\""
                ]
              }
            ],
            "**included**",
            "**responseStatus**: Http Status code"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
