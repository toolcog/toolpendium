{
  "name": "updateResourceById",
  "description": "Update the specified file or folder resource record's \"name\" parameter. The resource is identified by the numeric resource ID that is passed in as the last segment of the URI.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "ev-access-token": {
        "type": "string",
        "description": "Access token required to make the API call."
      },
      "ev-api-key": {
        "type": "string",
        "description": "API key required to make the API call."
      },
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "ID number of the resource"
      },
      "body": {
        "properties": {
          "name": {
            "description": "The new name for the resource (file or folder).",
            "example": "my-renamed-file.txt",
            "type": "string"
          }
        },
        "title": "UpdateResourceByIdRequestBody",
        "type": "object"
      }
    },
    "required": [
      "ev-access-token",
      "ev-api-key",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://accountname.exavault.com/api/v2/resources/{id}"
    },
    "headers": {
      "ev-access-token": {
        "$": "ev-access-token"
      },
      "ev-api-key": {
        "$": "ev-api-key"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "ResourceResponse"
        },
        "Response object for resources.",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**: All properties of the resource.",
              {
                "$ul": [
                  [
                    "**attributes**: Attributes of resource",
                    {
                      "$ul": [
                        "**accessedAt**: Date-time of the time when resource was accessed.",
                        "**accessedTime**: UNIX timestamp of last access",
                        "**createdAt**: Date-time of resource creation.",
                        "**createdBy**: Username of the creator.",
                        "**createdTime**: UNIX timestamp of resource creation",
                        "**extension**: Resource extension. Property exists only if resource `type` is file.",
                        "**fileCount**: Number of files within folder. null if resource type is a file.",
                        "**hash**: Unique hash of the resource.",
                        "**name**: Resource name, e.g. the name of the file or folder.",
                        "**path**: Full path to the resource.",
                        "**previewable**: Can resource be previewed. Property equals `null` if resource `type` is dir.",
                        "**size**: Resource size in bytes",
                        "**type**: Type of the resource.",
                        "**updatedAt**: Date-time of resource modification.",
                        "**updatedTime**: UNIX timestamp of resource modification",
                        "**uploadDate**: Timestamp of resource upload."
                      ]
                    }
                  ],
                  "**id**",
                  [
                    "**relationships**",
                    {
                      "$ul": [
                        [
                          "**directFile**",
                          {
                            "$ul": [
                              [
                                "**data**",
                                {
                                  "$ul": [
                                    "**id**",
                                    "**type**"
                                  ]
                                }
                              ]
                            ]
                          }
                        ],
                        "**notifications**",
                        [
                          "**parentResource**",
                          {
                            "$ul": [
                              [
                                "**data**",
                                {
                                  "$ul": [
                                    "**id**",
                                    "**type**"
                                  ]
                                }
                              ]
                            ]
                          }
                        ],
                        [
                          "**share**",
                          {
                            "$ul": [
                              [
                                "**data**",
                                {
                                  "$ul": [
                                    "**id**",
                                    "**type**"
                                  ]
                                }
                              ]
                            ]
                          }
                        ]
                      ]
                    }
                  ],
                  "**type**: Type of item. \"resource\""
                ]
              }
            ],
            "**included**",
            "**responseStatus**: Http status code of the response. "
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
