{
  "name": "getXSD",
  "description": "Get Schema definition",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://programmes.api.bbc.com/schema"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**fault**",
              {
                "$ul": [
                  [
                    "**detail**",
                    {
                      "$ul": [
                        "**errorcode**"
                      ]
                    }
                  ],
                  "**faultString**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
