{
  "name": "tagServiceInventory",
  "description": "Tags a ServiceInventory object",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "pattern": "^\\d+$",
        "type": "string",
        "description": "ID of the resource"
      },
      "body": {
        "items": {
          "$ref": "#/$defs/Tag"
        },
        "type": "array",
        "description": "Tag attributes to add"
      }
    },
    "required": [
      "id",
      "body"
    ],
    "$defs": {
      "Tag": {
        "additionalProperties": false,
        "properties": {
          "tag": {
            "example": "/namespace/architecture=x86_64",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://cloud.redhat.com/%2Fapi%2Fcatalog-inventory%2Fv1.0/service_inventories/{id}/tag"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**tag**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
