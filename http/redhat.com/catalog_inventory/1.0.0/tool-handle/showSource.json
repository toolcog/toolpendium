{
  "name": "showSource",
  "description": "Returns a Source object",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "pattern": "^\\d+$",
        "type": "string",
        "description": "ID of the resource"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://cloud.redhat.com/%2Fapi%2Fcatalog-inventory%2Fv1.0/sources/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**archived_at**",
            "**availability_message**",
            "**availability_status**",
            "**cloud_connector_id**",
            "**created_at**",
            "**enabled** (default: false)",
            "**id**: ID of the resource",
            "**info**",
            "**last_available_at**",
            "**last_checked_at**",
            "**last_refresh_message**",
            "**last_successful_refresh_at**",
            "**name**",
            "**previous_sha**",
            "**previous_size**",
            "**refresh_finished_at**",
            "**refresh_started_at**",
            "**refresh_state**",
            "**refresh_task_id**",
            "**uid**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
