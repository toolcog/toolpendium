{
  "name": "showTask",
  "description": "Returns a Task object",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
        "type": "string",
        "description": "UUID of task"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://cloud.redhat.com/%2Fapi%2Fcatalog-inventory%2Fv1.0/tasks/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**archived_at**",
            "**child_task_id**",
            "**completed_at**",
            "**controller_message_id**",
            "**created_at**",
            "**id**: UUID of task",
            "**input**",
            "**message**",
            "**name**",
            "**output**",
            "**owner**",
            "**source_id**: ID of the resource",
            "**state**",
            "**status**",
            "**target_source_ref**",
            "**target_type**",
            "**type**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
