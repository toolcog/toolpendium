{
  "name": "updateTask",
  "description": "Updates a Task object",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
        "type": "string",
        "description": "UUID of task"
      },
      "body": {
        "$ref": "#/components/schemas/Task",
        "description": "Task attributes to update"
      }
    },
    "required": [
      "id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://cloud.redhat.com/%2Fapi%2Fcatalog-inventory%2Fv1.0/tasks/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
