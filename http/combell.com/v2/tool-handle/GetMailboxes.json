{
  "name": "GetMailboxes",
  "description": "Currently only supports getting the mailboxes filtered by domain name.",
  "parameters": {
    "type": "object",
    "properties": {
      "domain_name": {
        "description": "Obligated domain name for getting mailboxes.",
        "nullable": true,
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/v2/mailboxes{?domain_name}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**actual_size**: Used size in MB",
            "**max_size**: Maximum size in MB",
            "**name**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
