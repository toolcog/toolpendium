{
  "name": "GetLinuxHosting",
  "description": "Linux hosting detail",
  "parameters": {
    "type": "object",
    "properties": {
      "domain_name": {
        "description": "The Linux hosting domain name.",
        "type": "string"
      },
      "domainName": {
        "type": "string",
        "description": "Automatically added"
      }
    },
    "required": [
      "domain_name",
      "domainName"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/v2/linuxhostings/{domainName}{?domain_name}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**actual_size**: Used webspace size in MB",
            "**domain_name**: Domain name for the Linux hosting account.",
            "**ftp_enabled**: Indicates whether ftp is enabled for the hosting account.",
            "**ftp_username**: Ftp username",
            "**ip**: Linux hosting IP address",
            "**ip_type**: Type of the hosting IP address (dedicated or shared)",
            "**max_size**: Maximum webspace size in MB",
            "**max_webspace_size**: Maximum webspace size in MB<br />\r",
            "**mysql_database_names**: A list of mysql databases linked to the hosting account.<br />\r",
            "**php_version**: The active php version for the hosting account.",
            "**servicepack_id**: Id of Linux hosting service package.",
            "**sites**: A list of websites on the hosting account.",
            "**ssh_host**: Ssh host of the linux hosting account",
            "**ssh_username**: Ssh username",
            "**webspace_usage**: Used webspace size in MB<br />\r"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
