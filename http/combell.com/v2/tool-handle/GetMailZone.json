{
  "name": "GetMailZone",
  "description": "Get the mail zone.",
  "parameters": {
    "type": "object",
    "properties": {
      "domain_name": {
        "description": "Mail zone domain name.",
        "type": "string"
      },
      "domainName": {
        "type": "string",
        "description": "Automatically added"
      }
    },
    "required": [
      "domain_name",
      "domainName"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/v2/mailzones/{domainName}{?domain_name}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**aliases**: List of aliases on the mail zone<br />\r",
            [
              "**anti_spam**",
              {
                "$ul": [
                  "**allowed_types**: Allowed types of anti-spam scanning for this mail zone",
                  "**type**: Types of anti-spam scanning"
                ]
              }
            ],
            "**available_accounts**: List of mail zone accounts with their mailbox size.",
            [
              "**catch_all**",
              {
                "$ul": [
                  "**email_addresses**: E-mail addresses to which all e-mails are sent to inexistent mailboxes or aliases"
                ]
              }
            ],
            "**enabled**: Indicates whether the mail zone is enabled.",
            "**name**",
            "**smtp_domains**: List of extra smtp domains on the mail zone<br />\r"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
