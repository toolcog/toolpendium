{
  "name": "CreateHostHeader",
  "description": "Create a host header",
  "parameters": {
    "type": "object",
    "properties": {
      "domain_name": {
        "description": "Linux hosting domain name.",
        "type": "string"
      },
      "site_name": {
        "description": "Name of the site on the linux hosting.",
        "type": "string"
      },
      "domainName": {
        "type": "string",
        "description": "Automatically added"
      },
      "siteName": {
        "type": "string",
        "description": "Automatically added"
      },
      "body": {
        "$ref": "#/components/schemas/AddHostHeaderRequest",
        "description": "Add host header request"
      }
    },
    "required": [
      "domain_name",
      "site_name",
      "domainName",
      "siteName"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "/v2/linuxhostings/{domainName}/sites/{siteName}/hostheaders{?domain_name,site_name}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
