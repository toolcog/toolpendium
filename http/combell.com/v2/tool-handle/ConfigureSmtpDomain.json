{
  "name": "ConfigureSmtpDomain",
  "description": "Configure an extra smtp domain",
  "parameters": {
    "type": "object",
    "properties": {
      "domain_name": {
        "description": "Mail zone domain name.",
        "type": "string"
      },
      "hostname": {
        "description": "Smtp domain name.",
        "type": "string"
      },
      "domainName": {
        "type": "string",
        "description": "Automatically added"
      },
      "body": {
        "$ref": "#/components/schemas/UpdateSmtpDomainRequest",
        "description": "Contains the smtp domain information."
      }
    },
    "required": [
      "domain_name",
      "hostname",
      "domainName"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "/v2/mailzones/{domainName}/smtpdomains/{hostname}{?domain_name}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**validation_errors**: A list of validation errors that occurred when processing the request."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
