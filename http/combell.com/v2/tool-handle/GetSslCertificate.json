{
  "name": "GetSslCertificate",
  "description": "Detail of a SSL certificate",
  "parameters": {
    "type": "object",
    "properties": {
      "sha1_fingerprint": {
        "description": "The SHA-1 fingerprint of the certificate.",
        "type": "string"
      },
      "sha1Fingerprint": {
        "type": "string",
        "description": "Automatically added"
      }
    },
    "required": [
      "sha1_fingerprint",
      "sha1Fingerprint"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/v2/sslcertificates/{sha1Fingerprint}{?sha1_fingerprint}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**common_name**: The common name (e.g. domain.com) of the certificate.",
            "**expires_after**: The exact time the certificate will expire.",
            "**sha1_fingerprint**: The SHA-1 fingerprint of the certificate.<br />\r",
            "**subject_alt_names**: The list of all supported dns names in the certificate.",
            "**type**: The type of the certificate:\r",
            "**validation_level**: The validation level of the certificate:\r"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
