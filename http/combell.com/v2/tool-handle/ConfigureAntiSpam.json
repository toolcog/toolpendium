{
  "name": "ConfigureAntiSpam",
  "description": "Configure anti-spam for mail zone",
  "parameters": {
    "type": "object",
    "properties": {
      "domain_name": {
        "description": "Mail zone domain name.",
        "type": "string"
      },
      "domainName": {
        "type": "string",
        "description": "Automatically added"
      },
      "body": {
        "$ref": "#/components/schemas/UpdateAntiSpamRequest",
        "description": "Contains the anti-spam information."
      }
    },
    "required": [
      "domain_name",
      "domainName"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "/v2/mailzones/{domainName}/antispam{?domain_name}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
