{
  "name": "query",
  "description": "Accepts SQLite SQL query, returns JSON. Does not allow PRAGMA statements.",
  "parameters": {
    "type": "object",
    "properties": {
      "sql": {
        "type": "string",
        "description": "The SQL query to be executed"
      },
      "_shape": {
        "enum": [
          "array"
        ],
        "type": "string",
        "description": "The shape of the response data. Must be \"array\""
      }
    },
    "required": [
      "sql",
      "_shape"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://datasette.local/content.json{?sql,_shape}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
