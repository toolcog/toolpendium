{
  "name": "describe_index",
  "description": "Get a description of an index.",
  "parameters": {
    "type": "object",
    "properties": {
      "indexName": {
        "$ref": "#/$defs/IndexName"
      }
    },
    "required": [
      "indexName"
    ],
    "$defs": {
      "IndexName": {
        "description": "The unique name of an index.",
        "example": "example",
        "format": "IndexName",
        "maxLength": 45,
        "minLength": 1,
        "nullable": false,
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://controller.us-east1-gcp.pinecone.io/databases/{indexName}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**database**",
              {
                "$ul": [
                  "**dimension**: The number of dimensions in the vector representation",
                  "**metric**: The vector similarity metric of the index",
                  "**name**: The unique name of an index.",
                  "**pod_type**: The pod type",
                  "**pods**",
                  "**replicas**",
                  "**shards**"
                ]
              }
            ],
            [
              "**status**",
              {
                "$ul": [
                  "**host**",
                  "**port**",
                  "**ready**",
                  "**state**: The current status of a index."
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "500": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
