{
  "name": "create_collection",
  "description": "This operation creates a Pinecone collection.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/CollectionDefinition"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "CollectionDefinition": {
        "properties": {
          "name": {
            "$ref": "#/$defs/CollectionName"
          },
          "source": {
            "$ref": "#/$defs/IndexName"
          }
        },
        "required": [
          "name",
          "source"
        ],
        "type": "object"
      },
      "CollectionName": {
        "description": "The unique name of a collection.",
        "example": "example",
        "format": "CollectionName",
        "nullable": false,
        "type": "string"
      },
      "IndexName": {
        "description": "The unique name of an index.",
        "example": "example",
        "format": "IndexName",
        "maxLength": 45,
        "minLength": 1,
        "nullable": false,
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://controller.us-east1-gcp.pinecone.io/collections"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "400": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "409": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "500": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
