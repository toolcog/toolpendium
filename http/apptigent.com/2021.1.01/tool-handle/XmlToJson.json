{
  "name": "XmlToJson",
  "description": "Convert an XML string to a JSON object",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/inputXmlConversionJSON"
      }
    },
    "$defs": {
      "inputXmlConversionJSON": {
        "example": {
          "input": "<properties><property1>value</property1></properties>"
        },
        "properties": {
          "input": {
            "description": "XML string",
            "type": "string",
            "x-ms-summary": "Value"
          }
        },
        "required": [
          "input"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://connect.apptigent.com/api/utilities/XMLtoJSON"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**result**: Result"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**result**: Result"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
