{
  "name": "JsonToXml",
  "description": "Convert a JSON object to an XML string",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/inputJsonConversionXML"
      }
    },
    "$defs": {
      "inputJsonConversionXML": {
        "example": {
          "input": "{\"property1\":\"value\",\"property2\":\"value\",\"property3\":\"value\"}",
          "root": "Properties"
        },
        "properties": {
          "input": {
            "description": "JSON array object",
            "type": "string",
            "x-ms-summary": "Value"
          },
          "root": {
            "description": "Name of root node",
            "type": "string",
            "x-ms-summary": "Root Name"
          }
        },
        "required": [
          "input",
          "root"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://connect.apptigent.com/api/utilities/JSONtoXML"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**result**: Result"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**result**: Result"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
