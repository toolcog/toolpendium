  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://connect.apptigent.com/api/utilities/TextToSpeech"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "400": {
      "$encode": "markdown",
      "$block": [
