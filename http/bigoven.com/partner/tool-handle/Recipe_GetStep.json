{
  "name": "Recipe_GetStep",
  "description": "Gets recipe single step as text",
  "parameters": {
    "type": "object",
    "properties": {
      "userName": {
        "type": "string",
        "description": ""
      },
      "recipeId": {
        "format": "int32",
        "type": "integer",
        "description": ""
      },
      "stepId": {
        "format": "int32",
        "type": "integer",
        "description": ""
      }
    },
    "required": [
      "userName",
      "recipeId",
      "stepId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/get/saved/step{?userName,recipeId,stepId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
