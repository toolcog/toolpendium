{
  "name": "Review_GetReplies",
  "description": "Get a paged list of replies for a given review.",
  "parameters": {
    "type": "object",
    "properties": {
      "reviewId": {
        "type": "string",
        "description": ""
      },
      "pg": {
        "format": "int32",
        "type": "integer",
        "description": "the page (int), starting with 1"
      },
      "rpp": {
        "format": "int32",
        "type": "integer",
        "description": "results per page (int)"
      }
    },
    "required": [
      "reviewId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/review/{reviewId}/replies{?pg,rpp}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Comment**",
            "**CreationDate**",
            "**ID**",
            "**LastModified**",
            [
              "**Poster**",
              {
                "$ul": [
                  "**FirstName**",
                  "**LastName**",
                  "**PhotoUrl**",
                  "**UserID**",
                  "**UserName**"
                ]
              }
            ],
            "**ReviewID**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
