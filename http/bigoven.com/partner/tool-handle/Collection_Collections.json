{
  "name": "Collection_Collections",
  "description": "Get the list of current, seasonal recipe collections. From here, you can use the /collection/{id} endpoint to retrieve the recipes in those collections.",
  "parameters": {
    "type": "object",
    "properties": {
      "test": {
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/collections{?test}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Description**",
            "**ID**",
            "**IsFiltered**",
            "**IsSponsored**",
            "**MobileUrl**",
            "**PRO**",
            "**PhotoUrl**",
            "**Results**",
            "**Title**",
            "**Token**",
            "**WebUrl**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
