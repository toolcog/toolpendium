{
  "name": "Recipe_Categories",
  "description": "Get a list of recipe categories (the ID field can be used for include_cat in search parameters)",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/categories"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Category**",
            "**DefaultActiveMinutes**",
            "**DefaultTotalMinutes**",
            "**ID**",
            "**ParentID**",
            "**PrimaryImage**",
            "**ShortDescription**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
