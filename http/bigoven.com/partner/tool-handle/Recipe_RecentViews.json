{
  "name": "Recipe_RecentViews",
  "description": "Get a list of recipes that the authenticated user has most recently viewed",
  "parameters": {
    "type": "object",
    "properties": {
      "pg": {
        "format": "int32",
        "type": "integer",
        "description": "Page number starting with 1"
      },
      "rpp": {
        "format": "int32",
        "type": "integer",
        "description": "results per page"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/recipes/recentviews{?pg,rpp}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**date**",
            [
              "**recipeInfo**",
              {
                "$ul": [
                  "**Category**",
                  "**CreationDate**",
                  "**Cuisine**",
                  "**HasVideos**",
                  "**IsBookmark**",
                  "**IsPrivate**",
                  "**IsRecipeScan**",
                  "**Microcategory**",
                  "**PhotoUrl**",
                  [
                    "**Poster**",
                    {
                      "$ul": [
                        "**FirstName**",
                        "**LastName**",
                        "**PhotoUrl**",
                        "**UserID**",
                        "**UserName**"
                      ]
                    }
                  ],
                  "**RecipeID**",
                  "**ReviewCount**",
                  "**Servings**",
                  "**StarRating**",
                  "**Subcategory**",
                  "**Title**",
                  "**TotalTries**",
                  "**WebURL**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
