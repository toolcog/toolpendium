{
  "name": "Recipe_Related",
  "description": "Get recipes related to the given recipeId",
  "parameters": {
    "type": "object",
    "properties": {
      "recipeId": {
        "format": "int32",
        "type": "integer",
        "description": "The recipe id"
      },
      "pg": {
        "format": "int32",
        "type": "integer",
        "description": "The page"
      },
      "rpp": {
        "format": "int32",
        "type": "integer",
        "description": "The results per page"
      }
    },
    "required": [
      "recipeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/{recipeId}/related{?pg,rpp}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**ResultCount**",
            "**Results**",
            "**SpellSuggest**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
