{
  "name": "Collection_GetCollection",
  "description": "Gets a recipe collection. A recipe collection is a curated set of recipes.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int32",
        "type": "integer",
        "description": "the collection identifier"
      },
      "rpp": {
        "format": "int32",
        "type": "integer",
        "description": "results per page"
      },
      "pg": {
        "format": "int32",
        "type": "integer",
        "description": "page number (starting with 1)"
      },
      "test": {
        "type": "boolean",
        "description": ""
      },
      "sessionForLogging": {
        "type": "string",
        "description": ""
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/collection/{id}{?rpp,pg,test,sessionForLogging}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**ResultCount**",
            "**Results**",
            "**SpellSuggest**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
