{
  "name": "Review_PostReply",
  "description": "POST a reply to a given review. The date will be set by server. Note that replies no longer have star ratings, only top-level reviews do.",
  "parameters": {
    "type": "object",
    "properties": {
      "reviewId": {
        "type": "string",
        "description": ""
      },
      "body": {
        "$ref": "#/$defs/API2.Controllers.WebAPI.ReviewController.PostReplyReq"
      }
    },
    "required": [
      "reviewId",
      "body"
    ],
    "$defs": {
      "API2.Controllers.WebAPI.ReviewController.PostReplyReq": {
        "description": "Reply request parameters",
        "properties": {
          "Comment": {
            "description": "The comment. If mentioning any user(s) (optional), include them as @username in the text body. Do not use @ symbol for anything but mentioning @usernames.",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/review/{reviewId}/replies"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Comment**",
            "**CreationDate**",
            "**ID**",
            "**LastModified**",
            [
              "**Poster**",
              {
                "$ul": [
                  "**FirstName**",
                  "**LastName**",
                  "**PhotoUrl**",
                  "**UserID**",
                  "**UserName**"
                ]
              }
            ],
            "**ReviewID**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
