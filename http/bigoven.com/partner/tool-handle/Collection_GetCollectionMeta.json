{
  "name": "Collection_GetCollectionMeta",
  "description": "Gets a recipe collection metadata. A recipe collection is a curated set of recipes.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int32",
        "type": "integer",
        "description": "the collection identifier"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/collection/{id}/meta"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Description**",
            "**ID**",
            "**IsFiltered**",
            "**IsSponsored**",
            "**MobileUrl**",
            "**PRO**",
            "**PhotoUrl**",
            "**Results**",
            "**Title**",
            "**Token**",
            "**WebUrl**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
