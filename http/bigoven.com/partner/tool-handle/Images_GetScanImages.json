{
  "name": "Images_GetScanImages",
  "description": "Gets a list of RecipeScan images for the recipe. There will be at most 3 per recipe.",
  "parameters": {
    "type": "object",
    "properties": {
      "recipeId": {
        "format": "int32",
        "type": "integer",
        "description": "the recipe identifier (int)"
      }
    },
    "required": [
      "recipeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/{recipeId}/scans"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Caption**",
            "**CreationDate**",
            "**ImageID**",
            "**ImageSquares**",
            "**ImageURL**",
            "**ImageURL120**",
            "**ImageURL128**",
            "**ImageURL200**",
            "**ImageURL256**",
            "**ImageURL48**",
            "**ImageURL64**",
            "**IsPrimary**",
            "**MaxImageSquare**",
            [
              "**Poster**",
              {
                "$ul": [
                  "**FirstName**",
                  "**ImageUrl48**",
                  "**IsKitchenHelper**",
                  "**IsPremium**",
                  "**IsUsingRecurly**",
                  "**LastName**",
                  "**MemberSince**",
                  "**PhotoUrl**",
                  "**PhotoUrl48**",
                  "**PremiumExpiryDate**",
                  "**UserID**",
                  "**UserName**",
                  "**WebUrl**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
