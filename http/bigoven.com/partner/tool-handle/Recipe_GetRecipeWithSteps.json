{
  "name": "Recipe_GetRecipeWithSteps",
  "description": "Return full Recipe detail with steps. Returns 403 if the recipe is owned by someone else.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int32",
        "type": "integer",
        "description": "the Recipe ID to retrieve"
      },
      "prefetch": {
        "type": "boolean"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/steps/{id}{?prefetch}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**ActiveMinutes**",
            "**AdTags**",
            "**AdminBoost**",
            "**AllCategoriesText**",
            "**BookmarkImageURL**",
            "**BookmarkSiteLogo**",
            "**BookmarkURL**",
            "**Category**",
            "**Collection**",
            "**CollectionID**",
            "**CreationDate**",
            "**Cuisine**",
            "**Description**",
            "**FavoriteCount**",
            "**ImageSquares**",
            "**ImageURL**",
            "**Ingredients**",
            "**IngredientsTextBlock**",
            "**Instructions**",
            "**IsBookmark**",
            "**IsPrivate**",
            "**IsRecipeScan**",
            "**IsSponsored**",
            "**LastModified**",
            "**MaxImageSquare**",
            "**MedalCount**",
            "**MenuCount**",
            "**Microcategory**",
            "**NotesCount**",
            [
              "**NutritionInfo**",
              {
                "$ul": [
                  "**CaloriesFromFat**",
                  "**Cholesterol**",
                  "**CholesterolPct**",
                  "**DietaryFiber**",
                  "**DietaryFiberPct**",
                  "**MonoFat**",
                  "**PolyFat**",
                  "**Potassium**",
                  "**PotassiumPct**",
                  "**Protein**",
                  "**ProteinPct**",
                  "**SatFat**",
                  "**SatFatPct**",
                  "**SingularYieldUnit**",
                  "**Sodium**",
                  "**SodiumPct**",
                  "**Sugar**",
                  "**TotalCalories**",
                  "**TotalCarbs**",
                  "**TotalCarbsPct**",
                  "**TotalFat**",
                  "**TotalFatPct**",
                  "**TransFat**"
                ]
              }
            ],
            "**PhotoUrl**",
            [
              "**Poster**",
              {
                "$ul": [
                  "**FirstName**",
                  "**ImageUrl48**",
                  "**IsKitchenHelper**",
                  "**IsPremium**",
                  "**IsUsingRecurly**",
                  "**LastName**",
                  "**MemberSince**",
                  "**PhotoUrl**",
                  "**PhotoUrl48**",
                  "**PremiumExpiryDate**",
                  "**UserID**",
                  "**UserName**",
                  "**WebUrl**"
                ]
              }
            ],
            "**PrimaryIngredient**",
            "**RecipeID**",
            "**ReviewCount**",
            "**StarRating**",
            "**Steps**",
            "**Subcategory**",
            "**Title**",
            "**TotalMinutes**",
            "**VariantOfRecipeID**",
            "**VerifiedByClass**",
            "**VerifiedDateTime**",
            "**WebURL**",
            "**YieldNumber**",
            "**YieldUnit**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
