{
  "name": "Recipe_GetSteps",
  "description": "Stores recipe step number and returns saved step data",
  "parameters": {
    "type": "object",
    "properties": {
      "userName": {
        "type": "string",
        "description": ""
      },
      "recipeId": {
        "format": "int32",
        "type": "integer",
        "description": ""
      },
      "stepId": {
        "format": "int32",
        "type": "integer",
        "description": ""
      }
    },
    "required": [
      "userName",
      "recipeId",
      "stepId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/post/step{?userName,recipeId,stepId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Data**",
            "**Message**",
            "**StatusCode**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
