{
  "name": "Review_Post",
  "description": "Add a new review. Only one review can be provided per {userId, recipeId} pair. Otherwise your review will be updated.",
  "parameters": {
    "type": "object",
    "properties": {
      "recipeId": {
        "format": "int32",
        "type": "integer",
        "description": ""
      },
      "body": {
        "$ref": "#/$defs/API2.Controllers.WebAPI.ReviewController.ReviewRequest"
      }
    },
    "required": [
      "recipeId",
      "body"
    ],
    "$defs": {
      "API2.Controllers.WebAPI.ReviewController.ReviewRequest": {
        "description": "Payload for reviews",
        "properties": {
          "ActiveMinutes": {
            "description": "How many minutes of ACTIVE time (i.e., actively working on the recipe, not waiting for rising, baking, etc.) did it \r\n            demand of the cook? Optional.",
            "format": "int32",
            "type": "integer"
          },
          "Comment": {
            "description": "The notes",
            "type": "string"
          },
          "MakeAgain": {
            "description": "\"yes\" or \"no\"",
            "type": "string"
          },
          "StarRating": {
            "description": "1, 2, 3, 4, or 5",
            "format": "int32",
            "type": "integer"
          },
          "TotalMinutes": {
            "description": "How long, start to finish, in minutes (integer) did it take? Optional.",
            "format": "int32",
            "type": "integer"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/{recipeId}/review"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
