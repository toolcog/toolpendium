{
  "name": "Note_Post",
  "description": "HTTP POST a new note into the system.",
  "parameters": {
    "type": "object",
    "properties": {
      "recipeId": {
        "format": "int32",
        "type": "integer",
        "description": "recipeId (int)"
      },
      "body": {
        "$ref": "#/components/schemas/API2.Controllers.WebAPI.NoteController.NoteRequest",
        "description": "a recipe note, with fields: Date (YYYY-MM-DD string), Notes (string), People (string), Variations (string), RecipeID (int?)"
      }
    },
    "required": [
      "recipeId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api2.bigoven.com/recipe/{recipeId}/note"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**CreationDate**",
            "**Date**",
            "**DateDT**",
            "**GUID**",
            "**ID**",
            "**Notes**",
            "**People**",
            "**RecipeID**",
            "**UserID**",
            "**Variations**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
