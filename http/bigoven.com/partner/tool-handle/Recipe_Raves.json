{
  "name": "Recipe_Raves",
  "description": "Get the recipe/comment tuples for those recipes with 4 or 5 star ratings",
  "parameters": {
    "type": "object",
    "properties": {
      "pg": {
        "format": "int32",
        "type": "integer",
        "description": "page, starting with 1"
      },
      "rpp": {
        "format": "int32",
        "type": "integer",
        "description": "results per page"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api2.bigoven.com/recipes/raves{?pg,rpp}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**RecipeInfo**",
              {
                "$ul": [
                  "**Category**",
                  "**CreationDate**",
                  "**Cuisine**",
                  "**HasVideos**",
                  "**IsBookmark**",
                  "**IsPrivate**",
                  "**IsRecipeScan**",
                  "**Microcategory**",
                  "**PhotoUrl**",
                  [
                    "**Poster**",
                    {
                      "$ul": [
                        "**FirstName**",
                        "**LastName**",
                        "**PhotoUrl**",
                        "**UserID**",
                        "**UserName**"
                      ]
                    }
                  ],
                  "**RecipeID**",
                  "**ReviewCount**",
                  "**Servings**",
                  "**StarRating**",
                  "**Subcategory**",
                  "**Title**",
                  "**TotalTries**",
                  "**WebURL**"
                ]
              }
            ],
            [
              "**Review**",
              {
                "$ul": [
                  "**ActiveMinutes**",
                  "**Comment**",
                  "**CreationDate**",
                  [
                    "**FeaturedReply**",
                    {
                      "$ul": [
                        "**Comment**",
                        "**CreationDate**",
                        "**ID**",
                        "**LastModified**",
                        [
                          "**Poster**",
                          {
                            "$ul": [
                              "**FirstName**",
                              "**LastName**",
                              "**PhotoUrl**",
                              "**UserID**",
                              "**UserName**"
                            ]
                          }
                        ],
                        "**ReviewID**"
                      ]
                    }
                  ],
                  "**GUID**",
                  "**ID**",
                  "**LastModified**",
                  "**ParentID**",
                  [
                    "**Poster**",
                    {
                      "$ul": [
                        "**FirstName**",
                        "**ImageUrl48**",
                        "**IsKitchenHelper**",
                        "**IsPremium**",
                        "**IsUsingRecurly**",
                        "**LastName**",
                        "**MemberSince**",
                        "**PhotoUrl**",
                        "**PhotoUrl48**",
                        "**PremiumExpiryDate**",
                        "**UserID**",
                        "**UserName**",
                        "**WebUrl**"
                      ]
                    }
                  ],
                  "**Replies**",
                  "**ReplyCount**",
                  "**ReviewID**",
                  "**StarRating**",
                  "**TotalMinutes**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
