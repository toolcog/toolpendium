{
  "name": "getCallsCount",
  "description": "Get calls count",
  "parameters": {
    "type": "object",
    "properties": {
      "fromDate": {
        "type": "integer",
        "description": "Return calls that occurred after this point in time"
      },
      "toDate": {
        "type": "integer",
        "description": "Return calls that occurred before this point in time"
      },
      "direction": {
        "enum": [
          "INBOUND",
          "OUTBOUND"
        ],
        "example": "INBOUND,OUTBOUND",
        "type": "string",
        "description": "Filter by call direction. For multiple criteria, seperate values by a comma."
      },
      "states": {
        "default": "ACTIVE",
        "enum": [
          "INITIALIZING",
          "RINGING",
          "ACTIVE",
          "HELD",
          "REMOTE_HELD"
        ],
        "example": "ACTIVE,RINGING",
        "type": "string",
        "description": "Filter calls by state. For multiple criteria, seperate values by a comma."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.vonage.com/t/vbc.prod/vis/v1/self/calls/count{?fromDate,toDate,direction,states}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**count**: Number of events found"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
