{
  "name": "create-asset-playback-id",
  "description": "Creates a playback ID that can be used to stream the asset to a viewer.",
  "parameters": {
    "type": "object",
    "properties": {
      "ASSET_ID": {
        "type": "string",
        "description": "The asset ID."
      },
      "body": {
        "$ref": "#/$defs/CreatePlaybackIDRequest"
      }
    },
    "required": [
      "ASSET_ID",
      "body"
    ],
    "$defs": {
      "CreatePlaybackIDRequest": {
        "properties": {
          "policy": {
            "$ref": "#/$defs/PlaybackPolicy"
          }
        },
        "type": "object"
      },
      "PlaybackPolicy": {
        "description": "* `public` playback IDs are accessible by constructing an HLS URL like `https://stream.mux.com/${PLAYBACK_ID}`\n\n* `signed` playback IDs should be used with tokens `https://stream.mux.com/${PLAYBACK_ID}?token={TOKEN}`. See [Secure video playback](https://docs.mux.com/guides/video/secure-video-playback) for details about creating tokens.\n",
        "enum": [
          "public",
          "signed"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.mux.com/video/v1/assets/{ASSET_ID}/playback-ids"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**id**: Unique identifier for the PlaybackID",
                  "**policy**: * `public` playback IDs are accessible by constructing an HLS URL like `https://stream.mux.com/${PLAYBACK_ID}`"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
