{
  "name": "list-incidents",
  "description": "Returns a list of incidents.",
  "parameters": {
    "type": "object",
    "properties": {
      "limit": {
        "default": 25,
        "format": "int32",
        "type": "integer",
        "description": "Number of items to include in the response"
      },
      "page": {
        "default": 1,
        "format": "int32",
        "type": "integer",
        "description": "Offset by this many pages, of the size of `limit`"
      },
      "order_by": {
        "enum": [
          "negative_impact",
          "value",
          "views",
          "field"
        ],
        "type": "string",
        "description": "Value to order the results by"
      },
      "order_direction": {
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string",
        "description": "Sort order."
      },
      "status": {
        "enum": [
          "open",
          "closed",
          "expired"
        ],
        "type": "string",
        "description": "Status to filter incidents by"
      },
      "severity": {
        "enum": [
          "warning",
          "alert"
        ],
        "type": "string",
        "description": "Severity to filter incidents by"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.mux.com/data/v1/incidents{?limit,page,order_by,order_direction,status,severity}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            "**timeframe**",
            "**total_row_count**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
