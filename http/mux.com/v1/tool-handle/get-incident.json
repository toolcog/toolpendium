{
  "name": "get-incident",
  "description": "Returns the details of an incident.",
  "parameters": {
    "type": "object",
    "properties": {
      "INCIDENT_ID": {
        "type": "string",
        "description": "ID of the Incident"
      }
    },
    "required": [
      "INCIDENT_ID"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.mux.com/data/v1/incidents/{INCIDENT_ID}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**affected_views**",
                  "**affected_views_per_hour**",
                  "**affected_views_per_hour_on_open**",
                  "**breakdowns**",
                  "**description**",
                  "**error_description**",
                  "**id**",
                  "**impact**",
                  "**incident_key**",
                  "**measured_value**",
                  "**measured_value_on_close**",
                  "**measurement**",
                  "**notification_rules**",
                  "**notifications**",
                  "**resolved_at**",
                  "**sample_size**",
                  "**sample_size_unit**",
                  "**severity**",
                  "**started_at**",
                  "**status**",
                  "**threshold**"
                ]
              }
            ],
            "**timeframe**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
