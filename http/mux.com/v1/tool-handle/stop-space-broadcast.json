{
  "name": "stop-space-broadcast",
  "description": "Stops broadcasting a space, causing the destination live stream to become idle. This API also automatically calls `complete` on the destination live stream.\nBroadcasts are also automatically stopped when a space becomes idle.",
  "parameters": {
    "type": "object",
    "properties": {
      "SPACE_ID": {
        "type": "string",
        "description": "The space ID."
      },
      "BROADCAST_ID": {
        "type": "string",
        "description": "The broadcast ID."
      }
    },
    "required": [
      "SPACE_ID",
      "BROADCAST_ID"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.mux.com/video/v1/spaces/{SPACE_ID}/broadcasts/{BROADCAST_ID}/stop"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
