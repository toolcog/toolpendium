{
  "name": "get-asset-playback-id",
  "description": "Retrieves information about the specified playback ID.",
  "parameters": {
    "type": "object",
    "properties": {
      "ASSET_ID": {
        "type": "string",
        "description": "The asset ID."
      },
      "PLAYBACK_ID": {
        "type": "string",
        "description": "The live stream's playback ID."
      }
    },
    "required": [
      "ASSET_ID",
      "PLAYBACK_ID"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.mux.com/video/v1/assets/{ASSET_ID}/playback-ids/{PLAYBACK_ID}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**id**: Unique identifier for the PlaybackID",
                  "**policy**: * `public` playback IDs are accessible by constructing an HLS URL like `https://stream.mux.com/${PLAYBACK_ID}`"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
