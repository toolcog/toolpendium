{
  "name": "retrieveSentryRiskDataById",
  "description": "Retrieves Sentry Near Earth Object by ID",
  "parameters": {
    "type": "object",
    "properties": {
      "asteroid_id": {
        "type": "string",
        "description": "ID of NearEarth object.  ID can be SPK_ID, Asteroid des (designation) or Sentry ID"
      }
    },
    "required": [
      "asteroid_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://www.neowsapp.com//rest/v1/neo/sentry/{asteroid_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Palermo_scale_max**",
            "**absolute_magnitude**",
            "**average_lunar_distance**",
            "**designation**",
            "**estimated_diameter**",
            "**fullname**",
            "**impact_probability**",
            "**is_active_sentry_object**",
            "**last_obs**",
            "**last_obs_jd**",
            "**palermo_scale_ave**",
            "**potential_impacts**",
            "**removal_date**",
            "**sentryId**",
            "**torino_scale**",
            "**v_infinity**",
            "**year_range_max**",
            "**year_range_min**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
