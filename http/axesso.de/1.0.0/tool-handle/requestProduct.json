{
  "name": "requestProduct",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "url": {
        "type": "string",
        "description": "The url of the requested product."
      },
      "size": {
        "type": "string",
        "description": "Size parameter if available."
      }
    },
    "required": [
      "url"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://api.axesso.de/amz/amazon-lookup-product{?url,size}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**answeredQuestions**",
            "**asin**",
            "**countReview**",
            "**features**",
            "**fulfilledBy**",
            "**manufacturer**",
            "**price**",
            "**priceSaving**",
            "**priceShippingInformation**",
            "**prime**",
            "**productRating**",
            "**productTitle**",
            "**responseMessage**",
            "**responseStatus**",
            "**retailPrice**",
            "**sizeSelection**",
            "**soldBy**",
            "**warehouseAvailability**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
