{
  "name": "keywordSearch",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "keyword": {
        "type": "string",
        "description": "keyword to search"
      },
      "domainCode": {
        "type": "string",
        "description": "domain for the search"
      },
      "sortBy": {
        "default": "relevanceblender",
        "type": "string",
        "description": "sort option"
      },
      "numberOfProducts": {
        "default": "20",
        "type": "integer",
        "description": "number of the results (max 20)"
      }
    },
    "required": [
      "keyword",
      "domainCode"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://api.axesso.de/amz/amazon-search-by-keyword{?keyword,domainCode,sortBy,numberOfProducts}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**domainCode**",
            "**foundProducts**",
            "**keyword**",
            "**numberOfProducts**",
            "**responseMessage**",
            "**responseStatus**",
            "**sortStrategy**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
