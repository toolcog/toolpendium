{
  "name": "sendInvitations_1",
  "description": "Sends invitations to Vendor Portal.",
  "parameters": {
    "type": "object",
    "properties": {
      "providerId": {
        "format": "int64",
        "type": "integer",
        "description": "provider's internal identifier"
      }
    },
    "required": [
      "providerId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/providers/{providerId}/notification/invitation"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**alreadyRegisteredPersonsCount**",
            "**invitedPersonsCount**",
            "**providersWithAlreadyRegisteredPersonCount**",
            "**providersWithInvitedPersonCount**",
            "**providersWithoutPersonCount**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
