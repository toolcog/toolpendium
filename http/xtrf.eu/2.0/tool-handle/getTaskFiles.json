{
  "name": "getTaskFiles",
  "description": "Returns several lists of files for a given task: input files divided by type, output files, bundles, files per job, preview files.",
  "parameters": {
    "type": "object",
    "properties": {
      "taskId": {
        "type": "string",
        "description": "task's internal identifier"
      }
    },
    "required": [
      "taskId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/tasks/{taskId}/files"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**bundles**",
            [
              "**inputFiles**",
              {
                "$ul": [
                  "**logFiles**",
                  "**referenceFiles**",
                  "**terminology**",
                  "**tm**",
                  "**workFiles**"
                ]
              }
            ],
            "**jobs**",
            "**outputFiles**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
