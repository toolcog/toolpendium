{
  "name": "getById",
  "description": "Returns client invoice details.",
  "parameters": {
    "type": "object",
    "properties": {
      "invoiceId": {
        "format": "int64",
        "type": "integer",
        "description": "client invoice's internal identifier"
      },
      "embed": {
        "type": "string",
        "description": "list of adittional fields which should be embedded in the response (ie. tasks)"
      }
    },
    "required": [
      "invoiceId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/accounting/customers/invoices/{invoiceId}{?embed}"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**currencyId**",
            [
              "**customerDetails**",
              {
                "$ul": [
                  "**addressLine**",
                  "**city**",
                  "**country**",
                  "**countryId**",
                  "**name**",
                  "**postalCode**",
                  "**vatUE**"
                ]
              }
            ],
            "**customerId**",
            [
              "**dates**",
              {
                "$ul": [
                  [
                    "**draftDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ],
                  [
                    "**finalDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ],
                  [
                    "**invoiceDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ],
                  [
                    "**paymentDueDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**id**",
            "**invoiceNumber**",
            "**paymentMethodId**",
            [
              "**paymentTerms**",
              {
                "$ul": [
                  "**description**",
                  "**name**"
                ]
              }
            ],
            "**status**",
            "**tasks**",
            "**tasksValue**",
            "**totalGross**",
            "**totalInWords**",
            "**totalNetto**",
            "**type**",
            "**vatCalculationRule**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
