{
  "name": "create_2",
  "description": "Creates a new person. Required fields are presented in the example. Other fields (from PUT) may also be specified here.",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/customers/persons"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "CustomerPerson",
        "**Key properties:**",
        {
          "$ul": [
            "**active**",
            [
              "**contact**",
              {
                "$ul": [
                  [
                    "**emails**: emails",
                    {
                      "$ul": [
                        "**additional**: additional e-mails addresses",
                        "**primary**: primary e-mail"
                      ]
                    }
                  ],
                  "**fax**: fax number",
                  "**phones**: phones' numbers",
                  "**sms**: mobile phone for which SMS notifications will be sent (if configured)"
                ]
              }
            ],
            [
              "**customFields**",
              {
                "$ul": [
                  "**customFields**",
                  "**empty**"
                ]
              }
            ],
            "**customerId**",
            "**firstProjectDate**",
            "**firstQuoteDate**",
            "**gender**",
            "**id**",
            "**lastName**",
            "**lastProjectDate**",
            "**lastQuoteDate**",
            "**motherTonguesIds**",
            "**name**",
            "**numberOfProjects**",
            "**numberOfQuotes**",
            "**positionId**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
