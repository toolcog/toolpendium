{
  "name": "create_6",
  "description": "Creates a new Smart Project. If the specified service ID refers to Classic Project, 400 Bad Request is returned instead.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/ProjectCreateDTO"
      }
    },
    "$defs": {
      "ProjectCreateDTO": {
        "properties": {
          "clientId": {
            "format": "int64",
            "type": "integer"
          },
          "externalId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "serviceId": {
            "format": "int64",
            "type": "integer"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/v2/projects"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**budgetCode**",
            "**categoryIds**",
            "**clientDeadline**",
            "**clientId**",
            "**clientNotes**",
            "**clientReferenceNumber**",
            [
              "**documents**",
              {
                "$ul": [
                  "**projectConfirmationStatus**"
                ]
              }
            ],
            "**id**",
            "**instructionsForAllJobs**",
            "**internalNotes**",
            "**isClassicProject**",
            [
              "**languages**",
              {
                "$ul": [
                  "**languageCombinations**",
                  "**sourceLanguageId**",
                  "**specializationId**",
                  "**targetLanguageIds**"
                ]
              }
            ],
            "**name**",
            "**orderedOn**",
            "**origin**",
            [
              "**people**",
              {
                "$ul": [
                  "**projectManagerId**"
                ]
              }
            ],
            "**projectId**",
            "**projectIdNumber**",
            "**quoteIdNumber**",
            "**serviceId**",
            "**status**",
            [
              "**volume**",
              {
                "$ul": [
                  "**unitId**",
                  "**value**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
