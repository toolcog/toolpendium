{
  "name": "selectViewAndGetItsDetails",
  "description": "Selects given view as current and returns its detailed information, suitable for browser.",
  "parameters": {
    "type": "object",
    "properties": {
      "className": {
        "type": "string",
        "description": "views' class name"
      },
      "place name (denotes specific place in system with the table)": {
        "default": "default",
        "type": "string"
      },
      "viewId": {
        "format": "int64",
        "type": "integer"
      }
    },
    "required": [
      "className",
      "viewId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/browser/views/details/for/{className}/{viewId}{?place name (denotes specific place in system with the table)}"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**access**",
              {
                "$ul": [
                  "**change**",
                  "**delete**"
                ]
              }
            ],
            "**actions**",
            [
              "**filter**",
              {
                "$ul": [
                  "**properties**"
                ]
              }
            ],
            [
              "**view**",
              {
                "$ul": [
                  "**columns**",
                  [
                    "**order**",
                    {
                      "$ul": [
                        "**column**",
                        "**type**"
                      ]
                    }
                  ],
                  [
                    "**permissions**",
                    {
                      "$ul": [
                        "**sharedGroups**"
                      ]
                    }
                  ],
                  [
                    "**settings**",
                    {
                      "$ul": [
                        [
                          "**local**",
                          {
                            "$ul": [
                              "**maxLinesInRow**",
                              "**maxRows**"
                            ]
                          }
                        ],
                        "**name**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**viewId**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
