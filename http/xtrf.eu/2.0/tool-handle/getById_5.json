{
  "name": "getById_5",
  "description": "Returns provider details.",
  "parameters": {
    "type": "object",
    "properties": {
      "providerId": {
        "format": "int64",
        "type": "integer",
        "description": "provider's internal identifier"
      },
      "embed": {
        "type": "string",
        "description": "list of adittional fields which should be embedded in the response (ie. persons)"
      }
    },
    "required": [
      "providerId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/providers/{providerId}{?embed}"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**billingAddress**",
              {
                "$ul": [
                  "**addressLine1**: first line of address",
                  "**addressLine2**: second line of address",
                  "**city**: city",
                  "**countryId**: country",
                  "**postalCode**: postal code",
                  "**provinceId**: province",
                  "**sameAsBillingAddress**: should billing address be used instead of this one"
                ]
              }
            ],
            "**branchId**",
            [
              "**competencies**",
              {
                "$ul": [
                  "**languageCombinations**"
                ]
              }
            ],
            [
              "**contact**",
              {
                "$ul": [
                  [
                    "**emails**: emails",
                    {
                      "$ul": [
                        "**additional**: additional e-mails addresses",
                        "**cc**: e-mails which will be included in the CC list",
                        "**primary**: primary e-mail"
                      ]
                    }
                  ],
                  "**fax**: fax number",
                  "**phones**: phones' numbers",
                  "**sms**: mobile phone for which SMS notifications will be sent (if configured)",
                  "**websites**: websites"
                ]
              }
            ],
            [
              "**correspondenceAddress**",
              {
                "$ul": [
                  "**addressLine1**: first line of address",
                  "**addressLine2**: second line of address",
                  "**city**: city",
                  "**countryId**: country",
                  "**postalCode**: postal code",
                  "**provinceId**: province",
                  "**sameAsBillingAddress**: should billing address be used instead of this one"
                ]
              }
            ],
            [
              "**customFields**",
              {
                "$ul": [
                  "**customFields**",
                  "**empty**"
                ]
              }
            ],
            "**fullName**",
            "**id**",
            "**idNumber**",
            "**leadSourceId**",
            "**name**",
            "**notes**",
            "**persons**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
