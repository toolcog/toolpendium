{
  "name": "getJobDetails",
  "description": "Returns job details by jobId.",
  "parameters": {
    "type": "object",
    "properties": {
      "jobId": {
        "type": "string",
        "description": "job's internal identifier"
      }
    },
    "required": [
      "jobId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/jobs/{jobId}"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**communication**",
              {
                "$ul": [
                  "**instructionsForAllJobs**",
                  "**instructionsForJob**",
                  "**noteFromVendor**"
                ]
              }
            ],
            [
              "**dates**",
              {
                "$ul": [
                  "**actualEndDate**",
                  "**actualStartDate**",
                  "**deadline**",
                  "**startDate**"
                ]
              }
            ],
            [
              "**documents**",
              {
                "$ul": [
                  "**purchaseOrderStatus**"
                ]
              }
            ],
            [
              "**files**",
              {
                "$ul": [
                  "**deliveredInJobFiles**",
                  "**sharedReferenceFiles**",
                  "**sharedWorkFiles**"
                ]
              }
            ],
            "**id**",
            "**idNumber**",
            "**languages**",
            "**name**",
            "**status**",
            "**stepNumber**",
            [
              "**stepType**",
              {
                "$ul": [
                  "**id**",
                  "**jobTypeId**",
                  "**name**",
                  [
                    "**semantics**",
                    {
                      "$ul": [
                        "**canVerifyFiles**",
                        "**isScripted**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**vendorId**",
            "**vendorPriceProfileId**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
