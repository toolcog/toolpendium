{
  "name": "updatePayable_3",
  "description": "Updates a payable.",
  "parameters": {
    "type": "object",
    "properties": {
      "quoteId": {
        "type": "string",
        "description": "quote's internal identifier"
      },
      "payableId": {
        "format": "int64",
        "type": "integer",
        "description": "payable's internal identifier"
      },
      "body": {
        "$ref": "#/$defs/PayableDTO"
      }
    },
    "required": [
      "quoteId",
      "payableId",
      "body"
    ],
    "$defs": {
      "PayableDTO": {
        "properties": {
          "calculationUnitId": {
            "format": "int64",
            "type": "integer"
          },
          "currencyId": {
            "format": "int64",
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "id": {
            "format": "int64",
            "type": "integer"
          },
          "ignoreMinimumCharge": {
            "type": "boolean"
          },
          "invoiceId": {
            "type": "string"
          },
          "jobId": {
            "type": "object"
          },
          "jobTypeId": {
            "format": "int64",
            "type": "integer"
          },
          "languageCombination": {
            "$ref": "#/$defs/ChargeLanguageCombinationDTO"
          },
          "languageCombinationIdNumber": {
            "type": "string"
          },
          "minimumCharge": {
            "type": "number"
          },
          "quantity": {
            "type": "number"
          },
          "rate": {
            "type": "number"
          },
          "rateOrigin": {
            "enum": [
              "PRICE_PROFILE",
              "PRICE_LIST",
              "FILLED_MANUALLY",
              "AUTOCALCULATED"
            ],
            "type": "string"
          },
          "total": {
            "type": "number"
          },
          "type": {
            "enum": [
              "SIMPLE",
              "CAT"
            ],
            "type": "string"
          }
        },
        "type": "object"
      },
      "ChargeLanguageCombinationDTO": {
        "properties": {
          "sourceLanguageId": {
            "format": "int64",
            "type": "integer"
          },
          "targetLanguageId": {
            "format": "int64",
            "type": "integer"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/v2/quotes/{quoteId}/finance/payables/{payableId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**calculationUnitId**",
            "**currencyId**",
            "**description**",
            "**id**",
            "**ignoreMinimumCharge**",
            "**invoiceId**",
            "**jobId**",
            "**jobTypeId**",
            [
              "**languageCombination**",
              {
                "$ul": [
                  "**sourceLanguageId**",
                  "**targetLanguageId**"
                ]
              }
            ],
            "**languageCombinationIdNumber**",
            "**minimumCharge**",
            "**quantity**",
            "**rate**",
            "**rateOrigin**",
            "**total**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
