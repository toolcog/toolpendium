{
  "name": "getJobs",
  "description": "Returns list of jobs in a project.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "type": "string",
        "description": "project's internal identifier"
      }
    },
    "required": [
      "projectId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/v2/projects/{projectId}/jobs"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**communication**",
              {
                "$ul": [
                  "**instructionsForAllJobs**",
                  "**instructionsForJob**",
                  "**noteFromVendor**"
                ]
              }
            ],
            [
              "**dates**",
              {
                "$ul": [
                  "**actualEndDate**",
                  "**actualStartDate**",
                  "**deadline**",
                  "**startDate**"
                ]
              }
            ],
            [
              "**documents**",
              {
                "$ul": [
                  "**purchaseOrderStatus**"
                ]
              }
            ],
            [
              "**files**",
              {
                "$ul": [
                  "**deliveredInJobFiles**",
                  "**sharedReferenceFiles**",
                  "**sharedWorkFiles**"
                ]
              }
            ],
            "**id**",
            "**idNumber**",
            "**languages**",
            "**name**",
            "**status**",
            "**stepNumber**",
            [
              "**stepType**",
              {
                "$ul": [
                  "**id**",
                  "**jobTypeId**",
                  "**name**",
                  [
                    "**semantics**",
                    {
                      "$ul": [
                        "**canVerifyFiles**",
                        "**isScripted**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**vendorId**",
            "**vendorPriceProfileId**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
