{
  "name": "getViewsBrief",
  "description": "Returns views' brief.",
  "parameters": {
    "type": "object",
    "properties": {
      "className": {
        "type": "string",
        "description": "views' class name"
      },
      "placeName": {
        "default": "default",
        "type": "string",
        "description": "place name (denotes specific place in system with the table)"
      }
    },
    "required": [
      "className"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/browser/views/for/{className}{?placeName}"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**access**",
              {
                "$ul": [
                  "**change**",
                  "**delete**"
                ]
              }
            ],
            "**list**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
