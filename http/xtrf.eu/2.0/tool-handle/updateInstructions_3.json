    "type": "object",
    "properties": {
      "taskId": {
        "type": "string",
        "description": "task's internal identifier"
      },
      "body": {
        "$ref": "#/components/schemas/InstructionsDTO",
        "description": "Updated instructions of a given task."
      }
    },
    "required": [
      "taskId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
