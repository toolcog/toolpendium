            "**fromCustomer**",
            "**internal**",
            "**notes**",
            "**paymentNoteForCustomer**",
            "**paymentNoteForVendor**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
