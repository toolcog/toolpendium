{
  "name": "getAll_2",
  "description": "Lists all vendor invoices in all statuses (including not ready and drafts) that have been updated since a specific date.",
  "parameters": {
    "type": "object",
    "properties": {
      "updatedSince": {
        "format": "int64",
        "type": "integer",
        "description": "only vendor invoices modified since this timestamp"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/accounting/providers/invoices{?updatedSince}"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**currencyId**",
            [
              "**dates**",
              {
                "$ul": [
                  [
                    "**draftDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ],
                  [
                    "**finalDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ],
                  [
                    "**invoiceUploadedDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ],
                  [
                    "**paymentDueDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**draftNumber**",
            "**finalNumber**",
            "**id**",
            "**internalNumber**",
            "**jobsNetValue**",
            "**notesFromProvider**",
            "**paymentStatus**",
            "**providerId**",
            "**status**",
            "**totalGross**",
            "**totalGrossInWords**",
            "**totalNetto**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
