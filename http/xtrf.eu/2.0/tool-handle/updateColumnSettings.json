{
  "name": "updateColumnSettings",
  "description": "Updates column's specific settings. For example when column describes money amount we can decide whether it should display currency or not.",
  "parameters": {
    "type": "object",
    "properties": {
      "viewId": {
        "format": "int64",
        "type": "integer",
        "description": "view's identifier"
      },
      "columnName": {
        "type": "string",
        "description": "column's name"
      },
      "body": {
        "type": "object",
        "description": "Updated column's specific settings."
      }
    },
    "required": [
      "viewId",
      "columnName",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/browser/views/{viewId}/columns/{columnName}/settings"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
