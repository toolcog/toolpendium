{
  "name": "getFiles",
  "description": "Returns list of files in a project. Only files added to the project (i.e. files that have assigned category and languages) are listed.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "type": "string",
        "description": "project's internal identifier"
      }
    },
    "required": [
      "projectId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/v2/projects/{projectId}/files"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**addedBy**",
              {
                "$ul": [
                  "**userType**",
                  "**vendorId**"
                ]
              }
            ],
            "**addedInJob**",
            "**addedInLastStep**",
            "**addedInStep**",
            "**categoryKey**",
            "**id**",
            "**isAccepted**",
            "**isLink**",
            "**isRemote**",
            [
              "**languageRelation**",
              {
                "$ul": [
                  "**languageCombinations**",
                  "**languages**"
                ]
              }
            ],
            "**lastModifiedOn**",
            "**name**",
            [
              "**remoteCATToolReferences**",
              {
                "$ul": [
                  "**catResourceId**",
                  "**catToolDocumentId**",
                  "**editorUrl**"
                ]
              }
            ],
            "**sharedWithJobs**",
            "**size**",
            "**url**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
