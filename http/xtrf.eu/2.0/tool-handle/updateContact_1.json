{
  "name": "updateContact_1",
  "description": "Updates contact of a given client.",
  "parameters": {
    "type": "object",
    "properties": {
      "customerId": {
        "format": "int64",
        "type": "integer",
        "description": "client's internal identifier"
      },
      "body": {
        "$ref": "#/components/schemas/ContactDTO",
        "description": "Updated contact of a given client."
      }
    },
    "required": [
      "customerId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/customers/{customerId}/contact"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**emails**: emails",
              {
                "$ul": [
                  "**additional**: additional e-mails addresses",
                  "**cc**: e-mails which will be included in the CC list",
                  "**primary**: primary e-mail"
                ]
              }
            ],
            "**fax**: fax number",
            "**phones**: phones' numbers",
            "**sms**: mobile phone for which SMS notifications will be sent (if configured)",
            "**websites**: websites"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
