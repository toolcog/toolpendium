{
  "name": "update",
  "description": "Updates all view's information (ie. name, columns, filters, etc).",
  "parameters": {
    "type": "object",
    "properties": {
      "viewId": {
        "format": "int64",
        "type": "integer",
        "description": "view's identifier"
      }
    },
    "required": [
      "viewId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/browser/views/{viewId}"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**columns**",
            [
              "**order**",
              {
                "$ul": [
                  "**column**",
                  "**type**"
                ]
              }
            ],
            [
              "**permissions**",
              {
                "$ul": [
                  "**sharedGroups**"
                ]
              }
            ],
            [
              "**settings**",
              {
                "$ul": [
                  [
                    "**local**",
                    {
                      "$ul": [
                        "**maxLinesInRow**",
                        "**maxRows**"
                      ]
                    }
                  ],
                  "**name**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
