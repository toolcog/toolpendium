{
  "name": "update_2",
  "description": "Only specified fields will be changed (id is required). One may not specify embeddable fields here - use separate API calls for updating them.",
  "parameters": {
    "type": "object",
    "properties": {
      "customerId": {
        "format": "int64",
        "type": "integer",
        "description": "client's internal identifier"
      },
      "body": {
        "$ref": "#/components/schemas/CustomerDTO",
        "description": "Updated client"
      }
    },
    "required": [
      "customerId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/customers/{customerId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**accountOnCustomerServer**",
            [
              "**accounting**",
              {
                "$ul": [
                  "**taxNumbers**"
                ]
              }
            ],
            [
              "**billingAddress**",
              {
                "$ul": [
                  "**addressLine1**: first line of address",
                  "**addressLine2**: second line of address",
                  "**city**: city",
                  "**countryId**: country",
                  "**postalCode**: postal code",
                  "**provinceId**: province",
                  "**sameAsBillingAddress**: should billing address be used instead of this one"
                ]
              }
            ],
            "**branchId**",
            [
              "**categoriesIds**",
              {
                "$ul": [
                  "**empty**"
                ]
              }
            ],
            "**clientFirstProjectDate**",
            "**clientFirstQuoteDate**",
            "**clientLastProjectDate**",
            "**clientLastQuoteDate**",
            "**clientNumberOfProjects**",
            "**clientNumberOfQuotes**",
            [
              "**contact**",
              {
                "$ul": [
                  [
                    "**emails**: emails",
                    {
                      "$ul": [
                        "**additional**: additional e-mails addresses",
                        "**cc**: e-mails which will be included in the CC list",
                        "**primary**: primary e-mail"
                      ]
                    }
                  ],
                  "**fax**: fax number",
                  "**phones**: phones' numbers",
                  "**sms**: mobile phone for which SMS notifications will be sent (if configured)",
                  "**websites**: websites"
                ]
              }
            ],
            "**contractNumber**",
            [
              "**correspondenceAddress**",
              {
                "$ul": [
                  "**addressLine1**: first line of address",
                  "**addressLine2**: second line of address",
                  "**city**: city",
                  "**countryId**: country",
                  "**postalCode**: postal code",
                  "**provinceId**: province",
                  "**sameAsBillingAddress**: should billing address be used instead of this one"
                ]
              }
            ],
            [
              "**customFields**",
              {
                "$ul": [
                  "**customFields**",
                  "**empty**"
                ]
              }
            ],
            "**fullName**",
            "**id**",
            "**idNumber**",
            [
              "**industriesIds**",
              {
                "$ul": [
                  "**empty**"
                ]
              }
            ],
            "**leadSourceId**",
            "**limitAccessToPeopleResponsible**",
            "**name**",
            "**notes**",
            "**persons**",
            [
              "**responsiblePersons**",
              {
                "$ul": [
                  "**accountManagerId**: account manager",
                  "**projectCoordinatorId**: project coordinator",
                  "**projectManagerId**: project manager",
                  "**salesPersonId**: sales person"
                ]
              }
            ],
            "**salesNotes**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
