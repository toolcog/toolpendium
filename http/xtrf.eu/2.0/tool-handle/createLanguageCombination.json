{
  "name": "createLanguageCombination",
  "description": "Creates a new language combination for a given project without creating a task.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "type": "string",
        "description": "project's internal identifier"
      },
      "body": {
        "$ref": "#/components/schemas/CommonLanguageCombinationDTO",
        "description": "Created language combination for a given project without creating a task."
      }
    },
    "required": [
      "projectId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/projects/{projectId}/languageCombinations"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "language combination (ie. PL -> EN)",
        "**Key properties:**",
        {
          "$ul": [
            "**sourceLanguageId**",
            "**targetLanguageId**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
