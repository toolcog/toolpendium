{
  "name": "getCustomFields",
  "description": "Returns custom fields of a given person.",
  "parameters": {
    "type": "object",
    "properties": {
      "personId": {
        "format": "int64",
        "type": "integer",
        "description": "person's internal identifier"
      }
    },
    "required": [
      "personId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/customers/persons/{personId}/customFields"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**key**",
            "**name**",
            "**type**",
            "**value**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
