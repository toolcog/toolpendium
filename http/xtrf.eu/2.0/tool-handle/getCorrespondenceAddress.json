{
  "name": "getCorrespondenceAddress",
  "description": "Returns correspondence address of a given client.",
  "parameters": {
    "type": "object",
    "properties": {
      "customerId": {
        "format": "int64",
        "type": "integer",
        "description": "client's internal identifier"
      }
    },
    "required": [
      "customerId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/customers/{customerId}/correspondenceAddress"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**addressLine1**: first line of address",
            "**addressLine2**: second line of address",
            "**city**: city",
            "**countryId**: country",
            "**postalCode**: postal code",
            "**provinceId**: province",
            "**sameAsBillingAddress**: should billing address be used instead of this one"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
