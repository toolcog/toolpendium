{
  "name": "getContact",
  "description": "Returns contact of a given person.",
  "parameters": {
    "type": "object",
    "properties": {
      "personId": {
        "format": "int64",
        "type": "integer",
        "description": "person's internal identifier"
      }
    },
    "required": [
      "personId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/customers/persons/{personId}/contact"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**emails**: emails",
              {
                "$ul": [
                  "**additional**: additional e-mails addresses",
                  "**primary**: primary e-mail"
                ]
              }
            ],
            "**fax**: fax number",
            "**phones**: phones' numbers",
            "**sms**: mobile phone for which SMS notifications will be sent (if configured)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
