{
  "name": "getAll",
  "description": "Lists all client invoices in all statuses (including not ready and drafts) that have been updated since a specific date.",
  "parameters": {
    "type": "object",
    "properties": {
      "updatedSince": {
        "format": "int64",
        "type": "integer",
        "description": "only client invoices modified since this timestamp"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/accounting/customers/invoices{?updatedSince}"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**currencyId**",
            [
              "**customerDetails**",
              {
                "$ul": [
                  "**addressLine**",
                  "**city**",
                  "**country**",
                  "**countryId**",
                  "**name**",
                  "**postalCode**",
                  "**vatUE**"
                ]
              }
            ],
            "**customerId**",
            [
              "**dates**",
              {
                "$ul": [
                  [
                    "**draftDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ],
                  [
                    "**finalDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ],
                  [
                    "**invoiceDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ],
                  [
                    "**paymentDueDate**",
                    {
                      "$ul": [
                        "**value**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**id**",
            "**invoiceNumber**",
            "**paymentMethodId**",
            [
              "**paymentTerms**",
              {
                "$ul": [
                  "**description**",
                  "**name**"
                ]
              }
            ],
            "**status**",
            "**tasks**",
            "**tasksValue**",
            "**totalGross**",
            "**totalInWords**",
            "**totalNetto**",
            "**type**",
            "**vatCalculationRule**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
