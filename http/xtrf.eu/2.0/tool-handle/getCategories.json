{
  "name": "getCategories",
  "description": "Returns categories of a given client.",
  "parameters": {
    "type": "object",
    "properties": {
      "customerId": {
        "format": "int64",
        "type": "integer",
        "description": "client's internal identifier"
      }
    },
    "required": [
      "customerId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/customers/{customerId}/categories"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.item"
            }
          }
        }
      ]
    }
  }
}
