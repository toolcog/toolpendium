{
  "name": "updateCategories",
  "description": "Updates categories of a given client.",
  "parameters": {
    "type": "object",
    "properties": {
      "customerId": {
        "format": "int64",
        "type": "integer",
        "description": "client's internal identifier"
      },
      "body": {
        "$ref": "#/components/schemas/CategoriesDTO",
        "description": "Updated categories of a given client."
      }
    },
    "required": [
      "customerId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://presentation.s.xtrf.eu/home-api/customers/{customerId}/categories"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.item"
            }
          }
        }
      ]
    }
  }
}
