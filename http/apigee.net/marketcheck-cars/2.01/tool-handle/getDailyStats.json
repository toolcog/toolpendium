{
  "name": "getDailyStats",
  "description": "National, state and city level stats for price, miles and dom",
  "parameters": {
    "type": "object",
    "properties": {
      "api_key": {
        "type": "string",
        "description": "The API Authentication Key. Mandatory with all API calls."
      },
      "country": {
        "default": "us",
        "enum": [
          "us",
          "ca"
        ],
        "format": "string",
        "type": "string",
        "description": "Country for which the stats are to be searched"
      },
      "car_type": {
        "default": "used",
        "enum": [
          "new",
          "used"
        ],
        "format": "string",
        "type": "string",
        "description": "Inventory type for which stats are to be searched, default is used"
      },
      "ymm": {
        "format": "string",
        "type": "string",
        "description": "Year, Make, Model of the car, Separated by pipe e.g. ymm=2015|ford|f-150"
      },
      "ymmt": {
        "format": "string",
        "type": "string",
        "description": "Year, Make, Model, Trim of the car, Separated by pipe e.g. ymmt=2015|ford|f-150|platinum"
      },
      "taxonomy_vin": {
        "format": "string",
        "type": "string",
        "description": "Taxonomy vin for referance to find stats of similar cars"
      },
      "vin": {
        "format": "string",
        "type": "string",
        "description": "VIN that will be transformed to taxonomy_vin"
      },
      "state": {
        "format": "string",
        "type": "string",
        "description": "State level stats"
      },
      "city_state": {
        "format": "string",
        "type": "string",
        "description": "City level stats, pipe seperated like city_state=jacksonville|FL"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://marketcheck-prod.apigee.net/v2/stats/car{?api_key,country,car_type,ymm,ymmt,taxonomy_vin,vin,state,city_state}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**dom**: All nested JSON of stats",
              {
                "$ul": [
                  "**interquartile_range**: Interquartile range",
                  "**mean**: Mean",
                  "**median**: Median",
                  "**population_standard_deviation**: population standard deviation",
                  "**standard_deviation**: Standard Deviation",
                  "**trimmed_mean**: Trimmed Mean",
                  "**variance**: variance"
                ]
              }
            ],
            [
              "**miles_stats**: All nested JSON of stats",
              {
                "$ul": [
                  "**interquartile_range**: Interquartile range",
                  "**mean**: Mean",
                  "**median**: Median",
                  "**population_standard_deviation**: population standard deviation",
                  "**standard_deviation**: Standard Deviation",
                  "**trimmed_mean**: Trimmed Mean",
                  "**variance**: variance"
                ]
              }
            ],
            [
              "**price_stats**: All nested JSON of stats",
              {
                "$ul": [
                  "**interquartile_range**: Interquartile range",
                  "**mean**: Mean",
                  "**median**: Median",
                  "**population_standard_deviation**: population standard deviation",
                  "**standard_deviation**: Standard Deviation",
                  "**trimmed_mean**: Trimmed Mean",
                  "**variance**: variance"
                ]
              }
            ],
            "**units_for_sale**: Number of units of this car for sale on the market"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: Error code",
            "**message**: Error message"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
