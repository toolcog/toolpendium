{
  "name": "crmCheck",
  "description": "Check whether particular vin has had a listing after stipulated date or not",
  "parameters": {
    "type": "object",
    "properties": {
      "api_key": {
        "type": "string",
        "description": "The API Authentication Key. Mandatory with all API calls."
      },
      "vin": {
        "format": "string",
        "minLength": 10,
        "type": "string",
        "description": "The VIN to identify the car. Must be a valid 17 char VIN"
      },
      "sale_date": {
        "format": "string",
        "minLength": 8,
        "type": "string",
        "description": "sale date to check whether after this listing has appeared or not. Must be 8 character long, with YYYYMMDD format"
      }
    },
    "required": [
      "vin",
      "sale_date"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://marketcheck-prod.apigee.net/v2/crm_check/car/{vin}{?api_key,sale_date}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**for_sale**: Boolean to indicate whether given vin has had listing after given date or not"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: Error code",
            "**message**: Error message"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
