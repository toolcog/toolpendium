        "**Key properties:**",
        {
          "$ul": [
            "**bic**",
            "**countries**",
            "**id**",
            "**logo**",
            "**name**",
            "**supported_features**",
            "**supported_payments**",
            "**transaction_total_days** (default: 90)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
