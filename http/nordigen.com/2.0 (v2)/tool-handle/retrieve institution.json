{
  "name": "retrieve_institution",
  "description": "Get details about a specific Institution",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ob.nordigen.com/api/v2/institutions/{id}/"
    }
  },
  "responses": {
