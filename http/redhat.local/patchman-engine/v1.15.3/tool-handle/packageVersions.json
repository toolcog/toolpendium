{
  "name": "packageVersions",
  "description": "Show me all package versions installed on some system",
  "parameters": {
    "type": "object",
    "properties": {
      "limit": {
        "type": "integer",
        "description": "Limit for paging, set -1 to return all"
      },
      "offset": {
        "type": "integer",
        "description": "Offset for paging"
      },
      "package_name": {
        "type": "string",
        "description": "Package name"
      }
    },
    "required": [
      "package_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://redhat.local/api/patch/v1/packages/{package_name}/versions{?limit,offset}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            [
              "**links**",
              {
                "$ul": [
                  "**first**",
                  "**last**",
                  "**next**",
                  "**previous**"
                ]
              }
            ],
            [
              "**meta**",
              {
                "$ul": [
                  "**filter**",
                  "**limit**",
                  "**offset**",
                  "**search**",
                  "**sort**",
                  "**subtotals**",
                  "**total_items**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
