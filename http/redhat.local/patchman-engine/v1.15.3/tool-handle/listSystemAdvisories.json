{
  "name": "listSystemAdvisories",
  "description": "Show me advisories for a system by given inventory id",
  "parameters": {
    "type": "object",
    "properties": {
      "inventory_id": {
        "type": "string",
        "description": "Inventory ID"
      },
      "limit": {
        "type": "integer",
        "description": "Limit for paging, set -1 to return all"
      },
      "offset": {
        "type": "integer",
        "description": "Offset for paging"
      },
      "sort": {
        "enum": [
          "id",
          "name",
          "type",
          "synopsis",
          "public_date"
        ],
        "type": "string",
        "description": "Sort field"
      },
      "search": {
        "type": "string",
        "description": "Find matching text"
      },
      "filter[id]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[description]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[public_date]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[synopsis]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[advisory_type]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[severity]": {
        "type": "string",
        "description": "Filter"
      }
    },
    "required": [
      "inventory_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://redhat.local/api/patch/v1/systems/{inventory_id}/advisories{?limit,offset,sort,search,filter[id],filter[description],filter[public_date],filter[synopsis],filter[advisory_type],filter[severity]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**: advisories items",
            [
              "**links**",
              {
                "$ul": [
                  "**first**",
                  "**last**",
                  "**next**",
                  "**previous**"
                ]
              }
            ],
            [
              "**meta**",
              {
                "$ul": [
                  "**filter**",
                  "**limit**",
                  "**offset**",
                  "**search**",
                  "**sort**",
                  "**subtotals**",
                  "**total_items**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
