{
  "name": "exportPackageSystems",
  "description": "Show me all my systems which have a package installed",
  "parameters": {
    "type": "object",
    "properties": {
      "package_name": {
        "type": "string",
        "description": "Package name"
      },
      "filter[system_profile][sap_system]": {
        "type": "string",
        "description": "Filter only SAP systems"
      },
      "filter[system_profile][sap_sids][in]": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Filter systems by their SAP SIDs"
      },
      "tags": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Tag filter"
      }
    },
    "required": [
      "package_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://redhat.local/api/patch/v1/export/packages/{package_name}/systems{?filter[system_profile][sap_system],filter[system_profile][sap_sids][in],tags}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**available_evra**",
            "**display_name**",
            "**id**",
            "**installed_evra**",
            "**updatable**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.id"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
