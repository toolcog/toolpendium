{
  "name": "systemPackages",
  "description": "Show me details about a system packages by given inventory id",
  "parameters": {
    "type": "object",
    "properties": {
      "inventory_id": {
        "type": "string",
        "description": "Inventory ID"
      },
      "limit": {
        "type": "integer",
        "description": "Limit for paging, set -1 to return all"
      },
      "offset": {
        "type": "integer",
        "description": "Offset for paging"
      },
      "search": {
        "type": "string",
        "description": "Find matching text"
      },
      "filter[name]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[description]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[evra]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[summary]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[updatable]": {
        "type": "boolean",
        "description": "Filter"
      }
    },
    "required": [
      "inventory_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://redhat.local/api/patch/v1/systems/{inventory_id}/packages{?limit,offset,search,filter[name],filter[description],filter[evra],filter[summary],filter[updatable]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            [
              "**links**",
              {
                "$ul": [
                  "**first**",
                  "**last**",
                  "**next**",
                  "**previous**"
                ]
              }
            ],
            [
              "**meta**",
              {
                "$ul": [
                  "**filter**",
                  "**limit**",
                  "**offset**",
                  "**search**",
                  "**sort**",
                  "**subtotals**",
                  "**total_items**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
