{
  "name": "packageSystems",
  "description": "Show me all my systems which have a package installed",
  "parameters": {
    "type": "object",
    "properties": {
      "limit": {
        "type": "integer",
        "description": "Limit for paging, set -1 to return all"
      },
      "offset": {
        "type": "integer",
        "description": "Offset for paging"
      },
      "package_name": {
        "type": "string",
        "description": "Package name"
      },
      "tags": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Tag filter"
      },
      "filter[system_profile][sap_system]": {
        "type": "string",
        "description": "Filter only SAP systems"
      },
      "filter[system_profile][sap_sids][in]": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Filter systems by their SAP SIDs"
      }
    },
    "required": [
      "package_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://redhat.local/api/patch/v1/packages/{package_name}/systems{?limit,offset,tags,filter[system_profile][sap_system],filter[system_profile][sap_sids][in]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            [
              "**links**",
              {
                "$ul": [
                  "**first**",
                  "**last**",
                  "**next**",
                  "**previous**"
                ]
              }
            ],
            [
              "**meta**",
              {
                "$ul": [
                  "**filter**",
                  "**limit**",
                  "**offset**",
                  "**search**",
                  "**sort**",
                  "**subtotals**",
                  "**total_items**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
