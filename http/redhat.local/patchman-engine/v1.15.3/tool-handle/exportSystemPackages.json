{
  "name": "exportSystemPackages",
  "description": "Show me details about a system packages by given inventory id",
  "parameters": {
    "type": "object",
    "properties": {
      "inventory_id": {
        "type": "string",
        "description": "Inventory ID"
      },
      "search": {
        "type": "string",
        "description": "Find matching text"
      },
      "filter[name]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[description]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[evra]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[summary]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[updatable]": {
        "type": "boolean",
        "description": "Filter"
      }
    },
    "required": [
      "inventory_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://redhat.local/api/patch/v1/export/systems/{inventory_id}/packages{?search,filter[name],filter[description],filter[evra],filter[summary],filter[updatable]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**description**",
            "**evra**",
            "**latest_evra**",
            "**name**",
            "**summary**",
            "**updatable**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
