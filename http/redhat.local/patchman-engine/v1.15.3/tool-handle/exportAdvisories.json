{
  "name": "exportAdvisories",
  "description": "Export applicable advisories for all my systems",
  "parameters": {
    "type": "object",
    "properties": {
      "search": {
        "type": "string",
        "description": "Find matching text"
      },
      "filter[id]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[description]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[public_date]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[synopsis]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[advisory_type]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[severity]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[applicable_systems]": {
        "type": "string",
        "description": "Filter"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://redhat.local/api/patch/v1/export/advisories{?search,filter[id],filter[description],filter[public_date],filter[synopsis],filter[advisory_type],filter[severity],filter[applicable_systems]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**advisory_type**",
            "**applicable_systems**",
            "**cve_count**",
            "**description**",
            "**id**",
            "**public_date**",
            "**severity**",
            "**synopsis**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.id"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
