{
  "name": "listPackages",
  "description": "Show me all installed packages across my systems",
  "parameters": {
    "type": "object",
    "properties": {
      "limit": {
        "type": "integer",
        "description": "Limit for paging, set -1 to return all"
      },
      "offset": {
        "type": "integer",
        "description": "Offset for paging"
      },
      "sort": {
        "enum": [
          "id",
          "name",
          "systems_installed",
          "systems_updatable"
        ],
        "type": "string",
        "description": "Sort field"
      },
      "search": {
        "type": "string",
        "description": "Find matching text"
      },
      "filter[name]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[systems_installed]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[systems_updatable]": {
        "type": "string",
        "description": "Filter"
      },
      "filter[summary]": {
        "type": "string",
        "description": "Filter"
      },
      "tags": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Tag filter"
      },
      "filter[system_profile][sap_system]": {
        "type": "string",
        "description": "Filter only SAP systems"
      },
      "filter[system_profile][sap_sids][in]": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Filter systems by their SAP SIDs"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://redhat.local/api/patch/v1/packages/{?limit,offset,sort,search,filter[name],filter[systems_installed],filter[systems_updatable],filter[summary],tags,filter[system_profile][sap_system],filter[system_profile][sap_sids][in]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            [
              "**links**",
              {
                "$ul": [
                  "**first**",
                  "**last**",
                  "**next**",
                  "**previous**"
                ]
              }
            ],
            [
              "**meta**",
              {
                "$ul": [
                  "**filter**",
                  "**limit**",
                  "**offset**",
                  "**search**",
                  "**sort**",
                  "**subtotals**",
                  "**total_items**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
