{
  "name": "LatestPackage",
  "description": "Show me metadata of selected package",
  "parameters": {
    "type": "object",
    "properties": {
      "package_name": {
        "type": "string",
        "description": "package_name - latest, nevra - exact version"
      }
    },
    "required": [
      "package_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://redhat.local/api/patch/v1/packages/{package_name}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  [
                    "**attributes**",
                    {
                      "$ul": [
                        "**advisory_id**",
                        "**description**",
                        "**name**",
                        "**summary**",
                        "**version**"
                      ]
                    }
                  ],
                  "**id**",
                  "**type**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
