{
  "name": "users_list-following-for-user",
  "description": "Lists the people who the specified user follows.",
  "parameters": {
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "description": "The handle for the GitHub user account."
      },
      "per_page": {
        "default": 30,
        "type": "integer",
        "description": "The number of results per page (max 100)."
      },
      "page": {
        "default": 1,
        "type": "integer",
        "description": "Page number of the results to fetch."
      }
    },
    "required": [
      "username"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://HOSTNAME/api/v3/users/{username}/following{?per_page,page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Simple User list"
        },
        "Simple User",
        "**Key properties:**",
        {
          "$ul": [
            "**avatar_url**",
            "**email**",
            "**events_url**",
            "**followers_url**",
            "**following_url**",
            "**gists_url**",
            "**gravatar_id**",
            "**html_url**",
            "**id**",
            "**login**",
            "**name**",
            "**node_id**",
            "**organizations_url**",
            "**received_events_url**",
            "**repos_url**",
            "**site_admin**",
            "**starred_at**",
            "**starred_url**",
            "**subscriptions_url**",
            "**type**",
            "**url**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
