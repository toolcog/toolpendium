            "**gists_url**",
            "**gravatar_id**",
            "**hireable**",
            "**html_url**",
            "**id**",
            "**ldap_dn**",
            "**location**",
            "**login**",
            "**name**",
            "**node_id**",
            "**organizations_url**",
            "**owned_private_repos**",
            [
              "**plan**",
              {
                "$ul": [
                  "**collaborators**",
                  "**name**",
                  "**private_repos**",
                  "**space**"
                ]
              }
            ],
            "**private_gists**",
            "**public_gists**",
