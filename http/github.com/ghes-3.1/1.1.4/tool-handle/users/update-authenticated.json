            "**received_events_url**",
            "**repos_url**",
            "**site_admin**",
            "**starred_url**",
            "**subscriptions_url**",
            "**suspended_at**",
            "**total_private_repos**",
            "**twitter_username**",
            "**two_factor_authentication**",
            "**type**",
            "**updated_at**",
            "**url**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
