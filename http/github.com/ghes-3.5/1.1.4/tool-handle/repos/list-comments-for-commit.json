{
  "name": "repos_list-comments-for-commit",
  "description": "Use the `:commit_sha` to specify the commit that will have its comments listed.",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "The account owner of the repository. The name is not case sensitive."
      },
      "repo": {
        "type": "string",
        "description": "The name of the repository. The name is not case sensitive."
      },
      "commit_sha": {
        "type": "string",
        "description": "The SHA of the commit."
      },
      "per_page": {
        "default": 30,
        "type": "integer",
        "description": "The number of results per page (max 100)."
      },
      "page": {
        "default": 1,
        "type": "integer",
        "description": "Page number of the results to fetch."
      }
    },
    "required": [
      "owner",
      "repo",
      "commit_sha"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://github.com//repos/{owner}/{repo}/commits/{commit_sha}/comments{?per_page,page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Commit Comment list"
        },
        "Commit Comment",
        "**Key properties:**",
        {
          "$ul": [
            "**author_association**: How the author is associated with the repository.",
            "**body**",
            "**commit_id**",
            "**created_at**",
            "**html_url**",
            "**id**",
            "**line**",
            "**node_id**",
            "**path**",
            "**position**",
            [
              "**reactions**",
              {
                "$ul": [
                  "**+1**",
                  "**-1**",
                  "**confused**",
                  "**eyes**",
                  "**heart**",
                  "**hooray**",
                  "**laugh**",
                  "**rocket**",
                  "**total_count**",
                  "**url**"
                ]
              }
            ],
            "**updated_at**",
            "**url**",
            [
              "**user**: A GitHub user.",
              {
                "$ul": [
                  "**avatar_url**",
                  "**email**",
                  "**events_url**",
                  "**followers_url**",
                  "**following_url**",
                  "**gists_url**",
                  "**gravatar_id**",
                  "**html_url**",
                  "**id**",
                  "**login**",
                  "**name**",
                  "**node_id**",
                  "**organizations_url**",
                  "**received_events_url**",
                  "**repos_url**",
                  "**site_admin**",
                  "**starred_at**",
                  "**starred_url**",
                  "**subscriptions_url**",
                  "**type**",
                  "**url**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
