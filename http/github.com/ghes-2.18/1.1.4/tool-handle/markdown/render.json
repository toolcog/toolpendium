{
  "name": "markdown_render",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "properties": {
          "context": {
            "description": "The repository context to use when creating references in `gfm` mode.",
            "type": "string"
          },
          "mode": {
            "default": "markdown",
            "description": "The rendering mode.",
            "enum": [
              "markdown",
              "gfm"
            ],
            "example": "markdown",
            "type": "string"
          },
          "text": {
            "description": "The Markdown text to render in HTML.",
            "type": "string"
          }
        },
        "required": [
          "text"
        ],
        "type": "object"
      }
    },
    "required": [
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://HOSTNAME/api/v3/markdown"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
