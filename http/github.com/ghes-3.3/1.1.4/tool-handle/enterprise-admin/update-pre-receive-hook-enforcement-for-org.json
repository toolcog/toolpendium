{
  "name": "enterprise-admin_update-pre-receive-hook-enforcement-for-org",
  "description": "For pre-receive hooks which are allowed to be configured at the org level, you can set `enforcement` and `allow_downstream_configuration`",
  "parameters": {
    "type": "object",
    "properties": {
      "org": {
        "type": "string",
        "description": "The organization name. The name is not case sensitive."
      },
      "pre_receive_hook_id": {
        "type": "integer",
        "description": "The unique identifier of the pre-receive hook."
      },
      "body": {
        "properties": {
          "allow_downstream_configuration": {
            "description": "Whether repositories can override enforcement.",
            "type": "boolean"
          },
          "enforcement": {
            "description": "The state of enforcement for the hook on this repository.",
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "org",
      "pre_receive_hook_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://github.com//orgs/{org}/pre-receive-hooks/{pre_receive_hook_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**allow_downstream_configuration**",
            "**configuration_url**",
            "**enforcement**",
            "**id**",
            "**name**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
