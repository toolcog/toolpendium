                        "**uid**",
                        "**user_groups**",
                        "**user_sync_emails**",
                        "**user_sync_interval**",
                        "**user_sync_keys**",
                        "**virtual_attribute_enabled**"
                      ]
                    }
                  ],
                  [
                    "**license**",
                    {
                      "$ul": [
                        "**cluster_support**",
                        "**evaluation**",
                        "**expire_at**",
                        "**perpetual**",
                        "**seats**",
                        "**ssh_allowed**",
                        "**support_key**",
                        "**unlimited_seating**"
                      ]
                    }
                  ],
                  "**load_balancer**",
