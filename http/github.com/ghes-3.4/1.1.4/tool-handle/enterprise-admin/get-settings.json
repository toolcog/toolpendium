{
  "name": "enterprise-admin_get-settings",
  "description": "Gets the settings for your instance. To change settings, see the [Set settings endpoint](https://docs.github.com/enterprise-server@3.4/rest/reference/enterprise-admin#set-settings).\n\n**Note:** You cannot retrieve the management console password with the Enterprise administration API.",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://HOSTNAME/setup/api/settings"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**enterprise**",
              {
                "$ul": [
                  "**admin_password**",
                  "**assets**",
                  "**auth_mode**",
                  [
                    "**avatar**",
                    {
                      "$ul": [
                        "**enabled**",
                        "**uri**"
                      ]
                    }
                  ],
                  [
                    "**cas**",
                    {
                      "$ul": [
                        "**url**"
                      ]
                    }
                  ],
                  [
                    "**collectd**",
                    {
                      "$ul": [
                        "**enabled**",
                        "**encryption**",
                        "**password**",
                        "**port**",
                        "**server**",
                        "**username**"
                      ]
                    }
                  ],
                  "**configuration_id**",
                  "**configuration_run_count**",
                  [
                    "**customer**",
                    {
                      "$ul": [
                        "**email**",
                        "**name**",
                        "**public_key_data**",
                        "**secret_key_data**",
                        "**uuid**"
                      ]
                    }
                  ],
                  "**expire_sessions**",
                  "**github_hostname**",
                  [
                    "**github_oauth**",
                    {
                      "$ul": [
                        "**client_id**",
                        "**client_secret**",
                        "**organization_name**",
                        "**organization_team**"
                      ]
                    }
                  ],
                  [
                    "**github_ssl**",
                    {
                      "$ul": [
                        "**cert**",
                        "**enabled**",
                        "**key**"
                      ]
                    }
                  ],
                  "**http_proxy**",
                  "**identicons_host**",
                  [
                    "**ldap**",
                    {
                      "$ul": [
                        "**admin_group**",
                        "**base**",
                        "**bind_dn**",
                        "**host**",
                        "**method**",
                        "**password**",
                        "**port**",
                        "**posix_support**",
                        [
                          "**profile**",
                          {
                            "$ul": [
                              "**key**",
                              "**mail**",
                              "**name**",
                              "**uid**"
                            ]
                          }
                        ],
                        [
                          "**reconciliation**",
                          {
                            "$ul": [
                              "**org**",
                              "**user**"
                            ]
                          }
                        ],
                        "**recursive_group_search**",
                        "**search_strategy**",
