{
  "name": "actions_get-self-hosted-runner-for-repo",
  "description": "Gets a specific self-hosted runner configured in a repository.\n\nYou must authenticate using an access token with the `repo` scope to use this\nendpoint.",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string"
      },
      "repo": {
        "type": "string"
      },
      "runner_id": {
        "type": "integer",
        "description": "Unique identifier of the self-hosted runner."
      }
    },
    "required": [
      "owner",
      "repo",
      "runner_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://HOSTNAME/api/v3/repos/{owner}/{repo}/actions/runners/{runner_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Self hosted runners"
        },
        "A self hosted runner",
        "**Key properties:**",
        {
          "$ul": [
            "**busy**",
            "**id**: The id of the runner.",
            "**labels**",
            "**name**: The name of the runner.",
            "**os**: The Operating System of the runner.",
            "**status**: The status of the runner."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
