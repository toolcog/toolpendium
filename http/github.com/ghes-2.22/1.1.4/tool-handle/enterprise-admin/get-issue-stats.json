{
  "name": "enterprise-admin_get-issue-stats",
  "description": "",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://HOSTNAME/api/v3/enterprise/stats/issues"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Enterprise Issue Stats"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**closed_issues**",
            "**open_issues**",
            "**total_issues**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
