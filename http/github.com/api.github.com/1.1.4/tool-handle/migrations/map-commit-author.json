        },
        "Porter Author",
        "**Key properties:**",
        {
          "$ul": [
            "**email**",
            "**id**",
            "**import_url**",
            "**name**",
            "**remote_id**",
            "**remote_name**",
            "**url**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
