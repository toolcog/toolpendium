{
  "name": "repos_create-tag-protection",
  "description": "This creates a tag protection state for a repository.\nThis endpoint is only available to repository administrators.",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "The account owner of the repository. The name is not case sensitive."
      },
      "repo": {
        "type": "string",
        "description": "The name of the repository. The name is not case sensitive."
      },
      "body": {
        "properties": {
          "pattern": {
            "description": "An optional glob pattern to match against when enforcing tag protection.",
            "type": "string"
          }
        },
        "required": [
          "pattern"
        ],
        "type": "object"
      }
    },
    "required": [
      "owner",
      "repo",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.github.com/repos/{owner}/{repo}/tags/protection"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Tag protection"
        },
        "Tag protection",
        "**Key properties:**",
        {
          "$ul": [
            "**created_at**",
            "**enabled**",
            "**id**",
            "**pattern**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
