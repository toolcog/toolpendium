{
  "name": "orgs_list",
  "description": "Lists all organizations, in the order that they were created on GitHub.\n\n**Note:** Pagination is powered exclusively by the `since` parameter. Use the [Link header](https://docs.github.com/rest/overview/resources-in-the-rest-api#link-header) to get the URL for the next page of organizations.",
  "parameters": {
    "type": "object",
    "properties": {
      "since": {
        "type": "integer",
        "description": "An organization ID. Only return organizations with an ID greater than this ID."
      },
      "per_page": {
        "default": 30,
        "type": "integer",
        "description": "The number of results per page (max 100)."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.github.com/organizations{?since,per_page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Organization Simple list"
        },
        "A GitHub organization.",
        "**Key properties:**",
        {
          "$ul": [
            "**avatar_url**",
            "**description**",
            "**events_url**",
            "**hooks_url**",
            "**id**",
            "**issues_url**",
            "**login**",
            "**members_url**",
            "**node_id**",
            "**public_members_url**",
            "**repos_url**",
            "**url**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
