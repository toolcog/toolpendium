{
  "name": "orgs_list-for-user",
  "description": "List [public organization memberships](https://help.github.com/articles/publicizing-or-concealing-organization-membership) for the specified user.\n\nThis method only lists _public_ memberships, regardless of authentication. If you need to fetch all of the organization memberships (public and private) for the authenticated user, use the [List organizations for the authenticated user](https://docs.github.com/enterprise-server@2.20/rest/reference/orgs#list-organizations-for-the-authenticated-user) API instead.",
  "parameters": {
    "type": "object",
    "properties": {
      "username": {
        "type": "string"
      },
      "per_page": {
        "default": 30,
        "type": "integer",
        "description": "Results per page (max 100)"
      },
      "page": {
        "default": 1,
        "type": "integer",
        "description": "Page number of the results to fetch."
      }
    },
    "required": [
      "username"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://HOSTNAME/api/v3/users/{username}/orgs{?per_page,page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Organization Simple list"
        },
        "Organization Simple",
        "**Key properties:**",
        {
          "$ul": [
            "**avatar_url**",
            "**description**",
            "**events_url**",
            "**hooks_url**",
            "**id**",
            "**issues_url**",
            "**login**",
            "**members_url**",
            "**node_id**",
            "**public_members_url**",
            "**repos_url**",
            "**url**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
