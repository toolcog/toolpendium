{
  "name": "issues_list-labels-for-milestone",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "The account owner of the repository. The name is not case sensitive."
      },
      "repo": {
        "type": "string",
        "description": "The name of the repository. The name is not case sensitive."
      },
      "milestone_number": {
        "type": "integer",
        "description": "The number that identifies the milestone."
      },
      "per_page": {
        "default": 30,
        "type": "integer",
        "description": "The number of results per page (max 100)."
      },
      "page": {
        "default": 1,
        "type": "integer",
        "description": "Page number of the results to fetch."
      }
    },
    "required": [
      "owner",
      "repo",
      "milestone_number"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://github.com//repos/{owner}/{repo}/milestones/{milestone_number}/labels{?per_page,page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Label list"
        },
        "Color-coded labels help you categorize and filter your issues (just like labels in Gmail).",
        "**Key properties:**",
        {
          "$ul": [
            "**color**: 6-character hex code, without the leading #, identifying the color",
            "**default**",
            "**description**",
            "**id**",
            "**name**: The name of the label.",
            "**node_id**",
            "**url**: URL for the label"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
