{
  "name": "actions_get-repo-required-workflow",
  "description": "Gets a specific required workflow present in a repository. Anyone with read access to the repository can use this endpoint. If the repository is private you must use an access token with the `repo` scope. GitHub Apps must have the `actions:read` permission to use this endpoint. For more information, see \"[Required Workflows](https://docs.github.com/enterprise-server@3.8/actions/using-workflows/required-workflows).\"",
  "parameters": {
    "type": "object",
    "properties": {
      "org": {
        "type": "string",
        "description": "The organization name. The name is not case sensitive."
      },
      "repo": {
        "type": "string",
        "description": "The name of the repository. The name is not case sensitive."
      },
      "required_workflow_id_for_repo": {
        "type": "integer",
        "description": "The ID of the required workflow that has run at least once in a repository."
      }
    },
    "required": [
      "org",
      "repo",
      "required_workflow_id_for_repo"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://github.com//repos/{org}/{repo}/actions/required_workflows/{required_workflow_id_for_repo}"
    }
  },
  "responses": {
