{
  "name": "Phases_GetProjectPhases",
  "description": "Get project's phases as flat list",
  "parameters": {
    "type": "object",
    "properties": {
      "guid": {
        "type": "string",
        "description": "Id of the project."
      }
    },
    "required": [
      "guid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.severa.visma.com/rest-api/v1/projects/{guid}/phaseswithhierarchy"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            [
              "**createdBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**createdDateTime**",
            [
              "**currencyCode**",
              {
                "$ul": [
                  "**code**",
                  "**guid**",
                  "**name**",
                  "**symbol**"
                ]
              }
            ],
            [
              "**customer**",
              {
                "$ul": [
                  "**guid**",
                  "**isInternal**",
                  "**name**",
                  "**number**"
                ]
              }
            ],
            "**deadline**",
            [
              "**defaultWorkType**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            "**guid**",
            "**hasChildren**",
            "**isCompleted** (default: false)",
            "**isLocked** (default: false)",
            [
              "**lastUpdatedBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**lastUpdatedDateTime**",
            "**level**",
            "**name**",
            "**originalDeadline**",
            "**originalStartDate**",
            "**originalWorkHoursEstimate**",
            [
              "**parentPhase**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            [
              "**phaseStatus**",
              {
                "$ul": [
                  "**description**",
                  "**name**",
                  "**phaseStatusTypeGuid**"
                ]
              }
            ],
            [
              "**project**",
              {
                "$ul": [
                  "**guid**",
                  "**isClosed**",
                  "**isInternal**",
                  "**name**",
                  "**number**"
                ]
              }
            ],
            "**sortOrder**",
            "**startDate**",
            "**workHoursEstimate**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**details**",
                  "**httpStatusCode**",
                  "**stack**",
                  "**type**: "
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
