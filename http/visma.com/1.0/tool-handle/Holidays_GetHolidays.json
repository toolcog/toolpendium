{
  "name": "Holidays_GetHolidays",
  "description": "Get holidays.",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "format": "int32",
        "maximum": 2075,
        "minimum": 1900,
        "nullable": true,
        "type": "integer",
        "description": "Optional: Holidays for this year only. Default: all years."
      },
      "countryGuid": {
        "nullable": true,
        "type": "string",
        "description": "Optional: Holidays for this country only. Default local."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.severa.visma.com/rest-api/v1/holidays{?year,countryGuid}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**countryGuid**",
            "**date**",
            "**guid**",
            "**isActive** (default: true)",
            "**isPublicHoliday**",
            "**isRecurringYearly**",
            "**name**",
            "**recurringEndYear**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**details**",
                  "**httpStatusCode**",
                  "**stack**",
                  "**type**: "
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
