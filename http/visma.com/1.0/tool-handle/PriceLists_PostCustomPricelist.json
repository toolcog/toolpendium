            [
              "**createdBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**createdDateTime**",
            [
              "**currency**",
              {
                "$ul": [
                  "**code**",
                  "**guid**",
                  "**name**",
                  "**symbol**"
                ]
              }
            ],
            "**guid**",
            "**isActive**",
            "**isCustom**",
            "**isDefault**",
            "**isVolumePricing**",
            [
              "**lastUpdatedBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**lastUpdatedDateTime**",
            "**name**"
          ]
        },
        {
