{
  "name": "Addresses_GetCustomerAddresses",
  "description": "Get customer's addresses",
  "parameters": {
    "type": "object",
    "properties": {
      "customerGuid": {
        "type": "string",
        "description": "ID for the customer."
      },
      "firstRow": {
        "default": 0,
        "format": "int32",
        "nullable": true,
        "type": "integer",
        "description": "Optional: first row to fetch. Default 0 = first row."
      },
      "rowCount": {
        "format": "int32",
        "nullable": true,
        "type": "integer",
        "description": "Optional: How many rows to fetch, Default 20, maximum 100."
      },
      "calculateRowCount": {
        "default": false,
        "type": "boolean",
        "description": "Optional: Calculate total number of rows."
      }
    },
    "required": [
      "customerGuid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.severa.visma.com/rest-api/v1/customers/{customerGuid}/addresses{?firstRow,rowCount,calculateRowCount}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**addressline**",
            "**city**",
            "**contacts**",
            [
              "**country**",
              {
                "$ul": [
                  "**englishName**",
                  "**guid**",
                  "**hasRegions**: ",
                  "**name**"
                ]
              }
            ],
            [
              "**countryRegion**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            [
              "**createdBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**createdDateTime**",
            [
              "**customer**",
              {
                "$ul": [
                  "**guid**",
                  "**name**",
                  "**number**"
                ]
              }
            ],
            "**fax**",
            "**guid**",
            "**isBillingAddress**",
            "**isPostalAddress**",
            "**isVisitAddress**",
            [
              "**lastUpdatedBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**lastUpdatedDateTime**",
            "**phone**",
            "**postalCode**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
