              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**createdDateTime**",
            [
              "**customer**",
              {
                "$ul": [
                  "**guid**",
                  "**name**",
                  "**number**"
                ]
              }
            ],
            "**dateOfBirth**",
            "**description**",
            "**emails**",
            "**firstName**",
            "**guid**",
            "**isActive** (default: true)",
            "**isDeleted**",
            "**isEmailAllowed** (default: false)",
            "**jobTitle**",
            [
              "**language**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            "**lastName**",
            [
              "**lastUpdatedBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**lastUpdatedDateTime**",
            "**name**",
            "**phoneNumbers**",
            [
              "**role**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            "**salutation**: ",
            "**satisfactionLevel**: ",
            [
              "**timeZone**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
