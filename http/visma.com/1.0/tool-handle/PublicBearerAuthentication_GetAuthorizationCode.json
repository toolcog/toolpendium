{
  "name": "PublicBearerAuthentication_GetAuthorizationCode",
  "description": "Get the oAuth2 authorization code flow code.",
  "parameters": {
    "type": "object",
    "properties": {
      "response_type": {
        "nullable": true,
        "type": "string",
        "description": "code"
      },
      "state": {
        "nullable": true,
        "type": "string",
        "description": "Unguessable random string."
      },
      "client_id": {
        "nullable": true,
        "type": "string",
        "description": "Client id."
      },
      "redirect_uri": {
        "nullable": true,
        "type": "string",
        "description": "Url where to redirect after code has been retrieved."
      },
      "scope": {
        "default": "",
        "nullable": true,
        "type": "string",
        "description": "Scopes that client requests. If scopes that are not allowed for the client are requested, returns unauthorized."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.severa.visma.com/rest-api/v1/login/oauth/authorize{?response_type,state,client_id,redirect_uri,scope}"
    }
  },
