{
  "name": "Products_GetSearchedProducts",
  "description": "Gets available products for the given project where price information comes from projects price list",
  "parameters": {
    "type": "object",
    "properties": {
      "projectGuid": {
        "type": "string",
        "description": "Id of the project"
      },
      "rowCount": {
        "format": "int32",
        "nullable": true,
        "type": "integer",
        "description": "Optional: Number of rows to fetch"
      },
      "pageToken": {
        "nullable": true,
        "type": "string",
        "description": "Optional: page token to fetch the next page."
      },
      "type": {
        "$ref": "#/components/schemas/ProductType",
        "description": "Product type. if given, it filters the products by the given type"
      },
      "includeProductsFromRegistry": {
        "default": false,
        "type": "boolean",
        "description": "Optional: If true returns all the products from registry with project specific prices. If false returns only products specified for the project with project specific prices. Default false."
      }
    },
    "required": [
      "projectGuid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.severa.visma.com/rest-api/v1/projects/{projectGuid}/productsforproject{?rowCount,pageToken,type,includeProductsFromRegistry}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**isVolumePriced**",
            [
              "**product**",
              {
                "$ul": [
                  "**code**",
                  [
                    "**createdBy**",
                    {
                      "$ul": [
                        "**code**",
                        "**firstName**",
                        "**guid**",
                        "**lastName**",
                        "**name**"
                      ]
                    }
                  ],
                  "**createdDateTime**",
                  "**guid**",
                  "**isActive** (default: true)",
                  [
                    "**lastUpdatedBy**",
                    {
                      "$ul": [
                        "**code**",
                        "**firstName**",
                        "**guid**",
                        "**lastName**",
                        "**name**"
                      ]
                    }
                  ],
                  "**lastUpdatedDateTime**",
                  "**measurementUnit**",
                  "**name**",
                  [
                    "**productCategory**",
                    {
                      "$ul": [
                        "**guid**",
                        "**name**"
                      ]
                    }
                  ],
                  "**proposalDescription**",
                  [
                    "**salesAccount**",
                    {
                      "$ul": [
                        "**guid**",
                        "**name**",
                        "**number**"
                      ]
                    }
                  ],
                  "**type**: ",
                  [
                    "**unitCost**",
                    {
                      "$ul": [
                        "**amount**",
                        "**currencyCode**",
                        "**multiCurrencyInfo**"
                      ]
                    }
                  ],
                  [
                    "**unitPrice**",
                    {
                      "$ul": [
                        "**amount**",
                        "**currencyCode**",
                        "**multiCurrencyInfo**"
                      ]
                    }
                  ],
                  "**vatRate**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**details**",
                  "**httpStatusCode**",
                  "**stack**",
                  "**type**: "
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
