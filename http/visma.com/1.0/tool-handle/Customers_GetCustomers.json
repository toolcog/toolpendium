{
  "name": "Customers_GetCustomers",
  "description": "Get all the customers",
  "parameters": {
    "type": "object",
    "properties": {
      "pageToken": {
        "nullable": true,
        "type": "string"
      },
      "rowCount": {
        "format": "int32",
        "nullable": true,
        "type": "integer",
        "description": "Optional: How many rows to fetch."
      },
      "isActive": {
        "nullable": true,
        "type": "boolean",
        "description": "If not given, return all Customers, if given as true return only active Customers, if given as false returns only inactive Customers."
      },
      "customerOwnerGuids": {
        "items": {
          "type": "string"
        },
        "nullable": true,
        "type": "array",
        "description": "Optional: List of customer owner ids to search for. Default all."
      },
      "isInternal": {
        "nullable": true,
        "type": "boolean",
        "description": "Optional: When true returns only internal customer"
      },
      "numbers": {
        "items": {
          "format": "int64",
          "type": "integer"
        },
        "nullable": true,
        "type": "array",
        "description": "Optional: List of customer numbers."
      },
      "changedSince": {
        "format": "date-time",
        "nullable": true,
        "type": "string",
        "description": "Optional: Get customers that have been added or changed after this date time (greater or equal)."
      },
      "emailAddresses": {
        "items": {
          "type": "string"
        },
        "nullable": true,
        "type": "array",
        "description": "Optional: Get customers where email address matches to any provided email address"
      },
      "customerNames": {
        "items": {
          "type": "string"
        },
        "nullable": true,
        "type": "array",
        "description": "Optional: Get customers where customer name matches to any provided customer name"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.severa.visma.com/rest-api/v1/customers{?pageToken,rowCount,isActive,customerOwnerGuids,isInternal,numbers,changedSince,emailAddresses,customerNames}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**annualRevenue**",
            [
              "**createdBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**createdDateTime**",
            [
              "**currency**",
              {
                "$ul": [
                  "**code**",
                  "**guid**",
                  "**name**",
                  "**symbol**"
                ]
              }
            ],
            "**eInvoiceAddress**",
            "**eInvoiceOperator**",
            "**email**",
            "**guid**",
            [
              "**headquarterAddress**",
              {
                "$ul": [
                  "**addressline**",
                  "**city**",
                  "**country**",
                  "**guid**",
                  "**postalCode**"
                ]
              }
            ],
            [
              "**industry**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            [
              "**invoiceTemplate**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            [
              "**invoicingVat**",
              {
                "$ul": [
                  "**code**",
                  "**guid**",
                  "**percentage**"
                ]
              }
            ],
            "**isActive** (default: true)",
            "**isInternal**",
            "**kvkNumber**",
            [
              "**language**",
              {
                "$ul": [
                  "**code**",
                  "**englishName**",
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            [
              "**lastUpdatedBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**lastUpdatedDateTime**",
            "**name**",
            "**notes**",
            "**number**",
            "**numberOfEmployees**",
            "**overdueInterest**",
            [
              "**owner**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**paymentTerm**",
            [
              "**pricelist**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            [
              "**timezone**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            "**vatNumber**",
            "**website**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**details**",
                  "**httpStatusCode**",
                  "**stack**",
                  "**type**: "
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
