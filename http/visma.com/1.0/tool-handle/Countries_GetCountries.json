{
  "name": "Countries_GetCountries",
  "description": "Get all the Countries.",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.severa.visma.com/rest-api/v1/localization/countries"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code2**",
            "**code3**",
            "**companyRegisterUrl**",
            [
              "**currency**",
              {
                "$ul": [
                  "**code**",
                  "**guid**",
                  "**name**",
                  "**symbol**"
                ]
              }
            ],
            "**defaultCulture**",
            [
              "**defaultLanguage**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            "**englishName**",
            "**guid**",
            "**hasRegions**: ",
            "**isInEU**",
            "**isRegistrationCountry**",
            "**name**",
            [
              "**timezone**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**details**",
                  "**httpStatusCode**",
                  "**stack**",
                  "**type**: "
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
