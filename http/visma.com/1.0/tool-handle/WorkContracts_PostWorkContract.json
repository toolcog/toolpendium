            [
              "**createdBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**createdDateTime**",
            "**dailyHours**",
            "**endDate**",
            "**flextimeLimitPerDay**",
            "**guid**",
            [
              "**hourCost**",
              {
                "$ul": [
                  "**amount**",
                  "**currencyCode**",
                  "**multiCurrencyInfo**"
                ]
              }
            ],
            "**isFlextimeActive** (default: true)",
            "**isOvertimeAllowed**",
            [
              "**lastUpdatedBy**",
              {
                "$ul": [
                  "**code**",
                  "**firstName**",
                  "**guid**",
                  "**lastName**",
                  "**name**"
                ]
              }
            ],
            "**lastUpdatedDateTime**",
            [
              "**role**",
              {
                "$ul": [
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            "**startDate**",
            "**title**",
            [
              "**user**",
              {
                "$ul": [
                  "**code**",
                  "**guid**",
                  "**name**"
                ]
              }
            ],
            "**workWeek**"
          ]
