{
  "name": "Root",
  "description": "Returns a welcome message.",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://canada-holidays.ca/api/v1"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**_links**",
              {
                "$ul": [
                  [
                    "**holidays**",
                    {
                      "$ul": [
                        "**href**: Domain to get all holidays"
                      ]
                    }
                  ],
                  [
                    "**provinces**",
                    {
                      "$ul": [
                        "**href**: Domain to get all provinces"
                      ]
                    }
                  ],
                  [
                    "**self**",
                    {
                      "$ul": [
                        "**href**: Root domain"
                      ]
                    }
                  ],
                  [
                    "**spec**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**message**: A welcome message"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
