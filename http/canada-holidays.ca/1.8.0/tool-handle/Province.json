{
  "name": "Province",
  "description": "Returns a Canadian province or territory with its associated holidays. Returns a 404 response for invalid abbreviations.",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "default": 2023,
        "maximum": 2029,
        "minimum": 2016,
        "type": "integer",
        "description": "A calendar year"
      },
      "optional": {
        "default": "false",
        "enum": [
          "1",
          "0",
          "true",
          "false"
        ],
        "type": "string",
        "description": "A boolean parameter (AB and BC only). If false or 0 (default), will return only legislated holidays. If true or 1, will return optional holidays from Alberta and BC."
      },
      "provinceId": {
        "enum": [
          "AB",
          "BC",
          "MB",
          "NB",
          "NL",
          "NS",
          "NT",
          "NU",
          "ON",
          "PE",
          "QC",
          "SK",
          "YT"
        ],
        "example": "MB",
        "type": "string",
        "description": "A Canadian province abbreviation"
      }
    },
    "required": [
      "provinceId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://canada-holidays.ca/api/v1/provinces/{provinceId}{?year,optional}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**province**: A Canadian province or territory ",
              {
                "$ul": [
                  "**id**: Canadian province abbreviations",
                  "**nameEn**: English name",
                  "**nameFr**: French name",
                  [
                    "**nextHoliday**: A Canadian holiday. Includes a name, the literal date of the holiday, the observed date of the holiday (ie, accommodating for weekends), and a list of regions that observe this holiday.",
                    {
                      "$ul": [
                        "**date**: ISO date: the literal date of the holiday",
                        "**federal**: Whether this holiday is observed by federally-regulated industries.",
                        "**id**: Primary key for a holiday",
                        "**nameEn**: English name",
                        "**nameFr**: French name",
                        "**observedDate**: ISO date: when this holiday is observed",
                        "**optional**: Whether this is a province-wide statutory holiday, or one that is optional for employers.",
                        "**provinces**"
                      ]
                    }
                  ],
                  "**optional**: Whether this province optionally observes a given holiday.",
                  "**provinces**",
                  "**sourceEn**: Name of reference page with public holidays for this region",
                  "**sourceLink**: URL to public holidays reference for this region"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**message**: An error message",
                  "**status**: An HTTP status code",
                  "**timestamp**: A UTC ISO timestamp"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
