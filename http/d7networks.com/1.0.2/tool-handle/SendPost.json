{
  "name": "SendPost",
  "description": "Send SMS  to recipients using D7 SMS Gateway",
  "parameters": {
    "type": "object",
    "properties": {
      "Content-Type": {
        "type": "string",
        "description": ""
      },
      "Accept": {
        "type": "string",
        "description": ""
      },
      "body": {
        "$ref": "#/components/schemas/SendSMSRequest",
        "description": "Message Body"
      }
    },
    "required": [
      "Content-Type",
      "Accept",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rest-api.d7networks.com/secure/send"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "500": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
