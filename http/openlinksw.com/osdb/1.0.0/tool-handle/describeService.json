{
  "name": "describeService",
  "description": "Returns a description of a given service",
  "parameters": {
    "type": "object",
    "properties": {
      "serviceId": {
        "type": "string",
        "description": "Service ID of the service to describe."
      }
    },
    "required": [
      "serviceId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://osdb.openlinksw.com/osdb/api/v1/services/{serviceId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**api**: The path of the REST API method",
            "**method**: The name of the REST API method",
            [
              "**response**",
              {
                "$ul": [
                  "**description**: A short description of the service.",
                  "**import_source_uri**: The URI of the source service description document used to load the service into OSDB.",
                  "**service_id**: A unique one word identifier for the service.",
                  "**service_name**: A word or phrase naming the service."
                ]
              }
            ],
            "**status** (default: success)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**api**: The path of the REST API method reporting the error",
            "**method**: The name of the REST API method reporting the error",
            "**response**: A message describing the error",
            "**status** (default: error)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
