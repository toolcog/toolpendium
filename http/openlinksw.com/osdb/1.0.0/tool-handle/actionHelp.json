{
  "name": "actionHelp",
  "description": "Returns the help text for a given service action",
  "parameters": {
    "type": "object",
    "properties": {
      "serviceId": {
        "type": "string",
        "description": "Service ID of the service supporting the action."
      },
      "actionId": {
        "type": "string",
        "description": "Action ID of the action for which help text is being requested."
      }
    },
    "required": [
      "serviceId",
      "actionId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://osdb.openlinksw.com/osdb/api/v1/actions/{serviceId}/{actionId}/help"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**api**: The path of the REST API method",
            "**method**: The name of the REST API method",
            [
              "**response**",
              {
                "$ul": [
                  "**action_id**: A unique one word identifier for the action.",
                  "**help_text**: The help text for the action.",
                  "**service_id**: A unique one word identifier for the service."
                ]
              }
            ],
            "**status** (default: success)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**api**: The path of the REST API method reporting the error",
            "**method**: The name of the REST API method reporting the error",
            "**response**: A message describing the error",
            "**status** (default: error)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
