{
  "name": "getStudent",
  "description": "Returns a specific student",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "include": {
        "type": "string"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.clever.com/v1.2/students/{id}{?include}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**created**",
                  [
                    "**credentials**",
                    {
                      "$ul": [
                        "**district_username**"
                      ]
                    }
                  ],
                  "**district**",
                  "**dob**",
                  "**ell_status**",
                  "**email**",
                  "**gender**",
                  "**grade**",
                  "**graduation_year**",
                  "**hispanic_ethnicity**",
                  "**id**",
                  "**last_modified**",
                  [
                    "**location**",
                    {
                      "$ul": [
                        "**address**",
                        "**city**",
                        "**lat**",
                        "**lon**",
                        "**state**",
                        "**zip**"
                      ]
                    }
                  ],
                  [
                    "**name**",
                    {
                      "$ul": [
                        "**first**",
                        "**last**",
                        "**middle**"
                      ]
                    }
                  ],
                  "**race**",
                  "**school**",
                  "**schools**",
                  "**sis_id**",
                  "**state_id**",
                  "**student_number**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
