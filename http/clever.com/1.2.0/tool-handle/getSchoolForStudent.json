{
  "name": "getSchoolForStudent",
  "description": "Returns the primary school for a student",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.clever.com/v1.2/students/{id}/school"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**created**",
                  "**district**",
                  "**high_grade**",
                  "**id**",
                  "**last_modified**",
                  [
                    "**location**",
                    {
                      "$ul": [
                        "**address**",
                        "**city**",
                        "**lat**",
                        "**lon**",
                        "**state**",
                        "**zip**"
                      ]
                    }
                  ],
                  "**low_grade**",
                  "**mdr_number**",
                  "**name**",
                  "**nces_id**",
                  "**phone**",
                  [
                    "**principal**",
                    {
                      "$ul": [
                        "**email**",
                        "**name**"
                      ]
                    }
                  ],
                  "**school_number**",
                  "**sis_id**",
                  "**state_id**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
