{
  "name": "connect",
  "description": "Initiate a connection to a specified peer.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "properties": {
          "endpoint": {
            "description": "the endpoint to connect to expressed as either IP address or URL",
            "type": "string"
          }
        },
        "required": [
          "endpoint"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://eos.local/net/connect"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
