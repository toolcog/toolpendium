{
  "name": "ReferencesCitiesByCityCodeGet",
  "description": "List all cities or one specific city. It is possible to request the response in a specific language.",
  "parameters": {
    "type": "object",
    "properties": {
      "Accept": {
        "type": "string",
        "description": "http header: application/json or application/xml (Acceptable values are: \"application/json\", \"application/xml\")"
      },
      "cityCode": {
        "default": "BER",
        "type": "string",
        "description": "3-letter IATA city code"
      },
      "lang": {
        "type": "string",
        "description": "2 letter ISO 3166-1 language code"
      },
      "limit": {
        "default": "20",
        "type": "string",
        "description": "Number of records returned per request. Defaults to 20, maximum is 100 (if a value bigger than 100 is given, 100 will be taken)"
      },
      "offset": {
        "default": "0",
        "type": "string",
        "description": "Number of records skipped. Defaults to 0"
      }
    },
    "required": [
      "Accept",
      "cityCode"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.lufthansa.com/v1/references/cities/{cityCode}{?lang,limit,offset}"
    },
    "headers": {
      "Accept": {
        "$": "Accept"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
