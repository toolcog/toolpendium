{
  "name": "Price_Offers",
  "description": "Retrieve a best price offer given an origin and destination.",
  "parameters": {
    "type": "object",
    "properties": {
      "origin": {
        "type": "string",
        "description": "Departure city. 3-letter IATA city code"
      },
      "destination": {
        "type": "string",
        "description": "Destination city. 3-letter IATA city code"
      },
      "departureDate": {
        "type": "string",
        "description": "Departure date in local time (YYYY-MM-DD)"
      },
      "returnDate": {
        "type": "string",
        "description": "Return date in local time (YYYY-MM-DD)"
      },
      "service": {
        "default": "amadeusBestPrice",
        "type": "string",
        "description": "Optional parameter."
      }
    },
    "required": [
      "origin",
      "destination",
      "departureDate",
      "returnDate"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.lufthansa.com/v1/promotions/priceoffers/flights/ond/{origin}/{destination}{?departureDate,returnDate,service}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
