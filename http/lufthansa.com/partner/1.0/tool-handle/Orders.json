{
  "name": "Orders",
  "description": "Retrieve order by ID and optionally name. This service is only accessible for LH privileged partners",
  "parameters": {
    "type": "object",
    "properties": {
      "orderID": {
        "type": "string",
        "description": "Unique order identifier"
      },
      "Accept": {
        "type": "string",
        "description": "http header: application/json or application/xml (Acceptable values are: \"application/json\", \"application/xml\")"
      },
      "name": {
        "type": "string",
        "description": "Surname of traveller"
      }
    },
    "required": [
      "orderID",
      "Accept",
      "name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.lufthansa.com/v1/orders/orders/{orderID}/{name}"
    },
    "headers": {
      "Accept": {
        "$": "Accept"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
