{
  "name": "getPlaylists",
  "description": "This endpoint returns same data as listennotes.com/listen under your account.\nYou can use the **page** parameter to do pagination and fetch more playlists.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "X-ListenAPI-Key": {
        "type": "string",
        "description": "Get API Key on listennotes.com/api"
      },
      "sort": {
        "default": "recent_added_first",
        "enum": [
          "recent_added_first",
          "oldest_added_first",
          "name_a_to_z",
          "name_z_to_a"
        ],
        "examples": [
          "recent_added_first"
        ],
        "type": "string",
        "description": "How do you want to sort playlists?\n"
      },
      "page": {
        "default": 1,
        "examples": [
          1
        ],
        "type": "integer",
        "description": "Page number of playlists.\n"
      }
    },
    "required": [
      "X-ListenAPI-Key"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://listen-api.listennotes.com/api/v2/playlists{?sort,page}"
    },
    "headers": {
      "X-ListenAPI-Key": {
        "$": "X-ListenAPI-Key"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**has_next**",
            "**has_previous**",
            "**next_page_number**",
            "**page_number**",
            "**playlists**",
            "**previous_page_number**",
            "**total**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
