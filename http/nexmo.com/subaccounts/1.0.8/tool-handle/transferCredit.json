{
  "name": "transferCredit",
  "description": "Transfer credit limit between a primary account and one of its subaccounts.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "api_key": {
        "type": "string",
        "description": "ID of the primary account"
      },
      "body": {
        "$ref": "#/$defs/TransferBalanceOrCreditRequest"
      }
    },
    "required": [
      "api_key",
      "body"
    ],
    "$defs": {
      "TransferBalanceOrCreditRequest": {
        "properties": {
          "amount": {
            "example": "123.45",
            "type": "number"
          },
          "from": {
            "example": "7c9738e6",
            "type": "string"
          },
          "reference": {
            "example": "This gets added to the audit log",
            "type": "string"
          },
          "to": {
            "example": "ad6dc56f",
            "type": "string"
          }
        },
        "required": [
          "from",
          "to",
          "amount"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.nexmo.com/accounts/{api_key}/credit-transfers"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**amount**: Credit transfer amount",
            "**created_at**: The date and time when the credit transfer was executed",
            "**credit_transfer_id**: Unique credit transfer ID",
            "**from**: Account the credit is transferred from",
            "**reference**: Reference for the credit transfer",
            "**to**: Account the credit is transferred to"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
