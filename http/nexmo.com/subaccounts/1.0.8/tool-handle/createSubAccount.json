{
  "name": "createSubAccount",
  "description": "Create a subaccount for a given primary account.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "api_key": {
        "type": "string",
        "description": "ID of the primary account"
      },
      "body": {
        "$ref": "#/$defs/NewSubaccountRequest"
      }
    },
    "required": [
      "api_key",
      "body"
    ],
    "$defs": {
      "NewSubaccountRequest": {
        "properties": {
          "name": {
            "example": "Subaccount department A",
            "maxLength": 80,
            "type": "string"
          },
          "secret": {
            "example": "Password123",
            "type": "string"
          },
          "use_primary_account_balance": {
            "default": true,
            "example": false,
            "type": "boolean"
          }
        },
        "required": [
          "name"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.nexmo.com/accounts/{api_key}/subaccounts"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**secret**: API secret of the subaccount.",
            "**api_key**: Unique subaccount ID.",
            "**balance**: Balance of the subAccount. Value is null if balance is shared with primary account.",
            "**created_at**: Subaccount creation date and time.",
            "**credit_limit**: Credit limit of the subAccount. Value is null if balance is shared with primary account.",
            "**name**: Name of the subaccount.",
            "**primary_account_api_key**: Unique primary account ID.",
            "**suspended**: Subaccount suspension status.",
            "**use_primary_account_balance**: Flag showing if balance is shared with primary account."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**",
            "**instance**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Unprovisioned",
        "**Key properties:**",
        {
          "$ul": [
            "**detail**",
            "**instance**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Invalid API Key",
        "**Key properties:**",
        {
          "$ul": [
            "**detail**",
            "**instance**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
