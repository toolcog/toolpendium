{
  "name": "createAPISecret",
  "description": "Create API Secret",
  "parameters": {
    "type": "object",
    "properties": {
      "api_key": {
        "type": "string",
        "description": "The API key to manage secrets for"
      },
      "body": {
        "$ref": "#/$defs/createSecretRequest"
      }
    },
    "required": [
      "api_key",
      "body"
    ],
    "$defs": {
      "createSecretRequest": {
        "properties": {
          "secret": {
            "description": "The new secret must follow these rules:\n\n* minimum 8 characters\n* maximum 25 characters\n* minimum 1 lower case character\n* minimum 1 upper case character\n* minimum 1 digit\n",
            "example": "example-4PI-secret",
            "type": "string"
          }
        },
        "required": [
          "secret"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.nexmo.com/accounts/{api_key}/secrets"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**_links**: Links related to this resource",
              {
                "$ul": [
                  [
                    "**self**: This resource",
                    {
                      "$ul": [
                        "**href**: The URI for this resource"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**created_at**: Creation date/time for this secret",
            "**id**: Secret ID"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**: More detail regarding this error, including the API key supplied",
            "**instance**: Internal Trace ID",
            "**invalid_parameters**: Array of the parameters that are considered invalid, and explanations of why",
            "**title**: Description of the error",
            "**type**: URL for further information"
          ]
        },
        {
