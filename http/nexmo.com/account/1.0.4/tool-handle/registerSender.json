{
  "name": "registerSender",
  "description": "Register an email sender with an API Key for using email with Verify V2.",
  "parameters": {
    "type": "object",
    "properties": {
      "api_key": {
        "example": "abcd1234",
        "type": "string",
        "description": "Your Vonage API key. You can find this in the [dashboard](https://dashboard.nexmo.com)"
      },
      "api_secret": {
        "example": "ABCDEFGH01234abc",
        "type": "string",
        "description": "Your Vonage API secret. You can find this in the [dashboard](https://dashboard.nexmo.com)"
      },
      "body": {
        "$ref": "#/$defs/registerEmailRequest"
      }
    },
    "required": [
      "api_key",
      "api_secret",
      "body"
    ],
    "$defs": {
      "registerEmailRequest": {
        "properties": {
          "application_ids": {
            "description": "An optional array of additional ApplicationID's that the value is to be assigned to.",
            "example": [
              "6ec9eb7de1d34e77ac2c0ad597c9554a",
              "5dba5838689f402dba0c77957e2181f3"
            ],
            "items": {
              "type": "string"
            },
            "type": "object"
          },
          "name": {
            "description": "An optional name to be attached to this binding",
            "example": "my-email-link",
            "type": "string"
          },
          "provider": {
            "description": "The delivery method by which the value would be assigned. Always `email`",
            "enum": [
              "email"
            ],
            "example": "email",
            "format": "enum",
            "type": "string"
          },
          "value": {
            "description": "The email adress to attach to the application(s)",
            "example": "bob@company.com",
            "format": "email",
            "type": "string"
          }
        },
        "required": [
          "provider",
          "value"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rest.nexmo.com/account/register-sender{?api_key,api_secret}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**application_ids**: An array of ApplicationID strings attached to the value provided.",
            "**name**: An optional name to be attached to this binding",
            "**provider**: Enum identifer of provider type.",
            "**value**: Value given to the provider to attach to the Application IDs."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
