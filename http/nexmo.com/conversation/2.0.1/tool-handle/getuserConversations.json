{
  "name": "getuserConversations",
  "description": "List user conversations",
  "parameters": {
    "type": "object",
    "properties": {
      "user_id": {
        "type": "string",
        "description": "User ID"
      }
    },
    "required": [
      "user_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.nexmo.com/v0.1/users/{user_id}/conversations"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**display_name**: The display name for the conversation. It does not have to be unique",
            "**href**: A link towards a resources included in Conversation API",
            "**id**: The unique identifier for this conversation",
            "**image_url**: A link to an image for conversations' and users' avatars",
            "**member_id**: Member ID",
            "**name**: Unique name for a conversation",
            "**sequence_number**: the id of the last event of the conversation (event's id is an incremental number",
            "**state**: The state that the member is in. Possible values are `invited`, `joined`, `left`, or `unknown`",
            [
              "**timestamp**",
              {
                "$ul": [
                  "**created**: Timestamp"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
