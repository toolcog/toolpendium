{
  "name": "recordConversation",
  "description": "Record a conversation",
  "parameters": {
    "type": "object",
    "properties": {
      "conversation_id": {
        "type": "string",
        "description": "Conversation ID"
      },
      "body": {
        "properties": {
          "action": {
            "$ref": "#/$defs/action"
          },
          "event_method": {
            "$ref": "#/$defs/event_method"
          },
          "event_url": {
            "$ref": "#/$defs/event_url"
          },
          "format": {
            "$ref": "#/$defs/format"
          },
          "split": {
            "$ref": "#/$defs/split"
          }
        },
        "required": [
          "action"
        ],
        "type": "object",
        "description": "Record Conversation Request Payload Object"
      }
    },
    "required": [
      "conversation_id"
    ],
    "$defs": {
      "action": {
        "description": "Recording Action",
        "enum": [
          "start",
          "stop"
        ],
        "example": "start",
        "type": "string"
      },
      "event_method": {
        "default": "POST",
        "description": "The HTTP method used to send event information to event_url.",
        "example": "POST",
        "type": "string"
      },
      "event_url": {
        "description": "The webhook endpoint where recording progress events are sent to.",
        "example": [
          "https://example.com/event"
        ],
        "items": {
          "format": "url",
          "type": "string"
        },
        "type": "array",
        "x-nexmo-developer-collection-description-shown": true
      },
      "format": {
        "default": "mp3",
        "description": "Record the Conversation in a specific format.",
        "enum": [
          "mp3",
          "wav"
        ],
        "example": "mp3",
        "type": "string"
      },
      "split": {
        "default": "conversation",
        "description": "Record the sent and received audio in separate channels of a stereo recording",
        "example": "conversation",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.nexmo.com/v1/conversations/{conversation_id}/record"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
