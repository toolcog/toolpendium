{
  "name": "getEvents",
  "description": "This endpoint is **DEPRECATED**. Please use [/v0.2/events](/api/conversation.v2#get-events).",
  "parameters": {
    "type": "object",
    "properties": {
      "conversation_id": {
        "type": "string",
        "description": "Conversation ID"
      }
    },
    "required": [
      "conversation_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.nexmo.com/v0.1/conversations/{conversation_id}/events"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Retrieve Events Response Payload Object Item",
        "**Key properties:**",
        {
          "$ul": [
            "**body**: Event Body",
            "**from**: Member ID",
            "**href**: A link towards a conversation event included in Conversation API",
            "**id**: Event id. This is a progressive integer",
            "**state**: The state that the member is in. Possible values are `invited`, `joined`, `left`, or `unknown`",
            "**timestamp**: Time of creation",
            "**to**: Member ID",
            "**type**: Event type"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
