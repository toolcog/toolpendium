{
  "name": "getEvent",
  "description": "Retrieve an event",
  "parameters": {
    "type": "object",
    "properties": {
      "conversation_id": {
        "type": "string",
        "description": "Conversation ID"
      },
      "event_id": {
        "type": "string",
        "description": "Event ID"
      }
    },
    "required": [
      "conversation_id",
      "event_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.nexmo.com/v0.1/conversations/{conversation_id}/events/{event_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Retrieve Events Response Payload Object Item",
        "**Key properties:**",
        {
          "$ul": [
            "**body**: Event Body",
            "**from**: Member ID",
            "**href**: A link towards a conversation event included in Conversation API",
            "**id**: Event id. This is a progressive integer",
            "**state**: The state that the member is in. Possible values are `invited`, `joined`, `left`, or `unknown`",
            "**timestamp**: Time of creation",
            "**to**: Member ID",
            "**type**: Event type"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
