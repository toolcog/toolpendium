{
  "name": "createEvent",
  "description": "Create an event",
  "parameters": {
    "type": "object",
    "properties": {
      "conversation_id": {
        "type": "string",
        "description": "Conversation ID"
      },
      "body": {
        "description": "Create New Event Request Payload Object",
        "properties": {
          "body": {
            "$ref": "#/$defs/event_body"
          },
          "from": {
            "$ref": "#/$defs/member_id"
          },
          "to": {
            "$ref": "#/$defs/member_id"
          },
          "type": {
            "$ref": "#/$defs/event_type"
          }
        },
        "required": [
          "type",
          "from"
        ],
        "type": "object"
      }
    },
    "required": [
      "conversation_id"
    ],
    "$defs": {
      "event_body": {
        "description": "Event Body",
        "example": {
          "text": "My Text"
        },
        "type": "object"
      },
      "member_id": {
        "description": "Member ID",
        "example": "MEM-63f61863-4a51-4f6b-86e1-46edebio0391",
        "type": "string"
      },
      "event_type": {
        "description": "Event type",
        "example": "text",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.nexmo.com/v0.1/conversations/{conversation_id}/events"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Create New Event Response Payload Object",
        "**Key properties:**",
        {
          "$ul": [
            "**href**: A link towards a conversation event included in Conversation API",
            "**id**: Event id. This is a progressive integer",
            "**timestamp**: Time of event creation"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
