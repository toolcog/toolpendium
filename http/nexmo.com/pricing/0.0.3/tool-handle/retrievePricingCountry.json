{
  "name": "retrievePricingCountry",
  "description": "Retrieves the pricing information based on the specified country.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "description": "The type of service you wish to retrieve data about: either `sms`, `sms-transit` or `voice`."
      },
      "api_key": {
        "type": "string",
        "description": "Your Nexmo API key."
      },
      "api_secret": {
        "type": "string",
        "description": "Your Nexmo API secret."
      },
      "country": {
        "type": "string",
        "description": "A two letter [country code](https://en.wikipedia.org/wiki/ISO_3166-1_alpha-2). For example, `CA`."
      }
    },
    "required": [
      "type",
      "api_key",
      "api_secret",
      "country"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rest.nexmo.com/account/get-pricing/outbound/{type}{?api_key,api_secret,country}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**countryCode**: Two letter country code.",
            "**countryDisplayName**: Readable country name.",
            "**countryName**: Readable country name.",
            "**currency**: The currency that your account is being billed in (by default `Euros—EUR`). Can change in the Dashboard to US Dollars—USD.",
            "**defaultPrice**: The default price.",
            "**dialingPrefix**: The dialling prefix.",
            "**networks**: An array of network objects"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error_title**",
            [
              "**invalid_parameters**",
              {
                "$ul": [
                  "**message**",
                  "**parameter**"
                ]
              }
            ],
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**currency**",
            "**error-code-label**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
