{
  "name": "retrievePricingAllCountries",
  "description": "Retrieves the pricing information for all countries.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "description": "The type of service you wish to retrieve data about: either `sms`, `sms-transit` or `voice`."
      },
      "api_key": {
        "type": "string",
        "description": "Your Nexmo API key."
      },
      "api_secret": {
        "type": "string",
        "description": "Your Nexmo API secret."
      }
    },
    "required": [
      "type",
      "api_key",
      "api_secret"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rest.nexmo.com/account/get-full-pricing/outbound/{type}{?api_key,api_secret}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**count**: The number of countries retrieved.",
            "**countries**: A list of countries."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error_title**",
            [
              "**invalid_parameters**",
              {
                "$ul": [
                  "**message**",
                  "**parameter**"
                ]
              }
            ],
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**currency**",
            "**error-code-label**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
