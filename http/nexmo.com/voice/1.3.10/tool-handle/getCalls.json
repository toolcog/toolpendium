{
  "name": "getCalls",
  "description": "Get details of your calls",
  "parameters": {
    "type": "object",
    "properties": {
      "status": {
        "enum": [
          "started",
          "ringing",
          "answered",
          "machine",
          "completed",
          "busy",
          "cancelled",
          "failed",
          "rejected",
          "timeout",
          "unanswered"
        ],
        "example": "started",
        "type": "string",
        "description": "Filter by call status"
      },
      "date_start": {
        "example": "2016-11-14T07:45:14Z",
        "format": "date-time",
        "type": "string",
        "description": "Return the records that occurred after this point in time"
      },
      "date_end": {
        "example": "2016-11-14T07:45:14Z",
        "format": "date-time",
        "type": "string",
        "description": "Return the records that occurred before this point in time"
      },
      "page_size": {
        "default": 10,
        "maximum": 100,
        "minimum": 1,
        "type": "integer",
        "description": "Return this amount of records in the response"
      },
      "record_index": {
        "default": 0,
        "type": "integer",
        "description": "Return calls from this index in the response"
      },
      "order": {
        "default": "asc",
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string",
        "description": "Either ascending or  descending order."
      },
      "conversation_uuid": {
        "$ref": "#/components/schemas/conversation_uuid",
        "description": "Return all the records associated with a specific conversation."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.nexmo.com/v1/calls/{?status,date_start,date_end,page_size,record_index,order,conversation_uuid}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**_embedded**: A list of call objects. See the [get details of a specific call](#getCall) response fields for a description of the nested objects",
              {
                "$ul": [
                  "**calls**"
                ]
              }
            ],
            [
              "**_links**",
              {
                "$ul": [
                  [
                    "**self**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**count**",
            "**page_size**",
            "**record_index**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
