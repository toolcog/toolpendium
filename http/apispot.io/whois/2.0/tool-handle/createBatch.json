{
  "name": "createBatch",
  "description": "Create batch. Batch is then being processed until all provided items have been completed. At any time it can be `get` to provide current status with results optionally.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "properties": {
          "domains": {
            "example": [
              "foo.com",
              "foo.net",
              "foo.io"
            ],
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "operation": {
            "enum": [
              "whois",
              "check"
            ],
            "type": "string"
          },
          "options": {
            "properties": {
              "format": {
                "enum": [
                  "raw",
                  "formatted",
                  "json"
                ],
                "type": "string"
              }
            },
            "type": "object"
          }
        },
        "required": [
          "operation",
          "domains"
        ],
        "type": "object"
      }
    },
    "required": [
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://apispot.io/api/v2/batch"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**completed**",
            "**count**",
            "**created_at**",
            "**id**",
            "**operation**",
            "**results**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
