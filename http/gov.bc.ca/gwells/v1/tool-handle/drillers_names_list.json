{
  "name": "drillers_names_list",
  "description": "Search for a person in the Register",
  "parameters": {
    "type": "object",
    "properties": {
      "search": {
        "type": "string",
        "description": "A search term."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://apps.nrs.gov.bc.ca/gwells/api/v1//drillers/names/{?search}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**name**",
            "**person_guid**",
            "**registrations**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
