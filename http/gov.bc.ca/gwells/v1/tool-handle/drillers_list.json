{
  "name": "drillers_list",
  "description": "Returns a list of all person records",
  "parameters": {
    "type": "object",
    "properties": {
      "search": {
        "type": "string",
        "description": "A search term."
      },
      "ordering": {
        "type": "string",
        "description": "Which field to use when ordering the results."
      },
      "limit": {
        "type": "integer",
        "description": "Number of results to return per page."
      },
      "offset": {
        "type": "integer",
        "description": "The initial index from which to return the results."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://apps.nrs.gov.bc.ca/gwells/api/v1//drillers/{?search,ordering,limit,offset}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**contact_cell**",
            "**contact_email**",
            "**contact_tel**",
            "**first_name**",
            "**person_guid**",
            "**registrations**",
            "**surname**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
