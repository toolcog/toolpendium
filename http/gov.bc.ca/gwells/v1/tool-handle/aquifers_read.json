{
  "name": "aquifers_read",
  "description": "return details of aquifers",
  "parameters": {
    "type": "object",
    "properties": {
      "aquifer_id": {
        "type": "integer",
        "description": "A unique integer value identifying this aquifer."
      }
    },
    "required": [
      "aquifer_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://apps.nrs.gov.bc.ca/gwells/api/v1//aquifers/{aquifer_id}/"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**aquifer_id**",
            "**aquifer_name**",
            "**area**",
            "**demand**",
            "**demand_description**",
            "**known_water_use**",
            "**known_water_use_description**",
            "**litho_stratographic_unit**",
            "**location_description**",
            "**mapping_year**: Use the following format: ",
            "**material**",
            "**material_description**",
            "**notes**",
            "**productivity**",
            "**productivity_description**",
            "**quality_concern**",
            "**quality_concern_description**",
            "**subtype**",
            "**subtype_description**",
            "**vulnerability**",
            "**vulnerability_description**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
