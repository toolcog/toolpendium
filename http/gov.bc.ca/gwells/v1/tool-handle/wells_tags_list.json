{
  "name": "wells_tags_list",
  "description": "seach for wells by tag or owner",
  "parameters": {
    "type": "object",
    "properties": {
      "search": {
        "type": "string",
        "description": "A search term."
      },
      "ordering": {
        "type": "string",
        "description": "Which field to use when ordering the results."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://apps.nrs.gov.bc.ca/gwells/api/v1//wells/tags/{?search,ordering}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**owner_full_name**",
            "**well_tag_number**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
