{
  "name": "Posts_GetLatest",
  "description": "Get the latest posts of postKind for the specified index (default or category)",
  "parameters": {
    "type": "object",
    "properties": {
      "indexKind": {
        "type": "string",
        "description": "home or one of categories"
      },
      "indexKey": {
        "type": "string",
        "description": "default or one key of the categories (ministries, sectors, services, tags, themes)"
      },
      "postKind": {
        "default": "",
        "type": "string",
        "description": "One of: releases, stories, factsheets, updates or default (releases+stories except top/feature)"
      },
      "count": {
        "default": "",
        "format": "int32",
        "type": "integer",
        "description": "number of posts to return"
      },
      "skip": {
        "default": "",
        "format": "int32",
        "type": "integer",
        "description": "number of posts to skip"
      },
      "api-version": {
        "default": "1.0",
        "type": "string",
        "description": "The requested API version"
      }
    },
    "required": [
      "indexKind",
      "indexKey",
      "api-version"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://news.api.gov.bc.ca//api/Posts/Latest/{indexKind}/{indexKey}{?postKind,count,skip,api-version}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**key**",
            "**timestamp**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
