{
  "name": "FacebookPosts_GetByUri",
  "description": "Get a Facebook post based on a Uri",
  "parameters": {
    "type": "object",
    "properties": {
      "uri": {
        "default": "",
        "type": "string",
        "description": ""
      },
      "api-version": {
        "default": "1.0",
        "type": "string",
        "description": "The requested API version"
      }
    },
    "required": [
      "api-version"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://news.api.gov.bc.ca//api/FacebookPosts/ByUri{?uri,api-version}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**key**",
            "**timestamp**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
