{
  "name": "OrderApi_Details",
  "description": "Return order details",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int32",
        "type": "integer"
      },
      "x-auth-key": {
        "default": "[authentication key]",
        "type": "string",
        "description": ""
      },
      "x-auth-secret": {
        "default": "[authentication secret]",
        "type": "string",
        "description": ""
      }
    },
    "required": [
      "id",
      "x-auth-key",
      "x-auth-secret"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.envoice.in/api/order/details{?id}"
    },
    "headers": {
      "x-auth-key": {
        "$": "x-auth-key"
      },
      "x-auth-secret": {
        "$": "x-auth-secret"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**AccessToken**: Product short link",
            "**AfterPaymentDescription**: After payment description",
            "**Attachments**: List of Order attachments",
            "**CouponCode**: Coupon to apply in order to get the discount",
            [
              "**Currency**",
              {
                "$ul": [
                  "**Code**: Currency short numeric code",
                  "**Id**: Entity id",
                  "**Name**: Name of the country",
                  "**Symbol**: Currency symbol",
                  "**Value**: Currency short alpha code"
                ]
              }
            ],
            "**CurrencyId**: Foreign key Currency",
            "**Description**: Product description",
            "**DiscountAmount**: Discount amount",
            "**Id**: Order id",
            "**Items**: List of Order items",
            "**Name**: Product alias",
            "**Note**: Customer note to seller",
            [
              "**OrderBillingDetails**",
              {
                "$ul": [
                  "**Address**: Client street and number",
                  "**CountryId**: Client country id",
                  "**Email**: Client email",
                  "**Name**: Client name",
                  "**PhoneNumber**: Client phone number"
                ]
              }
            ],
            [
              "**OrderShippingDetails**",
              {
                "$ul": [
                  "**Address**: Client street and number",
                  "**CountryId**: Client country id",
                  "**Email**: Client email",
                  "**Name**: Client name",
                  "**PhoneNumber**: Client phone number"
                ]
              }
            ],
            "**ProductId**: Product id",
            "**Referral**: Represent the referral for this order",
            "**ShippingAmount**: Cost for shipping the product",
            "**ShippingDescription**: Client instructions for shipping",
            "**Status**: Order status",
            "**SubTotalAmount**: Sub total amount",
            "**TaxAmount**: Tax amount",
            "**TotalAmount**: Total amount",
            "**TotalWithShipping**: Total amount with shipping",
            "**WhatHappensNextDescription**: What happens next description"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
