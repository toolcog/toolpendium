{
  "name": "ProductApi_Details",
  "description": "Return product details",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int32",
        "type": "integer"
      },
      "x-auth-key": {
        "default": "[authentication key]",
        "type": "string",
        "description": ""
      },
      "x-auth-secret": {
        "default": "[authentication secret]",
        "type": "string",
        "description": ""
      }
    },
    "required": [
      "id",
      "x-auth-key",
      "x-auth-secret"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://www.envoice.in/api/product/details{?id}"
    },
    "headers": {
      "x-auth-key": {
        "$": "x-auth-key"
      },
      "x-auth-secret": {
        "$": "x-auth-secret"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**AccessToken**: Product short link",
            "**AfterPaymentDescription**: After payment description",
            "**Attachments**: List of product attachments",
            "**ButtonCallToAction**: Default button call to action\r",
            "**Coupons**: List of product coupons",
            [
              "**Currency**",
              {
                "$ul": [
                  "**Code**: Currency short numeric code",
                  "**Id**: Entity id",
                  "**Name**: Name of the country",
                  "**Symbol**: Currency symbol",
                  "**Value**: Currency short alpha code"
                ]
              }
            ],
            "**CurrencyId**: Foreign key Currency",
            "**Description**: Product description",
            "**Discounts**: List of product discounts",
            "**Id**: Product id",
            "**IsFeatured**: Indicate that the product is set as featured",
            "**Items**: List of product items",
            "**Name**: Product alias",
            "**PaymentGateways**: List of enabled payment gateways for this product",
            "**ShippingAmount**: Cost for shipping the product",
            "**ShippingDescription**: Client instructions for shipping",
            "**Status**: Product availability status",
            "**SubTotalAmount**: Subtotal amount of product",
            "**TotalAmount**: Total amount of product",
            "**TotalWithShipping**: Total amount of product with shipping",
            "**WhatHappensNextDescription**: What happens next description"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
