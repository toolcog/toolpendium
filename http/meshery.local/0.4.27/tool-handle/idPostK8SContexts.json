{
  "name": "idPostK8SContexts",
  "description": "Returns the context list for a given k8s config",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://meshery.local/api/system/kubernetes/contexts"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "K8SContext is just used to send contexts to the UI",
        "**Key properties:**",
        {
          "$ul": [
            "**clusterName**",
            "**contextName**",
            "**currentContext**: ContextDisplayName string `json:\"context-display-name\"`"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
