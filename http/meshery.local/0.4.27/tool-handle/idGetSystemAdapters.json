{
  "name": "idGetSystemAdapters",
  "description": "Fetches and returns all the adapters and ping adapters",
  "parameters": {
    "type": "object",
    "properties": {
      "adapter": {
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://meshery.local/api/system/adapters{?adapter}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Adapter represents an adapter in Meshery",
        "**Key properties:**",
        {
          "$ul": [
            "**adapter_location**",
            "**git_commit_sha**",
            "**name**",
            "**ops**",
            "**version**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
