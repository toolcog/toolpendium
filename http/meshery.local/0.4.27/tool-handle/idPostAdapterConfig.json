{
  "name": "idPostAdapterConfig",
  "description": "Used to persist adapter config",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://meshery.local/api/system/adapter/manage"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Adapter represents an adapter in Meshery",
        "**Key properties:**",
        {
          "$ul": [
            "**adapter_location**",
            "**git_commit_sha**",
            "**name**",
            "**ops**",
            "**version**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
