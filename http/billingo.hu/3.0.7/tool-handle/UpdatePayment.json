{
  "name": "UpdatePayment",
  "description": "Update payment history an existing document. Returns a payment history object if the update is succeded.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "body": {
        "items": {
          "$ref": "#/$defs/PaymentHistory"
        },
        "type": "array",
        "description": "Payment history object that you would like to update."
      }
    },
    "required": [
      "id",
      "body"
    ],
    "$defs": {
      "PaymentHistory": {
        "properties": {
          "conversion_rate": {
            "format": "float",
            "type": "number"
          },
          "date": {
            "format": "date",
            "type": "string"
          },
          "payment_method": {
            "$ref": "#/$defs/PaymentMethod"
          },
          "price": {
            "format": "float",
            "type": "number"
          },
          "voucher_number": {
            "type": "string"
          }
        },
        "required": [
          "date",
          "price",
          "payment_method"
        ],
        "type": "object"
      },
      "PaymentMethod": {
        "enum": [
          "aruhitel",
          "bankcard",
          "barion",
          "barter",
          "cash",
          "cash_on_delivery",
          "coupon",
          "elore_utalas",
          "ep_kartya",
          "kompenzacio",
          "levonas",
          "online_bankcard",
          "payoneer",
          "paypal",
          "paypal_utolag",
          "payu",
          "pick_pack_pont",
          "postai_csekk",
          "postautalvany",
          "skrill",
          "szep_card",
          "transferwise",
          "upwork",
          "utalvany",
          "valto",
          "wire_transfer"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.billingo.hu/v3/documents/{id}/payments"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**conversion_rate**",
            "**date**",
            "**payment_method**",
            "**price**",
            "**voucher_number**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "400": {
