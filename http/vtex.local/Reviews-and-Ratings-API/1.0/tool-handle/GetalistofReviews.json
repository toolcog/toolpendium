{
  "name": "GetalistofReviews",
  "description": "Retrieves a list of reviews.",
  "parameters": {
    "type": "object",
    "properties": {
      "search_term": {
        "example": "search_term",
        "type": "string",
        "description": "Returns Reviews that contain the search term in `productId`, `sku`, `shopperId`, or `reviewerName`."
      },
      "from": {
        "example": "0",
        "type": "string",
        "description": "Zero base starting record number, `0` is the default value."
      },
      "to": {
        "example": "3",
        "type": "string",
        "description": "Zero base ending record number, `3` is the default value."
      },
      "order_by": {
        "example": ":asc",
        "type": "string",
        "description": "Case-sensitive fieldName to order records (optionally add `:asc` or `:desc`)."
      },
      "status": {
        "example": true,
        "type": "boolean",
        "description": "Status of the review, approved (`true`) or not (`false`)."
      },
      "product_id": {
        "example": "1",
        "type": "string",
        "description": "Filter the reviews by product ID."
      },
      "Content-Type": {
        "default": "application/json",
        "type": "string",
        "description": "Describes the type of the content being sent."
      },
      "Accept": {
        "default": "application/json",
        "type": "string",
        "description": "HTTP Client Negotiation _Accept_ Header. Indicates the types of responses the client can understand."
      }
    },
    "required": [
      "search_term",
      "from",
      "to",
      "order_by",
      "status",
      "product_id",
      "Content-Type",
      "Accept"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://vtex.local/reviews{?search_term,from,to,order_by,status,product_id}"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**data**: Array of reviews.",
            [
              "**range**: Range of the review's list.",
              {
                "$ul": [
                  "**from**: Zero base starting record number.",
                  "**to**: Zero base ending record number.",
                  "**total**: Total number of reviews on the list."
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
