{
  "name": "GetReviewbyReviewId",
  "description": "Retrieves information of a product review by its ID.",
  "parameters": {
    "type": "object",
    "properties": {
      "reviewId": {
        "example": "1",
        "type": "string",
        "description": "Review ID."
      },
      "Content-Type": {
        "default": "application/json",
        "type": "string",
        "description": "Describes the type of the content being sent."
      },
      "Accept": {
        "default": "application/json",
        "type": "string",
        "description": "HTTP Client Negotiation _Accept_ Header. Indicates the types of responses the client can understand."
      }
    },
    "required": [
      "reviewId",
      "Content-Type",
      "Accept"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://vtex.local/review/{reviewId}"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**approved**: If the review was approved (`true`) or not (`false`).",
            "**id**: Review ID.",
            "**locale**: Review's locale.",
            "**location**: Review's origin location.",
            "**pastReviews**: Past reviews of the same product.",
            "**productId**: Product ID.",
            "**rating**: Customer rating.",
            "**reviewDateTime**: Review's date and time.",
            "**reviewerName**: Reviewer name.",
            "**searchDate**: Review's search date.",
            "**shopperId**: Shopper email.",
            "**sku**: SKU ID.",
            "**text**: Review's text.",
            "**title**: Review's title.",
            "**verifiedPurchaser**: If the reviewer is a verified purchaser (`true`) or not (`false`)."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
