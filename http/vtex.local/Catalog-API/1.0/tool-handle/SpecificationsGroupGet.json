{
  "name": "SpecificationsGroupGet",
  "description": "Retrieves details from a specification group by the ID of the group. \r\n## Response body example\r\n\r\n```json\r\n{\r\n  \"CategoryId\": 1,\r\n  \"Id\": 6,\r\n  \"Name\": \"Sizes\",\r\n  \"Position\": 3\r\n}\r\n```",
  "parameters": {
    "type": "object",
    "properties": {
      "Content-Type": {
        "default": "application/json",
        "type": "string",
        "description": "Describes the type of the content being sent."
      },
      "Accept": {
        "default": "application/json",
        "type": "string",
        "description": "HTTP Client Negotiation _Accept_ Header. Indicates the types of responses the client can understand."
      },
      "groupId": {
        "example": "6",
        "type": "string",
        "description": "Specification Group ID."
      }
    },
    "required": [
      "Content-Type",
      "Accept",
      "groupId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://vtex.local/api/catalog_system/pub/specification/groupGet/{groupId}"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "SpecificationsGroup"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**CategoryId**: Category ID.",
            "**Id**: Specification Group ID.",
            "**Name**: Specification Group Name.",
            "**Position**: Specification Group Position."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
