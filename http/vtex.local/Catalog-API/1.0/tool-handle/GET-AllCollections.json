{
  "name": "GET-AllCollections",
  "description": "Retrieves a list of all collections matching a filter.",
  "parameters": {
    "type": "object",
    "properties": {
      "Content-Type": {
        "default": "application/json",
        "type": "string",
        "description": "Type of the content being sent."
      },
      "Accept": {
        "default": "application/json",
        "type": "string",
        "description": "HTTP Client Negotiation _Accept_ Header. Indicates the types of responses the client can understand."
      },
      "page": {
        "example": 2,
        "type": "integer",
        "description": "Page number."
      },
      "pageSize": {
        "example": 15,
        "type": "integer",
        "description": "Number of the items of the page."
      },
      "orderByAsc": {
        "example": true,
        "type": "boolean",
        "description": "Defines if the items of the page are in ascending order."
      }
    },
    "required": [
      "Content-Type",
      "Accept",
      "page",
      "pageSize",
      "orderByAsc"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://vtex.local/api/catalog_system/pvt/collection/search{?page,pageSize,orderByAsc}"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      }
    }
  },
  "responses": {}
}
