{
  "name": "Update",
  "description": "Updates information of a specific coupon.",
  "parameters": {
    "type": "object",
    "properties": {
      "Content-Type": {
        "default": "application/json",
        "type": "string",
        "description": "Type of the content being sent."
      },
      "Accept": {
        "default": "application/json",
        "type": "string",
        "description": "HTTP Client Negotiation Accept Header. Indicates the types of responses the client can understand."
      },
      "body": {
        "properties": {
          "couponCode": {
            "description": "Coupon code.",
            "example": "test",
            "type": "string"
          },
          "expirationIntervalPerUse": {
            "description": "Coupon expiration interval per use.",
            "example": "00:00:00",
            "type": "string"
          },
          "isArchived": {
            "description": "Defines if the coupon is archived (`true`) or not (`false`).",
            "example": false,
            "type": "boolean"
          },
          "maxItemsPerClient": {
            "description": "Maximum items per client that the coupon can be applied.",
            "example": 10,
            "type": "integer"
          },
          "utmCampaign": {
            "description": "UTM campaign code.",
            "example": "coupon3",
            "type": "string"
          },
          "utmSource": {
            "description": "UTM source code.",
            "example": "coupon3",
            "type": "string"
          }
        },
        "required": [
          "utmSource",
          "utmCampaign",
          "couponCode",
          "isArchived",
          "maxItemsPerClient",
          "expirationIntervalPerUse"
        ],
        "title": "",
        "type": "object",
        "description": ""
      }
    },
    "required": [
      "Content-Type",
      "Accept",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://vtex.local/api/rnb/pvt/coupon"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": ""
        },
        "**Key properties:**",
        {
          "$ul": [
            "**couponCode**: Coupon code.",
            "**expirationIntervalPerUse**: Coupon expiration interval per use.",
            "**isArchived**: Defines if the coupon is archived (`true`) or not (`false`).",
            "**lastModifiedUtc**: Date and time of the last update of the coupon in UTC format.",
            "**maxItemsPerClient**: Maximum items per client that the coupon can be applied.",
            "**utmCampaign**: UTM campaign code.",
            "**utmSource**: UTM source code."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
