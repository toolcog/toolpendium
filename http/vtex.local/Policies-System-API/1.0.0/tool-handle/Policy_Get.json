{
  "name": "Policy_Get",
  "description": "Retrieves general information of a policy by its ID.",
  "parameters": {
    "type": "object",
    "properties": {
      "Content-Type": {
        "default": "application/json",
        "type": "string",
        "description": "Describes the type of the content being sent"
      },
      "Accept": {
        "default": "application/json",
        "type": "string",
        "description": "HTTP Client Negotiation _Accept_ Header. Indicates the types of responses the client can understand "
      },
      "id": {
        "default": "pa_test_001",
        "type": "string",
        "description": "Policy ID"
      }
    },
    "required": [
      "Content-Type",
      "Accept",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://vtex.local/api/policy-engine/policies/{id}"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "PolicyGetResponse list"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**description**: Policy description. This description is only for internal use of identification",
            "**id**: Policy ID",
            "**name**: Policy Name",
            "**statements**: Requirements to the Policy be applied"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
