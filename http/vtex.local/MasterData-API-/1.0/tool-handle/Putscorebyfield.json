{
  "name": "Putscorebyfield",
  "description": "It allows to punctuate in a specific field.",
  "parameters": {
    "type": "object",
    "properties": {
      "Accept": {
        "default": "application/vnd.vtex.ds.v10+json",
        "type": "string",
        "description": "HTTP Client Negotiation _Accept_ Header. Indicates the types of responses the client can understand "
      },
      "acronym": {
        "default": "{{acronym}}",
        "type": "string",
        "description": "Two letter word that identifies the data structure"
      },
      "id": {
        "default": "{{id}}",
        "type": "string",
        "description": "Id of the document"
      },
      "field-name": {
        "default": "{{field-name}}",
        "type": "string",
        "description": "Name of the field to score"
      },
      "body": {
        "$ref": "#/components/schemas/PutscorebyfieldRequest",
        "description": ""
      }
    },
    "required": [
      "Accept",
      "acronym",
      "id",
      "field-name",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://vtex.local/api/dataentities/{acronym}/documents/{id}/score/{field-name}"
    },
    "headers": {
      "Accept": {
        "$": "Accept"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
