{
  "name": "CreateUpdatePickupPoint",
  "description": "Creates or updates [pickup points](https://help.vtex.com/en/subcategory/pickup-points--1c5Btie9ou2Gg2iUo0ggqM#) in your store by Pickup Point ID.",
  "parameters": {
    "type": "object",
    "properties": {
      "Content-Type": {
        "default": "application/json; charset=utf-8",
        "type": "string",
        "description": "Type of the content being sent"
      },
      "Accept": {
        "default": "application/json",
        "type": "string",
        "description": "HTTP Client Negotiation Accept Header. Indicates the types of responses the client can understand"
      },
      "pickupPointId": {
        "example": "123456789",
        "type": "string",
        "description": "Pickup Point ID. Cannot contain spaces."
      }
    },
    "required": [
      "Content-Type",
      "Accept",
      "pickupPointId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://vtex.local/api/logistics/pvt/configuration/pickuppoints/{pickupPointId}"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Create/Update"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**address**",
              {
                "$ul": [
                  "**city**",
                  "**complement**",
                  [
                    "**country**",
                    {
                      "$ul": [
                        "**acronym**",
                        "**name**"
                      ]
                    }
                  ],
                  [
                    "**location**",
                    {
                      "$ul": [
                        "**latitude**",
                        "**longitude**"
                      ]
                    }
                  ],
                  "**neighborhood**",
                  "**number**",
                  "**postalCode**",
                  "**reference**",
                  "**state**",
                  "**street**"
                ]
              }
            ],
            "**businessHours**: ",
            "**description**",
            "**formatted_address**",
            "**id**",
            "**instructions**",
            "**isActive**",
            "**name**",
            "**pickupHolidays**: ",
            "**tagsLabel**: "
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
