{
  "name": "CreateGiftCard",
  "description": "Creates a GiftCard for a specific user",
  "parameters": {
    "type": "object",
    "properties": {
      "Content-Type": {
        "default": "application/json",
        "type": "string",
        "description": "The Media type of the body of the request. Default value for payment provider protocol is application/json"
      },
      "Accept": {
        "default": "application/json",
        "type": "string",
        "description": "Media type(s) that is/are acceptable for the response. Default value for payment provider protocol is application/json"
      },
      "X-VTEX-API-AppKey": {
        "default": "{{X-VTEX-API-AppKey}}",
        "type": "string",
        "description": "The AppKey configured by the merchant"
      },
      "X-VTEX-API-AppToken": {
        "default": "{{X-VTEX-API-AppToken}}",
        "type": "string",
        "description": "The AppToken configured by the merchant"
      }
    },
    "required": [
      "Content-Type",
      "Accept",
      "X-VTEX-API-AppKey",
      "X-VTEX-API-AppToken"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://vtex.local/giftcards"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      },
      "X-VTEX-API-AppKey": {
        "$": "X-VTEX-API-AppKey"
      },
      "X-VTEX-API-AppToken": {
        "$": "X-VTEX-API-AppToken"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "response"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**balance**",
            "**caption**",
            "**emissionDate**",
            "**expiringDate**",
            "**id** (default: 2)",
            "**redemptionCode**",
            "**redemptionToken**",
            "**relationName**",
            [
              "**transactions**",
              {
                "$ul": [
                  "**href**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
