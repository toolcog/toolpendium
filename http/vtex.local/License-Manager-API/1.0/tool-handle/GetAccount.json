{
  "name": "GetAccount",
  "description": "Retrieves information from an account, such as company and sponsor user details, stores, and appTokens.\n\r\n\rThis endpoint only accepts requests from the host list designated for that store. If you want to try this request from this portal, be sure to add it to the list. Learn how to add hosts to the list in [How to manage accounts](https://help.vtex.com/en/tutorial/how-to-manage-accounts--tutorials_6285#).",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://vtex.local/api/vlm/account"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Successful response for `/api/vlm/account`",
        "**Key properties:**",
        {
          "$ul": [
            "**accountName**: Account name",
            "**address**: Address of contact",
            [
              "**appKey**: Deprecated. Check appKeys object for all appKeys",
              {
                "$ul": [
                  "**name**",
                  "**token**"
                ]
              }
            ],
            "**appKeys**: Array of application keys",
            "**city**: City of contact",
            "**cnpj**: CNPJ (Tax ID) of account",
            "**companyName**: Company name",
            "**complement**: Additional address of contact",
            [
              "**contact**",
              {
                "$ul": [
                  "**email**: Email of the contact",
                  "**name**: Name of the contact",
                  "**phone**: Phone of the contact"
                ]
              }
            ],
            "**country**: Country of contact",
            "**creationDate**: The date when the account was created",
            "**defaultUrl**",
            "**district**: Neighborhood of contact",
            "**hasLogo**: If logo has been setup",
            "**haveParentAccount**: If it has a parent account",
            "**hosts**: Hosts of all stores",
            "**id**: ID of the account",
            "**inactivationDate**: The date when the account was deactivated",
            "**isActive**: If account is active or not",
            "**isOperating**: If it is in production",
            "**licenses**: Licenses of the account",
            "**logo**: Filename of account logo",
            "**lv**",
            "**name**: Trading name",
            "**number**: Number of the address of contact",
            "**operationDate**: The date when the account went into production",
            "**parentAccountId**: The ID of the parent account",
            "**parentAccountName**: The name of the parent account",
            "**postalCode**: Zip Code of contact",
            "**sites**: Array of objects representing a store",
            [
              "**sponsor**: Object representing the sponsor user",
              {
                "$ul": [
                  "**email**: Email of the sponsor user",
                  "**name**: Name of the sponsor user",
                  "**phone**: Phone of the sponsor user"
                ]
              }
            ],
            "**state**: State/Province of contact",
            "**telephone**: Telephone of contact",
            "**tradingName**: Trading name"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
