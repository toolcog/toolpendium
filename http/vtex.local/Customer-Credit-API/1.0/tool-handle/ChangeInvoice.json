{
  "name": "ChangeInvoice",
  "description": "Updates invoice's attributes `status`, `paymentLink` and `observation`.",
  "parameters": {
    "type": "object",
    "properties": {
      "creditAccountId": {
        "default": "insert identifier here",
        "type": "string",
        "description": "Credit account's identification"
      },
      "invoiceId": {
        "default": "insert identifier here",
        "type": "string",
        "description": ""
      },
      "friendlyId": {
        "default": "insert identifier here",
        "type": "string",
        "description": "Invoice's identification"
      },
      "Accept": {
        "default": "application/json",
        "type": "string",
        "description": "Media type(s) that is/are acceptable for the response. Default value for payment provider protocol is application/json"
      },
      "Content-Type": {
        "default": "application/json",
        "type": "string",
        "description": "The Media type of the body of the request. Default value for payment provider protocol is application/json"
      },
      "body": {
        "example": {
          "observation": "string (optional)",
          "paymentLink": "string (URL) (optional)",
          "status": "string"
        },
        "properties": {
          "observation": {
            "default": "example",
            "type": "string"
          },
          "paymentLink": {
            "default": "example",
            "type": "string"
          },
          "status": {
            "default": "Paid",
            "description": "Invoice's status. It must be completed with &quot;Paid&quot;, &quot;Cancelled&quot; or &quot;Open&quot; value.",
            "type": "string"
          }
        },
        "required": [
          "status",
          "observation",
          "paymentLink"
        ],
        "title": "ChangeInvoiceRequest",
        "type": "object",
        "description": ""
      }
    },
    "required": [
      "creditAccountId",
      "invoiceId",
      "Accept",
      "Content-Type",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://vtex.local/api/creditcontrol/accounts/{creditAccountId}/invoices/{invoiceId}{?friendlyId}"
    },
    "headers": {
      "Accept": {
        "$": "Accept"
      },
      "Content-Type": {
        "$": "Content-Type"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
