        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**monitor**",
              {
                "$ul": [
                  "**id**",
                  "**name**",
                  "**uid**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  [
                    "**details**",
                    {
                      "$ul": [
                        "**param**"
                      ]
                    }
                  ],
                  "**message**",
                  "**name**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
