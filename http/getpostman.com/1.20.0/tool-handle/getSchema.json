{
  "name": "getSchema",
  "description": "This call fetches a single schema having the specified id.\n\nResponse contains a `schema` object with all the details related to the schema, namely, `id`, `language`, `type`, `schema` etc. \n\n> Requires <a href=\"#authentication\">API Key</a> as `X-Api-Key` request header or `apikey` URL query parameter.",
  "parameters": {
    "type": "object",
    "properties": {
      "apiId": {
        "type": "string"
      },
      "apiVersionId": {
        "type": "string"
      },
      "schemaId": {
        "type": "string"
      }
    },
    "required": [
      "apiId",
      "apiVersionId",
      "schemaId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.getpostman.com/apis/{apiId}/versions/{apiVersionId}/schemas/{schemaId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**schema**",
              {
                "$ul": [
                  "**apiVersion**",
                  "**createdAt**",
                  "**createdBy**",
                  "**id**",
                  "**language**",
                  "**type**",
                  "**updateBy**",
                  "**updatedAt**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
