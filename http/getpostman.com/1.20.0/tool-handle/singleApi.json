{
  "name": "singleApi",
  "description": "This call fetches a single API having the specified id.\n\nResponse contains an `api` object with all the details related to the queried API, namely, `id`, `name`, `summary`, `description` etc. \n\n> Requires <a href=\"#authentication\">API Key</a> as `X-Api-Key` request header or `apikey` URL query parameter.",
  "parameters": {
    "type": "object",
    "properties": {
      "apiId": {
        "type": "string"
      }
    },
    "required": [
      "apiId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.getpostman.com/apis/{apiId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**api**",
              {
                "$ul": [
                  "**createdAt**",
                  "**createdBy**",
                  "**description**",
                  "**id**",
                  "**name**",
                  "**summary**",
                  "**updatedAt**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
