{
  "name": "singleMonitor",
  "description": "This endpoint fetches you basic information about the monitor using its `uid`.\n\n> Requires <a href=\"#authentication\">API Key</a> as `X-Api-Key` request header or `apikey` URL query parameter.",
  "parameters": {
    "type": "object",
    "properties": {
      "monitor_uid": {
        "type": "string"
      }
    },
    "required": [
      "monitor_uid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.getpostman.com/monitors/{monitor_uid}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**monitor**",
              {
                "$ul": [
                  "**collectionUid**",
                  "**distribution**",
                  "**environmentUid**",
                  "**id**",
                  [
                    "**lastRun**",
                    {
                      "$ul": [
                        "**finishedAt**",
                        "**startedAt**",
                        [
                          "**stats**",
                          {
                            "$ul": [
                              [
                                "**assertions**",
                                {
                                  "$ul": [
                                    "**failed**",
                                    "**total**"
                                  ]
                                }
                              ],
                              [
                                "**requests**",
                                {
                                  "$ul": [
                                    "**total**"
                                  ]
                                }
                              ]
                            ]
                          }
                        ],
                        "**status**"
                      ]
                    }
                  ],
                  "**name**",
                  [
                    "**notifications**",
                    {
                      "$ul": [
                        "**onError**",
                        "**onFailure**"
                      ]
                    }
                  ],
                  [
                    "**options**",
                    {
                      "$ul": [
                        "**followRedirects**",
                        "**requestDelay**",
                        "**requestTimeout**",
                        "**strictSSL**"
                      ]
                    }
                  ],
                  "**owner**",
                  [
                    "**schedule**",
                    {
                      "$ul": [
                        "**cron**",
                        "**nextRun**",
                        "**timezone**"
                      ]
                    }
                  ],
                  "**uid**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**message**",
                  "**name**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
