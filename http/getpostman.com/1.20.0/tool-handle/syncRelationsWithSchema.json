        "example": "{{apiId}}",
        "type": "string",
        "description": "Id of the API"
      },
      "apiVersionId": {
        "example": "{{apiVersionId}}",
        "type": "string",
        "description": "Id of the API version"
      },
      "entityType": {
        "example": "{{entityType}}",
        "type": "string",
        "description": "Relation type (e.g documentation, contracttest, integrationtest, testsuite, mock, monitor)"
      },
      "entityId": {
        "example": "{{entityId}}",
