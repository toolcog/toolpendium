{
  "name": "list-locations",
  "description": "Retrieve a list of locations as seen in the commerce platform.\n\nA `location` is a geographic place at which stocks of products may be held, or from where orders were placed.",
  "parameters": {
    "type": "object",
    "properties": {
      "companyId": {
        "description": "Unique identifier for your SMB in Codat.",
        "example": "8a210b68-6988-11ed-a1eb-0242ac120002",
        "format": "uuid",
        "type": "string"
      },
      "connectionId": {
        "description": "Unique identifier for a company's data connection.",
        "example": "2e9d2c44-f675-40ba-8049-353bfcb5e171",
        "format": "uuid",
        "type": "string"
      }
    },
    "required": [
      "companyId",
      "connectionId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
