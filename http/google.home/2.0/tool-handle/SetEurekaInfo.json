{
  "name": "SetEurekaInfo",
  "description": "This can set custom values to some options.\n\nOnly fields to be modified need to be sent, not all. The example has some modifiable fields.\n\nTODO: List all modifiable fields.\n\nSending non-existant fields will still return a 200 OK, but they are not saved.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/SetEurekaInfoRequest"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "SetEurekaInfoRequest": {
        "example": {
          "name": "Living Room",
          "opt_in": {
            "opencast": true,
            "preview_channel": true,
            "remote_ducking": true,
            "stats": true
          },
          "settings": {
            "control_notifications": 2
          }
        },
        "properties": {
          "name": {
            "type": "string"
          },
          "opt_in": {
            "$ref": "#/$defs/OptIn1"
          },
          "settings": {
            "$ref": "#/$defs/Settings1"
          }
        },
        "required": [
          "name",
          "settings",
          "opt_in"
        ],
        "title": "SetEurekaInfoRequest",
        "type": "object"
      },
      "OptIn1": {
        "example": {
          "opencast": true,
          "preview_channel": true,
          "remote_ducking": true,
          "stats": true
        },
        "properties": {
          "opencast": {
            "type": "boolean"
          },
          "preview_channel": {
            "type": "boolean"
          },
          "remote_ducking": {
            "type": "boolean"
          },
          "stats": {
            "type": "boolean"
          }
        },
        "required": [
          "opencast",
          "preview_channel",
          "remote_ducking",
          "stats"
        ],
        "title": "OptIn1",
        "type": "object"
      },
      "Settings1": {
        "example": {
          "control_notifications": 2
        },
        "properties": {
          "control_notifications": {
            "format": "int32",
            "type": "integer"
          }
        },
        "required": [
          "control_notifications"
        ],
        "title": "Settings1",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://example.com/setup/set_eureka_info"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
