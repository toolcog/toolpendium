{
  "name": "DoNotDisturb",
  "description": "This is for the Do Not Disturb option. Sending an empty-body POST returns the current value. Sending a new value changes it.",
  "parameters": {
    "type": "object",
    "properties": {
      "Content-Type": {
        "example": "application/json",
        "type": "string"
      }
    },
    "required": [
      "Content-Type"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://example.com/setup/assistant/notifications"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Getcurrentstate"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**notifications_enabled**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
