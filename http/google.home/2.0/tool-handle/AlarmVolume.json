{
  "name": "AlarmVolume",
  "description": "This gets and sets alarms and timers volume.  \n**Note:** This is not the same as normal volume.\n\nVolume is a float number in [0, 1] where 0 is minimum and 1 is maximum.  \nSending an empty body gets the volume. Sending `volume` sets the volume.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/AlarmVolumeRequest"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "AlarmVolumeRequest": {
        "example": {
          "volume": 1
        },
        "properties": {
          "volume": {
            "format": "int32",
            "type": "integer"
          }
        },
        "required": [
          "volume"
        ],
        "title": "AlarmVolumeRequest",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://example.com/setup/assistant/alarms/volume"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Getvolume"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**volume**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
