{
  "name": "Forgetpaireddevice",
  "description": "*See note for Bluetooth under `/setup/bluetooth/status`*\n\n**For both parts**\n\nThis is to forget paired devices by mac address. Works for both kinds of devices (Part 1 and Part 2).",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/ForgetpaireddeviceRequest"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "ForgetpaireddeviceRequest": {
        "example": {
          "bond": false,
          "mac_address": "xx:xx:xx:xx:xx:xx"
        },
        "properties": {
          "bond": {
            "type": "boolean"
          },
          "mac_address": {
            "type": "string"
          }
        },
        "required": [
          "mac_address",
          "bond"
        ],
        "title": "ForgetpaireddeviceRequest",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://example.com/setup/bluetooth/bond"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
