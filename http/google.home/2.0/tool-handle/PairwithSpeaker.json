{
  "name": "PairwithSpeaker",
  "description": "*See note for Bluetooth under `/setup/bluetooth/status`*\n\n**For Part 2 only**\n\nThis pairs with other bluetooth speakers by mac address.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/PairwithSpeakerRequest"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "PairwithSpeakerRequest": {
        "example": {
          "connect": true,
          "mac_address": "54:13:79:49:19:22",
          "profile": 2
        },
        "properties": {
          "connect": {
            "type": "boolean"
          },
          "mac_address": {
            "type": "string"
          },
          "profile": {
            "format": "int32",
            "type": "integer"
          }
        },
        "required": [
          "mac_address",
          "connect",
          "profile"
        ],
        "title": "PairwithSpeakerRequest",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://example.com/setup/bluetooth/connect"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
