{
  "name": "Metals_SpotHistoricalPerformance_GET",
  "description": "Historical Performance information",
  "parameters": {
    "type": "object",
    "properties": {
      "metals": {
        "type": "string",
        "description": "comma separated list of metals"
      },
      "currency": {
        "type": "string",
        "description": "comma separated list of conversion currencies, defaults to USD"
      },
      "unitofmeasure": {
        "enum": [
          "mg",
          "g",
          "kg",
          "gr",
          "oz",
          "toz",
          "ct",
          "dwt"
        ],
        "type": "string",
        "description": "unit of meaure, defaults to troy ounces. allowed values are:\r\nmg=milligram\r\ng=gram\r\nkg=kilogram\r\ngr=grain\r\noz=ounce\r\ntoz=troy ounce\r\nct=carat\r\ndwt=pennyweight"
      },
      "format": {
        "enum": [
          "json",
          "xml"
        ],
        "type": "string",
        "description": "to override content negotiation specify a value of json or xml"
      }
    },
    "required": [
      "metals"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.nfusionsolutions.biz/api/v1/Metals/spot/performance{?metals,currency,unitofmeasure,format}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**baseCurrency**",
                  "**intervals**",
                  "**name**",
                  "**symbol**"
                ]
              }
            ],
            "**error**",
            "**requestedCurrency**",
            "**requestedSymbol**",
            "**requestedUnitOfMeasure**",
            "**success**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
