{
  "name": "Currencies_Rate_GET",
  "description": "Current Mid Rate",
  "parameters": {
    "type": "object",
    "properties": {
      "pairs": {
        "type": "string",
        "description": "comma separated list of currency pairs. For example: USD/CAD,USD/EUR,USD/AUD"
      },
      "format": {
        "enum": [
          "json",
          "xml"
        ],
        "type": "string",
        "description": "to override content negotiation specify a value of json or xml"
      }
    },
    "required": [
      "pairs"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.nfusionsolutions.biz/api/v1/Currencies/rate{?pairs,format}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**symbol**",
                  "**timestamp**",
                  "**value**"
                ]
              }
            ],
            "**error**",
            "**requestedCurrency**",
            "**requestedSymbol**",
            "**requestedUnitOfMeasure**",
            "**success**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
