{
  "name": "Metals_SpotRatioSummary_GET",
  "description": "Ratios between prices of two metals",
  "parameters": {
    "type": "object",
    "properties": {
      "pairs": {
        "type": "string",
        "description": "comma separated list of metal pairs. For example: gold/silver,gold/platinum,silver/palladium"
      },
      "format": {
        "enum": [
          "json",
          "xml"
        ],
        "type": "string",
        "description": "to override content negotiation specify a value of json or xml"
      }
    },
    "required": [
      "pairs"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.nfusionsolutions.biz/api/v1/Metals/spot/ratio/summary{?pairs,format}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**ask**",
                  "**baseCurrency**",
                  "**bid**",
                  "**fiftyTwoWeekHigh**",
                  "**fiftyTwoWeekLow**",
                  "**fiftyTwoWeekPercentChange**",
                  "**fourWeekPercentChange**",
                  "**high**",
                  "**last**",
                  "**low**",
                  "**oneDayChange**",
                  "**oneDayPercentChange**",
                  "**oneDayValue**",
                  "**open**",
                  "**symbol**",
                  "**timeStamp**",
                  "**twelveWeekPercentChange**",
                  "**yearToDatePercentChange**"
                ]
              }
            ],
            "**error**",
            "**requestedCurrency**",
            "**requestedSymbol**",
            "**requestedUnitOfMeasure**",
            "**success**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
