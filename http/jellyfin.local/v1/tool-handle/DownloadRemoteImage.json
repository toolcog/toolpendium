{
  "name": "DownloadRemoteImage",
  "description": "Downloads a remote image for an item.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "description": "Item Id.",
        "format": "uuid",
        "type": "string"
      },
      "type": {
        "$ref": "#/components/schemas/ImageType",
        "description": "The image type."
      },
      "imageUrl": {
        "description": "The image url.",
        "nullable": true,
        "type": "string"
      }
    },
    "required": [
      "itemId",
      "type"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://jellyfin.local/Items/{itemId}/RemoteImages/Download{?type,imageUrl}"
    }
  },
  "responses": {
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**",
            "**instance**",
            "**status**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
