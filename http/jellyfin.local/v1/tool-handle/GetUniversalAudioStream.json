{
  "name": "GetUniversalAudioStream",
  "description": "Gets an audio stream.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "description": "The item id.",
        "format": "uuid",
        "type": "string"
      },
      "container": {
        "description": "Optional. The audio container.",
        "items": {
          "type": "string"
        },
        "nullable": true,
        "type": "array"
      },
      "mediaSourceId": {
        "description": "The media version id, if playing an alternate version.",
        "nullable": true,
        "type": "string"
      },
      "deviceId": {
        "description": "The device id of the client requesting. Used to stop encoding processes when needed.",
        "nullable": true,
        "type": "string"
      },
      "userId": {
        "description": "Optional. The user id.",
        "format": "uuid",
        "nullable": true,
        "type": "string"
      },
      "audioCodec": {
        "description": "Optional. The audio codec to transcode to.",
        "nullable": true,
        "type": "string"
      },
      "maxAudioChannels": {
        "description": "Optional. The maximum number of audio channels.",
        "format": "int32",
        "nullable": true,
        "type": "integer"
      },
      "transcodingAudioChannels": {
        "description": "Optional. The number of how many audio channels to transcode to.",
        "format": "int32",
        "nullable": true,
        "type": "integer"
      },
      "maxStreamingBitrate": {
        "description": "Optional. The maximum streaming bitrate.",
        "format": "int32",
        "nullable": true,
        "type": "integer"
      },
      "audioBitRate": {
        "description": "Optional. Specify an audio bitrate to encode to, e.g. 128000. If omitted this will be left to encoder defaults.",
        "format": "int32",
        "nullable": true,
        "type": "integer"
      },
      "startTimeTicks": {
        "description": "Optional. Specify a starting offset, in ticks. 1 tick = 10000 ms.",
        "format": "int64",
        "nullable": true,
        "type": "integer"
      },
      "transcodingContainer": {
        "description": "Optional. The container to transcode to.",
        "nullable": true,
        "type": "string"
      },
      "transcodingProtocol": {
        "description": "Optional. The transcoding protocol.",
        "nullable": true,
        "type": "string"
      },
      "maxAudioSampleRate": {
        "description": "Optional. The maximum audio sample rate.",
        "format": "int32",
        "nullable": true,
        "type": "integer"
      },
      "maxAudioBitDepth": {
        "description": "Optional. The maximum audio bit depth.",
        "format": "int32",
        "nullable": true,
        "type": "integer"
      },
      "enableRemoteMedia": {
        "description": "Optional. Whether to enable remote media.",
        "nullable": true,
        "type": "boolean"
      },
      "breakOnNonKeyFrames": {
        "description": "Optional. Whether to break on non key frames.",
        "type": "boolean"
      },
      "enableRedirection": {
        "default": true,
        "description": "Whether to enable redirection. Defaults to true.",
        "type": "boolean"
      }
    },
    "required": [
      "itemId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://jellyfin.local/Audio/{itemId}/universal{?container,mediaSourceId,deviceId,userId,audioCodec,maxAudioChannels,transcodingAudioChannels,maxStreamingBitrate,audioBitRate,startTimeTicks,transcodingContainer,transcodingProtocol,maxAudioSampleRate,maxAudioBitDepth,enableRemoteMedia,breakOnNonKeyFrames,enableRedirection}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
