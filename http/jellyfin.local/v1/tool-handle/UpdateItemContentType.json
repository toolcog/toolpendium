{
  "name": "UpdateItemContentType",
  "description": "Updates an item's content type.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "description": "The item id.",
        "format": "uuid",
        "type": "string"
      },
      "contentType": {
        "description": "The content type of the item.",
        "nullable": true,
        "type": "string"
      }
    },
    "required": [
      "itemId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://jellyfin.local/Items/{itemId}/ContentType{?contentType}"
    }
  },
  "responses": {
    "404": {
      "$encode": "markdown",
      "$block": [
