{
  "name": "SearchRemoteSubtitles",
  "description": "Search remote subtitles.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "description": "The item id.",
        "format": "uuid",
        "type": "string"
      },
      "language": {
        "description": "The language of the subtitles.",
        "type": "string"
      },
      "isPerfectMatch": {
        "description": "Optional. Only show subtitles which are a perfect match.",
        "nullable": true,
        "type": "boolean"
      }
    },
    "required": [
      "itemId",
      "language"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://jellyfin.local/Items/{itemId}/RemoteSearch/Subtitles/{language}{?isPerfectMatch}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Author**",
            "**Comment**",
            "**CommunityRating**",
            "**DateCreated**",
            "**DownloadCount**",
            "**Format**",
            "**Id**",
            "**IsHashMatch**",
            "**Name**",
            "**ProviderName**",
            "**ThreeLetterISOLanguageName**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
