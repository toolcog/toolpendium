{
  "name": "GetDirectoryContents",
  "description": "Gets the contents of a given directory in the file system.",
  "parameters": {
    "type": "object",
    "properties": {
      "path": {
        "description": "The path.",
        "type": "string"
      },
      "includeFiles": {
        "default": false,
        "description": "An optional filter to include or exclude files from the results. true/false.",
        "type": "boolean"
      },
      "includeDirectories": {
        "default": false,
        "description": "An optional filter to include or exclude folders from the results. true/false.",
        "type": "boolean"
      }
    },
    "required": [
      "path"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://jellyfin.local/Environment/DirectoryContents{?path,includeFiles,includeDirectories}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Class FileSystemEntryInfo.",
        "**Key properties:**",
        {
          "$ul": [
            "**Name**: Gets the name.",
            "**Path**: Gets the path.",
            "**Type**: Enum FileSystemEntryType."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
