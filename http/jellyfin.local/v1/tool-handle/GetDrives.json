{
  "name": "GetDrives",
  "description": "Gets available drives from the server's file system.",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://jellyfin.local/Environment/Drives"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Class FileSystemEntryInfo.",
        "**Key properties:**",
        {
          "$ul": [
            "**Name**: Gets the name.",
            "**Path**: Gets the path.",
            "**Type**: Enum FileSystemEntryType."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
