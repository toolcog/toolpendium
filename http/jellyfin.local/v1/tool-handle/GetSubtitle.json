{
  "name": "GetSubtitle",
  "description": "Gets subtitles in a specified format.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "description": "The item id.",
        "format": "uuid",
        "type": "string"
      },
      "mediaSourceId": {
        "description": "The media source id.",
        "type": "string"
      },
      "index": {
        "description": "The subtitle stream index.",
        "format": "int32",
        "type": "integer"
      },
      "format": {
        "description": "The format of the returned subtitle.",
        "type": "string"
      },
      "endPositionTicks": {
        "description": "Optional. The end position of the subtitle in ticks.",
        "format": "int64",
        "nullable": true,
        "type": "integer"
      },
      "copyTimestamps": {
        "default": false,
        "description": "Optional. Whether to copy the timestamps.",
        "type": "boolean"
      },
      "addVttTimeMap": {
        "default": false,
        "description": "Optional. Whether to add a VTT time map.",
        "type": "boolean"
      },
      "startPositionTicks": {
        "default": 0,
        "description": "Optional. The start position of the subtitle in ticks.",
        "format": "int64",
        "type": "integer"
      }
    },
    "required": [
      "itemId",
      "mediaSourceId",
      "index",
      "format"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://jellyfin.local/Videos/{itemId}/{mediaSourceId}/Subtitles/{index}/Stream.{format}{?endPositionTicks,copyTimestamps,addVttTimeMap,startPositionTicks}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
