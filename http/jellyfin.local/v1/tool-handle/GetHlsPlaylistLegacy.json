{
  "name": "GetHlsPlaylistLegacy",
  "description": "Gets a hls video playlist.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "description": "The video id.",
        "type": "string"
      },
      "playlistId": {
        "description": "The playlist id.",
        "type": "string"
      }
    },
    "required": [
      "itemId",
      "playlistId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://jellyfin.local/Videos/{itemId}/hls/{playlistId}/stream.m3u8"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
