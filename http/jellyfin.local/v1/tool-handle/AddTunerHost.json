{
  "name": "AddTunerHost",
  "description": "Adds a tuner host.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/components/schemas/TunerHostInfo",
        "description": "New tuner host."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://jellyfin.local/LiveTv/TunerHosts"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**AllowHWTranscoding**",
            "**DeviceId**",
            "**EnableStreamLooping**",
            "**FriendlyName**",
            "**Id**",
            "**ImportFavoritesOnly**",
            "**Source**",
            "**TunerCount**",
            "**Type**",
            "**Url**",
            "**UserAgent**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
