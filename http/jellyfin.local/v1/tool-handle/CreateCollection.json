{
  "name": "CreateCollection",
  "description": "Creates a new collection.",
  "parameters": {
    "type": "object",
    "properties": {
      "name": {
        "description": "The name of the collection.",
        "nullable": true,
        "type": "string"
      },
      "ids": {
        "description": "Item Ids to add to the collection.",
        "items": {
          "type": "string"
        },
        "nullable": true,
        "type": "array"
      },
      "parentId": {
        "description": "Optional. Create the collection within a specific folder.",
        "format": "uuid",
        "nullable": true,
        "type": "string"
      },
      "isLocked": {
        "default": false,
        "description": "Whether or not to lock the new collection.",
        "type": "boolean"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://jellyfin.local/Collections{?name,ids,parentId,isLocked}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Id**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
