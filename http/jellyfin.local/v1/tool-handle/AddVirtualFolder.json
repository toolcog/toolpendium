{
  "name": "AddVirtualFolder",
  "description": "Adds a virtual folder.",
  "parameters": {
    "type": "object",
    "properties": {
      "name": {
        "description": "The name of the virtual folder.",
        "nullable": true,
        "type": "string"
      },
      "collectionType": {
        "description": "The type of the collection.",
        "nullable": true,
        "type": "string"
      },
      "paths": {
        "description": "The paths of the virtual folder.",
        "items": {
          "type": "string"
        },
        "nullable": true,
        "type": "array"
      },
      "refreshLibrary": {
        "default": false,
        "description": "Whether to refresh the library.",
        "type": "boolean"
      },
      "body": {
        "$ref": "#/components/schemas/AddVirtualFolderDto",
        "description": "The library options."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://jellyfin.local/Library/VirtualFolders{?name,collectionType,paths,refreshLibrary}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
