{
  "name": "GetSubtitlePlaylist",
  "description": "Gets an HLS subtitle playlist.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "description": "The item id.",
        "format": "uuid",
        "type": "string"
      },
      "index": {
        "description": "The subtitle stream index.",
        "format": "int32",
        "type": "integer"
      },
      "mediaSourceId": {
        "description": "The media source id.",
        "type": "string"
      },
      "segmentLength": {
        "description": "The subtitle segment length.",
        "format": "int32",
        "type": "integer"
      }
    },
    "required": [
      "itemId",
      "index",
      "mediaSourceId",
      "segmentLength"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://jellyfin.local/Videos/{itemId}/{mediaSourceId}/Subtitles/{index}/subtitles.m3u8{?segmentLength}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
