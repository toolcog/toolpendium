{
  "name": "GetHlsAudioSegmentLegacyMp3",
  "description": "Gets the specified audio segment for an audio item.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "description": "The item id.",
        "type": "string"
      },
      "segmentId": {
        "description": "The segment id.",
        "type": "string"
      }
    },
    "required": [
      "itemId",
      "segmentId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://jellyfin.local/Audio/{itemId}/hls/{segmentId}/stream.mp3"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
