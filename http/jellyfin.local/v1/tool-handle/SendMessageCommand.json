{
  "name": "SendMessageCommand",
  "description": "Issues a command to a client to display a message to the user.",
  "parameters": {
    "type": "object",
    "properties": {
      "sessionId": {
        "description": "The session id.",
        "type": "string"
      },
      "text": {
        "description": "The message test.",
        "type": "string"
      },
      "header": {
        "description": "The message header.",
        "nullable": true,
        "type": "string"
      },
      "timeoutMs": {
        "description": "The message timeout. If omitted the user will have to confirm viewing the message.",
        "format": "int64",
        "nullable": true,
        "type": "integer"
      }
    },
    "required": [
      "sessionId",
      "text"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://jellyfin.local/Sessions/{sessionId}/Message{?text,header,timeoutMs}"
    }
  },
  "responses": {}
}
