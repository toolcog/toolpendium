{
  "name": "DiscvoverTuners",
  "description": "Discover tuners.",
  "parameters": {
    "type": "object",
    "properties": {
      "newDevicesOnly": {
        "default": false,
        "description": "Only discover new tuners.",
        "type": "boolean"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://jellyfin.local/LiveTv/Tuners/Discvover{?newDevicesOnly}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**AllowHWTranscoding**",
            "**DeviceId**",
            "**EnableStreamLooping**",
            "**FriendlyName**",
            "**Id**",
            "**ImportFavoritesOnly**",
            "**Source**",
            "**TunerCount**",
            "**Type**",
            "**Url**",
            "**UserAgent**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
