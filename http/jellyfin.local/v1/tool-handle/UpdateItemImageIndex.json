{
  "name": "UpdateItemImageIndex",
  "description": "Updates the index for an item image.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "description": "Item id.",
        "format": "uuid",
        "type": "string"
      },
      "imageType": {
        "$ref": "#/components/schemas/ImageType",
        "description": "Image type."
      },
      "imageIndex": {
        "description": "Old image index.",
        "format": "int32",
        "type": "integer"
      },
      "newIndex": {
        "description": "New image index.",
        "format": "int32",
        "type": "integer"
      }
    },
    "required": [
      "itemId",
      "imageType",
      "imageIndex"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://jellyfin.local/Items/{itemId}/Images/{imageType}/{imageIndex}/Index{?newIndex}"
    }
  },
  "responses": {
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**",
            "**instance**",
            "**status**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
