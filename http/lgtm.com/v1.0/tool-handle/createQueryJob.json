{
  "name": "createQueryJob",
  "description": "Submit a query to run on one or more projects on LGTM. The query is included in the body of the request.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "language": {
        "type": "string",
        "description": "The [language](https://lgtm.com/help/lgtm/analysis-faqs#which-languages-are-supported) you want to analyze.\n"
      },
      "project-id": {
        "items": {
          "format": "int64",
          "type": "integer"
        },
        "maxItems": 200,
        "minItems": 0,
        "type": "array",
        "description": "The identifier of the project to analyze. Either `project-id` or `projects-list` must be specified."
      },
      "projects-list": {
        "type": "string",
        "description": "Name of the list containing the projects to analyze. Either `project-id` or `projects-list` must be specified."
      }
    },
    "required": [
      "language"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://lgtm.com/api/v1.0/queryjobs{?language,project-id,projects-list}"
    }
  },
  "responses": {
    "202": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**id**: The identifier for the operation.",
            "**status**: Status of the operation.",
            "**task-result**",
            "**task-result-url**: The URL for the result of the task. For some operations, included only on completion.",
            "**task-type**",
            "**uploads**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
