{
  "name": "verify",
  "description": "Verify an email address or sms number with a code",
  "parameters": {
    "type": "object",
    "properties": {
      "verification": {
        "type": "string",
        "description": "ID of the verification entry"
      },
      "body": {
        "oneOf": [
          {
            "$ref": "#/$defs/VerifyEmailRequest"
          },
          {
            "$ref": "#/$defs/VerifySmsRequest"
          }
        ],
        "description": "Verify action body"
      }
    },
    "required": [
      "verification",
      "body"
    ],
    "$defs": {
      "VerifyEmailRequest": {
        "properties": {
          "code": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "code"
        ]
      },
      "VerifySmsRequest": {
        "properties": {
          "code": {
            "type": "string"
          },
          "sms": {
            "type": "string"
          }
        },
        "required": [
          "sms",
          "code"
        ]
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.mailscript.com/v2/verifications/{verification}/verify"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
