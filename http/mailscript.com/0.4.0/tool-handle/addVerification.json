{
  "name": "addVerification",
  "description": "Start verification process for external email address or sms number",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "oneOf": [
          {
            "$ref": "#/$defs/AddEmailVerificationRequest"
          },
          {
            "$ref": "#/$defs/AddSmsVerificationRequest"
          }
        ],
        "description": "Key body"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "AddEmailVerificationRequest": {
        "properties": {
          "email": {
            "type": "string"
          },
          "type": {
            "enum": [
              "email"
            ],
            "type": "string"
          }
        },
        "required": [
          "type",
          "email"
        ]
      },
      "AddSmsVerificationRequest": {
        "properties": {
          "sms": {
            "type": "string"
          },
          "type": {
            "enum": [
              "sms"
            ],
            "type": "string"
          }
        },
        "required": [
          "type",
          "sms"
        ]
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.mailscript.com/v2/verifications"
    },
    "body": {
      "$": "body",
