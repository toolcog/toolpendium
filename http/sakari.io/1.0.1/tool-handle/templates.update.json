{
  "name": "templates_update",
  "description": "Updates a template",
  "parameters": {
    "type": "object",
    "properties": {
      "accountId": {
        "type": "string",
        "description": "Account to apply operations to"
      },
      "templateId": {
        "type": "string",
        "description": "ID of template"
      }
    },
    "required": [
      "accountId",
      "templateId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.sakari.io/v1/accounts/{accountId}/templates/{templateId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**name**",
                  "**template**",
                  "**type**",
                  "**id**"
                ]
              }
            ],
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
