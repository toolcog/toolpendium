{
  "name": "webhooks_subscribe",
  "description": "When messages are acknowledge by carriers, a notification is sent to the specified URL",
  "parameters": {
    "type": "object",
    "properties": {
      "accountId": {
        "type": "string",
        "description": "Account to apply operations to"
      },
      "body": {
        "properties": {
          "eventTypes": {
            "items": {
              "enum": [
                "contact-created",
                "contact-updated",
                "contact-removed",
                "message-received",
                "message-sent",
                "message-status",
                "conversation-started",
                "contact-opt-out",
                "contact-opt-in",
                "list-opt-out",
                "list-opt-in"
              ],
              "type": "string"
            },
            "type": "array"
          },
          "url": {
            "example": "https://myserver.com/send/callback/here",
            "format": "uri",
            "type": "string"
          }
        },
        "required": [
          "callbackUrl"
        ],
        "type": "object"
      }
    },
    "required": [
      "accountId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sakari.io/v1/accounts/{accountId}/webhooks"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**eventTypes**",
                  "**url**"
                ]
              }
            ],
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
