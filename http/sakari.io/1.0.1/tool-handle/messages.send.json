{
  "name": "messages_send",
  "description": "Send Messages",
  "parameters": {
    "type": "object",
    "properties": {
      "accountId": {
        "type": "string",
        "description": "Account to apply operations to"
      },
      "body": {
        "$ref": "#/$defs/SendMessagesRequest"
      }
    },
    "required": [
      "accountId"
    ],
    "$defs": {
      "SendMessagesRequest": {
        "properties": {
          "contacts": {
            "items": {
              "$ref": "#/$defs/ContactRequest"
            },
            "type": "array"
          },
          "conversationStrategy": {
            "type": "string"
          },
          "conversations": {
            "description": "List of conversation ids to send messages to",
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "filters": {
            "properties": {
              "attributes": {
                "items": {
                  "type": "object"
                },
                "type": "array"
              },
              "tags": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              }
            },
            "type": "object"
          },
          "media": {
            "description": "List of media objects to attach to message",
            "items": {
              "properties": {
                "url": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "type": "array"
          },
          "phoneNumberFilter": {
            "properties": {
              "group": {
                "properties": {
                  "id": {
                    "type": "string"
                  }
                },
                "type": "object"
              }
            },
            "type": "object"
          },
          "template": {
            "type": "string"
          },
          "type": {
            "enum": [
              "SMS",
              "MMS"
            ],
            "type": "string"
          }
        },
        "type": "object"
      },
      "ContactRequest": {
        "allOf": [
          {
            "$ref": "#/$defs/ContactIdentifiers"
          },
          {
            "properties": {
              "attributes": {
                "type": "object"
              },
              "tags": {
                "items": {
                  "$ref": "#/$defs/Tag"
                },
                "type": "array"
              }
            },
            "type": "object"
          }
        ]
      },
      "ContactIdentifiers": {
        "properties": {
          "email": {
            "example": "chris@sakari.io",
            "type": "string"
          },
          "firstName": {
            "example": "Chris",
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "lastName": {
            "example": "Bloggs",
            "type": "string"
          },
          "mobile": {
            "properties": {
              "country": {
                "type": "string"
              },
              "number": {
                "example": "123-456-7890",
                "type": "string"
              }
            },
            "type": "object"
          }
        },
        "type": "object"
      },
      "Tag": {
        "properties": {
          "tag": {
            "type": "string"
          },
          "visible": {
            "type": "boolean"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sakari.io/v1/accounts/{accountId}/messages"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**estimatedPrice**",
                  "**invalid**",
                  "**jobId**",
                  "**messages**",
                  "**requested**",
                  "**valid**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
