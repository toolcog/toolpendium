{
  "name": "campaigns_create",
  "description": "Create campaign",
  "parameters": {
    "type": "object",
    "properties": {
      "accountId": {
        "type": "string",
        "description": "Account to apply operations to"
      },
      "body": {
        "$ref": "#/$defs/CampaignRequest"
      }
    },
    "required": [
      "accountId"
    ],
    "$defs": {
      "CampaignRequest": {
        "properties": {
          "filters": {
            "properties": {
              "attributes": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "contacts": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "tags": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              }
            },
            "type": "object"
          },
          "template": {
            "type": "string"
          },
          "trigger": {
            "properties": {
              "code": {
                "description": "Campaign type specifies how it sources contacts and what event triggers its execution  Sort order\n  * `M` - Manual\n  * `S` - Scheduled\n  * `FU` - File Upload\n",
                "enum": [
                  "M",
                  "S",
                  "FU"
                ],
                "type": "string"
              }
            },
            "type": "object"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sakari.io/v1/accounts/{accountId}/campaigns"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**id**"
                ]
              }
            ],
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
