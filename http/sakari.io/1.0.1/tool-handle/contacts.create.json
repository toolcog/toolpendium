{
  "name": "contacts_create",
  "description": "Create contact",
  "parameters": {
    "type": "object",
    "properties": {
      "accountId": {
        "type": "string",
        "description": "Account to apply operations to"
      },
      "mergeStrategy": {
        "enum": [
          "append",
          "core",
          "remove"
        ],
        "type": "string",
        "description": "Determines how existing contacts with matching mobile numbers are treated"
      },
      "body": {
        "$ref": "#/$defs/ContactRequest"
      }
    },
    "required": [
      "accountId"
    ],
    "$defs": {
      "ContactRequest": {
        "allOf": [
          {
            "$ref": "#/$defs/ContactIdentifiers"
          },
          {
            "properties": {
              "attributes": {
                "type": "object"
              },
              "tags": {
                "items": {
                  "$ref": "#/$defs/Tag"
                },
                "type": "array"
              }
            },
            "type": "object"
          }
        ]
      },
      "ContactIdentifiers": {
        "properties": {
          "email": {
            "example": "chris@sakari.io",
            "type": "string"
          },
          "firstName": {
            "example": "Chris",
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "lastName": {
            "example": "Bloggs",
            "type": "string"
          },
          "mobile": {
            "properties": {
              "country": {
                "type": "string"
              },
              "number": {
                "example": "123-456-7890",
                "type": "string"
              }
            },
            "type": "object"
          }
        },
        "type": "object"
      },
      "Tag": {
        "properties": {
          "tag": {
            "type": "string"
          },
          "visible": {
            "type": "boolean"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sakari.io/v1/accounts/{accountId}/contacts{?mergeStrategy}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
