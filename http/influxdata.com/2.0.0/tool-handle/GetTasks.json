{
  "name": "GetTasks",
  "description": "List all tasks",
  "parameters": {
    "type": "object",
    "properties": {
      "Zap-Trace-Span": {
        "type": "string",
        "description": "OpenTracing span context"
      },
      "name": {
        "type": "string",
        "description": "Returns task with a specific name."
      },
      "after": {
        "type": "string",
        "description": "Return tasks after a specified ID."
      },
      "user": {
        "type": "string",
        "description": "Filter tasks to a specific user ID."
      },
      "org": {
        "type": "string",
        "description": "Filter tasks to a specific organization name."
      },
      "orgID": {
        "type": "string",
        "description": "Filter tasks to a specific organization ID."
      },
      "status": {
        "enum": [
          "active",
          "inactive"
        ],
        "type": "string",
        "description": "Filter tasks by a status--\"inactive\" or \"active\"."
      },
      "limit": {
        "default": 100,
        "maximum": 500,
        "minimum": 1,
        "type": "integer",
        "description": "The number of tasks to return"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v2/tasks{?name,after,user,org,orgID,status,limit}"
    },
    "headers": {
      "Zap-Trace-Span": {
        "$": "Zap-Trace-Span"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**links**",
              {
                "$ul": [
                  "**next**: URI of resource.",
                  "**prev**: URI of resource.",
                  "**self**: URI of resource."
                ]
              }
            ],
            "**tasks**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: code is the machine-readable error code.",
            "**err**: err is a stack of errors that occurred during processing of the request. Useful for debugging.",
            "**message**: message is a human-readable message.",
            "**op**: op describes the logical code operation during error. Useful for debugging."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
