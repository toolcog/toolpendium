{
  "name": "getSubstanceStudy",
  "description": "Returns substance study representation",
  "parameters": {
    "type": "object",
    "properties": {
      "db": {
        "default": "nanoreg1",
        "enum": [
          "calibrate",
          "enanomapper",
          "enpra",
          "marina",
          "nanogenotox",
          "nanoinformatix",
          "nanoreg1",
          "nanoreg2",
          "nanotest"
        ],
        "type": "string",
        "description": "Database ID"
      },
      "uuid": {
        "type": "string",
        "description": "Substance UUID"
      },
      "top": {
        "enum": [
          "P-CHEM",
          "ECOTOX",
          "ENV FATE",
          "TOX",
          "EXPOSURE"
        ],
        "type": "string",
        "description": "Top endpoint category"
      },
      "category": {
        "type": "string",
        "description": "Endpoint category (The value in the protocol.category.code field)"
      },
      "property_uri": {
        "type": "string",
        "description": "Property URI https://data.enanomapper.net/property/{UUID} , see Property service"
      },
      "property": {
        "type": "string",
        "description": "Property UUID"
      },
      "investigation_uuid": {
        "type": "string",
        "description": "Investigation UUID, a code to link different studies"
      },
      "page": {
        "type": "integer",
        "description": "Starting page"
      },
      "pagesize": {
        "type": "integer",
        "description": "Page size"
      }
    },
    "required": [
      "db",
      "uuid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.ideaconsult.net/enanomapper/enm/{db}/substance/{uuid}/study{?top,category,property_uri,property,investigation_uuid,page,pagesize}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**study**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
