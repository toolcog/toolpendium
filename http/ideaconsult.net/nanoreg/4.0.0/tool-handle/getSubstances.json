{
  "name": "getSubstances",
  "description": "Returns a list of substances, according to the search criteria",
  "parameters": {
    "type": "object",
    "properties": {
      "db": {
        "default": "nanoreg1",
        "enum": [
          "calibrate",
          "enanomapper",
          "enpra",
          "marina",
          "nanogenotox",
          "nanoinformatix",
          "nanoreg1",
          "nanoreg2",
          "nanotest"
        ],
        "type": "string",
        "description": "Database ID"
      },
      "search": {
        "type": "string",
        "description": "Search parameter"
      },
      "type": {
        "enum": [
          "substancetype",
          "name",
          "like",
          "regexp",
          "uuif",
          "CompTox",
          "DOI",
          "reliability",
          "purposeFlag",
          "studyResultType",
          "isRobustStudy",
          "citation",
          "citationowner",
          "topcategory",
          "endpointcategory",
          "params",
          "owner_name",
          "owner_uuid",
          "related",
          "reference",
          "facet"
        ],
        "type": "string"
      },
      "compound_uri": {
        "type": "string",
        "description": "If type=related finds all substances containing this compound; if typ =reference - finds all substances with this compound as reference structure"
      },
      "bundle_uri": {
        "type": "string",
        "description": "Retrieves if selected in this bundle"
      },
      "addDummySubstance": {
        "type": "boolean",
        "description": "Adds a compound record as substance in JSON; only if type=related"
      },
      "studysummary": {
        "type": "boolean",
        "description": "If true retrieves study summary for each substance"
      },
      "page": {
        "type": "integer",
        "description": "Starting page"
      },
      "pagesize": {
        "type": "integer",
        "description": "Page size"
      }
    },
    "required": [
      "db"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.ideaconsult.net/nanoreg1/enm/{db}/substance{?search,type,compound_uri,bundle_uri,addDummySubstance,studysummary,page,pagesize}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**substance**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
