{
  "name": "solrquery_get",
  "description": "GET is simpler to use, but imposes restrictions on the complexity and the lenght of the parameters.",
  "parameters": {
    "type": "object",
    "properties": {
      "q": {
        "type": "string",
        "description": "The query"
      },
      "start": {
        "type": "integer",
        "description": "Starting page"
      },
      "rows": {
        "type": "integer",
        "description": "Page size"
      },
      "wt": {
        "default": "xml",
        "enum": [
          "json",
          "xml"
        ],
        "type": "string",
        "description": "Response format"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.ideaconsult.net/nanoreg1/select{?q,start,rows,wt}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**response**",
              {
                "$ul": [
                  "**docs**",
                  "**maxScore**",
                  "**numFound**",
                  "**start**"
                ]
              }
            ],
            [
              "**responseHeader**",
              {
                "$ul": [
                  "**QTime**",
                  "**params**",
                  "**status**",
                  "**zkConnected**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
