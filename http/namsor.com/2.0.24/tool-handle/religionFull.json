{
  "name": "religionFull",
  "description": "[USES 10 UNITS PER NAME] Infer the likely religion of a personal full name. NB: only for INDIA (as of current version).",
  "parameters": {
    "type": "object",
    "properties": {
      "countryIso2": {
        "type": "string"
      },
      "subDivisionIso31662": {
        "type": "string"
      },
      "personalNameFull": {
        "type": "string"
      }
    },
    "required": [
      "countryIso2",
      "subDivisionIso31662",
      "personalNameFull"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://v2.namsor.com/NamSorAPIv2/api2/json/religionFull/{countryIso2}/{subDivisionIso31662}/{personalNameFull}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "religious-coded names",
        "**Key properties:**",
        {
          "$ul": [
            "**id**",
            "**name**: The input name.",
            "**probabilityAltCalibrated**: The calibrated probability for country OR countryAlt to have been guessed correctly. -1 = still calibrating. ",
            "**probabilityCalibrated**: The calibrated probability for country to have been guessed correctly. -1 = still calibrating. ",
            "**religion**: Most likely religion",
            "**religionAlt**: Second best alternative : religion ",
            "**religionsTop**: List countries (top 10)",
            "**score**: Higher score is better, but score is not normalized. Use calibratedProbability if available. ",
            "**script**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
