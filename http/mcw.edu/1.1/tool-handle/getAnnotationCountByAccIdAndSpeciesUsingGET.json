{
  "name": "getAnnotationCountByAccIdAndSpeciesUsingGET",
  "description": "Returns annotation count for ontology accession ID and speicies",
  "parameters": {
    "type": "object",
    "properties": {
      "accId": {
        "type": "string",
        "description": "Ontology term accession ID"
      },
      "speciesTypeKey": {
        "format": "int32",
        "type": "integer",
        "description": "A list of species type keys can be found using the lookup service"
      },
      "includeChildren": {
        "type": "boolean",
        "description": "true: return annotations for the term and children, false: return annotations for the term only "
      }
    },
    "required": [
      "accId",
      "speciesTypeKey",
      "includeChildren"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//rest.rgd.mcw.edu/rgdws/annotations/count/{accId}/{speciesTypeKey}/{includeChildren}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
