{
  "name": "getGenesByAffyIdUsingGET",
  "description": "Return a list of genes for an affymetrix ID",
  "parameters": {
    "type": "object",
    "properties": {
      "affyId": {
        "type": "string",
        "description": "Affymetrix ID"
      },
      "speciesTypeKey": {
        "format": "int32",
        "type": "integer",
        "description": "A list of RGD species type keys can be found in the lookup service"
      }
    },
    "required": [
      "affyId",
      "speciesTypeKey"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//rest.rgd.mcw.edu/rgdws/genes/affyId/{affyId}/{speciesTypeKey}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Gene list"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**agrDescription**",
            "**description**",
            "**ensemblFullName**",
            "**ensemblGeneSymbol**",
            "**ensemblGeneType**",
            "**geneSource**",
            "**key**",
            "**mergedDescription**",
            "**name**",
            "**ncbiAnnotStatus**",
            "**nomenReviewDate**",
            "**nomenSource**",
            "**notes**",
            "**refSeqStatus**",
            "**rgdId**",
            "**soAccId**",
            "**speciesTypeKey**",
            "**symbol**",
            "**type**",
            "**variant**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
