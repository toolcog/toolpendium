{
  "name": "Update_Email-to-SMS_Allowed_Address",
  "description": "Update a specific allowed email address.",
  "parameters": {
    "type": "object",
    "properties": {
      "email_address_id": {
        "type": "number",
        "description": "Your email address id."
      },
      "body": {
        "example": {
          "email_address": "pfvRZ@gmail.com",
          "from": "+17128842283"
        },
        "properties": {
          "email_address": {
            "description": "Your email address.",
            "type": "string"
          },
          "from": {
            "description": "Your sender id - [more info](http://help.clicksend.com/SMS/what-is-a-sender-id-or-sender-number).",
            "type": "string"
          }
        },
        "required": [
          "email_address"
        ],
        "type": "object"
      }
    },
    "required": [
      "email_address_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://rest.clicksend.com/v3/sms/email-sms/{email_address_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
