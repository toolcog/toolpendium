{
  "name": "app_documents_sales_invoices_preview",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "id": {
        "type": "integer",
        "description": "Invoice id to download"
      },
      "template": {
        "nullable": true,
        "type": "string",
        "description": "Template name to generate document"
      },
      "disable_cache": {
        "nullable": true,
        "type": "boolean",
        "description": "Force the regeneration of the preview"
      },
      "base64": {
        "nullable": true,
        "type": "boolean",
        "description": "Get the image in base64"
      }
    },
    "required": [
      "appId",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/invoices/{id}/preview.jpg{?template,disable_cache,base64}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
