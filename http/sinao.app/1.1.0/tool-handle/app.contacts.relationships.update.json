{
  "name": "app_contacts_relationships_update",
  "description": "Update a relationship by id",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "id": {
        "type": "integer",
        "description": "ID of Relationship"
      },
      "is_customer": {
        "type": "boolean"
      },
      "is_supplier": {
        "type": "boolean"
      },
      "is_prospect": {
        "type": "boolean"
      },
      "importance_level": {
        "type": "integer"
      },
      "rating": {
        "type": "integer"
      },
      "balance_initial_amount": {
        "type": "integer"
      },
      "is_notifying": {
        "type": "boolean"
      },
      "note": {
        "type": "string"
      },
      "reference": {
        "nullable": true,
        "type": "string",
        "description": "Accounting number if it's specific"
      },
      "tags": {
        "nullable": true,
        "type": "string"
      },
      "discount": {
        "nullable": true,
        "type": "string"
      },
      "details": {
        "nullable": true,
        "type": "string"
      },
      "metadata": {
        "items": {},
        "nullable": true,
        "type": "array"
      }
    },
    "required": [
      "appId",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/relationships/{id}{?is_customer,is_supplier,is_prospect,importance_level,rating,balance_initial_amount,is_notifying,note,reference,tags,discount,details,metadata}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**accounting_infos**",
              {
                "$ul": [
                  "**balance_initial_amount**",
                  "**customer_id**",
                  "**reference**",
                  "**supplier_id**"
                ]
              }
            ],
            "**id**",
            "**importance_level**",
            "**is_customer**",
            "**is_notifying**",
            "**is_prospect**",
            "**is_supplier**",
            "**metadata**",
            "**note**",
            "**rating**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
