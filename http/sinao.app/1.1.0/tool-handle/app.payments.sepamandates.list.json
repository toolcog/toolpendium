        "description": "The number of items to skip before starting to collect the result set."
      },
      "limit": {
        "default": 10,
        "maximum": 10000,
        "minimum": 1,
        "type": "integer",
        "description": "The numbers of items to return."
      },
      "search": {
        "type": "string",
        "description": "A string to search for in objects."
      },
      "filters": {
        "items": {
          "properties": {
            "comparator": {
              "enum": [
                "=",
                "<",
                ">",
                "<=",
                ">=",
                "!=",
                "LIKE",
                "IN",
                "REGEX"
              ],
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "type": "object"
