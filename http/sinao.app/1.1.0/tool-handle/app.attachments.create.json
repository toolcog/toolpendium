{
  "name": "app_attachments_create",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "type": {
        "enum": [
          "none",
          "purchase",
          "invoice",
          "quote",
          "transaction",
          "relationship"
        ],
        "type": "string",
        "description": "Object to attach file"
      },
      "attachable_id": {
        "type": "integer",
        "description": "Object id"
      },
      "file": {
        "format": "binary",
        "type": "string",
        "description": "File to attach"
      }
    },
    "required": [
      "appId",
      "type"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/attachments{?type,attachable_id,file}"
    }
  },
  "responses": {}
}
