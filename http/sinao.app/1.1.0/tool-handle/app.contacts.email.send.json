{
  "name": "app_contacts_email_send",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "from": {
        "format": "email",
        "type": "string"
      },
      "recipients": {
        "items": {
          "format": "email",
          "type": "string"
        },
        "type": "array"
      },
      "recipients_cc": {
        "items": {
          "format": "email",
          "type": "string"
        },
        "type": "array"
      },
      "recipients_bcc": {
        "items": {
          "format": "email",
          "type": "string"
        },
        "type": "array"
      },
      "title": {
        "type": "string"
      },
      "body": {
        "type": "string"
      },
      "documents": {
        "items": {
          "properties": {
            "id": {
              "type": "integer"
            },
            "type": {
              "enum": [
                "invoice",
                "quote",
                "attachment"
              ],
              "type": "string"
            }
          },
          "type": "object"
        },
        "type": "array"
      },
      "need_copy_bcc": {
        "default": false,
        "type": "boolean"
      }
    },
    "required": [
      "appId",
      "recipients",
      "documents"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/email/document{?from,recipients,recipients_cc,recipients_bcc,title,body,documents,need_copy_bcc}"
    }
  },
  "responses": {}
}
