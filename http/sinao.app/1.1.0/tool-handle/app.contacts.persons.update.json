{
  "name": "app_contacts_persons_update",
  "description": "Update a person by id",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "id": {
        "type": "integer",
        "description": "ID of a person"
      },
      "civility": {
        "nullable": true,
        "type": "string",
        "description": "Civility is the lastname prefix"
      },
      "lastname": {
        "type": "string"
      },
      "firstname": {
        "type": "string"
      },
      "picture": {
        "oneOf": [
          {
            "format": "byte",
            "type": "string"
          },
          {
            "format": "uri",
            "type": "string"
          }
        ]
      },
      "metadata": {
        "items": {},
        "nullable": true,
        "type": "array"
      }
    },
    "required": [
      "appId",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/persons/{id}{?civility,lastname,firstname,picture,metadata}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**civility**: Civility is the lastname prefix",
            "**establishments**",
            "**firstname**",
            "**id**",
            "**image**",
            "**lastname**",
            "**metadata**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
