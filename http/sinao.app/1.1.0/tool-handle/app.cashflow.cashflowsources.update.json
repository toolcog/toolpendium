{
  "name": "app_cashflow_cashflowsources_update",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "id": {
        "type": "integer",
        "description": "ID of CashflowSource"
      },
      "name": {
        "type": "string"
      },
      "identifiant": {
        "type": "string"
      },
      "type": {
        "enum": [
          "bank",
          "cashdesk",
          "waiting"
        ],
        "type": "string"
      },
      "balance_amount": {
        "type": "integer"
      },
      "account_type": {
        "enum": [
          "checking",
          "card",
          "savings",
          "special",
          "securities",
          "loan",
          "life_insurance",
          "unknown",
          "pending",
          "share_savings_plan"
        ],
        "type": "string"
      },
      "parent_cashflow_source_id": {
        "type": "integer"
      }
    },
    "required": [
      "appId",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/cashflowsources/{id}{?name,identifiant,type,balance_amount,account_type,parent_cashflow_source_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**account_type**",
            "**balance_amount**",
            "**created_at**",
            "**disabled**",
            "**id**",
            "**identifiant**",
            "**name**",
            "**parent_cashflow_source**",
            "**status**",
            "**type**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
