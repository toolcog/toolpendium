{
  "name": "account_update",
  "description": "Update current user informations",
  "parameters": {
    "type": "object",
    "properties": {
      "civility": {
        "minimum": 1,
        "type": "string"
      },
      "firstname": {
        "minimum": 2,
        "type": "string"
      },
      "lastname": {
        "minimum": 2,
        "type": "string"
      },
      "password": {
        "minimum": 8,
        "type": "string"
      },
      "email": {
        "format": "email",
        "type": "string"
      },
      "image": {
        "format": "binary",
        "type": "string"
      },
      "metadata": {
        "items": {},
        "nullable": true,
        "type": "array"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/me{?civility,firstname,lastname,password,email,image,metadata}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**civility**: Civility is the lastname prefix",
            "**establishments**",
            "**firstname**",
            "**id**",
            "**image**",
            "**lastname**",
            "**metadata**",
            "**created_at**",
            "**email**: Email used as login",
            "**last_access_at**",
            "**password**",
            "**password_is_undefined**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
