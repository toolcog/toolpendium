{
  "name": "app_statistics_charts_get",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "type": {
        "type": "string"
      },
      "count": {
        "type": "integer"
      },
      "period": {
        "enum": [
          "hourly",
          "daily",
          "weekly",
          "monthly",
          "quarterly",
          "yearly"
        ],
        "type": "string"
      },
      "start_at": {
        "format": "date-time",
        "type": "string"
      },
      "object": {
        "enum": [
          "invoice",
          "quote",
          "purchase",
          "transaction",
          "payment",
          "relationship"
        ],
        "type": "string"
      },
      "object_property": {
        "type": "string"
      },
      "calcul": {
        "enum": [
          "sum",
          "avg",
          "count"
        ],
        "type": "string"
      },
      "methods": {
        "items": {
          "description": "[object_property, calcul]",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "type": "array",
        "description": "Array of [object_property, calcul]"
      },
      "object_date_property": {
        "type": "string"
      },
      "group_by": {
        "items": {
          "type": "string"
        },
        "type": "array"
      },
      "group_by_object_name": {
        "type": "string"
      },
      "exclude_keys": {
        "items": {
          "type": "integer"
        },
        "type": "array"
      },
      "search": {
        "type": "string"
      },
      "filters": {
        "type": "object"
      },
      "show_details": {
        "type": "boolean",
        "description": "Recovers the details of the calculations"
      }
    },
    "required": [
      "appId",
      "type"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/statistics/charts/{type}{?count,period,start_at,object,object_property,calcul,methods,object_date_property,group_by,group_by_object_name,exclude_keys,search,filters,show_details}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
