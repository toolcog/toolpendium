{
  "name": "app_policies_update",
  "description": "Update police for an user on an app",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "userId": {
        "type": "string"
      },
      "policy_profile_id": {
        "minimum": 0,
        "type": "integer"
      }
    },
    "required": [
      "appId",
      "userId",
      "policy_profile_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/access/{userId}{?policy_profile_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**description**",
            "**homepage**",
            "**name**",
            "**restricted**",
            "**rights**: Routes list",
            "**visible**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
