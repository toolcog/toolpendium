{
  "name": "app_organization_update",
  "description": "Update organization profile for current app",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "name": {
        "minimum": 3,
        "pattern": "/^.*[a-z]+.*$/i",
        "type": "string",
        "description": "Company name visible on the app"
      },
      "billing_name": {
        "type": "string",
        "description": "Company name for billing"
      },
      "logo": {
        "oneOf": [
          {
            "format": "byte",
            "type": "string"
          },
          {
            "format": "uri",
            "type": "string"
          }
        ]
      },
      "legal_form": {
        "type": "string"
      },
      "country_iso2": {
        "format": "ISO 3166-1 alpha-2",
        "type": "string"
      },
      "founding_date": {
        "format": "date",
        "type": "string"
      },
      "founding_location": {
        "type": "string"
      },
      "dissolution_date": {
        "format": "date",
        "type": "string"
      },
      "closeaccounting_period": {
        "type": "string"
      },
      "national_id": {
        "type": "string",
        "description": "Unique National Id, format by country. **In France : [0-9]{9} with last number as security key.**"
      },
      "trade_directory_registration": {
        "type": "string",
        "description": "France Directory Registration : Unique national ID SIRET [0-9]{9} + 'RM' + CMA identification number [0-9a-z]{2,}"
      },
      "vat_id": {
        "nullable": true,
        "type": "string",
        "description": "European VAT Id. **In France : FR [0-9]{2} [0-9]{9}**"
      },
      "code_naf": {
        "nullable": true,
        "pattern": "/^[0-9]+[a-z]$/i",
        "type": "string",
        "description": "French NAF Code"
      },
      "number_of_employees": {
        "type": "string"
      },
      "industry": {
        "type": "string"
      },
      "slogan": {
        "type": "string"
      },
      "rcs": {
        "type": "string",
        "description": "French. Registre du Commerce et des Sociétés"
      },
      "greffe": {
        "type": "string",
        "description": "French. Tribunal de commerce"
      },
      "sap_number_registration": {
        "nullable": true,
        "pattern": "/^SAP[0-9]{9}$/i",
        "type": "string",
        "description": "NOVA agreement/registration number"
      },
      "sap_activities": {
        "nullable": true,
        "type": "string",
        "description": "Organisation activities displayed in annual taxes customer attestation"
      },
      "sap_date_registration": {
        "nullable": true,
        "pattern": "/^[0-9]{2}\\/[0-9]{2}\\/[0-9]{4}$/i",
        "type": "string",
        "description": "NOVA agreement/registration date"
      },
      "capital": {
        "type": "integer"
      }
    },
    "required": [
      "appId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/organization{?name,billing_name,logo,legal_form,country_iso2,founding_date,founding_location,dissolution_date,closeaccounting_period,national_id,trade_directory_registration,vat_id,code_naf,number_of_employees,industry,slogan,rcs,greffe,sap_number_registration,sap_activities,sap_date_registration,capital}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**billing_name**: Company name for billing",
            "**capital**: Capital in cents",
            "**closeaccounting_period**",
            "**code_naf**: French NAF Code",
            "**country_iso2**",
            "**dissolution_date**",
            "**establishments**: List of contact establishments. Some establishments come from the public database (INSEE), they cannot be edited and have no ID",
            "**founding_date**",
            "**founding_location**",
            "**greffe**: French. Tribunal de commerce",
            "**id**",
            "**legal_form**",
            "**logo**",
            "**name**: Company name visible on the app",
            "**national_id**: Unique National Id, format by country. **In France : [0-9]{9} with last number as security key.**",
            "**number_of_employees**",
            "**rcs**: French. Registre du Commerce et des Sociétés",
            "**slogan**: Free variable",
            "**tax_id**: International Tax Id",
            "**vat_id**: European VAT Id. **In France : FR [0-9]{2} [0-9]{9}**",
            "**vat_system**",
            [
              "**app**",
              {
                "$ul": [
                  [
                    "**admin**",
                    {
                      "$ul": [
                        "**civility**: Civility is the lastname prefix",
                        "**establishments**",
                        "**firstname**",
                        "**id**",
                        "**image**",
                        "**lastname**",
                        "**metadata**",
                        "**created_at**",
                        "**email**: Email used as login",
                        "**last_access_at**",
                        "**password**",
                        "**password_is_undefined**",
                        "**updated_at**"
                      ]
                    }
                  ],
                  "**config**",
                  "**hostname_alias**: Specific hostname for this app. To use default URI, null this param",
                  "**id**",
                  "**last_access_at**",
                  [
                    "**last_user**",
                    {
                      "$ul": [
                        "**civility**: Civility is the lastname prefix",
                        "**establishments**",
                        "**firstname**",
                        "**id**",
                        "**image**",
                        "**lastname**",
                        "**metadata**",
                        "**created_at**",
                        "**email**: Email used as login",
                        "**last_access_at**",
                        "**password**",
                        "**password_is_undefined**",
                        "**updated_at**"
                      ]
                    }
                  ],
                  "**organization**",
                  "**policies**",
                  [
                    "**subscription**",
                    {
                      "$ul": [
                        "**access_level**",
                        "**id**",
                        "**payment_card**",
                        "**payment_failed_count**",
                        "**period_ending_date**",
                        "**period_remaining_days**",
                        "**period_starting_date**",
                        "**plan_color**",
                        "**plan_name**",
                        "**status**",
                        "**stripe_customer_id**",
                        "**stripe_plan_id**",
                        "**stripe_subscription_id**"
                      ]
                    }
                  ],
                  "**url**: URI to this app. Can be overwrited by hostname_alias param"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
