{
  "name": "app_catalog_categories_update",
  "description": "Update a product category by id",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "id": {
        "type": "integer",
        "description": "ID of product category"
      },
      "name": {
        "type": "string"
      },
      "image": {
        "oneOf": [
          {
            "format": "binary",
            "type": "string"
          },
          {
            "format": "uri",
            "type": "string"
          }
        ]
      },
      "parent_category_id": {
        "type": "integer"
      }
    },
    "required": [
      "appId",
      "id",
      "name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/productcategory/{id}{?name,image,parent_category_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**id**",
            "**image**",
            "**name**",
            "**parent**",
            [
              "**products**",
              {
                "$ul": [
                  "**accounting_number**",
                  "**amount_accurately**: Price without taxes in milli-cents",
                  "**category**",
                  "**currency**",
                  "**description**",
                  "**id**",
                  "**image**",
                  "**intangible**: Is a service or a product ?",
                  "**lifetime**: Product life time in seconds",
                  "**metadata**",
                  "**name**",
                  "**quantity_name**: Name of the quantity: days, liters, m2, m3...",
                  "**reference**",
                  "**tags**",
                  "**unity**: Unity, hours, days, meters, liters..",
                  "**vat_percent**: VAT rate in cents"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
