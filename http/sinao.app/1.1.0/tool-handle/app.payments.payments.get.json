{
  "name": "app_payments_payments_get",
  "description": "Get a Payment object by Id",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "id": {
        "type": "integer",
        "description": "ID of payment"
      }
    },
    "required": [
      "appId",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/payments/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**amount**",
            "**date**",
            "**document**",
            "**document_type**",
            "**id**",
            "**source**",
            [
              "**transaction**",
              {
                "$ul": [
                  "**amount**",
                  [
                    "**author**",
                    {
                      "$ul": [
                        "**civility**: Civility is the lastname prefix",
                        "**establishments**",
                        "**firstname**",
                        "**id**",
                        "**image**",
                        "**lastname**",
                        "**metadata**",
                        "**created_at**",
                        "**email**: Email used as login",
                        "**last_access_at**",
                        "**password**",
                        "**password_is_undefined**",
                        "**updated_at**"
                      ]
                    }
                  ],
                  [
                    "**cashflow_source**",
                    {
                      "$ul": [
                        "**account_type**",
                        "**balance_amount**",
                        "**created_at**",
                        "**disabled**",
                        "**id**",
                        "**identifiant**",
                        "**name**",
                        "**parent_cashflow_source**",
                        "**status**",
                        "**type**",
                        "**updated_at**"
                      ]
                    }
                  ],
                  "**contact**",
                  "**created_at**",
                  "**deleted_at**",
                  "**details**",
                  "**id**",
                  "**label**",
                  "**lettered_at**",
                  "**metadata**",
                  "**method**",
                  "**received_at**",
                  "**updated_at**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
