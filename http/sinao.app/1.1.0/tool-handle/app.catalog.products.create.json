{
  "name": "app_catalog_products_create",
  "description": "Create a new product",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "name": {
        "type": "string"
      },
      "amount": {
        "type": "integer",
        "description": "Price without taxes in cents"
      },
      "amount_accurately": {
        "type": "integer",
        "description": "Price without taxes in cents / 1000"
      },
      "vat_percent": {
        "minimum": 0,
        "type": "integer",
        "description": "Taxe rate in cents"
      },
      "image": {
        "oneOf": [
          {
            "format": "binary",
            "type": "string"
          },
          {
            "format": "uri",
            "type": "string"
          }
        ]
      },
      "lifetime": {
        "type": "integer",
        "description": "Product life time in seconds"
      },
      "description": {
        "type": "string",
        "description": "Product description"
      },
      "type": {
        "enum": [
          "product",
          "service"
        ],
        "type": "string",
        "description": "Is a service or a product ?"
      },
      "quantity_name": {
        "type": "string",
        "description": "Name of the quantity: days, liters, m2, m3..."
      },
      "reference": {
        "type": "string"
      },
      "account_id": {
        "type": "string"
      },
      "tags": {
        "items": {
          "format": "string"
        },
        "type": "array"
      },
      "category_id": {
        "type": "integer"
      },
      "metadata": {
        "items": {},
        "nullable": true,
        "type": "array"
      }
    },
    "required": [
      "appId",
      "name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/products{?name,amount,amount_accurately,vat_percent,image,lifetime,description,type,quantity_name,reference,account_id,tags,category_id,metadata}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**accounting_number**",
            "**amount_accurately**: Price without taxes in milli-cents",
            [
              "**category**",
              {
                "$ul": [
                  "**id**",
                  "**image**",
                  "**name**",
                  "**parent**",
                  "**products**"
                ]
              }
            ],
            "**currency**",
            "**description**",
            "**id**",
            "**image**",
            "**intangible**: Is a service or a product ?",
            "**lifetime**: Product life time in seconds",
            "**metadata**",
            "**name**",
            "**quantity_name**: Name of the quantity: days, liters, m2, m3...",
            "**reference**",
            "**tags**",
            "**unity**: Unity, hours, days, meters, liters..",
            "**vat_percent**: VAT rate in cents"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
