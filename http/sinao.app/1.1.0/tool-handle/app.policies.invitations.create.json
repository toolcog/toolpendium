{
  "name": "app_policies_invitations_create",
  "description": "Invites a user to access the organization panel",
  "parameters": {
    "type": "object",
    "properties": {
      "appId": {
        "type": "integer",
        "description": "The identifier of the Sinao application you are using. Each application corresponds to a company and an accounting. A user can have several Sinao applications. To retrieve the identifiers of its applications, you must call the endpoint `/apps`."
      },
      "email": {
        "type": "string",
        "description": "Email for invitation. Will be used to account creation or account matching with an existing user"
      },
      "policy_profile_id": {
        "minimum": 0,
        "type": "integer",
        "description": "Profile for policies set"
      },
      "firstname": {
        "type": "string",
        "description": "First name of user before account creation / account link"
      },
      "lastname": {
        "type": "string",
        "description": "Last name of user before account creation / account link"
      },
      "civility": {
        "type": "string",
        "description": "Last name of user before account creation / account link"
      },
      "password": {
        "minimum": 8,
        "type": "string",
        "description": "Password for new user"
      }
    },
    "required": [
      "appId",
      "email",
      "policy_profile_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.sinao.app/v1/apps/{appId}/access/invite{?email,policy_profile_id,firstname,lastname,civility,password}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**app**",
              {
                "$ul": [
                  [
                    "**admin**",
                    {
                      "$ul": [
                        "**civility**: Civility is the lastname prefix",
                        "**establishments**",
                        "**firstname**",
                        "**id**",
                        "**image**",
                        "**lastname**",
                        "**metadata**",
                        "**created_at**",
                        "**email**: Email used as login",
                        "**last_access_at**",
                        "**password**",
                        "**password_is_undefined**",
                        "**updated_at**"
                      ]
                    }
                  ],
                  "**config**",
                  "**hostname_alias**: Specific hostname for this app. To use default URI, null this param",
                  "**id**",
                  "**last_access_at**",
                  [
                    "**last_user**",
                    {
                      "$ul": [
                        "**civility**: Civility is the lastname prefix",
                        "**establishments**",
                        "**firstname**",
                        "**id**",
                        "**image**",
                        "**lastname**",
                        "**metadata**",
                        "**created_at**",
                        "**email**: Email used as login",
                        "**last_access_at**",
                        "**password**",
                        "**password_is_undefined**",
                        "**updated_at**"
                      ]
                    }
                  ],
                  [
                    "**organization**",
                    {
                      "$ul": [
                        "**billing_name**: Company name for billing",
                        "**capital**: Capital in cents",
                        "**closeaccounting_period**",
                        "**code_naf**: French NAF Code",
                        "**country_iso2**",
                        "**dissolution_date**",
                        "**establishments**: List of contact establishments. Some establishments come from the public database (INSEE), they cannot be edited and have no ID",
                        "**founding_date**",
                        "**founding_location**",
                        "**greffe**: French. Tribunal de commerce",
                        "**id**",
                        "**legal_form**",
                        "**logo**",
                        "**name**: Company name visible on the app",
                        "**national_id**: Unique National Id, format by country. **In France : [0-9]{9} with last number as security key.**",
                        "**number_of_employees**",
                        "**rcs**: French. Registre du Commerce et des Sociétés",
                        "**slogan**: Free variable",
                        "**tax_id**: International Tax Id",
                        "**vat_id**: European VAT Id. **In France : FR [0-9]{2} [0-9]{9}**",
                        "**vat_system**",
                        "**app**"
                      ]
                    }
                  ],
                  "**policies**",
                  [
                    "**subscription**",
                    {
                      "$ul": [
                        "**access_level**",
                        "**id**",
                        "**payment_card**",
                        "**payment_failed_count**",
                        "**period_ending_date**",
                        "**period_remaining_days**",
                        "**period_starting_date**",
                        "**plan_color**",
                        "**plan_name**",
                        "**status**",
                        "**stripe_customer_id**",
                        "**stripe_plan_id**",
                        "**stripe_subscription_id**"
                      ]
                    }
                  ],
                  "**url**: URI to this app. Can be overwrited by hostname_alias param"
                ]
              }
            ],
            "**id**",
            [
              "**profile**",
              {
                "$ul": [
                  "**description**",
                  "**homepage**",
                  "**name**",
                  "**restricted**",
                  "**rights**: Routes list",
                  "**visible**"
                ]
              }
            ],
            [
              "**recipient_user**",
              {
                "$ul": [
                  "**civility**: Civility is the lastname prefix",
                  "**establishments**",
                  "**firstname**",
                  "**id**",
                  "**image**",
                  "**lastname**",
                  "**metadata**",
                  "**created_at**",
                  "**email**: Email used as login",
                  "**last_access_at**",
                  "**password**",
                  "**password_is_undefined**",
                  "**updated_at**"
                ]
              }
            ],
            [
              "**sender_user**",
              {
                "$ul": [
                  "**civility**: Civility is the lastname prefix",
                  "**establishments**",
                  "**firstname**",
                  "**id**",
                  "**image**",
                  "**lastname**",
                  "**metadata**",
                  "**created_at**",
                  "**email**: Email used as login",
                  "**last_access_at**",
                  "**password**",
                  "**password_is_undefined**",
                  "**updated_at**"
                ]
              }
            ],
            "**used_at**",
            "**validity**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
