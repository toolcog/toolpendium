{
  "name": "UpdateApplication",
  "description": "Updates an application.",
  "parameters": {
    "type": "object",
    "properties": {
      "ApplicationId": {
        "type": "string",
        "pattern": "[a-z0-9]{4,7}",
        "description": "The application ID."
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
