{
  "name": "PutRetentionPolicy",
  "description": "Puts a retention policy to the specified organization.",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Amz-Target": {
        "type": "string",
        "enum": [
          "WorkMailService.PutRetentionPolicy"
        ]
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/PutRetentionPolicyRequest"
      }
    },
    "required": [
      "X-Amz-Target",
      "body"
    ],
    "$defs": {
      "PutRetentionPolicyRequest": {
        "type": "object",
        "required": [
          "OrganizationId",
          "Name",
          "FolderConfigurations"
        ],
        "title": "PutRetentionPolicyRequest",
        "properties": {
          "OrganizationId": {
            "allOf": [
              {
                "$ref": "#/$defs/OrganizationId"
              },
              {
                "description": "The organization ID."
              }
            ]
          },
          "Id": {
            "allOf": [
              {
                "$ref": "#/$defs/ShortString"
              },
              {
                "description": "The retention policy ID."
              }
            ]
          },
          "Name": {
            "allOf": [
              {
                "$ref": "#/$defs/ShortString"
              },
              {
                "description": "The retention policy name."
              }
            ]
          },
          "Description": {
            "allOf": [
              {
                "$ref": "#/$defs/PolicyDescription"
              },
              {
                "description": "The retention policy description."
              }
            ]
          },
          "FolderConfigurations": {
            "allOf": [
              {
                "$ref": "#/$defs/FolderConfigurations"
              },
              {
                "description": "The retention policy folder configurations."
              }
            ]
          }
        }
      },
      "OrganizationId": {
        "type": "string",
        "pattern": "^m-[0-9a-f]{32}$",
        "minLength": 34,
        "maxLength": 34
      },
      "ShortString": {
        "type": "string",
        "pattern": "[a-zA-Z0-9_-]+",
        "minLength": 1,
        "maxLength": 64
      },
      "PolicyDescription": {
        "type": "string",
        "pattern": "[\\w\\d\\s\\S\\-!?=,.;:'_]+",
        "maxLength": 256,
        "format": "password"
      },
      "FolderConfigurations": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/FolderConfiguration"
        }
      },
      "FolderConfiguration": {
        "type": "object",
        "required": [
          "Name",
          "Action"
        ],
        "properties": {
          "Name": {
            "allOf": [
              {
                "$ref": "#/$defs/FolderName"
              },
              {
                "description": "The folder name."
              }
            ]
          },
          "Action": {
            "allOf": [
              {
                "$ref": "#/$defs/RetentionAction"
              },
              {
                "description": "The action to take on the folder contents at the end of the folder configuration period."
              }
            ]
          },
          "Period": {
            "allOf": [
              {
                "$ref": "#/$defs/RetentionPeriod"
              },
              {
                "description": "The number of days for which the folder-configuration action applies."
              }
            ]
          }
        },
        "description": "The configuration applied to an organization's folders by its retention policy."
      },
      "FolderName": {
        "type": "string",
        "enum": [
          "INBOX",
          "DELETED_ITEMS",
          "SENT_ITEMS",
          "DRAFTS",
          "JUNK_EMAIL"
        ]
      },
      "RetentionAction": {
        "type": "string",
        "enum": [
          "NONE",
          "DELETE",
          "PERMANENTLY_DELETE"
        ]
      },
      "RetentionPeriod": {
        "type": "integer",
        "minimum": 1,
        "maximum": 730
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://workmail.us-east-1.amazonaws.com/#X-Amz-Target=WorkMailService.PutRetentionPolicy"
    },
    "headers": {
      "X-Amz-Target": {
        "$": "X-Amz-Target"
      },
      "X-Amz-Content-Sha256": {
        "$": "X-Amz-Content-Sha256"
      },
      "X-Amz-Date": {
        "$": "X-Amz-Date"
      },
      "X-Amz-Algorithm": {
        "$": "X-Amz-Algorithm"
      },
      "X-Amz-Credential": {
        "$": "X-Amz-Credential"
      },
      "X-Amz-Security-Token": {
        "$": "X-Amz-Security-Token"
      },
      "X-Amz-Signature": {
        "$": "X-Amz-Signature"
      },
      "X-Amz-SignedHeaders": {
        "$": "X-Amz-SignedHeaders"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
