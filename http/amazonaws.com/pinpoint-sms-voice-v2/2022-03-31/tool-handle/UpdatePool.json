{
  "name": "UpdatePool",
  "description": "Updates the configuration of an existing pool. You can update the opt-out list, enable or disable two-way messaging, change the <code>TwoWayChannelArn</code>, enable or disable self-managed opt-outs, enable or disable deletion protection, and enable or disable shared routes.",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Amz-Target": {
        "type": "string",
        "enum": [
          "PinpointSMSVoiceV2.UpdatePool"
        ]
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/UpdatePoolRequest"
      }
    },
    "required": [
      "X-Amz-Target",
      "body"
    ],
    "$defs": {
      "UpdatePoolRequest": {
        "type": "object",
        "required": [
          "PoolId"
        ],
        "title": "UpdatePoolRequest",
        "properties": {
          "PoolId": {
            "allOf": [
              {
                "$ref": "#/$defs/PoolIdOrArn"
              },
              {
                "description": "The unique identifier of the pool to update. Valid values are either the PoolId or PoolArn."
              }
            ]
          },
          "TwoWayEnabled": {
            "allOf": [
              {
                "$ref": "#/$defs/Boolean"
              },
              {
                "description": "By default this is set to false. When set to true you can receive incoming text messages from your end recipients."
              }
            ]
          },
          "TwoWayChannelArn": {
            "allOf": [
              {
                "$ref": "#/$defs/TwoWayChannelArn"
              },
              {
                "description": "The Amazon Resource Name (ARN) of the two way channel."
              }
            ]
          },
          "SelfManagedOptOutsEnabled": {
            "allOf": [
              {
                "$ref": "#/$defs/Boolean"
              },
              {
                "description": "By default this is set to false. When an end recipient sends a message that begins with HELP or STOP to one of your dedicated numbers, Amazon Pinpoint automatically replies with a customizable message and adds the end recipient to the OptOutList. When set to true you're responsible for responding to HELP and STOP requests. You're also responsible for tracking and honoring opt-out requests."
              }
            ]
          },
          "OptOutListName": {
            "allOf": [
              {
                "$ref": "#/$defs/OptOutListNameOrArn"
              },
              {
                "description": "The OptOutList to associate with the pool. Valid values are either OptOutListName or OptOutListArn."
              }
            ]
          },
          "SharedRoutesEnabled": {
            "allOf": [
              {
                "$ref": "#/$defs/Boolean"
              },
              {
                "description": "Indicates whether shared routes are enabled for the pool."
              }
            ]
          },
          "DeletionProtectionEnabled": {
            "allOf": [
              {
                "$ref": "#/$defs/Boolean"
              },
              {
                "description": "When set to true the pool can't be deleted."
              }
            ]
          }
        }
      },
      "PoolIdOrArn": {
        "type": "string",
        "pattern": "[A-Za-z0-9_:/-]+",
        "minLength": 1,
        "maxLength": 256
      },
      "Boolean": {
        "type": "boolean"
      },
      "TwoWayChannelArn": {
        "type": "string",
        "pattern": "arn:\\S+",
        "minLength": 20,
        "maxLength": 2048
      },
      "OptOutListNameOrArn": {
        "type": "string",
        "pattern": "[A-Za-z0-9_:/-]+",
        "minLength": 1,
        "maxLength": 256
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://sms-voice.us-east-1.amazonaws.com/#X-Amz-Target=PinpointSMSVoiceV2.UpdatePool"
    },
    "headers": {
      "X-Amz-Target": {
        "$": "X-Amz-Target"
      },
      "X-Amz-Content-Sha256": {
        "$": "X-Amz-Content-Sha256"
      },
      "X-Amz-Date": {
