{
  "name": "StopApplication",
  "description": "Stops a running application.",
  "parameters": {
    "type": "object",
    "properties": {
      "applicationId": {
        "type": "string",
        "pattern": "^\\S{1,80}$",
        "description": "The unique identifier of the application you want to stop."
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
