{
  "name": "UpdateStorageSystem",
  "description": "Modifies some configurations of an on-premises storage system resource that you're using with DataSync Discovery.",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Amz-Target": {
        "type": "string",
        "enum": [
          "FmrsService.UpdateStorageSystem"
        ]
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/UpdateStorageSystemRequest"
      }
    },
    "required": [
      "X-Amz-Target",
      "body"
    ],
    "$defs": {
      "UpdateStorageSystemRequest": {
        "type": "object",
        "required": [
          "StorageSystemArn"
        ],
        "title": "UpdateStorageSystemRequest",
        "properties": {
          "StorageSystemArn": {
            "allOf": [
              {
                "$ref": "#/$defs/StorageSystemArn"
              },
              {
                "description": "Specifies the ARN of the on-premises storage system that you want reconfigure."
              }
            ]
          },
          "ServerConfiguration": {
            "allOf": [
              {
                "$ref": "#/$defs/DiscoveryServerConfiguration"
              },
              {
                "description": "Specifies the server name and network port required to connect with your on-premises storage system's management interface."
              }
            ]
          },
          "AgentArns": {
            "allOf": [
              {
                "$ref": "#/$defs/DiscoveryAgentArnList"
              },
              {
                "description": "Specifies the Amazon Resource Name (ARN) of the DataSync agent that connects to and reads your on-premises storage system. You can only specify one ARN."
              }
            ]
          },
          "Name": {
            "allOf": [
              {
                "$ref": "#/$defs/Name"
              },
              {
                "description": "Specifies a familiar name for your on-premises storage system."
              }
            ]
          },
          "CloudWatchLogGroupArn": {
            "allOf": [
              {
                "$ref": "#/$defs/LogGroupArn"
              },
              {
                "description": "Specifies the ARN of the Amazon CloudWatch log group for monitoring and logging discovery job events."
              }
            ]
          },
          "Credentials": {
            "allOf": [
              {
                "$ref": "#/$defs/Credentials"
              },
              {
                "description": "Specifies the user name and password for accessing your on-premises storage system's management interface."
              }
            ]
          }
        }
      },
      "StorageSystemArn": {
        "type": "string",
        "pattern": "^arn:(aws|aws-cn|aws-us-gov|aws-iso|aws-iso-b):datasync:[a-z\\-0-9]+:[0-9]{12}:system/storage-system-[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$",
        "maxLength": 128
      },
      "DiscoveryServerConfiguration": {
        "type": "object",
        "required": [
          "ServerHostname"
        ],
        "properties": {
          "ServerHostname": {
            "allOf": [
              {
                "$ref": "#/$defs/DiscoveryServerHostname"
              },
              {
                "description": "The domain name or IP address of your storage system's management interface."
              }
            ]
          },
          "ServerPort": {
            "allOf": [
              {
                "$ref": "#/$defs/DiscoveryServerPort"
              },
              {
                "description": "The network port for accessing the storage system's management interface."
              }
            ]
          }
        },
        "description": "The network settings that DataSync Discovery uses to connect with your on-premises storage system's management interface."
      },
      "DiscoveryServerHostname": {
        "type": "string",
        "pattern": "^(([a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9\\-]*[A-Za-z0-9])$",
        "maxLength": 255
      },
      "DiscoveryServerPort": {
        "type": "integer",
        "minimum": 1,
        "maximum": 65535
      },
      "DiscoveryAgentArnList": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/AgentArn"
        },
        "minItems": 1,
        "maxItems": 1
      },
      "AgentArn": {
        "type": "string",
        "pattern": "^arn:(aws|aws-cn|aws-us-gov|aws-iso|aws-iso-b):datasync:[a-z\\-0-9]+:[0-9]{12}:agent/agent-[0-9a-z]{17}$",
        "maxLength": 128
      },
      "Name": {
        "type": "string",
        "pattern": "^[\\p{L}\\p{M}\\p{N}\\s+=._:@\\/-]+$",
        "minLength": 1,
        "maxLength": 256
      },
      "LogGroupArn": {
        "type": "string",
        "pattern": "^arn:(aws|aws-cn|aws-us-gov|aws-iso|aws-iso-b):logs:[a-z\\-0-9]+:[0-9]{12}:log-group:([^:\\*]*)(:\\*)?$",
        "maxLength": 562
      },
      "Credentials": {
        "type": "object",
        "required": [
          "Username",
          "Password"
        ],
        "properties": {
          "Username": {
            "allOf": [
              {
                "$ref": "#/$defs/PtolemyUsername"
              },
              {
                "description": "Specifies the user name for your storage system's management interface."
              }
            ]
          },
          "Password": {
            "allOf": [
              {
                "$ref": "#/$defs/PtolemyPassword"
              },
              {
                "description": "Specifies the password for your storage system's management interface."
              }
            ]
          }
        },
        "description": "<p>The credentials that provide DataSync Discovery read access to your on-premises storage system's management interface.</p> <p>DataSync Discovery stores these credentials in <a href=\"https://docs.aws.amazon.com/secretsmanager/latest/userguide/intro.html\">Secrets Manager</a>. For more information, see <a href=\"https://docs.aws.amazon.com/datasync/latest/userguide/discovery-configure-storage.html\">Accessing your on-premises storage system</a>.</p>"
      },
      "PtolemyUsername": {
        "type": "string",
        "pattern": "^(?!.*[:\\\"][^:\"]*$).+$",
        "maxLength": 1024,
        "format": "password"
      },
      "PtolemyPassword": {
        "type": "string",
        "pattern": "^(?!.*[:\\\"][^:\"]*$).+$",
        "maxLength": 1024,
        "format": "password"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://datasync.us-east-1.amazonaws.com/#X-Amz-Target=FmrsService.UpdateStorageSystem"
    },
    "headers": {
      "X-Amz-Target": {
        "$": "X-Amz-Target"
      },
      "X-Amz-Content-Sha256": {
        "$": "X-Amz-Content-Sha256"
      },
      "X-Amz-Date": {
        "$": "X-Amz-Date"
      },
      "X-Amz-Algorithm": {
        "$": "X-Amz-Algorithm"
      },
      "X-Amz-Credential": {
        "$": "X-Amz-Credential"
      },
      "X-Amz-Security-Token": {
        "$": "X-Amz-Security-Token"
      },
      "X-Amz-Signature": {
        "$": "X-Amz-Signature"
      },
      "X-Amz-SignedHeaders": {
        "$": "X-Amz-SignedHeaders"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
