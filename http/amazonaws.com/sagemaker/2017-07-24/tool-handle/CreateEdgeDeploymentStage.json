{
  "name": "CreateEdgeDeploymentStage",
  "description": "Creates a new stage in an existing edge deployment plan.",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Amz-Target": {
        "type": "string",
        "enum": [
          "SageMaker.CreateEdgeDeploymentStage"
        ]
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/CreateEdgeDeploymentStageRequest"
      }
    },
    "required": [
      "X-Amz-Target",
      "body"
    ],
    "$defs": {
      "CreateEdgeDeploymentStageRequest": {
        "type": "object",
        "required": [
          "EdgeDeploymentPlanName",
          "Stages"
        ],
        "title": "CreateEdgeDeploymentStageRequest",
        "properties": {
          "EdgeDeploymentPlanName": {
            "allOf": [
              {
                "$ref": "#/$defs/EntityName"
              },
              {
                "description": "The name of the edge deployment plan."
              }
            ]
          },
          "Stages": {
            "allOf": [
              {
                "$ref": "#/$defs/DeploymentStages"
              },
              {
                "description": "List of stages to be added to the edge deployment plan."
              }
            ]
          }
        }
      },
      "EntityName": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9](-*[a-zA-Z0-9]){0,62}$",
        "minLength": 1,
        "maxLength": 63
      },
      "DeploymentStages": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/DeploymentStage"
        }
      },
      "DeploymentStage": {
        "type": "object",
        "required": [
          "StageName",
          "DeviceSelectionConfig"
        ],
        "properties": {
          "StageName": {
            "allOf": [
              {
                "$ref": "#/$defs/EntityName"
              },
              {
                "description": "The name of the stage."
              }
            ]
          },
          "DeviceSelectionConfig": {
            "allOf": [
              {
                "$ref": "#/$defs/DeviceSelectionConfig"
              },
              {
                "description": "Configuration of the devices in the stage."
              }
            ]
          },
          "DeploymentConfig": {
            "allOf": [
              {
                "$ref": "#/$defs/EdgeDeploymentConfig"
              },
              {
                "description": "Configuration of the deployment details."
              }
            ]
          }
        },
        "description": "Contains information about a stage in an edge deployment plan."
      },
      "DeviceSelectionConfig": {
        "type": "object",
        "required": [
          "DeviceSubsetType"
        ],
        "properties": {
          "DeviceSubsetType": {
            "allOf": [
              {
                "$ref": "#/$defs/DeviceSubsetType"
              },
              {
                "description": "Type of device subsets to deploy to the current stage."
              }
            ]
          },
          "Percentage": {
            "allOf": [
              {
                "$ref": "#/$defs/Percentage"
              },
              {
                "description": "Percentage of devices in the fleet to deploy to the current stage."
              }
            ]
          },
          "DeviceNames": {
            "allOf": [
              {
                "$ref": "#/$defs/DeviceNames"
              },
              {
                "description": "List of devices chosen to deploy."
              }
            ]
          },
          "DeviceNameContains": {
            "allOf": [
              {
                "$ref": "#/$defs/DeviceName"
              },
              {
                "description": "A filter to select devices with names containing this name."
              }
            ]
          }
        },
        "description": "Contains information about the configurations of selected devices."
      },
      "DeviceSubsetType": {
        "type": "string",
        "enum": [
          "PERCENTAGE",
          "SELECTION",
          "NAMECONTAINS"
        ]
      },
      "Percentage": {
        "type": "integer",
        "maximum": 100
      },
      "DeviceNames": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/DeviceName"
        }
      },
      "DeviceName": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9](-*[a-zA-Z0-9]){0,62}$",
        "minLength": 1,
        "maxLength": 63
      },
      "EdgeDeploymentConfig": {
        "type": "object",
        "required": [
          "FailureHandlingPolicy"
        ],
        "properties": {
          "FailureHandlingPolicy": {
            "allOf": [
              {
                "$ref": "#/$defs/FailureHandlingPolicy"
              },
              {
                "description": "Toggle that determines whether to rollback to previous configuration if the current deployment fails. By default this is turned on. You may turn this off if you want to investigate the errors yourself."
              }
            ]
          }
        },
        "description": "Contains information about the configuration of a deployment."
      },
      "FailureHandlingPolicy": {
        "type": "string",
        "enum": [
          "ROLLBACK_ON_FAILURE",
          "DO_NOTHING"
        ]
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://api.sagemaker.us-east-1.amazonaws.com/#X-Amz-Target=SageMaker.CreateEdgeDeploymentStage"
    },
    "headers": {
      "X-Amz-Target": {
        "$": "X-Amz-Target"
      },
      "X-Amz-Content-Sha256": {
        "$": "X-Amz-Content-Sha256"
      },
      "X-Amz-Date": {
        "$": "X-Amz-Date"
      },
      "X-Amz-Algorithm": {
        "$": "X-Amz-Algorithm"
      },
      "X-Amz-Credential": {
        "$": "X-Amz-Credential"
      },
      "X-Amz-Security-Token": {
        "$": "X-Amz-Security-Token"
      },
      "X-Amz-Signature": {
        "$": "X-Amz-Signature"
      },
      "X-Amz-SignedHeaders": {
        "$": "X-Amz-SignedHeaders"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "480": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
