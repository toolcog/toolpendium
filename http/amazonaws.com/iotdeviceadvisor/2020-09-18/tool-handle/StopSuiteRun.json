{
  "name": "StopSuiteRun",
  "description": "<p>Stops a Device Advisor test suite run that is currently running.</p> <p>Requires permission to access the <a href=\"https://docs.aws.amazon.com/service-authorization/latest/reference/list_awsiot.html#awsiot-actions-as-permissions\">StopSuiteRun</a> action.</p>",
  "parameters": {
    "type": "object",
    "properties": {
      "suiteDefinitionId": {
        "type": "string",
        "minLength": 12,
        "maxLength": 36,
        "description": "Suite definition ID of the test suite run to be stopped."
      },
      "suiteRunId": {
        "type": "string",
        "minLength": 12,
        "maxLength": 36,
        "description": "Suite run ID of the test suite run to be stopped."
      },
