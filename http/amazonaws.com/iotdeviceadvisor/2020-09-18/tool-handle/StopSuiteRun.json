      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      }
    },
    "required": [
      "suiteDefinitionId",
      "suiteRunId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://api.iotdeviceadvisor.us-east-1.amazonaws.com/suiteDefinitions/{suiteDefinitionId}/suiteRuns/{suiteRunId}/stop"
