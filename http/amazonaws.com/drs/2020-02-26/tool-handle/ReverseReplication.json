      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "type": "object",
        "required": [
          "recoveryInstanceID"
        ],
        "properties": {
          "recoveryInstanceID": {
            "description": "The ID of the Recovery Instance that we want to reverse the replication for.",
            "type": "string",
            "pattern": "^i-[0-9a-fA-F]{8,}$",
            "minLength": 10,
            "maxLength": 19
          }
        }
      }
    },
