{
  "name": "UpdateGameConfiguration",
  "description": "Updates one or more sections of the game configuration.",
  "parameters": {
    "type": "object",
    "properties": {
      "GameName": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]+$",
        "minLength": 1,
        "maxLength": 36,
        "description": "The name of the game."
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "type": "object",
        "required": [
          "Modifications"
        ],
        "properties": {
          "Modifications": {
            "description": "The list of modifications to make.",
            "type": "array",
            "items": {
              "$ref": "#/$defs/SectionModification"
            },
            "minItems": 1,
            "maxItems": 100
          }
        }
      }
    },
    "required": [
      "GameName",
      "body"
    ],
    "$defs": {
      "SectionModification": {
        "type": "object",
        "required": [
          "Operation",
          "Path",
          "Section"
        ],
        "properties": {
          "Operation": {
            "allOf": [
              {
                "$ref": "#/$defs/Operation"
              },
              {
                "description": "<p>The operation to be performed on a configuration section.</p> <p> Content can be added, deleted, or replaced within a section. </p>"
              }
            ]
          },
          "Path": {
            "allOf": [
              {
                "$ref": "#/$defs/Path"
              },
              {
                "description": "The path within the section content to be modified."
              }
            ]
          },
          "Section": {
            "allOf": [
              {
                "$ref": "#/$defs/SectionName"
              },
              {
                "description": "The name of the section to be modified."
              }
            ]
          },
          "Value": {
            "allOf": [
              {
                "$ref": "#/$defs/Document"
              },
              {
                "description": "<p>For add and replace operations, this is the value that will be used.</p> <p> This field should be omitted for delete operations. </p>"
              }
            ]
          }
        },
        "description": "A single modification to the configuration section."
      },
      "Operation": {
        "type": "string",
        "enum": [
          "ADD",
          "REMOVE",
          "REPLACE"
        ]
      },
      "Path": {
        "type": "string",
        "pattern": "^\\/.*[^\\/]$",
        "minLength": 1,
        "maxLength": 500
      },
      "SectionName": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9.]+$",
        "minLength": 1,
        "maxLength": 36
      },
      "Document": {
        "type": "object",
        "properties": {},
        "description": "<p/>"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "http://gamesparks.us-east-1.amazonaws.com/game/{GameName}/configuration"
    },
    "headers": {
      "X-Amz-Content-Sha256": {
        "$": "X-Amz-Content-Sha256"
      },
      "X-Amz-Date": {
        "$": "X-Amz-Date"
      },
      "X-Amz-Algorithm": {
        "$": "X-Amz-Algorithm"
      },
      "X-Amz-Credential": {
        "$": "X-Amz-Credential"
      },
      "X-Amz-Security-Token": {
        "$": "X-Amz-Security-Token"
      },
      "X-Amz-Signature": {
        "$": "X-Amz-Signature"
      },
      "X-Amz-SignedHeaders": {
        "$": "X-Amz-SignedHeaders"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
