          }
        }
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "LexiconName": {
        "type": "string",
        "pattern": "[0-9A-Za-z]{1,20}"
      },
      "SpeechMarkType": {
        "type": "string",
        "enum": [
          "sentence",
          "ssml",
          "viseme",
          "word"
        ]
      }
    }
  },
