      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      }
    },
    "required": [
      "TaskId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://polly.us-east-1.amazonaws.com/v1/synthesisTasks/{TaskId}"
    },
    "headers": {
      "X-Amz-Content-Sha256": {
