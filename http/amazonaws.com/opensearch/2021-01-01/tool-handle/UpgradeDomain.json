      },
      "X-Amz-SignedHeaders": {
        "$": "X-Amz-SignedHeaders"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Container for the response returned by <code>UpgradeDomain</code> operation.",
        "**Key properties:**",
        {
          "$ul": [
            "**UpgradeId**",
            "**DomainName**",
            "**TargetVersion**",
            "**PerformCheckOnly**",
            "**AdvancedOptions**",
            "**ChangeProgressDetails**"
          ]
        },
        {
