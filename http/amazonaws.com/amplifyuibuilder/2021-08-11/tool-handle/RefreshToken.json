{
  "name": "RefreshToken",
  "description": "Refreshes a previously issued access token that might have expired.",
  "parameters": {
    "type": "object",
    "properties": {
      "provider": {
        "type": "string",
        "enum": [
          "figma"
        ],
        "description": "The third-party provider for the token. The only valid value is <code>figma</code>."
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "type": "object",
        "required": [
          "refreshTokenBody"
        ],
        "properties": {
          "refreshTokenBody": {
            "description": "Describes a refresh token.",
            "type": "object",
            "properties": {
              "token": {
                "allOf": [
                  {
                    "$ref": "#/$defs/SensitiveString"
                  },
                  {
                    "description": "The token to use to refresh a previously issued access token that might have expired."
                  }
                ]
              },
              "clientId": {
                "allOf": [
                  {
                    "$ref": "#/$defs/SensitiveString"
                  },
                  {
                    "description": "The ID of the client to request the token from."
                  }
                ]
              }
            }
          }
        }
      }
    },
    "required": [
      "provider",
      "body"
    ],
    "$defs": {
      "SensitiveString": {
        "type": "string",
        "format": "password"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://amplifyuibuilder.us-east-1.amazonaws.com/tokens/{provider}/refresh"
    },
    "headers": {
      "X-Amz-Content-Sha256": {
        "$": "X-Amz-Content-Sha256"
      },
      "X-Amz-Date": {
        "$": "X-Amz-Date"
      },
      "X-Amz-Algorithm": {
        "$": "X-Amz-Algorithm"
      },
      "X-Amz-Credential": {
        "$": "X-Amz-Credential"
      },
      "X-Amz-Security-Token": {
        "$": "X-Amz-Security-Token"
      },
      "X-Amz-Signature": {
        "$": "X-Amz-Signature"
      },
      "X-Amz-SignedHeaders": {
        "$": "X-Amz-SignedHeaders"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**accessToken**",
            "**expiresIn**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "480": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
