      "role_name",
      "account_id",
      "x-amz-sso_bearer_token"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://portal.sso.us-east-1.amazonaws.com/federation/credentials#role_name&account_id&x-amz-sso_bearer_token{?role_name,account_id}"
