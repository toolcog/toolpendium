      },
      "TaskTemplateDefaultFieldValueList": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/TaskTemplateDefaultFieldValue"
        }
      },
      "TaskTemplateDefaultFieldValue": {
        "type": "object",
        "properties": {
          "Id": {
            "allOf": [
              {
                "$ref": "#/$defs/TaskTemplateFieldIdentifier"
              },
              {
                "description": "Identifier of a field. "
              }
            ]
          },
          "DefaultValue": {
            "allOf": [
              {
                "$ref": "#/$defs/TaskTemplateFieldValue"
              },
              {
                "description": "Default value for the field."
              }
            ]
          }
        },
        "description": "Describes a default field and its corresponding value."
      },
      "TaskTemplateFieldValue": {
        "type": "string",
        "minLength": 0,
        "maxLength": 4096
      },
      "TaskTemplateField": {
        "type": "object",
        "required": [
          "Id"
        ],
        "properties": {
          "Id": {
            "allOf": [
              {
                "$ref": "#/$defs/TaskTemplateFieldIdentifier"
              },
              {
                "description": "The unique identifier for the field."
              }
            ]
          },
          "Description": {
            "allOf": [
              {
                "$ref": "#/$defs/TaskTemplateFieldDescription"
              },
              {
                "description": "The description of the field."
              }
            ]
          },
          "Type": {
            "allOf": [
              {
                "$ref": "#/$defs/TaskTemplateFieldType"
              },
              {
                "description": "Indicates the type of field."
              }
            ]
          },
          "SingleSelectOptions": {
            "allOf": [
              {
                "$ref": "#/$defs/SingleSelectOptions"
              },
              {
                "description": "A list of options for a single select field."
              }
            ]
          }
        },
        "description": "Describes a single task template field."
      },
      "TaskTemplateFieldDescription": {
        "type": "string",
        "minLength": 1,
        "maxLength": 255
      },
      "TaskTemplateFieldType": {
        "type": "string",
        "enum": [
          "NAME",
          "DESCRIPTION",
          "SCHEDULED_TIME",
          "QUICK_CONNECT",
          "URL",
          "NUMBER",
          "TEXT",
          "TEXT_AREA",
          "DATE_TIME",
          "BOOLEAN",
          "SINGLE_SELECT",
          "EMAIL"
        ]
      },
      "SingleSelectOptions": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/TaskTemplateSingleSelectOption"
        }
      },
      "TaskTemplateSingleSelectOption": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
