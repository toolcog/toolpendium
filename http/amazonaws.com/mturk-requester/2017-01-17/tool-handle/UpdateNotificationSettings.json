            "allOf": [
              {
                "$ref": "#/$defs/String"
              },
              {
                "description": "<p> The target for notification messages. The Destinationâ€™s format is determined by the specified Transport: </p> <ul> <li> <p>When Transport is Email, the Destination is your email address.</p> </li> <li> <p>When Transport is SQS, the Destination is your queue URL.</p> </li> <li> <p>When Transport is SNS, the Destination is the ARN of your topic.</p> </li> </ul>"
              }
            ]
          },
          "Transport": {
            "allOf": [
              {
                "$ref": "#/$defs/NotificationTransport"
              },
              {
                "description": " The method Amazon Mechanical Turk uses to send the notification. Valid Values: Email | SQS | SNS. "
              }
            ]
          },
          "Version": {
            "allOf": [
              {
                "$ref": "#/$defs/String"
              },
              {
                "description": "The version of the Notification API to use. Valid value is 2006-05-05."
              }
            ]
          },
          "EventTypes": {
            "allOf": [
              {
                "$ref": "#/$defs/EventTypeList"
              },
