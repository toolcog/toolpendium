{
  "name": "GetSigningPlatform",
  "description": "Returns information on a specific signing platform.",
  "parameters": {
    "type": "object",
    "properties": {
      "platformId": {
        "type": "string",
        "description": "The ID of the target signing platform."
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
