{
  "name": "TestInvokeMethod",
  "description": "Simulate the invocation of a Method in your RestApi with headers, parameters, and an incoming request body.",
  "parameters": {
    "type": "object",
    "properties": {
      "restapi_id": {
        "type": "string",
        "description": "The string identifier of the associated RestApi."
      },
      "resource_id": {
        "type": "string",
        "description": "Specifies a test invoke method request's resource ID."
      },
      "http_method": {
        "type": "string",
        "description": "Specifies a test invoke method request's HTTP method."
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "type": "object",
        "properties": {
          "pathWithQueryString": {
            "description": "The URI path, including query string, of the simulated invocation request. Use this to specify path parameters and query string parameters.",
            "type": "string"
          },
          "body": {
            "description": "The simulated request body of an incoming invocation request.",
            "type": "string"
          },
          "headers": {
            "description": "A key-value map of headers to simulate an incoming invocation request.",
            "type": "object",
            "additionalProperties": {
              "$ref": "#/$defs/String"
            }
          },
          "multiValueHeaders": {
            "description": "The headers as a map from string to list of values to simulate an incoming invocation request.",
            "type": "object",
            "additionalProperties": {
              "$ref": "#/$defs/ListOfString"
            }
          },
          "clientCertificateId": {
            "description": "A ClientCertificate identifier to use in the test invocation. API Gateway will use the certificate when making the HTTPS request to the defined back-end endpoint.",
            "type": "string"
          },
          "stageVariables": {
            "description": "A key-value map of stage variables to simulate an invocation on a deployed Stage.",
            "type": "object",
            "additionalProperties": {
              "$ref": "#/$defs/String"
            }
          }
        }
      }
    },
    "required": [
      "restapi_id",
      "resource_id",
      "http_method",
      "body"
    ],
    "$defs": {
      "String": {
        "type": "string"
      },
      "ListOfString": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/String"
        }
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://apigateway.us-east-1.amazonaws.com/restapis/{restapi_id}/resources/{resource_id}/methods/{http_method}"
    },
    "headers": {
      "X-Amz-Content-Sha256": {
        "$": "X-Amz-Content-Sha256"
      },
      "X-Amz-Date": {
        "$": "X-Amz-Date"
      },
      "X-Amz-Algorithm": {
        "$": "X-Amz-Algorithm"
      },
      "X-Amz-Credential": {
        "$": "X-Amz-Credential"
      },
      "X-Amz-Security-Token": {
        "$": "X-Amz-Security-Token"
      },
      "X-Amz-Signature": {
        "$": "X-Amz-Signature"
      },
      "X-Amz-SignedHeaders": {
        "$": "X-Amz-SignedHeaders"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
