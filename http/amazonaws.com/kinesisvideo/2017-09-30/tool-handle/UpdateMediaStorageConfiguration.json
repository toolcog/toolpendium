      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "type": "object",
        "required": [
          "ChannelARN",
          "MediaStorageConfiguration"
        ],
        "properties": {
          "ChannelARN": {
            "description": "The Amazon Resource Name (ARN) of the channel.",
            "type": "string",
            "pattern": "arn:[a-z\\d-]+:kinesisvideo:[a-z0-9-]+:[0-9]+:[a-z]+/[a-zA-Z0-9_.-]+/[0-9]+",
            "minLength": 1,
            "maxLength": 1024
          },
          "MediaStorageConfiguration": {
            "description": "A structure that encapsulates, or contains, the media storage configuration properties.",
            "type": "object",
            "properties": {
              "StreamARN": {
                "allOf": [
                  {
                    "$ref": "#/$defs/ResourceARN"
                  },
                  {
                    "description": "The Amazon Resource Name (ARN) of the stream "
                  }
                ]
              },
              "Status": {
                "allOf": [
                  {
                    "$ref": "#/$defs/MediaStorageConfigurationStatus"
                  },
                  {
                    "description": "The status of the media storage configuration."
                  }
                ]
              }
            }
          }
        }
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "ResourceARN": {
        "type": "string",
        "pattern": "arn:[a-z\\d-]+:kinesisvideo:[a-z0-9-]+:[0-9]+:[a-z]+/[a-zA-Z0-9_.-]+/[0-9]+",
        "minLength": 1,
        "maxLength": 1024
      },
      "MediaStorageConfigurationStatus": {
        "type": "string",
        "enum": [
          "ENABLED",
          "DISABLED"
        ]
      }
    }
  },
  "handler": "http",
  "request": {
