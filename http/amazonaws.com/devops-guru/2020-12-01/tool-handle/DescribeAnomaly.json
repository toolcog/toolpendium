{
  "name": "DescribeAnomaly",
  "description": " Returns details about an anomaly that you specify using its ID. ",
  "parameters": {
    "type": "object",
    "properties": {
      "Id": {
        "type": "string",
        "pattern": "^[\\w~.-]*$",
        "minLength": 1,
        "maxLength": 100,
        "description": " The ID of the anomaly. "
      },
      "AccountId": {
        "type": "string",
        "pattern": "^\\d{12}$",
        "minLength": 12,
        "maxLength": 12,
        "description": "The ID of the member account."
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      }
    },
    "required": [
      "Id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://devops-guru.us-east-1.amazonaws.com/anomalies/{Id}{?AccountId}"
    },
    "headers": {
      "X-Amz-Content-Sha256": {
