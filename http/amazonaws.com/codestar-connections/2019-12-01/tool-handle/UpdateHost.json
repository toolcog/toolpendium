{
  "name": "UpdateHost",
  "description": "Updates a specified host with the provided configurations.",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Amz-Target": {
        "type": "string",
        "enum": [
          "com.amazonaws.codestar.connections.CodeStar_connections_20191201.UpdateHost"
