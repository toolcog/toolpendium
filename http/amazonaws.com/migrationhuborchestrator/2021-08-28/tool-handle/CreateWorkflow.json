      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "type": "object",
        "required": [
          "name",
          "templateId",
          "applicationConfigurationId",
          "inputParameters"
        ],
        "properties": {
          "name": {
            "description": "The name of the migration workflow.",
            "type": "string",
            "pattern": "[-a-zA-Z0-9_.+]+[-a-zA-Z0-9_.+ ]*",
            "minLength": 1,
            "maxLength": 100
          },
          "description": {
            "description": "The description of the migration workflow.",
            "type": "string",
            "pattern": "[-a-zA-Z0-9_.+, ]*",
            "minLength": 0,
            "maxLength": 500
          },
          "templateId": {
            "description": "The ID of the template.",
            "type": "string",
            "pattern": "[-a-zA-Z0-9_.+]+[-a-zA-Z0-9_.+ ]*",
            "minLength": 1,
            "maxLength": 100
          },
          "applicationConfigurationId": {
            "description": "The configuration ID of the application configured in Application Discovery Service.",
            "type": "string",
            "pattern": "[-a-zA-Z0-9_.+]+[-a-zA-Z0-9_.+ ]*",
            "minLength": 1,
            "maxLength": 100
          },
          "inputParameters": {
            "description": "The input parameters required to create a migration workflow.",
            "type": "object",
            "additionalProperties": {
              "$ref": "#/$defs/StepInput"
            }
          },
          "stepTargets": {
            "description": "The servers on which a step will be run.",
            "type": "array",
            "items": {
              "$ref": "#/$defs/StringListMember"
            }
          },
          "tags": {
            "description": "The tags to add on a migration workflow.",
            "type": "object",
            "additionalProperties": {
              "$ref": "#/$defs/StringMapValue"
            }
          }
        }
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "StepInput": {
        "type": "object",
        "properties": {
          "integerValue": {
            "allOf": [
              {
                "$ref": "#/$defs/Integer"
              },
              {
                "description": "The value of the integer."
              }
            ]
          },
          "stringValue": {
            "allOf": [
              {
                "$ref": "#/$defs/StringValue"
              },
              {
                "description": "String value."
              }
            ]
          },
          "listOfStringsValue": {
            "allOf": [
              {
                "$ref": "#/$defs/StringList"
              },
              {
                "description": "List of string values."
              }
            ]
          },
          "mapOfStringValue": {
            "allOf": [
              {
                "$ref": "#/$defs/StringMap"
              },
              {
                "description": "Map of string values."
              }
            ]
          }
        },
        "description": "A map of key value pairs that is generated when you create a migration workflow. The key value pairs will differ based on your selection of the template."
      },
      "Integer": {
        "type": "integer"
      },
      "StringValue": {
        "type": "string",
        "minLength": 0,
        "maxLength": 100
      },
      "StringList": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/StringListMember"
        }
      },
      "StringListMember": {
        "type": "string",
        "minLength": 0,
        "maxLength": 100
      },
      "StringMap": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/$defs/StringMapValue"
        }
      },
      "StringMapValue": {
        "type": "string",
        "minLength": 0,
        "maxLength": 100
      }
    }
  },
