      },
      "X-Amz-Signature": {
        "$": "X-Amz-Signature"
      },
      "X-Amz-SignedHeaders": {
        "$": "X-Amz-SignedHeaders"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**storageType**",
            "**multiLayerStorage**",
            "**disassociatedDataStorage**",
            [
              "**retentionPeriod**: How many days your data is kept in the hot tier. By default, your data is kept indefinitely in the hot tier.",
              {
                "$ul": [
                  "**numberOfDays**",
                  "**unlimited**"
                ]
              }
            ],
            [
              "**configurationStatus**: Contains current status information for the configuration.",
              {
                "$ul": [
                  "**state**",
                  "**error**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
