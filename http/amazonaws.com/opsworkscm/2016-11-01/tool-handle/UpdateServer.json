{
  "name": "UpdateServer",
  "description": "<p> Updates settings for a server. </p> <p> This operation is synchronous. </p>",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Amz-Target": {
        "type": "string",
        "enum": [
          "OpsWorksCM_V2016_11_01.UpdateServer"
        ]
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/UpdateServerRequest"
      }
    },
    "required": [
      "X-Amz-Target",
      "body"
    ],
    "$defs": {
      "UpdateServerRequest": {
        "type": "object",
        "required": [
          "ServerName"
        ],
        "title": "UpdateServerRequest",
        "properties": {
          "DisableAutomatedBackup": {
            "allOf": [
              {
                "$ref": "#/$defs/Boolean"
              },
              {
                "description": "Setting DisableAutomatedBackup to <code>true</code> disables automated or scheduled backups. Automated backups are enabled by default. "
              }
            ]
          },
          "BackupRetentionCount": {
            "allOf": [
              {
                "$ref": "#/$defs/Integer"
              },
              {
                "description": "Sets the number of automated backups that you want to keep. "
              }
            ]
          },
          "ServerName": {
            "allOf": [
              {
                "$ref": "#/$defs/ServerName"
              },
              {
                "description": "The name of the server to update. "
              }
            ]
          },
          "PreferredMaintenanceWindow": {
            "$ref": "#/$defs/TimeWindowDefinition"
          },
          "PreferredBackupWindow": {
            "$ref": "#/$defs/TimeWindowDefinition"
          }
        }
      },
      "Boolean": {
        "type": "boolean"
      },
      "Integer": {
        "type": "integer"
      },
      "ServerName": {
        "type": "string",
        "pattern": "[a-zA-Z][a-zA-Z0-9\\-]*",
        "minLength": 1,
        "maxLength": 40
      },
      "TimeWindowDefinition": {
        "type": "string",
        "pattern": "^((Mon|Tue|Wed|Thu|Fri|Sat|Sun):)?([0-1][0-9]|2[0-3]):[0-5][0-9]$",
        "description": "<p> <code>DDD:HH:MM</code> (weekly start time) or <code>HH:MM</code> (daily start time). </p> <p> Time windows always use coordinated universal time (UTC). Valid strings for day of week (<code>DDD</code>) are: <code>Mon</code>, <code>Tue</code>, <code>Wed</code>, <code>Thr</code>, <code>Fri</code>, <code>Sat</code>, or <code>Sun</code>.</p>",
        "maxLength": 10000
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://opsworks-cm.us-east-1.amazonaws.com/#X-Amz-Target=OpsWorksCM_V2016_11_01.UpdateServer"
    },
    "headers": {
      "X-Amz-Target": {
