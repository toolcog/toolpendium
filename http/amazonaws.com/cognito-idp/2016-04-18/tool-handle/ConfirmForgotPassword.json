        "maxLength": 128,
        "format": "password"
      },
      "ConfirmationCodeType": {
        "type": "string",
        "pattern": "[\\S]+",
        "minLength": 1,
        "maxLength": 2048
      },
      "PasswordType": {
        "type": "string",
        "pattern": "[\\S]+",
        "maxLength": 256,
