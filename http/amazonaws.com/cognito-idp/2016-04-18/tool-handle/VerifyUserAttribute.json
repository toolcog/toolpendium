              }
            ]
          }
        },
        "description": "Represents the request to verify user attributes."
      },
      "TokenModelType": {
        "type": "string",
        "pattern": "[A-Za-z0-9-_=.]+",
        "format": "password"
      },
      "AttributeNameType": {
        "type": "string",
        "pattern": "[\\p{L}\\p{M}\\p{S}\\p{N}\\p{P}]+",
        "minLength": 1,
        "maxLength": 32
      },
      "ConfirmationCodeType": {
        "type": "string",
        "pattern": "[\\S]+",
        "minLength": 1,
        "maxLength": 2048
      }
    }
  },
