      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      }
    },
    "required": [
      "StandardsSubscriptionArn"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://securityhub.us-east-1.amazonaws.com/standards/controls/{StandardsSubscriptionArn}{?NextToken,MaxResults}"
    },
