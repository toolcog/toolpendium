{
  "name": "UpdateSecurityHubConfiguration",
  "description": "Updates configuration options for Security Hub.",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
