{
  "name": "CreateApiDestination",
  "description": "Creates an API destination, which is an HTTP invocation endpoint configured as a target for events.",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Amz-Target": {
        "type": "string",
        "enum": [
          "AWSEvents.CreateApiDestination"
        ]
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
      },
      "X-Amz-Date": {
        "type": "string"
      },
      "X-Amz-Algorithm": {
        "type": "string"
      },
      "X-Amz-Credential": {
        "type": "string"
      },
      "X-Amz-Security-Token": {
        "type": "string"
      },
      "X-Amz-Signature": {
        "type": "string"
      },
      "X-Amz-SignedHeaders": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/CreateApiDestinationRequest"
      }
    },
    "required": [
      "X-Amz-Target",
      "body"
    ],
    "$defs": {
      "CreateApiDestinationRequest": {
        "type": "object",
        "required": [
          "Name",
          "ConnectionArn",
          "InvocationEndpoint",
          "HttpMethod"
        ],
        "title": "CreateApiDestinationRequest",
        "properties": {
          "Name": {
            "allOf": [
              {
                "$ref": "#/$defs/ApiDestinationName"
              },
              {
                "description": "The name for the API destination to create."
              }
            ]
          },
          "Description": {
            "allOf": [
              {
                "$ref": "#/$defs/ApiDestinationDescription"
              },
              {
                "description": "A description for the API destination to create."
              }
            ]
          },
          "ConnectionArn": {
            "allOf": [
              {
                "$ref": "#/$defs/ConnectionArn"
              },
              {
                "description": "The ARN of the connection to use for the API destination. The destination endpoint must support the authorization type specified for the connection."
              }
            ]
          },
          "InvocationEndpoint": {
            "allOf": [
              {
                "$ref": "#/$defs/HttpsEndpoint"
              },
              {
                "description": "The URL to the HTTP invocation endpoint for the API destination."
              }
            ]
          },
          "HttpMethod": {
            "allOf": [
              {
                "$ref": "#/$defs/ApiDestinationHttpMethod"
              },
              {
                "description": "The method to use for the request to the HTTP invocation endpoint."
              }
            ]
          },
          "InvocationRateLimitPerSecond": {
            "allOf": [
              {
                "$ref": "#/$defs/ApiDestinationInvocationRateLimitPerSecond"
              },
              {
                "description": "The maximum number of requests per second to send to the HTTP invocation endpoint."
              }
            ]
          }
        }
      },
      "ApiDestinationName": {
        "type": "string",
        "pattern": "[\\.\\-_A-Za-z0-9]+",
        "minLength": 1,
        "maxLength": 64
      },
      "ApiDestinationDescription": {
        "type": "string",
        "pattern": ".*",
        "maxLength": 512
      },
      "ConnectionArn": {
        "type": "string",
        "pattern": "^arn:aws([a-z]|\\-)*:events:([a-z]|\\d|\\-)*:([0-9]{12})?:connection\\/[\\.\\-_A-Za-z0-9]+\\/[\\-A-Za-z0-9]+$",
        "minLength": 1,
        "maxLength": 1600
      },
      "HttpsEndpoint": {
        "type": "string",
        "pattern": "^((%[0-9A-Fa-f]{2}|[-()_.!~*';/?:@\\x26=+$,A-Za-z0-9])+)([).!';/?:,])?$",
        "minLength": 1,
        "maxLength": 2048
      },
      "ApiDestinationHttpMethod": {
        "type": "string",
        "enum": [
          "POST",
          "GET",
          "HEAD",
          "OPTIONS",
          "PUT",
          "PATCH",
          "DELETE"
        ]
      },
      "ApiDestinationInvocationRateLimitPerSecond": {
        "type": "integer",
        "minimum": 1
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://events.us-east-1.amazonaws.com/#X-Amz-Target=AWSEvents.CreateApiDestination"
    },
    "headers": {
      "X-Amz-Target": {
        "$": "X-Amz-Target"
      },
      "X-Amz-Content-Sha256": {
