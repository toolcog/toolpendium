{
  "name": "GetOrder",
  "description": "Gets information about the specified order.",
  "parameters": {
    "type": "object",
    "properties": {
      "OrderId": {
        "type": "string",
        "pattern": "oo-[a-f0-9]{17}$",
        "minLength": 1,
        "maxLength": 20,
        "description": "The ID of the order."
      },
      "X-Amz-Content-Sha256": {
        "type": "string"
