{
  "name": "searchSFX",
  "description": "This endpoint searches for sound effects. If you specify more than one search parameter, the API uses an AND condition.",
  "parameters": {
    "type": "object",
    "properties": {
      "added_date": {
        "format": "date",
        "type": "string",
        "description": "Show sound effects added on the specified date"
      },
      "added_date_start": {
        "format": "date",
        "type": "string",
        "description": "Show sound effects added on or after the specified date"
      },
      "added_date_end": {
        "format": "date",
        "type": "string",
        "description": "Show sound effects added before the specified date"
      },
      "duration": {
        "type": "integer",
        "uniqueItems": true,
        "description": "Show sound effects with the specified duration in seconds"
      },
      "duration_from": {
        "type": "integer",
        "uniqueItems": true,
        "description": "Show sound effects with the specified duration or longer in seconds"
      },
      "duration_to": {
        "type": "integer",
        "uniqueItems": true,
        "description": "Show sound effects with the specified duration or shorter in seconds"
      },
      "page": {
        "default": 1,
        "minimum": 1,
        "type": "integer",
        "uniqueItems": true,
        "description": "Page number"
      },
      "per_page": {
        "default": 20,
        "maximum": 500,
        "minimum": 1,
        "type": "integer",
        "uniqueItems": true,
        "description": "Number of results per page"
      },
      "query": {
        "type": "string",
        "uniqueItems": true,
        "description": "One or more search terms separated by spaces"
      },
      "safe": {
        "default": true,
        "type": "boolean",
        "description": "Enable or disable safe search"
      },
      "sort": {
        "default": "popular",
        "enum": [
          "popular",
          "newest",
          "relevance",
          "random",
          "oldest"
        ],
        "type": "string",
        "uniqueItems": true,
        "description": "Sort by"
      },
      "view": {
        "default": "minimal",
        "enum": [
          "minimal",
          "full"
        ],
        "type": "string",
        "uniqueItems": true,
        "description": "Amount of detail to render in the response"
      },
      "language": {
        "$ref": "#/components/schemas/Language",
        "description": "Set query and result language (uses Accept-Language header if not set)"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.shutterstock.com/v2/sfx/search{?added_date,added_date_start,added_date_end,duration,duration_from,duration_to,page,per_page,query,safe,sort,view,language}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Sound effects search results",
        "**Key properties:**",
        {
          "$ul": [
            "**data**: List of tracks",
            "**message**: Server-generated message, if any",
            "**page**: Current page that is returned",
            "**per_page**: Number of results per page",
            "**search_id**: ID of the search",
            "**total_count**: Total count of all results across all pages"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
