{
  "name": "findSimilarVideos",
  "description": "This endpoint searches for videos that are similar to a video that you specify.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "asset-id",
        "type": "string",
        "description": "The ID of a video for which similar videos should be returned"
      },
      "language": {
        "$ref": "#/components/schemas/Language",
        "description": "Language for the keywords and categories in the response"
      },
      "page": {
        "default": 1,
        "minimum": 1,
        "type": "integer",
        "description": "Page number"
      },
      "per_page": {
        "default": 20,
        "maximum": 500,
        "minimum": 1,
        "type": "integer",
        "description": "Number of results per page"
      },
      "view": {
        "default": "minimal",
        "enum": [
          "minimal",
          "full"
        ],
        "type": "string",
        "description": "Amount of detail to render in the response"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.shutterstock.com/v2/videos/{id}/similar{?language,page,per_page,view}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Video search results",
        "**Key properties:**",
        {
          "$ul": [
            "**data**: List of videos",
            "**message**: Server-generated message, if any",
            "**page**: Current page that is returned",
            "**per_page**: Number of results per page",
            "**search_id**: Unique identifier for the search request",
            "**total_count**: Total count of all results across all pages"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
