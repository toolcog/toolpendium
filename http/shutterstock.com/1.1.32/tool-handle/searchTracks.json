{
  "name": "searchTracks",
  "description": "This endpoint searches for tracks. If you specify more than one search parameter, the API uses an AND condition. Array parameters can be specified multiple times; in this case, the API uses an AND or an OR condition with those values, depending on the parameter.",
  "parameters": {
    "type": "object",
    "properties": {
      "artists": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "uniqueItems": false,
        "description": "Show tracks with one of the specified artist names or IDs"
      },
      "bpm": {
        "type": "integer",
        "uniqueItems": true,
        "description": "(Deprecated; use bpm_from and bpm_to instead) Show tracks with the specified beats per minute"
      },
      "bpm_from": {
        "type": "integer",
        "uniqueItems": true,
        "description": "Show tracks with the specified beats per minute or faster"
      },
      "bpm_to": {
        "type": "integer",
        "uniqueItems": true,
        "description": "Show tracks with the specified beats per minute or slower"
      },
      "duration": {
        "type": "integer",
        "uniqueItems": true,
        "description": "Show tracks with the specified duration in seconds"
      },
      "duration_from": {
        "type": "integer",
        "uniqueItems": true,
        "description": "Show tracks with the specified duration or longer in seconds"
      },
      "duration_to": {
        "type": "integer",
        "uniqueItems": true,
        "description": "Show tracks with the specified duration or shorter in seconds"
      },
      "genre": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "uniqueItems": false,
        "description": "Show tracks with each of the specified genres; to get the list of genres, use `GET /v2/audio/genres`"
      },
      "is_instrumental": {
        "type": "boolean",
        "uniqueItems": true,
        "description": "Show instrumental music only"
      },
      "instruments": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "uniqueItems": false,
        "description": "Show tracks with each of the specified instruments; to get the list of instruments, use `GET /v2/audio/instruments`"
      },
      "moods": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "uniqueItems": false,
        "description": "Show tracks with each of the specified moods; to get the list of moods, use `GET /v2/audio/moods`"
      },
      "page": {
        "default": 1,
        "minimum": 1,
        "type": "integer",
        "uniqueItems": true,
        "description": "Page number"
      },
      "per_page": {
        "default": 20,
        "maximum": 500,
        "minimum": 0,
        "type": "integer",
        "uniqueItems": true,
        "description": "Number of results per page"
      },
      "query": {
        "type": "string",
        "uniqueItems": true,
        "description": "One or more search terms separated by spaces"
      },
      "sort": {
        "enum": [
          "score",
          "ranking_all",
          "artist",
          "title",
          "bpm",
          "freshness",
          "duration"
        ],
        "type": "string",
        "uniqueItems": true,
        "description": "Sort by"
      },
      "sort_order": {
        "default": "desc",
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string",
        "uniqueItems": true,
        "description": "Sort order"
      },
      "vocal_description": {
        "type": "string",
        "uniqueItems": true,
        "description": "Show tracks with the specified vocal description (male, female)"
      },
      "view": {
        "default": "minimal",
        "enum": [
          "minimal",
          "full"
        ],
        "type": "string",
        "uniqueItems": true,
        "description": "Amount of detail to render in the response"
      },
      "fields": {
        "type": "string",
        "uniqueItems": true,
        "description": "Fields to display in the response; see the documentation for the fields parameter in the overview section"
      },
      "library": {
        "default": "premier",
        "enum": [
          "shutterstock",
          "premier"
        ],
        "type": "string",
        "uniqueItems": true,
        "description": "Which library to search"
      },
      "language": {
        "type": "string",
        "description": "Which language to search in"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.shutterstock.com/v2/audio/search{?artists,bpm,bpm_from,bpm_to,duration,duration_from,duration_to,genre,is_instrumental,instruments,moods,page,per_page,query,sort,sort_order,vocal_description,view,fields,library,language}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Audio search results",
        "**Key properties:**",
        {
          "$ul": [
            "**data**: List of tracks",
            "**message**: Server-generated message, if any",
            "**page**: Current page that is returned",
            "**per_page**: Number of results per page",
            "**search_id**: ID of the search",
            "**total_count**: Total count of all results across all pages"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
