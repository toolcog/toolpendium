{
  "name": "getImageRecommendations",
  "description": "This endpoint returns images that customers put in the same collection as the specified image IDs.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Image IDs"
      },
      "max_items": {
        "default": 20,
        "maximum": 500,
        "minimum": 1,
        "type": "integer",
        "description": "Maximum number of results returned in the response"
      },
      "safe": {
        "default": true,
        "type": "boolean",
        "description": "Restrict results to safe images"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.shutterstock.com/v2/images/recommendations{?id,max_items,safe}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "List of recommended images",
        "**Key properties:**",
        {
          "$ul": [
            "**data**: Recommended images",
            "**errors**: Error list; appears only if there was an error",
            "**message**: Server-generated message, if any",
            "**page**: Current page that is returned",
            "**per_page**: Number of results per page",
            "**total_count**: Total count of all results across all pages"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
