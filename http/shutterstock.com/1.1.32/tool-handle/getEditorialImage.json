{
  "name": "getEditorialImage",
  "description": "This endpoint shows information about an editorial image, including a URL to a preview image and the sizes that it is available in.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Editorial ID"
      },
      "country": {
        "format": "country-code-3",
        "type": "string",
        "description": "Returns only if the content is available for distribution in a certain country"
      }
    },
    "required": [
      "id",
      "country"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.shutterstock.com/v2/editorial/images/{id}{?country}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Metadata about editorial content",
        "**Key properties:**",
        {
          "$ul": [
            "**aspect**",
            [
              "**assets**: Asset information, including size and thumbnail URLs",
              {
                "$ul": [
                  [
                    "**medium_jpg**: Image size information",
                    {
                      "$ul": [
                        "**display_name**: Display name of this image size",
                        "**dpi**",
                        "**file_size**: File size (in bytes) of this image size",
                        "**format**: Format of this image size",
                        "**height**: Height of this image size",
                        "**is_licensable**: Whether or not this image can be licensed in this image size",
                        "**width**: Width of this image size"
                      ]
                    }
                  ],
                  [
                    "**original**: Image size information",
                    {
                      "$ul": [
                        "**display_name**: Display name of this image size",
                        "**dpi**",
                        "**file_size**: File size (in bytes) of this image size",
                        "**format**: Format of this image size",
                        "**height**: Height of this image size",
                        "**is_licensable**: Whether or not this image can be licensed in this image size",
                        "**width**: Width of this image size"
                      ]
                    }
                  ],
                  [
                    "**small_jpg**: Image size information",
                    {
                      "$ul": [
                        "**display_name**: Display name of this image size",
                        "**dpi**",
                        "**file_size**: File size (in bytes) of this image size",
                        "**format**: Format of this image size",
                        "**height**: Height of this image size",
                        "**is_licensable**: Whether or not this image can be licensed in this image size",
                        "**width**: Width of this image size"
                      ]
                    }
                  ],
                  [
                    "**thumb_170**: Image thumbnail information",
                    {
                      "$ul": [
                        "**height**: Height in pixels of the image thumbnail",
                        "**url**: Direct URL to the image",
                        "**width**: Width in pixels of the image thumbnail"
                      ]
                    }
                  ],
                  [
                    "**thumb_220**: Image thumbnail information",
                    {
                      "$ul": [
                        "**height**: Height in pixels of the image thumbnail",
                        "**url**: Direct URL to the image",
                        "**width**: Width in pixels of the image thumbnail"
                      ]
                    }
                  ],
                  [
                    "**watermark_1500**: Image thumbnail information",
                    {
                      "$ul": [
                        "**height**: Height in pixels of the image thumbnail",
                        "**url**: Direct URL to the image",
                        "**width**: Width in pixels of the image thumbnail"
                      ]
                    }
                  ],
                  [
                    "**watermark_450**: Image thumbnail information",
                    {
                      "$ul": [
                        "**height**: Height in pixels of the image thumbnail",
                        "**url**: Direct URL to the image",
                        "**width**: Width in pixels of the image thumbnail"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**byline**",
            "**caption**",
            "**categories**: List of categories",
            "**date_taken**",
            "**description**",
            "**id**",
            "**keywords**",
            "**special_instructions**",
            "**title**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
