{
  "name": "getEditorialVideo",
  "description": "This endpoint shows information about an editorial image, including a URL to a preview image and the sizes that it is available in.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Editorial ID"
      },
      "country": {
        "format": "country-code-3",
        "type": "string",
        "description": "Returns only if the content is available for distribution in a certain country"
      },
      "search_id": {
        "type": "string",
        "description": "The ID of the search that is related to this request"
      }
    },
    "required": [
      "id",
      "country"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.shutterstock.com/v2/editorial/videos/{id}{?country,search_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Metadata about editorial content",
        "**Key properties:**",
        {
          "$ul": [
            "**aspect**",
            [
              "**assets**: Asset information, including size and thumbnail URLs",
              {
                "$ul": [
                  [
                    "**original**: Video asset information",
                    {
                      "$ul": [
                        "**display_name**: Display name of this video size",
                        "**file_size**: File size (in bytes) of this video size",
                        "**format**: Format of this video size",
                        "**fps**: Frames per second of this video size",
                        "**height**: Height of this video size",
                        "**is_licensable**: Whether or not videos can be licensed in this video size",
                        "**width**: Width of this video size"
                      ]
                    }
                  ],
                  [
                    "**preview_mp4**: Video preview information",
                    {
                      "$ul": [
                        "**url**: Direct URL to the image"
                      ]
                    }
                  ],
                  [
                    "**preview_webm**: Video preview information",
                    {
                      "$ul": [
                        "**url**: Direct URL to the image"
                      ]
                    }
                  ],
                  [
                    "**thumb_jpg**: Video preview information",
                    {
                      "$ul": [
                        "**url**: Direct URL to the image"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**byline**",
            "**caption**",
            "**categories**: List of categories",
            "**date_taken**",
            "**description**",
            "**id**",
            "**keywords**",
            "**title**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
