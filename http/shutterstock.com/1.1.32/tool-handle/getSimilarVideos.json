{
  "name": "getSimilarVideos",
  "description": "This endpoint returns videos that are visually similar to an image that you specify or upload.",
  "parameters": {
    "type": "object",
    "properties": {
      "asset_id": {
        "type": "string",
        "description": "The asset ID or upload ID to find similar videos for"
      },
      "license": {
        "default": [
          "commercial"
        ],
        "items": {
          "enum": [
            "commercial",
            "editorial"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "Show only videos with the specified license"
      },
      "safe": {
        "default": true,
        "type": "boolean",
        "description": "Enable or disable safe search"
      },
      "language": {
        "$ref": "#/components/schemas/Language",
        "description": "Language for the keywords and categories in the response"
      },
      "page": {
        "default": 1,
        "minimum": 1,
        "type": "integer",
        "description": "Page number"
      },
      "per_page": {
        "default": 20,
        "maximum": 500,
        "minimum": 1,
        "type": "integer",
        "description": "Number of results per page"
      },
      "view": {
        "default": "minimal",
        "enum": [
          "minimal",
          "full"
        ],
        "type": "string",
        "description": "Amount of detail to render in the response"
      }
    },
    "required": [
      "asset_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.shutterstock.com/v2/cv/similar/videos{?asset_id,license,safe,language,page,per_page,view}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Video search results",
        "**Key properties:**",
        {
          "$ul": [
            "**data**: List of videos",
            "**message**: Server-generated message, if any",
            "**page**: Current page that is returned",
            "**per_page**: Number of results per page",
            "**search_id**: Unique identifier for the search request",
            "**total_count**: Total count of all results across all pages"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
