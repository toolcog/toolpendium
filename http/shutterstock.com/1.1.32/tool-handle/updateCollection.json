{
  "name": "updateCollection",
  "description": "This endpoint updates the metadata of a catalog collection.",
  "parameters": {
    "type": "object",
    "properties": {
      "collection_id": {
        "type": "string",
        "description": "ID of collection that needs to be modified"
      },
      "body": {
        "$ref": "#/components/schemas/UpdateCatalogCollection",
        "description": "Collections Metadata to update"
      }
    },
    "required": [
      "collection_id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://api.shutterstock.com/v2/catalog/collections/{collection_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Catalog collection",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**cover_asset**: Metadata about an item that is part of a collection",
              {
                "$ul": [
                  [
                    "**asset**",
                    {
                      "$ul": [
                        "**id**",
                        "**name**",
                        "**type**"
                      ]
                    }
                  ],
                  "**collection_ids**: The collection IDs that this asset belongs to",
                  "**created_time**",
                  "**id**"
                ]
              }
            ],
            "**created_time**",
            "**id**",
            "**name**",
            [
              "**role_assignments**: List of role assignments for a catalog collection",
              {
                "$ul": [
                  "**collection_id**",
                  [
                    "**roles**",
                    {
                      "$ul": [
                        "**editors**",
                        "**owners**",
                        "**viewers**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**total_item_count**",
            "**updated_time**",
            "**visibility**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
