{
  "name": "getImageList",
  "description": "This endpoint lists information about one or more images, including the available sizes.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "items": {
          "format": "asset-id",
          "type": "string"
        },
        "maxItems": 500,
        "type": "array",
        "description": "One or more image IDs"
      },
      "view": {
        "default": "minimal",
        "enum": [
          "minimal",
          "full"
        ],
        "type": "string",
        "description": "Amount of detail to render in the response"
      },
      "search_id": {
        "type": "string",
        "description": "The ID of the search that is related to this request"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.shutterstock.com/v2/images{?id,view,search_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "List of images",
        "**Key properties:**",
        {
          "$ul": [
            "**data**: Images",
            "**errors**: Error list; appears only if there was an error",
            "**message**: Server-generated message, if any",
            "**page**: Current page that is returned",
            "**per_page**: Number of results per page",
            "**total_count**: Total count of all results across all pages"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
