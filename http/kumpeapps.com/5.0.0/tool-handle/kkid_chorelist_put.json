{
  "name": "kkid_chorelist_put",
  "description": "By passing in the appropriate options, you can update the fields of a specific core within the authenticated user's master account\n",
  "parameters": {
    "type": "object",
    "properties": {
      "idChoreList": {
        "type": "integer",
        "description": "id number of chore you wish to update"
      },
      "status": {
        "type": "string",
        "description": "new status of chore"
      },
      "stolen": {
        "type": "boolean",
        "description": "mark chore as stolen by sibling"
      },
      "stolenBy": {
        "type": "string",
        "description": "username of sibling that stole the chore (required if stolen is true)"
      },
      "nfcTag": {
        "type": "string",
        "description": "text field of NFC tag that is required to be scanned to check off this chore (normally null)"
      },
      "notes": {
        "type": "string",
        "description": "notes field for chore"
      },
      "latitude": {
        "type": "integer",
        "description": "GPS latitude of where the chore was marked"
      },
      "longitude": {
        "type": "integer",
        "description": "GPS longitude of where the chore was marked"
      },
      "altitude": {
        "type": "integer",
        "description": "GPS altitude of where the chore was marked"
      },
      "updatedByAutomation": {
        "type": "boolean",
        "description": "true if updated via API by automation system"
      },
      "whereDay": {
        "enum": [
          "Sunday",
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday",
          "Saturday",
          "Weekly",
          "Today"
        ],
        "type": "string",
        "description": "Where day equals..."
      },
      "whereStatus": {
        "type": "string",
        "description": "Where status equals..."
      },
      "whereName": {
        "type": "string",
        "description": "Where chore name equals..."
      }
    },
    "required": [
      "idChoreList"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://restapi.kumpeapps.com/v5/kkid/chorelist{?idChoreList,status,stolen,stolenBy,nfcTag,notes,latitude,longitude,altitude,updatedByAutomation,whereDay,whereStatus,whereName}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Success",
        "**Key properties:**",
        {
          "$ul": [
            "**message**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "206": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "nodata",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "405": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "API Access Denied",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "412": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "API Key invalid",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
