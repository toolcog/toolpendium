{
  "name": "kkid_apns_post",
  "description": "subscribes/unsubscribes/registers for apns push notifications",
  "parameters": {
    "type": "object",
    "properties": {
      "kidUserId": {
        "type": "integer",
        "description": "userID of the kid"
      },
      "tool": {
        "enum": [
          "register",
          "subscribe",
          "unsubscribe",
          "send"
        ],
        "type": "string",
        "description": "tool you wish to talk to"
      },
      "token": {
        "type": "string",
        "description": "device APNS token (required for register)"
      },
      "devicename": {
        "type": "string",
        "description": "Name of device to associate to token (required for register)"
      },
      "title": {
        "type": "string",
        "description": "title of APNS message (required for send)"
      },
      "message": {
        "type": "string",
        "description": "APNS message body (required for send)"
      },
      "badge": {
        "type": "integer",
        "description": "Number for badge icon (optional for send)"
      },
      "sound": {
        "type": "string",
        "description": "Name of sound file to play for send notification (optional for send)"
      },
      "section": {
        "enum": [
          "Chores",
          "Chores-New",
          "Chores-Reminders",
          "Allowance",
          "Allowance-New",
          "WishList"
        ],
        "type": "string",
        "description": "Notification section name (required for send/subscribe/unsubscribe)"
      },
      "priority": {
        "enum": [
          "passive",
          "active",
          "time-sensitive",
          "critical"
        ],
        "type": "string",
        "description": "Notification section name (optional for send, default is active)"
      }
    },
    "required": [
      "kidUserId",
      "tool"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://restapi.kumpeapps.com/v5/kkid/apns{?kidUserId,tool,token,devicename,title,message,badge,sound,section,priority}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Success",
        "**Key properties:**",
        {
          "$ul": [
            "**message**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "206": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "nodata",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "405": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "API Access Denied",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "412": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "API Key invalid",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
