{
  "name": "auth_authkey_post",
  "description": "Obtain auth key for user that has provided their username and password to login to your app. (or to obtain an auth key for a script like IFTTT)",
  "parameters": {
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "description": "Authenticated username"
      },
      "password": {
        "format": "password",
        "type": "string",
        "description": "Authenticated password"
      },
      "otp": {
        "format": "password",
        "type": "string",
        "description": "YubiKey OTP (if configured for user)"
      }
    },
    "required": [
      "username",
      "password"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://restapi.kumpeapps.com/v5/authentication/authkey{?username,password,otp}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**auth_key**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Access Denied",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "449": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "OTP Required is configured for this User. Retry login with OTP",
        "**Key properties:**",
        {
          "$ul": [
            "**message**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
