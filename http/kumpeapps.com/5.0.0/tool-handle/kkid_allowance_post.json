{
  "name": "kkid_allowance_post",
  "description": "By passing in the appropriate options, you can add an allowance transaction to a given user.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "kidUserId": {
        "type": "integer",
        "description": "userID of the kid"
      },
      "amount": {
        "type": "number",
        "description": "amount you wish to Add/Subtract (subtract value should be a negative value)"
      },
      "description": {
        "type": "string",
        "description": "Description (reason) of allowance transaction"
      },
      "transactionType": {
        "description": "Transaction Type (Add/Subtract)",
        "enum": [
          "Add",
          "Subtract"
        ],
        "type": "string"
      }
    },
    "required": [
      "kidUserId",
      "amount",
      "description",
      "transactionType"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://restapi.kumpeapps.com/v5/kkid/allowance{?kidUserId,amount,description,transactionType}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Success",
        "**Key properties:**",
        {
          "$ul": [
            "**message**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "206": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "nodata",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "405": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "API Access Denied",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "412": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "API Key invalid",
        "**Key properties:**",
        {
          "$ul": [
            "**error**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
