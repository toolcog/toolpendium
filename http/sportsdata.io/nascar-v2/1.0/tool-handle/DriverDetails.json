{
  "name": "DriverDetails",
  "description": "Driver Details",
  "parameters": {
    "type": "object",
    "properties": {
      "format": {
        "default": "xml",
        "enum": [
          "xml",
          "json"
        ],
        "type": "string",
        "description": "Desired response format. Valid entries are <code>XML</code> or <code>JSON</code>."
      },
      "driverid": {
        "type": "string",
        "description": "Unique FantasyData Driver ID.\nExample:<code>80000268</code>."
      }
    },
    "required": [
      "format",
      "driverid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://azure-api.sportsdata.io/nascar/v2/{format}/driver/{driverid}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**BirthDate**",
            "**BirthPlace**",
            "**Chassis**",
            "**Created**",
            "**CrewChief**",
            "**DriverID**",
            "**Engine**",
            "**FirstName**",
            "**Gender**",
            "**Height**",
            "**LastName**",
            "**Manufacturer**",
            "**Number**",
            "**NumberDisplay**",
            "**PhotoUrl**",
            "**Sponsors**",
            "**Team**",
            "**Updated**",
            "**Weight**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
