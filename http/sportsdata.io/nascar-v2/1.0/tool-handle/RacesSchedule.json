{
  "name": "RacesSchedule",
  "description": "Races / Schedule",
  "parameters": {
    "type": "object",
    "properties": {
      "format": {
        "default": "xml",
        "enum": [
          "xml",
          "json"
        ],
        "type": "string",
        "description": "Desired response format. Valid entries are <code>XML</code> or <code>JSON</code>."
      },
      "season": {
        "type": "string",
        "description": "Year of the season.\n<br>Examples: <code>2015</code>, <code>2016</code>."
      }
    },
    "required": [
      "format",
      "season"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://azure-api.sportsdata.io/nascar/v2/{format}/races/{season}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**ActualLaps**",
            "**Broadcast**",
            "**Canceled**",
            "**Created**",
            "**DateTime**",
            "**Day**",
            "**IsInProgress**",
            "**IsOver**",
            "**Name**",
            "**PoleWinnerID**",
            "**RaceID**",
            "**RescheduledDateTime**",
            "**RescheduledDay**",
            "**ScheduledLaps**",
            "**Season**",
            "**SeriesID**",
            "**SeriesName**",
            "**Track**",
            "**Updated**",
            "**WinnerID**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
