{
  "name": "Drivers",
  "description": "Drivers",
  "parameters": {
    "type": "object",
    "properties": {
      "format": {
        "default": "xml",
        "enum": [
          "xml",
          "json"
        ],
        "type": "string",
        "description": "Desired response format. Valid entries are <code>XML</code> or <code>JSON</code>."
      }
    },
    "required": [
      "format"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://azure-api.sportsdata.io/nascar/v2/{format}/drivers"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**BirthDate**",
            "**BirthPlace**",
            "**Chassis**",
            "**Created**",
            "**CrewChief**",
            "**DriverID**",
            "**Engine**",
            "**FirstName**",
            "**Gender**",
            "**Height**",
            "**LastName**",
            "**Manufacturer**",
            "**Number**",
            "**NumberDisplay**",
            "**PhotoUrl**",
            "**Sponsors**",
            "**Team**",
            "**Updated**",
            "**Weight**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
