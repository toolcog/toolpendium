{
  "name": "InjuriesByTeam",
  "description": "Injuries by Team",
  "parameters": {
    "type": "object",
    "properties": {
      "format": {
        "default": "XML",
        "enum": [
          "XML",
          "JSON"
        ],
        "type": "string",
        "description": "Desired response format. Valid entries are <code>XML</code> or <code>JSON</code>."
      },
      "season": {
        "type": "string",
        "description": "\n          Year of the season and the season type. If no season type is provided, then the default is regular season.\n          <br>Examples: <code>2015REG</code>, <code>2015PRE</code>, <code>2015POST</code>.\n        "
      },
      "week": {
        "type": "string",
        "description": "\n          Week of the season. Valid values are as follows: Preseason 0 to 4, Regular Season 1 to 17, Postseason 1 to 4.\n          Example: <code>1</code>\n        "
      },
      "team": {
        "type": "string",
        "description": "Abbreviation of the team. Example: <code>WAS</code>."
      }
    },
    "required": [
      "format",
      "season",
      "week",
      "team"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://azure-api.sportsdata.io/v3/nfl/stats/{format}/Injuries/{season}/{week}/{team}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**BodyPart**",
            "**DeclaredInactive**",
            "**InjuryID**",
            "**Name**",
            "**Number**",
            "**Opponent**",
            "**OpponentID**",
            "**PlayerID**",
            "**Position**",
            "**Practice**",
            "**PracticeDescription**",
            "**Season**",
            "**SeasonType**",
            "**Status**",
            "**Team**",
            "**TeamID**",
            "**Updated**",
            "**Week**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
