{
  "name": "PlayersByTeamBasic",
  "description": "This endpoint provides active player details by team.",
  "parameters": {
    "type": "object",
    "properties": {
      "format": {
        "default": "XML",
        "enum": [
          "XML",
          "JSON"
        ],
        "type": "string",
        "description": "Desired response format. Valid entries are <code>XML</code> or <code>JSON</code>."
      },
      "team": {
        "type": "string",
        "description": "The abbreviation of the requested team.<br>Examples: <code>PHI</code>, <code>BKN</code>."
      }
    },
    "required": [
      "format",
      "team"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://azure-api.sportsdata.io/v3/nba/scores/{format}/PlayersBasic/{team}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**BirthCity**",
            "**BirthCountry**",
            "**BirthDate**",
            "**BirthState**",
            "**FirstName**",
            "**GlobalTeamID**",
            "**Height**",
            "**Jersey**",
            "**LastName**",
            "**PlayerID**",
            "**Position**",
            "**PositionCategory**",
            "**SportsDataID**",
            "**Status**",
            "**Team**",
            "**TeamID**",
            "**Weight**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
