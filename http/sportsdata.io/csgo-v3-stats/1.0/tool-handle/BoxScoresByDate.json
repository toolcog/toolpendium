{
  "name": "BoxScoresByDate",
  "description": "Box Scores by Date",
  "parameters": {
    "type": "object",
    "properties": {
      "format": {
        "default": "xml",
        "enum": [
          "xml",
          "json"
        ],
        "type": "string",
        "description": "Desired response format. Valid entries are <code>XML</code> or <code>JSON</code>."
      },
      "date": {
        "type": "string",
        "description": "The date of the game(s).\n<br>Examples: <code>2018-01-13</code>, <code>2018-06-13</code>."
      }
    },
    "required": [
      "format",
      "date"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://azure-api.sportsdata.io/v3/csgo/stats/{format}/BoxScores/{date}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**Game**",
              {
                "$ul": [
                  "**BestOf**",
                  "**DateTime**",
                  "**Day**",
                  "**DrawMoneyLine**",
                  "**GameId**",
                  "**Group**",
                  "**IsClosed**",
                  "**PointSpread**",
                  "**RoundId**",
                  "**Season**",
                  "**SeasonType**",
                  "**Status**",
                  "**TeamAId**",
                  "**TeamAKey**",
                  "**TeamAMoneyLine**",
                  "**TeamAName**",
                  "**TeamAPointSpreadPayout**",
                  "**TeamAScore**",
                  "**TeamBId**",
                  "**TeamBKey**",
                  "**TeamBMoneyLine**",
                  "**TeamBName**",
                  "**TeamBPointSpreadPayout**",
                  "**TeamBScore**",
                  "**Updated**",
                  "**UpdatedUtc**",
                  "**VenueId**",
                  "**VenueType**",
                  "**Week**",
                  "**Winner**"
                ]
              }
            ],
            "**Maps**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
