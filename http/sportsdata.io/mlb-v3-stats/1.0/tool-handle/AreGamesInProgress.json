    },
    "required": [
      "format"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://azure-api.sportsdata.io/v3/mlb/stats/{format}/AreAnyGamesInProgress"
    }
  },
  "responses": {
