            "**FanDuelPlayerID**",
            "**FantasyAlarmPlayerID**",
            "**FantasyDraftName**",
            "**FantasyDraftPlayerID**",
            "**FirstName**",
            "**GlobalTeamID**",
            "**Height**",
            "**HighSchool**",
            "**InjuryBodyPart**",
            "**InjuryNotes**",
            "**InjuryStartDate**",
            "**InjuryStatus**",
            "**Jersey**",
            "**LastName**",
