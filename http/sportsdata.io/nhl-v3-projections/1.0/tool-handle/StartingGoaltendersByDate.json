{
  "name": "StartingGoaltendersByDate",
  "description": "This endpoint provides the projected & confirmed starting goaltenders for NHL games on a given date.",
  "parameters": {
    "type": "object",
    "properties": {
      "format": {
        "default": "XML",
        "enum": [
          "XML",
          "JSON"
        ],
        "type": "string",
        "description": "Desired response format. Valid entries are <code>XML</code> or <code>JSON</code>."
      },
      "date": {
        "type": "string",
        "description": "The date of the game(s).\n<br>Examples: <code>2021-OCT-12</code>, <code>2021-DEC-09</code>."
      }
    },
    "required": [
      "format",
      "date"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://azure-api.sportsdata.io/v3/nhl/projections/{format}/StartingGoaltendersByDate/{date}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**AwayGoaltender**",
              {
                "$ul": [
                  "**Confirmed**",
                  "**FirstName**",
                  "**Jersey**",
                  "**LastName**",
                  "**PlayerID**",
                  "**Team**",
                  "**TeamID**"
                ]
              }
            ],
            "**AwayTeam**",
            "**AwayTeamID**",
            "**DateTime**",
            "**Day**",
            "**GameID**",
            [
              "**HomeGoaltender**",
              {
                "$ul": [
                  "**Confirmed**",
                  "**FirstName**",
                  "**Jersey**",
                  "**LastName**",
                  "**PlayerID**",
                  "**Team**",
                  "**TeamID**"
                ]
              }
            ],
            "**HomeTeam**",
            "**HomeTeamID**",
            "**Season**",
            "**SeasonType**",
            "**Status**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
