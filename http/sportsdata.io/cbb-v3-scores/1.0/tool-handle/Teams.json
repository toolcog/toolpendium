{
  "name": "Teams",
  "description": "Teams",
  "parameters": {
    "type": "object",
    "properties": {
      "format": {
        "default": "XML",
        "enum": [
          "XML",
          "JSON"
        ],
        "type": "string",
        "description": "Desired response format. Valid entries are <code>XML</code> or <code>JSON</code>."
      }
    },
    "required": [
      "format"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://azure-api.sportsdata.io/v3/cbb/scores/{format}/teams"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Active**",
            "**ApRank**",
            "**Conference**",
            "**ConferenceID**",
            "**ConferenceLosses**",
            "**ConferenceWins**",
            "**GlobalTeamID**",
            "**Key**",
            "**Losses**",
            "**Name**",
            "**School**",
            "**ShortDisplayName**",
            [
              "**Stadium**",
              {
                "$ul": [
                  "**Active**",
                  "**Address**",
                  "**Capacity**",
                  "**City**",
                  "**Country**",
                  "**GeoLat**",
                  "**GeoLong**",
                  "**Name**",
                  "**StadiumID**",
                  "**State**",
                  "**Zip**"
                ]
              }
            ],
            "**TeamID**",
            "**TeamLogoUrl**",
            "**Wins**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
