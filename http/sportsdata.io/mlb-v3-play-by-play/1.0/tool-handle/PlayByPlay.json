                  "**RunnerOnFirst**",
                  "**RunnerOnSecond**",
                  "**RunnerOnThird**",
                  "**SavingPitcher**",
                  "**SavingPitcherID**",
                  "**Season**",
                  "**SeasonType**",
                  [
                    "**SeriesInfo**",
                    {
                      "$ul": [
                        "**AwayTeamWins**",
                        "**GameNumber**",
                        "**HomeTeamWins**",
                        "**MaxLength**"
                      ]
                    }
                  ],
                  "**StadiumID**",
