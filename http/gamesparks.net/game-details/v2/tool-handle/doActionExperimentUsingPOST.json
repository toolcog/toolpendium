{
  "name": "doActionExperimentUsingPOST",
  "description": "doActionExperiment",
  "parameters": {
    "type": "object",
    "properties": {
      "apiKey": {
        "type": "string",
        "description": "apiKey"
      },
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "id"
      },
      "action": {
        "enum": [
          "start",
          "stop",
          "publish",
          "unpublish"
        ],
        "type": "string",
        "description": "action"
      }
    },
    "required": [
      "apiKey",
      "id",
      "action"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "//config2.gamesparks.net/restv2/game/{apiKey}/manage/experiments/{id}/{action}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**active**",
            "**changedFieldsAndInitialValues**",
            "**complete**",
            [
              "**config**",
              {
                "$ul": [
                  "**playerMongoQuery**",
                  "**playerQuery**",
                  "**variants**"
                ]
              }
            ],
            "**endDate**",
            "**id**",
            "**measurements**",
            "**measurementsEsQuery**",
            "**name**",
            "**percentHash**",
            "**publishedStages**",
            "**startDate**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
