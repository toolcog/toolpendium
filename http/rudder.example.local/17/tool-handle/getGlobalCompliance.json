{
  "name": "getGlobalCompliance",
  "description": "Get current global compliance of a Rudder server",
  "parameters": {
    "type": "object",
    "properties": {
      "precision": {
        "default": 2,
        "example": 0,
        "type": "integer",
        "description": "Number of digits after comma in compliance percent figures"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/compliance{?precision}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  [
                    "**globalCompliance**",
                    {
                      "$ul": [
                        "**compliance**: Global compliance level (`-1` when no policies are defined)",
                        [
                          "**complianceDetails**",
                          {
                            "$ul": [
                              "**error**",
                              "**noReport**",
                              "**successAlreadyOK**",
                              "**successNotApplicable**",
                              "**successRepaired**",
                              "**unexpectedMissingComponent**",
                              "**unexpectedUnknownComponent**"
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
