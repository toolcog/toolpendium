{
  "name": "getAllowedNetworks",
  "description": "Get the list of allowed networks for a policy server",
  "parameters": {
    "type": "object",
    "properties": {
      "nodeId": {
        "example": "9a1773c9-0889-40b6-be89-f6504443ac1b",
        "format": "uuid (or \"root\")",
        "type": "string",
        "description": "Policy server ID for which you want to manage allowed networks."
      }
    },
    "required": [
      "nodeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/settings/allowed_networks/{nodeId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**: Information about the allowed_networks settings",
              {
                "$ul": [
                  [
                    "**settings**",
                    {
                      "$ul": [
                        "**allowed_networks**: Array of allowed networks"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**id**: Target policy server ID",
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
