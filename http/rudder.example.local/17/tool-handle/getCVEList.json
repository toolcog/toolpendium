{
  "name": "getCVEList",
  "description": "Get CVE details, from a list passed as parameter",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "description": "List of CVE ids you want",
        "properties": {
          "cveIds": {
            "items": {
              "description": "CVE id",
              "example": "CVE-2019-5953",
              "type": "string"
            },
            "type": "array"
          },
          "maxScore": {
            "description": "Only send CVE with a score lower than the value",
            "example": 8.5,
            "format": "A score between 0 and 10 as a float",
            "type": "string"
          },
          "minScore": {
            "description": "Only send CVE with a score higher than the value",
            "example": 7.5,
            "format": "A score between 0 and 10 as a float",
            "type": "string"
          },
          "onlyScore": {
            "default": false,
            "description": "Only send score of the cve, and not the whole detailed list",
            "example": true,
            "type": "boolean"
          },
          "publishedDate": {
            "description": "Only send CVE with a publication date more recent than the value",
            "format": "date",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/cve/list"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  "**CVEs**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
