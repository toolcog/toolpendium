{
  "name": "setAllowedNetworks",
  "description": "Set the list of allowed networks for a policy server",
  "parameters": {
    "type": "object",
    "properties": {
      "nodeId": {
        "example": "9a1773c9-0889-40b6-be89-f6504443ac1b",
        "format": "uuid (or \"root\")",
        "type": "string",
        "description": "Policy server ID for which you want to manage allowed networks."
      },
      "body": {
        "properties": {
          "value": {
            "description": "New value of the allowed networks",
            "example": "enforce",
            "type": "object"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "nodeId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/settings/allowed_networks/{nodeId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**: Information about the allowed_networks settings",
              {
                "$ul": [
                  "**settings**: Array of allowed networks"
                ]
              }
            ],
            "**id**: The id of the modified node",
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
