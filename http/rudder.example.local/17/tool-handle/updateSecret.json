{
  "name": "updateSecret",
  "description": "Update a secret and override the value, the name cannot be overridden",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/secrets"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "secrets": {
        "properties": {
          "description": {
            "description": "The description of the secret to identify it more easily",
            "example": "Password of my super secret user account",
            "type": "string"
          },
          "name": {
            "description": "The name of the secret used as a reference on the value",
            "example": "secret-password",
            "type": "string"
          },
          "value": {
            "description": "The value of the secret it will not be exposed in the interface",
            "example": "nj-k;EO32!kFWewn2Nk,u",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/secret"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  "**secrets**: List of API version and status"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
