{
  "name": "deleteNode",
  "description": "Remove a node from the Rudder server. It won't be managed anymore.",
  "parameters": {
    "type": "object",
    "properties": {
      "nodeId": {
        "example": "9a1773c9-0889-40b6-be89-f6504443ac1b",
        "format": "uuid (or \"root\")",
        "type": "string",
        "description": "Id of the target node"
      },
      "mode": {
        "default": "move",
        "enum": [
          "move",
          "erase"
        ],
        "example": "move",
        "type": "string",
        "description": "Deletion mode to use, either move to trash ('move', default) or erase ('erase')"
      }
    },
    "required": [
      "nodeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "DELETE",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/nodes/{nodeId}{?mode}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**: Information about the node",
              {
                "$ul": [
                  "**nodes**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
