{
  "name": "allCampaigns",
  "description": "Get all campaigns details",
  "parameters": {
    "type": "object",
    "properties": {
      "campaignType": {
        "enum": [
          "system-update",
          "software-update"
        ],
        "example": "system-update",
        "type": "string",
        "description": "Type of the campaigns we want"
      },
      "status": {
        "enum": [
          "enabled",
          "disabled",
          "archived"
        ],
        "example": "enabled",
        "type": "string",
        "description": "Status of the campaigns we want"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/campaigns{?campaignType,status}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  "**campaigns**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
