{
  "name": "getCampaignEventResultForNode",
  "description": "Get detailed campaign event result for a Node",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": "0076a379-f32d-4732-9e91-33ab219d8fde",
        "format": "uuid",
        "type": "string",
        "description": "Id of the campaign event"
      },
      "nodeId": {
        "example": "9a1773c9-0889-40b6-be89-f6504443ac1b",
        "format": "uuid (or \"root\")",
        "type": "string",
        "description": "Id of the target node"
      }
    },
    "required": [
      "id",
      "nodeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/systemUpdate/events/{id}/result/{nodeId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  "**noderesult**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
