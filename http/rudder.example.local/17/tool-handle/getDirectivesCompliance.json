{
  "name": "getDirectivesCompliance",
  "description": "Get current compliance of all the nodes of a Rudder server",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/compliance/directives"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  [
                    "**directivesCompliance**",
                    {
                      "$ul": [
                        "**compliance**: Directive compliance level",
                        [
                          "**complianceDetails**",
                          {
                            "$ul": [
                              "**error**",
                              "**noReport**",
                              "**successAlreadyOK**",
                              "**successNotApplicable**",
                              "**successRepaired**",
                              "**unexpectedMissingComponent**",
                              "**unexpectedUnknownComponent**"
                            ]
                          }
                        ],
                        "**id**: id of the directive",
                        "**mode**",
                        "**name**: Name of the directive",
                        [
                          "**nodes**",
                          {
                            "$ul": [
                              "**compliance**: Directive compliance level",
                              [
                                "**complianceDetails**",
                                {
                                  "$ul": [
                                    "**error**",
                                    "**noReport**",
                                    "**successAlreadyOK**",
                                    "**successNotApplicable**",
                                    "**successRepaired**",
                                    "**unexpectedMissingComponent**",
                                    "**unexpectedUnknownComponent**"
                                  ]
                                }
                              ],
                              "**id**: id of the node",
                              "**name**: Name of the node",
                              [
                                "**rules**",
                                {
                                  "$ul": [
                                    "**compliance**: Rule compliance level",
                                    [
                                      "**complianceDetails**",
                                      {
                                        "$ul": [
                                          "**error**",
                                          "**noReport**",
                                          "**successAlreadyOK**",
                                          "**successNotApplicable**",
                                          "**successRepaired**",
                                          "**unexpectedMissingComponent**",
                                          "**unexpectedUnknownComponent**"
                                        ]
                                      }
                                    ],
                                    "**components**",
                                    "**id**: id of the rule",
                                    "**name**: Name of the rule"
                                  ]
                                }
                              ]
                            ]
                          }
                        ],
                        [
                          "**rules**",
                          {
                            "$ul": [
                              "**compliance**: Directive compliance level",
                              [
                                "**complianceDetails**",
                                {
                                  "$ul": [
                                    "**error**",
                                    "**noReport**",
                                    "**successAlreadyOK**",
                                    "**successNotApplicable**",
                                    "**successRepaired**",
                                    "**unexpectedMissingComponent**",
                                    "**unexpectedUnknownComponent**"
                                  ]
                                }
                              ],
                              "**components**",
                              "**id**: id of the rule",
                              "**mode**",
                              "**name**: Name of the rule"
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
