{
  "name": "getRulesCompliance",
  "description": "Get current compliance of all the rules of a Rudder server",
  "parameters": {
    "type": "object",
    "properties": {
      "level": {
        "default": 10,
        "example": 4,
        "type": "integer",
        "description": "Number of depth level of compliance objects to display (1:rules, 2:directives, 3:components, 4:nodes, 5:values, 6:reports)"
      },
      "precision": {
        "default": 2,
        "example": 0,
        "type": "integer",
        "description": "Number of digits after comma in compliance percent figures"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/compliance/rules{?level,precision}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  "**rules**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
