{
  "name": "modifySetting",
  "description": "Set the current value of a specific setting",
  "parameters": {
    "type": "object",
    "properties": {
      "settingId": {
        "example": "global_policy_mode",
        "type": "string",
        "description": "Id of the setting to set"
      },
      "body": {
        "properties": {
          "value": {
            "description": "New value of the setting",
            "example": "enforce",
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "settingId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/settings/{settingId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**: Information about the setting",
              {
                "$ul": [
                  "**settingId**: Id and value of the property"
                ]
              }
            ],
            "**id**: Id of the setting",
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
