{
  "name": "getNodeCompliance",
  "description": "Get current compliance of a node of a Rudder server",
  "parameters": {
    "type": "object",
    "properties": {
      "level": {
        "default": 10,
        "example": 4,
        "type": "integer",
        "description": "Number of depth level of compliance objects to display (1:rules, 2:directives, 3:components, 4:nodes, 5:values, 6:reports)"
      },
      "precision": {
        "default": 2,
        "example": 0,
        "type": "integer",
        "description": "Number of digits after comma in compliance percent figures"
      },
      "nodeId": {
        "example": "9a1773c9-0889-40b6-be89-f6504443ac1b",
        "format": "uuid (or \"root\")",
        "type": "string",
        "description": "Id of the target node"
      }
    },
    "required": [
      "nodeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/compliance/nodes/{nodeId}{?level,precision}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  "**nodes**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
