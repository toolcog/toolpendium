{
  "name": "restoreArchive",
  "description": "Restore an archive of the given kind for the given moment",
  "parameters": {
    "type": "object",
    "properties": {
      "archiveKind": {
        "enum": [
          "full",
          "groups",
          "rules",
          "directives",
          "parameters"
        ],
        "example": "full",
        "type": "string",
        "description": "Type of archive to make"
      },
      "archiveRestoreKind": {
        "description": "What archive to restore (latest archive, latest commit in configuration repository, or archive with ID as given by listArchive)",
        "enum": [
          "latestArchive",
          "latestCommit",
          "archive ID"
        ],
        "example": "latestCommit",
        "type": "string"
      }
    },
    "required": [
      "archiveKind",
      "archiveRestoreKind"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/system/archives/{archiveKind}/restore/{archiveRestoreKind}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The kind of the archive",
            [
              "**data**",
              {
                "$ul": [
                  "**directive**",
                  "**full**",
                  "**groups**",
                  "**parameters**",
                  "**rules**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
