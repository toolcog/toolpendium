{
  "name": "apiInformations",
  "description": "Get the description and the list of supported version for one API endpoint",
  "parameters": {
    "type": "object",
    "properties": {
      "endpointName": {
        "example": "listAcceptedNodes",
        "type": "string",
        "description": "Name of the endpoint for which one wants information"
      }
    },
    "required": [
      "endpointName"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/info/details/{endpointName}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  "**documentation**: Link to Rudder API description",
                  "**endpointName**: The endpoint name as key and the endpoint description as value",
                  "**endpoints**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
