{
  "name": "updateCVE",
  "description": "Update CVE database from remote source",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "description": "CVE update config",
        "properties": {
          "url": {
            "description": "Url used to update CVE, will default to one set in config",
            "example": "https://nvd.nist.gov/feeds/json/cve/1.1",
            "type": "string"
          },
          "years": {
            "items": {
              "description": "Year of the CVE archive to download",
              "example": "2019",
              "type": "string"
            },
            "type": "array"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/cve/update"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  "**CVEs**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
