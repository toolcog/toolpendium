{
  "name": "updateTechnique",
  "description": "Update technique created with technique editor",
  "parameters": {
    "type": "object",
    "properties": {
      "techniqueId": {
        "description": "Technique ID",
        "example": "userManagement",
        "type": "string"
      },
      "techniqueVersion": {
        "description": "Technique version",
        "example": "6.0",
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/techniques"
      }
    },
    "required": [
      "techniqueId",
      "techniqueVersion",
      "body"
    ],
    "$defs": {
      "techniques": {
        "items": {
          "$ref": "#/$defs/editor-technique"
        },
        "type": "array"
      },
      "editor-technique": {
        "properties": {
          "calls": {
            "description": "Method and blocks contained by this technique",
            "items": {
              "oneOf": [
                {
                  "$ref": "#/$defs/technique-method-call"
                },
                {
                  "$ref": "#/$defs/technique-block"
                }
              ]
            },
            "type": "array"
          },
          "category": {
            "description": "category of this technique",
            "example": "user_techniques",
            "type": "string"
          },
          "description": {
            "description": "description of this technique",
            "example": "This techniques apply generic security policies",
            "type": "string"
          },
          "id": {
            "description": "Technique id",
            "example": "security-policy",
            "type": "string"
          },
          "name": {
            "description": "Technique name",
            "example": "Security Policy",
            "type": "string"
          },
          "parameters": {
            "description": "Parameters for this technique",
            "items": {
              "$ref": "#/$defs/technique-parameter"
            },
            "type": "array"
          },
          "resources": {
            "description": "Resources for this technique",
            "items": {
              "$ref": "#/$defs/technique-resource"
            },
            "type": "array"
          },
          "source": {
            "description": "Source of the technique, always editor here",
            "example": "editor",
            "type": "string"
          },
          "version": {
            "description": "version of this technique",
            "example": "1.0",
            "type": "string"
          }
        },
        "type": "object"
      },
      "technique-method-call": {
        "properties": {
          "component": {
            "description": "Component is used in reporting to identify this method call. You can see it as a name",
            "example": "Install apache2",
            "type": "string"
          },
          "condition": {
            "description": "Condition to run this method.",
            "example": "linux.package_present_vim_repaired",
            "type": "string"
          },
          "disableReporting": {
            "description": "Should the reporting of this method be disabled",
            "example": true,
            "type": "boolean"
          },
          "id": {
            "description": "Method call id",
            "example": "6a8de98f-7829-4c1b-b4e7-b9387f27f279",
            "type": "string"
          },
          "method": {
            "description": "Id of the method called",
            "example": "package_present",
            "type": "string"
          },
          "parameters": {
            "description": "Parameters for this method call",
            "items": {
              "properties": {
                "name": {
                  "description": "Parameter name",
                  "example": "package",
                  "type": "string"
                },
                "value": {
                  "description": "Parameter value",
                  "example": "apache2",
                  "type": "string"
                }
              },
              "type": "object"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "technique-block": {
        "properties": {
          "calls": {
            "description": "Method and blocks contained by this block",
            "example": [],
            "items": {
              "oneOf": [
                {
                  "$ref": "#/$defs/technique-method-call"
                },
                {
                  "$ref": "#/$defs/technique-block"
                }
              ]
            },
            "type": "array"
          },
          "component": {
            "description": "Component is used in reporting to identify this method call. You can see it as a name",
            "example": "Install my app",
            "type": "string"
          },
          "condition": {
            "description": "Condition to run this method.",
            "example": "linux.package_present_vim_repaired",
            "type": "string"
          },
          "id": {
            "description": "Method call id",
            "example": "6a8de98f-7829-4c1b-b4e7-b9387f27f279",
            "type": "string"
          },
          "reportingLogic": {
            "properties": {
              "type": {
                "description": "Kind of reporting logic",
                "enum": [
                  "worst",
                  "focus",
                  "worst-case-weighted-one",
                  "worst-case-weighted-sum"
                ],
                "example": "worst",
                "type": "string"
              },
              "value": {
                "description": "reporting value used for some reporting logic (i.e. focus)",
                "example": "id/name of a component",
                "type": "string"
              }
            },
            "type": "object"
          }
        },
        "type": "object"
      },
      "technique-parameter": {
        "properties": {
          "description": {
            "description": "description of this parameter",
            "example": "Name of a package to install",
            "type": "string"
          },
          "id": {
            "description": "parameter id",
            "example": "6a8de98f-7829-4c1b-b4e7-b9387f27f279",
            "type": "string"
          },
          "mayBeEmpty": {
            "description": "May the value given when creating a directive be empty",
            "example": true,
            "type": "boolean"
          },
          "name": {
            "description": "Parameter name",
            "example": "Package to install",
            "type": "string"
          }
        },
        "type": "object"
      },
      "technique-resource": {
        "properties": {
          "name": {
            "description": "resource name. this is the relative path to the resource",
            "example": "conf/my/app/new",
            "type": "string"
          },
          "state": {
            "description": "State of the resource file. it can be a value between new, modified, deleted, untouched",
            "example": "modified",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/techniques/{techniqueId}/{techniqueVersion}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  [
                    "**techniques**",
                    {
                      "$ul": [
                        [
                          "**technique**",
                          {
                            "$ul": [
                              "**calls**: Method and blocks contained by this technique",
                              "**category**: category of this technique",
                              "**description**: description of this technique",
                              "**id**: Technique id",
                              "**name**: Technique name",
                              "**parameters**: Parameters for this technique",
                              "**resources**: Resources for this technique",
                              "**source**: Source of the technique, always editor here",
                              "**version**: version of this technique"
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
