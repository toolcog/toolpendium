{
  "name": "getNodesStatus",
  "description": "Get acceptation status (pending, accepted, deleted, unknown) of a list of nodes",
  "parameters": {
    "type": "object",
    "properties": {
      "ids": {
        "default": "default",
        "example": "8403353b-42c4-46f5-a08d-bc77a1a0bad9,root",
        "format": "comma-separated list",
        "type": "string",
        "description": "Comma separated list of node Ids"
      }
    },
    "required": [
      "ids"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/nodes/status{?ids}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**: List of nodeId and associated status",
              {
                "$ul": [
                  "**nodes**: List of nodeId and associated status"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
