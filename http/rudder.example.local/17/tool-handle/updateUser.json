{
  "name": "updateUser",
  "description": "Rename, change password (pre-hashed or not) and change permission of an user. If a parameter is empty, it will be ignored.",
  "parameters": {
    "type": "object",
    "properties": {
      "username": {
        "example": "JaneDoe",
        "type": "string",
        "description": "Username of an user (unique)"
      },
      "body": {
        "$ref": "#/$defs/users"
      }
    },
    "required": [
      "username",
      "body"
    ],
    "$defs": {
      "users": {
        "properties": {
          "isPreHahed": {
            "description": "If you want to provide hashed password set this property to `true` otherwise we will hash the plain password and store the hash",
            "enum": [
              false,
              true
            ],
            "type": "boolean"
          },
          "password": {
            "description": "this password will be hashed for you if the `isPreHashed` is set on false",
            "example": "passwdWillBeStoredHashed",
            "type": "string"
          },
          "role": {
            "description": "Defined user's permissions",
            "items": {
              "example": "user",
              "type": "string"
            },
            "type": "array"
          },
          "username": {
            "example": "John Doe",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/usermanagement/update/{username}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**",
              {
                "$ul": [
                  [
                    "**updatedUser**",
                    {
                      "$ul": [
                        "**password**: New password given",
                        "**role**: defined user's permissions",
                        "**username**: New Username"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
