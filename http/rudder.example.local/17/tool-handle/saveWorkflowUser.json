{
  "name": "saveWorkflowUser",
  "description": "Add and remove user from validated users",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "properties": {
          "validatedUsers": {
            "description": "list of user to put in validated list",
            "items": {
              "example": "John Do",
              "type": "string"
            },
            "type": "array"
          }
        },
        "required": [
          "validatedUsers"
        ],
        "type": "object"
      }
    },
    "required": [
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/validatedUsers"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**: list of users with their workflow settings",
              {
                "$ul": [
                  "**isValidated**: whether the user's actions generate chanque-request or not",
                  "**userExists**: whether the user exists in file or not",
                  "**username**"
                ]
              }
            ],
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
