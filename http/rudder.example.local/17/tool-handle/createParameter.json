{
  "name": "createParameter",
  "description": "Create a new global parameter",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/parameter"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "parameter": {
        "properties": {
          "description": {
            "description": "Description of the parameter",
            "example": "Default inform message put in footer of managed files by Rudder",
            "type": "string"
          },
          "id": {
            "description": "Name of the parameter",
            "example": "rudder_file_edit_footer",
            "type": "string"
          },
          "overridable": {
            "description": "Is the global parameter overridable by node",
            "example": false,
            "type": "boolean"
          },
          "value": {
            "description": "Value of the parameter",
            "example": "### End of file managed by Rudder ###",
            "format": "string or JSON"
          }
        },
        "required": [
          "id"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/parameters"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**action**: The id of the action",
            [
              "**data**: Parameters",
              {
                "$ul": [
                  "**parameters**"
                ]
              }
            ],
            "**id**: Id of the parameter",
            "**result**: Result of the request"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
