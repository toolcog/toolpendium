{
  "name": "applyPolicy",
  "description": "This API allows to trigger an agent run on the target node. Response is a stream of the actual agent run on the node.",
  "parameters": {
    "type": "object",
    "properties": {
      "nodeId": {
        "example": "9a1773c9-0889-40b6-be89-f6504443ac1b",
        "format": "uuid (or \"root\")",
        "type": "string",
        "description": "Id of the target node"
      }
    },
    "required": [
      "nodeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/nodes/{nodeId}/applyPolicy"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
