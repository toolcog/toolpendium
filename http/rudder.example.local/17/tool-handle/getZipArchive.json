{
  "name": "getZipArchive",
  "description": "Get an archive of the given kind as a zip",
  "parameters": {
    "type": "object",
    "properties": {
      "archiveKind": {
        "enum": [
          "full",
          "groups",
          "rules",
          "directives",
          "parameters"
        ],
        "example": "full",
        "type": "string",
        "description": "Type of archive to make"
      },
      "commitId": {
        "type": "string",
        "description": "commit ID of the archive to get as a ZIP file"
      }
    },
    "required": [
      "archiveKind",
      "commitId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://rudder.example.local/rudder/api/latest/system/archives/{archiveKind}/zip/{commitId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
