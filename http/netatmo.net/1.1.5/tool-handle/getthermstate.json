{
  "name": "getthermstate",
  "description": "The method getthermstate returns the last Thermostat measurements, its current weekly schedule, and, if present, its current manual temperature setpoint.",
  "parameters": {
    "type": "object",
    "properties": {
      "device_id": {
        "type": "string",
        "description": "The relay id"
      },
      "module_id": {
        "type": "string",
        "description": "The thermostat id"
      }
    },
    "required": [
      "device_id",
      "module_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.netatmo.net/api/getthermstate{?device_id,module_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**body**",
              {
                "$ul": [
                  "**battery_percent**: It contains the current battery level in percentage.",
                  "**battery_vp**",
                  "**last_plug_seen**",
                  "**last_therm_seen**",
                  [
                    "**measured**",
                    {
                      "$ul": [
                        "**setpoint_temp**",
                        "**temperature**",
                        "**time**"
                      ]
                    }
                  ],
                  "**plug_connected_boiler**",
                  "**rf_status**",
                  [
                    "**setpoint**",
                    {
                      "$ul": [
                        "**setpoint_endtime**",
                        "**setpoint_mode**",
                        "**setpoint_temp**"
                      ]
                    }
                  ],
                  [
                    "**setpoint_order**",
                    {
                      "$ul": [
                        "**setpoint_endtime**",
                        "**setpoint_mode**",
                        "**setpoint_temp**"
                      ]
                    }
                  ],
                  "**therm_orientation**",
                  [
                    "**therm_program**",
                    {
                      "$ul": [
                        "**name**",
                        "**program_id**",
                        "**selected**",
                        "**timetable**",
                        "**zones**"
                      ]
                    }
                  ],
                  "**therm_program_backup**",
                  [
                    "**therm_program_order**",
                    {
                      "$ul": [
                        "**name**",
                        "**program_id**",
                        "**selected**",
                        "**timetable**",
                        "**zones**"
                      ]
                    }
                  ],
                  "**therm_relay_cmd**",
                  "**udp_conn**",
                  "**wifi_status**"
                ]
              }
            ],
            "**status**",
            "**time_exec**",
            "**time_server**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
