{
  "name": "gethomedata",
  "description": "Returns information about users homes and cameras.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "home_id": {
        "type": "string",
        "description": "Specify if you're looking for the events of a specific Home."
      },
      "size": {
        "type": "integer",
        "description": "Number of events to retrieve. Default is `30`."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.netatmo.net/api/gethomedata{?home_id,size}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**body**",
              {
                "$ul": [
                  [
                    "**global_info**",
                    {
                      "$ul": [
                        "**show_tags**: show tags"
                      ]
                    }
                  ],
                  "**homes**",
                  [
                    "**user**",
                    {
                      "$ul": [
                        "**lang**: user locale",
                        "**reg_locale**: user regional preferences (used for displaying date)"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**status**",
            "**time_exec**",
            "**time_server**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
