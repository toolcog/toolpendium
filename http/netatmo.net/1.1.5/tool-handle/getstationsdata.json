{
  "name": "getstationsdata",
  "description": "The method getstationsdata Returns data from a user's Weather Stations (measures and device specific data).",
  "parameters": {
    "type": "object",
    "properties": {
      "device_id": {
        "type": "string",
        "description": "Id of the device you want to retrieve information of"
      },
      "get_favorites": {
        "default": false,
        "type": "boolean",
        "description": "Whether to include the user's favorite Weather Stations in addition to the user's own Weather Stations"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.netatmo.net/api/getstationsdata{?device_id,get_favorites}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**body**",
              {
                "$ul": [
                  "**devices**",
                  [
                    "**user**",
                    {
                      "$ul": [
                        "**_id**",
                        [
                          "**administrative**",
                          {
                            "$ul": [
                              "**country**: user country",
                              "**feel_like_algo**: algorithm used to compute feel like temperature, 0 -> humidex, 1 -> heat-index",
                              "**lang**: user locale",
                              "**pressureunit**: 0 -> mbar, 1 -> inHg, 2 -> mmHg",
                              "**reg_locale**: user regional preferences (used for displaying date)",
                              "**unit**: 0 -> metric system, 1 -> imperial system",
                              "**windunit**: 0 -> kph, 1 -> mph, 2 -> ms, 3 -> beaufort, 4 -> knot"
                            ]
                          }
                        ],
                        [
                          "**date_creation**",
                          {
                            "$ul": [
                              "**sec**",
                              "**usec**"
                            ]
                          }
                        ],
                        "**devices**: An array of string containing the ids of the devices owned by the user",
                        "**friend_devices**: An array of string containing the ids of the devices on which the user has a \"guest\" access",
                        "**mail**",
                        "**timeline_not_read**",
                        "**timeline_size**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**status**",
            "**time_exec**",
            "**time_server**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
