{
  "name": "private_article_private_link_create",
  "description": "Create new private link for this article",
  "parameters": {
    "type": "object",
    "properties": {
      "article_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Article unique identifier"
      },
      "body": {
        "$ref": "#/$defs/PrivateLinkCreator"
      }
    },
    "required": [
      "article_id"
    ],
    "$defs": {
      "PrivateLinkCreator": {
        "properties": {
          "expires_date": {
            "description": "Date when this private link should expire - optional. By default private links expire in 365 days.",
            "example": "2018-02-22 22:22:22",
            "type": "string"
          },
          "read_only": {
            "description": "Optional, default true. Set to false to give private link users editing rights for this collection.",
            "example": true,
            "type": "boolean"
          }
        },
        "type": "object",
        "x-tag": "articles"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/articles/{article_id}/private_links"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**html_location**: HTML url for private link",
            "**location**: Url for private link",
            "**token**: Token for private link"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
