{
  "name": "collection_details",
  "description": "View a collection",
  "parameters": {
    "type": "object",
    "properties": {
      "collection_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Collection Unique identifier"
      }
    },
    "required": [
      "collection_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.figshare.com/v2/collections/{collection_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**doi**: Collection DOI",
            "**handle**: Collection Handle",
            "**id**: Collection id",
            "**published_date**: Date when collection was published ",
            [
              "**timeline**",
              {
                "$ul": [
                  "**firstOnline**: Online posted date",
                  "**publisherAcceptance**: Date when the item was accepted for publication",
                  "**publisherPublication**: Publish date"
                ]
              }
            ],
            "**title**: Collection title",
            "**url**: Api endpoint"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
