{
  "name": "private_project_notes_list",
  "description": "List project notes",
  "parameters": {
    "type": "object",
    "properties": {
      "page": {
        "format": "int64",
        "maximum": 5000,
        "minimum": 1,
        "type": "integer",
        "description": "Page number. Used for pagination with page_size"
      },
      "page_size": {
        "default": 10,
        "format": "int64",
        "maximum": 1000,
        "minimum": 1,
        "type": "integer",
        "description": "The number of results included on a page. Used for pagination with page"
      },
      "limit": {
        "format": "int64",
        "maximum": 1000,
        "minimum": 1,
        "type": "integer",
        "description": "Number of results included on a page. Used for pagination with query"
      },
      "offset": {
        "format": "int64",
        "maximum": 5000,
        "minimum": 0,
        "type": "integer",
        "description": "Where to start the listing(the offset of the first result). Used for pagination with limit"
      },
      "project_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Project unique identifier"
      }
    },
    "required": [
      "project_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/projects/{project_id}/notes{?page,page_size,limit,offset}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**abstract**: Note Abstract - short/truncated content",
            "**created_date**: Date when note was created",
            "**id**: Project note id",
            "**modified_date**: Date when note was last modified",
            "**user_id**: User who wrote the note",
            "**user_name**: Username of the one who wrote the note"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
