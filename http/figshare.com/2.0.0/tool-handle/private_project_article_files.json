{
  "name": "private_project_article_files",
  "description": "List article files",
  "parameters": {
    "type": "object",
    "properties": {
      "project_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Project unique identifier"
      },
      "article_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Project Article unique identifier"
      }
    },
    "required": [
      "project_id",
      "article_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/projects/{project_id}/articles/{article_id}/files"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**computed_md5**: File computed md5",
            "**download_url**: Url for file download",
            "**id**: File id",
            "**is_link_only**: True if file is hosted somewhere else",
            "**name**: File name",
            "**size**: File size",
            "**supplied_md5**: File supplied md5"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
