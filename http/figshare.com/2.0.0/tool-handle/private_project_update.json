{
  "name": "private_project_update",
  "description": "Updating an project by passing body parameters; request can also be made with the PATCH method.",
  "parameters": {
    "type": "object",
    "properties": {
      "project_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Project unique identifier"
      },
      "body": {
        "$ref": "#/components/schemas/ProjectUpdate",
        "description": "Project description"
      }
    },
    "required": [
      "project_id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/projects/{project_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
