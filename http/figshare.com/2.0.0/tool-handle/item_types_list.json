{
  "name": "item_types_list",
  "description": "Returns the list of Item Types of the requested group. If no user is authenticated, returns the item types available for Figshare.",
  "parameters": {
    "type": "object",
    "properties": {
      "group_id": {
        "default": 0,
        "format": "int64",
        "minimum": 0,
        "type": "integer",
        "description": "Identifier of the group for which the item types are requested"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.figshare.com/v2/item_types{?group_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**icon**: The string identifying the icon of the item type.",
            "**id**: The ID of the item type.",
            "**is_selectable**: The selectable status",
            "**name**: The name of the item type",
            "**public_description**: The description of the item type.",
            "**string_id**: The string identifier of the item type.",
            "**url_name**: The URL name of the item type."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
