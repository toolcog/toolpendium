{
  "name": "articles_search",
  "description": "Returns a list of public articles, filtered by the search parameters",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Cursor": {
        "format": "uuid",
        "type": "string",
        "description": "Unique hash used for bypassing the item retrieval limit of 9,000 entities. When using this parameter, please note that the offset parameter will not be available, but the limit parameter will still work as expected."
      },
      "body": {
        "$ref": "#/components/schemas/ArticleSearch",
        "description": "Search Parameters"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.figshare.com/v2/articles/search"
    },
    "headers": {
      "X-Cursor": {
        "$": "X-Cursor"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**defined_type**: Type of article identifier",
            "**defined_type_name**: Name of the article type identifier",
            "**doi**: DOI",
            "**group_id**: Group ID",
            "**handle**: Handle",
            "**id**: Unique identifier for article",
            "**published_date**: Posted date",
            "**thumb**: Thumbnail image",
            [
              "**timeline**",
              {
                "$ul": [
                  "**firstOnline**: Online posted date",
                  "**publisherAcceptance**: Date when the item was accepted for publication",
                  "**publisherPublication**: Publish date"
                ]
              }
            ],
            "**title**: Title of article",
            "**url**: Api endpoint for article",
            "**url_private_api**: Private Api endpoint for article",
            "**url_private_html**: Private site endpoint for article",
            "**url_public_api**: Public Api endpoint for article",
            "**url_public_html**: Public site endpoint for article"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.title"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
