{
  "name": "private_project_note",
  "description": "Project note details",
  "parameters": {
    "type": "object",
    "properties": {
      "project_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Project unique identifier"
      },
      "note_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Note unique identifier"
      }
    },
    "required": [
      "project_id",
      "note_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/projects/{project_id}/notes/{note_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**abstract**: Note Abstract - short/truncated content",
            "**created_date**: Date when note was created",
            "**id**: Project note id",
            "**modified_date**: Date when note was last modified",
            "**user_id**: User who wrote the note",
            "**user_name**: Username of the one who wrote the note"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
