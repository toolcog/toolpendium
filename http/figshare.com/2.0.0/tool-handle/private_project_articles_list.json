{
  "name": "private_project_articles_list",
  "description": "List project articles",
  "parameters": {
    "type": "object",
    "properties": {
      "project_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Project unique identifier"
      },
      "page": {
        "format": "int64",
        "maximum": 5000,
        "minimum": 1,
        "type": "integer",
        "description": "Page number. Used for pagination with page_size"
      },
      "page_size": {
        "default": 10,
        "format": "int64",
        "maximum": 1000,
        "minimum": 1,
        "type": "integer",
        "description": "The number of results included on a page. Used for pagination with page"
      },
      "limit": {
        "format": "int64",
        "maximum": 1000,
        "minimum": 1,
        "type": "integer",
        "description": "Number of results included on a page. Used for pagination with query"
      },
      "offset": {
        "format": "int64",
        "maximum": 5000,
        "minimum": 0,
        "type": "integer",
        "description": "Where to start the listing(the offset of the first result). Used for pagination with limit"
      }
    },
    "required": [
      "project_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/projects/{project_id}/articles{?page,page_size,limit,offset}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**defined_type**: Type of article identifier",
            "**defined_type_name**: Name of the article type identifier",
            "**doi**: DOI",
            "**group_id**: Group ID",
            "**handle**: Handle",
            "**id**: Unique identifier for article",
            "**published_date**: Posted date",
            "**thumb**: Thumbnail image",
            [
              "**timeline**",
              {
                "$ul": [
                  "**firstOnline**: Online posted date",
                  "**publisherAcceptance**: Date when the item was accepted for publication",
                  "**publisherPublication**: Publish date"
                ]
              }
            ],
            "**title**: Title of article",
            "**url**: Api endpoint for article",
            "**url_private_api**: Private Api endpoint for article",
            "**url_private_html**: Private site endpoint for article",
            "**url_public_api**: Public Api endpoint for article",
            "**url_public_html**: Public site endpoint for article"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.title"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
