{
  "name": "private_project_articles_create",
  "description": "Create a new Article and associate it with this project",
  "parameters": {
    "type": "object",
    "properties": {
      "project_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Project unique identifier"
      },
      "page": {
        "format": "int64",
        "maximum": 5000,
        "minimum": 1,
        "type": "integer",
        "description": "Page number. Used for pagination with page_size"
      },
      "page_size": {
        "default": 10,
        "format": "int64",
        "maximum": 1000,
        "minimum": 1,
        "type": "integer",
        "description": "The number of results included on a page. Used for pagination with page"
      },
      "limit": {
        "format": "int64",
        "maximum": 1000,
        "minimum": 1,
        "type": "integer",
        "description": "Number of results included on a page. Used for pagination with query"
      },
      "offset": {
        "format": "int64",
        "maximum": 5000,
        "minimum": 0,
        "type": "integer",
        "description": "Where to start the listing(the offset of the first result). Used for pagination with limit"
      },
      "body": {
        "$ref": "#/components/schemas/ArticleProjectCreate",
        "description": "Article description"
      }
    },
    "required": [
      "project_id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/projects/{project_id}/articles{?page,page_size,limit,offset}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**entity_id**: Figshare ID of the entity",
            "**location**: Url for entity",
            "**warnings**: Issues encountered during the operation"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
