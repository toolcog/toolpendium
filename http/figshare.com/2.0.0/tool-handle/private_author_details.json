{
  "name": "private_author_details",
  "description": "View author details",
  "parameters": {
    "type": "object",
    "properties": {
      "author_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Author unique identifier"
      }
    },
    "required": [
      "author_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/authors/{author_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**full_name**: Author full name",
            "**id**: Author id",
            "**is_active**: True if author has published items",
            "**orcid_id**: Author Orcid",
            "**url_name**: Author url name"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
