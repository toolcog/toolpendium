{
  "name": "article_version_update_thumb",
  "description": "For a given public article version update the article thumbnail by choosing one of the associated files",
  "parameters": {
    "type": "object",
    "properties": {
      "article_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Article unique identifier"
      },
      "version_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Article version identifier"
      },
      "body": {
        "$ref": "#/components/schemas/FileId",
        "description": "File ID"
      }
    },
    "required": [
      "article_id",
      "version_id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/articles/{article_id}/versions/{version_id}/update_thumb"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
