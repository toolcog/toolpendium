{
  "name": "private_collection_articles_replace",
  "description": "Associate new articles with the collection. This will remove all already associated articles and add these new ones",
  "parameters": {
    "type": "object",
    "properties": {
      "collection_id": {
        "format": "int64",
        "minimum": 1,
        "type": "integer",
        "description": "Collection unique identifier"
      },
      "body": {
        "$ref": "#/components/schemas/ArticlesCreator",
        "description": "Articles List"
      }
    },
    "required": [
      "collection_id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.figshare.com/v2/account/collections/{collection_id}/articles"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A machine friendly error code, used by the dev team to identify the error.",
            "**message**: A human friendly message explaining the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
