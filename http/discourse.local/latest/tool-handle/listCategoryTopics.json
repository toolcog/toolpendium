{
  "name": "listCategoryTopics",
  "description": "List topics",
  "parameters": {
    "type": "object",
    "properties": {
      "slug": {
        "type": "string"
      },
      "id": {
        "type": "integer"
      }
    },
    "required": [
      "slug",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://discourse.local/c/{slug}/{id}.json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**primary_groups**",
            [
              "**topic_list**",
              {
                "$ul": [
                  "**can_create_topic**",
                  "**per_page**",
                  "**top_tags**",
                  "**topics**"
                ]
              }
            ],
            "**users**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
