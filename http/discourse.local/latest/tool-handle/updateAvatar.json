{
  "name": "updateAvatar",
  "description": "Update avatar",
  "parameters": {
    "type": "object",
    "properties": {
      "username": {
        "type": "string"
      },
      "body": {
        "additionalProperties": false,
        "properties": {
          "type": {
            "enum": [
              "uploaded",
              "custom",
              "gravatar",
              "system"
            ],
            "type": "string"
          },
          "upload_id": {
            "type": "integer"
          }
        },
        "required": [
          "upload_id",
          "type"
        ]
      }
    },
    "required": [
      "username"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "http://discourse.local/u/{username}/preferences/avatar/pick.json"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
