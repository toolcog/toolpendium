{
  "name": "getTag",
  "description": "Get a specific tag",
  "parameters": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      }
    },
    "required": [
      "name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://discourse.local/tag/{name}.json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**primary_groups**",
            [
              "**topic_list**",
              {
                "$ul": [
                  "**can_create_topic**",
                  "**draft**",
                  "**draft_key**",
                  "**draft_sequence**",
                  "**per_page**",
                  "**tags**",
                  "**topics**"
                ]
              }
            ],
            "**users**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
