{
  "name": "silenceUser",
  "description": "Silence a user",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "body": {
        "additionalProperties": false,
        "properties": {
          "message": {
            "description": "Will send an email with this message when present",
            "type": "string"
          },
          "post_action": {
            "examples": [
              "delete"
            ],
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "silenced_till": {
            "examples": [
              "2022-06-01T08:00:00.000Z"
            ],
            "type": "string"
          }
        }
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "http://discourse.local/admin/users/{id}/silence.json"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**silence**",
              {
                "$ul": [
                  "**silence_reason**",
                  "**silenced**",
                  "**silenced_at**",
                  [
                    "**silenced_by**",
                    {
                      "$ul": [
                        "**avatar_template**",
                        "**id**",
                        "**name**",
                        "**username**"
                      ]
                    }
                  ],
                  "**silenced_till**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
