{
  "name": "createTopicTimer",
  "description": "Create topic timer",
  "parameters": {
    "type": "object",
    "properties": {
      "Api-Key": {
        "type": "string"
      },
      "Api-Username": {
        "type": "string"
      },
      "id": {
        "type": "string"
      },
      "body": {
        "properties": {
          "based_on_last_post": {
            "type": "boolean"
          },
          "category_id": {
            "type": "integer"
          },
          "status_type": {
            "type": "string"
          },
          "time": {
            "examples": [
              ""
            ],
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "Api-Key",
      "Api-Username",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://discourse.local/t/{id}/timer.json"
    },
    "headers": {
      "Api-Key": {
        "$": "Api-Key"
      },
      "Api-Username": {
        "$": "Api-Username"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**based_on_last_post**",
            "**category_id**",
            "**closed**",
            "**duration**",
            "**execute_at**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
