{
  "name": "updateUser",
  "description": "Update a user",
  "parameters": {
    "type": "object",
    "properties": {
      "Api-Key": {
        "type": "string"
      },
      "Api-Username": {
        "type": "string"
      },
      "username": {
        "type": "string"
      },
      "body": {
        "additionalProperties": false,
        "properties": {
          "email": {
            "type": "string"
          },
          "external_ids": {
            "type": "object"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    },
    "required": [
      "Api-Key",
      "Api-Username",
      "username"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "http://discourse.local/u/{username}.json"
    },
    "headers": {
      "Api-Key": {
        "$": "Api-Key"
      },
      "Api-Username": {
        "$": "Api-Username"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**success**",
            "**user**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
