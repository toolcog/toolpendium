{
  "name": "updatePost",
  "description": "Update a single post",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "body": {
        "additionalProperties": false,
        "properties": {
          "post": {
            "additionalProperties": false,
            "properties": {
              "edit_reason": {
                "type": "string"
              },
              "raw": {
                "type": "string"
              }
            },
            "required": [
              "raw"
            ],
            "type": "object"
          }
        }
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "http://discourse.local/posts/{id}.json"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**post**",
              {
                "$ul": [
                  "**actions_summary**",
                  "**admin**",
                  "**avatar_template**",
                  "**bookmarked**",
                  "**can_delete**",
                  "**can_edit**",
                  "**can_recover**",
                  "**can_view_edit_history**",
                  "**can_wiki**",
                  "**cooked**",
                  "**created_at**",
                  "**deleted_at**",
                  "**display_username**",
                  "**draft_sequence**",
                  "**edit_reason**",
                  "**flair_bg_color**",
                  "**flair_color**",
                  "**flair_name**",
                  "**flair_url**",
                  "**hidden**",
                  "**id**",
                  "**incoming_link_count**",
                  "**mentioned_users**",
                  "**moderator**",
                  "**name**",
                  "**post_number**",
                  "**post_type**",
                  "**primary_group_name**",
                  "**quote_count**",
                  "**raw**",
                  "**readers_count**",
                  "**reads**",
                  "**reply_count**",
                  "**reply_to_post_number**",
                  "**reviewable_id**",
                  "**reviewable_score_count**",
                  "**reviewable_score_pending_count**",
                  "**score**",
                  "**staff**",
                  "**topic_id**",
                  "**topic_slug**",
                  "**trust_level**",
                  "**updated_at**",
                  "**user_deleted**",
                  "**user_id**",
                  "**user_title**",
                  "**username**",
                  "**version**",
                  "**wiki**",
                  "**yours**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
