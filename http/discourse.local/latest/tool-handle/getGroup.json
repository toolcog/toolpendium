                  "**default_notification_level**",
                  "**email_from_alias**",
                  "**email_password**",
                  "**email_username**",
                  "**flair_bg_color**",
                  "**flair_color**",
                  "**flair_url**",
                  "**full_name**",
                  "**grant_trust_level**",
                  "**has_messages**",
                  "**id**",
                  "**imap_enabled**",
                  "**imap_last_error**",
