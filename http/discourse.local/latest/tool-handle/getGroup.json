                  "**tracking_tags**",
                  "**user_count**",
                  "**visibility_level**",
                  "**watching_category_ids**",
                  "**watching_first_post_category_ids**",
                  "**watching_first_post_tags**",
                  "**watching_tags**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
