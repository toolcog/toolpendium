              "**extras**",
              {
                "$ul": [
                  "**visible_group_names**"
                ]
              }
            ],
            [
              "**group**",
              {
                "$ul": [
                  "**allow_membership_requests**",
                  "**allow_unknown_sender_topic_replies**",
                  "**associated_group_ids**",
                  "**automatic**",
                  "**automatic_membership_email_domains**",
                  "**bio_cooked**",
                  "**bio_excerpt**",
                  "**bio_raw**",
                  "**can_admin_group**",
                  "**can_edit_group**",
