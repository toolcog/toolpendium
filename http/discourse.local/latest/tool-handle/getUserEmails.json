{
  "name": "getUserEmails",
  "description": "Get email addresses belonging to a user",
  "parameters": {
    "type": "object",
    "properties": {
      "username": {
        "type": "string"
      }
    },
    "required": [
      "username"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://discourse.local/u/{username}/emails.json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**associated_accounts**",
            "**email**",
            "**secondary_emails**",
            "**unconfirmed_emails**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
