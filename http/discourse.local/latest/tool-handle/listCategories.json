{
  "name": "listCategories",
  "description": "Retrieves a list of categories",
  "parameters": {
    "type": "object",
    "properties": {
      "include_subcategories": {
        "enum": [
          true
        ],
        "type": "boolean"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://discourse.local/categories.json{?include_subcategories}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**category_list**",
              {
                "$ul": [
                  "**can_create_category**",
                  "**can_create_topic**",
                  "**categories**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
