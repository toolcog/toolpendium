{
  "name": "updateTopicStatus",
  "description": "Update the status of a topic",
  "parameters": {
    "type": "object",
    "properties": {
      "Api-Key": {
        "type": "string"
      },
      "Api-Username": {
        "type": "string"
      },
      "id": {
        "type": "string"
      },
      "body": {
        "properties": {
          "enabled": {
            "enum": [
              "true",
              "false"
            ],
            "type": "string"
          },
          "status": {
            "enum": [
              "closed",
              "pinned",
              "pinned_globally",
              "archived",
              "visible"
            ],
            "type": "string"
          },
          "until": {
            "description": "Only required for `pinned` and `pinned_globally`",
            "examples": [
              "2030-12-31"
            ],
            "type": "string"
          }
        },
        "required": [
          "status",
          "enabled"
        ],
        "type": "object"
      }
    },
    "required": [
      "Api-Key",
      "Api-Username",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "http://discourse.local/t/{id}/status.json"
    },
    "headers": {
      "Api-Key": {
        "$": "Api-Key"
      },
      "Api-Username": {
        "$": "Api-Username"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**success**",
            "**topic_status_update**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
