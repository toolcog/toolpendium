{
  "name": "postReplies",
  "description": "List replies to a post",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://discourse.local/posts/{id}/replies.json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**actions_summary**",
            "**admin**",
            "**avatar_template**",
            "**bookmarked**",
            "**can_delete**",
            "**can_edit**",
            "**can_recover**",
            "**can_view_edit_history**",
            "**can_wiki**",
            "**cooked**",
            "**created_at**",
            "**deleted_at**",
            "**display_username**",
            "**edit_reason**",
            "**flair_bg_color**",
            "**flair_color**",
            "**flair_name**",
            "**flair_url**",
            "**hidden**",
            "**id**",
            "**incoming_link_count**",
            "**moderator**",
            "**name**",
            "**post_number**",
            "**post_type**",
            "**primary_group_name**",
            "**quote_count**",
            "**readers_count**",
            "**reads**",
            "**reply_count**",
            "**reply_to_post_number**",
            [
              "**reply_to_user**",
              {
                "$ul": [
                  "**avatar_template**",
                  "**name**",
                  "**username**"
                ]
              }
            ],
            "**reviewable_id**",
            "**reviewable_score_count**",
            "**reviewable_score_pending_count**",
            "**score**",
            "**staff**",
            "**topic_id**",
            "**topic_slug**",
            "**trust_level**",
            "**updated_at**",
            "**user_deleted**",
            "**user_id**",
            "**user_title**",
            "**username**",
            "**version**",
            "**wiki**",
            "**yours**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
