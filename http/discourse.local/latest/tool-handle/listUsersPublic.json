{
  "name": "listUsersPublic",
  "description": "Get a public list of users",
  "parameters": {
    "type": "object",
    "properties": {
      "period": {
        "enum": [
          "daily",
          "weekly",
          "monthly",
          "quarterly",
          "yearly",
          "all"
        ],
        "type": "string"
      },
      "order": {
        "enum": [
          "likes_received",
          "likes_given",
          "topic_count",
          "post_count",
          "topics_entered",
          "posts_read",
          "days_visited"
        ],
        "type": "string"
      },
      "asc": {
        "enum": [
          "true"
        ],
        "type": "string"
      },
      "page": {
        "type": "integer"
      }
    },
    "required": [
      "period",
      "order"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://discourse.local/directory_items.json{?period,order,asc,page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**directory_items**",
            [
              "**meta**",
              {
                "$ul": [
                  "**last_updated_at**",
                  "**load_more_directory_items**",
                  "**total_rows_directory_items**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
