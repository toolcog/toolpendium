{
  "name": "createInvite",
  "description": "Create an invite",
  "parameters": {
    "type": "object",
    "properties": {
      "Api-Key": {
        "type": "string"
      },
      "Api-Username": {
        "type": "string"
      },
      "body": {
        "properties": {
          "custom_message": {
            "description": "optional, for email invites",
            "type": "string"
          },
          "email": {
            "description": "required for email invites only",
            "examples": [
              "not-a-user-yet@example.com"
            ],
            "type": "string"
          },
          "expires_at": {
            "description": "optional, if not supplied, the invite_expiry_days site\nsetting is used",
            "type": "string"
          },
          "group_id": {
            "description": "optional, either this or `group_names`",
            "type": "integer"
          },
          "group_names": {
            "description": "optional, either this or `group_id`",
            "type": "string"
          },
          "max_redemptions_allowed": {
            "default": 1,
            "description": "optional, for link invites",
            "examples": [
              5
            ],
            "type": "integer"
          },
          "skip_email": {
            "default": false,
            "type": "boolean"
          },
          "topic_id": {
            "type": "integer"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "Api-Key",
      "Api-Username"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://discourse.local/invites.json"
    },
    "headers": {
      "Api-Key": {
        "$": "Api-Key"
      },
      "Api-Username": {
        "$": "Api-Username"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**created_at**",
            "**custom_message**",
            "**email**",
            "**emailed**",
            "**expired**",
            "**expires_at**",
            "**groups**",
            "**id**",
            "**link**",
            "**topics**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
