{
  "name": "listTopTopics",
  "description": "Get the top topics filtered by period",
  "parameters": {
    "type": "object",
    "properties": {
      "Api-Key": {
        "type": "string"
      },
      "Api-Username": {
        "type": "string"
      },
      "period": {
        "type": "string",
        "description": "Enum: `all`, `yearly`, `quarterly`, `monthly`, `weekly`, `daily`"
      }
    },
    "required": [
      "Api-Key",
      "Api-Username"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://discourse.local/top.json{?period}"
    },
    "headers": {
      "Api-Key": {
        "$": "Api-Key"
      },
      "Api-Username": {
        "$": "Api-Username"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**primary_groups**",
            [
              "**topic_list**",
              {
                "$ul": [
                  "**can_create_topic**",
                  "**draft**",
                  "**draft_key**",
                  "**draft_sequence**",
                  "**for_period**",
                  "**per_page**",
                  "**topics**"
                ]
              }
            ],
            "**users**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
