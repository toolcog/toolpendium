{
  "name": "updateTagGroup",
  "description": "Update tag group",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "body": {
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "http://discourse.local/tag_groups/{id}.json"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**success**",
            [
              "**tag_group**",
              {
                "$ul": [
                  "**id**",
                  "**name**",
                  "**one_per_topic**",
                  "**parent_tag_name**",
                  [
                    "**permissions**",
                    {
                      "$ul": [
                        "**everyone**"
                      ]
                    }
                  ],
                  "**tag_names**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
