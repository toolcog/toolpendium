{
  "name": "listUserBadges",
  "description": "List badges for a user",
  "parameters": {
    "type": "object",
    "properties": {
      "username": {
        "type": "string"
      }
    },
    "required": [
      "username"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://discourse.local/user-badges/{username}.json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**badge_types**",
            "**badges**",
            "**granted_bies**",
            "**user_badges**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
