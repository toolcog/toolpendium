{
  "name": "getProvider",
  "description": "List all APIs in the directory for a particular providerName\nReturns links to the individual API entry for each API.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "provider": {
        "example": "apis.guru",
        "maxLength": 255,
        "minLength": 1,
        "type": "string"
      }
    },
    "required": [
      "provider"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.apis.guru/v2/{provider}.json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "List of API details.\nIt is a JSON object with API IDs(`<provider>[:<service>]`) as keys.\n",
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
