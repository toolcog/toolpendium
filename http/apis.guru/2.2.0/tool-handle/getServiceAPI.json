{
  "name": "getServiceAPI",
  "description": "Returns the API entry for one specific version of an API where there is a serviceName.",
  "parameters": {
    "type": "object",
    "properties": {
      "provider": {
        "example": "apis.guru",
        "maxLength": 255,
        "minLength": 1,
        "type": "string"
      },
      "service": {
        "example": "graph",
        "maxLength": 255,
        "minLength": 1,
        "type": "string"
      },
      "api": {
        "example": "2.1.0",
        "maxLength": 255,
        "minLength": 1,
        "type": "string"
      }
    },
    "required": [
      "provider",
      "service",
      "api"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.apis.guru/v2/specs/{provider}/{service}/{api}.json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Meta information about API",
        "**Key properties:**",
        {
          "$ul": [
            "**added**: Timestamp when the API was first added to the directory",
            "**preferred**: Recommended version",
            "**versions**: List of supported versions of the API"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
