{
  "name": "scan",
  "description": "Scan the specified device for slaves",
  "parameters": {
    "type": "object",
    "properties": {
      "device": {
        "$ref": "#/components/schemas/device",
        "description": "The serial device to scan - /dev/ is pre-pended to {device} by M-Bus HTTPD before scanning"
      },
      "baudrate": {
        "$ref": "#/components/schemas/baudrate",
        "description": "Baudrate to communicate with M-Bus devices"
      }
    },
    "required": [
      "device",
      "baudrate"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://mbus.local/mbus/scan/{device}/{baudrate}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "400": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "404": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
