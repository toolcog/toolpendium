{
  "name": "get",
  "description": "Gets data from the slave identified by {address}",
  "parameters": {
    "type": "object",
    "properties": {
      "device": {
        "$ref": "#/components/schemas/device",
        "description": "The serial device to scan - /dev/ is pre-pended to {device} by M-Bus HTTPD before scanning"
      },
      "baudrate": {
        "$ref": "#/components/schemas/baudrate",
        "description": "Baudrate to communicate with M-Bus devices"
      },
      "address": {
        "$ref": "#/components/schemas/address",
        "description": "The slave device to get data from"
      }
    },
    "required": [
      "device",
      "baudrate",
      "address"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://mbus.local/mbus/get/{device}/{baudrate}/{address}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "400": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "404": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
