{
  "name": "hat",
  "description": "Gets Raspberry Pi Hat information",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://mbus.local/mbus/hat"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Raspberry Pi Hat Information",
        "**Key properties:**",
        {
          "$ul": [
            "**product**: Product",
            "**productId**: Product ID",
            "**productVer**: Product Version",
            "**uuid**: Hat UUID",
            "**vendor**: Hat Vendor"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
