        "description": "Date time format (cf. [RFC 3339](https://www.ietf.org/rfc/rfc3339.txt) & [leettime.de](http://leettime.de/))"
      },
      "group_id": {
        "format": "int64",
        "type": "integer",
        "description": "Group ID"
      },
      "X-Sds-Auth-Token": {
        "type": "string",
        "description": "Authentication token"
      },
      "body": {
        "$ref": "#/$defs/UpdateGroupRequest"
      }
    },
    "required": [
      "group_id",
      "body"
    ],
    "$defs": {
      "UpdateGroupRequest": {
        "description": "Request model for updating group's metadata",
        "properties": {
          "expiration": {
            "$ref": "#/$defs/ObjectExpiration"
          },
          "name": {
            "description": "Group name",
            "type": "string"
          }
        },
        "type": "object"
      },
      "ObjectExpiration": {
        "description": "Expiration information",
        "properties": {
          "enableExpiration": {
            "description": "enabled / disabled",
            "type": "boolean"
          },
          "expireAt": {
            "description": "Expiration date",
            "format": "date-time",
            "type": "string"
          }
        },
        "required": [
          "enableExpiration"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "/api/v4/groups/{group_id}"
    },
    "headers": {
      "X-Sds-Date-Format": {
