{
  "name": "Search_Search",
  "description": "Search for products, customers and orders.\r\nType can be \"order\", \"product\" and / or \"customer\"\r\nTerm can contains lucene query syntax",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/Rechnungsdruck.WebApp.Controllers.Api.SearchController.SearchModel"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "Rechnungsdruck.WebApp.Controllers.Api.SearchController.SearchModel": {
        "properties": {
          "SearchMode": {
            "enum": [
              0,
              1,
              2,
              3,
              4
            ],
            "format": "int32",
            "type": "integer"
          },
          "Term": {
            "type": "string"
          },
          "Type": {
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://app.billbee.io/api/v1/search"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**Data**",
              {
                "$ul": [
                  "**Customers**",
                  "**Orders**",
                  "**Products**"
                ]
              }
            ],
            "**ErrorCode**",
            "**ErrorDescription**",
            "**ErrorMessage**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
