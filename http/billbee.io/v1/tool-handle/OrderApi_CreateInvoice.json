{
  "name": "OrderApi_CreateInvoice",
  "description": "Create an invoice for an existing order. This request is extra throttled by order and api key to a maximum of 1 per 5 minutes.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "The internal billbee id of the order"
      },
      "includeInvoicePdf": {
        "type": "boolean",
        "description": "If true, the PDF is included in the response as base64 encoded string"
      },
      "templateId": {
        "format": "int64",
        "type": "integer",
        "description": "You can pass the id of an invoice template to overwrite the assigned template for invoice creation"
      },
      "sendToCloudId": {
        "format": "int64",
        "type": "integer",
        "description": "You can pass the id of a connected cloud printer/storage to send the invoice to it"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://app.billbee.io/api/v1/orders/CreateInvoice/{id}{?includeInvoicePdf,templateId,sendToCloudId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**Data**",
              {
                "$ul": [
                  "**InvoiceDate**",
                  "**InvoiceNumber**",
                  "**OrderNumber**",
                  "**PDFData**",
                  "**PdfDownloadUrl**",
                  "**TotalGross**",
                  "**TotalNet**"
                ]
              }
            ],
            "**ErrorCode**",
            "**ErrorDescription**",
            "**ErrorMessage**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
