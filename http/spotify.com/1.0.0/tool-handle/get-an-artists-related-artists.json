    "type": "object",
    "properties": {
      "id": {
        "description": "The [Spotify ID](/documentation/web-api/concepts/spotify-uris-ids) of the artist.\n",
        "example": "0TnOYISbd1XYRBk9myaseg",
        "title": "Spotify Artist ID",
        "type": "string"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
