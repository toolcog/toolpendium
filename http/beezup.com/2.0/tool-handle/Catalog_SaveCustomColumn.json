{
  "name": "Catalog_SaveCustomColumn",
  "description": "Create or replace a custom column",
  "parameters": {
    "type": "object",
    "properties": {
      "storeId": {
        "format": "guid",
        "type": "string",
        "description": "Your store identifier"
      },
      "columnId": {
        "format": "guid",
        "type": "string",
        "description": "The custom column identifier"
      },
      "body": {
        "$ref": "#/$defs/createCustomColumnRequest"
      }
    },
    "required": [
      "storeId",
      "columnId",
      "body"
    ],
    "$defs": {
      "createCustomColumnRequest": {
        "description": "The request message to create a custom column",
        "properties": {
          "displayGroupName": {
            "$ref": "#/$defs/displayGroupName"
          },
          "encryptedBlocklyExpression": {
            "$ref": "#/$defs/encryptedBlocklyExpression"
          },
          "encryptedExpression": {
            "$ref": "#/$defs/encryptedExpression"
          },
          "userColumnName": {
            "$ref": "#/$defs/userColumName"
          }
        },
        "required": [
          "userColumnName",
          "encryptedExpression",
          "encryptedBlocklyExpression",
          "displayGroupName"
        ],
        "type": "object"
      },
      "displayGroupName": {
        "description": "Indicate the display group name where the column must be putted",
        "example": "Category",
        "type": "string"
      },
      "encryptedBlocklyExpression": {
        "description": "The encrypted XML Blockly representation of the expression",
        "example": "apokpoa,opz,sixsoisiosnoisn",
        "type": "string"
      },
      "encryptedExpression": {
        "description": "The encrypted excel expression of the column",
        "example": "uziushdczaniodnndonisodndsiondsoidsndoin",
        "type": "string"
      },
      "userColumName": {
        "description": "Column named by the user",
        "example": "My SKU",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.beezup.com/v2/user/catalogs/{storeId}/customColumns/{columnId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "409": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**: The error message list",
            [
              "**links**: The action links",
              {
                "$ul": [
                  "**cancelCurrentImportation**",
                  "**currentImportation**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
