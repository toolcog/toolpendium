{
  "name": "SaveStoreAlerts",
  "description": "You just have to send the alert you want to update, does not need all alerts. (PARTIAL UPDATE ACCEPTED)",
  "parameters": {
    "type": "object",
    "properties": {
      "storeId": {
        "format": "guid",
        "type": "string",
        "description": "Your store identifier"
      },
      "body": {
        "$ref": "#/$defs/saveStoreAlertsRequest"
      }
    },
    "required": [
      "storeId",
      "body"
    ],
    "$defs": {
      "saveStoreAlertsRequest": {
        "additionalProperties": {
          "$ref": "#/$defs/saveStoreAlertRequest"
        },
        "description": "The key is the alert identifier (alertId)",
        "type": "object"
      },
      "saveStoreAlertRequest": {
        "properties": {
          "enabled": {
            "$ref": "#/$defs/alertEnabled"
          },
          "properties": {
            "description": "Properties to configure the alert",
            "example": [
              {
                "propertyId": "2",
                "propertyValue": "3"
              }
            ],
            "items": {
              "$ref": "#/$defs/storeAlertProperty"
            },
            "type": "array"
          }
        },
        "required": [
          "enabled"
        ],
        "type": "object"
      },
      "alertEnabled": {
        "description": "Is the alert enable ?",
        "example": "true",
        "type": "boolean"
      },
      "storeAlertProperty": {
        "properties": {
          "propertyId": {
            "$ref": "#/$defs/alertPropertyId"
          },
          "propertyValue": {
            "$ref": "#/$defs/alertPropertyValue"
          }
        },
        "required": [
          "propertyId",
          "propertyValue"
        ],
        "type": "object"
      },
      "alertPropertyId": {
        "description": "The property identifier of the alert",
        "example": "2",
        "format": "int32",
        "type": "integer"
      },
      "alertPropertyValue": {
        "description": "The property value",
        "example": "2",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.beezup.com/v2/user/customer/stores/{storeId}/alerts"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "400": {
      "$encode": "markdown",
      "$block": [
        {
