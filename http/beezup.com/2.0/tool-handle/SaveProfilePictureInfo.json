{
  "name": "SaveProfilePictureInfo",
  "description": "Change user picture information",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/profilePictureInfo"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "profilePictureInfo": {
        "properties": {
          "profilePictureSelected": {
            "$ref": "#/$defs/profilePictureSelected"
          },
          "profilePictureUrl": {
            "$ref": "#/$defs/profilePictureUrl"
          }
        },
        "required": [
          "profilePictureSelected"
        ],
        "type": "object"
      },
      "profilePictureSelected": {
        "description": "Your profile picture choice about usage of gravatar picture, initials picture or uploaded picture.",
        "enum": [
          "gravatar",
          "initials",
          "uploaded"
        ],
        "example": "initials",
        "type": "string"
      },
      "profilePictureUrl": {
        "description": "Indicate the url of your picture profil",
        "example": "https://upload.wikimedia.org/wikipedia/commons/thumb/e/e5/Marlon_Brando_%28cropped%29.jpg/220px-Marlon_Brando_%28cropped%29.jpg",
        "pattern": "^(https?:\\/\\/)?([\\da-z\\.-]+)\\.([a-z\\.]{2,6})([\\/\\w \\.-]*)*\\/?$",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.beezup.com/v2/user/customer/account/profilePictureInfo"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
