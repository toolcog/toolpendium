{
  "name": "ConfigureChannelCatalogCostSettings",
  "description": "Configure channel catalog cost settings",
  "parameters": {
    "type": "object",
    "properties": {
      "channelCatalogId": {
        "format": "guid",
        "type": "string",
        "description": "The channel catalog identifier"
      },
      "body": {
        "$ref": "#/$defs/costSettings"
      }
    },
    "required": [
      "channelCatalogId",
      "body"
    ],
    "$defs": {
      "costSettings": {
        "description": "If this property is not indicated please force the user to configure the cost settings.\nDefines the cost type you have on this channel with the cost value.\n",
        "properties": {
          "costType": {
            "$ref": "#/$defs/costType"
          },
          "globalCostValue": {
            "description": "In case of global cost type, you have to indicate the cost value.",
            "example": "10.21",
            "format": "decimal",
            "type": "number"
          }
        },
        "required": [
          "costType"
        ],
        "type": "object"
      },
      "costType": {
        "description": "CPC means cost per click.\nCPA means cost per action.\nYou can have CPC/CPA with a global cost value.\nYou can have CPC/CPA by category the cost value MUST be null\nYou can have global fixed price.\n",
        "enum": [
          "CPC_Global",
          "CPA_Global",
          "CPC_ByCategory",
          "CPA_ByCategory",
          "Fixed_Global"
        ],
        "example": "Fixed_Global",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.beezup.com/v2/user/channelCatalogs/{channelCatalogId}/settings/cost"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
