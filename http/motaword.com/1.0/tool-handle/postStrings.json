{
  "name": "postStrings",
  "description": "Deprecated, use instant translation mechanism for continuous projects.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/DeprecatedStringTranslationContent"
      }
    },
    "$defs": {
      "DeprecatedStringTranslationContent": {
        "properties": {
          "contents": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "source_language": {
            "type": "string"
          },
          "target_languages": {
            "items": {
              "type": "string"
            },
            "type": "array"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.motaword.com/strings"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**cost**",
              {
                "$ul": [
                  "**amount**",
                  "**currency** (default: usd)"
                ]
              }
            ],
            "**strings**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
