{
  "name": "searchEverywhere",
  "description": "Search through everything in your account, from projects to documents, from source strings to translations...",
  "parameters": {
    "type": "object",
    "properties": {
      "query": {
        "type": "string",
        "description": "Search query term"
      },
      "include[]": {
        "items": {
          "enum": [
            "projects",
            "documents",
            "strings"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "Search in these entities. Current oprions are projects, documents, strings. Can be multiple. When not provided, we'll search through all entities."
      },
      "page": {
        "default": 1,
        "format": "int64",
        "type": "integer"
      },
      "per_page": {
        "default": 10,
        "format": "int64",
        "type": "integer"
      }
    },
    "required": [
      "query"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/search{?query,include[],page,per_page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**meta**",
              {
                "$ul": [
                  [
                    "**paging**",
                    {
                      "$ul": [
                        "**count**",
                        [
                          "**links**",
                          {
                            "$ul": [
                              [
                                "**self**",
                                {
                                  "$ul": [
                                    "**href**"
                                  ]
                                }
                              ],
                              "**next**",
                              "**previous**"
                            ]
                          }
                        ],
                        "**page** (default: 1)",
                        "**per_page** (default: 10)",
                        "**total_count**"
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**result**",
              {
                "$ul": [
                  "**documents**",
                  "**projects**",
                  "**strings**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
