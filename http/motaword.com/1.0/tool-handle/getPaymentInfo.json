              {
                "$ul": [
                  "**bin**",
                  "**id**",
                  "**is_default**",
                  "**payment_code**"
                ]
              }
            ],
            "**cards**",
            [
              "**corporate**",
              {
                "$ul": [
                  "**allow_api_invoicing**",
                  "**allow_payment_code**",
                  "**auto_charge**",
                  [
                    "**billing**",
                    {
                      "$ul": [
                        "**city**",
                        "**country**",
                        "**phone**",
                        "**state**",
                        "**street**",
                        "**zip**",
                        "**name**: addressing name, such as company name. used in billing address. (default: )"
                      ]
                    }
                  ],
                  [
                    "**card**",
                    {
                      "$ul": [
                        "**bin**",
                        "**id**",
                        "**is_default**",
                        "**payment_code**"
                      ]
                    }
                  ],
                  "**contact_email_address**",
                  "**payment_code**"
                ]
              }
            ],
            [
              "**shared_card**",
              {
                "$ul": [
                  "**bin**",
                  "**id**",
                  "**is_default**",
                  "**payment_code**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
