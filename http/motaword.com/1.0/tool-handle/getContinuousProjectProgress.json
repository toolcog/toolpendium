{
  "name": "getContinuousProjectProgress",
  "description": "Monitor the translation progress of an ongoing continuous project in real-time.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "int64",
        "type": "integer",
        "description": "Project ID"
      },
      "filterByLanguage": {
        "type": "string"
      }
    },
    "required": [
      "projectId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/continuous_projects/{projectId}/progress{?filterByLanguage}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**costs**",
              {
                "$ul": [
                  [
                    "**mt**",
                    {
                      "$ul": [
                        "**amount**",
                        "**currency** (default: usd)"
                      ]
                    }
                  ],
                  [
                    "**post_edit**",
                    {
                      "$ul": [
                        "**amount**",
                        "**currency** (default: usd)"
                      ]
                    }
                  ],
                  [
                    "**saved**",
                    {
                      "$ul": [
                        "**amount**",
                        "**currency** (default: usd)"
                      ]
                    }
                  ],
                  [
                    "**total**",
                    {
                      "$ul": [
                        "**amount**",
                        "**currency** (default: usd)"
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**progress**",
              {
                "$ul": [
                  "**languages**",
                  [
                    "**links**",
                    {
                      "$ul": [
                        [
                          "**self**",
                          {
                            "$ul": [
                              "**href**"
                            ]
                          }
                        ],
                        [
                          "**project**",
                          {
                            "$ul": [
                              "**href**"
                            ]
                          }
                        ]
                      ]
                    }
                  ],
                  "**project_status**",
                  "**proofreading**",
                  "**total**",
                  "**translation**",
                  "**word_count**"
                ]
              }
            ],
            [
              "**word_counts**",
              {
                "$ul": [
                  "**mt**",
                  "**post_edit**",
                  "**total**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**help**",
            "**http_code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
