{
  "name": "getUserStats",
  "description": "Returns a user's client and vendor statistics. This used to be called \"summary\" (\\@deprecated).",
  "parameters": {
    "type": "object",
    "properties": {
      "userId": {
        "format": "int64",
        "type": "integer",
        "description": "User ID"
      }
    },
    "required": [
      "userId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/{userId}/stats"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**client**",
              {
                "$ul": [
                  "**document_count**",
                  "**nps**",
                  "**started_project_count**",
                  [
                    "**total_discounted**",
                    {
                      "$ul": [
                        "**amount**",
                        "**currency** (default: usd)"
                      ]
                    }
                  ],
                  "**total_project_count**",
                  "**total_spending**",
                  "**translator_count**"
                ]
              }
            ],
            [
              "**vendor**",
              {
                "$ul": [
                  [
                    "**earnings**",
                    {
                      "$ul": [
                        "**total**: total amount of USD that this user has earned in the platform so far."
                      ]
                    }
                  ],
                  [
                    "**projects**",
                    {
                      "$ul": [
                        "**invited**: total number of projects that this user was invited to. TODO this key is to replace \"total\" key due to naming ambiguity.",
                        "**total**: total number of projects that this user was invited to.",
                        "**worked**: total number of projects that this user actually worked on."
                      ]
                    }
                  ],
                  [
                    "**words**",
                    {
                      "$ul": [
                        "**approved**: total number of words that this user has approved so far.",
                        "**translated**: total number of words that this user has translated so far."
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**help**",
            "**http_code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
