{
  "name": "checkDocumentsReindex",
  "description": "Check reindex status of the client source and translation documents.",
  "parameters": {
    "type": "object",
    "properties": {
      "async_request_key": {
        "type": "string",
        "description": "Async operation key"
      }
    },
    "required": [
      "async_request_key"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/search/documents/reindex/status{?async_request_key}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**duration**: operation duration in milliseconds",
            "**key**",
            "**message**",
            "**status** (default: sent)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
