{
  "name": "getCommissionStatsByFilter",
  "description": "Returns the total commissions stats by report filter.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/ReportFilter"
      }
    },
    "$defs": {
      "ReportFilter": {
        "properties": {
          "budget_code": {
            "description": "budget code filter. valid for corporate accounts only.",
            "type": "string"
          },
          "date_from": {
            "description": "the date-time notation as defined by RFC 3339, section 5.6, for example, 2017-07-21T17:32:28Z",
            "format": "date-time",
            "type": "string"
          },
          "date_to": {
            "description": "the date-time notation as defined by RFC 3339, section 5.6, for example, 2017-07-21T17:32:28Z",
            "format": "date-time",
            "type": "string"
          },
          "source_languages": {
            "description": "List of source language codes.",
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "target_languages": {
            "description": "List of target language codes.",
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "users": {
            "description": "List of corporate user IDs. Valid for corporate accounts only.",
            "items": {
              "format": "int64",
              "type": "integer"
            },
            "type": "array"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.motaword.com/stats/commissions"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**balance**",
              {
                "$ul": [
                  "**amount**",
                  "**currency** (default: usd)"
                ]
              }
            ],
            [
              "**paid**",
              {
                "$ul": [
                  "**amount**",
                  "**currency** (default: usd)"
                ]
              }
            ],
            [
              "**quote_total**",
              {
                "$ul": [
                  "**amount**",
                  "**currency** (default: usd)"
                ]
              }
            ],
            [
              "**total**",
              {
                "$ul": [
                  "**amount**",
                  "**currency** (default: usd)"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**help**",
            "**http_code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
