{
  "name": "getProjects",
  "description": "View the translation projects ordered in your account. If you have the related permission (configured by your account administrator), you can view the projects of your colleagues under the same company account.",
  "parameters": {
    "type": "object",
    "properties": {
      "page": {
        "default": 1,
        "format": "int64",
        "type": "integer"
      },
      "per_page": {
        "default": 10,
        "format": "int64",
        "type": "integer"
      },
      "status[]": {
        "items": {
          "$ref": "#/$defs/ProjectStatus"
        },
        "type": "array",
        "description": "Filter projects by status. Accepts multiple statuses. Possible values 'pending', 'started', 'completed'"
      },
      "with_pending": {
        "default": true,
        "type": "boolean",
        "description": "deprecated. use `status[]` param."
      },
      "with_started": {
        "default": true,
        "type": "boolean",
        "description": "deprecated. use `status[]` param."
      },
      "with_completed": {
        "default": true,
        "type": "boolean",
        "description": "deprecated. use `status[]` param."
      },
      "order_by": {
        "default": "id",
        "enum": [
          "id",
          "status",
          "delivery",
          "price"
        ],
        "type": "string"
      },
      "order_type": {
        "$ref": "#/$defs/ListOrderType"
      },
      "with[]": {
        "items": {
          "enum": [
            "client",
            "vendor"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "Include detailed information. Possible values 'client', 'vendor'"
      }
    },
    "$defs": {
      "ProjectStatus": {
        "enum": [
          "pending",
          "started",
          "completed",
          "translated",
          "proofread"
        ],
        "type": "string"
      },
      "ListOrderType": {
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/projects{?page,per_page,status[],with_pending,with_started,with_completed,order_by,order_type,with[]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**meta**",
              {
                "$ul": [
                  [
                    "**paging**",
                    {
                      "$ul": [
                        "**count**",
                        [
                          "**links**",
                          {
                            "$ul": [
                              [
                                "**self**",
                                {
                                  "$ul": [
                                    "**href**"
                                  ]
                                }
                              ],
                              "**next**",
                              "**previous**"
                            ]
                          }
                        ],
                        "**page** (default: 1)",
                        "**per_page** (default: 10)",
                        "**total_count**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**projects**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
