{
  "name": "getProjectDocument",
  "description": "View the details of a source file you uploaded to be translated in your project.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "int64",
        "type": "integer",
        "description": "Project ID"
      },
      "documentId": {
        "format": "int64",
        "type": "integer",
        "description": "Document ID"
      },
      "with[]": {
        "items": {
          "enum": [
            "preview",
            "editors"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "Attach further information. Possible values 'preview' to fetch temporary preview URLs. This is NOT recommended to be used with list calls. Only use with[]=preview for single document/style guide calls."
      }
    },
    "required": [
      "projectId",
      "documentId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/projects/{projectId}/documents/{documentId}{?with[]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**file_type**: Extension of the file",
            "**has_custom_package**",
            "**id**",
            [
              "**links**",
              {
                "$ul": [
                  [
                    "**self**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  "**admins**",
                  [
                    "**download**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  "**editors**",
                  [
                    "**preview-box**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**preview-pdf**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**preview-pdf-viewer**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**progress**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**project**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**strings**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**thumbnail**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**manual_files**",
            "**name**",
            "**project_id**",
            "**review_in_manual_editor**",
            "**scheme**",
            "**search_score**",
            "**source_language**",
            "**subject**",
            "**target_languages**",
            "**uploaded_at**: Unix epoch time",
            "**word_count**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**help**",
            "**http_code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
