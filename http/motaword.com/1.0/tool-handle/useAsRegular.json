{
  "name": "useAsRegular",
  "description": "Use the translation of the given manual document as a regular file.",
  "parameters": {
    "type": "object",
    "properties": {
      "documentId": {
        "format": "int64",
        "type": "integer",
        "description": "Document ID"
      },
      "body": {
        "$ref": "#/$defs/UseAsRegularPayload"
      }
    },
    "required": [
      "documentId"
    ],
    "$defs": {
      "UseAsRegularPayload": {
        "properties": {
          "allowOriginalFilePreview": {
            "type": "boolean"
          },
          "allowReviewInManualEditor": {
            "type": "boolean"
          },
          "disableInvitations": {
            "type": "boolean"
          },
          "fromManualTranslationFileId": {
            "type": "number"
          },
          "hideNumbers": {
            "type": "boolean"
          },
          "recreate": {
            "type": "boolean"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.motaword.com/documents/{documentId}/use_as_regular"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**status** (default: success)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
