{
  "name": "getBlogPosts",
  "description": "Get blog posts - ordered by created desc by default",
  "parameters": {
    "type": "object",
    "properties": {
      "locale": {
        "type": "string",
        "description": "Article language, default `en`. When no blog article is available and `fallback=true` is specified, it falls back to `en`."
      },
      "fallback": {
        "type": "boolean",
        "description": "When `true`, and no article is found in the locale, it falls back to `locale=en`."
      },
      "page": {
        "default": 1,
        "format": "int64",
        "type": "integer"
      },
      "per_page": {
        "default": 1,
        "format": "int64",
        "type": "integer"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/blogs{?locale,fallback,page,per_page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**articles**",
            [
              "**meta**",
              {
                "$ul": [
                  [
                    "**paging**",
                    {
                      "$ul": [
                        "**count**",
                        [
                          "**links**",
                          {
                            "$ul": [
                              [
                                "**self**",
                                {
                                  "$ul": [
                                    "**href**"
                                  ]
                                }
                              ],
                              "**next**",
                              "**previous**"
                            ]
                          }
                        ],
                        "**page** (default: 1)",
                        "**per_page** (default: 10)",
                        "**total_count**"
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
