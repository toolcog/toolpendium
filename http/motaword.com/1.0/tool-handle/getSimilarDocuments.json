{
  "name": "getSimilarDocuments",
  "description": "Find documents similar to this document. Optionally, include translation information.",
  "parameters": {
    "type": "object",
    "properties": {
      "documentId": {
        "format": "int64",
        "type": "integer",
        "description": "Document ID"
      },
      "per_page": {
        "default": 1,
        "format": "int64",
        "type": "integer",
        "description": "Determines the number of similar documents to return."
      },
      "with[]": {
        "items": {
          "enum": [
            "preview",
            "editors"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "Attach further information. Possible values 'preview' to fetch temporary preview URLs. This is NOT recommended to be used with list calls. Only use with[]=preview for single document/style guide calls."
      }
    },
    "required": [
      "documentId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/documents/{documentId}/similars{?per_page,with[]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**documents**",
            [
              "**meta**",
              {
                "$ul": [
                  [
                    "**paging**",
                    {
                      "$ul": [
                        "**count**",
                        [
                          "**links**",
                          {
                            "$ul": [
                              [
                                "**self**",
                                {
                                  "$ul": [
                                    "**href**"
                                  ]
                                }
                              ],
                              "**next**",
                              "**previous**"
                            ]
                          }
                        ],
                        "**page** (default: 1)",
                        "**per_page** (default: 10)",
                        "**total_count**"
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
