{
  "name": "downloadTranslatedDocumentForLanguage",
  "description": "Download translated document in the given target language.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "int64",
        "type": "integer",
        "description": "Project ID"
      },
      "documentId": {
        "format": "int64",
        "type": "integer",
        "description": "Document ID"
      },
      "language": {
        "type": "string",
        "description": "Target language code."
      },
      "certified": {
        "default": 0,
        "type": "boolean",
        "description": "Download certified translation"
      }
    },
    "required": [
      "projectId",
      "documentId",
      "language"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/projects/{projectId}/documents/{documentId}/translations/download/{language}{?certified}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**help**",
            "**http_code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
