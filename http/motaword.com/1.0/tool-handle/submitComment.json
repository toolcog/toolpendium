{
  "name": "submitComment",
  "description": "Submit a comment to an activity in the project, such as translation or editing.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "int64",
        "type": "integer",
        "description": "Project ID"
      },
      "activityId": {
        "format": "int64",
        "type": "integer",
        "description": "Activity ID"
      },
      "body": {
        "$ref": "#/$defs/Comment"
      }
    },
    "required": [
      "projectId",
      "activityId"
    ],
    "$defs": {
      "Comment": {
        "properties": {
          "comment": {
            "description": "Comment text.",
            "type": "string"
          },
          "commented_at": {
            "description": "Unix epoch time",
            "format": "int64",
            "type": "integer"
          },
          "id": {
            "format": "int64",
            "type": "integer"
          },
          "links": {
            "$ref": "#/$defs/CommentLinks"
          }
        },
        "required": [
          "comment"
        ],
        "type": "object"
      },
      "CommentLinks": {
        "allOf": [
          {
            "$ref": "#/$defs/LinksMeta"
          },
          {
            "properties": {
              "activity": {
                "$ref": "#/$defs/Href"
              },
              "project": {
                "$ref": "#/$defs/Href"
              }
            },
            "type": "object"
          }
        ]
      },
      "LinksMeta": {
        "properties": {
          "self": {
            "$ref": "#/$defs/Href"
          }
        },
        "type": "object"
      },
      "Href": {
        "properties": {
          "href": {
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.motaword.com/projects/{projectId}/activities/{activityId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**comment**: Comment text.",
            "**commented_at**: Unix epoch time",
            "**id**",
            [
              "**links**",
              {
                "$ul": [
                  [
                    "**self**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**activity**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**project**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**help**",
            "**http_code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
