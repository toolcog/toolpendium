{
  "name": "packageProjectTranslationMemory",
  "description": "Package and download project translation memory in TMX format",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "int64",
        "type": "integer",
        "description": "Project ID"
      },
      "async": {
        "default": 0,
        "format": "int64",
        "type": "integer",
        "description": "If you want to package and download the translation memory synchronously, mark this parameter as '0'. It will package the translation memory and then return the packaged file in the response, identical to async/download call after an asynchronous /package call."
      },
      "format": {
        "default": "tmx",
        "type": "string",
        "description": "Translation Memory file format"
      }
    },
    "required": [
      "projectId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.motaword.com/projects/{projectId}/strings/package{?async,format}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**duration**: operation duration in milliseconds",
            "**key**",
            "**message**",
            "**status** (default: sent)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
