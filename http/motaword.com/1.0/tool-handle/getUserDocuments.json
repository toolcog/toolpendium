{
  "name": "getUserDocuments",
  "description": "Get a list of your documents",
  "parameters": {
    "type": "object",
    "properties": {
      "userId": {
        "format": "int64",
        "type": "integer",
        "description": "User ID"
      },
      "recent": {
        "default": 0,
        "type": "boolean",
        "description": "When true, this will return the most 4 recent active documents."
      },
      "search": {
        "type": "string"
      },
      "type_filter": {
        "default": "ALL",
        "enum": [
          "ALL",
          "TEXT_DOCUMENTS",
          "PRESENTATIONS",
          "SPREADSHEETS",
          "PDFS",
          "IMAGES",
          "SUBTITLES",
          "DESIGNS",
          "LOCALIZATION",
          "WEB",
          "STYLE_GUIDES",
          "GLOSSARIES"
        ],
        "type": "string"
      },
      "language_code": {
        "type": "string",
        "description": "searches in source language of documents, in source and target languages of document's quote"
      },
      "page": {
        "default": 1,
        "format": "int64",
        "type": "integer"
      },
      "per_page": {
        "default": 10,
        "format": "int64",
        "type": "integer"
      },
      "order_by": {
        "default": "updated_at",
        "enum": [
          "id",
          "updated_at",
          "created_at",
          "name"
        ],
        "type": "string"
      },
      "order_type": {
        "$ref": "#/$defs/ListOrderType"
      }
    },
    "required": [
      "userId"
    ],
    "$defs": {
      "ListOrderType": {
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/{userId}/documents{?recent,search,type_filter,language_code,page,per_page,order_by,order_type}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**documents**",
            [
              "**meta**",
              {
                "$ul": [
                  [
                    "**paging**",
                    {
                      "$ul": [
                        "**count**",
                        [
                          "**links**",
                          {
                            "$ul": [
                              [
                                "**self**",
                                {
                                  "$ul": [
                                    "**href**"
                                  ]
                                }
                              ],
                              "**next**",
                              "**previous**"
                            ]
                          }
                        ],
                        "**page** (default: 1)",
                        "**per_page** (default: 10)",
                        "**total_count**"
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
