{
  "name": "getFormats",
  "description": "Get a list of supported formats for documents, style guides and extensions.\n",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/formats"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**documents**",
              {
                "$ul": [
                  "**extensions**",
                  "**mimes**"
                ]
              }
            ],
            [
              "**glossaries**",
              {
                "$ul": [
                  "**extensions**"
                ]
              }
            ],
            [
              "**styleguides**",
              {
                "$ul": [
                  "**extensions**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
