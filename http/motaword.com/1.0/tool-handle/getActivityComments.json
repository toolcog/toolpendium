{
  "name": "getActivityComments",
  "description": "View a list of comments added to this activity.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "int64",
        "type": "integer",
        "description": "Project ID"
      },
      "activityId": {
        "format": "int64",
        "type": "integer",
        "description": "Activity ID"
      }
    },
    "required": [
      "projectId",
      "activityId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/projects/{projectId}/activities/{activityId}/comments"
    }
  },
