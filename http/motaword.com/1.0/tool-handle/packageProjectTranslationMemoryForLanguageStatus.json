{
  "name": "packageProjectTranslationMemoryForLanguageStatus",
  "description": "Check translation memory packaging status for async packaging requests, using the key returned from strings/package call.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "int64",
        "type": "integer",
        "description": "Project ID"
      },
      "languageCode": {
        "type": "string",
        "description": "Language Code"
      },
      "async_request_key": {
        "type": "string",
        "description": "Async operation key"
      }
    },
    "required": [
      "projectId",
      "languageCode",
      "async_request_key"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.motaword.com/projects/{projectId}/strings/{languageCode}/package/status{?async_request_key}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**duration**: operation duration in milliseconds",
            "**key**",
            "**message**",
            "**status** (default: sent)"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
