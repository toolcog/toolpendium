{
  "name": "updateDocument",
  "description": "Update source document in your continuous project. In most scenarios, this operation will also trigger auto-translation of your document, via MT and/or TM.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "int64",
        "type": "integer",
        "description": "Continuous project ID"
      },
      "documentId": {
        "format": "int64",
        "type": "integer",
        "description": "Continuous project document ID"
      },
      "body": {
        "$ref": "#/$defs/AddOrUpdateDocumentRequest"
      }
    },
    "required": [
      "projectId",
      "documentId"
    ],
    "$defs": {
      "AddOrUpdateDocumentRequest": {
        "properties": {
          "document": {
            "$ref": "#/$defs/FileAsData"
          }
        },
        "type": "object"
      },
      "FileAsData": {
        "properties": {
          "data": {
            "description": "Base64 encoded contents of your file.",
            "format": "byte",
            "type": "string"
          },
          "name": {
            "description": "Name of your file",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.motaword.com/continuous_projects/{projectId}/documents/{documentId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**billed_word_count**",
            "**id**",
            [
              "**links**",
              {
                "$ul": [
                  [
                    "**self**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  "**admins**",
                  [
                    "**download**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  "**editors**",
                  [
                    "**preview-box**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**preview-pdf**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**preview-pdf-viewer**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**progress**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**project**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**strings**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ],
                  [
                    "**thumbnail**",
                    {
                      "$ul": [
                        "**href**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**name**",
            "**post_edit_enabled**",
            "**project_id**",
            "**source_language**",
            "**target_languages**",
            "**word_count**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
