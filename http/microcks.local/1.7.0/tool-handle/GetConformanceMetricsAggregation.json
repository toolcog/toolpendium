{
  "name": "GetConformanceMetricsAggregation",
  "description": "Get aggregation of conformance metrics",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://microcks.local/metrics/conformance/aggregate"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Value of a metric with an associated weight",
        "**Key properties:**",
        {
          "$ul": [
            "**name**: Metric name or serie name",
            "**value**: The value of this metric",
            "**weight**: Weight of this metric value (typically a percentage)"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
