{
  "name": "GetLatestTestResults",
  "description": "Get latest tests results",
  "parameters": {
    "type": "object",
    "properties": {
      "limit": {
        "type": "integer",
        "description": "Number of days to consider for test results to return. Default is 7 (one week)"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://microcks.local/metrics/tests/latest{?limit}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Represents the summary result of a Service or API test run by Microcks. ",
        "**Key properties:**",
        {
          "$ul": [
            "**id**: Unique identifier of TestResult",
            "**serviceId**: Unique identifier of service tested",
            "**success**: Flag telling if test is a success",
            "**testDate**: Timestamp of creation date of this service"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.id"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
