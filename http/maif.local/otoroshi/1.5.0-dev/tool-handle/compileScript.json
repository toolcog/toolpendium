{
  "name": "compileScript",
  "description": "Compile a script",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/Script"
      }
    },
    "$defs": {
      "Script": {
        "description": "A script to transformer otoroshi requests ",
        "properties": {
          "code": {
            "additionalProperties": {
              "type": "string"
            },
            "description": "The code of the script",
            "example": {
              "key": "value"
            },
            "type": "object"
          },
          "desc": {
            "additionalProperties": {
              "type": "string"
            },
            "description": "The description of the script",
            "example": {
              "key": "value"
            },
            "type": "object"
          },
          "id": {
            "description": "The id of the script",
            "example": "a string value",
            "type": "string"
          },
          "name": {
            "description": "The name of the script",
            "example": "a string value",
            "type": "string"
          }
        },
        "required": [
          "id",
          "name",
          "desc",
          "code"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://otoroshi-api.oto.tools//api/scripts/_compile"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "The result of the compilation of a Script",
        "**Key properties:**",
        {
          "$ul": [
            "**done**: Is the task done or not",
            [
              "**error**: The error of the compilation of a Script",
              {
                "$ul": [
                  "**column**: The column of the error",
                  "**file**: The file where the error is located",
                  "**line**: The line of the error",
                  "**message**: The message to display for the error",
                  "**rawMessage**: The raw message from the compiler"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
