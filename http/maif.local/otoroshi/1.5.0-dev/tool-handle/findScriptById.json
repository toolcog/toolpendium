{
  "name": "findScriptById",
  "description": "Get a script",
  "parameters": {
    "type": "object",
    "properties": {
      "scriptId": {
        "type": "string",
        "description": "The script id"
      }
    },
    "required": [
      "scriptId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://otoroshi-api.oto.tools//api/scripts/{scriptId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "A script to transformer otoroshi requests ",
        "**Key properties:**",
        {
          "$ul": [
            "**code**: The code of the script",
            "**desc**: The description of the script",
            "**id**: The id of the script",
            "**name**: The name of the script"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
