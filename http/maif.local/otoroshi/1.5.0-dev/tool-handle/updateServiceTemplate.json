{
  "name": "updateServiceTemplate",
  "description": "Update an error template to a service descriptor",
  "parameters": {
    "type": "object",
    "properties": {
      "serviceId": {
        "type": "string",
        "description": "The service id"
      },
      "body": {
        "$ref": "#/$defs/ErrorTemplate"
      }
    },
    "required": [
      "serviceId"
    ],
    "$defs": {
      "ErrorTemplate": {
        "description": "Error templates for a service descriptor",
        "properties": {
          "messages": {
            "additionalProperties": {
              "type": "string"
            },
            "description": "Map for custom messages",
            "example": {
              "key": "value"
            },
            "type": "object"
          },
          "serviceId": {
            "description": "The Id of the service for which the error template is enabled",
            "example": "a string value",
            "type": "string"
          },
          "template40x": {
            "description": "The html template for 40x errors",
            "example": "a string value",
            "type": "string"
          },
          "template50x": {
            "description": "The html template for 50x errors",
            "example": "a string value",
            "type": "string"
          },
          "templateBuild": {
            "description": "The html template for build page",
            "example": "a string value",
            "type": "string"
          },
          "templateMaintenance": {
            "description": "The html template for maintenance page",
            "example": "a string value",
            "type": "string"
          }
        },
        "required": [
          "serviceId",
          "template40x",
          "template50x",
          "templateBuild",
          "templateMaintenance",
          "messages"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "http://otoroshi-api.oto.tools//api/services/{serviceId}/template"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Error templates for a service descriptor",
        "**Key properties:**",
        {
          "$ul": [
            "**messages**: Map for custom messages",
            "**serviceId**: The Id of the service for which the error template is enabled",
            "**template40x**: The html template for 40x errors",
            "**template50x**: The html template for 50x errors",
            "**templateBuild**: The html template for build page",
            "**templateMaintenance**: The html template for maintenance page"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
