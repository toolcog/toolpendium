{
  "name": "patchGlobalAuthModule",
  "description": "Update one global auth. module config",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The auth. config id"
      },
      "body": {
        "$ref": "#/$defs/Patch"
      }
    },
    "required": [
      "id"
    ],
    "$defs": {
      "Patch": {
        "description": "A set of changes described in JSON Patch format: http://jsonpatch.com/ (RFC 6902)",
        "items": {
          "properties": {
            "op": {
              "enum": [
                "add",
                "replace",
                "remove",
                "copy",
                "test"
              ],
              "type": "string"
            },
            "path": {
              "example": "a string value",
              "type": "string"
            },
            "value": {}
          },
          "required": [
            "op",
            "path"
          ],
          "type": "object"
        },
        "type": "array"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "http://otoroshi-api.oto.tools//api/auths/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
