{
  "name": "patchDataExporterConfig",
  "description": "Update a data exporter config with a diff",
  "parameters": {
    "type": "object",
    "properties": {
      "dataExporterConfigId": {
        "type": "string",
        "description": "The data exporter config id"
      },
      "body": {
        "$ref": "#/$defs/Patch"
      }
    },
    "required": [
      "dataExporterConfigId"
    ],
    "$defs": {
      "Patch": {
        "description": "A set of changes described in JSON Patch format: http://jsonpatch.com/ (RFC 6902)",
        "items": {
          "properties": {
            "op": {
              "enum": [
                "add",
                "replace",
                "remove",
                "copy",
                "test"
              ],
              "type": "string"
            },
            "path": {
              "example": "a string value",
              "type": "string"
            },
            "value": {}
          },
          "required": [
            "op",
            "path"
          ],
          "type": "object"
        },
        "type": "array"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "http://otoroshi-api.oto.tools//api/data-exporter-configs/{dataExporterConfigId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Settings to export Otorshi events",
        "**Key properties:**",
        {
          "$ul": [
            "**bufferSize**: buffer size",
            "**config**: Data Exporter config",
            "**desc**: Description",
            "**enabled**: Boolean",
            [
              "**filtering**",
              {
                "$ul": [
                  "**exclude**: Excluding pattern",
                  "**include**: Including pattern"
                ]
              }
            ],
            "**groupDuration**: duration",
            "**groupSize**: Group size",
            "**id**: Id",
            "**jsonWorkers**: nb workers",
            [
              "**location**",
              {
                "$ul": [
                  "**teams**: Team ids",
                  "**tenant**: Tenant id"
                ]
              }
            ],
            "**metadata**: Metadata",
            "**name**: Name",
            "**projection**: projection",
            "**sendWorkers**: send workers",
            "**typ**: Type of data exporter"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
