{
  "name": "serviceAddTarget",
  "description": "Add a target to a service descriptor",
  "parameters": {
    "type": "object",
    "properties": {
      "serviceId": {
        "type": "string",
        "description": "The service id"
      },
      "body": {
        "$ref": "#/$defs/Target"
      }
    },
    "required": [
      "serviceId"
    ],
    "$defs": {
      "Target": {
        "description": "A Target is where an HTTP call will be forwarded in the end from a service domain",
        "properties": {
          "host": {
            "description": "The host on which the HTTP call will be forwarded. Can be a domain name, or an IP address. Can also have a port",
            "example": "www.google.com",
            "format": "hostname",
            "type": "string"
          },
          "scheme": {
            "description": "The protocol used for communication. Can be http or https",
            "example": "a string value",
            "type": "string"
          }
        },
        "required": [
          "host",
          "scheme"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://otoroshi-api.oto.tools//api/services/{serviceId}/targets"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "A Target is where an HTTP call will be forwarded in the end from a service domain",
        "**Key properties:**",
        {
          "$ul": [
            "**host**: The host on which the HTTP call will be forwarded. Can be a domain name, or an IP address. Can also have a port",
            "**scheme**: The protocol used for communication. Can be http or https"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
