{
  "name": "POST_videos-videoId-captions-language",
  "description": "Upload a VTT file to add captions to your video.\n Read our [captioning tutorial](https://api.video/blog/tutorials/adding-captions) for more details.",
  "parameters": {
    "type": "object",
    "properties": {
      "videoId": {
        "type": "string",
        "description": "The unique identifier for the video you want to add a caption to."
      },
      "language": {
        "type": "string",
        "description": "A valid BCP 47 language representation."
      },
      "body": {
        "$ref": "#/$defs/captions-upload-payload"
      }
    },
    "required": [
      "videoId",
      "language"
    ],
    "$defs": {
      "captions-upload-payload": {
        "properties": {
          "file": {
            "description": "The video text track (VTT) you want to upload.",
            "example": "https://cdn.api.video/vod/vi3N6cDinStg3oBbN79GklWS/captions/en.vtt",
            "format": "binary",
            "type": "string"
          }
        },
        "required": [
          "file"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://ws.api.video/videos/{videoId}/captions/{language}"
    },
    "body": {
      "$": "body",
      "encode": "multipart"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Subtitle"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**default**: Whether you will have subtitles or not. True for yes you will have subtitles, false for no you will not have subtitles. (default: false)",
            "**src**",
            "**srclang**",
            "**uri**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "BadRequest"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**name**",
            "**problems**",
            "**status**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "NotFound"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**name**",
            "**status**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
