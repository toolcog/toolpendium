{
  "name": "GET_videos-videoId-captions",
  "description": "Retrieve a list of available captions for the videoId you provide.",
  "parameters": {
    "type": "object",
    "properties": {
      "videoId": {
        "type": "string",
        "description": "The unique identifier for the video you want to retrieve a list of captions for."
      },
      "currentPage": {
        "default": 1,
        "type": "integer",
        "description": "Choose the number of search results to return per page. Minimum value: 1"
      },
      "pageSize": {
        "default": 25,
        "type": "integer",
        "description": "Results per page. Allowed values 1-100, default is 25."
      }
    },
    "required": [
      "videoId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ws.api.video/videos/{videoId}/captions{?currentPage,pageSize}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "VideoCaptions"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            [
              "**pagination**",
              {
                "$ul": [
                  "**currentPage**: The current page index.",
                  "**currentPageItems**: The number of items on the current page.",
                  "**itemsTotal**: Total number of items that exist.",
                  "**links**",
                  "**pageSize**: Maximum number of item per page.",
                  "**pagesTotal**: Number of items listed in the current page."
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "NotFound"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**name**",
            "**status**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
