{
  "name": "PATCH_videos-videoId-captions-language",
  "description": "To have the captions on automatically, use this PATCH to set default: true.",
  "parameters": {
    "type": "object",
    "properties": {
      "videoId": {
        "type": "string",
        "description": "The unique identifier for the video you want to have automatic captions for. "
      },
      "language": {
        "type": "string",
        "description": "A valid [BCP 47](https://github.com/libyal/libfwnt/wiki/Language-Code-identifiers) language representation."
      },
      "body": {
        "$ref": "#/$defs/captions-update-payload"
      }
    },
    "required": [
      "videoId",
      "language"
    ],
    "$defs": {
      "captions-update-payload": {
        "properties": {
          "default": {
            "type": "boolean"
          }
        },
        "title": "UpdateCaptionPayload",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://ws.api.video/videos/{videoId}/captions/{language}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Subtitle"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**default**: Whether you will have subtitles or not. True for yes you will have subtitles, false for no you will not have subtitles. (default: false)",
            "**src**",
            "**srclang**",
            "**uri**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "BadRequest"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**name**",
            "**problems**",
            "**status**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "NotFound"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**name**",
            "**status**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
