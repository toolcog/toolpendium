{
  "name": "topic-sentiment",
  "description": "Extracts topics and sentiments and relates them.",
  "parameters": {
    "type": "object",
    "properties": {
      "domain": {
        "enum": [
          "Ecom",
          "Employee",
          "Hotel",
          "Restaurant"
        ],
        "type": "string",
        "description": "Provide analysis domain for better extraction (optional)"
      },
      "body": {
        "$ref": "#/$defs/PostRequest"
      }
    },
    "$defs": {
      "PostRequest": {
        "items": {
          "$ref": "#/$defs/Post"
        },
        "maxItems": 32,
        "minItems": 1,
        "title": "Posts",
        "type": "array"
      },
      "Post": {
        "properties": {
          "id": {
            "description": "id of the post.",
            "example": "1",
            "type": "string"
          },
          "language": {
            "description": "language_code of the text.",
            "example": "en",
            "type": "string"
          },
          "text": {
            "description": "the text to be analysed.",
            "example": "I love the service",
            "type": "string"
          }
        },
        "required": [
          "language",
          "text"
        ],
        "title": "Post",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.symanto.net/topic-sentiment{?domain}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**id**",
            "**language**",
            "**sentiments**",
            "**text**",
            "**topicSentiments**",
            "**topics**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.id"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
