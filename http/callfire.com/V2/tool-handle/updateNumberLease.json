  "name": "updateNumberLease",
  "description": "Updates a number lease instance. Ability to turn on/off autoRenew and toggle call/text features for a particular number",
  "parameters": {
    "type": "object",
    "properties": {
      "number": {
        "type": "string",
        "description": "A phone number in E.164 format (11-digit). Example: 12132000384"
      },
      "body": {
        "$ref": "#/components/schemas/NumberLease",
        "description": "A NumberLease object to update"
      }
    },
    "required": [
      "number"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.callfire.com/v2/numbers/leases/{number}"
