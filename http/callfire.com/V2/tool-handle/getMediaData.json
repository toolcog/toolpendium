{
  "name": "getMediaData",
  "description": "Download a media file. Available types of files: bmp, gif, jpg, m4a, mp3, mp4, png, wav. Content type in response depends on 'extension' parameter, e.g. image/jpeg, image/png, audio/mp3, etc",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "An id of a media resource"
      },
      "extension": {
        "type": "string",
        "description": "Media file type. Available types: bmp, gif, jpg, m4a, mp3, mp4, png, wav"
      }
    },
    "required": [
      "id",
      "extension"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.callfire.com/v2/media/{id}.{extension}"
    }
  },
