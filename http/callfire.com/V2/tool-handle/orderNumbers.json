{
  "name": "orderNumbers",
  "description": "Purchase numbers. There are many ways to purchase a number. Set either 'tollFreeCount' or 'localCount' along with some querying fields to purchase numbers by bulk query. Set the list of numbers to purchase by list. Available numbers will be purchased using CallFire credits owned by the user. Make sure the account has enough credits before trying to purchase",
  "parameters": {
    "type": "object",
    "properties": {
      "fields": {
        "type": "string",
        "description": "Limit fields received in response. E.g. fields: id, name or fields items (id, name), see more at [partial response](https://developers.callfire.com/docs.html#partial-response) page."
      },
      "body": {
        "$ref": "#/components/schemas/NumberPurchaseRequest",
        "description": "Request object contains a list of numbers to buy, you can filter the numbers by their region information: city, state, zipcode, etc"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.callfire.com/v2/orders/numbers{?fields}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
