{
  "name": "getContactHistory",
  "description": "Searches for all texts and calls attributed to a contact. Returns a list of calls and texts a contact has been involved with",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "An Id of a contact"
      },
      "limit": {
        "format": "int32",
        "type": "integer",
        "description": "To set the maximum number of records to return in a paged list response. The default is 100"
      },
      "offset": {
        "format": "int32",
        "type": "integer",
        "description": "Offset to the start of a given page. The default is 0. Check [pagination](https://developers.callfire.com/docs.html#pagination) page for more information about pagination in CallFire API."
      },
      "fields": {
        "type": "string",
        "description": "Limit fields received in response. E.g. fields: id, name or fields items (id, name), see more at [partial response](https://developers.callfire.com/docs.html#partial-response) page."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.callfire.com/v2/contacts/{id}/history{?limit,offset,fields}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Contains history of all calls and texts addressed to a given contact",
        "**Key properties:**",
        {
          "$ul": [
            "**calls**: List of Call objects addressed to a given contact",
            "**id**: An id of a contact",
            "**texts**: List of Text objects addressed to a given contact"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
