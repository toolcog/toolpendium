{
  "name": "sendVerificationCodeToCallerId",
  "description": "Generates and sends a verification code to the phone number provided in the path. The verification code is delivered via a phone call. This code needs to be submitted to the verify caller id API endpoint to complete verification. For authentication use api credentials.",
  "parameters": {
    "type": "object",
    "properties": {
      "callerid": {
        "type": "string",
        "description": "A phone number in E.164 format (11-digit) which needs to be verified. Example: 12132000384"
      }
    },
    "required": [
      "callerid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.callfire.com/v2/me/callerids/{callerid}"
    }
  },
