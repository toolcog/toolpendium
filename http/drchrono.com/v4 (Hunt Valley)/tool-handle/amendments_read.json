{
  "name": "amendments_read",
  "description": "Retrieve an existing patient amendment, you can only interact with amendments created by your API application",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "description": "",
        "title": "",
        "type": "string"
      },
      "appointment": {
        "description": "",
        "title": "appointment",
        "type": "integer"
      },
      "patient": {
        "description": "",
        "title": "patient",
        "type": "integer"
      },
      "doctor": {
        "description": "",
        "title": "doctor",
        "type": "integer"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://app.drchrono.com/api/amendments/{id}{?appointment,patient,doctor}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**amendment_file**: A PDF file containing the amended information for the patient's record",
            "**amendment_name**: ",
            "**appointment**: ID of the appointment to which the amendment applies, if any. If present, the `amendment_file` will be appended to the clinical note for this appointment.",
            "**comments**: ",
            "**doctor**: ID of the doctor who owns the amendment",
            "**id**: ",
            "**patient**: ID of the patient to whom the amendment applies"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
