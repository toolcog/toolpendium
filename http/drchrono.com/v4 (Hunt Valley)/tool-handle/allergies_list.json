{
  "name": "allergies_list",
  "description": "Retrieve or search patient allergies",
  "parameters": {
    "type": "object",
    "properties": {
      "cursor": {
        "description": "The pagination cursor value.",
        "title": "Cursor",
        "type": "string"
      },
      "page_size": {
        "description": "Number of results to return per page.",
        "title": "Page size",
        "type": "integer"
      },
      "patient": {
        "description": "",
        "title": "patient",
        "type": "integer"
      },
      "doctor": {
        "description": "",
        "title": "doctor",
        "type": "integer"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://app.drchrono.com/api/allergies{?cursor,page_size,patient,doctor}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": ""
        },
        "Paginated Result",
        "**Key properties:**",
        {
          "$ul": [
            "**data**: result data",
            "**next**: Next Paginated page",
            "**previous**: Previous paginated page"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
