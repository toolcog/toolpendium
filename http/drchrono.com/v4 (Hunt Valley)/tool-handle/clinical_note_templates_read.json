{
  "name": "clinical_note_templates_read",
  "description": "Retrieve an existing clinical note tempalte",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "description": "",
        "title": "",
        "type": "string"
      },
      "doctor": {
        "description": "",
        "title": "doctor",
        "type": "integer"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://app.drchrono.com/api/clinical_note_templates/{id}{?doctor}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**archived**: Indicates that the doctor has soft-deleted this template, and will not use it for future appointments",
            "**clinical_note_fields**: clinical note fields",
            "**doctor**: ",
            "**id**: ",
            "**is_onpatient**: ",
            "**is_persistent**: If this is true, this report will be the same across all notes",
            "**name**: ",
            [
              "**order**: Order of templates",
              {
                "$ul": [
                  "**on_complete_note**: Order of the template on complete notes",
                  "**on_ipad**: Order of the template on iPad"
                ]
              }
            ],
            "**updated_at**: "
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
