{
  "name": "amendments_create",
  "description": "Create patient amendments to a patient's clinical records",
  "parameters": {
    "type": "object",
    "properties": {
      "appointment": {
        "description": "",
        "title": "appointment",
        "type": "integer"
      },
      "patient": {
        "description": "",
        "title": "patient",
        "type": "integer"
      },
      "doctor": {
        "description": "",
        "title": "doctor",
        "type": "integer"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://app.drchrono.com/api/amendments{?appointment,patient,doctor}"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**amendment_file**: A PDF file containing the amended information for the patient's record",
            "**amendment_name**: ",
            "**appointment**: ID of the appointment to which the amendment applies, if any. If present, the `amendment_file` will be appended to the clinical note for this appointment.",
            "**comments**: ",
            "**doctor**: ID of the doctor who owns the amendment",
            "**id**: ",
            "**patient**: ID of the patient to whom the amendment applies"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
