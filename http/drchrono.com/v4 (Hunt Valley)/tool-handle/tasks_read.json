{
  "name": "tasks_read",
  "description": "Retrieve an existing task",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "description": "",
        "title": "",
        "type": "string"
      },
      "status": {
        "description": "",
        "title": "status",
        "type": "integer"
      },
      "category": {
        "description": "",
        "title": "category",
        "type": "integer"
      },
      "due_at_date": {
        "description": "",
        "title": "due_at_date",
        "type": "string"
      },
      "due_at_unknown": {
        "description": "",
        "title": "due_at_unknown",
        "type": "string"
      },
      "since": {
        "description": "",
        "title": "since",
        "type": "string"
      },
      "due_at_since": {
        "description": "",
        "title": "due_at_since",
        "type": "string"
      },
      "assignee_user": {
        "description": "",
        "title": "assignee_user",
        "type": "integer"
      },
      "assignee_group": {
        "description": "",
        "title": "assignee_group",
        "type": "integer"
      },
      "due_at_range": {
        "description": "",
        "title": "due_at_range",
        "type": "string"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://app.drchrono.com/api/tasks/{id}{?status,category,due_at_date,due_at_unknown,since,due_at_since,assignee_user,assignee_group,due_at_range}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**archived**: ",
            "**assigned_by**: ID of `/api/users/` who assigned the task",
            "**assignee_group**: Either `assignee_user` or `assignee_group` should be set",
            "**assignee_user**: Either `assignee_user` or `assignee_group` should be set",
            "**associated_items**: Associated task items",
            "**category**: ",
            "**created_at**: ",
            "**created_by**: ID of `/api/users` who created the task",
            [
              "**due_date**: When the task is due",
              {
                "$ul": [
                  "**time**: Due date time"
                ]
              }
            ],
            "**id**: ",
            "**notes**: Additional notes of the task",
            "**priority**: Can be one of the following 10(Low), 20(Medium), 30(High), 40(Urgent)",
            "**status**: ",
            "**title**: ",
            "**updated_at**: "
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
