{
  "name": "lab_tests_read",
  "description": "Retrieve an existing lab test",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "description": "",
        "title": "",
        "type": "string"
      },
      "order": {
        "description": "",
        "title": "order",
        "type": "integer"
      },
      "doctor": {
        "description": "",
        "title": "doctor",
        "type": "integer"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://app.drchrono.com/api/lab_tests/{id}{?order,doctor}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: ",
            "**collection_date**: The date the specimen were collected",
            "**description**: Short description of the ICD-10 code",
            "**id**: ",
            "**internal_notes**: Notes which are meant for, and read by, the labs",
            "**lab_order**: ID of associated lab order",
            "**name**: Name for the test",
            "**report_notes**: Notes which are not meant for labs, but are copied on the results.",
            "**specimen_condition**: ",
            "**specimen_source**: ",
            "**specimen_total_volume**: ",
            "**status**: One of `\"preliminary\"`, `\"pending\"`, `\"correction\"`, `\"final\"` or `\"canceled\"`. Defaults to `\"preliminary\"`"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
