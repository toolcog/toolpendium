{
  "name": "task_notes_read",
  "description": "Retrieve an existing task note",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "description": "",
        "title": "",
        "type": "string"
      },
      "task": {
        "description": "",
        "title": "task",
        "type": "integer"
      },
      "since": {
        "description": "",
        "title": "since",
        "type": "string"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://app.drchrono.com/api/task_notes/{id}{?task,since}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**archived**: If the task note is archived or not",
            "**created_at**: ",
            "**created_by**: ID of the `/api/users` who created the note",
            "**id**: ",
            "**task**: ID of task this note is related with",
            "**text**: Content of the task note",
            "**updated_at**: "
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
