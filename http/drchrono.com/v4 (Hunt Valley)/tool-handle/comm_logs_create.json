{
  "name": "comm_logs_create",
  "description": "Create communication (phone call) logs",
  "parameters": {
    "type": "object",
    "properties": {
      "since": {
        "description": "",
        "title": "since",
        "type": "string"
      },
      "patient": {
        "description": "",
        "title": "patient",
        "type": "integer"
      },
      "doctor": {
        "description": "",
        "title": "doctor",
        "type": "integer"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://app.drchrono.com/api/comm_logs{?since,patient,doctor}"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**appointment**: Appointment related with the phone call log",
            "**archived**: If this phone call log is archived or not",
            "**author**: Author of post.",
            "**cash_charged**: Amount of cash needs to be charged",
            "**created_at**: ",
            "**doctor**: ",
            "**duration**: Duration of the phone call",
            "**id**: ",
            "**message**: Additional message for the phone call",
            "**patient**: ",
            "**scheduled_time**: Date of phone call, if `appointment` is set, this field will be set as the `scheduled_time` of that appointment",
            "**title**: Title of this log",
            "**type**: Type of phone call log",
            "**updated_at**: "
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
