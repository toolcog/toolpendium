{
  "name": "problems_create",
  "description": "Create patient problems",
  "parameters": {
    "type": "object",
    "properties": {
      "patient": {
        "description": "",
        "title": "patient",
        "type": "integer"
      },
      "doctor": {
        "description": "",
        "title": "doctor",
        "type": "integer"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://app.drchrono.com/api/problems{?patient,doctor}"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**date_changed**: ",
            "**date_diagnosis**: ",
            "**date_onset**: ",
            "**description**: ",
            "**doctor**: ",
            "**icd_code**: ICD9 or ICD10 code for the problem",
            "**icd_version**: Either `9` or `10`. If omitted in writing, default to 10.",
            "**id**: ",
            "**info_url**: External URL with more information about the problem, intended for patient education",
            "**name**: Name of the problem",
            "**notes**: Any additional notes by the provider",
            "**patient**: ",
            "**snomed_ct_code**: SnoMED code for the problem",
            "**status**: Either `active`, `inactive` or `resolved`. If omitted in writing, default to `active`"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
