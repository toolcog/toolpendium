{
  "name": "Activities_PutActivity",
  "description": "Updates an Activity.  The body of the PUT is the updated Activity.  When successful, the response is empty.\r\n            If unsuccessful, an appropriate ApiError is returned.",
  "parameters": {
    "type": "object",
    "properties": {
      "activityID": {
        "format": "int32",
        "type": "integer",
        "description": "The id of the activity to update"
      },
      "body": {
        "$ref": "#/components/schemas/BuildSystem.Shared.DTO.Activity",
        "description": "The updated activity"
      }
    },
    "required": [
      "activityID",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://secure.agco-ats.com/api/v2/activities/{activityID}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**DeveloperMessage**",
            "**ErrorCode**",
            "**MoreInfo**",
            "**UserMessage**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
