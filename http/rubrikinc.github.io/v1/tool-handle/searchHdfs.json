{
  "name": "searchHdfs",
  "description": "Search for a file within the HDFS directory. Search using full path prefix or filename prefix.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "HDFS directory ID to search."
      },
      "path": {
        "type": "string",
        "description": "The path query. The query can be a path refix or a filename prefix."
      },
      "limit": {
        "format": "int32",
        "type": "integer",
        "description": "Maximum number of entries in the response."
      },
      "cursor": {
        "type": "string",
        "description": "Pagination cursor returned by the previous request."
      }
    },
    "required": [
      "id",
      "path"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/hdfs/{id}/search{?path,limit,cursor}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**: List of matching objects.",
            "**hasMore**: If there is more.",
            "**total**: Total list responses."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
