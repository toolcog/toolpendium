{
  "name": "changeClusterNodeHostnames",
  "description": "Change hostnames for multiple nodes at a time, for a specified Rubrik cluster.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "default": "me",
        "type": "string",
        "description": "ID of the Rubrik cluster or *me* for self."
      },
      "body": {
        "items": {
          "$ref": "#/$defs/NodeHostnameInfo"
        },
        "type": "array",
        "description": "Node ID to hostname mapping."
      }
    },
    "required": [
      "id",
      "body"
    ],
    "$defs": {
      "NodeHostnameInfo": {
        "properties": {
          "hostname": {
            "description": "Hostname of a Rubrik node.",
            "type": "string"
          },
          "id": {
            "description": "ID of a Rubrik node.",
            "type": "string"
          }
        },
        "required": [
          "hostname",
          "id"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "/api/v1/cluster/{id}/node_hostname"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
