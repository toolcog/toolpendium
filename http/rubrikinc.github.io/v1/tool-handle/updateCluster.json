{
  "name": "updateCluster",
  "description": "Change the properties of a specified Rubrik cluster. Changes to cluster name could take upto 10 minutes to be propagated to all nodes.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "default": "me",
        "type": "string",
        "description": "ID of a Rubrik cluster object, or use *me* for the Rubrik cluster that is hosting the current API session."
      },
      "body": {
        "$ref": "#/components/schemas/ClusterUpdate",
        "description": "Array that contains the changed information for the Rubrik cluster object."
      }
    },
    "required": [
      "id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "/api/v1/cluster/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**acceptedEulaVersion**: Version of the EULA accepted by admin.",
            "**apiVersion**: REST API version.",
            [
              "**geolocation**",
              {
                "$ul": [
                  "**address**: Address information for mapping the location of the Rubrik cluster. This"
                ]
              }
            ],
            "**id**: ID of the Rubrik cluster.",
            "**latestEulaVersion**: Latest version of the EULA that must be accepted by admin.",
            "**name**: Name of the cluster.",
            [
              "**timezone**",
              {
                "$ul": [
                  "**timezone**: Cluster time zone."
                ]
              }
            ],
            "**version**: Rubrik cluster software version."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
