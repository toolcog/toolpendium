{
  "name": "getNumProxiesNeeded",
  "description": "Get the number of HotAdd proxies that need to be deployed to the vCenter to support the maximum number of ingest jobs.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The ID of the vCenter server for which to get the number of proxies needed."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/vmware/vcenter/{id}/hotadd/needed"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**needed**: The number of HotAdd proxies the vCenter requires."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
