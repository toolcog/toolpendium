{
  "name": "getPolicies",
  "description": "Retrieves the details of all the health monitor policies when policy IDs are not specified in the query parameter. If the request includes a list of policy IDs in the query parameter, the response will include the details of the specified policies.",
  "parameters": {
    "type": "object",
    "properties": {
      "policy_ids": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Optional list of policy IDs."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/health_monitor/policies{?policy_ids}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**causes**",
            "**configParams**",
            "**dependencies**",
            "**description**",
            "**isEnabled**",
            "**isHidden**",
            "**kbInfo**",
            [
              "**notificationConfig**",
              {
                "$ul": [
                  [
                    "**criticalDetails**",
                    {
                      "$ul": [
                        [
                          "**action**",
                          {
                            "$ul": [
                              "**actionString**: Action script to run.",
                              "**isEnabled**: Flag to determine whether action script needs to be run."
                            ]
                          }
                        ],
                        "**failureWindow**: Window to check for number of failures.",
                        "**numFailures**: Number of failures before notification is triggered."
                      ]
                    }
                  ],
                  [
                    "**infoDetails**",
                    {
                      "$ul": [
                        [
                          "**action**",
                          {
                            "$ul": [
                              "**actionString**: Action script to run.",
                              "**isEnabled**: Flag to determine whether action script needs to be run."
                            ]
                          }
                        ],
                        "**failureWindow**: Window to check for number of failures.",
                        "**numFailures**: Number of failures before notification is triggered."
                      ]
                    }
                  ],
                  "**name**: Name of notification config.",
                  "**notificationMessage**: Notification Message.",
                  "**notificationType**: Notification type.",
                  [
                    "**warnDetails**",
                    {
                      "$ul": [
                        [
                          "**action**",
                          {
                            "$ul": [
                              "**actionString**: Action script to run.",
                              "**isEnabled**: Flag to determine whether action script needs to be run."
                            ]
                          }
                        ],
                        "**failureWindow**: Window to check for number of failures.",
                        "**numFailures**: Number of failures before notification is triggered."
                      ]
                    }
                  ]
                ]
              }
            ],
            "**policyId**",
            "**policyName**",
            "**policyType**: Type of policy.",
            "**remedies**",
            "**runInState**",
            "**scheduleFreqInSec**",
            "**scope**: Scope of a policy.",
            "**script**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
