{
  "name": "queryCertificates",
  "description": "Get all certificates.",
  "parameters": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Search by certificate name."
      },
      "has_key": {
        "type": "boolean",
        "description": "Search certificates by whether or not they contain a private key.\n"
      },
      "description": {
        "type": "string",
        "description": "Search certificates by description."
      },
      "expiration": {
        "type": "string",
        "description": "Search certificates by expiration."
      },
      "include_expired": {
        "type": "boolean",
        "description": "Specifies whether to include expired certificates. The default is false."
      },
      "sort_by": {
        "default": "Name",
        "enum": [
          "name",
          "description",
          "hasKey",
          "expiration"
        ],
        "type": "string",
        "description": "Attribute by which the list of certificates is sorted."
      },
      "sort_order": {
        "default": "asc",
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string",
        "description": "Sort order, either ascending or descending."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/certificate{?name,has_key,description,expiration,include_expired,sort_by,sort_order}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**: List of matching objects.",
            "**hasMore**: If there is more.",
            "**total**: Total list responses."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
