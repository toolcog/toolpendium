{
  "name": "getRolesForPrincipals",
  "description": "Get a list of role information for all roles assigned to the principals.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "principals": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "IDs of the principals."
      }
    },
    "required": [
      "principals"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/principal/role{?principals}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**principal**: The principal that is assigned the roles.",
            "**roles**: The roles that are assigned to the principal."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
