{
  "name": "createHdfsBackupJob",
  "description": "Create on-demand backup request for HDFS directory.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "ID of the HDFS directory."
      },
      "body": {
        "$ref": "#/components/schemas/BaseOnDemandSnapshotConfig",
        "description": "Configuration for the on-demand backup."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "/api/v1/hdfs/{id}/snapshot"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "202": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**endTime**: The end time of the request.",
            [
              "**error**",
              {
                "$ul": [
                  "**message**: The error message for failed IDs."
                ]
              }
            ],
            "**id**: The ID of the request object used to poll the status.",
            "**links**: References to any related objects.",
            "**nodeId**: The ID of the node where the job ran.",
            "**progress**: The current percentage progress of the asynchronous request.",
            "**startTime**: The start time of the request.",
            "**status**: Status of the ID."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
