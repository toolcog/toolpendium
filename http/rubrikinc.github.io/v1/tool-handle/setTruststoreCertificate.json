{
  "name": "setTruststoreCertificate",
  "description": "Setting the given certificate for each node's truststores.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "default": "me",
        "type": "string",
        "description": "ID of the Rubrik cluster or *me* for self."
      },
      "body": {
        "items": {
          "$ref": "#/$defs/TruststorePayload"
        },
        "type": "array",
        "description": "Request to update certificate for truststore."
      }
    },
    "required": [
      "id",
      "body"
    ],
    "$defs": {
      "TruststorePayload": {
        "properties": {
          "certIds": {
            "items": {
              "description": "Certificate to associate with truststore.",
              "type": "string"
            },
            "type": "array"
          },
          "truststoreType": {
            "$ref": "#/$defs/TruststoreType"
          }
        },
        "required": [
          "certIds",
          "truststoreType"
        ],
        "type": "object"
      },
      "TruststoreType": {
        "description": "The truststore type.",
        "enum": [
          "System",
          "Gcp"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "/api/v1/cluster/{id}/security/truststore"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
