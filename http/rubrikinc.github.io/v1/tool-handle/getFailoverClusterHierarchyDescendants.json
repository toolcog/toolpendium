{
  "name": "getFailoverClusterHierarchyDescendants",
  "description": "Retrieve the list of descendant objects for the specified parent.",
  "parameters": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Filter a response by making an infix comparison of the failover cluster name or failover cluster app name."
      },
      "operating_system_type": {
        "enum": [
          "ANY",
          "AIX",
          "HPUX",
          "Linux",
          "SunOS",
          "UnixLike",
          "Windows"
        ],
        "type": "string",
        "description": "Filter a response based on the failover cluster operating system type."
      },
      "id": {
        "type": "string",
        "description": "ID of the parent failover cluster hierarchy object. To get top-level nodes, use **root** as the ID."
      },
      "object_type": {
        "enum": [
          "FailoverClusterApp",
          "Fileset",
          "HostFailoverCluster",
          "WindowsCluster"
        ],
        "type": "string",
        "description": "Filter by node object type."
      },
      "primary_cluster_id": {
        "type": "string",
        "description": "Filter by primary cluster ID, or **local**."
      },
      "limit": {
        "format": "int32",
        "minimum": 0,
        "type": "integer",
        "description": "An integer that specifies the maximum number of matches to return."
      },
      "offset": {
        "format": "int32",
        "minimum": 0,
        "type": "integer",
        "description": "An integer that specifies a number of initial matches to ignore."
      },
      "configured_sla_domain_id": {
        "type": "string",
        "description": "Filter by configured SLA domain."
      },
      "sla_assignment": {
        "enum": [
          "Derived",
          "Direct",
          "Unassigned"
        ],
        "type": "string",
        "description": "Filter by SLA assignment type."
      },
      "sort_by": {
        "enum": [
          "name",
          "effectiveSlaDomainName"
        ],
        "type": "string",
        "description": "Attribute to sort the results on."
      },
      "sort_order": {
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string",
        "description": "Sort order, either ascending or descending."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/failover_cluster/hierarchy/{id}/descendants{?name,operating_system_type,object_type,primary_cluster_id,limit,offset,configured_sla_domain_id,sla_assignment,sort_by,sort_order}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**: List of matching objects.",
            "**hasMore**: If there is more.",
            "**total**: Total list responses."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
