{
  "name": "updateHdfsTemplate",
  "description": "Modify the values of specified HDFS directory template.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "ID of the HDFS directory template to update."
      },
      "body": {
        "$ref": "#/components/schemas/HdfsTemplatePatch",
        "description": "Provide an object with the HDFS directory template definition."
      }
    },
    "required": [
      "id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "/api/v1/hdfs_template/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**exceptions**",
            "**excludes**",
            "**includes**",
            "**name**",
            "**hostCount**: Number of hosts where this template has been applied.",
            "**id**",
            "**primaryClusterId**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
