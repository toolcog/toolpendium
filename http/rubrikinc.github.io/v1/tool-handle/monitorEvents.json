{
  "name": "monitorEvents",
  "description": "Gets notifications about events from a specified set of possible events.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "event_notification_query": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Specifies a list of events to monitor for notifications."
      }
    },
    "required": [
      "event_notification_query"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/cluster/me/upgrade/monitor_events{?event_notification_query}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**event**: An event name.",
            "**time**: Timestamp of the event in ISO8601 format."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
