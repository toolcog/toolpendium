{
  "name": "updateVirtualDisk",
  "description": "Update a specific Virtual Disk.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "ID of the Virtual Disk."
      },
      "body": {
        "$ref": "#/components/schemas/VirtualDiskUpdate",
        "description": "Virtual Disk update information."
      }
    },
    "required": [
      "id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "/api/v1/vmware/vm/virtual_disk/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**deviceKey**: Unique and reusable key that vSphere uses to identify VMDK files and other devices in the hardware of a virtual machine.",
            "**excludeFromSnapshots**",
            "**fileName**",
            "**id**",
            "**size**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
