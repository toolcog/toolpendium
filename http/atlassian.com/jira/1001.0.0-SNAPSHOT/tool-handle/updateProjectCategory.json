{
  "name": "updateProjectCategory",
  "description": "Updates a project category.\n\n**[Permissions](#permissions) required:** *Administer Jira* [global permission](https://confluence.atlassian.com/x/x4dKLg).",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int64",
        "type": "integer"
      },
      "body": {
        "$ref": "#/$defs/ProjectCategory"
      }
    },
    "required": [
      "id",
      "body"
    ],
    "$defs": {
      "ProjectCategory": {
        "additionalProperties": false,
        "description": "A project category.",
        "properties": {
          "description": {
            "description": "The description of the project category.",
            "type": "string"
          },
          "id": {
            "description": "The ID of the project category.",
            "readOnly": true,
            "type": "string"
          },
          "name": {
            "description": "The name of the project category. Required on create, optional on update.",
            "type": "string"
          },
          "self": {
            "description": "The URL of the project category.",
            "format": "uri",
            "readOnly": true,
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/projectCategory/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "A project category.",
        "**Key properties:**",
        {
          "$ul": [
            "**description**: The name of the project category.",
            "**id**: The ID of the project category.",
            "**name**: The description of the project category.",
            "**self**: The URL of the project category."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
