{
  "name": "getAllSystemAvatars",
  "description": "Returns a list of system avatar details by owner type, where the owner types are issue type, project, or user.\n\nThis operation can be accessed anonymously.\n\n**[Permissions](#permissions) required:** None.",
  "parameters": {
    "type": "object",
    "properties": {
      "type": {
        "enum": [
          "issuetype",
          "project",
          "user"
        ],
        "example": "project",
        "type": "string",
        "description": "The avatar type."
      }
    },
    "required": [
      "type"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/avatar/{type}/system"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "List of system avatars.",
        "**Key properties:**",
        {
          "$ul": [
            "**system**: A list of avatar details."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
