{
  "name": "moveScreenTab",
  "description": "Moves a screen tab.\n\n**[Permissions](#permissions) required:** *Administer Jira* [global permission](https://confluence.atlassian.com/x/x4dKLg).",
  "parameters": {
    "type": "object",
    "properties": {
      "screenId": {
        "format": "int64",
        "type": "integer",
        "description": "The ID of the screen."
      },
      "tabId": {
        "format": "int64",
        "type": "integer",
        "description": "The ID of the screen tab."
      },
      "pos": {
        "format": "int32",
        "type": "integer",
        "description": "The position of tab. The base index is 0."
      }
    },
    "required": [
      "screenId",
      "tabId",
      "pos"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/screens/{screenId}/tabs/{tabId}/move/{pos}"
    }
  },
  "responses": {
    "204": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
