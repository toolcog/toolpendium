{
  "name": "toggleFeatureForProject",
  "description": "Sets the state of a project feature.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectIdOrKey": {
        "type": "string",
        "description": "The ID or (case-sensitive) key of the project."
      },
      "featureKey": {
        "type": "string",
        "description": "The key of the feature."
      },
      "body": {
        "$ref": "#/components/schemas/ProjectFeatureState",
        "description": "Details of the feature state change."
      }
    },
    "required": [
      "projectIdOrKey",
      "featureKey",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/project/{projectIdOrKey}/features/{featureKey}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "The list of features on a project.",
        "**Key properties:**",
        {
          "$ul": [
            "**features**: The project features."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
