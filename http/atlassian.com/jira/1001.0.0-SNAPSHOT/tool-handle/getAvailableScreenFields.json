{
  "name": "getAvailableScreenFields",
  "description": "Returns the fields that can be added to a tab on a screen.\n\n**[Permissions](#permissions) required:** *Administer Jira* [global permission](https://confluence.atlassian.com/x/x4dKLg).",
  "parameters": {
    "type": "object",
    "properties": {
      "screenId": {
        "format": "int64",
        "type": "integer",
        "description": "The ID of the screen."
      }
    },
    "required": [
      "screenId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/screens/{screenId}/availableFields"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "A screen tab field.",
        "**Key properties:**",
        {
          "$ul": [
            "**id**: The ID of the screen tab field.",
            "**name**: The name of the screen tab field. Required on create and update. The maximum length is 255 characters."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
