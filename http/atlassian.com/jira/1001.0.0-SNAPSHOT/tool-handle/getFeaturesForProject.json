{
  "name": "getFeaturesForProject",
  "description": "Returns the list of features for a project.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectIdOrKey": {
        "type": "string",
        "description": "The ID or (case-sensitive) key of the project."
      }
    },
    "required": [
      "projectIdOrKey"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/project/{projectIdOrKey}/features"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "The list of features on a project.",
        "**Key properties:**",
        {
          "$ul": [
            "**features**: The project features."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
