{
  "name": "getAllAccessibleProjectTypes",
  "description": "Returns all [project types](https://confluence.atlassian.com/x/Var1Nw) with a valid license.",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/project/type/accessible"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Details about a project type.",
        "**Key properties:**",
        {
          "$ul": [
            "**color**: The color of the project type.",
            "**descriptionI18nKey**: The key of the project type's description.",
            "**formattedKey**: The formatted key of the project type.",
            "**icon**: The icon of the project type.",
            "**key**: The key of the project type."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
