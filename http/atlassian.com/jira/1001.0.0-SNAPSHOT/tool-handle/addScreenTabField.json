{
  "name": "addScreenTabField",
  "description": "Adds a field to a screen tab.\n\n**[Permissions](#permissions) required:** *Administer Jira* [global permission](https://confluence.atlassian.com/x/x4dKLg).",
  "parameters": {
    "type": "object",
    "properties": {
      "screenId": {
        "format": "int64",
        "type": "integer",
        "description": "The ID of the screen."
      },
      "tabId": {
        "format": "int64",
        "type": "integer",
        "description": "The ID of the screen tab."
      },
      "body": {
        "$ref": "#/$defs/AddFieldBean"
      }
    },
    "required": [
      "screenId",
      "tabId",
      "body"
    ],
    "$defs": {
      "AddFieldBean": {
        "additionalProperties": false,
        "properties": {
          "fieldId": {
            "description": "The ID of the field to add.",
            "type": "string"
          }
        },
        "required": [
          "fieldId"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/screens/{screenId}/tabs/{tabId}/fields"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "A screen tab field.",
        "**Key properties:**",
        {
          "$ul": [
            "**id**: The ID of the screen tab field.",
            "**name**: The name of the screen tab field. Required on create and update. The maximum length is 255 characters."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
