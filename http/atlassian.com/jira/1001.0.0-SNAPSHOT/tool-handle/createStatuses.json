{
  "name": "createStatuses",
  "description": "Creates statuses for a global or project scope.\n\n**[Permissions](#permissions) required:**\n\n *  *Administer projects* [project permission.](https://confluence.atlassian.com/x/yodKLg)\n *  *Administer Jira* [project permission.](https://confluence.atlassian.com/x/yodKLg)",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/components/schemas/StatusCreateRequest",
        "description": "Details of the statuses being created and their scope."
      }
    },
    "required": [
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/statuses"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Details of a status.",
        "**Key properties:**",
        {
          "$ul": [
            "**description**: The description of the status.",
            "**id**: The ID of the status.",
            "**name**: The name of the status.",
            [
              "**scope**: The scope of the status.",
              {
                "$ul": [
                  [
                    "**project**: Project ID details.",
                    {
                      "$ul": [
                        "**id**: The ID of the project."
                      ]
                    }
                  ],
                  "**type**: The scope of the status. `GLOBAL` for company-managed projects and `PROJECT` for team-managed projects."
                ]
              }
            ],
            "**statusCategory**: The category of the status.",
            "**usages**: Projects and issue types where the status is used. Only available if the `usages` expand is requested."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
