{
  "name": "getStatusCategories",
  "description": "Returns a list of all status categories.\n\n**[Permissions](#permissions) required:** Permission to access Jira.",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/statuscategory"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "A status category.",
        "**Key properties:**",
        {
          "$ul": [
            "**colorName**: The name of the color used to represent the status category.",
            "**id**: The ID of the status category.",
            "**key**: The key of the status category.",
            "**name**: The name of the status category.",
            "**self**: The URL of the status category."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
