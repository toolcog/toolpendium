{
  "name": "getStatuses",
  "description": "Returns a list of all statuses associated with active workflows.\n\nThis operation can be accessed anonymously.\n\n**[Permissions](#permissions) required:** None.",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://your-domain.atlassian.net/rest/api/3/status"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "A status.",
        "**Key properties:**",
        {
          "$ul": [
            "**description**: The description of the status.",
            "**iconUrl**: The URL of the icon used to represent the status.",
            "**id**: The ID of the status.",
            "**name**: The name of the status.",
            "**self**: The URL of the status.",
            [
              "**statusCategory**: A status category.",
              {
                "$ul": [
                  "**colorName**: The name of the color used to represent the status category.",
                  "**id**: The ID of the status category.",
                  "**key**: The key of the status category.",
                  "**name**: The name of the status category.",
                  "**self**: The URL of the status category."
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
