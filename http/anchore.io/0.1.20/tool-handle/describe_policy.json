{
  "name": "describe_policy",
  "description": "Get the policy language spec for this service",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//system/policy_spec"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "List of Gate specifications",
        "**Key properties:**",
        {
          "$ul": [
            "**description**: Description of the gate",
            "**name**: Gate name, as it would appear in a policy document",
            "**state**: State of the gate and transitively all triggers it contains if not 'active'",
            "**superceded_by**: The name of another trigger that supercedes this on functionally if this is deprecated",
            "**triggers**: List of the triggers that can fire for this Gate"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
