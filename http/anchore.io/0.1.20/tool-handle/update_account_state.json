{
  "name": "update_account_state",
  "description": "Update the state of an account to either enabled or disabled. For deletion use the DELETE route",
  "parameters": {
    "type": "object",
    "properties": {
      "accountname": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/AccountStatus"
      }
    },
    "required": [
      "accountname",
      "body"
    ],
    "$defs": {
      "AccountStatus": {
        "description": "A summary of account status",
        "properties": {
          "state": {
            "description": "The status of the account",
            "enum": [
              "enabled",
              "disabled"
            ],
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "//accounts/{accountname}/state"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "A summary of account status",
        "**Key properties:**",
        {
          "$ul": [
            "**state**: The status of the account"
          ]
        },
