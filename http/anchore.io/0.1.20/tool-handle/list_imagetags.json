{
  "name": "list_imagetags",
  "description": "List all image tags visible to the user",
  "parameters": {
    "type": "object",
    "properties": {
      "image_status": {
        "default": [
          "active"
        ],
        "items": {
          "enum": [
            "all",
            "active",
            "deleting"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "Filter images in one or more states such as active, deleting. Defaults to active images only if unspecified"
      },
      "x-anchore-account": {
        "type": "string",
        "description": "An account name to change the resource scope of the request to that account, if permissions allow (admin only)"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//summaries/imagetags{?image_status}"
    },
    "headers": {
      "x-anchore-account": {
        "$": "x-anchore-account"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "a list of AnchoreImageTagSummary objects",
        "**Key properties:**",
        {
          "$ul": [
            "**analysis_status**",
            "**analyzed_at**",
            "**created_at**",
            "**fulltag**",
            "**imageDigest**",
            "**imageId**",
            "**image_status**",
            "**parentDigest**",
            "**tag_detected_at**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "500": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Generic HTTP API error response",
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**detail**: Details structure for additional information about the error if available. Content and structure will be error specific.",
            "**error_type**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
