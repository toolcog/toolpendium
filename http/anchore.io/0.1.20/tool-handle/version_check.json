{
  "name": "version_check",
  "description": "Returns the version object for the service, including db schema version info",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//version"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Version information for a service",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**api**: Api Version string",
              {
                "$ul": [
                  "**version**: Semantic version of the api"
                ]
              }
            ],
            [
              "**db**",
              {
                "$ul": [
                  "**schema_version**: Semantic version of the db schema"
                ]
              }
            ],
            [
              "**service**",
              {
                "$ul": [
                  "**version**: Semantic Version string of the service implementation"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
