{
  "name": "Categories",
  "description": "The operation will not return the categories that have less than 10 icons.\nWe need it to test the categories without showing garbage on the production website.",
  "parameters": {
    "type": "object",
    "properties": {
      "platform": {
        "enum": [
          "ios7",
          "win8",
          "win10",
          "android",
          "androidL",
          "color",
          "office"
        ],
        "type": "string",
        "description": "the platform that we are searching icons for"
      },
      "language": {
        "enum": [
          "en-US",
          "fr-FR",
          "de-DE",
          "it-IT",
          "pt-BR",
          "pl-PL",
          "ru-RU",
          "es-ES"
        ],
        "type": "string",
        "description": "the language code to get localized result"
      }
    },
    "required": [
      "platform",
      "language"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.icons8.com/api/iconsets/v3/categories?platform={platform}&language={language}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**parameters**: copy of the input parameters from the request",
              {
                "$ul": [
                  "**language**",
                  "**platform**"
                ]
              }
            ],
            [
              "**result**: the result of operation",
              {
                "$ul": [
                  "**categories**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
