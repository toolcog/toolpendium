{
  "name": "ips_create",
  "description": "Add an ip host address or network prefix.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/components/schemas/IpAddressRequest",
        "description": "IP-Address / Prefix allocation Request"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "/api/v2/ips"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "PartialIpAddress"
        },
        "IP-Address",
        "**Key properties:**",
        {
          "$ul": [
            "**address**: IPv4 or IPv6 Address in the following format:",
            "**consuming_account**: The `id` of the account consuming a service.",
            "**external_ref**: Reference field, free to use for the API user.",
            "**fqdn**",
            "**id**",
            "**managing_account**: The `id` of the account responsible for managing the service via",
            "**prefix_length**: The CIDR ip prefix length",
            "**valid_not_after**",
            "**valid_not_before**",
            "**version**: The version of the internet protocol."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
