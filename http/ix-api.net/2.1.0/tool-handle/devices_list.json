{
  "name": "devices_list",
  "description": "List available devices",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": "id1,id2,id3",
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Filter by id"
      },
      "name": {
        "type": "string",
        "description": "Filter by name"
      },
      "capability_media_type": {
        "type": "string",
        "description": "Filter by capability_media_type"
      },
      "capability_speed": {
        "type": "integer",
        "description": "Filter by capability_speed"
      },
      "capability_speed__lt": {
        "type": "integer",
        "description": "Filter by capability_speed__lt"
      },
      "capability_speed__lte": {
        "type": "integer",
        "description": "Filter by capability_speed__lte"
      },
      "capability_speed__gt": {
        "type": "integer",
        "description": "Filter by capability_speed__gt"
      },
      "capability_speed__gte": {
        "type": "integer",
        "description": "Filter by capability_speed__gte"
      },
      "facility": {
        "type": "string",
        "description": "Filter by facility"
      },
      "pop": {
        "type": "string",
        "description": "Filter by pop"
      },
      "metro_area_network": {
        "type": "string",
        "description": "Filter by metro_area_network"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v2/devices{?id,name,capability_media_type,capability_speed,capability_speed__lt,capability_speed__lte,capability_speed__gt,capability_speed__gte,facility,pop,metro_area_network}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "PartialDevice list"
        },
        "Device",
        "**Key properties:**",
        {
          "$ul": [
            "**capabilities**",
            "**facility**: Identifier of the facility where the device",
            "**id**",
            "**name**: Name of the device",
            "**pop**: The `PointOfPresence` the device is in."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "401": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "403": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
