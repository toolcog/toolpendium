{
  "name": "facilities_list",
  "description": "Get a (filtered) list of `facilities`.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": "id1,id2,id3",
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Filter by id"
      },
      "capability_media_type": {
        "type": "string",
        "description": "Filter by capability_media_type"
      },
      "capability_speed": {
        "type": "integer",
        "description": "Filter by capability_speed"
      },
      "capability_speed__lt": {
        "type": "integer",
        "description": "Filter by capability_speed__lt"
      },
      "capability_speed__lte": {
        "type": "integer",
        "description": "Filter by capability_speed__lte"
      },
      "capability_speed__gt": {
        "type": "integer",
        "description": "Filter by capability_speed__gt"
      },
      "capability_speed__gte": {
        "type": "integer",
        "description": "Filter by capability_speed__gte"
      },
      "organisation_name": {
        "type": "string",
        "description": "Filter by organisation_name"
      },
      "metro_area": {
        "type": "string",
        "description": "Filter by metro_area"
      },
      "metro_area_network": {
        "type": "string",
        "description": "Filter by metro_area_network"
      },
      "address_country": {
        "type": "string",
        "description": "Filter by address_country"
      },
      "address_locality": {
        "type": "string",
        "description": "Filter by address_locality"
      },
      "postal_code": {
        "type": "string",
        "description": "Filter by postal_code"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v2/facilities{?id,capability_media_type,capability_speed,capability_speed__lt,capability_speed__lte,capability_speed__gt,capability_speed__gte,organisation_name,metro_area,metro_area_network,address_country,address_locality,postal_code}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "PartialFacility list"
        },
        "Facility",
        "**Key properties:**",
        {
          "$ul": [
            "**address_country**: ISO 3166-1 alpha-2 country code, for example DE",
            "**address_locality**: The locality/city. For example, Mountain View.",
            "**address_region**: The region. For example, CA",
            "**id**",
            "**metro_area**: Id of the `MetroArea` the DC is located in.",
            "**name**: Name of the Datacenter as called by the operator",
            "**organisation_name**: Name of Datacenter operator",
            "**peeringdb_facility_id**: [PeeringDB](https://www.peeringdb.com) facitlity ID,",
            "**pops**: List of pops in the `Facility`.",
            "**postal_code**: A postal code. For example, 9404",
            "**street_address**: The street address. For example, 1600 Amphitheatre Pkwy."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "401": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "403": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
