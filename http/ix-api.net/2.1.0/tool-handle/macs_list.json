{
  "name": "macs_list",
  "description": "List all mac addresses managed by the authorized customer.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": "id1,id2,id3",
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Filter by id"
      },
      "managing_account": {
        "type": "string",
        "description": "Filter by managing_account"
      },
      "consuming_account": {
        "type": "string",
        "description": "Filter by consuming_account"
      },
      "external_ref": {
        "type": "string",
        "description": "Filter by external_ref"
      },
      "network_service_config": {
        "type": "string",
        "description": "Filter by network_service_config"
      },
      "address": {
        "type": "string",
        "description": "Filter by address"
      },
      "assigned_at": {
        "type": "string",
        "description": "Filter by assigned_at"
      },
      "valid_not_before": {
        "type": "string",
        "description": "Filter by valid_not_before"
      },
      "valid_not_after": {
        "type": "string",
        "description": "Filter by valid_not_after"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v2/macs{?id,managing_account,consuming_account,external_ref,network_service_config,address,assigned_at,valid_not_before,valid_not_after}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "PartialMacAddress list"
        },
        "MAC-Address",
        "**Key properties:**",
        {
          "$ul": [
            "**address**: Unicast MAC address, formatted hexadecimal values with colons.",
            "**consuming_account**: The `id` of the account consuming a service.",
            "**external_ref**: Reference field, free to use for the API user.",
            "**id**",
            "**managing_account**: The `id` of the account responsible for managing the service via",
            "**valid_not_after**",
            "**valid_not_before**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.id"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "401": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    },
    "403": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
