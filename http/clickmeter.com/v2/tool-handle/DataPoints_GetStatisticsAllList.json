{
  "name": "DataPoints_GetStatisticsAllList",
  "description": "Retrieve statistics about all datapoints of this customer for a timeframe grouped by some temporal entity (day/week/month)",
  "parameters": {
    "type": "object",
    "properties": {
      "type": {
        "enum": [
          "tp",
          "tl"
        ],
        "type": "string",
        "description": "Type of datapoint (\"tl\"/\"tp\")"
      },
      "timeFrame": {
        "enum": [
          "today",
          "yesterday",
          "last7",
          "last30",
          "lastmonth",
          "currentmonth",
          "previousmonth",
          "last90",
          "last120",
          "last180",
          "last12months",
          "lastyear",
          "currentyear",
          "beginning",
          "custom"
        ],
        "type": "string",
        "description": "Timeframe of the request. See list at $timeframeList"
      },
      "fromDay": {
        "type": "string",
        "description": "If using a \"custom\" timeFrame you can specify the starting day (YYYYMMDD)"
      },
      "toDay": {
        "type": "string",
        "description": "If using a \"custom\" timeFrame you can specify the ending day (YYYYMMDD)"
      },
      "status": {
        "enum": [
          "deleted",
          "active",
          "paused",
          "spam"
        ],
        "type": "string",
        "description": "Status of datapoint (\"deleted\"/\"active\"/\"paused\"/\"spam\")"
      },
      "tag": {
        "type": "string",
        "description": "A comma separated list of tags you want to filter with."
      },
      "favourite": {
        "type": "boolean",
        "description": "Is the datapoint is marked as favourite"
      },
      "groupBy": {
        "enum": [
          "week",
          "month"
        ],
        "type": "string",
        "description": "The temporal entity you want to group by (\"week\"/\"month\"). If unspecified is \"day\"."
      }
    },
    "required": [
      "type",
      "timeFrame"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://apiv2.clickmeter.com:80/datapoints/aggregated/list{?type,timeFrame,fromDay,toDay,status,tag,favourite,groupBy}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**entities**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
