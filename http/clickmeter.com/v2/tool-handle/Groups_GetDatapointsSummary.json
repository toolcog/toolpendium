{
  "name": "Groups_GetDatapointsSummary",
  "description": "Retrieve statistics about a subset of datapoints for a timeframe with datapoints data",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "Filter by this group id"
      },
      "timeFrame": {
        "enum": [
          "today",
          "yesterday",
          "last7",
          "last30",
          "lastmonth",
          "currentmonth",
          "previousmonth",
          "last90",
          "last120",
          "last180",
          "last12months",
          "lastyear",
          "currentyear",
          "beginning",
          "custom"
        ],
        "type": "string",
        "description": "Timeframe of the request. See list at $timeframeList"
      },
      "type": {
        "enum": [
          "tp",
          "tl"
        ],
        "type": "string",
        "description": "Type of datapoint (\"tl\"/\"tp\")"
      },
      "fromDay": {
        "type": "string",
        "description": "If using a \"custom\" timeFrame you can specify the starting day (YYYYMMDD)"
      },
      "toDay": {
        "type": "string",
        "description": "If using a \"custom\" timeFrame you can specify the ending day (YYYYMMDD)"
      },
      "status": {
        "enum": [
          "deleted",
          "active"
        ],
        "type": "string",
        "description": "Status of datapoint (\"deleted\"/\"active\"/\"paused\"/\"spam\")"
      },
      "tag": {
        "type": "string",
        "description": "A comma separated list of tags you want to filter with."
      },
      "favourite": {
        "type": "boolean",
        "description": "Is the datapoint marked as favourite"
      },
      "sortBy": {
        "type": "string",
        "description": "Field to sort by"
      },
      "sortDirection": {
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string",
        "description": "Direction of sort \"asc\" or \"desc\""
      },
      "offset": {
        "default": 0,
        "format": "int32",
        "minLength": 0,
        "type": "integer",
        "description": "Offset where to start from"
      },
      "limit": {
        "default": 20,
        "format": "int32",
        "maxLength": 0,
        "minLength": 0,
        "type": "integer",
        "description": "Limit results to this number"
      },
      "textSearch": {
        "type": "string",
        "description": "Filter fields by this pattern"
      }
    },
    "required": [
      "id",
      "timeFrame"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://apiv2.clickmeter.com:80/groups/{id}/aggregated/summary{?timeFrame,type,fromDay,toDay,status,tag,favourite,sortBy,sortDirection,offset,limit,textSearch}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**count**",
            "**limit**",
            "**offset**",
            "**result**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
