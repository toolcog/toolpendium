{
  "name": "Tags_Count",
  "description": "List of all the groups associated to the user filtered by this tag.",
  "parameters": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Name of the tag"
      },
      "datapoints": {
        "type": "string",
        "description": "Comma separated list of datapoints id to filter by"
      },
      "groups": {
        "type": "string",
        "description": "Comma separated list of groups id to filter by"
      },
      "type": {
        "enum": [
          "tp",
          "tl",
          "dp",
          "gr"
        ],
        "type": "string",
        "description": "Type of entity related to the tag"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://apiv2.clickmeter.com:80/tags/count{?name,datapoints,groups,type}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
