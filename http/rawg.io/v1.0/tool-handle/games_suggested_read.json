{
  "name": "games_suggested_read",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "An ID or a slug identifying this Game."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.rawg.io/api/games/{id}/suggested"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**achievements_count**",
            "**added**",
            "**added_by_status**",
            "**additions_count**",
            "**alternative_names**",
            "**background_image**",
            "**background_image_additional**",
            "**creators_count**",
            "**description**",
            [
              "**esrb_rating**",
              {
                "$ul": [
                  "**id**",
                  "**name**",
                  "**slug**"
                ]
              }
            ],
            "**game_series_count**",
            "**id**",
            "**metacritic**",
            "**metacritic_platforms**",
            "**metacritic_url**: For example \"http://www.metacritic.com/game/playstation-4/the-witcher-3-wild-hunt\"",
            "**movies_count**",
            "**name**",
            "**name_original**",
            "**parent_achievements_count**",
            "**parents_count**",
            "**platforms**",
            "**playtime**: in hours",
            "**rating**",
            "**rating_top**",
            "**ratings**",
            "**ratings_count**",
            "**reactions**",
            "**reddit_count**",
            "**reddit_description**",
            "**reddit_logo**",
            "**reddit_name**",
            "**reddit_url**: For example \"https://www.reddit.com/r/uncharted/\" or \"uncharted\"",
            "**released**",
            "**reviews_text_count**",
            "**screenshots_count**",
            "**slug**",
            "**suggestions_count**",
            "**tba**",
            "**twitch_count**",
            "**updated**",
            "**website**",
            "**youtube_count**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
