{
  "name": "delete_comment",
  "description": "Delete a video comment",
  "parameters": {
    "type": "object",
    "properties": {
      "comment_id": {
        "example": 12345,
        "type": "number",
        "description": "The ID of the comment."
      },
      "video_id": {
        "example": 258684937,
        "type": "number",
        "description": "The ID of the video."
      }
    },
    "required": [
      "comment_id",
      "video_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "DELETE",
    "url": {
      "$uri": "https://api.vimeo.com/videos/{video_id}/comments/{comment_id}"
    }
  },
  "responses": {
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Error"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**developer_message**: The error message that developers receive.",
            "**error**: The error message that non-developer users receive.",
            "**error_code**: The error code.",
            "**link**: A link to more information about the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Legacy Error"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error**: User-friendly error message"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
