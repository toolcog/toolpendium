{
  "name": "add_channel_tag",
  "description": "This method adds a single tag to the specified channel.",
  "parameters": {
    "type": "object",
    "properties": {
      "channel_id": {
        "example": 927,
        "type": "number",
        "description": "The ID of the channel."
      },
      "word": {
        "example": "awesome",
        "type": "string",
        "description": "The word to use as the tag."
      }
    },
    "required": [
      "channel_id",
      "word"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.vimeo.com/channels/{channel_id}/tags/{word}"
    }
  },
