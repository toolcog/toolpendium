{
  "name": "get_vod_promotion_codes",
  "description": "Get all the codes of a promotion on an On Demand page",
  "parameters": {
    "type": "object",
    "properties": {
      "ondemand_id": {
        "example": 61326,
        "type": "number",
        "description": "The ID of the On Demand."
      },
      "promotion_id": {
        "example": 12345,
        "type": "number",
        "description": "The ID of the promotion."
      },
      "page": {
        "example": 1,
        "type": "number",
        "description": "The page number of the results to show."
      },
      "per_page": {
        "example": 10,
        "type": "number",
        "description": "The number of items to show on each page of results, up to a maximum of 100."
      }
    },
    "required": [
      "ondemand_id",
      "promotion_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.vimeo.com/ondemand/pages/{ondemand_id}/promotions/{promotion_id}/codes{?page,per_page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "On Demand Promotion Code"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: A promotion code that can be redeemed on Vimeo.",
            "**link**: A link to redeem the promotion code instantly.",
            "**max_uses**: The total amount of times this code can be used.",
            "**uses**: The number of times that this code has been used."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Legacy Error"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error**: User-friendly error message"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Legacy Error"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error**: User-friendly error message"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
