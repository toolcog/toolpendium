{
  "name": "add_video_to_project",
  "description": "This method adds a single video to the specified project.",
  "parameters": {
    "type": "object",
    "properties": {
      "project_id": {
        "example": 12345,
        "type": "number",
        "description": "The ID of the project."
      },
      "user_id": {
        "example": 152184,
        "type": "number",
        "description": "The ID of the user."
      },
      "video_id": {
        "example": 258684937,
        "type": "number",
        "description": "The ID of the video."
      }
    },
    "required": [
      "project_id",
      "user_id",
      "video_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.vimeo.com/users/{user_id}/projects/{project_id}/videos/{video_id}"
    }
  },
  "responses": {
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Error"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**developer_message**: The error message that developers receive.",
            "**error**: The error message that non-developer users receive.",
            "**error_code**: The error code.",
            "**link**: A link to more information about the error."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
