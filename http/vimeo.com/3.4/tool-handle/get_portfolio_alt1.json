{
  "name": "get_portfolio_alt1",
  "description": "Get a specific portfolio",
  "parameters": {
    "type": "object",
    "properties": {
      "portfolio_id": {
        "example": 12345,
        "type": "number",
        "description": "The ID of the portfolio."
      }
    },
    "required": [
      "portfolio_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.vimeo.com/me/portfolios/{portfolio_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Portfolio"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**created_time**: The time in ISO 8601 format when the portfolio was created.",
            "**description**: The portfolio's description.",
            "**link**: The link to the portfolio.",
            [
              "**metadata**: Metadata about the album.",
              {
                "$ul": [
                  [
                    "**connections**: A list of resource URIs related to the album.",
                    {
                      "$ul": [
                        [
                          "**videos**: Information about the videos contained within this portfolio.",
                          {
                            "$ul": [
                              "**options**: An array of HTTP methods permitted on this URI.",
                              "**total**: The total number of videos on this connection.",
                              "**uri**: The API URI that resolves to the connection data."
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                ]
              }
            ],
            "**modified_time**: The time in ISO 8601 format when the portfolio's data was last modified.",
            "**name**: The display name of the portfolio.",
            "**sort**: The default video sort order for the portfolio:",
            "**uri**: The canonical relative URI of the portfolio."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
