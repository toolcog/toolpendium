{
  "name": "get_region",
  "description": "Get a specific On Demand region",
  "parameters": {
    "type": "object",
    "properties": {
      "country": {
        "example": "US",
        "type": "string",
        "description": "The country code."
      }
    },
    "required": [
      "country"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.vimeo.com/ondemand/regions/{country}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "On Demand Region"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**country_code**: The ISO 3166-1 alpha-2 code for this country.",
            "**country_name**: The descriptive name of this country.",
            "**uri**: The region container's relative URI."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Legacy Error"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error**: User-friendly error message"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
