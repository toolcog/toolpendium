{
  "name": "add_video_tag",
  "description": "Add a specific tag to a video",
  "parameters": {
    "type": "object",
    "properties": {
      "video_id": {
        "example": 258684937,
        "type": "number",
        "description": "The ID of the video."
      },
      "word": {
        "example": "awesome",
        "type": "string",
        "description": "The tag word."
      }
    },
    "required": [
      "video_id",
      "word"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.vimeo.com/videos/{video_id}/tags/{word}"
    }
  },
  "responses": {
    "204": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Tag"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**canonical**: The normalized canonical tag name.",
            [
              "**metadata**: Metadata about the group.",
              {
                "$ul": [
                  [
                    "**connections**: A collection of information that is connected to this resource.",
                    {
                      "$ul": [
                        [
                          "**videos**: Information about the videos related to this tag.",
                          {
                            "$ul": [
                              "**options**: An array of HTTP methods permitted on this URI.",
                              "**total**: The total number of videos on this connection.",
                              "**uri**: The API URI that resolves to the connection data."
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                ]
              }
            ],
            "**name**: The tag value.",
            "**resource_key**: The tag's resource key string.",
            "**uri**: The canonical relative URI of the tag."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Legacy Error"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error**: User-friendly error message"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Legacy Error"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error**: User-friendly error message"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
