{
  "name": "get_regions",
  "description": "Get all the On Demand regions",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.vimeo.com/ondemand/regions"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "On Demand Region list"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**country_code**: The ISO 3166-1 alpha-2 code for this country.",
            "**country_name**: The descriptive name of this country.",
            "**uri**: The region container's relative URI."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
