{
  "name": "login",
  "description": "ID4i API Login",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/AccountCredentials"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "AccountCredentials": {
        "properties": {
          "login": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "title": "AccountCredentials",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "//backend.id4i.de/login"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "401": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "ApiError"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**errorId**",
            "**errorList**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
