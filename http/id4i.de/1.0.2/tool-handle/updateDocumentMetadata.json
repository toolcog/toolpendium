{
  "name": "updateDocumentMetadata",
  "description": "Update a document",
  "parameters": {
    "type": "object",
    "properties": {
      "organizationId": {
        "type": "string",
        "description": "organizationId"
      },
      "id4n": {
        "type": "string",
        "description": "id4n"
      },
      "fileName": {
        "type": "string",
        "description": "fileName"
      },
      "body": {
        "$ref": "#/components/schemas/DocumentUpdate",
        "description": "document"
      }
    },
    "required": [
      "organizationId",
      "id4n",
      "fileName",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "//backend.id4i.de/api/v1/documents/{id4n}/{organizationId}/{fileName}/metadata"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Document"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**filename**: File Name",
            "**mimeType**: Mime Type",
            "**ownerOrganizationId**: The organization's namespace which owns the document",
            [
              "**visibility**",
              {
                "$ul": [
                  "**public**: Document is publicly readable (if ID4N is owned by the same organization)",
                  "**sharedOrganizationIds**: Document is readable by these organizations (independend of ID4N ownership)"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
