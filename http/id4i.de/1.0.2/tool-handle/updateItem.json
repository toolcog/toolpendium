{
  "name": "updateItem",
  "description": "Update history item",
  "parameters": {
    "type": "object",
    "properties": {
      "id4n": {
        "type": "string",
        "description": "GUID to retrieve the history for"
      },
      "organizationId": {
        "type": "string",
        "description": "organizationId"
      },
      "sequenceId": {
        "format": "int32",
        "type": "integer",
        "description": "sequenceId"
      },
      "body": {
        "$ref": "#/components/schemas/HistoryItemUpdate",
        "description": "update"
      }
    },
    "required": [
      "id4n",
      "organizationId",
      "sequenceId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "//backend.id4i.de/api/v1/history/{id4n}/{organizationId}/{sequenceId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "HistoryItem"
        },
        "GUID history item",
        "**Key properties:**",
        {
          "$ul": [
            "**additionalProperties**: History items custom additional properties",
            "**organizationId**: Originator of the history item",
            "**ownerOrganizationId**: Owner of the history item",
            "**sequenceId**: Forms the primary key of the history item together with the GUID and the organizationId",
            "**timestamp**: History item timestamp",
            "**type**: Type of the history item",
            [
              "**visibility**",
              {
                "$ul": [
                  "**public**: Document is publicly readable (if ID4N is owned by the same organization)",
                  "**sharedOrganizationIds**: Document is readable by these organizations (independend of ID4N ownership)"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
