{
  "name": "update-segment",
  "description": "This endpoint updates a Segment identified by the `segmentId` parameter.",
  "parameters": {
    "type": "object",
    "properties": {
      "segmentId": {
        "format": "uuid",
        "type": "string",
        "description": "The identifier of the Segment."
      },
      "body": {
        "$ref": "#/$defs/UpdateSegmentModel"
      }
    },
    "required": [
      "segmentId",
      "body"
    ],
    "$defs": {
      "UpdateSegmentModel": {
        "additionalProperties": false,
        "properties": {
          "comparator": {
            "$ref": "#/$defs/RolloutRuleComparator"
          },
          "comparisonAttribute": {
            "maxLength": 1000,
            "minLength": 0,
            "nullable": true,
            "type": "string"
          },
          "comparisonValue": {
            "maxLength": 65535,
            "minLength": 0,
            "nullable": true,
            "type": "string"
          },
          "description": {
            "maxLength": 1000,
            "minLength": 0,
            "nullable": true,
            "type": "string"
          },
          "name": {
            "maxLength": 255,
            "minLength": 0,
            "nullable": true,
            "type": "string"
          }
        },
        "type": "object"
      },
      "RolloutRuleComparator": {
        "enum": [
          "isOneOf",
          "isNotOneOf",
          "contains",
          "doesNotContain",
          "semVerIsOneOf",
          "semVerIsNotOneOf",
          "semVerLess",
          "semVerLessOrEquals",
          "semVerGreater",
          "semVerGreaterOrEquals",
          "numberEquals",
          "numberDoesNotEqual",
          "numberLess",
          "numberLessOrEquals",
          "numberGreater",
          "numberGreaterOrEquals",
          "sensitiveIsOneOf",
          "sensitiveIsNotOneOf"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.configcat.com/v1/segments/{segmentId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**_embedded**",
              {
                "$ul": [
                  [
                    "**product**",
                    {
                      "$ul": [
                        [
                          "**_embedded**",
                          {
                            "$ul": [
                              [
                                "**organization**",
                                {
                                  "$ul": [
                                    [
                                      "**_links**",
                                      {
                                        "$ul": [
                                          "**members**",
                                          "**products**"
                                        ]
                                      }
                                    ],
                                    "**name**",
                                    "**organizationId**"
                                  ]
                                }
                              ]
                            ]
                          }
                        ],
                        [
                          "**_links**",
                          {
                            "$ul": [
                              "**configs**",
                              "**environments**",
                              "**members**",
                              "**permission-groups**",
                              "**segments**",
                              "**self**",
                              "**tags**"
                            ]
                          }
                        ],
                        "**description**",
                        "**name**",
                        "**order**",
                        "**productId**",
                        "**reasonRequired**"
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**_links**",
              {
                "$ul": [
                  "**self**"
                ]
              }
            ],
            "**comparator**",
            "**comparisonAttribute**",
            "**comparisonValue**",
            "**createdAt**",
            "**creatorEmail**",
            "**creatorFullName**",
            "**description**",
            "**lastUpdaterEmail**",
            "**lastUpdaterFullName**",
            "**name**",
            "**segmentId**",
            "**updatedAt**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
