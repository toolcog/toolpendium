{
  "name": "create-product",
  "description": "This endpoint creates a new Product in a specified Organization \nidentified by the `organizationId` parameter, which can be obtained from the [List Organizations](#operation/get-organizations) endpoint.",
  "parameters": {
    "type": "object",
    "properties": {
      "organizationId": {
        "format": "uuid",
        "type": "string",
        "description": "The identifier of the Organization."
      },
      "body": {
        "$ref": "#/$defs/CreateProductRequest"
      }
    },
    "required": [
      "organizationId",
      "body"
    ],
    "$defs": {
      "CreateProductRequest": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "maxLength": 1000,
            "minLength": 0,
            "nullable": true,
            "type": "string"
          },
          "name": {
            "maxLength": 1000,
            "minLength": 0,
            "type": "string"
          }
        },
        "required": [
          "name"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.configcat.com/v1/organizations/{organizationId}/products"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**_embedded**",
              {
                "$ul": [
                  [
                    "**organization**",
                    {
                      "$ul": [
                        [
                          "**_links**",
                          {
                            "$ul": [
                              "**members**",
                              "**products**"
                            ]
                          }
                        ],
                        "**name**",
                        "**organizationId**"
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**_links**",
              {
                "$ul": [
                  "**configs**",
                  "**environments**",
                  "**members**",
                  "**permission-groups**",
                  "**segments**",
                  "**self**",
                  "**tags**"
                ]
              }
            ],
            "**description**",
            "**name**",
            "**order**",
            "**productId**",
            "**reasonRequired**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
