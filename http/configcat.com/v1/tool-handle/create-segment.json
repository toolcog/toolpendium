{
  "name": "create-segment",
  "description": "This endpoint creates a new Segment in a specified Product \nidentified by the `productId` parameter, which can be obtained from the [List Products](#operation/get-products) endpoint.",
  "parameters": {
    "type": "object",
    "properties": {
      "productId": {
        "format": "uuid",
        "type": "string",
        "description": "The identifier of the Product."
      },
      "body": {
        "$ref": "#/$defs/CreateSegmentModel"
      }
    },
    "required": [
      "productId",
      "body"
    ],
    "$defs": {
      "CreateSegmentModel": {
        "additionalProperties": false,
        "properties": {
          "comparator": {
            "$ref": "#/$defs/RolloutRuleComparator"
          },
          "comparisonAttribute": {
            "maxLength": 1000,
            "minLength": 0,
            "type": "string"
          },
          "comparisonValue": {
            "maxLength": 65535,
            "minLength": 0,
            "type": "string"
          },
          "description": {
            "maxLength": 1000,
            "minLength": 0,
            "nullable": true,
            "type": "string"
          },
          "name": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string"
          }
        },
        "required": [
          "comparator",
          "comparisonAttribute",
          "comparisonValue",
          "name"
        ],
        "type": "object"
      },
      "RolloutRuleComparator": {
        "enum": [
          "isOneOf",
          "isNotOneOf",
          "contains",
          "doesNotContain",
          "semVerIsOneOf",
          "semVerIsNotOneOf",
          "semVerLess",
          "semVerLessOrEquals",
          "semVerGreater",
          "semVerGreaterOrEquals",
          "numberEquals",
          "numberDoesNotEqual",
          "numberLess",
          "numberLessOrEquals",
          "numberGreater",
          "numberGreaterOrEquals",
          "sensitiveIsOneOf",
          "sensitiveIsNotOneOf"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.configcat.com/v1/products/{productId}/segments"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**_embedded**",
              {
                "$ul": [
                  [
                    "**product**",
                    {
                      "$ul": [
                        [
                          "**_embedded**",
                          {
                            "$ul": [
                              [
                                "**organization**",
                                {
                                  "$ul": [
                                    [
                                      "**_links**",
                                      {
                                        "$ul": [
                                          "**members**",
                                          "**products**"
                                        ]
                                      }
                                    ],
                                    "**name**",
                                    "**organizationId**"
                                  ]
                                }
                              ]
                            ]
                          }
                        ],
                        [
                          "**_links**",
                          {
                            "$ul": [
                              "**configs**",
                              "**environments**",
                              "**members**",
                              "**permission-groups**",
                              "**segments**",
                              "**self**",
                              "**tags**"
                            ]
                          }
                        ],
                        "**description**",
                        "**name**",
                        "**order**",
                        "**productId**",
                        "**reasonRequired**"
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**_links**",
              {
                "$ul": [
                  "**self**"
                ]
              }
            ],
            "**comparator**",
            "**comparisonAttribute**",
            "**comparisonValue**",
            "**createdAt**",
            "**creatorEmail**",
            "**creatorFullName**",
            "**description**",
            "**lastUpdaterEmail**",
            "**lastUpdaterFullName**",
            "**name**",
            "**segmentId**",
            "**updatedAt**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
