        },
        "type": "object"
      },
      "JsonPointer": {
        "additionalProperties": false,
        "properties": {
          "isUriEncoded": {
            "readOnly": true,
            "type": "boolean"
          },
          "kind": {
            "$ref": "#/$defs/JsonPointerKind"
          },
          "segments": {
            "items": {
