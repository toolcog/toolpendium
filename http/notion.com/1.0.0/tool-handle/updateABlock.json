{
  "name": "updateABlock",
  "description": "This endpoint allows you to update block content. [See Full Documentation](https://developers.notion.com/reference/update-a-block)",
  "parameters": {
    "type": "object",
    "properties": {
      "Notion-Version": {
        "example": "{{NOTION_VERSION}}",
        "type": "string"
      },
      "id": {
        "example": "{{BLOCK_ID}}",
        "type": "string"
      },
      "body": {
        "properties": {
          "paragraph": {
            "properties": {
              "rich_text": {
                "example": [
                  {
                    "text": {
                      "content": "hello to you"
                    },
                    "type": "text"
                  }
                ],
                "items": {
                  "properties": {
                    "text": {
                      "properties": {
                        "content": {
                          "example": "hello to you",
                          "type": "string"
                        }
                      },
                      "type": "object"
                    },
                    "type": {
                      "example": "text",
                      "type": "string"
                    }
                  },
                  "type": "object"
                },
                "type": "array"
              }
            },
            "type": "object"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://api.notion.com/v1/blocks/{id}"
    },
    "headers": {
      "Notion-Version": {
        "$": "Notion-Version"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**created_time**",
            "**has_children**",
            "**id**",
            "**last_edited_time**",
            "**object**",
            [
              "**paragraph**",
              {
                "$ul": [
                  "**text**"
                ]
              }
            ],
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
