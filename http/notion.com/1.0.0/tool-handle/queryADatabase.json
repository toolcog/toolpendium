{
  "name": "queryADatabase",
  "description": "Query a database",
  "parameters": {
    "type": "object",
    "properties": {
      "Notion-Version": {
        "example": "{{NOTION_VERSION}}",
        "type": "string"
      },
      "id": {
        "example": "{{DATABASE_ID}}",
        "type": "string"
      },
      "body": {
        "properties": {
          "filter": {
            "properties": {
              "property": {
                "example": "Status",
                "type": "string"
              },
              "select": {
                "properties": {
                  "equals": {
                    "example": "Reading",
                    "type": "string"
                  }
                },
                "type": "object"
              }
            },
            "type": "object"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.notion.com/v1/databases/{id}/query"
    },
    "headers": {
      "Notion-Version": {
        "$": "Notion-Version"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**has_more**",
            "**next_cursor**",
            "**object**",
            "**results**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
