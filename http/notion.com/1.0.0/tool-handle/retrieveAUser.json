{
  "name": "retrieveAUser",
  "description": "Retrieve a user object using the ID specified in the request path.",
  "parameters": {
    "type": "object",
    "properties": {
      "Notion-Version": {
        "example": "{{NOTION_VERSION}}",
        "type": "string"
      },
      "id": {
        "example": "{{USER_ID}}",
        "type": "string"
      },
      "body": {
        "properties": {},
        "type": "object"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.notion.com/v1/users/{id}"
    },
    "headers": {
      "Notion-Version": {
        "$": "Notion-Version"
      }
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**avatar_url**",
            "**id**",
            "**name**",
            "**object**",
            [
              "**person**",
              {
                "$ul": [
                  "**email**"
                ]
              }
            ],
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
