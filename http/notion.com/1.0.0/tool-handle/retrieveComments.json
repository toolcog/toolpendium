{
  "name": "retrieveComments",
  "description": "Retrieve a user object using the ID specified in the request path.",
  "parameters": {
    "type": "object",
    "properties": {
      "block_id": {
        "example": "{{BLOCK_ID}}",
        "type": "string"
      },
      "page_size": {
        "example": "100",
        "type": "string"
      },
      "Notion-Version": {
        "example": "{{NOTION_VERSION}}",
        "type": "string"
      },
      "body": {
        "properties": {},
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.notion.com/v1/comments{?block_id,page_size}"
    },
    "headers": {
      "Notion-Version": {
        "$": "Notion-Version"
      }
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**comment**",
            "**has_more**",
            "**next_cursor**",
            "**object**",
            "**results**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
