{
  "name": "retrieveABlock",
  "description": "Retrieve a block",
  "parameters": {
    "type": "object",
    "properties": {
      "Notion-Version": {
        "example": "{{NOTION_VERSION}}",
        "type": "string"
      },
      "id": {
        "example": "{{BLOCK_ID}}",
        "type": "string"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.notion.com/v1/blocks/{id}"
    },
    "headers": {
      "Notion-Version": {
        "$": "Notion-Version"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**created_time**",
            "**has_children**",
            "**id**",
            "**last_edited_time**",
            "**object**",
            [
              "**paragraph**",
              {
                "$ul": [
                  "**text**"
                ]
              }
            ],
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
