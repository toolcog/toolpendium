{
  "name": "getBudgets",
  "description": "Returns budgets list with summary information",
  "parameters": {
    "type": "object",
    "properties": {
      "include_accounts": {
        "type": "boolean",
        "description": "Whether to include the list of budget accounts"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.ynab.com/v1/budgets{?include_accounts}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**budgets**",
                  [
                    "**default_budget**",
                    {
                      "$ul": [
                        "**accounts**: The budget accounts (only included if `include_accounts=true` specified as query parameter)",
                        [
                          "**currency_format**: The currency format setting for the budget.  In some cases the format will not be available and will be specified as null.",
                          {
                            "$ul": [
                              "**currency_symbol**",
                              "**decimal_digits**",
                              "**decimal_separator**",
                              "**display_symbol**",
                              "**example_format**",
                              "**group_separator**",
                              "**iso_code**",
                              "**symbol_first**"
                            ]
                          }
                        ],
                        [
                          "**date_format**: The date format setting for the budget.  In some cases the format will not be available and will be specified as null.",
                          {
                            "$ul": [
                              "**format**"
                            ]
                          }
                        ],
                        "**first_month**: The earliest budget month",
                        "**id**",
                        "**last_modified_on**: The last time any changes were made to the budget from either a web or mobile client",
                        "**last_month**: The latest budget month",
                        "**name**"
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**detail**",
                  "**id**",
                  "**name**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**detail**",
                  "**id**",
                  "**name**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
