{
  "name": "issueGetMilestone",
  "description": "Get a milestone",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "id": {
        "type": "string",
        "description": "the milestone to get, identified by ID and if not available by name"
      }
    },
    "required": [
      "owner",
      "repo",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/milestones/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Milestone milestone is a collection of issues on one repository",
        "**Key properties:**",
        {
          "$ul": [
            "**closed_at**",
            "**closed_issues**",
            "**created_at**",
            "**description**",
            "**due_on**",
            "**id**",
            "**open_issues**",
            "**state**: StateType issue state type",
            "**title**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
