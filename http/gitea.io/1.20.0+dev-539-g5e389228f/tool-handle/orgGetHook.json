{
  "name": "orgGetHook",
  "description": "Get a hook",
  "parameters": {
    "type": "object",
    "properties": {
      "org": {
        "type": "string",
        "description": "name of the organization"
      },
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "id of the hook to get"
      }
    },
    "required": [
      "org",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/orgs/{org}/hooks/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Hook a hook is a web hook when one repository changed",
        "**Key properties:**",
        {
          "$ul": [
            "**active**",
            "**authorization_header**",
            "**config**",
            "**created_at**",
            "**events**",
            "**id**",
            "**type**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
