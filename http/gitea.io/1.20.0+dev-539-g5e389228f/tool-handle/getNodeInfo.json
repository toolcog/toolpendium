{
  "name": "getNodeInfo",
  "description": "Returns the nodeinfo of the Gitea application",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/nodeinfo"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "NodeInfo contains standardized way of exposing metadata about a server running one of the distributed social networks",
        "**Key properties:**",
        {
          "$ul": [
            "**metadata**",
            "**openRegistrations**",
            "**protocols**",
            [
              "**services**: NodeInfoServices contains the third party sites this server can connect to via their application API",
              {
                "$ul": [
                  "**inbound**",
                  "**outbound**"
                ]
              }
            ],
            [
              "**software**: NodeInfoSoftware contains Metadata about server software in use",
              {
                "$ul": [
                  "**homepage**",
                  "**name**",
                  "**repository**",
                  "**version**"
                ]
              }
            ],
            [
              "**usage**: NodeInfoUsage contains usage statistics for this server",
              {
                "$ul": [
                  "**localComments**",
                  "**localPosts**",
                  [
                    "**users**: NodeInfoUsageUsers contains statistics about the users of this server",
                    {
                      "$ul": [
                        "**activeHalfyear**",
                        "**activeMonth**",
                        "**total**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**version**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
