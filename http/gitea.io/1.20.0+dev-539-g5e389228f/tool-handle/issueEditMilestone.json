{
  "name": "issueEditMilestone",
  "description": "Update a milestone",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "id": {
        "type": "string",
        "description": "the milestone to edit, identified by ID and if not available by name"
      },
      "body": {
        "$ref": "#/$defs/EditMilestoneOption"
      }
    },
    "required": [
      "owner",
      "repo",
      "id"
    ],
    "$defs": {
      "EditMilestoneOption": {
        "description": "EditMilestoneOption options for editing a milestone",
        "properties": {
          "description": {
            "type": "string",
            "x-go-name": "Description"
          },
          "due_on": {
            "format": "date-time",
            "type": "string",
            "x-go-name": "Deadline"
          },
          "state": {
            "type": "string",
            "x-go-name": "State"
          },
          "title": {
            "type": "string",
            "x-go-name": "Title"
          }
        },
        "type": "object",
        "x-go-package": "code.gitea.io/gitea/modules/structs"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/milestones/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Milestone milestone is a collection of issues on one repository",
        "**Key properties:**",
        {
          "$ul": [
            "**closed_at**",
            "**closed_issues**",
            "**created_at**",
            "**description**",
            "**due_on**",
            "**id**",
            "**open_issues**",
            "**state**: StateType issue state type",
            "**title**",
            "**updated_at**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
