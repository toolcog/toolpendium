{
  "name": "issueListIssueCommentAttachments",
  "description": "List comment's attachments",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "id of the comment"
      }
    },
    "required": [
      "owner",
      "repo",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/issues/comments/{id}/assets"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Attachment a generic attachment",
        "**Key properties:**",
        {
          "$ul": [
            "**browser_download_url**",
            "**created_at**",
            "**download_count**",
            "**id**",
            "**name**",
            "**size**",
            "**uuid**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
