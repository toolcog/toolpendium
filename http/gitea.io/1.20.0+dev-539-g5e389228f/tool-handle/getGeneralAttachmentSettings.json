{
  "name": "getGeneralAttachmentSettings",
  "description": "Get instance's global settings for Attachment",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/settings/attachment"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "GeneralAttachmentSettings contains global Attachment settings exposed by API",
        "**Key properties:**",
        {
          "$ul": [
            "**allowed_types**",
            "**enabled**",
            "**max_files**",
            "**max_size**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
