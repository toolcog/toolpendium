{
  "name": "issueGetIssueCommentAttachment",
  "description": "Get a comment attachment",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "id of the comment"
      },
      "attachment_id": {
        "format": "int64",
        "type": "integer",
        "description": "id of the attachment to get"
      }
    },
    "required": [
      "owner",
      "repo",
      "id",
      "attachment_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/issues/comments/{id}/assets/{attachment_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Attachment a generic attachment",
        "**Key properties:**",
        {
          "$ul": [
            "**browser_download_url**",
            "**created_at**",
            "**download_count**",
            "**id**",
            "**name**",
            "**size**",
            "**uuid**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
