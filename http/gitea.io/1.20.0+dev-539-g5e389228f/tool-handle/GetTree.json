{
  "name": "GetTree",
  "description": "Gets the tree of a repository.",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "sha": {
        "type": "string",
        "description": "sha of the commit"
      },
      "recursive": {
        "type": "boolean",
        "description": "show all directories and files"
      },
      "page": {
        "type": "integer",
        "description": "page number; the 'truncated' field in the response will be true if there are still more items after this page, false if the last page"
      },
      "per_page": {
        "type": "integer",
        "description": "number of items per page"
      }
    },
    "required": [
      "owner",
      "repo",
      "sha"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/git/trees/{sha}{?recursive,page,per_page}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "GitTreeResponse returns a git tree",
        "**Key properties:**",
        {
          "$ul": [
            "**page**",
            "**sha**",
            "**total_count**",
            "**tree**",
            "**truncated**",
            "**url**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
