{
  "name": "getUserSettings",
  "description": "Get user settings",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/user/settings"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "UserSettings represents user settings",
        "**Key properties:**",
        {
          "$ul": [
            "**description**",
            "**diff_view_style**",
            "**full_name**",
            "**hide_activity**",
            "**hide_email**: Privacy",
            "**language**",
            "**location**",
            "**theme**",
            "**website**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
