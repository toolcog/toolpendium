{
  "name": "issueGetMilestonesList",
  "description": "Get all of a repository's opened milestones",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "state": {
        "type": "string",
        "description": "Milestone state, Recognized values are open, closed and all. Defaults to \"open\""
      },
      "name": {
        "type": "string",
        "description": "filter by milestone name"
      },
      "page": {
        "type": "integer",
        "description": "page number of results to return (1-based)"
      },
      "limit": {
        "type": "integer",
        "description": "page size of results"
      }
    },
    "required": [
      "owner",
      "repo"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/milestones{?state,name,page,limit}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Milestone milestone is a collection of issues on one repository",
        "**Key properties:**",
        {
          "$ul": [
            "**closed_at**",
            "**closed_issues**",
            "**created_at**",
            "**description**",
            "**due_on**",
            "**id**",
            "**open_issues**",
            "**state**: StateType issue state type",
            "**title**",
            "**updated_at**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.title"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
