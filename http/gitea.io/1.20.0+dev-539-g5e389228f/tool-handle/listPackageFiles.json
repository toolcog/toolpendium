{
  "name": "listPackageFiles",
  "description": "Gets all files of a package",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the package"
      },
      "type": {
        "type": "string",
        "description": "type of the package"
      },
      "name": {
        "type": "string",
        "description": "name of the package"
      },
      "version": {
        "type": "string",
        "description": "version of the package"
      }
    },
    "required": [
      "owner",
      "type",
      "name",
      "version"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/packages/{owner}/{type}/{name}/{version}/files"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "PackageFile represents a package file",
        "**Key properties:**",
        {
          "$ul": [
            "**Size**",
            "**id**",
            "**md5**",
            "**name**",
            "**sha1**",
            "**sha256**",
            "**sha512**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
