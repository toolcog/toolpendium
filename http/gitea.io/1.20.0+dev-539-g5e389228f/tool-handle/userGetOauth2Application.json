{
  "name": "userGetOAuth2Application",
  "description": "get an OAuth2 Application",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "Application ID to be found"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/user/applications/oauth2/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "OAuth2Application represents an OAuth2 application."
        },
        "**Key properties:**",
        {
          "$ul": [
            "**client_id**",
            "**client_secret**",
            "**confidential_client**",
            "**created**",
            "**id**",
            "**name**",
            "**redirect_uris**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
