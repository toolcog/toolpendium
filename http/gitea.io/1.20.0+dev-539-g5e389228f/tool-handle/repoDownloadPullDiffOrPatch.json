{
  "name": "repoDownloadPullDiffOrPatch",
  "description": "Get a pull request diff or patch",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "index": {
        "format": "int64",
        "type": "integer",
        "description": "index of the pull request to get"
      },
      "diffType": {
        "enum": [
          "diff",
          "patch"
        ],
        "type": "string",
        "description": "whether the output is diff or patch"
      },
      "binary": {
        "type": "boolean",
        "description": "whether to include binary file changes. if true, the diff is applicable with `git apply`"
      }
    },
    "required": [
      "owner",
      "repo",
      "index",
      "diffType"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/pulls/{index}.{diffType}{?binary}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
