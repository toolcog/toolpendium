{
  "name": "orgGetLabel",
  "description": "Get a single label",
  "parameters": {
    "type": "object",
    "properties": {
      "org": {
        "type": "string",
        "description": "name of the organization"
      },
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "id of the label to get"
      }
    },
    "required": [
      "org",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/orgs/{org}/labels/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Label a label to an issue or a pr",
        "**Key properties:**",
        {
          "$ul": [
            "**color**",
            "**description**",
            "**exclusive**",
            "**id**",
            "**name**",
            "**url**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
