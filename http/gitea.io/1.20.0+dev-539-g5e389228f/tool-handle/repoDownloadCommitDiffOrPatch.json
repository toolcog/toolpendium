{
  "name": "repoDownloadCommitDiffOrPatch",
  "description": "Get a commit's diff or patch",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "sha": {
        "type": "string",
        "description": "SHA of the commit to get"
      },
      "diffType": {
        "enum": [
          "diff",
          "patch"
        ],
        "type": "string",
        "description": "whether the output is diff or patch"
      }
    },
    "required": [
      "owner",
      "repo",
      "sha",
      "diffType"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/git/commits/{sha}.{diffType}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
