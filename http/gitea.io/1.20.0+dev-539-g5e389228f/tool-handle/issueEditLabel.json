{
  "name": "issueEditLabel",
  "description": "Update a label",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "id": {
        "format": "int64",
        "type": "integer",
        "description": "id of the label to edit"
      },
      "body": {
        "$ref": "#/$defs/EditLabelOption"
      }
    },
    "required": [
      "owner",
      "repo",
      "id"
    ],
    "$defs": {
      "EditLabelOption": {
        "description": "EditLabelOption options for editing a label",
        "properties": {
          "color": {
            "example": "#00aabb",
            "type": "string",
            "x-go-name": "Color"
          },
          "description": {
            "type": "string",
            "x-go-name": "Description"
          },
          "exclusive": {
            "example": false,
            "type": "boolean",
            "x-go-name": "Exclusive"
          },
          "name": {
            "type": "string",
            "x-go-name": "Name"
          }
        },
        "type": "object",
        "x-go-package": "code.gitea.io/gitea/modules/structs"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/labels/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Label a label to an issue or a pr",
        "**Key properties:**",
        {
          "$ul": [
            "**color**",
            "**description**",
            "**exclusive**",
            "**id**",
            "**name**",
            "**url**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
