{
  "name": "repoEditGitHook",
  "description": "Edit a Git hook in a repository",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "id": {
        "type": "string",
        "description": "id of the hook to get"
      },
      "body": {
        "$ref": "#/$defs/EditGitHookOption"
      }
    },
    "required": [
      "owner",
      "repo",
      "id"
    ],
    "$defs": {
      "EditGitHookOption": {
        "description": "EditGitHookOption options when modifying one Git hook",
        "properties": {
          "content": {
            "type": "string",
            "x-go-name": "Content"
          }
        },
        "type": "object",
        "x-go-package": "code.gitea.io/gitea/modules/structs"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/hooks/git/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "GitHook represents a Git repository hook",
        "**Key properties:**",
        {
          "$ul": [
            "**content**",
            "**is_active**",
            "**name**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
