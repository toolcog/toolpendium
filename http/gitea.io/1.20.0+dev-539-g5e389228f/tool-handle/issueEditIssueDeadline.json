{
  "name": "issueEditIssueDeadline",
  "description": "Set an issue deadline. If set to null, the deadline is deleted. If using deadline only the date will be taken into account, and time of day ignored.",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "index": {
        "format": "int64",
        "type": "integer",
        "description": "index of the issue to create or update a deadline on"
      },
      "body": {
        "$ref": "#/$defs/EditDeadlineOption"
      }
    },
    "required": [
      "owner",
      "repo",
      "index"
    ],
    "$defs": {
      "EditDeadlineOption": {
        "description": "EditDeadlineOption options for creating a deadline",
        "properties": {
          "due_date": {
            "format": "date-time",
            "type": "string",
            "x-go-name": "Deadline"
          }
        },
        "required": [
          "due_date"
        ],
        "type": "object",
        "x-go-package": "code.gitea.io/gitea/modules/structs"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/issues/{index}/deadline"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "IssueDeadline represents an issue deadline",
        "**Key properties:**",
        {
          "$ul": [
            "**due_date**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
