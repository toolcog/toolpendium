{
  "name": "repoGetTag",
  "description": "Get the tag of a repository by tag name",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "tag": {
        "type": "string",
        "description": "name of tag"
      }
    },
    "required": [
      "owner",
      "repo",
      "tag"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/tags/{tag}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Tag represents a repository tag",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**commit**",
              {
                "$ul": [
                  "**created**",
                  "**sha**",
                  "**url**"
                ]
              }
            ],
            "**id**",
            "**message**",
            "**name**",
            "**tarball_url**",
            "**zipball_url**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
