{
  "name": "getGeneralAPISettings",
  "description": "Get instance's global settings for api",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/settings/api"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "GeneralAPISettings contains global api settings exposed by it",
        "**Key properties:**",
        {
          "$ul": [
            "**default_git_trees_per_page**",
            "**default_max_blob_size**",
            "**default_paging_num**",
            "**max_response_items**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
