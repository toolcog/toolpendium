{
  "name": "repoListGitRefs",
  "description": "Get specified ref or filtered repository's refs",
  "parameters": {
    "type": "object",
    "properties": {
      "owner": {
        "type": "string",
        "description": "owner of the repo"
      },
      "repo": {
        "type": "string",
        "description": "name of the repo"
      },
      "ref": {
        "type": "string",
        "description": "part or full name of the ref"
      }
    },
    "required": [
      "owner",
      "repo",
      "ref"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/v1/repos/{owner}/{repo}/git/refs/{ref}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Reference represents a Git reference. list"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**object**",
              {
                "$ul": [
                  "**sha**",
                  "**type**",
                  "**url**"
                ]
              }
            ],
            "**ref**",
            "**url**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
