{
  "name": "findPetsByTags",
  "description": "Find a defined card thatusing its global id",
  "parameters": {
    "type": "object",
    "properties": {
      "cardId": {
        "type": "string",
        "description": "Tags to filter by"
      }
    },
    "required": [
      "cardId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.tcgdex.net/v2/en/cards/{cardId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**abilities**",
            "**attacks**",
            "**category**",
            "**description**",
            "**dexId**",
            "**energyType**",
            "**evolveFrom**",
            "**hp**",
            "**id**",
            "**illustrator**",
            "**image**",
            [
              "**item**",
              {
                "$ul": [
                  "**effect**",
                  "**name**"
                ]
              }
            ],
            [
              "**legal**",
              {
                "$ul": [
                  "**expanded**",
                  "**standard**"
                ]
              }
            ],
            "**level**",
            "**localId**",
            "**name**",
            "**rarity**",
            "**regulationMark**",
            "**resistances**",
            "**retreat**",
            [
              "**set**",
              {
                "$ul": [
                  [
                    "**cardCount**",
                    {
                      "$ul": [
                        "**official**",
                        "**total**"
                      ]
                    }
                  ],
                  "**id**",
                  "**logo**",
                  "**name**",
                  "**symbol**"
                ]
              }
            ],
            "**stage**",
            "**suffix**",
            "**trainerType**",
            "**types**",
            [
              "**variants**",
              {
                "$ul": [
                  "**firstEdition**",
                  "**holo**",
                  "**normal**",
                  "**reverse**",
                  "**wPromo**"
                ]
              }
            ],
            "**weaknesses**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
