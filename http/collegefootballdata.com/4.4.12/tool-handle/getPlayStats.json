{
  "name": "getPlayStats",
  "description": "Gets player stats associated by play (limit 1000)",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "minimum": 2013,
        "type": "integer",
        "description": "Year filter"
      },
      "week": {
        "maximum": 16,
        "minimum": 1,
        "type": "integer",
        "description": "Week filter"
      },
      "team": {
        "type": "string",
        "description": "Team filter"
      },
      "gameId": {
        "type": "integer",
        "description": "gameId filter (from /games endpoint)"
      },
      "athleteId": {
        "type": "integer",
        "description": "athleteId filter (from /roster endpoint)"
      },
      "statTypeId": {
        "type": "integer",
        "description": "statTypeId filter (from /play/stat/types endpoint)"
      },
      "seasonType": {
        "type": "string",
        "description": "regular, postseason, or both"
      },
      "conference": {
        "type": "string",
        "description": "conference abbreviation filter"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/play/stats{?year,week,team,gameId,athleteId,statTypeId,seasonType,conference}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**athleteId**",
            "**athleteName**",
            [
              "**clock**",
              {
                "$ul": [
                  "**minutes**",
                  "**seconds**"
                ]
              }
            ],
            "**conference**",
            "**distance**",
            "**down**",
            "**driveId**",
            "**gameId**",
            "**opponent**",
            "**opponentScore**",
            "**period**",
            "**playId**",
            "**season**",
            "**stat**",
            "**statType**",
            "**team**",
            "**teamScore**",
            "**week**",
            "**yardsToGoal**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
