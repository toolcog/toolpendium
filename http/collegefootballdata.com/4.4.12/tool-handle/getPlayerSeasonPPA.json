{
  "name": "getPlayerSeasonPPA",
  "description": "Predicted Points Added (PPA) by player season",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "minimum": 2013,
        "type": "integer",
        "description": "Year filter"
      },
      "team": {
        "type": "string",
        "description": "Team filter"
      },
      "conference": {
        "type": "string",
        "description": "Conference abbreviation filter"
      },
      "position": {
        "type": "string",
        "description": "Position abbreviation filter"
      },
      "playerId": {
        "type": "integer",
        "description": "Player id filter"
      },
      "threshold": {
        "type": "string",
        "description": "Minimum play threshold filter"
      },
      "excludeGarbageTime": {
        "type": "boolean",
        "description": "Filter to remove garbage time plays from calculations"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/ppa/players/season{?year,team,conference,position,playerId,threshold,excludeGarbageTime}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**averagePPA**",
              {
                "$ul": [
                  "**all**",
                  "**firstDown**",
                  "**pass**",
                  "**passingDowns**",
                  "**rush**",
                  "**secondDown**",
                  "**standardDowns**",
                  "**thirdDown**"
                ]
              }
            ],
            "**conference**",
            "**id**",
            "**name**",
            "**position**",
            "**season**",
            "**team**",
            [
              "**totalPPA**",
              {
                "$ul": [
                  "**all**",
                  "**firstDown**",
                  "**pass**",
                  "**passingDowns**",
                  "**rush**",
                  "**secondDown**",
                  "**standardDowns**",
                  "**thirdDown**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
