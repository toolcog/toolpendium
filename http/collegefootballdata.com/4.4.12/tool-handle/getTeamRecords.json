{
  "name": "getTeamRecords",
  "description": "Get team records by year",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "minimum": 1869,
        "type": "integer",
        "description": "Year filter"
      },
      "team": {
        "type": "string",
        "description": "Team filter"
      },
      "conference": {
        "type": "string",
        "description": "Conference filter"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/records{?year,team,conference}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**awayGames**",
              {
                "$ul": [
                  "**games**",
                  "**losses**",
                  "**ties**",
                  "**wins**"
                ]
              }
            ],
            "**conference**",
            [
              "**conferenceGames**",
              {
                "$ul": [
                  "**games**",
                  "**losses**",
                  "**ties**",
                  "**wins**"
                ]
              }
            ],
            "**division**",
            "**expectedWins**",
            [
              "**homeGames**",
              {
                "$ul": [
                  "**games**",
                  "**losses**",
                  "**ties**",
                  "**wins**"
                ]
              }
            ],
            "**team**",
            [
              "**total**",
              {
                "$ul": [
                  "**games**",
                  "**losses**",
                  "**ties**",
                  "**wins**"
                ]
              }
            ],
            "**year**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
