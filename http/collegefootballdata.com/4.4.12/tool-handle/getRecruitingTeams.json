{
  "name": "getRecruitingTeams",
  "description": "Team recruiting rankings",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "minimum": 2000,
        "type": "integer",
        "description": "Recruiting class year"
      },
      "team": {
        "type": "string",
        "description": "Team filter"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/recruiting/teams{?year,team}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**points**",
            "**rank**",
            "**team**",
            "**year**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
