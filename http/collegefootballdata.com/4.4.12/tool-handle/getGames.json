{
  "name": "getGames",
  "description": "Get game results",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "minimum": 1869,
        "type": "integer",
        "description": "Year/season filter for games"
      },
      "week": {
        "maximum": 16,
        "minimum": 1,
        "type": "integer",
        "description": "Week filter"
      },
      "seasonType": {
        "default": "regular",
        "type": "string",
        "description": "Season type filter (regular or postseason)"
      },
      "team": {
        "type": "string",
        "description": "Team"
      },
      "home": {
        "type": "string",
        "description": "Home team filter"
      },
      "away": {
        "type": "string",
        "description": "Away team filter"
      },
      "conference": {
        "type": "string",
        "description": "Conference abbreviation filter"
      },
      "division": {
        "type": "string",
        "description": "Division classification filter (fbs/fcs/ii/iii)"
      },
      "id": {
        "type": "integer",
        "description": "id filter for querying a single game"
      }
    },
    "required": [
      "year"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/games{?year,week,seasonType,team,home,away,conference,division,id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**attendance**",
            "**away_conference**",
            "**away_division**",
            "**away_id**",
            "**away_line_scores**",
            "**away_points**",
            "**away_post_win_prob**",
            "**away_postgame_elo**",
            "**away_pregame_elo**",
            "**away_team**",
            "**completed**",
            "**conference_game**",
            "**excitement_index**",
            "**highlights**",
            "**home_conference**",
            "**home_division**",
            "**home_id**",
            "**home_line_scores**",
            "**home_points**",
            "**home_post_win_prob**",
            "**home_postgame_elo**",
            "**home_pregame_elo**",
            "**home_team**",
            "**id**",
            "**neutral_site**",
            "**notes**",
            "**season**",
            "**season_type**",
            "**start_date**",
            "**start_time_tbd**",
            "**venue**",
            "**venue_id**",
            "**week**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
