{
  "name": "getTeamGameStats",
  "description": "Team stats broken down by game",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "minimum": 2001,
        "type": "integer",
        "description": "Year/season filter for games"
      },
      "week": {
        "maximum": 16,
        "minimum": 1,
        "type": "integer",
        "description": "Week filter"
      },
      "seasonType": {
        "default": "regular",
        "type": "string",
        "description": "Season type filter (regular or postseason)"
      },
      "team": {
        "type": "string",
        "description": "Team filter"
      },
      "conference": {
        "type": "string",
        "description": "Conference abbreviation filter"
      },
      "gameId": {
        "type": "integer",
        "description": "Game id filter"
      },
      "classification": {
        "type": "string",
        "description": "Division classification filter (fbs/fcs/ii/iii)"
      }
    },
    "required": [
      "year"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/games/teams{?year,week,seasonType,team,conference,gameId,classification}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**id**",
            "**teams**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
