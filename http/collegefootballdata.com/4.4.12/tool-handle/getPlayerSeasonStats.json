{
  "name": "getPlayerSeasonStats",
  "description": "Season player stats",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "type": "integer",
        "description": "Year filter"
      },
      "team": {
        "type": "string",
        "description": "Team filter"
      },
      "conference": {
        "type": "string",
        "description": "Conference abbreviation filter"
      },
      "startWeek": {
        "type": "integer",
        "description": "Start week filter"
      },
      "endWeek": {
        "type": "integer",
        "description": "Start week filter"
      },
      "seasonType": {
        "type": "string",
        "description": "Season type filter (regular, postseason, or both)"
      },
      "category": {
        "type": "string",
        "description": "Stat category filter (e.g. passing)"
      }
    },
    "required": [
      "year"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/stats/player/season{?year,team,conference,startWeek,endWeek,seasonType,category}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**category**",
            "**conference**",
            "**player**",
            "**playerId**",
            "**season**",
            "**stat**",
            "**statType**",
            "**team**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
