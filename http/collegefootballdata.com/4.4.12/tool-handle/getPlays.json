{
  "name": "getPlays",
  "description": "Get play data and results",
  "parameters": {
    "type": "object",
    "properties": {
      "seasonType": {
        "default": "regular",
        "type": "string",
        "description": "Season type filter"
      },
      "year": {
        "minimum": 2001,
        "type": "integer",
        "description": "Year filter"
      },
      "week": {
        "maximum": 16,
        "minimum": 1,
        "type": "integer",
        "description": "Week filter (required if team, offense, or defense, not specified)"
      },
      "team": {
        "type": "string",
        "description": "Team filter"
      },
      "offense": {
        "type": "string",
        "description": "Offensive team filter"
      },
      "defense": {
        "type": "string",
        "description": "Defensive team filter"
      },
      "conference": {
        "type": "string",
        "description": "Conference filter"
      },
      "offenseConference": {
        "type": "string",
        "description": "Offensive conference filter"
      },
      "defenseConference": {
        "type": "string",
        "description": "Defensive conference filter"
      },
      "playType": {
        "type": "integer",
        "description": "Play type filter"
      },
      "classification": {
        "type": "string",
        "description": "Division classification filter (fbs/fcs/ii/iii)"
      }
    },
    "required": [
      "year",
      "week"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/plays{?seasonType,year,week,team,offense,defense,conference,offenseConference,defenseConference,playType,classification}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**away**",
            [
              "**clock**",
              {
                "$ul": [
                  "**minutes**",
                  "**seconds**"
                ]
              }
            ],
            "**defense**",
            "**defense_conference**",
            "**defense_score**",
            "**defense_timeouts**",
            "**distance**",
            "**down**",
            "**drive_id**",
            "**drive_number**",
            "**game_id**",
            "**home**",
            "**id**",
            "**offense**",
            "**offense_conference**",
            "**offense_score**",
            "**offense_timeouts**",
            "**period**",
            "**play_number**",
            "**play_text**",
            "**play_type**",
            "**ppa**",
            "**scoring**",
            "**wallclock**",
            "**yard_line**",
            "**yards_gained**",
            "**yards_to_goal**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
