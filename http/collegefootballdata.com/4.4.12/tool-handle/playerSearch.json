{
  "name": "playerSearch",
  "description": "Search for players",
  "parameters": {
    "type": "object",
    "properties": {
      "searchTerm": {
        "type": "string",
        "description": "Term to search on"
      },
      "position": {
        "type": "string",
        "description": "Position abbreviation filter"
      },
      "team": {
        "type": "string",
        "description": "Team filter"
      },
      "year": {
        "minimum": 2001,
        "type": "integer",
        "description": "Year filter"
      }
    },
    "required": [
      "searchTerm"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/player/search{?searchTerm,position,team,year}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**firstName**",
            "**height**",
            "**hometown**",
            "**id**",
            "**jersey**",
            "**lastName**",
            "**name**",
            "**position**",
            "**team**",
            "**teamColor**",
            "**teamColorSecondary**",
            "**weight**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
