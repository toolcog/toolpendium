{
  "name": "getTeamPPA",
  "description": "Predicted Points Added (PPA)",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "minimum": 2001,
        "type": "integer",
        "description": "Year filter (required if team not specified)"
      },
      "team": {
        "type": "string",
        "description": "Team filter (required if year not specified)"
      },
      "conference": {
        "type": "string",
        "description": "Conference filter"
      },
      "excludeGarbageTime": {
        "type": "boolean",
        "description": "Filter to remove garbage time plays from calculations"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/ppa/teams{?year,team,conference,excludeGarbageTime}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**conference**",
            [
              "**defense**",
              {
                "$ul": [
                  [
                    "**cumulative**",
                    {
                      "$ul": [
                        "**passing**",
                        "**rushing**",
                        "**total**"
                      ]
                    }
                  ],
                  "**firstDown**",
                  "**overall**",
                  "**passing**",
                  "**rushing**",
                  "**secondDown**",
                  "**thirdDown**"
                ]
              }
            ],
            [
              "**offense**",
              {
                "$ul": [
                  [
                    "**cumulative**",
                    {
                      "$ul": [
                        "**passing**",
                        "**rushing**",
                        "**total**"
                      ]
                    }
                  ],
                  "**firstDown**",
                  "**overall**",
                  "**passing**",
                  "**rushing**",
                  "**secondDown**",
                  "**thirdDown**"
                ]
              }
            ],
            "**season**",
            "**team**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
