{
  "name": "getGameWeather",
  "description": "Weather information for the hour of kickoff",
  "parameters": {
    "type": "object",
    "properties": {
      "gameId": {
        "type": "integer",
        "description": "Game id filter (required if no year)"
      },
      "year": {
        "minimum": 2001,
        "type": "integer",
        "description": "Year filter (required if no game id)"
      },
      "week": {
        "maximum": 16,
        "minimum": 1,
        "type": "integer",
        "description": "Week filter"
      },
      "seasonType": {
        "type": "string",
        "description": "Season type filter (regular, postseason, or both)"
      },
      "team": {
        "type": "string",
        "description": "Team filter"
      },
      "conference": {
        "type": "string",
        "description": "Conference filter"
      },
      "classification": {
        "type": "string",
        "description": "Division classification filter (fbs/fcs/ii/iii)"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/games/weather{?gameId,year,week,seasonType,team,conference,classification}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**awayConference**",
            "**awayTeam**",
            "**dewPoint**",
            "**gameIndoors**",
            "**homeConference**",
            "**homeTeam**",
            "**humidity**",
            "**id**",
            "**precipitation**",
            "**pressure**",
            "**season**",
            "**seasonType**",
            "**snowfall**",
            "**startTime**",
            "**temperature**",
            "**venue**",
            "**venueId**",
            "**weatherCondition**",
            "**weatherConditionCode**",
            "**week**",
            "**windDirection**",
            "**windSpeed**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
