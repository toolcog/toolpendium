{
  "name": "getAdvancedTeamGameStats",
  "description": "Advanced team game stats",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "minimum": 2001,
        "type": "integer",
        "description": "Year filter (required if no team specified)"
      },
      "week": {
        "maximum": 16,
        "minimum": 1,
        "type": "integer",
        "description": "Week filter"
      },
      "team": {
        "type": "string",
        "description": "Team filter (required if no year specified)"
      },
      "opponent": {
        "type": "string",
        "description": "Opponent filter"
      },
      "excludeGarbageTime": {
        "type": "boolean",
        "description": "Filter to remove garbage time plays from calculations"
      },
      "seasonType": {
        "type": "string",
        "description": "Season type filter (regular, postseason, or both)"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.collegefootballdata.com/stats/game/advanced{?year,week,team,opponent,excludeGarbageTime,seasonType}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**defense**",
              {
                "$ul": [
                  "**drives**",
                  "**explosiveness**",
                  "**lineYards**",
                  "**lineYardsTotal**",
                  "**openFieldYards**",
                  "**openFieldYardsTotal**",
                  [
                    "**passingDowns**",
                    {
                      "$ul": [
                        "**explosiveness**",
                        "**ppa**",
                        "**successRate**"
                      ]
                    }
                  ],
                  [
                    "**passingPlays**",
                    {
                      "$ul": [
                        "**explosiveness**",
                        "**ppa**",
                        "**successRate**",
                        "**totalPPA**"
                      ]
                    }
                  ],
                  "**plays**",
                  "**powerSuccess**",
                  "**ppa**",
                  [
                    "**rushingPlays**",
                    {
                      "$ul": [
                        "**explosiveness**",
                        "**ppa**",
                        "**successRate**",
                        "**totalPPA**"
                      ]
                    }
                  ],
                  "**secondLevelYards**",
                  "**secondLevelYardsTotal**",
                  [
                    "**standardDowns**",
                    {
                      "$ul": [
                        "**explosiveness**",
                        "**ppa**",
                        "**successRate**"
                      ]
                    }
                  ],
                  "**stuffRate**",
                  "**successRate**",
                  "**totalPPA**"
                ]
              }
            ],
            "**gameId**",
            [
              "**offense**",
              {
                "$ul": [
                  "**drives**",
                  "**explosiveness**",
                  "**lineYards**",
                  "**lineYardsTotal**",
                  "**openFieldYards**",
                  "**openFieldYardsTotal**",
                  [
                    "**passingDowns**",
                    {
                      "$ul": [
                        "**explosiveness**",
                        "**ppa**",
                        "**successRate**"
                      ]
                    }
                  ],
                  [
                    "**passingPlays**",
                    {
                      "$ul": [
                        "**explosiveness**",
                        "**ppa**",
                        "**successRate**",
                        "**totalPPA**"
                      ]
                    }
                  ],
                  "**plays**",
                  "**powerSuccess**",
                  "**ppa**",
                  [
                    "**rushingPlays**",
                    {
                      "$ul": [
                        "**explosiveness**",
                        "**ppa**",
                        "**successRate**",
                        "**totalPPA**"
                      ]
                    }
                  ],
                  "**secondLevelYards**",
                  "**secondLevelYardsTotal**",
                  [
                    "**standardDowns**",
                    {
                      "$ul": [
                        "**explosiveness**",
                        "**ppa**",
                        "**successRate**"
                      ]
                    }
                  ],
                  "**stuffRate**",
                  "**successRate**",
                  "**totalPPA**"
                ]
              }
            ],
            "**opponent**",
            "**season**",
            "**team**",
            "**week**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
