{
  "name": "historicalExchangeRate",
  "description": "Get the exchange rate on a specific date",
  "parameters": {
    "type": "object",
    "properties": {
      "apikey": {
        "description": "Authentication key.",
        "example": "YOUR_API_KEY",
        "type": "string"
      },
      "base": {
        "description": "The source currency.",
        "example": "USD",
        "type": "string"
      },
      "target": {
        "description": "The target currency.",
        "example": "EUR",
        "type": "string"
      },
      "date": {
        "description": "The date to get the exchange rate.",
        "example": "2023-04-18",
        "type": "string"
      }
    },
    "required": [
      "apikey",
      "base",
      "target",
      "date"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.currencytick.com/historical{?apikey,base,target,date}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**amount**",
            "**date**",
            "**from**",
            "**rate**",
            "**to**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
