{
  "name": "liveCurrencyExchangeRate",
  "description": "Get the exchange rate between two currencies.",
  "parameters": {
    "type": "object",
    "properties": {
      "apikey": {
        "description": "Authentication key.",
        "example": "YOUR_API_KEY",
        "type": "string"
      },
      "base": {
        "description": "The source currency.",
        "example": "USD",
        "type": "string"
      },
      "target": {
        "description": "The target currency.",
        "example": "EUR",
        "type": "string"
      },
      "amount": {
        "description": "optional The amount to convert.",
        "example": 1,
        "type": "number"
      }
    },
    "required": [
      "apikey",
      "base",
      "target"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.currencytick.com/live{?apikey,base,target,amount}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**amount**",
            "**date**",
            "**from**",
            "**rate**",
            "**to**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
