{
  "name": "postSubmissionComment",
  "description": "Add a feedback comment to a submission",
  "parameters": {
    "type": "object",
    "properties": {
      "class": {
        "type": "string",
        "description": "Unique identifier of the class"
      },
      "assignment": {
        "type": "string",
        "description": "Unique identifier of the assignment"
      },
      "submission": {
        "type": "string",
        "description": "Unique identifier of the submission"
      },
      "body": {
        "$ref": "#/$defs/AssignmentSubmissionCommentCreation"
      }
    },
    "required": [
      "class",
      "assignment",
      "submission",
      "body"
    ],
    "$defs": {
      "AssignmentSubmissionCommentCreation": {
        "description": "Creation of a assignment submission comment",
        "properties": {
          "comment": {
            "description": "The comment text",
            "type": "string"
          }
        },
        "required": [
          "comment"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.flat.io/v2/classes/{class}/assignments/{assignment}/submissions/{submission}/comments"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Feedback comment added to an assignment submission",
        "**Key properties:**",
        {
          "$ul": [
            "**comment**: The comment text",
            "**date**: The date when the comment was posted",
            "**id**: The comment unique identifier",
            "**modificationDate**: The date of the last comment modification",
            "**submission**: The submission unique identifier",
            "**unread**: True if the comment is unread by the current user",
            "**user**: The author unique identifier"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An API Error response",
        "**Key properties:**",
