{
  "name": "listInflectedForms",
  "description": "List inflected forms",
  "parameters": {
    "type": "object",
    "properties": {
      "language": {
        "example": "{language_code}",
        "type": "string",
        "description": "(Required) The language code"
      },
      "lexeme": {
        "example": "{lexeme_id}",
        "type": "string",
        "description": "(Required) The lexeme to inspect"
      },
      "family": {
        "example": "{family_id}",
        "type": "string",
        "description": "(Required) The family to inspect"
      },
      "Ocp-Apim-Subscription-Key": {
        "example": "{{apiKey}}",
        "type": "string",
        "description": "{{apiKeyDescription}}"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.tisane.ai/inflections{?language,lexeme,family}"
    },
    "headers": {
      "Ocp-Apim-Subscription-Key": {
        "$": "Ocp-Apim-Subscription-Key"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**features**",
            "**isLemma**",
            "**text**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
