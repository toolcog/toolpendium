{
  "name": "listWordSenses",
  "description": "Fetches and outputs all senses related to a word.",
  "parameters": {
    "type": "object",
    "properties": {
      "language": {
        "example": "{language_code}",
        "type": "string",
        "description": "(Required) a standard culture code (ISO-639 language code with an optional country extension)"
      },
      "word": {
        "example": "{word}",
        "type": "string",
        "description": "(Required) the word to inspect"
      },
      "Ocp-Apim-Subscription-Key": {
        "example": "{{apiKey}}",
        "type": "string",
        "description": "{{apiKeyDescription}}"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.tisane.ai/senses{?language,word}"
    },
    "headers": {
      "Ocp-Apim-Subscription-Key": {
        "$": "Ocp-Apim-Subscription-Key"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**families**",
            "**features**",
            "**frequency**",
            "**isLemma**",
            "**legacyMapId**",
            "**lemma**",
            "**lexemeId**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
