{
  "name": "getBlockchain",
  "description": "Get basic summary of info relating to the currently selected blockchain",
  "parameters": {
    "type": "object",
    "properties": {
      "blockchain": {
        "example": "bitcoin",
        "type": "string",
        "description": "Blockchain name"
      }
    },
    "required": [
      "blockchain"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.chain49.com/{blockchain}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**backend**",
              {
                "$ul": [
                  "**bestBlockHash**",
                  "**blocks**",
                  "**chain**",
                  "**difficulty**",
                  "**headers**",
                  "**protocolVersion**",
                  "**sizeOnDisk**",
                  "**subversion**",
                  "**version**"
                ]
              }
            ],
            [
              "**blockbook**",
              {
                "$ul": [
                  "**about**",
                  "**bestHeight**",
                  "**buildTime**",
                  "**coin**",
                  "**currentFiatRatesTime**",
                  "**dbSize**",
                  "**decimals**",
                  "**gitCommit**",
                  "**hasFiatRates**",
                  "**historicalFiatRatesTime**",
                  "**host**",
                  "**inSync**",
                  "**inSyncMempool**",
                  "**initialSync**",
                  "**lastBlockTime**",
                  "**lastMempoolTime**",
                  "**mempoolSize**",
                  "**syncMode**",
                  "**version**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
