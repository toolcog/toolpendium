{
  "name": "getEstimateFeeV2",
  "description": "Returns an estimated transaction fee for a specific confirmation target.\nIf you want your transaction to be included in the next block, then you give 1 as parameter. If it is not urgent, then you can wait a bit longer and get an estimation for the fifth next block.",
  "parameters": {
    "type": "object",
    "properties": {
      "blockchain": {
        "example": "bitcoin",
        "type": "string",
        "description": "Blockchain name"
      },
      "confirmationTarget": {
        "example": 1,
        "type": "integer",
        "description": "Number of blocks in which the transaction should be confirmed"
      }
    },
    "required": [
      "blockchain",
      "confirmationTarget"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.chain49.com/{blockchain}/v2/estimatefee/{confirmationTarget}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**result**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
