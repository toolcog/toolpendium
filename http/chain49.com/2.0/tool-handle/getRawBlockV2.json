{
  "name": "getRawBlockV2",
  "description": "Returns the raw hex-encoded block data for a given block hash or height",
  "parameters": {
    "type": "object",
    "properties": {
      "blockchain": {
        "example": "bitcoin",
        "type": "string",
        "description": "Blockchain name"
      },
      "blockHashOrHeight": {
        "example": "00000000000000000035835503f43c878ebb643f3b40bdfd0dfda760da74e73c",
        "type": "string",
        "description": "Block hash or height"
      }
    },
    "required": [
      "blockchain",
      "blockHashOrHeight"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.chain49.com/{blockchain}/v2/rawblock/{blockHashOrHeight}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**hex**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
