{
  "name": "getBalanceHistoryV2",
  "description": "Returns a balance history for the specified XPUB or address\n\nThe value of sentToSelf is the amount sent from the same address to the same address or within addresses of xpub.",
  "parameters": {
    "type": "object",
    "properties": {
      "fromDate": {
        "example": "1578391200",
        "type": "string",
        "description": "specifies a start date as a Unix timestamp"
      },
      "toDate": {
        "example": "1599053802",
        "type": "string",
        "description": "specifies an end date as a Unix timestamp"
      },
      "fiatcurrency": {
        "example": "usd",
        "type": "string",
        "description": "if specified, the response will contain secondary (fiat) rate at the time of transaction. If not, all available currencies will be returned"
      },
      "groupBy": {
        "default": 3600,
        "example": 172800,
        "type": "number",
        "description": "an interval in seconds, to group results by. Default is 3600 seconds"
      },
      "blockchain": {
        "example": "bitcoin",
        "type": "string",
        "description": "Blockchain name"
      },
      "addressOrXpub": {
        "example": "321x69Cb9HZLWwAWGiUBT1U81r1zPLnEjL",
        "type": "string",
        "description": "Address or XPUB"
      }
    },
    "required": [
      "blockchain",
      "addressOrXpub"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.chain49.com/{blockchain}/v2/balancehistory/{addressOrXpub}{?fromDate,toDate,fiatcurrency,groupBy}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**rates**",
            "**received**",
            "**sent**",
            "**sentToSelf**",
            "**time**",
            "**txs**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
