{
  "name": "getTxSpecificV2",
  "description": "Returns transaction data in the exact format as returned by backend, including all coin specific fields",
  "parameters": {
    "type": "object",
    "properties": {
      "blockchain": {
        "example": "bitcoin",
        "type": "string",
        "description": "Blockchain name"
      },
      "txId": {
        "example": "cd8ec77174e426070d0a50779232bba7312b712e2c6843d82d963d7076c61366",
        "type": "string",
        "description": "Transaction ID"
      }
    },
    "required": [
      "blockchain",
      "txId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.chain49.com/{blockchain}/v2/tx-specific/{txId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
