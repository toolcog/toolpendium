{
  "name": "getOrganisationsIdApplicationsAppIdInstances",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "appId": {
        "type": "string"
      }
    },
    "required": [
      "id",
      "appId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.clever-cloud.com/v2/organisations/{id}/applications/{appId}/instances"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**appId**",
            "**appPort**",
            "**commit**",
            "**deployNumber**",
            [
              "**flavor**",
              {
                "$ul": [
                  "**available** (default: false)",
                  "**cpus**",
                  "**disk**",
                  "**mem**",
                  "**microservice** (default: false)",
                  "**name**",
                  "**nice**",
                  "**price**"
                ]
              }
            ],
            "**id**",
            "**ip**",
            "**state**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.id"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
