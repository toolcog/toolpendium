{
  "name": "getOrganisations",
  "parameters": {
    "type": "object",
    "properties": {
      "user": {
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.clever-cloud.com/v2/organisations{?user}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**VAT**",
            "**address**",
            "**avatar**",
            "**city**",
            "**company**",
            "**country**",
            "**description**",
            "**id**",
            "**name**",
            "**vatState**",
            "**zipcode**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
