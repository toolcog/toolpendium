{
  "name": "Line_RouteSequence",
  "description": "Gets all valid routes for given line id, including the sequence of stops on each route.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "A single line id e.g. victoria"
      },
      "direction": {
        "enum": [
          "inbound",
          "outbound",
          "all"
        ],
        "type": "string",
        "description": "The direction of travel. Can be inbound or outbound."
      },
      "serviceTypes": {
        "items": {
          "enum": [
            "Regular",
            "Night"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "A comma seperated list of service types to filter on. Supported values: Regular, Night. Defaulted to 'Regular' if not specified"
      },
      "excludeCrowding": {
        "type": "boolean",
        "description": "That excludes crowding from line disruptions. Can be true or false."
      }
    },
    "required": [
      "id",
      "direction"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.digital.tfl.gov.uk/Line/{id}/Route/Sequence/{direction}{?serviceTypes,excludeCrowding}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**direction**",
            "**isOutboundOnly**",
            "**lineId**",
            "**lineName**",
            "**lineStrings**",
            "**mode**",
            "**orderedLineRoutes**",
            "**stations**",
            "**stopPointSequences**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
