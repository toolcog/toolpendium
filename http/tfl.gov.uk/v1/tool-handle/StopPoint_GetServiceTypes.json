{
  "name": "StopPoint_GetServiceTypes",
  "description": "Gets the service types for a given stoppoint",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The Naptan id of the stop"
      },
      "lineIds": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "The lines which contain the given Naptan id (all lines relevant to the given stoppoint if empty)"
      },
      "modes": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "The modes which the lines are relevant to (all if empty)"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.digital.tfl.gov.uk/StopPoint/ServiceTypes{?id,lineIds,modes}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**lineName**",
            "**lineSpecificServiceTypes**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
