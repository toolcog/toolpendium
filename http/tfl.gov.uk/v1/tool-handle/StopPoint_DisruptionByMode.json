{
  "name": "StopPoint_DisruptionByMode",
  "description": "Gets a distinct list of disrupted stop points for the given modes",
  "parameters": {
    "type": "object",
    "properties": {
      "modes": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "A comma-seperated list of modes e.g. tube,dlr"
      },
      "includeRouteBlockedStops": {
        "type": "boolean",
        "description": ""
      }
    },
    "required": [
      "modes"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.digital.tfl.gov.uk/StopPoint/Mode/{modes}/Disruption{?includeRouteBlockedStops}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**additionalInformation**",
            "**appearance**",
            "**atcoCode**",
            "**commonName**",
            "**description**",
            "**fromDate**",
            "**mode**",
            "**stationAtcoCode**",
            "**toDate**",
            "**type**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
