{
  "name": "AccidentStats_Get",
  "description": "Gets all accident details for accidents occuring in the specified year",
  "parameters": {
    "type": "object",
    "properties": {
      "year": {
        "format": "int32",
        "type": "integer",
        "description": "The year for which to filter the accidents on."
      }
    },
    "required": [
      "year"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.digital.tfl.gov.uk/AccidentStats/{year}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**borough**",
            "**casualties**",
            "**date**",
            "**id**",
            "**lat**",
            "**location**",
            "**lon**",
            "**severity**",
            "**vehicles**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
