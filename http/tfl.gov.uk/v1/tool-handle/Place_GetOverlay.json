{
  "name": "Place_GetOverlay",
  "description": "Gets the place overlay for a given set of co-ordinates and a given width/height.",
  "parameters": {
    "type": "object",
    "properties": {
      "z": {
        "format": "int32",
        "type": "integer",
        "description": "The zoom level"
      },
      "type": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "The place type (a valid list of place types can be obtained from the /Place/Meta/placeTypes endpoint)"
      },
      "width": {
        "format": "int32",
        "type": "integer",
        "description": "The width of the requested overlay."
      },
      "height": {
        "format": "int32",
        "type": "integer",
        "description": "The height of the requested overlay."
      },
      "lat": {
        "type": "string"
      },
      "lon": {
        "type": "string"
      },
      "location.lat": {
        "format": "double",
        "type": "number"
      },
      "location.lon": {
        "format": "double",
        "type": "number"
      },
      "Lat": {
        "type": "string",
        "description": "Automatically added"
      },
      "Lon": {
        "type": "string",
        "description": "Automatically added"
      }
    },
    "required": [
      "z",
      "type",
      "width",
      "height",
      "lat",
      "lon",
      "location.lat",
      "location.lon",
      "Lat",
      "Lon"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.digital.tfl.gov.uk/Place/{type}/overlay/{z}/{Lat}/{Lon}/{width}/{height}{?lat,lon,location.lat,location.lon}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
