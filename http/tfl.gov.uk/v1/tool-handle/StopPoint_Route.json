{
  "name": "StopPoint_Route",
  "description": "Returns the route sections for all the lines that service the given stop point ids",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "A stop point id (station naptan codes e.g. 940GZZLUASL, you can use /StopPoint/Search/{query} endpoint to find a stop point id from a station name)"
      },
      "serviceTypes": {
        "items": {
          "enum": [
            "Regular",
            "Night"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "A comma-separated list of service types to filter on. If not specified. Supported values: Regular, Night. Defaulted to 'Regular' if not specified"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.digital.tfl.gov.uk/StopPoint/{id}/Route{?serviceTypes}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**destinationName**",
            "**direction**",
            "**isActive**",
            "**lineId**",
            "**lineString**",
            "**mode**",
            "**naptanId**",
            "**routeSectionName**",
            "**serviceType**",
            "**validFrom**",
            "**validTo**",
            "**vehicleDestinationText**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
