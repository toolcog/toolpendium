{
  "name": "FetchNearestRoadSegments",
  "description": "For given latitude and longitude, find `n` nearest road segments",
  "parameters": {
    "type": "object",
    "properties": {
      "n": {
        "format": "int32",
        "type": "integer",
        "description": "Number of road segments to return (between 1 and 20)"
      },
      "latitude": {
        "format": "double",
        "type": "number",
        "description": "(Required) Search coordinate latitude"
      },
      "longitude": {
        "format": "double",
        "type": "number",
        "description": "(Required) Search coordinate longitude"
      },
      "X-RapidAPI-Key": {
        "type": "string",
        "description": "(Required) Rapid API Key. See https://rapidapi.com/idealspot-inc-idealspot-inc-default/api/idealspot-geodata"
      },
      "X-RapidAPI-Host": {
        "type": "string",
        "description": ""
      }
    },
    "required": [
      "n",
      "latitude",
      "longitude",
      "X-RapidAPI-Key",
      "X-RapidAPI-Host"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://idealspot-geodata.p.rapidapi.com/api/v1/traffic/roads/nearest/{latitude}/{longitude}{?n}"
    },
    "headers": {
      "X-RapidAPI-Key": {
        "$": "X-RapidAPI-Key"
      },
      "X-RapidAPI-Host": {
        "$": "X-RapidAPI-Host"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "SearchRoadSegments"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  [
                    "**crs**",
                    {
                      "$ul": [
                        [
                          "**properties**",
                          {
                            "$ul": [
                              "**name**"
                            ]
                          }
                        ],
                        "**type**"
                      ]
                    }
                  ],
                  "**features**",
                  "**type**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
