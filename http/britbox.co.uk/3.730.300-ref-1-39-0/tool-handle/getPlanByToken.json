{
  "name": "getPlanByToken",
  "description": "Returns all the plans available for BT flow including additional description data.",
  "parameters": {
    "type": "object",
    "properties": {
      "token": {
        "type": "string",
        "description": "The identifier of the user provided by BT in an initial URL."
      },
      "lang": {
        "type": "string",
        "description": "Language code for the preferred language to be returned in the response.\n\nParameter value is case-insensitive and should be\n  - a valid 2 letter language code without region such as en, de\n  - or with region such as en_us, en_au\n\nIf undefined then defaults to 'en', unless the server has been configured\nwith a custom default.\n\nSee https://en.wikipedia.org/wiki/List_of_ISO_639-1_codes\n"
      }
    },
    "required": [
      "token"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/api/bt/plan/{token}{?lang}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**amount**: The price of a plan. If a free plan then undefined.",
            "**ctaText**: The textual description.",
            "**currency**: The currency a plan is offered in.",
            "**description**: The textual description.",
            "**ees07PlanDescription**",
            "**ees07PlanTitle**",
            "**ees07Title**",
            "**headerText**: The textual description.",
            "**heroText**: The textual description.",
            "**id**: The identifier of a plan.",
            "**interval**: The type of billing period used.",
            "**intervalCount**: Given the `interval` this is how frequently it will run. e.g. every 2 weeks.",
            "**longText**: The textual description.",
            "**nickname**: The title of a plan.",
            "**noThanksText**",
            "**product**: The product of a plan.",
            "**switchingText**",
            "**termsAndConditionsItunes**",
            "**termsAndConditionsStripe**",
            "**trialPeriodDays**: How many days a trial period runs for a plan. Only valid if `hasTrialPeriod` is true."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
