{
  "name": "listPlatforms",
  "description": "Return a list of available platforms.",
  "parameters": {
    "type": "object",
    "properties": {
      "aliases": {
        "default": true,
        "type": "boolean",
        "description": "Flag to display Legacy and Provider Ids."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://tv.api.pressassociation.io/v2/platform{?aliases}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
