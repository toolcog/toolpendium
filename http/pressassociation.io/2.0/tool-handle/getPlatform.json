{
  "name": "getPlatform",
  "description": "Return the content of the selected platform.",
  "parameters": {
    "type": "object",
    "properties": {
      "platformId": {
        "default": "d3b26caa-8c7d-5f97-9eff-40fcf1a6f8d3",
        "type": "string",
        "description": "The identifier for the selected platform."
      }
    },
    "required": [
      "platformId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://tv.api.pressassociation.io/v2/platform/{platformId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
