{
  "name": "getAsset",
  "description": "Return the content of the selected asset.",
  "parameters": {
    "type": "object",
    "properties": {
      "assetId": {
        "type": "string",
        "description": "A asset ID filter for the schedule collection. This can be a reference to any type of asset i.e. movie, season, series or episode."
      },
      "aliases": {
        "default": true,
        "type": "boolean",
        "description": "Flag to display Legacy and Provider Ids."
      }
    },
    "required": [
      "assetId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://tv.api.pressassociation.io/v2/asset/{assetId}{?aliases}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
