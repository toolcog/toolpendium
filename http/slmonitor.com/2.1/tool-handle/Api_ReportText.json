{
  "name": "Api_ReportText",
  "description": "The operation adds a text message to the worker's event history.",
  "parameters": {
    "type": "object",
    "properties": {
      "uniqueUserId": {
        "type": "string",
        "description": "The unique user id"
      },
      "deviceType": {
        "default": 10,
        "enum": [
          1,
          2,
          3,
          4,
          5,
          10,
          11
        ],
        "type": "integer",
        "description": "Optional, the device type performing the command."
      },
      "companyId": {
        "type": "string"
      },
      "body": {
        "type": "string",
        "description": "The text to report"
      }
    },
    "required": [
      "uniqueUserId",
      "companyId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.slmonitor.com/api/v2.1/companies/{companyId}/users/{uniqueUserId}/text{?deviceType}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**",
            "**extensions**",
            "**instance**",
            "**status**",
            "**title**",
            "**type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
