{
  "name": "getConnections",
  "description": "Override the base server url that include version",
  "parameters": {
    "type": "object",
    "properties": {
      "authEventId": {
        "format": "uuid",
        "type": "string",
        "description": "Filter by authEventId"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/Connections{?authEventId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**authEventId**: Identifier shared across connections authorised at the same time",
            "**createdDateUtc**: The date when the user connected this tenant to your app",
            "**id**: Xero identifier",
            "**tenantId**: Xero identifier of organisation",
            "**tenantName**: Xero tenant name",
            "**tenantType**: Xero tenant type (i.e. ORGANISATION, PRACTICE)",
            "**updatedDateUtc**: The date when the user most recently connected this tenant to your app. May differ to the created date if the user has disconnected and subsequently reconnected this tenant to your app."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.id"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
