{
  "name": "deletePayment",
  "description": "Updates a specific payment for invoices and credit notes",
  "parameters": {
    "type": "object",
    "properties": {
      "PaymentID": {
        "format": "uuid",
        "type": "string",
        "description": "Unique identifier for a Payment"
