        "externalDocs": {
          "url": "http://developer.xero.com/documentation/api/payments/"
        },
        "properties": {
          "Status": {
            "default": "DELETED",
            "description": "The status of the payment.",
            "type": "string"
          }
        },
        "required": [
          "Status"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/Payments/{PaymentID}"
    },
    "headers": {
