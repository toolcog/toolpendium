{
  "name": "getPurchaseOrders",
  "description": "Retrieves purchase orders",
  "parameters": {
    "type": "object",
    "properties": {
      "If-Modified-Since": {
        "format": "date-time",
        "type": "string",
        "description": "Only records created or modified since this timestamp will be returned"
      },
      "Status": {
        "enum": [
          "DRAFT",
          "SUBMITTED",
          "AUTHORISED",
          "BILLED",
          "DELETED"
        ],
        "type": "string",
        "description": "Filter by purchase order status"
      },
      "DateFrom": {
        "type": "string",
        "description": "Filter by purchase order date (e.g. GET https://.../PurchaseOrders?DateFrom=2015-12-01&DateTo=2015-12-31"
      },
      "DateTo": {
        "type": "string",
        "description": "Filter by purchase order date (e.g. GET https://.../PurchaseOrders?DateFrom=2015-12-01&DateTo=2015-12-31"
      },
      "order": {
        "type": "string",
        "description": "Order by an any element"
      },
      "page": {
        "type": "integer",
        "description": "To specify a page, append the page parameter to the URL e.g. ?page=1. If there are 100 records in the response you will need to check if there is any more data by fetching the next page e.g ?page=2 and continuing this process until no more results are returned."
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "xero-tenant-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/PurchaseOrders{?Status,DateFrom,DateTo,order,page}"
    },
    "headers": {
      "If-Modified-Since": {
        "$": "If-Modified-Since"
      },
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**PurchaseOrders**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
