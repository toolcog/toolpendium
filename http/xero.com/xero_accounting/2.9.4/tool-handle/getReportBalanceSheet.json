{
  "name": "getReportBalanceSheet",
  "description": "Retrieves report for balancesheet",
  "parameters": {
    "type": "object",
    "properties": {
      "date": {
        "format": "date",
        "type": "string",
        "description": "The date of the Balance Sheet report"
      },
      "periods": {
        "type": "integer",
        "description": "The number of periods for the Balance Sheet report"
      },
      "timeframe": {
        "enum": [
          "MONTH",
          "QUARTER",
          "YEAR"
        ],
        "type": "string",
        "description": "The period size to compare to (MONTH, QUARTER, YEAR)"
      },
      "trackingOptionID1": {
        "type": "string",
        "description": "The tracking option 1 for the Balance Sheet report"
      },
      "trackingOptionID2": {
        "type": "string",
        "description": "The tracking option 2 for the Balance Sheet report"
      },
      "standardLayout": {
        "type": "boolean",
        "description": "The standard layout boolean for the Balance Sheet report"
      },
      "paymentsOnly": {
        "type": "boolean",
        "description": "return a cash basis for the Balance Sheet report"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "xero-tenant-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/Reports/BalanceSheet{?date,periods,timeframe,trackingOptionID1,trackingOptionID2,standardLayout,paymentsOnly}"
    },
    "headers": {
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Reports**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
