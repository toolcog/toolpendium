{
  "name": "updateContact",
  "description": "Updates a specific contact in a Xero organisation",
  "parameters": {
    "type": "object",
    "properties": {
      "ContactID": {
        "format": "uuid",
        "type": "string",
        "description": "Unique identifier for a Contact"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      },
      "body": {
        "$ref": "#/components/schemas/Contacts",
        "description": "an array of Contacts containing single Contact object with properties to update"
      }
    },
    "required": [
      "ContactID",
      "xero-tenant-id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/Contacts/{ContactID}"
    },
    "headers": {
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
