{
  "name": "getReportBudgetSummary",
  "description": "Retrieves report for budget summary",
  "parameters": {
    "type": "object",
    "properties": {
      "date": {
        "format": "date",
        "type": "string",
        "description": "The date for the Bank Summary report e.g. 2018-03-31"
      },
      "period": {
        "type": "integer",
        "description": "The number of periods to compare (integer between 1 and 12)"
      },
      "timeframe": {
        "type": "integer",
        "description": "The period size to compare to (1=month, 3=quarter, 12=year)"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "xero-tenant-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/Reports/BudgetSummary{?date,period,timeframe}"
    },
    "headers": {
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Reports**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
