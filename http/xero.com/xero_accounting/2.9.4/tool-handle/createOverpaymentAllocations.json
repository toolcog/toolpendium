{
  "name": "createOverpaymentAllocations",
  "description": "Creates a single allocation for a specific overpayment",
  "parameters": {
    "type": "object",
    "properties": {
      "OverpaymentID": {
        "format": "uuid",
        "type": "string",
        "description": "Unique identifier for a Overpayment"
      },
      "summarizeErrors": {
        "default": false,
        "type": "boolean",
        "description": "If false return 200 OK and mix of successfully created objects and any with validation errors"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      },
      "body": {
        "$ref": "#/components/schemas/Allocations",
        "description": "Allocations array with Allocation object in body of request"
      }
    },
    "required": [
      "OverpaymentID",
      "xero-tenant-id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/Overpayments/{OverpaymentID}/Allocations{?summarizeErrors}"
    },
    "headers": {
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Allocations**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Elements**: Array of Elements of validation Errors",
            "**ErrorNumber**: Exception number",
            "**Message**: Exception message",
            "**Type**: Exception type"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
