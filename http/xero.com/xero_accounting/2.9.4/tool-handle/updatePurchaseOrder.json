          "Status": {
            "description": "The Status of a contact group. To delete a contact group update the status to DELETED. Only contact groups with a status of ACTIVE are returned on GETs.",
            "enum": [
              "ACTIVE",
              "DELETED"
            ],
            "type": "string"
