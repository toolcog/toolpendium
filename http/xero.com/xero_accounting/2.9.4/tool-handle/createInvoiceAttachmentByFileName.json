{
  "name": "createInvoiceAttachmentByFileName",
  "description": "Creates an attachment for a specific invoice or purchase bill by filename",
  "parameters": {
    "type": "object",
    "properties": {
      "InvoiceID": {
        "format": "uuid",
        "type": "string",
        "description": "Unique identifier for an Invoice"
      },
      "FileName": {
        "type": "string",
        "description": "Name of the file you are attaching"
      },
      "IncludeOnline": {
        "default": false,
        "type": "boolean",
        "description": "Allows an attachment to be seen by the end customer within their online invoice"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "InvoiceID",
      "FileName",
      "xero-tenant-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/Invoices/{InvoiceID}/Attachments/{FileName}{?IncludeOnline}"
    },
    "headers": {
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Attachments**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Elements**: Array of Elements of validation Errors",
            "**ErrorNumber**: Exception number",
            "**Message**: Exception message",
            "**Type**: Exception type"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
