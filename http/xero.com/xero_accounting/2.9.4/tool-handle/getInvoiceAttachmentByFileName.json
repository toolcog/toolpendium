{
  "name": "getInvoiceAttachmentByFileName",
  "description": "Retrieves an attachment from a specific invoice or purchase bill by filename",
  "parameters": {
    "type": "object",
    "properties": {
      "InvoiceID": {
        "format": "uuid",
        "type": "string",
        "description": "Unique identifier for an Invoice"
      },
      "FileName": {
        "type": "string",
        "description": "Name of the file you are attaching"
      },
      "contentType": {
        "type": "string",
        "description": "The mime type of the attachment file you are retrieving i.e image/jpg, application/pdf"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "InvoiceID",
      "FileName",
      "contentType",
      "xero-tenant-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/Invoices/{InvoiceID}/Attachments/{FileName}"
    },
    "headers": {
      "contentType": {
        "$": "contentType"
      },
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
