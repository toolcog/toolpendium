{
  "name": "getTrackingCategories",
  "description": "Retrieves tracking categories and options",
  "parameters": {
    "type": "object",
    "properties": {
      "where": {
        "type": "string",
        "description": "Filter by an any element"
      },
      "order": {
        "type": "string",
        "description": "Order by an any element"
      },
      "includeArchived": {
        "type": "boolean",
        "description": "e.g. includeArchived=true - Categories and options with a status of ARCHIVED will be included in the response"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "xero-tenant-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/TrackingCategories{?where,order,includeArchived}"
    },
    "headers": {
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**TrackingCategories**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
