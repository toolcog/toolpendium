{
  "name": "getInvoiceAsPdf",
  "description": "Retrieves invoices or purchase bills as PDF files",
  "parameters": {
    "type": "object",
    "properties": {
      "InvoiceID": {
        "format": "uuid",
        "type": "string",
        "description": "Unique identifier for an Invoice"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "InvoiceID",
      "xero-tenant-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/Invoices/{InvoiceID}/pdf"
    },
    "headers": {
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
