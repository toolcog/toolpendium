{
  "name": "getItem",
  "description": "Retrieves a specific item using a unique item Id",
  "parameters": {
    "type": "object",
    "properties": {
      "ItemID": {
        "format": "uuid",
        "type": "string",
        "description": "Unique identifier for an Item"
      },
      "unitdp": {
        "type": "integer",
        "description": "e.g. unitdp=4 â€“ (Unit Decimal Places) You can opt in to use four decimal places for unit amounts"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "ItemID",
      "xero-tenant-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/api.xro/2.0/Items/{ItemID}{?unitdp}"
    },
    "headers": {
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Items**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
