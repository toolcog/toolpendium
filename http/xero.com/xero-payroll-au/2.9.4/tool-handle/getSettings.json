{
  "name": "getSettings",
  "description": "Retrieves payroll settings",
  "parameters": {
    "type": "object",
    "properties": {
      "Xero-Tenant-Id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "Xero-Tenant-Id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/payroll.xro/1.0/Settings"
    },
    "headers": {
      "Xero-Tenant-Id": {
        "$": "Xero-Tenant-Id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**Settings**",
              {
                "$ul": [
                  "**Accounts**: Payroll Account details for SuperExpense, SuperLiabilty, WagesExpense, PAYGLiability & WagesPayable.",
                  "**DaysInPayrollYear**: Number of days in the Payroll year",
                  [
                    "**TrackingCategories**: Tracking categories for Employees and Timesheets",
                    {
                      "$ul": [
                        [
                          "**EmployeeGroups**: The tracking category used for employees",
                          {
                            "$ul": [
                              "**TrackingCategoryID**: The identifier for the tracking category",
                              "**TrackingCategoryName**: Name of the tracking category"
                            ]
                          }
                        ],
                        [
                          "**TimesheetCategories**: The tracking category used for timesheets",
                          {
                            "$ul": [
                              "**TrackingCategoryID**: The identifier for the tracking category",
                              "**TrackingCategoryName**: Name of the tracking category"
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
