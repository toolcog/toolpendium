{
  "name": "getFiles",
  "description": "Retrieves files",
  "parameters": {
    "type": "object",
    "properties": {
      "pagesize": {
        "example": 50,
        "maximum": 100,
        "type": "integer",
        "description": "pass an optional page size value"
      },
      "page": {
        "example": 2,
        "minimum": 1,
        "type": "integer",
        "description": "number of records to skip for pagination"
      },
      "sort": {
        "enum": [
          "Name",
          "Size",
          "CreatedDateUTC"
        ],
        "example": "CreatedDateUTC DESC",
        "type": "string",
        "description": "values to sort by"
      },
      "xero-tenant-id": {
        "type": "string",
        "description": "Xero identifier for Tenant"
      }
    },
    "required": [
      "xero-tenant-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.xero.com/files.xro/1.0//Files{?pagesize,page,sort}"
    },
    "headers": {
      "xero-tenant-id": {
        "$": "xero-tenant-id"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Items**",
            "**Page**",
            "**PerPage**",
            "**TotalCount**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
