{
  "name": "Create_a_New_Question",
  "description": "You may create your own question using this action. It takes a JSON\nobject containing a question and a collection of answers in the\nform of choices.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "example": {
          "choices": [
            "Swift",
            "Python",
            "Objective-C",
            "Ruby"
          ],
          "question": "Favourite programming language?"
        },
        "properties": {
          "choices": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "question": {
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://polls.apiblueprint.org/questions"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
