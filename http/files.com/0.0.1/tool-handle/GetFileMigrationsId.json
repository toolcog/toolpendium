{
  "name": "GetFileMigrationsId",
  "description": "Show File Migration",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int32",
        "type": "integer",
        "description": "File Migration ID."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//app.files.com/api/rest/v1/file_migrations/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Show File Migration",
        "**Key properties:**",
        {
          "$ul": [
            "**dest_path**: Destination path",
            "**files_moved**: Number of files processed",
            "**files_total**: Deprecated: used to return a count of the applicable files.  Currently returns 0 always.  On remote servers, it is not possible to reliably determine the number of affected files for every migration operation.",
            "**id**: File migration ID",
            "**log_url**: Link to download the log file for this migration.",
            "**operation**: The type of operation",
            "**path**: Source path",
            "**region**: Region",
            "**status**: Status"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
