{
  "name": "GetPaymentsId",
  "description": "Show Payment",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int32",
        "type": "integer",
        "description": "Payment ID."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//app.files.com/api/rest/v1/payments/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "List Payments",
        "**Key properties:**",
        {
          "$ul": [
            "**amount**: Line item amount",
            "**balance**: Line item balance",
            "**created_at**: Line item created at",
            "**currency**: Line item currency",
            "**download_uri**: Line item download uri",
            "**id**: Line item Id",
            "**invoice_line_items**: Associated invoice line items",
            "**method**: Line item payment method",
            "**payment_line_items**: Associated payment line items",
            "**payment_reversed_at**: Date/time payment was reversed if applicable",
            "**payment_type**: Type of payment if applicable",
            "**site_name**: Site name this line item is for",
            "**type**: Type of line item, either payment or invoice",
            "**updated_at**: Line item updated at"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
