{
  "name": "FileActionCopy",
  "description": "Copy file/folder",
  "parameters": {
    "type": "object",
    "properties": {
      "path": {
        "type": "string",
        "description": "Path to operate on."
      },
      "body": {
        "properties": {
          "destination": {
            "description": "Copy destination path.",
            "type": "string",
            "x-ms-summary": "Copy destination path."
          },
          "structure": {
            "description": "Copy structure only?",
            "type": "boolean",
            "x-ms-summary": "Copy structure only?"
          }
        },
        "required": [
          "destination"
        ],
        "type": "object"
      }
    },
    "required": [
      "path",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "//app.files.com/api/rest/v1/file_actions/copy/{path}"
    },
    "body": {
      "$": "body",
      "encode": "multipart"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Move file/folder",
        "**Key properties:**",
        {
          "$ul": [
            "**file_migration_id**: If status is pending, this is the id of the FileMigration to check for status updates.",
            "**status**: Status of file operation."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
