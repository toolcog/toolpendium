{
  "name": "DeleteFilesPath",
  "description": "Delete file/folder",
  "parameters": {
    "type": "object",
    "properties": {
      "path": {
        "type": "string",
        "description": "Path to operate on."
      },
      "recursive": {
        "type": "boolean",
        "description": "If true, will recursively delete folers.  Otherwise, will error on non-empty folders."
      }
    },
    "required": [
      "path"
    ]
  },
  "handler": "http",
  "request": {
    "method": "DELETE",
    "url": {
      "$uri": "//app.files.com/api/rest/v1/files/{path}{?recursive}"
    }
  },
  "responses": {}
}
