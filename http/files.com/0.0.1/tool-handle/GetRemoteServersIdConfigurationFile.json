{
  "name": "GetRemoteServersIdConfigurationFile",
  "description": "Download configuration file (required for some Remote Server integrations, such as the Files.com Agent)",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "format": "int32",
        "type": "integer",
        "description": "Remote Server ID."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//app.files.com/api/rest/v1/remote_servers/{id}/configuration_file"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Download configuration file (required for some Remote Server integrations, such as the Files.com Agent)",
        "**Key properties:**",
        {
          "$ul": [
            "**api_token**: Files Agent API Token",
            "**config_version**: agent config version",
            "**hostname**",
            "**id**: Agent ID",
            "**permission_set**: ",
            "**port**: Incoming port for files agent connections",
            "**private_key**: private key",
            "**public_key**: public key",
            "**root**: Agent local root path",
            "**server_host_key**",
            "**status**: either running or shutdown",
            "**subdomain**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
