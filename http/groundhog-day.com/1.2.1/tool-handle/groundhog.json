{
  "name": "groundhog",
  "description": "Returns a prognosticating animal and its known predictions.",
  "parameters": {
    "type": "object",
    "properties": {
      "slug": {
        "type": "string",
        "description": "Groundhog name in kebab-case: (eg, lucy-the-lobster)"
      }
    },
    "required": [
      "slug"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://virtserver.swaggerhub.com/pcraig3/groundhog-day-api/1.2.1/api/v1/groundhogs/{slug}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**groundhog**: An animal that makes an annual prediction on Groundhog Day.",
              {
                "$ul": [
                  "**active**",
                  "**city**",
                  "**contact**",
                  "**coordinates**",
                  "**country**",
                  "**currentPrediction**",
                  "**description**",
                  "**id**",
                  "**image**",
                  "**isGroundhog**",
                  "**name**",
                  "**predictions**",
                  "**predictionsCount**: All predictions, excluding nulls.",
                  "**region**",
                  "**shortname**",
                  "**slug**",
                  "**source**",
                  "**type**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**message**",
                  "**status**",
                  "**timestamp**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
