{
  "name": "extractRecipeFromWebsite",
  "description": "This endpoint lets you extract recipe data such as title, ingredients, and instructions from any properly formatted Website.",
  "parameters": {
    "type": "object",
    "properties": {
      "url": {
        "example": "https://foodista.com/recipe/ZHK4KPB6/chocolate-crinkle-cookies",
        "type": "string",
        "description": "The URL of the recipe page."
      },
      "forceExtraction": {
        "example": true,
        "type": "boolean",
        "description": "If true, the extraction will be triggered whether we already know the recipe or not. Use this only if information is missing as this operation is slower."
      },
      "analyze": {
        "example": false,
        "type": "boolean",
        "description": "If true, the recipe will be analyzed and classified resolving in more data such as cuisines, dish types, and more."
      },
      "includeNutrition": {
        "default": false,
        "type": "boolean",
        "description": "Include nutrition data in the recipe information. Nutrition data is per serving. If you want the nutrition data for the entire recipe, just multiply by the number of servings."
      },
      "includeTaste": {
        "default": false,
        "example": false,
        "type": "boolean",
        "description": "Whether taste data should be added to correctly parsed ingredients."
      }
    },
    "required": [
      "url"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/extract{?url,forceExtraction,analyze,includeNutrition,includeTaste}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**aggregateLikes**",
            "**analyzedInstructions**",
            "**cheap**",
            "**creditsText**",
            "**cuisines**",
            "**dairyFree**",
            "**diets**",
            "**dishTypes**",
            "**extendedIngredients**",
            "**gaps**",
            "**glutenFree**",
            "**healthScore**",
            "**id**",
            "**image**",
            "**imageType**",
            "**instructions**",
            "**ketogenic**",
            "**license**",
            "**lowFodmap**",
            "**occasions**",
            "**pricePerServing**",
            "**readyInMinutes**",
            "**servings**",
            "**sourceName**",
            "**sourceUrl**",
            "**spoonacularScore**",
            "**spoonacularSourceUrl**",
            "**summary**",
            "**sustainable**",
            "**title**",
            "**vegan**",
            "**vegetarian**",
            "**veryHealthy**",
            "**veryPopular**",
            "**weightWatcherSmartPoints**",
            "**whole30**",
            [
              "**winePairing**",
              {
                "$ul": [
                  "**pairedWines**",
                  "**pairingText**",
                  "**productMatches**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
