{
  "name": "computeIngredientAmount",
  "description": "Compute the amount you need of a certain ingredient for a certain nutritional goal. For example, how much pineapple do you have to eat to get 10 grams of protein?",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": 9266,
        "type": "number",
        "description": "The id of the ingredient you want the amount for."
      },
      "nutrient": {
        "example": "protein",
        "type": "string",
        "description": "The target nutrient. See a list of supported nutrients."
      },
      "target": {
        "example": 2,
        "type": "number",
        "description": "The target number of the given nutrient."
      },
      "unit": {
        "example": "oz",
        "type": "string",
        "description": "The target unit."
      }
    },
    "required": [
      "id",
      "nutrient",
      "target"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/food/ingredients/{id}/amount{?nutrient,target,unit}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**amount**",
            "**unit**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
