{
  "name": "visualizeRecipeTaste",
  "description": "Visualize a recipe's taste information as HTML including CSS. You can play around with that endpoint!",
  "parameters": {
    "type": "object",
    "properties": {
      "language": {
        "enum": [
          "en",
          "de"
        ],
        "example": "en",
        "type": "string",
        "description": "The language of the input. Either 'en' or 'de'."
      },
      "Content-Type": {
        "enum": [
          "application/x-www-form-urlencoded",
          "application/json",
          "multipart/form-data"
        ],
        "example": "application/json",
        "type": "string",
        "description": "The content type."
      },
      "Accept": {
        "enum": [
          "application/json",
          "text/html",
          "media/*"
        ],
        "example": "application/json",
        "type": "string",
        "description": "Accept header."
      },
      "normalize": {
        "type": "boolean",
        "description": "Whether to normalize to the strongest taste."
      },
      "rgb": {
        "example": "75,192,192",
        "type": "string",
        "description": "Red, green, blue values for the chart color."
      },
      "body": {
        "type": "string",
        "description": ""
      }
    },
    "required": [
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/visualizeTaste{?language,normalize,rgb}"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      },
      "Accept": {
        "$": "Accept"
      }
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
