{
  "name": "visualizeRecipeTasteByID",
  "description": "Get a recipe's taste. The tastes supported are sweet, salty, sour, bitter, savory, and fatty.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": 69095,
        "type": "number",
        "description": "The recipe id."
      },
      "normalize": {
        "default": true,
        "enum": [
          true,
          false
        ],
        "example": true,
        "type": "boolean",
        "description": "Whether to normalize to the strongest taste."
      },
      "rgb": {
        "example": "75,192,192",
        "type": "string",
        "description": "Red, green, blue values for the chart color."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/{id}/tasteWidget{?normalize,rgb}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
