{
  "name": "getRecipeInformation",
  "description": "Use a recipe id to get full information about a recipe, such as ingredients, nutrition, diet and allergen information, etc.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": 716429,
        "type": "number",
        "description": "The id of the recipe."
      },
      "includeNutrition": {
        "default": false,
        "type": "boolean",
        "description": "Include nutrition data in the recipe information. Nutrition data is per serving. If you want the nutrition data for the entire recipe, just multiply by the number of servings."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/{id}/information{?includeNutrition}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**aggregateLikes**",
            "**analyzedInstructions**",
            "**cheap**",
            "**creditsText**",
            "**cuisines**",
            "**dairyFree**",
            "**diets**",
            "**dishTypes**",
            "**extendedIngredients**",
            "**gaps**",
            "**glutenFree**",
            "**healthScore**",
            "**id**",
            "**image**",
            "**imageType**",
            "**instructions**",
            "**ketogenic**",
            "**license**",
            "**lowFodmap**",
            "**occasions**",
            "**pricePerServing**",
            "**readyInMinutes**",
            "**servings**",
            "**sourceName**",
            "**sourceUrl**",
            "**spoonacularScore**",
            "**spoonacularSourceUrl**",
            "**summary**",
            "**sustainable**",
            "**title**",
            "**vegan**",
            "**vegetarian**",
            "**veryHealthy**",
            "**veryPopular**",
            "**weightWatcherSmartPoints**",
            "**whole30**",
            [
              "**winePairing**",
              {
                "$ul": [
                  "**pairedWines**",
                  "**pairingText**",
                  "**productMatches**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
