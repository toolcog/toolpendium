{
  "name": "connectUser",
  "description": "In order to call user-specific endpoints, you need to connect your app's users to spoonacular users.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "description": "",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "firstName": {
            "minLength": 1,
            "type": "string"
          },
          "lastName": {
            "minLength": 1,
            "type": "string"
          },
          "username": {
            "minLength": 1,
            "type": "string"
          }
        },
        "required": [
          "username",
          "firstName",
          "lastName",
          "email"
        ],
        "type": "object",
        "x-examples": {
          "example-1": {
            "email": "your user's email",
            "firstName": "your user's first name",
            "lastName": "your user's last name",
            "username": "your user's name"
          }
        }
      }
    },
    "required": [
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.spoonacular.com/users/connect"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**hash**",
            "**username**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
