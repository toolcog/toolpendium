{
  "name": "summarizeRecipe",
  "description": "Automatically generate a short description that summarizes key information about the recipe.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": 4632,
        "type": "number",
        "description": "The recipe id."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/{id}/summary"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**id**",
            "**summary**",
            "**title**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
