{
  "name": "getIngredientInformation",
  "description": "Use an ingredient id to get all available information about an ingredient, such as its image and supermarket aisle.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": 9266,
        "type": "number",
        "description": "The ingredient id."
      },
      "amount": {
        "example": 150,
        "type": "number",
        "description": "The amount of this ingredient."
      },
      "unit": {
        "example": "grams",
        "type": "string",
        "description": "The unit for the given amount."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/food/ingredients/{id}/information{?amount,unit}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**aisle**",
            "**amount**",
            "**categoryPath**",
            "**consistency**",
            [
              "**estimatedCost**",
              {
                "$ul": [
                  "**unit**",
                  "**value**"
                ]
              }
            ],
            "**id**",
            "**image**",
            "**meta**",
            "**name**",
            "**nameClean**",
            [
              "**nutrition**",
              {
                "$ul": [
                  [
                    "**caloricBreakdown**",
                    {
                      "$ul": [
                        "**percentCarbs**",
                        "**percentFat**",
                        "**percentProtein**"
                      ]
                    }
                  ],
                  "**nutrients**",
                  "**properties**",
                  [
                    "**weightPerServing**",
                    {
                      "$ul": [
                        "**amount**",
                        "**unit**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**original**",
            "**originalName**",
            "**possibleUnits**",
            "**shoppingListUnits**",
            "**unit**",
            "**unitLong**",
            "**unitShort**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
