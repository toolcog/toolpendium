{
  "name": "getRecipeTasteByID",
  "description": "Get a recipe's taste. The tastes supported are sweet, salty, sour, bitter, savory, and fatty.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": 69095,
        "type": "number",
        "description": "The recipe id."
      },
      "normalize": {
        "default": true,
        "enum": [
          false,
          true
        ],
        "example": true,
        "type": "boolean",
        "description": "Normalize to the strongest taste."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/{id}/tasteWidget.json{?normalize}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**bitterness**",
            "**fattiness**",
            "**saltiness**",
            "**savoriness**",
            "**sourness**",
            "**spiciness**",
            "**sweetness**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
