{
  "name": "getWineRecommendation",
  "description": "Get a specific wine recommendation (concrete product) for a given wine type, e.g. \"merlot\".",
  "parameters": {
    "type": "object",
    "properties": {
      "wine": {
        "example": "merlot",
        "type": "string",
        "description": "The type of wine to get a specific product recommendation for."
      },
      "maxPrice": {
        "example": 50,
        "type": "number",
        "description": "The maximum price for the specific wine recommendation in USD."
      },
      "minRating": {
        "example": 0.7,
        "type": "number",
        "description": "The minimum rating of the recommended wine between 0 and 1. For example, 0.8 equals 4 out of 5 stars."
      },
      "number": {
        "default": 10,
        "example": 3,
        "maximum": 100,
        "minimum": 1,
        "type": "number",
        "description": "The number of wine recommendations expected (between 1 and 100)."
      }
    },
    "required": [
      "wine"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/food/wine/recommendation{?wine,maxPrice,minRating,number}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**recommendedWines**",
            "**totalFound**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
