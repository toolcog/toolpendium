{
  "name": "getRecipeInformationBulk",
  "description": "Get information about multiple recipes at once. This is equivalent to calling the Get Recipe Information endpoint multiple times, but faster.",
  "parameters": {
    "type": "object",
    "properties": {
      "ids": {
        "example": "715538,716429",
        "type": "string",
        "description": "A comma-separated list of recipe ids."
      },
      "includeNutrition": {
        "default": false,
        "type": "boolean",
        "description": "Include nutrition data in the recipe information. Nutrition data is per serving. If you want the nutrition data for the entire recipe, just multiply by the number of servings."
      }
    },
    "required": [
      "ids"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/informationBulk{?ids,includeNutrition}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**aggregateLikes**",
            "**analyzedInstructions**",
            "**cheap**",
            "**creditsText**",
            "**cuisines**",
            "**dairyFree**",
            "**diets**",
            "**dishTypes**",
            "**extendedIngredients**",
            "**gaps**",
            "**glutenFree**",
            "**healthScore**",
            "**id**",
            "**image**",
            "**imageType**",
            "**instructions**",
            "**ketogenic**",
            "**license**",
            "**lowFodmap**",
            "**occasions**",
            "**pricePerServing**",
            "**readyInMinutes**",
            "**servings**",
            "**sourceName**",
            "**sourceUrl**",
            "**spoonacularScore**",
            "**spoonacularSourceUrl**",
            "**summary**",
            "**sustainable**",
            "**title**",
            "**vegan**",
            "**vegetarian**",
            "**veryHealthy**",
            "**veryPopular**",
            "**weightWatcherSmartPoints**",
            "**whole30**",
            [
              "**winePairing**",
              {
                "$ul": [
                  "**pairedWines**",
                  "**pairingText**",
                  "**productMatches**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.title"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
