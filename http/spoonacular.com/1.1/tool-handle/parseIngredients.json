{
  "name": "parseIngredients",
  "description": "Extract an ingredient from plain text.",
  "parameters": {
    "type": "object",
    "properties": {
      "Content-Type": {
        "enum": [
          "application/x-www-form-urlencoded",
          "application/json",
          "multipart/form-data"
        ],
        "example": "application/json",
        "type": "string",
        "description": "The content type."
      },
      "language": {
        "enum": [
          "en",
          "de"
        ],
        "example": "en",
        "type": "string",
        "description": "The language of the input. Either 'en' or 'de'."
      },
      "body": {
        "type": "string"
      }
    },
    "required": [
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/parseIngredients{?language}"
    },
    "headers": {
      "Content-Type": {
        "$": "Content-Type"
      }
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**aisle**",
            "**amount**",
            "**consistency**",
            [
              "**estimatedCost**",
              {
                "$ul": [
                  "**unit**",
                  "**value**"
                ]
              }
            ],
            "**id**",
            "**image**",
            "**meta**",
            "**name**",
            "**nameClean**",
            [
              "**nutrition**",
              {
                "$ul": [
                  [
                    "**caloricBreakdown**",
                    {
                      "$ul": [
                        "**percentCarbs**",
                        "**percentFat**",
                        "**percentProtein**"
                      ]
                    }
                  ],
                  "**flavonoids**",
                  "**nutrients**",
                  "**properties**",
                  [
                    "**weightPerServing**",
                    {
                      "$ul": [
                        "**amount**",
                        "**unit**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**original**",
            "**originalName**",
            "**possibleUnits**",
            "**unit**",
            "**unitLong**",
            "**unitShort**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
