{
  "name": "visualizeRecipePriceBreakdownByID",
  "description": "Visualize a recipe's price breakdown.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": 1082038,
        "type": "number",
        "description": "The recipe id."
      },
      "defaultCss": {
        "default": true,
        "example": false,
        "type": "boolean",
        "description": "Whether the default CSS should be added to the response."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/{id}/priceBreakdownWidget{?defaultCss}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
