{
  "name": "recipeTasteByIDImage",
  "description": "Get a recipe's taste as an image. The tastes supported are sweet, salty, sour, bitter, savory, and fatty.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": 69095,
        "type": "number",
        "description": "The recipe id."
      },
      "normalize": {
        "example": false,
        "type": "boolean",
        "description": "Normalize to the strongest taste."
      },
      "rgb": {
        "example": "75,192,192",
        "type": "string",
        "description": "Red, green, blue values for the chart color."
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/recipes/{id}/tasteWidget.png{?normalize,rgb}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
