{
  "name": "getWineDescription",
  "description": "Get a simple description of a certain wine, e.g. \"malbec\", \"riesling\", or \"merlot\".",
  "parameters": {
    "type": "object",
    "properties": {
      "wine": {
        "example": "merlot",
        "type": "string",
        "description": "The name of the wine that should be paired, e.g. \"merlot\", \"riesling\", or \"malbec\"."
      }
    },
    "required": [
      "wine"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.spoonacular.com/food/wine/description{?wine}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "",
        "**Key properties:**",
        {
          "$ul": [
            "**wineDescription**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
