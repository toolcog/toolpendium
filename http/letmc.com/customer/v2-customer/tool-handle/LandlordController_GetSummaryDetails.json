{
  "name": "LandlordController_GetSummaryDetails",
  "description": "Get the summary details for the landlord.",
  "parameters": {
    "type": "object",
    "properties": {
      "shortName": {
        "type": "string",
        "description": "The unique client short-name"
      },
      "token": {
        "type": "string",
        "description": "The login token returned from the /session POST call"
      }
    },
    "required": [
      "shortName",
      "token"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://live-api.letmc.com/v2/customer/{shortName}/landlord/summary{?token}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Landlord Summary - Landing Page.",
        "**Key properties:**",
        {
          "$ul": [
            "**AccountBalance**: Account Balance",
            "**LastPayment**: Last Payment Made",
            "**Tenancies**: Tenancies",
            "**TotalRentArrears**: Rent Arrears"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
