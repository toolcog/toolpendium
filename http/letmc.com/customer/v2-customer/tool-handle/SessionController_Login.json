{
  "name": "SessionController_Login",
  "description": "Login as a customer given their username and password.",
  "parameters": {
    "type": "object",
    "properties": {
      "shortName": {
        "type": "string",
        "description": "The unique client short-name"
      },
      "username": {
        "type": "string",
        "description": "The user's username."
      },
      "password": {
        "type": "string",
        "description": "The user's password."
      }
    },
    "required": [
      "shortName",
      "username",
      "password"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://live-api.letmc.com/v2/customer/{shortName}/session{?username,password}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
