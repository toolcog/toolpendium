{
  "name": "SessionController_CreateLandlordLogin",
  "description": "Send a request to the in-tray to create a landlord login.",
  "parameters": {
    "type": "object",
    "properties": {
      "shortName": {
        "type": "string",
        "description": "The unique client short-name"
      },
      "email": {
        "type": "string",
        "description": "The email address of the landlord"
      },
      "title": {
        "type": "string",
        "description": "The title of the landlord"
      },
      "forename": {
        "type": "string",
        "description": "The forename of the landlord"
      },
      "surname": {
        "type": "string",
        "description": "The surname of the landlord"
      },
      "propertyAddress": {
        "type": "string",
        "description": "Address of the property linked to the landlord"
      },
      "contactDetails": {
        "type": "string",
        "description": "Contact details of the landlord"
      },
      "branchID": {
        "type": "string",
        "description": "(Optional) The branch ID linked to the login. This will determine which in tray the request display in"
      }
    },
    "required": [
      "shortName",
      "email",
      "title",
      "forename",
      "surname",
      "propertyAddress",
      "contactDetails"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://live-api.letmc.com/v2/customer/{shortName}/session/createlandlordlogin{?email,title,forename,surname,propertyAddress,contactDetails,branchID}"
    }
  },
  "responses": {}
}
