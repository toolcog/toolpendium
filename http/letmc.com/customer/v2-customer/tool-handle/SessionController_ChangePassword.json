{
  "name": "SessionController_ChangePassword",
  "description": "Change the password of a customer given their existing and new password.",
  "parameters": {
    "type": "object",
    "properties": {
      "shortName": {
        "type": "string",
        "description": "The unique client short-name"
      },
      "token": {
        "type": "string",
        "description": "The login token returned from the /session POST call"
      },
      "oldPassword": {
        "type": "string",
        "description": "The customer's existing password."
      },
      "newPassword": {
        "type": "string",
        "description": "The customer's new password."
      }
    },
    "required": [
      "shortName",
      "token",
      "oldPassword",
      "newPassword"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://live-api.letmc.com/v2/customer/{shortName}/session/password{?token,oldPassword,newPassword}"
    }
  },
  "responses": {}
}
