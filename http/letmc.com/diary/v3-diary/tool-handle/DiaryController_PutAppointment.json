{
  "name": "DiaryController_PutAppointment",
  "description": "Update an existing appointment using its unique identifier",
  "parameters": {
    "type": "object",
    "properties": {
      "shortName": {
        "type": "string",
        "description": "The unique client short-name"
      },
      "appointmentID": {
        "type": "string",
        "description": "The unique appointment id"
      },
      "lettings": {
        "type": "boolean",
        "description": "Sales or Lettings property?"
      },
      "AllowMarketingCorrespondence": {
        "type": "boolean",
        "description": "Sales or Lettings property?"
      },
      "body": {
        "$ref": "#/components/schemas/DiaryAppointmentDetails",
        "description": "The appointment details model"
      }
    },
    "required": [
      "shortName",
      "appointmentID",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://live-api.letmc.com/v3/diary/{shortName}/appointment{?appointmentID,lettings,AllowMarketingCorrespondence}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
