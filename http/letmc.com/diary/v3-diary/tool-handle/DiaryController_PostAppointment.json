{
  "name": "DiaryController_PostAppointment",
  "description": "Post an appointment into a valid diary allocation",
  "parameters": {
    "type": "object",
    "properties": {
      "shortName": {
        "type": "string",
        "description": "The unique client short-name"
      },
      "propertyIdentifier": {
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "The unique property identifier (Sales or Lettings)"
      },
      "lettings": {
        "type": "boolean",
        "description": "Sales or Lettings property?"
      },
      "body": {
        "$ref": "#/components/schemas/DiaryAppointmentDetails",
        "description": "The appointment details model"
      }
    },
    "required": [
      "shortName",
      "propertyIdentifier",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://live-api.letmc.com/v3/diary/{shortName}/appointment{?propertyIdentifier,lettings}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
