{
  "name": "NodeUpdate",
  "description": "Update a node",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The ID of the node"
      },
      "version": {
        "format": "int64",
        "type": "integer",
        "description": "The version number of the node object being updated. This is required to avoid conflicting writes."
      },
      "body": {
        "$ref": "#/$defs/NodeSpec"
      }
    },
    "required": [
      "id",
      "version"
    ],
    "$defs": {
      "NodeSpec": {
        "example": {
          "Availability": "active",
          "Labels": {
            "foo": "bar"
          },
          "Name": "node-name",
          "Role": "manager"
        },
        "properties": {
          "Availability": {
            "description": "Availability of the node.",
            "enum": [
              "active",
              "pause",
              "drain"
            ],
            "example": "active",
            "type": "string"
          },
          "Labels": {
            "additionalProperties": {
              "type": "string"
            },
            "description": "User-defined key/value metadata.",
            "type": "object"
          },
          "Name": {
            "description": "Name for the node.",
            "example": "my-node",
            "type": "string"
          },
          "Role": {
            "description": "Role of the node.",
            "enum": [
              "worker",
              "manager"
            ],
            "example": "manager",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "/v1.33/nodes/{id}/update{?version}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Represents an error.",
        "**Key properties:**",
        {
          "$ul": [
            "**message**: The error message."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
