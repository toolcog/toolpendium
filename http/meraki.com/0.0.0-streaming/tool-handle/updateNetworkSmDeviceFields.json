{
  "name": "updateNetworkSmDeviceFields",
  "description": "Modify the fields of a device",
  "parameters": {
    "type": "object",
    "properties": {
      "networkId": {
        "type": "string"
      },
      "body": {
        "example": {
          "deviceFields": {
            "name": "Miles's phone",
            "notes": "Here's some info about my device"
          },
          "id": "1284392014819"
        },
        "properties": {
          "deviceFields": {
            "description": "The new fields of the device. Each field of this object is optional.",
            "properties": {
              "name": {
                "description": "New name for the device",
                "type": "string"
              },
              "notes": {
                "description": "New notes for the device",
                "type": "string"
              }
            },
            "type": "object"
          },
          "id": {
            "description": "The id of the device to be modified.",
            "type": "string"
          },
          "serial": {
            "description": "The serial of the device to be modified.",
            "type": "string"
          },
          "wifiMac": {
            "description": "The wifiMac of the device to be modified.",
            "type": "string"
          }
        },
        "required": [
          "deviceFields"
        ],
        "type": "object"
      }
    },
    "required": [
      "networkId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.meraki.com/api/v0/networks/{networkId}/sm/device/fields"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
