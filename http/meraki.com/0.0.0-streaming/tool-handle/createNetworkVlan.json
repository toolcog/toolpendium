{
  "name": "createNetworkVlan",
  "description": "Add a VLAN",
  "parameters": {
    "type": "object",
    "properties": {
      "networkId": {
        "type": "string"
      },
      "body": {
        "example": {
          "applianceIp": "192.168.1.2",
          "groupPolicyId": "101",
          "id": "1234",
          "name": "My VLAN",
          "subnet": "192.168.1.0/24"
        },
        "properties": {
          "applianceIp": {
            "description": "The local IP of the appliance on the VLAN",
            "type": "string"
          },
          "groupPolicyId": {
            "description": "The id of the desired group policy to apply to the VLAN",
            "type": "string"
          },
          "id": {
            "description": "The VLAN ID of the new VLAN (must be between 1 and 4094)",
            "type": "string"
          },
          "name": {
            "description": "The name of the new VLAN",
            "type": "string"
          },
          "subnet": {
            "description": "The subnet of the VLAN",
            "type": "string"
          }
        },
        "required": [
          "id",
          "name",
          "subnet",
          "applianceIp"
        ],
        "type": "object"
      }
    },
    "required": [
      "networkId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.meraki.com/api/v0/networks/{networkId}/vlans"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
