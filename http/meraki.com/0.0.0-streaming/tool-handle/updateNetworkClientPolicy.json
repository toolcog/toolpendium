{
  "name": "updateNetworkClientPolicy",
  "description": "Update the policy assigned to a client on the network. Clients can be identified by a client key or either the MAC or IP depending on whether the network uses Track-by-IP.",
  "parameters": {
    "type": "object",
    "properties": {
      "networkId": {
        "type": "string"
      },
      "clientId": {
        "type": "string"
      },
      "body": {
        "example": {
          "groupPolicyId": "101",
          "mac": "00:11:22:33:44:55",
          "type": "Group policy"
        },
        "properties": {
          "devicePolicy": {
            "description": "The policy to assign. Can be 'Whitelisted', 'Blocked', 'Normal' or 'Group policy'. Required.",
            "type": "string"
          },
          "groupPolicyId": {
            "description": "[optional] If 'devicePolicy' is set to 'Group policy' this param is used to specify the group policy ID.",
            "type": "string"
          }
        },
        "required": [
          "devicePolicy"
        ],
        "type": "object"
      }
    },
    "required": [
      "networkId",
      "clientId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.meraki.com/api/v0/networks/{networkId}/clients/{clientId}/policy"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
