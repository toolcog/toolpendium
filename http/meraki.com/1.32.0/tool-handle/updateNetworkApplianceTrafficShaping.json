{
  "name": "updateNetworkApplianceTrafficShaping",
  "description": "Update the traffic shaping settings for an MX network",
  "parameters": {
    "type": "object",
    "properties": {
      "networkId": {
        "type": "string"
      },
      "body": {
        "example": {
          "globalBandwidthLimits": {
            "limitDown": 5120,
            "limitUp": 2048
          }
        },
        "properties": {
          "globalBandwidthLimits": {
            "description": "Global per-client bandwidth limit",
            "properties": {
              "limitDown": {
                "description": "The download bandwidth limit in Kbps. (0 represents no limit.)",
                "type": "integer"
              },
              "limitUp": {
                "description": "The upload bandwidth limit in Kbps. (0 represents no limit.)",
                "type": "integer"
              }
            },
            "type": "object"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "networkId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/networks/{networkId}/appliance/trafficShaping"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
