{
  "name": "getNetworkSmDeviceNetworkAdapters",
  "description": "List the network adapters of a device",
  "parameters": {
    "type": "object",
    "properties": {
      "networkId": {
        "type": "string"
      },
      "deviceId": {
        "type": "string"
      }
    },
    "required": [
      "networkId",
      "deviceId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/networks/{networkId}/sm/devices/{deviceId}/networkAdapters"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**dhcpServer**: The IP address of the DCHP Server.",
            "**dnsServer**: The IP address of the DNS Server.",
            "**gateway**: The IP address of the Gateway.",
            "**id**: The Meraki Id of the network adapter record.",
            "**ip**: The IP address of the network adapter.",
            "**mac**: The MAC associated with the network adapter.",
            "**name**: The name of the newtwork adapter.",
            "**subnet**: The subnet for the network adapter."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
