{
  "name": "createDeviceLiveToolsPing",
  "description": "Enqueue a job to ping a target host from the device",
  "parameters": {
    "type": "object",
    "properties": {
      "serial": {
        "type": "string"
      },
      "body": {
        "example": {
          "count": 2,
          "target": "75.75.75.75"
        },
        "properties": {
          "count": {
            "description": "Count parameter to pass to ping. [1..5], default 5",
            "type": "integer"
          },
          "target": {
            "description": "FQDN, IPv4 or IPv6 address",
            "type": "string"
          }
        },
        "required": [
          "target"
        ],
        "type": "object"
      }
    },
    "required": [
      "serial",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/devices/{serial}/liveTools/ping"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**pingId**: Id to check the status of your ping request.",
            [
              "**request**: Ping request parameters",
              {
                "$ul": [
                  "**count**: Number of pings to send",
                  "**serial**: Device serial number",
                  "**target**: IP address or FQDN to ping"
                ]
              }
            ],
            "**status**: Status of the ping request.",
            "**url**: GET this url to check the status of your ping request."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
