{
  "name": "updateNetworkSwitchDhcpServerPolicyArpInspectionTrustedServer",
  "description": "Update a server that is trusted by Dynamic ARP Inspection on this network",
  "parameters": {
    "type": "object",
    "properties": {
      "networkId": {
        "type": "string"
      },
      "trustedServerId": {
        "type": "string"
      },
      "body": {
        "example": {
          "ipv4": {
            "address": "1.2.3.4"
          },
          "mac": "00:11:22:33:44:55",
          "vlan": 100
        },
        "properties": {
          "ipv4": {
            "description": "The updated IPv4 attributes of the trusted server",
            "properties": {
              "address": {
                "description": "The updated IPv4 address of the trusted server",
                "type": "string"
              }
            },
            "type": "object"
          },
          "mac": {
            "description": "The updated mac address of the trusted server",
            "type": "string"
          },
          "vlan": {
            "description": "The updated VLAN of the trusted server. It must be between 1 and 4094",
            "type": "integer"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "networkId",
      "trustedServerId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/networks/{networkId}/switch/dhcpServerPolicy/arpInspection/trustedServers/{trustedServerId}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**ipv4**: IPv4 attributes of the trusted server.",
              {
                "$ul": [
                  "**address**: IPv4 address of the trusted server."
                ]
              }
            ],
            "**mac**: Mac address of the trusted server.",
            "**trustedServerId**: ID of the trusted server.",
            "**vlan**: Vlan ID of the trusted server."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
