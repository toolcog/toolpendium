{
  "name": "getDeviceLiveToolsPingDevice",
  "description": "Return a ping device job. Latency unit in response is in milliseconds. Size is in bytes.",
  "parameters": {
    "type": "object",
    "properties": {
      "serial": {
        "type": "string"
      },
      "id": {
        "type": "string"
      }
    },
    "required": [
      "serial",
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/devices/{serial}/liveTools/pingDevice/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**pingId**: Id to check the status of your ping request.",
            [
              "**request**: Ping request parameters",
              {
                "$ul": [
                  "**count**: Number of pings to send",
                  "**serial**: Device serial number",
                  "**target**: IP address or FQDN to ping"
                ]
              }
            ],
            [
              "**results**: Results of the ping request.",
              {
                "$ul": [
                  [
                    "**latencies**: Packet latency stats",
                    {
                      "$ul": [
                        "**average**: Average latency",
                        "**maximum**: Maximum latency",
                        "**minimum**: Minimum latency"
                      ]
                    }
                  ],
                  [
                    "**loss**: Lost packets",
                    {
                      "$ul": [
                        "**percentage**: Percentage of packets lost"
                      ]
                    }
                  ],
                  "**received**: Number of packets received",
                  "**replies**: Received packets",
                  "**sent**: Number of packets sent"
                ]
              }
            ],
            "**status**: Status of the ping request.",
            "**url**: GET this url to check the status of your ping request."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
