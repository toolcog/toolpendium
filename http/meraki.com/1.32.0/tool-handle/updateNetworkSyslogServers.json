{
  "name": "updateNetworkSyslogServers",
  "description": "Update the syslog servers for a network",
  "parameters": {
    "type": "object",
    "properties": {
      "networkId": {
        "type": "string"
      },
      "body": {
        "example": {
          "servers": [
            {
              "host": "1.2.3.4",
              "port": 443,
              "roles": [
                "Wireless event log",
                "URLs"
              ]
            }
          ]
        },
        "properties": {
          "servers": {
            "description": "A list of the syslog servers for this network",
            "items": {
              "properties": {
                "host": {
                  "description": "The IP address of the syslog server",
                  "type": "string"
                },
                "port": {
                  "description": "The port of the syslog server",
                  "type": "integer"
                },
                "roles": {
                  "description": "A list of roles for the syslog server. Options (case-insensitive): 'Wireless event log', 'Appliance event log', 'Switch event log', 'Air Marshal events', 'Flows', 'URLs', 'IDS alerts', 'Security events'",
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              },
              "required": [
                "host",
                "port",
                "roles"
              ],
              "type": "object"
            },
            "type": "array"
          }
        },
        "required": [
          "servers"
        ],
        "type": "object"
      }
    },
    "required": [
      "networkId",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/networks/{networkId}/syslogServers"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**servers**: List of the syslog servers for this network"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
