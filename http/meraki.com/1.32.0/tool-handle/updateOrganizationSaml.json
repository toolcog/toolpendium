{
  "name": "updateOrganizationSaml",
  "description": "Updates the SAML SSO enabled settings for an organization.",
  "parameters": {
    "type": "object",
    "properties": {
      "organizationId": {
        "type": "string"
      },
      "body": {
        "example": {
          "enabled": true
        },
        "properties": {
          "enabled": {
            "description": "Boolean for updating SAML SSO enabled settings.",
            "type": "boolean"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "organizationId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/organizations/{organizationId}/saml"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**enabled**: Toggle depicting if SAML SSO settings are enabled"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
