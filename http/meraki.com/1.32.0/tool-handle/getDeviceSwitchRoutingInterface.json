{
  "name": "getDeviceSwitchRoutingInterface",
  "description": "Return a layer 3 interface for a switch",
  "parameters": {
    "type": "object",
    "properties": {
      "serial": {
        "type": "string"
      },
      "interfaceId": {
        "type": "string"
      }
    },
    "required": [
      "serial",
      "interfaceId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/devices/{serial}/switch/routing/interfaces/{interfaceId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**defaultGateway**: IPv4 default gateway",
            "**interfaceId**: The id",
            "**interfaceIp**: IPv4 address",
            [
              "**ipv6**: IPv6 addressing",
              {
                "$ul": [
                  "**address**: IPv6 address",
                  "**assignmentMode**: Assignment mode",
                  "**gateway**: IPv6 gateway",
                  "**prefix**: IPv6 subnet"
                ]
              }
            ],
            "**multicastRouting**: Multicast routing status",
            "**name**: The name",
            [
              "**ospfSettings**: IPv4 OSPF Settings",
              {
                "$ul": [
                  "**area**: Area id",
                  "**cost**: OSPF Cost",
                  "**isPassiveEnabled**: Disable sending Hello packets on this interface's IPv4 area"
                ]
              }
            ],
            [
              "**ospfV3**: IPv6 OSPF Settings",
              {
                "$ul": [
                  "**area**: Area id",
                  "**cost**: OSPF Cost",
                  "**isPassiveEnabled**: Disable sending Hello packets on this interface's IPv6 area"
                ]
              }
            ],
            "**subnet**: IPv4 subnet",
            "**vlanId**: VLAN id"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
