{
  "name": "getNetworkSmDeviceCerts",
  "description": "List the certs on a device",
  "parameters": {
    "type": "object",
    "properties": {
      "networkId": {
        "type": "string"
      },
      "deviceId": {
        "type": "string"
      }
    },
    "required": [
      "networkId",
      "deviceId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/networks/{networkId}/sm/devices/{deviceId}/certs"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**certPem**: The PEM of the certificate.",
            "**deviceId**: The Meraki managed device Id.",
            "**id**: The Meraki Id of the certificate record.",
            "**issuer**: The certificate issuer.",
            "**name**: The name of the certificate.",
            "**notValidAfter**: The date after which the certificate is no longer valid.",
            "**notValidBefore**: The date before which the certificate is not valid.",
            "**subject**: The subject of the certificate."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
