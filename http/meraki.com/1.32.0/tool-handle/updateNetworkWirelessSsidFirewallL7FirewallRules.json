{
  "name": "updateNetworkWirelessSsidFirewallL7FirewallRules",
  "description": "Update the L7 firewall rules of an SSID on an MR network",
  "parameters": {
    "type": "object",
    "properties": {
      "networkId": {
        "type": "string"
      },
      "number": {
        "type": "string"
      },
      "body": {
        "example": {
          "rules": [
            {
              "policy": "deny",
              "type": "host",
              "value": "google.com"
            },
            {
              "policy": "deny",
              "type": "port",
              "value": "23"
            },
            {
              "policy": "deny",
              "type": "ipRange",
              "value": "10.11.12.00/24"
            },
            {
              "policy": "deny",
              "type": "ipRange",
              "value": "10.11.12.00/24:5555"
            }
          ]
        },
        "properties": {
          "rules": {
            "description": "An array of L7 firewall rules for this SSID. Rules will get applied in the same order user has specified in request. Empty array will clear the L7 firewall rule configuration.",
            "items": {
              "properties": {
                "policy": {
                  "description": "'Deny' traffic specified by this rule",
                  "enum": [
                    "deny"
                  ],
                  "type": "string"
                },
                "type": {
                  "description": "Type of the L7 firewall rule. One of: 'application', 'applicationCategory', 'host', 'port', 'ipRange'",
                  "enum": [
                    "application",
                    "applicationCategory",
                    "host",
                    "ipRange",
                    "port"
                  ],
                  "type": "string"
                },
                "value": {
                  "description": "The value of what needs to get blocked. Format of the value varies depending on type of the firewall rule selected.",
                  "type": "string"
                }
              },
              "type": "object"
            },
            "type": "array"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "networkId",
      "number"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/networks/{networkId}/wireless/ssids/{number}/firewall/l7FirewallRules"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
