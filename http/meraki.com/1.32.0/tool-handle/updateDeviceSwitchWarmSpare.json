{
  "name": "updateDeviceSwitchWarmSpare",
  "description": "Update warm spare configuration for a switch. The spare will use the same L3 configuration as the primary. Note that this will irreversibly destroy any existing L3 configuration on the spare.",
  "parameters": {
    "type": "object",
    "properties": {
      "serial": {
        "type": "string"
      },
      "body": {
        "example": {
          "enabled": true,
          "spareSerial": "Q234-ABCD-0002"
        },
        "properties": {
          "enabled": {
            "description": "Enable or disable warm spare for a switch",
            "type": "boolean"
          },
          "spareSerial": {
            "description": "Serial number of the warm spare switch",
            "type": "string"
          }
        },
        "required": [
          "enabled"
        ],
        "type": "object"
      }
    },
    "required": [
      "serial",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.meraki.com/api/v1/devices/{serial}/switch/warmSpare"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
