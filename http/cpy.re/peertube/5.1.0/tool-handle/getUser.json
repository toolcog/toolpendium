{
  "name": "getUser",
  "description": "Get a user",
  "parameters": {
    "type": "object",
    "properties": {
      "withStats": {
        "type": "boolean",
        "description": "include statistics about the user (only available as a moderator/admin)"
      },
      "id": {
        "$ref": "#/components/schemas/id",
        "description": "Entity id"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/users/{id}{?withStats}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
