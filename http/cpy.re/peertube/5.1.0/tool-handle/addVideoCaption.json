{
  "name": "addVideoCaption",
  "description": "Add or replace a video caption",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "oneOf": [
          {
            "$ref": "#/$defs/id"
          },
          {
            "$ref": "#/$defs/UUIDv4"
          },
          {
            "$ref": "#/$defs/shortUUID"
          }
        ],
        "description": "The object id, uuid or short uuid"
      },
      "captionLanguage": {
        "$ref": "#/components/schemas/VideoLanguageSet",
        "description": "The caption language"
      },
      "body": {
        "properties": {
          "captionfile": {
            "description": "The file to upload.",
            "format": "binary",
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "id",
      "captionLanguage"
    ],
    "$defs": {
      "id": {
        "example": 42,
        "minimum": 1,
        "type": "integer"
      },
      "UUIDv4": {
        "example": "9c9de5e8-0a1e-484a-b099-e80766180a6d",
        "format": "uuid",
        "maxLength": 36,
        "minLength": 36,
        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
        "type": "string"
      },
      "shortUUID": {
        "description": "translation of a uuid v4 with a bigger alphabet to have a shorter uuid",
        "example": "2y84q2MQUMWPbiEcxNXMgC",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/videos/{id}/captions/{captionLanguage}"
    },
    "body": {
      "$": "body",
      "encode": "multipart"
    }
  },
  "responses": {}
}
