{
  "name": "getAbuses",
  "description": "List abuses",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "description": "only list the report with this id"
      },
      "predefinedReason": {
        "$ref": "#/components/schemas/PredefinedAbuseReasons",
        "description": "predefined reason the listed reports should contain"
      },
      "search": {
        "type": "string",
        "description": "plain search that will match with video titles, reporter names and more"
      },
      "state": {
        "$ref": "#/$defs/AbuseStateSet"
      },
      "searchReporter": {
        "type": "string",
        "description": "only list reports of a specific reporter"
      },
      "searchReportee": {
        "type": "string",
        "description": "only list reports of a specific reportee"
      },
      "searchVideo": {
        "type": "string",
        "description": "only list reports of a specific video"
      },
      "searchVideoChannel": {
        "type": "string",
        "description": "only list reports of a specific video channel"
      },
      "videoIs": {
        "enum": [
          "deleted",
          "blacklisted"
        ],
        "type": "string",
        "description": "only list deleted or blocklisted videos"
      },
      "filter": {
        "enum": [
          "video",
          "comment",
          "account"
        ],
        "type": "string",
        "description": "only list account, comment or video reports"
      },
      "start": {
        "minimum": 0,
        "type": "integer",
        "description": "Offset used to paginate results"
      },
      "count": {
        "default": 15,
        "maximum": 100,
        "minimum": 1,
        "type": "integer",
        "description": "Number of items to return"
      },
      "sort": {
        "enum": [
          "-id",
          "-createdAt",
          "-state"
        ],
        "type": "string",
        "description": "Sort abuses by criteria"
      }
    },
    "$defs": {
      "AbuseStateSet": {
        "description": "The abuse state (Pending = `1`, Rejected = `2`, Accepted = `3`)",
        "enum": [
          1,
          2,
          3
        ],
        "type": "integer"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/abuses{?id,predefinedReason,search,state,searchReporter,searchReportee,searchVideo,searchVideoChannel,videoIs,filter,start,count,sort}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            "**total**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
