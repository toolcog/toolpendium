{
  "name": "requestTwoFactor",
  "description": "Request two factor authentication for a user",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "#/components/schemas/id",
        "description": "Entity id"
      },
      "body": {
        "properties": {
          "currentPassword": {
            "description": "Password of the currently authenticated user",
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/users/{id}/two-factor/request"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**otpRequest**",
              {
                "$ul": [
                  "**requestToken**: The token to send to confirm this request",
                  "**secret**: The OTP secret",
                  "**uri**: The OTP URI"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
