{
  "name": "getAccountFollowers",
  "description": "List followers of an account",
  "parameters": {
    "type": "object",
    "properties": {
      "name": {
        "example": "chocobozzz | chocobozzz@example.org",
        "type": "string",
        "description": "The username or handle of the account"
      },
      "start": {
        "minimum": 0,
        "type": "integer",
        "description": "Offset used to paginate results"
      },
      "count": {
        "default": 15,
        "maximum": 100,
        "minimum": 1,
        "type": "integer",
        "description": "Number of items to return"
      },
      "sort": {
        "enum": [
          "createdAt"
        ],
        "type": "string",
        "description": "Sort followers by criteria"
      },
      "search": {
        "type": "string",
        "description": "Plain text search, applied to various parts of the model depending on endpoint"
      }
    },
    "required": [
      "name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/accounts/{name}/followers{?start,count,sort,search}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            "**total**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
