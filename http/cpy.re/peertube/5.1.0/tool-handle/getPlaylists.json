{
  "name": "getPlaylists",
  "description": "List video playlists",
  "parameters": {
    "type": "object",
    "properties": {
      "start": {
        "minimum": 0,
        "type": "integer",
        "description": "Offset used to paginate results"
      },
      "count": {
        "default": 15,
        "maximum": 100,
        "minimum": 1,
        "type": "integer",
        "description": "Number of items to return"
      },
      "sort": {
        "example": "-createdAt",
        "type": "string",
        "description": "Sort column"
      },
      "playlistType": {
        "$ref": "#/$defs/VideoPlaylistTypeSet"
      }
    },
    "$defs": {
      "VideoPlaylistTypeSet": {
        "description": "The video playlist type (Regular = `1`, Watch Later = `2`)",
        "enum": [
          1,
          2
        ],
        "type": "integer"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/video-playlists{?start,count,sort,playlistType}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            "**total**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
