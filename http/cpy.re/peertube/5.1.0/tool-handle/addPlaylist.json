{
  "name": "addPlaylist",
  "description": "If the video playlist is set as public, `videoChannelId` is mandatory.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "properties": {
          "description": {
            "description": "Video playlist description",
            "maxLength": 1000,
            "minLength": 3,
            "type": "string"
          },
          "displayName": {
            "description": "Video playlist display name",
            "maxLength": 120,
            "minLength": 1,
            "type": "string"
          },
          "privacy": {
            "$ref": "#/$defs/VideoPlaylistPrivacySet"
          },
          "thumbnailfile": {
            "description": "Video playlist thumbnail file",
            "format": "binary",
            "type": "string"
          },
          "videoChannelId": {
            "allOf": [
              {
                "$ref": "#/$defs/id"
              }
            ],
            "description": "Video channel in which the playlist will be published"
          }
        },
        "required": [
          "displayName"
        ],
        "type": "object"
      }
    },
    "$defs": {
      "VideoPlaylistPrivacySet": {
        "description": "Video playlist privacy policy (see [/video-playlists/privacies](#operation/getPlaylistPrivacyPolicies))",
        "enum": [
          1,
          2,
          3
        ],
        "type": "integer"
      },
      "id": {
        "example": 42,
        "minimum": 1,
        "type": "integer"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/video-playlists"
    },
    "body": {
      "$": "body",
      "encode": "multipart"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**videoPlaylist**",
              {
                "$ul": [
                  "**id**",
                  "**shortUUID**",
                  "**uuid**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
