{
  "name": "putVideoChannel",
  "description": "Update a video channel",
  "parameters": {
    "type": "object",
    "properties": {
      "channelHandle": {
        "example": "my_username | my_username@example.com",
        "type": "string",
        "description": "The video channel handle"
      },
      "body": {
        "$ref": "#/$defs/VideoChannelUpdate"
      }
    },
    "required": [
      "channelHandle"
    ],
    "$defs": {
      "VideoChannelUpdate": {
        "allOf": [
          {
            "$ref": "#/$defs/VideoChannelEdit"
          },
          {
            "properties": {
              "bulkVideosSupportUpdate": {
                "description": "Update the support field for all videos of this channel",
                "type": "boolean"
              }
            }
          }
        ]
      },
      "VideoChannelEdit": {
        "properties": {
          "description": {
            "description": "Channel description"
          },
          "displayName": {
            "description": "Channel display name"
          },
          "support": {
            "description": "How to support/fund the channel"
          }
        }
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/video-channels/{channelHandle}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
