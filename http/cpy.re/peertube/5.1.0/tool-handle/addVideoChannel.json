{
  "name": "addVideoChannel",
  "description": "Create a video channel",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/VideoChannelCreate"
      }
    },
    "$defs": {
      "VideoChannelCreate": {
        "allOf": [
          {
            "$ref": "#/$defs/VideoChannelEdit"
          },
          {
            "properties": {
              "name": {
                "allOf": [
                  {
                    "$ref": "#/$defs/usernameChannel"
                  }
                ],
                "description": "username of the channel to create"
              }
            }
          }
        ],
        "required": [
          "name",
          "displayName"
        ]
      },
      "VideoChannelEdit": {
        "properties": {
          "description": {
            "description": "Channel description"
          },
          "displayName": {
            "description": "Channel display name"
          },
          "support": {
            "description": "How to support/fund the channel"
          }
        }
      },
      "usernameChannel": {
        "description": "immutable name of the channel, used to interact with its actor",
        "example": "framasoft_videos",
        "maxLength": 50,
        "minLength": 1,
        "pattern": "/^[a-zA-Z0-9\\\\-_.:]+$/",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/video-channels"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**videoChannel**",
              {
                "$ul": [
                  "**id**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
