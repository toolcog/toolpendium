{
  "name": "getCustomConfig",
  "description": "Get instance runtime configuration",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/config/custom"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**admin**",
              {
                "$ul": [
                  "**email**"
                ]
              }
            ],
            [
              "**autoBlacklist**",
              {
                "$ul": [
                  [
                    "**videos**",
                    {
                      "$ul": [
                        [
                          "**ofUsers**",
                          {
                            "$ul": [
                              "**enabled**"
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**cache**",
              {
                "$ul": [
                  [
                    "**captions**",
                    {
                      "$ul": [
                        "**size**"
                      ]
                    }
                  ],
                  [
                    "**previews**",
                    {
                      "$ul": [
                        "**size**"
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**contactForm**",
              {
                "$ul": [
                  "**enabled**"
                ]
              }
            ],
            [
              "**followers**",
              {
                "$ul": [
                  [
                    "**instance**",
                    {
                      "$ul": [
                        "**enabled**",
                        "**manualApproval**"
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**import**",
              {
                "$ul": [
                  [
                    "**video_channel_synchronization**",
                    {
                      "$ul": [
                        "**enabled**"
                      ]
                    }
                  ],
                  [
                    "**videos**",
                    {
                      "$ul": [
                        [
                          "**http**",
                          {
                            "$ul": [
                              "**enabled**"
                            ]
                          }
                        ],
                        [
                          "**torrent**",
                          {
                            "$ul": [
                              "**enabled**"
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**instance**",
              {
                "$ul": [
                  [
                    "**customizations**",
                    {
                      "$ul": [
                        "**css**",
                        "**javascript**"
                      ]
                    }
                  ],
                  "**defaultClientRoute**",
                  "**defaultNSFWPolicy**",
                  "**description**",
                  "**isNSFW**",
                  "**name**",
                  "**shortDescription**",
                  "**terms**"
                ]
              }
            ],
            [
              "**services**",
              {
                "$ul": [
                  [
                    "**twitter**",
                    {
                      "$ul": [
                        "**username**",
                        "**whitelisted**"
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**signup**",
              {
                "$ul": [
                  "**enabled**",
                  "**limit**",
                  "**requiresEmailVerification**"
                ]
              }
            ],
            [
              "**theme**",
              {
                "$ul": [
                  "**default**"
                ]
              }
            ],
            [
              "**transcoding**: Settings pertaining to transcoding jobs",
              {
                "$ul": [
                  "**allowAdditionalExtensions**: Allow your users to upload .mkv, .mov, .avi, .wmv, .flv, .f4v, .3g2, .3gp, .mts, m2ts, .mxf, .nut videos",
                  "**allowAudioFiles**: If a user uploads an audio file, PeerTube will create a video by merging the preview file and the audio file",
                  "**concurrency**: Amount of transcoding jobs to execute in parallel",
                  "**enabled**",
                  [
                    "**hls**: HLS-specific settings",
                    {
                      "$ul": [
                        "**enabled**"
                      ]
                    }
                  ],
                  "**profile**: New profiles can be added by plugins ; available in core PeerTube: 'default'.",
                  [
                    "**resolutions**: Resolutions to transcode _new videos_ to",
                    {
                      "$ul": [
                        "**0p**",
                        "**1080p**",
                        "**1440p**",
                        "**144p**",
                        "**2160p**",
                        "**240p**",
                        "**360p**",
                        "**480p**",
                        "**720p**"
                      ]
                    }
                  ],
                  "**threads**: Amount of threads used by ffmpeg for 1 transcoding job",
                  [
                    "**webtorrent**: WebTorrent-specific settings",
                    {
                      "$ul": [
                        "**enabled**"
                      ]
                    }
                  ]
                ]
              }
            ],
            [
              "**user**: Settings that apply to new users, if registration is enabled",
              {
                "$ul": [
                  "**videoQuota**",
                  "**videoQuotaDaily**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
