{
  "name": "getPlugin",
  "description": "Get a plugin",
  "parameters": {
    "type": "object",
    "properties": {
      "npmName": {
        "example": "peertube-plugin-auth-ldap",
        "type": "string",
        "description": "name of the plugin/theme on npmjs.com or in its package.json"
      }
    },
    "required": [
      "npmName"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/plugins/{npmName}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**createdAt**",
            "**description**",
            "**enabled**",
            "**homepage**",
            "**latestVersion**",
            "**name**",
            "**peertubeEngine**",
            "**settings**",
            "**type**: - `1`: PLUGIN",
            "**uninstalled**",
            "**updatedAt**",
            "**version**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
