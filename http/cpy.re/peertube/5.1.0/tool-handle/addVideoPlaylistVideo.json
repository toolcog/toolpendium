{
  "name": "addVideoPlaylistVideo",
  "description": "Add a video in a playlist",
  "parameters": {
    "type": "object",
    "properties": {
      "playlistId": {
        "$ref": "#/components/schemas/VideoPlaylist/properties/id",
        "description": "Playlist id"
      },
      "body": {
        "properties": {
          "startTimestamp": {
            "description": "Start the video at this specific timestamp",
            "format": "seconds",
            "type": "integer"
          },
          "stopTimestamp": {
            "description": "Stop the video at this specific timestamp",
            "format": "seconds",
            "type": "integer"
          },
          "videoId": {
            "description": "Video to add in the playlist",
            "oneOf": [
              {
                "$ref": "#/$defs/uuid"
              },
              {
                "$ref": "#/$defs/id"
              }
            ]
          }
        },
        "required": [
          "videoId"
        ],
        "type": "object"
      }
    },
    "required": [
      "playlistId"
    ],
    "$defs": {
      "uuid": {
        "allOf": [
          {
            "$ref": "#/$defs/UUIDv4"
          }
        ],
        "description": "universal identifier for the video, that can be used across instances"
      },
      "UUIDv4": {
        "example": "9c9de5e8-0a1e-484a-b099-e80766180a6d",
        "format": "uuid",
        "maxLength": 36,
        "minLength": 36,
        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
        "type": "string"
      },
      "id": {
        "allOf": [
          {
            "$ref": "#/$defs/id"
          }
        ],
        "description": "object id for the video"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/video-playlists/{playlistId}/videos"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**videoPlaylistElement**",
              {
                "$ul": [
                  "**id**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
