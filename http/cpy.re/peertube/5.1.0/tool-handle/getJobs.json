{
  "name": "getJobs",
  "description": "List instance jobs",
  "parameters": {
    "type": "object",
    "properties": {
      "state": {
        "enum": [
          "",
          "active",
          "completed",
          "failed",
          "waiting",
          "delayed"
        ],
        "type": "string",
        "description": "The state of the job ('' for for no filter)"
      },
      "jobType": {
        "enum": [
          "activitypub-follow",
          "activitypub-http-broadcast",
          "activitypub-http-fetcher",
          "activitypub-http-unicast",
          "email",
          "video-transcoding",
          "video-file-import",
          "video-import",
          "videos-views-stats",
          "activitypub-refresher",
          "video-redundancy",
          "video-live-ending",
          "video-channel-import"
        ],
        "type": "string",
        "description": "job type"
      },
      "start": {
        "minimum": 0,
        "type": "integer",
        "description": "Offset used to paginate results"
      },
      "count": {
        "default": 15,
        "maximum": 100,
        "minimum": 1,
        "type": "integer",
        "description": "Number of items to return"
      },
      "sort": {
        "example": "-createdAt",
        "type": "string",
        "description": "Sort column"
      }
    },
    "required": [
      "state"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/jobs/{state}{?jobType,start,count,sort}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            "**total**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
