{
  "name": "verifyRegistrationEmail",
  "description": "Following a user registration request, the user will receive an email asking to click a link\ncontaining a secret.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "registrationId": {
        "$ref": "#/components/schemas/id",
        "description": "Registration ID"
      },
      "body": {
        "properties": {
          "verificationString": {
            "format": "url",
            "type": "string"
          }
        },
        "required": [
          "verificationString"
        ],
        "type": "object"
      }
    },
    "required": [
      "registrationId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/users/registrations/{registrationId}/verify-email"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
