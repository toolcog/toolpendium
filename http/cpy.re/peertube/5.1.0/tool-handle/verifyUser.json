{
  "name": "verifyUser",
  "description": "Following a user registration, the new user will receive an email asking to click a link\ncontaining a secret.\nThis endpoint can also be used to verify a new email set in the user account.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "#/components/schemas/id",
        "description": "Entity id"
      },
      "body": {
        "properties": {
          "isPendingEmail": {
            "type": "boolean"
          },
          "verificationString": {
            "format": "url",
            "type": "string"
          }
        },
        "required": [
          "verificationString"
        ],
        "type": "object"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://peertube2.cpy.re/api/v1/users/{id}/verify-email"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
