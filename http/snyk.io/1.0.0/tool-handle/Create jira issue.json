      },
      "projectId": {
        "type": "string",
        "description": "Automatically added"
      },
      "body": {
        "example": {
          "fields": {
            "issuetype": {},
            "project": {},
            "summary": ""
          }
        },
        "properties": {
          "fields": {
            "properties": {
              "issuetype": {
                "description": "See https://developer.atlassian.com/cloud/jira/platform/rest/v3/api-group-issues/#api-rest-api-3-issue-post for details of what to send as fields.",
                "properties": {},
                "type": "object"
