{
  "name": "getCheckpointFirewall",
  "description": "Show checkpoint firewall data source details",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "entity id"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://vmware.local/data-sources/checkpoint-firewalls/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**enabled** (default: true)",
            "**entity_id**",
            "**entity_type**",
            "**fqdn**",
            "**ip**",
            "**nickname**",
            "**notes**",
            "**proxy_id**: proxy vm which should register this vcenter",
            [
              "**credentials**",
              {
                "$ul": [
                  "**password**",
                  "**username**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
