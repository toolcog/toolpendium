{
  "name": "updateJuniperSwitch",
  "description": "Update a juniper switch data source",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "entity id"
      },
      "body": {
        "$ref": "#/$defs/JuniperSwitchDataSource"
      }
    },
    "required": [
      "id"
    ],
    "$defs": {
      "JuniperSwitchDataSource": {
        "allOf": [
          {
            "$ref": "#/$defs/SwitchDataSource"
          }
        ]
      },
      "SwitchDataSource": {
        "allOf": [
          {
            "$ref": "#/$defs/BaseDataSource"
          },
          {
            "properties": {
              "credentials": {
                "$ref": "#/$defs/PasswordCredentials"
              }
            }
          }
        ]
      },
      "BaseDataSource": {
        "discriminator": {
          "propertyName": "entity_type"
        },
        "properties": {
          "enabled": {
            "default": true,
            "type": "boolean"
          },
          "entity_id": {
            "type": "string"
          },
          "entity_type": {
            "$ref": "#/$defs/DataSourceType"
          },
          "fqdn": {
            "example": "your.domain.com",
            "type": "string"
          },
          "ip": {
            "example": "192.168.10.1",
            "type": "string"
          },
          "nickname": {
            "example": "vc1",
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "proxy_id": {
            "description": "proxy vm which should register this vcenter",
            "example": "1000:104:12313412",
            "type": "string"
          }
        },
        "type": "object"
      },
      "DataSourceType": {
        "enum": [
          "CiscoSwitchDataSource",
          "DellSwitchDataSource",
          "AristaSwitchDataSource",
          "BrocadeSwitchDataSource",
          "JuniperSwitchDataSource",
          "VCenterDataSource",
          "NSXVManagerDataSource",
          "UCSManagerDataSource",
          "HPVCManagerDataSource",
          "HPOneViewDataSource",
          "PanFirewallDataSource",
          "CheckpointFirewallDataSource"
        ],
        "type": "string"
      },
      "PasswordCredentials": {
        "properties": {
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        },
        "required": [
          "username",
          "password"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "http://vmware.local/data-sources/juniper-switches/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**enabled** (default: true)",
            "**entity_id**",
            "**entity_type**",
            "**fqdn**",
            "**ip**",
            "**nickname**",
            "**notes**",
            "**proxy_id**: proxy vm which should register this vcenter",
            [
              "**credentials**",
              {
                "$ul": [
                  "**password**",
                  "**username**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**details**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
