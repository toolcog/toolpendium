{
  "name": "addCheckpointFirewall",
  "description": "Add checkpoint firewall as data source",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/components/schemas/CheckpointFirewallDataSourceRequest",
        "description": "Add a vSec Checkpoint firewall as data source"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://vmware.local/data-sources/checkpoint-firewalls"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**enabled** (default: true)",
            "**entity_id**",
            "**entity_type**",
            "**fqdn**",
            "**ip**",
            "**nickname**",
            "**notes**",
            "**proxy_id**: proxy vm which should register this vcenter",
            [
              "**credentials**",
              {
                "$ul": [
                  "**password**",
                  "**username**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**details**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
