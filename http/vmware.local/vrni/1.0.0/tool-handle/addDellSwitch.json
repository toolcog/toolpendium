{
  "name": "addDellSwitch",
  "description": "Add a dell switch as data source",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/DellSwitchDataSourceRequest"
      }
    },
    "$defs": {
      "DellSwitchDataSourceRequest": {
        "allOf": [
          {
            "$ref": "#/$defs/SwitchDataSourceRequest"
          },
          {
            "properties": {
              "switch_type": {
                "$ref": "#/$defs/DellSwitchType"
              }
            }
          }
        ]
      },
      "SwitchDataSourceRequest": {
        "allOf": [
          {
            "$ref": "#/$defs/BaseDataSourceRequest"
          },
          {
            "properties": {
              "credentials": {
                "$ref": "#/$defs/PasswordCredentials"
              }
            }
          }
        ]
      },
      "BaseDataSourceRequest": {
        "properties": {
          "enabled": {
            "default": true,
            "type": "boolean"
          },
          "fqdn": {
            "example": "your.domain.com",
            "type": "string"
          },
          "ip": {
            "example": "192.168.10.1",
            "type": "string"
          },
          "nickname": {
            "example": "vc1",
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "proxy_id": {
            "description": "proxy vm which should register this vcenter",
            "example": "1000:104:12313412",
            "type": "string"
          }
        },
        "required": [
          "proxy_id",
          "nickname"
        ],
        "type": "object"
      },
      "PasswordCredentials": {
        "properties": {
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        },
        "required": [
          "username",
          "password"
        ],
        "type": "object"
      },
      "DellSwitchType": {
        "enum": [
          "FORCE_10_MXL_10",
          "POWERCONNECT_8024",
          "S4048",
          "Z9100",
          "S6000"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://vmware.local/data-sources/dell-switches"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**enabled** (default: true)",
            "**entity_id**",
            "**entity_type**",
            "**fqdn**",
            "**ip**",
            "**nickname**",
            "**notes**",
            "**proxy_id**: proxy vm which should register this vcenter",
            [
              "**credentials**",
              {
                "$ul": [
                  "**password**",
                  "**username**"
                ]
              }
            ],
            "**switch_type**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**details**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
