{
  "name": "getOneRecurringPayment",
  "description": "Get information about a particular recurring payment via its ID.\n\nHereâ€™s the list of available statuses:  \n\\- WAITING_PAY  \n\\- PAID  \n\\- PARTIALLY_PAID  \n\\- EXPIRED",
  "parameters": {
    "type": "object",
    "properties": {
      "x-api-key": {
        "example": "{{your_api_key}}",
        "type": "string"
      },
      "sub_id": {
        "type": "string"
      }
    },
    "required": [
      "sub_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
