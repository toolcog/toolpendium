{
  "name": "getOnePlan",
  "description": "This method allows you to obtain information about your payment plan.  \n(you need to specify your payment plan id in the request).",
  "parameters": {
    "type": "object",
    "properties": {
      "x-api-key": {
        "example": "{{your_api_key}}",
        "type": "string"
      },
      "plan-id": {
        "type": "string"
      }
    },
    "required": [
      "plan-id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.nowpayments.io/v1/subscriptions/plans/{plan-id}"
    },
    "headers": {
      "x-api-key": {
        "$": "x-api-key"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**amount**",
                  "**cancel_url**",
                  "**created_at**",
                  "**currency**",
                  "**id**",
                  "**interval_day**",
                  "**ipn_callback_url**",
                  "**partially_paid_url**",
                  "**success_url**",
                  "**title**",
                  "**updated_at**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**",
            "**status**",
            "**statusCode**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
