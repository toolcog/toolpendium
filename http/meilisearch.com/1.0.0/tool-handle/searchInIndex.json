{
  "name": "searchInIndex",
  "description": "Search in index",
  "parameters": {
    "type": "object",
    "properties": {
      "q": {
        "example": "prinec",
        "type": "string"
      },
      "offset": {
        "example": "0",
        "type": "string"
      },
      "limit": {
        "example": "1",
        "type": "string"
      },
      "attributesToRetrieve": {
        "example": "title,author",
        "type": "string"
      },
      "attributesToCrop": {
        "example": "title",
        "type": "string"
      },
      "attributesToHighlight": {
        "example": "*",
        "type": "string"
      },
      "cropLength": {
        "example": "5",
        "type": "string"
      },
      "cropMarker": {
        "example": "[...]",
        "type": "string"
      },
      "filter": {
        "example": "genre=\"fantasy\"",
        "type": "string"
      },
      "showMatchesPosition": {
        "example": "true",
        "type": "string"
      },
      "facets": {
        "example": "genre",
        "type": "string"
      },
      "sort": {
        "example": "price",
        "type": "string"
      },
      "highlightPreTag": {
        "example": "<mark>",
        "type": "string"
      },
      "highlightPostTag": {
        "example": "</mark>",
        "type": "string"
      },
      "matchingStrategy": {
        "example": "all",
        "type": "string"
      },
      "page": {
        "example": "2",
        "type": "string"
      },
      "hitsPerPage": {
        "example": "50",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://localhost:7700//indexes/books/search{?q,offset,limit,attributesToRetrieve,attributesToCrop,attributesToHighlight,cropLength,cropMarker,filter,showMatchesPosition,facets,sort,highlightPreTag,highlightPostTag,matchingStrategy,page,hitsPerPage}"
    }
  },
  "responses": {}
}
