{
  "name": "usersGet",
  "description": "Get a user by its unique ID.",
  "parameters": {
    "type": "object",
    "properties": {
      "userId": {
        "type": "string",
        "x-example": "[USER_ID]",
        "description": "User unique ID."
      }
    },
    "required": [
      "userId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://appwrite.io/v1/users/{userId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "User",
        "**Key properties:**",
        {
          "$ul": [
            "**$id**: User ID.",
            "**email**: User email address.",
            "**emailVerification**: Email verification status.",
            "**name**: User name.",
            "**passwordUpdate**: Unix timestamp of the most recent password update",
            "**prefs**: User preferences as a key-value object",
            "**registration**: User registration date in Unix timestamp.",
            "**status**: User status. 0 for Unactivated, 1 for active and 2 is blocked."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
