{
  "name": "storageGetFile",
  "description": "Get a file by its unique ID. This endpoint response returns a JSON object with the file metadata.",
  "parameters": {
    "type": "object",
    "properties": {
      "fileId": {
        "type": "string",
        "x-example": "[FILE_ID]",
        "description": "File unique ID."
      }
    },
    "required": [
      "fileId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://appwrite.io/v1/storage/files/{fileId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "File",
        "**Key properties:**",
        {
          "$ul": [
            "**$id**: File ID.",
            "**$permissions**: File permissions.",
            "**dateCreated**: File creation date in Unix timestamp.",
            "**mimeType**: File mime type.",
            "**name**: File name.",
            "**signature**: File MD5 signature.",
            "**sizeOriginal**: File original size in bytes."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
