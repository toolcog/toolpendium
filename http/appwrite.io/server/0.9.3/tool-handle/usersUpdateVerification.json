{
  "name": "usersUpdateVerification",
  "description": "Update the user email verification status by its unique ID.",
  "parameters": {
    "type": "object",
    "properties": {
      "userId": {
        "type": "string",
        "x-example": "[USER_ID]",
        "description": "User unique ID."
      },
      "body": {
        "properties": {
          "emailVerification": {
            "description": "User Email Verification Status.",
            "type": "boolean",
            "x-example": null
          }
        },
        "required": [
          "emailVerification"
        ],
        "type": "object"
      }
    },
    "required": [
      "userId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://appwrite.io/v1/users/{userId}/verification"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "User",
        "**Key properties:**",
        {
          "$ul": [
            "**$id**: User ID.",
            "**email**: User email address.",
            "**emailVerification**: Email verification status.",
            "**name**: User name.",
            "**passwordUpdate**: Unix timestamp of the most recent password update",
            "**prefs**: User preferences as a key-value object",
            "**registration**: User registration date in Unix timestamp.",
            "**status**: User status. 0 for Unactivated, 1 for active and 2 is blocked."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
