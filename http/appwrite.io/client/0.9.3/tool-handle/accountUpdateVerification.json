{
  "name": "accountUpdateVerification",
  "description": "Use this endpoint to complete the user email verification process. Use both the **userId** and **secret** parameters that were attached to your app URL to verify the user email ownership. If confirmed this route will return a 200 status code.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "properties": {
          "secret": {
            "description": "Valid verification token.",
            "type": "string",
            "x-example": null
          },
          "userId": {
            "description": "User unique ID.",
            "type": "string",
            "x-example": null
          }
        },
        "required": [
          "userId",
          "secret"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://appwrite.io/v1/account/verification"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Token",
        "**Key properties:**",
        {
          "$ul": [
            "**$id**: Token ID.",
            "**expire**: Token expiration date in Unix timestamp.",
            "**secret**: Token secret key. This will return an empty string unless the response is returned using an API key or as part of a webhook payload.",
            "**userId**: User ID."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
