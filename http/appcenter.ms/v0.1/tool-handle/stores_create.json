{
  "name": "stores_create",
  "description": "Create a new external store for the specified application.",
  "parameters": {
    "type": "object",
    "properties": {
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      },
      "body": {
        "description": "The store request",
        "properties": {
          "intune_details": {
            "properties": {
              "app_category": {
                "properties": {
                  "name": {
                    "description": "display name for the app category",
                    "type": "string"
                  }
                }
              },
              "secret_json": {
                "properties": {
                  "id_token": {
                    "description": "the id token of user",
                    "type": "string"
                  },
                  "refresh_token": {
                    "description": "the refresh token for user",
                    "type": "string"
                  },
                  "refresh_token_expiry": {
                    "description": "the expiry of refresh token",
                    "type": "string"
                  }
                }
              },
              "target_audience": {
                "properties": {
                  "name": {
                    "description": "display name for the target audience/group",
                    "type": "string"
                  }
                }
              },
              "tenant_id": {
                "description": "tenant id of the intune store",
                "type": "string"
              }
            }
          },
          "name": {
            "description": "name of the store. In case of googleplay, and Apple store this is fixed to Production.",
            "type": "string"
          },
          "service_connection_id": {
            "description": "Id for the shared service connection. In case of Apple AppStore, this connection will be used to create and connect to the Apple AppStore in Mobile Center.",
            "type": "string"
          },
          "track": {
            "description": "track of the store. Can be production, alpha & beta for googleplay. Can be production, testflight-internal & testflight-external for Apple Store.",
            "enum": [
              "production",
              "alpha",
              "beta",
              "testflight-internal",
              "testflight-external"
            ],
            "type": "string"
          },
          "type": {
            "description": "store Type",
            "enum": [
              "googleplay",
              "apple",
              "intune"
            ],
            "type": "string"
          }
        }
      }
    },
    "required": [
      "owner_name",
      "app_name",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/distribution_stores"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "ExternalStoreResponse",
        "**Key properties:**",
        {
          "$ul": [
            "**created_by**: The ID of the principal that created the store.",
            "**created_by_principal_type**: The type of the principal that created the store.",
            "**id**: Store id",
            [
              "**intune_details**: Store details for intune",
              {
                "$ul": [
                  [
                    "**app_category**",
                    {
                      "$ul": [
                        "**id**: ID for the category.",
                        "**name**: display name for the app category"
                      ]
                    }
                  ],
                  [
                    "**target_audience**",
                    {
                      "$ul": [
                        "**id**: ID for the target audience/group.",
                        "**name**: display name for the target audience/group"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**name**: Store Name",
            "**service_connection_id**: Id for the shared service connection. In case of Apple / GooglePlay stores, this connection will be used to connect to the Apple / Google stores in App Center.",
            "**track**: Store track",
            "**type**: Store Type"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
