{
  "name": "releases_putDistributionGroup",
  "description": "Update details about the specified distribution group associated with the release",
  "parameters": {
    "type": "object",
    "properties": {
      "release_id": {
        "type": "integer",
        "description": "The ID of the release"
      },
      "group_id": {
        "format": "uuid",
        "type": "string",
        "description": "The id of the releases destination"
      },
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      },
      "body": {
        "properties": {
          "mandatory_update": {
            "description": "Whether a release is mandatory for the given destination",
            "type": "boolean"
          }
        },
        "required": [
          "mandatory_update"
        ],
        "type": "object"
      }
    },
    "required": [
      "release_id",
      "group_id",
      "owner_name",
      "app_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/releases/{release_id}/groups/{group_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
