{
  "name": "test_getDeviceConfigurations",
  "description": "Returns a list of available devices",
  "parameters": {
    "type": "object",
    "properties": {
      "app_upload_id": {
        "format": "uuid",
        "type": "string",
        "description": "The ID of the test run"
      },
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      }
    },
    "required": [
      "owner_name",
      "app_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/device_configurations{?app_upload_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**id**: The unique id of the device configuration",
            [
              "**image**",
              {
                "$ul": [
                  "**full**",
                  "**thumb**"
                ]
              }
            ],
            "**marketShare**",
            [
              "**model**",
              {
                "$ul": [
                  "**availabilityCount**",
                  [
                    "**cpu**: CPU data for device",
                    {
                      "$ul": [
                        "**core**",
                        "**frequency**",
                        "**text**"
                      ]
                    }
                  ],
                  [
                    "**deviceFrame**",
                    {
                      "$ul": [
                        [
                          "**full**",
                          {
                            "$ul": [
                              "**frameUrl**",
                              "**height**",
                              "**screen**",
                              "**width**"
                            ]
                          }
                        ],
                        [
                          "**grid**",
                          {
                            "$ul": [
                              "**frameUrl**",
                              "**height**",
                              "**screen**",
                              "**width**"
                            ]
                          }
                        ]
                      ]
                    }
                  ],
                  [
                    "**dimensions**: Physical device dimensions",
                    {
                      "$ul": [
                        "**depth**",
                        "**height**",
                        "**width**"
                      ]
                    }
                  ],
                  "**formFactor**",
                  "**manufacturer**",
                  [
                    "**memory**: Memory data for device",
                    {
                      "$ul": [
                        "**formattedSize**"
                      ]
                    }
                  ],
                  "**model**",
                  "**name**",
                  "**platform**",
                  "**releaseDate**",
                  [
                    "**resolution**: Device screen resolution",
                    {
                      "$ul": [
                        "**height**",
                        "**ppi**",
                        "**width**"
                      ]
                    }
                  ],
                  "**screenRotation**",
                  [
                    "**screenSize**: Physical device screen dimensions",
                    {
                      "$ul": [
                        "**cm**",
                        "**in**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**name**: The name of the device model and OS version",
            "**os**",
            "**osName**",
            "**tier**: The tier"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
