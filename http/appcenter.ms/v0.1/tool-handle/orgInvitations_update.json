{
  "name": "orgInvitations_update",
  "description": "Allows the role of an invited user to be changed",
  "parameters": {
    "type": "object",
    "properties": {
      "org_name": {
        "type": "string",
        "description": "The organization's name"
      },
      "email": {
        "type": "string",
        "description": "The email address of the user to send the password reset mail to."
      },
      "body": {
        "properties": {
          "role": {
            "description": "The user's role in the organizatiion",
            "enum": [
              "admin",
              "collaborator",
              "member"
            ],
            "type": "string"
          }
        },
        "description": "The new role of the user"
      }
    },
    "required": [
      "org_name",
      "email",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/orgs/{org_name}/invitations/{email}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**code**",
                  "**message**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
