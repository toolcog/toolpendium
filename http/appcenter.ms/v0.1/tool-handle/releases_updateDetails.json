{
  "name": "releases_updateDetails",
  "description": "Update details of a release.",
  "parameters": {
    "type": "object",
    "properties": {
      "release_id": {
        "type": "integer",
        "description": "The ID of the release"
      },
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      },
      "body": {
        "description": "The release information.",
        "properties": {
          "build": {
            "description": "Contains metadata about the build that produced the release being uploaded",
            "properties": {
              "branch_name": {
                "description": "The branch name of the build producing the release",
                "type": "string"
              },
              "commit_hash": {
                "description": "The commit hash of the build producing the release",
                "type": "string"
              },
              "commit_message": {
                "description": "The commit message of the build producing the release",
                "type": "string"
              }
            },
            "type": "object"
          },
          "enabled": {
            "description": "Toggle this release to be enable distribute/download or not.",
            "type": "boolean"
          },
          "release_notes": {
            "description": "Release notes for this release.",
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "release_id",
      "owner_name",
      "app_name",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/releases/{release_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Response for updating a release",
        "**Key properties:**",
        {
          "$ul": [
            "**destinations**",
            "**enabled**",
            "**mandatory_update**",
            "**provisioning_status_url**",
            "**release_notes**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**",
            "**destinations**",
            "**mandatory_update**",
            "**release_notes**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
