{
  "name": "crashGroups_update",
  "description": "Updates a group.",
  "parameters": {
    "type": "object",
    "properties": {
      "crash_group_id": {
        "type": "string",
        "description": "id of a specific group"
      },
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      },
      "body": {
        "properties": {
          "annotation": {
            "type": "string"
          },
          "status": {
            "enum": [
              "open",
              "closed",
              "ignored"
            ]
          }
        },
        "type": "object",
        "description": "Group change object. All fields are optional and only provided fields will get updated."
      }
    },
    "required": [
      "crash_group_id",
      "owner_name",
      "app_name",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/crash_groups/{crash_group_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**annotation**",
            "**app_version**",
            "**build**",
            "**count**",
            "**crash_group_id**",
            "**crash_reason**",
            "**display_id**",
            "**exception**",
            "**fatal**: Crash or handled exception",
            "**first_occurrence**",
            "**impacted_users**",
            "**last_occurrence**",
            "**new_crash_group_id**",
            [
              "**reason_frame**: frame belonging to the reason of the crash",
              {
                "$ul": [
                  "**app_code**: this line isn't from any framework",
                  "**class_method**: is a class method",
                  "**class_name**: name of the class",
                  "**code_formatted**: Formatted frame string",
                  "**code_raw**: Unformatted Frame string",
                  "**exception_type**: Exception type.",
                  "**file**: name of the file",
                  "**framework_name**: Name of the framework",
                  "**language**: programming language of the frame",
                  "**line**: line number",
                  "**method**: name of the method",
                  "**method_params**: parameters of the frames method",
                  "**os_exception_type**: OS exception type. (aka. SIGNAL)"
                ]
              }
            ],
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
