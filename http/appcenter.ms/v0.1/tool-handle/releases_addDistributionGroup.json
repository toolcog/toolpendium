{
  "name": "releases_addDistributionGroup",
  "description": "Distributes a release to a group",
  "parameters": {
    "type": "object",
    "properties": {
      "release_id": {
        "type": "integer",
        "description": "The ID of the release"
      },
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      },
      "body": {
        "allOf": [
          {
            "properties": {
              "id": {
                "description": "Unique id of the release destination",
                "format": "uuid",
                "type": "string"
              }
            },
            "required": [
              "id"
            ],
            "type": "object"
          },
          {
            "properties": {
              "mandatory_update": {
                "description": "Flag to mark the release for the provided destinations as mandatory",
                "type": "boolean"
              },
              "notify_testers": {
                "default": true,
                "description": "Flag to enable or disable notifications to testers",
                "type": "boolean"
              }
            },
            "type": "object"
          }
        ],
        "type": "object",
        "description": "The release information."
      }
    },
    "required": [
      "release_id",
      "owner_name",
      "app_name",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/releases/{release_id}/groups"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**id**: Unique id for the release destination",
            "**mandatory_update**: Flag to mark the release for the provided destinations as mandatory",
            "**provisioning_status_url**: The url to check provisioning status."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
