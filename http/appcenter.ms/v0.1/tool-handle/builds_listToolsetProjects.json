{
  "name": "builds_listToolsetProjects",
  "description": "Returns the projects in the repository for the branch, for all toolsets",
  "parameters": {
    "type": "object",
    "properties": {
      "branch": {
        "type": "string",
        "description": "The branch name"
      },
      "os": {
        "enum": [
          "iOS",
          "Android",
          "Windows",
          "macOS"
        ],
        "type": "string",
        "description": "The desired OS for the project scan; normally the same as the app OS"
      },
      "platform": {
        "enum": [
          "Objective-C-Swift",
          "React-Native",
          "Xamarin",
          "Java",
          "UWP"
        ],
        "type": "string",
        "description": "The desired platform for the project scan"
      },
      "maxSearchDepth": {
        "maximum": 10,
        "minimum": 1,
        "type": "integer",
        "description": "The depth of the repository to search for project files"
      },
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      }
    },
    "required": [
      "branch",
      "os",
      "platform",
      "owner_name",
      "app_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/branches/{branch}/toolset_projects{?os,platform,maxSearchDepth}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "A collection of projects for each type of toolset",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**android**",
              {
                "$ul": [
                  "**androidModules**: Android Gradle modules",
                  "**gradleWrapperPath**: The path of the Gradle wrapper"
                ]
              }
            ],
            "**buildscripts**: A collection of detected pre/post buildscripts for current platform toolset",
            "**commit**: The commit hash of the analyzed commit",
            [
              "**javascript**",
              {
                "$ul": [
                  "**javascriptSolutions**: The React Native solutions detected",
                  "**packageJsonPaths**: Paths for detected package.json files"
                ]
              }
            ],
            [
              "**testcloud**",
              {
                "$ul": [
                  "**projects**: The TestCloud projects detected"
                ]
              }
            ],
            [
              "**uwp**",
              {
                "$ul": [
                  "**uwpSolutions**: The UWP solutions detected"
                ]
              }
            ],
            [
              "**xamarin**",
              {
                "$ul": [
                  "**xamarinSolutions**: Xamarin solutions for the toolset"
                ]
              }
            ],
            [
              "**xcode**",
              {
                "$ul": [
                  "**xcodeSchemeContainers**: The Xcode scheme containers"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
