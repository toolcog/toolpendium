{
  "name": "crashes_getStacktrace",
  "description": "Gets a stacktrace for a specific crash.",
  "parameters": {
    "type": "object",
    "properties": {
      "crash_group_id": {
        "type": "string",
        "description": "id of a specific group"
      },
      "crash_id": {
        "type": "string",
        "description": "id of a specific crash"
      },
      "grouping_only": {
        "default": false,
        "type": "boolean",
        "description": "true if the stacktrace should be only the relevant thread / exception. Default is false"
      },
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      }
    },
    "required": [
      "crash_group_id",
      "crash_id",
      "owner_name",
      "app_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/crash_groups/{crash_group_id}/crashes/{crash_id}/stacktrace{?grouping_only}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "a stacktrace in a processed and prettyfied way",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**exception**: a exception",
              {
                "$ul": [
                  "**frames**: frames of the excetpion",
                  "**inner_exceptions**",
                  "**platform**: SDK/Platform this thread is beeing generated from",
                  "**reason**: Reason of the exception",
                  "**relevant**: relevant exception (crashed)",
                  "**type**: Type of the exception (NSSomethingException, NullPointerException)"
                ]
              }
            ],
            "**reason**",
            "**threads**",
            "**title**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
