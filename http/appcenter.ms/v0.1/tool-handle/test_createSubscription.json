{
  "name": "test_createSubscription",
  "description": "Accept a free trial subscription",
  "parameters": {
    "type": "object",
    "properties": {
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      }
    },
    "required": [
      "owner_name",
      "app_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/subscriptions"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Subscription"
        },
        "Subscription information",
        "**Key properties:**",
        {
          "$ul": [
            "**active**: Is the subscription currently active?",
            "**concurrentDevicesLimit**: Customer limits on concurrent devices",
            "**daysLeft**: The number of days left in the subscription",
            "**endsAt**: The date the subscription will end or ended",
            "**id**: Id of the subscription",
            "**runningDevices**: Current device concurrency utilization",
            "**startsAt**: The date the subscription began",
            [
              "**tier**",
              {
                "$ul": [
                  "**name**: The name of the tier"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
