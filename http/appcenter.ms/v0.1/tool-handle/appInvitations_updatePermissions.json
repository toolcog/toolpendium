{
  "name": "appInvitations_updatePermissions",
  "description": "Update pending invitation permission",
  "parameters": {
    "type": "object",
    "properties": {
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      },
      "user_email": {
        "type": "string",
        "description": "The email of the user to invite"
      },
      "body": {
        "properties": {
          "permissions": {
            "description": "The permissions the user has for the app in the invitation",
            "items": {
              "enum": [
                "manager",
                "developer",
                "viewer"
              ],
              "type": "string"
            },
            "type": "array"
          }
        },
        "required": [
          "permissions"
        ],
        "description": "The value to update the user permission in the invite."
      }
    },
    "required": [
      "owner_name",
      "app_name",
      "user_email",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/invitations/{user_email}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**code**",
                  "**message**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
