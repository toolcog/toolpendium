{
  "name": "Analytics_CrashGroupsTotals",
  "description": "Overall crashes and affected users count of the selected crash groups with selected versions.",
  "parameters": {
    "type": "object",
    "properties": {
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      },
      "body": {
        "properties": {
          "crash_groups": {
            "items": {
              "properties": {
                "app_version": {
                  "format": "string",
                  "type": "string"
                },
                "crash_group_id": {
                  "format": "string",
                  "type": "string"
                }
              },
              "type": "object"
            },
            "minItems": 1,
            "type": "array"
          }
        },
        "required": [
          "crash_groups"
        ],
        "type": "object"
      }
    },
    "required": [
      "owner_name",
      "app_name",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/analytics/crash_groups"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "List of crash groups with overall crashes count and affected users.",
        "**Key properties:**",
        {
          "$ul": [
            "**app_version**",
            "**crash_group_id**",
            [
              "**overall**",
              {
                "$ul": [
                  "**crash_count**",
                  "**device_count**"
                ]
              }
            ]
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Error",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**error**",
              {
                "$ul": [
                  "**code**: The status code return by the API. It can be 400 or 403 or 500.",
                  "**message**: The reason for the request failed."
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
