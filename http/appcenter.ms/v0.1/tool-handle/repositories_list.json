{
  "name": "repositories_list",
  "description": "Gets the repositories available from the source code host",
  "parameters": {
    "type": "object",
    "properties": {
      "source_host": {
        "enum": [
          "github",
          "bitbucket",
          "vsts",
          "gitlab"
        ],
        "type": "string",
        "description": "The source host"
      },
      "vstsAccountName": {
        "type": "string",
        "description": "Filter repositories only for specified account and project, \"vstsProjectId\" is required"
      },
      "vstsProjectId": {
        "type": "string",
        "description": "Filter repositories only for specified account and project, \"vstsAccountName\" is required"
      },
      "service_connection_id": {
        "type": "string",
        "description": "The id of the service connection (private). Required for GitLab self-hosted repositories"
      },
      "form": {
        "enum": [
          "lite",
          "full"
        ],
        "type": "string",
        "description": "The selected form of the object"
      },
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      }
    },
    "required": [
      "source_host",
      "owner_name",
      "app_name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/source_hosts/{source_host}/repositories{?vstsAccountName,vstsProjectId,service_connection_id,form}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "A list of source repositories",
        "**Key properties:**",
        {
          "$ul": [
            "**clone_url**: URL used to clone the repository",
            "**name**: The repository name"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**id**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
