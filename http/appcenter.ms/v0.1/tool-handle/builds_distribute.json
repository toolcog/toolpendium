{
  "name": "builds_distribute",
  "description": "Distribute a build",
  "parameters": {
    "type": "object",
    "properties": {
      "build_id": {
        "exclusiveMinimum": true,
        "minimum": 0,
        "type": "integer",
        "description": "The build ID"
      },
      "owner_name": {
        "type": "string",
        "description": "The name of the owner"
      },
      "app_name": {
        "type": "string",
        "description": "The name of the application"
      },
      "body": {
        "properties": {
          "destinations": {
            "description": "Array of objects {id:string, type:string} with \"id\" being the distribution group ID, store ID, or tester email, and \"type\" being \"group\", \"store\", or \"tester\"",
            "items": {
              "description": "Destination details for distributing build releases",
              "properties": {
                "id": {
                  "type": "string"
                },
                "type": {
                  "enum": [
                    "store",
                    "group",
                    "tester"
                  ],
                  "type": "string"
                }
              },
              "required": [
                "id",
                "type"
              ]
            },
            "type": "array"
          },
          "mandatoryUpdate": {
            "type": "boolean"
          },
          "notifyTesters": {
            "default": true,
            "type": "boolean"
          },
          "releaseNotes": {
            "description": "The release notes",
            "type": "string"
          }
        },
        "description": "The distribution details"
      }
    },
    "required": [
      "build_id",
      "owner_name",
      "app_name",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.appcenter.ms/v0.1/apps/{owner_name}/{app_name}/builds/{build_id}/distribute"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**status**: Status of the Request",
            "**upload_id**: A unique ID of the upload"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
