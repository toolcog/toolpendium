{
  "name": "Get_Highlights_by_channel_",
  "description": "Get the editorial highlights of a given channel in TV & iPlayer.",
  "parameters": {
    "type": "object",
    "properties": {
      "channel": {
        "type": "string",
        "description": "The channel identifier to limit results to."
      },
      "lang": {
        "enum": [
          "en",
          "cy",
          "ga",
          "gd",
          "pi"
        ],
        "type": "string",
        "description": "The language for any applicable localised strings."
      },
      "rights": {
        "default": "web",
        "enum": [
          "mobile",
          "tv",
          "web"
        ],
        "type": "string",
        "description": "The rights group to limit results to."
      },
      "availability": {
        "default": "available",
        "enum": [
          "all",
          "available"
        ],
        "type": "string",
        "description": "Whether to return all, or available programmes"
      },
      "live": {
        "type": "boolean",
        "description": "Whether to include live programmes"
      },
      "mixin": {
        "enum": [
          "live",
          "promotions"
        ],
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Request additional data in the output"
      }
    },
    "required": [
      "channel",
      "lang",
      "rights",
      "availability"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ibl.api.bbci.co.uk/ibl/v1/channels/{channel}/highlights{?lang,rights,availability,live,mixin}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
