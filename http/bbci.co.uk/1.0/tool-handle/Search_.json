{
  "name": "Search_",
  "description": "Search",
  "parameters": {
    "type": "object",
    "properties": {
      "q": {
        "type": "string",
        "description": "The term to search for."
      },
      "lang": {
        "enum": [
          "en",
          "cy",
          "ga",
          "gd",
          "pi"
        ],
        "type": "string",
        "description": "The language for any applicable localised strings."
      },
      "rights": {
        "default": "web",
        "enum": [
          "mobile",
          "tv",
          "web"
        ],
        "type": "string",
        "description": "The rights group to limit results to."
      },
      "availability": {
        "default": "available",
        "enum": [
          "all",
          "available"
        ],
        "type": "string",
        "description": "Whether to return all, or available programmes"
      }
    },
    "required": [
      "q",
      "lang",
      "rights",
      "availability"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ibl.api.bbci.co.uk/ibl/v1/search{?q,lang,rights,availability}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
