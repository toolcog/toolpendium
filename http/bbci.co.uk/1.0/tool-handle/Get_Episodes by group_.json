{
  "name": "Get_Episodes_by_group_",
  "description": "Get episodes by group, brand or series",
  "parameters": {
    "type": "object",
    "properties": {
      "pid": {
        "minLength": 8,
        "pattern": "^([0-9,a-d,f-h,j-n,p-t,v-z]){8,}$",
        "type": "string",
        "description": "The programme identifier."
      },
      "rights": {
        "default": "web",
        "enum": [
          "mobile",
          "tv",
          "web"
        ],
        "type": "string",
        "description": "The rights group to limit results to."
      },
      "page": {
        "format": "int64",
        "type": "integer",
        "description": "The page index."
      },
      "per_page": {
        "format": "int64",
        "type": "integer",
        "description": "The number of results to return."
      },
      "initial_child_count": {
        "default": 4,
        "maximum": 4,
        "minimum": 1,
        "type": "integer",
        "description": "The depth to return child entities."
      },
      "sort": {
        "type": "string",
        "description": "The sort order of the results."
      },
      "sort_direction": {
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string",
        "description": "Whether to sort ascending or descending"
      },
      "availability": {
        "default": "available",
        "enum": [
          "all",
          "available"
        ],
        "type": "string",
        "description": "Whether to return all, or available programmes"
      },
      "mixin": {
        "enum": [
          "live",
          "promotions"
        ],
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Request additional data in the output"
      }
    },
    "required": [
      "pid",
      "rights",
      "page",
      "per_page",
      "initial_child_count",
      "sort",
      "sort_direction",
      "availability"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ibl.api.bbci.co.uk/ibl/v1/groups/{pid}/episodes{?rights,page,per_page,initial_child_count,sort,sort_direction,availability,mixin}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
