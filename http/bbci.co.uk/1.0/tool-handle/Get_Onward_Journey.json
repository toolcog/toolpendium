{
  "name": "Get_Onward_Journey",
  "description": "Get Onward Journey (next programme)",
  "parameters": {
    "type": "object",
    "properties": {
      "pid": {
        "minLength": 8,
        "pattern": "^([0-9,a-d,f-h,j-n,p-t,v-z]){8,}$",
        "type": "string",
        "description": "The programme identifier."
      },
      "rights": {
        "default": "web",
        "enum": [
          "mobile",
          "tv",
          "web"
        ],
        "type": "string",
        "description": "The rights group to limit results to."
      },
      "availability": {
        "default": "available",
        "enum": [
          "all",
          "available"
        ],
        "type": "string",
        "description": "Whether to return all, or available programmes"
      }
    },
    "required": [
      "pid",
      "rights",
      "availability"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ibl.api.bbci.co.uk/ibl/v1/episodes/{pid}/next{?rights,availability}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
