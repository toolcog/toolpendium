{
  "name": "Get_Categories_",
  "description": "Get the list of all the categories in TV & iPlayer.",
  "parameters": {
    "type": "object",
    "properties": {
      "lang": {
        "enum": [
          "en",
          "cy",
          "ga",
          "gd",
          "pi"
        ],
        "type": "string",
        "description": "The language for any applicable localised strings."
      }
    },
    "required": [
      "lang"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ibl.api.bbci.co.uk/ibl/v1/categories{?lang}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
