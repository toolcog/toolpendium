{
  "name": "Get_Programmes_AtoZ_search_",
  "description": "Get the Programmes whose title begins with the given initial character.",
  "parameters": {
    "type": "object",
    "properties": {
      "letter": {
        "pattern": "[a-z](0-9)",
        "type": "string",
        "description": "Letter to search by, a to z or the string '0-9'"
      },
      "rights": {
        "default": "web",
        "enum": [
          "mobile",
          "tv",
          "web"
        ],
        "type": "string",
        "description": "The rights group to limit results to."
      },
      "page": {
        "format": "int64",
        "type": "integer",
        "description": "The page index."
      },
      "per_page": {
        "format": "int64",
        "type": "integer",
        "description": "The number of results to return."
      },
      "initial_child_count": {
        "default": 4,
        "maximum": 4,
        "minimum": 1,
        "type": "integer",
        "description": "The depth to return child entities."
      },
      "sort": {
        "enum": [
          "title"
        ],
        "type": "string",
        "description": "The sort order of the results."
      },
      "sort_direction": {
        "enum": [
          "asc",
          "desc"
        ],
        "type": "string",
        "description": "Whether to sort ascending or descending"
      },
      "availability": {
        "default": "available",
        "enum": [
          "all",
          "available"
        ],
        "type": "string",
        "description": "Whether to return all, or available programmes"
      }
    },
    "required": [
      "letter",
      "rights",
      "page",
      "per_page",
      "initial_child_count",
      "sort",
      "sort_direction",
      "availability"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ibl.api.bbci.co.uk/ibl/v1/atoz/{letter}/programmes{?rights,page,per_page,initial_child_count,sort,sort_direction,availability}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
