{
  "name": "Get_Broadcasts_by_channel_",
  "description": "Get broadcasts by channel",
  "parameters": {
    "type": "object",
    "properties": {
      "channel": {
        "type": "string",
        "description": "The channel identifier to limit results to."
      },
      "lang": {
        "enum": [
          "en",
          "cy",
          "ga",
          "gd",
          "pi"
        ],
        "type": "string",
        "description": "The language for any applicable localised strings."
      },
      "rights": {
        "default": "web",
        "enum": [
          "mobile",
          "tv",
          "web"
        ],
        "type": "string",
        "description": "The rights group to limit results to."
      },
      "availability": {
        "default": "available",
        "enum": [
          "all",
          "available"
        ],
        "type": "string",
        "description": "Whether to return all, or available programmes"
      },
      "mixin": {
        "enum": [
          "live",
          "promotions"
        ],
        "items": {
          "type": "string"
        },
        "type": "array",
        "description": "Request additional data in the output"
      },
      "per_page": {
        "format": "int64",
        "type": "integer",
        "description": "The number of results to return."
      },
      "from": {
        "type": "string",
        "description": "Time to return results from, e.g. -3h"
      }
    },
    "required": [
      "channel",
      "lang",
      "rights",
      "availability",
      "per_page"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ibl.api.bbci.co.uk/ibl/v1/channels/{channel}/broadcasts{?lang,rights,availability,mixin,per_page,from}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
