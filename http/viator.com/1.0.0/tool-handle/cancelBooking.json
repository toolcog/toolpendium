      "booking-reference",
      "Accept-Language"
    ],
    "$defs": {
      "CancellationRequest": {
        "properties": {
          "reasonCode": {
            "description": "Machine-interpretable identification code for this cancellation reason, retrieved from [cancellationReasons](#operation/cancellationReasons)",
