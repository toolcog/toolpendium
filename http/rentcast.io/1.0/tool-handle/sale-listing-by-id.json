{
  "name": "sale-listing-by-id",
  "description": "Returns a single sale listing matching the specified id.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "default": "1702-Cherry-Orchard-Dr,-Austin,-TX-78745",
        "type": "string",
        "description": "The id of the property listing to return"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.rentcast.io/v1/listings/sale/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**addressLine1**",
            "**bathrooms** (default: 0)",
            "**bedrooms** (default: 0)",
            "**city**",
            "**county**",
            "**createdDate**",
            "**daysOnMarket** (default: 0)",
            "**formattedAddress**",
            "**id**",
            "**lastSeenDate**",
            "**latitude** (default: 0)",
            "**listedDate**",
            "**longitude** (default: 0)",
            "**lotSize** (default: 0)",
            "**price** (default: 0)",
            "**propertyType**",
            "**removedDate**",
            "**squareFootage** (default: 0)",
            "**state**",
            "**status**",
            "**yearBuilt** (default: 0)",
            "**zipCode**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
