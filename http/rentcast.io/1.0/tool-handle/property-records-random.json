{
  "name": "property-records-random",
  "description": "Returns a list of property records selected at random.",
  "parameters": {
    "type": "object",
    "properties": {
      "limit": {
        "default": 5,
        "format": "int32",
        "type": "integer",
        "description": "The number of records to return, between 1 and 500. Defaults to 50 if not provided"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.rentcast.io/v1/properties/random{?limit}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**addressLine1**",
            "**assessorID**",
            "**bathrooms** (default: 0)",
            "**bedrooms** (default: 0)",
            "**city**",
            "**county**",
            [
              "**features**",
              {
                "$ul": [
                  "**architectureType**",
                  "**cooling** (default: true)",
                  "**coolingType**",
                  "**exteriorType**",
                  "**fireplace** (default: true)",
                  "**fireplaceType**",
                  "**floorCount** (default: 0)",
                  "**garage** (default: true)",
                  "**garageType**",
                  "**heating** (default: true)",
                  "**heatingType**",
                  "**roofType**",
                  "**unitCount** (default: 0)"
                ]
              }
            ],
            "**formattedAddress**",
            "**id**",
            "**lastSaleDate**",
            "**lastSalePrice** (default: 0)",
            "**latitude** (default: 0)",
            "**legalDescription**",
            "**longitude** (default: 0)",
            "**lotSize** (default: 0)",
            [
              "**owner**",
              {
                "$ul": [
                  [
                    "**mailingAddress**",
                    {
                      "$ul": [
                        "**addressLine1**",
                        "**city**",
                        "**id**",
                        "**state**",
                        "**zipCode**"
                      ]
                    }
                  ],
                  "**names**"
                ]
              }
            ],
            "**ownerOccupied** (default: true)",
            [
              "**propertyTaxes**",
              {
                "$ul": [
                  [
                    "**2022**",
                    {
                      "$ul": [
                        "**total** (default: 0)"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**propertyType**",
            "**squareFootage** (default: 0)",
            "**state**",
            "**subdivision**",
            [
              "**taxAssessments**",
              {
                "$ul": [
                  [
                    "**2022**",
                    {
                      "$ul": [
                        "**value** (default: 0)"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**yearBuilt** (default: 0)",
            "**zipCode**",
            "**zoning**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.id"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
