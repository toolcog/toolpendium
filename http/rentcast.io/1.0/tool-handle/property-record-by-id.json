              }
            ],
            "**formattedAddress**",
            "**id**",
            "**lastSaleDate**",
            "**lastSalePrice** (default: 0)",
            "**latitude** (default: 0)",
            "**legalDescription**",
            "**longitude** (default: 0)",
            "**lotSize** (default: 0)",
            [
              "**owner**",
              {
                "$ul": [
                  [
                    "**mailingAddress**",
                    {
                      "$ul": [
                        "**addressLine1**",
                        "**addressLine2**",
                        "**city**",
                        "**id**",
                        "**state**",
                        "**zipCode**"
                      ]
                    }
                  ],
                  "**names**"
                ]
              }
            ],
            "**ownerOccupied** (default: true)",
            [
              "**propertyTaxes**",
              {
                "$ul": [
                  [
                    "**2019**",
                    {
                      "$ul": [
                        "**total** (default: 0)"
                      ]
                    }
                  ],
                  [
                    "**2020**",
                    {
                      "$ul": [
                        "**total** (default: 0)"
                      ]
                    }
                  ],
                  [
                    "**2021**",
                    {
                      "$ul": [
                        "**total** (default: 0)"
                      ]
                    }
                  ],
                  [
                    "**2022**",
                    {
                      "$ul": [
                        "**total** (default: 0)"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**propertyType**",
            "**squareFootage** (default: 0)",
            "**state**",
            "**subdivision**",
            [
              "**taxAssessments**",
              {
                "$ul": [
                  [
                    "**2019**",
                    {
                      "$ul": [
                        "**improvements** (default: 0)",
                        "**land** (default: 0)",
                        "**value** (default: 0)"
                      ]
                    }
                  ],
                  [
                    "**2020**",
                    {
                      "$ul": [
                        "**improvements** (default: 0)",
                        "**land** (default: 0)",
                        "**value** (default: 0)"
                      ]
                    }
                  ],
                  [
                    "**2021**",
                    {
                      "$ul": [
                        "**improvements** (default: 0)",
                        "**land** (default: 0)",
                        "**value** (default: 0)"
                      ]
                    }
