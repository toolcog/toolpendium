{
  "name": "property-record-by-id",
  "description": "Returns a single property record matching the specified id.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "default": "5500-Grand-Lake-Dr,-San-Antonio,-TX-78244",
        "type": "string",
        "description": "The id of the property record to return"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.rentcast.io/v1/properties/{id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**addressLine1**",
            "**assessorID**",
            "**bathrooms** (default: 0)",
            "**bedrooms** (default: 0)",
            "**city**",
            "**county**",
            [
