        "enum": [
          "none",
          "busy",
          "forbidden",
          "unknownFutureValue"
        ],
        "title": "rejectReason",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
