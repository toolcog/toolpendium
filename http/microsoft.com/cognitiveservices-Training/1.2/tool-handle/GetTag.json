{
  "name": "GetTag",
  "description": "Get information about a specific tag",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "uuid",
        "type": "string",
        "description": "The project this tag belongs to"
      },
      "tagId": {
        "format": "uuid",
        "type": "string",
        "description": "The tag id"
      },
      "iterationId": {
        "format": "uuid",
        "type": "string",
        "description": "The iteration to retrieve this tag from. Optional, defaults to current training set"
      },
      "Training-Key": {
        "type": "string"
      }
    },
    "required": [
      "projectId",
      "tagId",
      "Training-Key"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://southcentralus.api.cognitive.microsoft.com/customvision/v1.2/Training/projects/{projectId}/tags/{tagId}{?iterationId}"
    },
    "headers": {
      "Training-Key": {
        "$": "Training-Key"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Represents a Tag",
        "**Key properties:**",
        {
          "$ul": [
            "**Description**: Gets or sets the description of the tag",
            "**Id**: Gets the Tag ID",
            "**ImageCount**: Gets the number of images with this tag",
            "**Name**: Gets or sets the name of the tag"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
