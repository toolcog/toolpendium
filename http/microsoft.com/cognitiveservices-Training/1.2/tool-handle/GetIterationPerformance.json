{
  "name": "GetIterationPerformance",
  "description": "Get detailed performance information about a trained iteration",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "uuid",
        "type": "string",
        "description": "The project id"
      },
      "iterationId": {
        "format": "uuid",
        "type": "string",
        "description": "The id of the trained iteration"
      },
      "threshold": {
        "format": "float",
        "type": "number",
        "description": "The 0 to 1 threshold to determine positive prediction"
      },
      "Training-Key": {
        "type": "string"
      }
    },
    "required": [
      "projectId",
      "iterationId",
      "threshold",
      "Training-Key"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://southcentralus.api.cognitive.microsoft.com/customvision/v1.2/Training/projects/{projectId}/iterations/{iterationId}/performance{?threshold}"
    },
    "headers": {
      "Training-Key": {
        "$": "Training-Key"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Represents the detailed performance data for a trained iteration",
        "**Key properties:**",
        {
          "$ul": [
            "**PerTagPerformance**: Gets the per-tag performance details for this iteration",
            "**Precision**: Gets the precision",
            "**PrecisionStdDeviation**: Gets the standard deviation for the precision",
            "**Recall**: Gets the recall",
            "**RecallStdDeviation**: Gets the standard deviation for the recall"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
