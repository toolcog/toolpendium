{
  "name": "CreateTag",
  "description": "Create a tag for the project",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "uuid",
        "type": "string",
        "description": "The project id"
      },
      "name": {
        "type": "string",
        "description": "The tag name"
      },
      "description": {
        "type": "string",
        "description": "Optional description for the tag"
      },
      "Training-Key": {
        "type": "string"
      }
    },
    "required": [
      "projectId",
      "name",
      "Training-Key"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://southcentralus.api.cognitive.microsoft.com/customvision/v1.2/Training/projects/{projectId}/tags{?name,description}"
    },
    "headers": {
      "Training-Key": {
        "$": "Training-Key"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Represents a Tag",
        "**Key properties:**",
        {
          "$ul": [
            "**Description**: Gets or sets the description of the tag",
            "**Id**: Gets the Tag ID",
            "**ImageCount**: Gets the number of images with this tag",
            "**Name**: Gets or sets the name of the tag"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
