{
  "name": "GetTag",
  "description": "Get information about a specific tag.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "uuid",
        "type": "string",
        "description": "The project this tag belongs to."
      },
      "tagId": {
        "format": "uuid",
        "type": "string",
        "description": "The tag id."
      },
      "iterationId": {
        "format": "uuid",
        "type": "string",
        "description": "The iteration to retrieve this tag from. Optional, defaults to current training set."
      }
    },
    "required": [
      "projectId",
      "tagId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://southcentralus.api.cognitive.microsoft.com/customvision/v3.2/training/projects/{projectId}/tags/{tagId}{?iterationId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Represents a Tag.",
        "**Key properties:**",
        {
          "$ul": [
            "**description**: Gets or sets the description of the tag.",
            "**id**: Gets the Tag ID.",
            "**imageCount**: Gets the number of images with this tag.",
            "**name**: Gets or sets the name of the tag.",
            "**type**: Gets or sets the type of the tag."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: The error code.",
            "**message**: A message explaining the error reported by the service."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
