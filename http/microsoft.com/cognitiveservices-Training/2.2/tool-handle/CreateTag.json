{
  "name": "CreateTag",
  "description": "Create a tag for the project.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "uuid",
        "type": "string",
        "description": "The project id."
      },
      "name": {
        "type": "string",
        "description": "The tag name."
      },
      "description": {
        "type": "string",
        "description": "Optional description for the tag."
      },
      "type": {
        "enum": [
          "Regular",
          "Negative"
        ],
        "type": "string",
        "description": "Optional type for the tag."
      },
      "Training-Key": {
        "type": "string"
      }
    },
    "required": [
      "projectId",
      "name",
      "Training-Key"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://southcentralus.api.cognitive.microsoft.com/customvision/v2.2/Training/projects/{projectId}/tags{?name,description,type}"
    },
    "headers": {
      "Training-Key": {
        "$": "Training-Key"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Represents a Tag.",
        "**Key properties:**",
        {
          "$ul": [
            "**description**: Gets or sets the description of the tag.",
            "**id**: Gets the Tag ID.",
            "**imageCount**: Gets the number of images with this tag.",
            "**name**: Gets or sets the name of the tag.",
            "**type**: Gets or sets the type of the tag."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
