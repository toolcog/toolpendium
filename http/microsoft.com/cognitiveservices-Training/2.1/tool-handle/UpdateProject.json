{
  "name": "UpdateProject",
  "description": "Update a specific project",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "uuid",
        "type": "string",
        "description": "The id of the project to update"
      },
      "Training-Key": {
        "type": "string"
      },
      "body": {
        "$ref": "#/components/schemas/Project",
        "description": "The updated project model"
      }
    },
    "required": [
      "projectId",
      "Training-Key",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "https://southcentralus.api.cognitive.microsoft.com/customvision/v2.1/Training/projects/{projectId}"
    },
    "headers": {
      "Training-Key": {
        "$": "Training-Key"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Represents a project",
        "**Key properties:**",
        {
          "$ul": [
            "**created**: Gets the date this project was created",
            "**description**: Gets or sets the description of the project",
            "**id**: Gets the project id",
            "**lastModified**: Gets the date this project was last modified",
            "**name**: Gets or sets the name of the project",
            [
              "**settings**: Represents settings associated with a project",
              {
                "$ul": [
                  "**classificationType**: Gets or sets the classification type of the project",
                  "**domainId**: Gets or sets the id of the Domain to use with this project"
                ]
              }
            ],
            "**thumbnailUri**: Gets the thumbnail url representing the project"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
