{
  "name": "ClassifyImage",
  "description": "Classify an image and saves the result.",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "format": "uuid",
        "type": "string",
        "description": "The project id."
      },
      "publishedName": {
        "type": "string",
        "description": "Specifies the name of the model to evaluate against."
      },
      "application": {
        "type": "string",
        "description": "Optional. Specifies the name of application using the endpoint."
      },
      "body": {
        "properties": {
          "imageData": {
            "description": "Binary image data. Supported formats are JPEG, GIF, PNG, and BMP. Supports images up to 4MB.",
            "format": "binary",
            "type": "string"
          }
        },
        "required": [
          "imageData"
        ],
        "type": "object"
      }
    },
    "required": [
      "projectId",
      "publishedName",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://southcentralus.api.cognitive.microsoft.com/customvision/v3.0/prediction/{projectId}/classify/iterations/{publishedName}/image{?application}"
    },
    "body": {
      "$": "body",
      "encode": "multipart"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Result of an image prediction request.",
        "**Key properties:**",
        {
          "$ul": [
            "**created**: Date this prediction was created.",
            "**id**: Prediction Id.",
            "**iteration**: Iteration Id.",
            "**predictions**: List of predictions.",
            "**project**: Project Id."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: The error code.",
            "**message**: A message explaining the error reported by the service."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
