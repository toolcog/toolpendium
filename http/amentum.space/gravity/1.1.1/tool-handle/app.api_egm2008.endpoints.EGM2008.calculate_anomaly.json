{
  "name": "app_api_egm2008_endpoints_EGM2008_calculate_anomaly",
  "description": "for a given latitude / longitude.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "latitude": {
        "example": -45,
        "type": "number",
        "description": "Geographic latitude (-90 to 90 deg)."
      },
      "longitude": {
        "example": 45,
        "type": "number",
        "description": "Geographic longitude (-180 to 180 deg)."
      }
    },
    "required": [
      "latitude",
      "longitude"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/egm2008/gravity_anomaly{?latitude,longitude}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**eta**: Eta (arcsec) - easterly component of deflection of vertical.",
              {
                "$ul": [
                  "**units**",
                  "**value**"
                ]
              }
            ],
            [
              "**gravity_anomaly**: Gravity anomaly (mGal)",
              {
                "$ul": [
                  "**units**",
                  "**value**"
                ]
              }
            ],
            [
              "**xi**: Xi (arcsec) - northerly component of deflection of vertical.",
              {
                "$ul": [
                  "**units**",
                  "**value**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
