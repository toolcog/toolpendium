{
  "name": "app_api_wmm_endpoints_WMM_magnetic_field",
  "description": "at specified conditions.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "altitude": {
        "example": 10,
        "type": "number",
        "description": "Geodetic Altitude 0 km to 600 km."
      },
      "latitude": {
        "example": 80,
        "type": "number",
        "description": "Geodetic Latitude. -90 deg (S) to 90 deg (N)."
      },
      "longitude": {
        "example": 100,
        "type": "number",
        "description": "Geodetic Longitude. -180 deg (W) to 180 deg (E)."
      },
      "year": {
        "example": 2020.5,
        "type": "number",
        "description": "Year as a decimal in the range 2015-2025 (2017.5 would be half way through 2017)."
      }
    },
    "required": [
      "altitude",
      "latitude",
      "longitude",
      "year"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "/wmm/magnetic_field{?altitude,latitude,longitude,year}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**declination**: The angle in the horizontal plane between magnetic north and true north. Declination is positive when magnetic north is east of true north.",
              {
                "$ul": [
                  "**units**",
                  "**value**"
                ]
              }
            ],
            [
              "**grid_variation**: Referenced to grid north, referenced to 0 deg meridian of a polar stereographic projection.  Only defined for latitudes greater than 55 degrees and less than -55 degrees (arctic and antarctic).",
              {
                "$ul": [
                  "**units**",
                  "**value**"
                ]
              }
            ],
            [
              "**inclination**: Also known as 'dip', is the angle made between the horizontal plane and the magnetic field vector at some position. Positive inclination corresponds to a downward pointing. ",
              {
                "$ul": [
                  "**units**",
                  "**value**"
                ]
              }
            ],
            [
              "**total_intensity**: Total magnetic field intensity in nano Teslas.",
              {
                "$ul": [
                  "**units**",
                  "**value**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
