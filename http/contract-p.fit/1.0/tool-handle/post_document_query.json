{
  "name": "post_document_query",
  "parameters": {
    "type": "object",
    "properties": {
      "query_type": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/AggregationPipelinePost"
      }
    },
    "required": [
      "query_type",
      "body"
    ],
    "$defs": {
      "AggregationPipelinePost": {
        "properties": {
          "filter": {
            "$ref": "#/$defs/FilterModel"
          },
          "type": {
            "enum": [
              "inbox",
              "get-todo-count",
              "get-todo-escalated-count",
              "get-oldest-todo",
              "get-oldest-escalated-todo",
              "get-finished-me",
              "get-finished-team",
              "next-document",
              "prev-document",
              "get-next-uuid",
              "avg-time"
            ],
            "example": "inbox",
            "type": "string"
          }
        },
        "type": "object"
      },
      "FilterModel": {
        "properties": {
          "_id": {
            "$ref": "#/$defs/Filter_OId_Model_Doc"
          },
          "inbox": {
            "$ref": "#/$defs/Filter_OId_List_Model"
          },
          "timing_fields": {
            "$ref": "#/$defs/Filter_Timings_Field_Model"
          },
          "timings": {
            "$ref": "#/$defs/Filter_Timings_Model"
          }
        },
        "type": "object"
      },
      "Filter_OId_Model_Doc": {
        "properties": {
          "$oid": {
            "description": "Document ID",
            "example": "abcdef123456789abcdef123",
            "maxLength": 24,
            "minLength": 24,
            "pattern": "[A-z0-9]",
            "type": "string"
          }
        },
        "type": "object"
      },
      "Filter_OId_List_Model": {
        "properties": {
          "$in": {
            "items": {
              "$ref": "#/$defs/Filter_OId_Model"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "Filter_OId_Model": {
        "properties": {
          "$oid": {
            "description": "Inbox ID",
            "example": "abcdef123456789abcdef123",
            "maxLength": 24,
            "minLength": 24,
            "pattern": "[A-z0-9]",
            "type": "string"
          }
        },
        "type": "object"
      },
      "Filter_Timings_Field_Model": {
        "properties": {
          "timeFrom": {
            "type": "string"
          },
          "timeTo": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "Filter_Timings_Model": {
        "properties": {
          "done_time": {
            "$ref": "#/$defs/Filter_Time_Model"
          },
          "feedback_time": {
            "$ref": "#/$defs/Filter_Time_Model"
          },
          "receive_time": {
            "$ref": "#/$defs/Filter_Time_Model"
          },
          "review_start_time": {
            "$ref": "#/$defs/Filter_Time_Model"
          },
          "start_time": {
            "$ref": "#/$defs/Filter_Time_Model"
          }
        },
        "type": "object"
      },
      "Filter_Time_Model": {
        "properties": {
          "$gt": {
            "format": "date-time",
            "type": "string"
          },
          "$gte": {
            "format": "date-time",
            "type": "string"
          },
          "$lt": {
            "format": "date-time",
            "type": "string"
          },
          "$lte": {
            "format": "date-time",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/documents/query/{query_type}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
