{
  "name": "post_document_status_data_resource",
  "description": "Update the given document status data with the request user and date.\n\nEach document defines some status:\n- lock\n- escalate\n- reject\n- delete\n- archive\n- submitted\n\nThese fields have 3 attributes:\n- status true / false\n- since: datetime (UTC)\n- by: user ID\n\nBy calling this endpoint you can update the given status data with the request user\n(the one authenticated) and the current datetime.\n**Note** : You cannot pass a user in the request nor a datetime\n\n**Permission required:** review",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Fields": {
        "format": "mask",
        "type": "string",
        "description": "An optional fields mask"
      },
      "document_id": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/StatusDataPost"
      }
    },
    "required": [
      "document_id",
      "body"
    ],
    "$defs": {
      "StatusDataPost": {
        "properties": {
          "escalate": {
            "$ref": "#/$defs/StateModelGet"
          },
          "last_version": {
            "type": "string"
          },
          "lock": {
            "$ref": "#/$defs/StateModelGet"
          },
          "opened_by": {
            "$ref": "#/$defs/StateModelGet"
          },
          "reject": {
            "$ref": "#/$defs/StateModelGet"
          },
          "status_data": {
            "$ref": "#/$defs/StatusDataModel"
          },
          "submitted": {
            "$ref": "#/$defs/StateModelGet"
          },
          "timings": {
            "$ref": "#/$defs/TimingsModelGet"
          }
        },
        "type": "object"
      },
      "StateModelGet": {
        "properties": {
          "by": {
            "example": "abcdef123456789abcdef123",
            "maxLength": 24,
            "minLength": 24,
            "pattern": "[A-z0-9]",
            "type": "string"
          },
          "since": {
            "format": "date-time",
            "type": "string"
          },
          "value": {
            "type": "boolean"
          }
        },
        "type": "object"
      },
      "StatusDataModel": {
        "properties": {
          "archived": {
            "type": "boolean"
          },
          "data": {
            "type": "boolean"
          },
          "escalate": {
            "type": "boolean"
          },
          "feedback": {
            "type": "boolean"
          },
          "lock": {
            "type": "boolean"
          },
          "ready_accepted": {
            "type": "boolean"
          },
          "ready_attempts": {
            "type": "integer"
          },
          "reject": {
            "type": "boolean"
          },
          "reject_accepted": {
            "type": "boolean"
          },
          "reject_attempts": {
            "type": "integer"
          },
          "sampling": {
            "type": "boolean"
          },
          "submit_accepted": {
            "type": "boolean"
          },
          "submit_attempts": {
            "type": "integer"
          },
          "success": {
            "type": "boolean"
          }
        },
        "type": "object"
      },
      "TimingsModelGet": {
        "properties": {
          "done_time": {
            "format": "date-time",
            "type": "string"
          },
          "feedback_time": {
            "format": "date-time",
            "type": "string"
          },
          "processing_period": {
            "type": "number"
          },
          "receive_time": {
            "format": "date-time",
            "type": "string"
          },
          "start_time": {
            "format": "date-time",
            "type": "string"
          },
          "submit_time": {
            "format": "date-time",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/documents/{document_id}/status_data"
    },
    "headers": {
      "X-Fields": {
        "$": "X-Fields"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**escalate**",
              {
                "$ul": [
                  "**by**",
                  "**since**",
                  "**value**"
                ]
              }
            ],
            "**feedback**",
            "**files**",
            "**flag_for_review**",
            "**id**",
            "**inbox**",
            "**last_version**",
            [
              "**lock**",
              {
                "$ul": [
                  "**by**",
                  "**since**",
                  "**value**"
                ]
              }
            ],
            "**meta_information**",
            "**opened_by**",
            "**original_filename**",
            "**page_count**",
            "**prediction**",
            [
              "**reject**",
              {
                "$ul": [
                  "**by**",
                  "**since**",
                  "**value**"
                ]
              }
            ],
            [
              "**status_data**",
              {
                "$ul": [
                  "**archived**",
                  "**data**",
                  "**escalate**",
                  "**feedback**",
                  "**lock**",
                  "**ready_accepted**",
                  "**ready_attempts**",
                  "**reject**",
                  "**reject_accepted**",
                  "**reject_attempts**",
                  "**sampling**",
                  "**submit_accepted**",
                  "**submit_attempts**",
                  "**success**"
                ]
              }
            ],
            [
              "**submitted**",
              {
                "$ul": [
                  "**by**",
                  "**since**",
                  "**value**"
                ]
              }
            ],
            [
              "**timings**",
              {
                "$ul": [
                  "**done_time**",
                  "**feedback_time**",
                  "**processing_period**",
                  "**receive_time**",
                  "**start_time**",
                  "**submit_time**"
                ]
              }
            ],
            "**usage_data**",
            "**versions**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
