{
  "name": "patch_review_settings_atomic_resource",
  "description": "Update the review settings for the given scope (project or inbox)\n\n**Permission required:** edit_review_settings",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Fields": {
        "format": "mask",
        "type": "string",
        "description": "An optional fields mask"
      },
      "body": {
        "$ref": "#/$defs/ReviewSettingsModelPatch"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "ReviewSettingsModelPatch": {
        "properties": {
          "scope": {
            "type": "string"
          },
          "settings": {
            "$ref": "#/$defs/ReviewSettingsModelGet"
          }
        },
        "type": "object"
      },
      "ReviewSettingsModelGet": {
        "properties": {
          "default_zoom": {
            "type": "object"
          },
          "first_toolbar": {
            "type": "object"
          },
          "lock_expiry": {
            "type": "object"
          },
          "review_options": {
            "type": "object"
          },
          "second_toolbar": {
            "type": "object"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/settings/review"
    },
    "headers": {
      "X-Fields": {
        "$": "X-Fields"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**default_zoom**",
            "**first_toolbar**",
            "**lock_expiry**",
            "**review_options**",
            "**second_toolbar**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
