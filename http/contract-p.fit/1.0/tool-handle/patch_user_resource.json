{
  "name": "patch_user_resource",
  "description": "Update the given user with the provided attributes\n\n**Permission required:** edit_users",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Fields": {
        "format": "mask",
        "type": "string",
        "description": "An optional fields mask"
      },
      "user_id": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/UserModelPatch"
      }
    },
    "required": [
      "user_id",
      "body"
    ],
    "$defs": {
      "UserModelPatch": {
        "properties": {
          "roles": {
            "description": "the user roles",
            "items": {
              "$ref": "#/$defs/UserRoleModelPatch"
            },
            "type": "array"
          },
          "username": {
            "description": "the user username",
            "type": "string"
          }
        },
        "type": "object"
      },
      "UserRoleModelPatch": {
        "properties": {
          "inbox": {
            "example": "abcdef123456789abcdef123",
            "maxLength": 24,
            "minLength": 24,
            "pattern": "[A-z0-9]",
            "type": "string"
          },
          "role": {
            "example": "abcdef123456789abcdef123",
            "maxLength": 24,
            "minLength": 24,
            "pattern": "[A-z0-9]",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/users/{user_id}"
    },
    "headers": {
      "X-Fields": {
        "$": "X-Fields"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**active**: Inactive users have to reset their password first",
            "**confirmed_at**",
            "**id**",
            "**roles**: the user roles",
            "**username**: the user username"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
