{
  "name": "get_dashboard_settings_atomic_resource",
  "description": "Get the dashboard settings for the given scope (project or inbox)",
  "parameters": {
    "type": "object",
    "properties": {
      "scope": {
        "type": "string"
      },
      "full": {
        "default": false,
        "type": "boolean"
      },
      "X-Fields": {
        "format": "mask",
        "type": "string",
        "description": "An optional fields mask"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/settings/dashboard{?scope,full}"
    },
    "headers": {
      "X-Fields": {
        "$": "X-Fields"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**autolearning**",
            "**dashboard_timeout**",
            "**default_date_range**",
            "**default_inbox_size**",
            "**default_inbox_sorting**",
            "**flexible_filters**",
            "**navigation_menu**",
            "**process_unreadable**",
            [
              "**sequence_columns_of_inbox**",
              {
                "$ul": [
                  "**columns_headers**",
                  "**inline_headers**"
                ]
              }
            ],
            "**show_digital_annotations**",
            "**show_filters**",
            "**show_inbox_actions**",
            "**studio_format_options**",
            "**upload_options**",
            "**welcome_counters**",
            "**welcome_counters_options**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
