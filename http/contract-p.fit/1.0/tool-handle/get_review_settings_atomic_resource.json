{
  "name": "get_review_settings_atomic_resource",
  "description": "Get the review settings for the given scope (project or inbox)",
  "parameters": {
    "type": "object",
    "properties": {
      "scope": {
        "type": "string"
      },
      "full": {
        "default": false,
        "type": "boolean"
      },
      "X-Fields": {
        "format": "mask",
        "type": "string",
        "description": "An optional fields mask"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/settings/review{?scope,full}"
    },
    "headers": {
      "X-Fields": {
        "$": "X-Fields"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**default_zoom**",
            "**first_toolbar**",
            "**lock_expiry**",
            "**review_options**",
            "**second_toolbar**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
