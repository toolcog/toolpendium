{
  "name": "post_users_resource",
  "description": "Create a new user with the provided attributes and roles\n\n**Permission required:** edit_users",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Fields": {
        "format": "mask",
        "type": "string",
        "description": "An optional fields mask"
      },
      "body": {
        "$ref": "#/$defs/UserModelPost"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "UserModelPost": {
        "properties": {
          "active": {
            "description": "Inactive users have to reset their password first",
            "type": "boolean"
          },
          "password": {
            "description": "the user password",
            "type": "string"
          },
          "roles": {
            "description": "the user roles",
            "items": {
              "$ref": "#/$defs/UserRoleModel"
            },
            "type": "array"
          },
          "username": {
            "description": "the user username",
            "type": "string"
          }
        },
        "required": [
          "active",
          "roles",
          "username"
        ],
        "type": "object"
      },
      "UserRoleModel": {
        "properties": {
          "document_id": {
            "description": "limited to a document",
            "type": "string"
          },
          "inbox": {
            "example": "abcdef123456789abcdef123",
            "maxLength": 24,
            "minLength": 24,
            "pattern": "[A-z0-9]",
            "type": "string"
          },
          "role": {
            "example": "abcdef123456789abcdef123",
            "maxLength": 24,
            "minLength": 24,
            "pattern": "[A-z0-9]",
            "type": "string"
          }
        },
        "required": [
          "role"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/users"
    },
    "headers": {
      "X-Fields": {
        "$": "X-Fields"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**active**: Inactive users have to reset their password first",
            "**confirmed_at**",
            "**id**",
            "**roles**: the user roles",
            "**username**: the user username"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
