{
  "name": "patch_connection_resource",
  "description": "attributes\n\n**Permission required:** edit_integrations",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Fields": {
        "format": "mask",
        "type": "string",
        "description": "An optional fields mask"
      },
      "connection_id": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/ConnectionModelPost"
      }
    },
    "required": [
      "connection_id",
      "body"
    ],
    "$defs": {
      "ConnectionModelPost": {
        "properties": {
          "event": {
            "enum": [
              "document_predict",
              "document_evaluate",
              "document_text",
              "document_split",
              "document_delete"
            ],
            "example": "document_predict",
            "type": "string"
          },
          "integration": {
            "example": "abcdef123456789abcdef123",
            "maxLength": 24,
            "minLength": 24,
            "pattern": "[A-z0-9]",
            "type": "string"
          },
          "routing": {
            "items": {
              "$ref": "#/$defs/RoutingAtom"
            },
            "type": "array"
          },
          "scope": {
            "example": "abcdef123456789abcdef123",
            "maxLength": 24,
            "minLength": 24,
            "pattern": "[A-z0-9]",
            "type": "string"
          },
          "what": {
            "enum": [
              "original",
              "reply_to",
              "ready",
              "submit"
            ],
            "example": "original",
            "type": "string"
          }
        },
        "required": [
          "event",
          "integration",
          "what"
        ],
        "type": "object"
      },
      "RoutingAtom": {
        "properties": {
          "and_conditions": {
            "type": "object"
          },
          "target": {
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/connections/{connection_id}"
    },
    "headers": {
      "X-Fields": {
        "$": "X-Fields"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**event**",
            "**integration**",
            "**routing**",
            "**scope**",
            "**what**",
            "**id**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
