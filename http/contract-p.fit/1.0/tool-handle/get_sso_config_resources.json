{
  "name": "get_sso_config_resources",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Fields": {
        "format": "mask",
        "type": "string",
        "description": "An optional fields mask"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/sso/config"
    },
    "headers": {
      "X-Fields": {
        "$": "X-Fields"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**extra**",
              {
                "$ul": [
                  "**entity_id**: your entity id",
                  "**specification_url**: Federation metadata document"
                ]
              }
            ],
            "**id**",
            "**provider**: usually your company name, only used for visualisation: log in as <provider> employee",
            "**type**: Type of SSO integration, for now only SAML is supported (default: saml)",
            "**url**: SAML-P sign-on endpoint"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
