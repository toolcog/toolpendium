{
  "name": "patch_data_retention_resource",
  "description": "**Permission required:** edit_data_retention_settings",
  "parameters": {
    "type": "object",
    "properties": {
      "X-Fields": {
        "format": "mask",
        "type": "string",
        "description": "An optional fields mask"
      },
      "level": {
        "type": "string"
      },
      "id": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/DataRetentionModelPatch"
      }
    },
    "required": [
      "level",
      "id",
      "body"
    ],
    "$defs": {
      "DataRetentionModelPatch": {
        "properties": {
          "settings": {
            "items": {
              "$ref": "#/$defs/DataRetentionAtomModel"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "DataRetentionAtomModel": {
        "properties": {
          "age": {
            "default": -1,
            "example": 30,
            "type": "integer"
          },
          "how": {
            "default": "FULL",
            "enum": [
              "FULL",
              "SOURCE_FILES"
            ],
            "example": "FULL",
            "type": "string"
          },
          "what": {
            "default": "ALL",
            "enum": [
              "ALL",
              "DONE"
            ],
            "example": "ALL",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/data_retention_settings/{level}/{id}"
    },
    "headers": {
      "X-Fields": {
        "$": "X-Fields"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**scope**",
              {
                "$ul": [
                  "**id**",
                  "**level**"
                ]
              }
            ],
            "**settings**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
