{
  "name": "patch_project_resource",
  "description": "Update the project attributes with the provided arguments\n\n\n**Deprecated**: default_format\n\n**Permission required:** edit_format_settings",
  "parameters": {
    "type": "object",
    "properties": {
      "project_id": {
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/ProjectModelPatch"
      }
    },
    "required": [
      "project_id",
      "body"
    ],
    "$defs": {
      "ProjectModelPatch": {
        "properties": {
          "default_document_type": {
            "description": "This format is chosen as fallback",
            "type": "string"
          },
          "default_format": {
            "description": "This format is chosen as fallback",
            "type": "string"
          },
          "formats": {
            "items": {
              "description": "format IDs",
              "type": "string"
            },
            "minItems": 1,
            "type": "array"
          },
          "name": {
            "type": "string"
          },
          "split_into_sections": {
            "type": "boolean"
          },
          "sub_page_splitting": {
            "type": "boolean"
          },
          "timeout": {
            "example": 10,
            "type": "integer"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "//cfportal.contract-p.fit/api/projects/{project_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
