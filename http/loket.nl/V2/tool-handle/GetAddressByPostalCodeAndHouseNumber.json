            ],
            "**messages**",
            [
              "**content**",
              {
                "$ul": [
                  "**city**: City of the address",
                  [
                    "**coordinates**",
                    {
                      "$ul": [
                        "**latitude**: Lattitude of the location",
                        "**longitude**: Longitude of the location"
                      ]
                    }
                  ],
                  "**houseNumber**: House number of the address",
                  "**postalCode**: The postal code of the address",
                  [
                    "**province**: A Dutch province",
                    {
                      "$ul": [
                        "**key**: The key for the province. Posible values can be aquired via the metadata endpoint",
                        "**value**: The name of the province. Only the Dutch provices are supported and not translated"
