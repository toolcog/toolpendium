{
  "name": "getSourceAccountsV2",
  "description": "List source accounts.",
  "parameters": {
    "type": "object",
    "properties": {
      "physicalAccountName": {
        "type": "string",
        "description": "Physical Account Name"
      },
      "physicalAccountId": {
        "format": "uuid",
        "type": "string",
        "description": "The physical account ID"
      },
      "payorId": {
        "format": "uuid",
        "type": "string",
        "description": "The account owner Payor ID"
      },
      "fundingAccountId": {
        "format": "uuid",
        "type": "string",
        "description": "The funding account ID"
      },
      "page": {
        "default": 1,
        "format": "int32",
        "type": "integer",
        "description": "Page number. Default is 1."
      },
      "pageSize": {
        "default": 25,
        "format": "int32",
        "maximum": 100,
        "minimum": 1,
        "type": "integer",
        "description": "The number of results to return in a page"
      },
      "sort": {
        "default": "fundingRef:asc",
        "pattern": "[fundingRef|name|balance]+[:desc|:asc]",
        "type": "string",
        "description": "List of sort fields e.g. ?sort=name:asc\nDefault is name:asc\nThe supported sort fields are - fundingRef, name, balance\n"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.sandbox.velopayments.com//v2/sourceAccounts{?physicalAccountName,physicalAccountId,payorId,fundingAccountId,page,pageSize,sort}"
    }
  },
