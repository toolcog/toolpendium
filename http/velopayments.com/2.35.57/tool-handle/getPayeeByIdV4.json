{
  "name": "getPayeeByIdV4",
  "description": "Get Payee by Id",
  "parameters": {
    "type": "object",
    "properties": {
      "payeeId": {
        "example": "2aa5d7e0-2ecb-403f-8494-1865ed0454e9",
        "format": "uuid",
        "type": "string",
        "description": "The UUID of the payee."
      },
      "sensitive": {
        "type": "boolean",
        "description": "Optional. If omitted or set to false, any Personal Identifiable Information (PII) values are returned masked.\nIf set to true, and you have permission, the PII values will be returned as their original unmasked values.\n"
      }
    },
    "required": [
      "payeeId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.sandbox.velopayments.com//v4/payees/{payeeId}{?sensitive}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**acceptTermsAndConditionsTimestamp**: The timestamp when the payee last accepted T&Cs",
            [
              "**address**",
              {
                "$ul": [
                  "**city**",
                  "**country**",
                  "**countyOrProvince**",
                  "**line1**",
                  "**line2**",
                  "**line3**",
                  "**line4**",
                  "**zipOrPostcode**"
                ]
              }
            ],
            "**cellphoneNumber**",
            [
              "**challenge**: <p>Used to override the default challenge presented to the payee when they onboard</p>",
              {
                "$ul": [
                  "**description**",
                  "**value**: The value that the user will be asked to verify when they onboard"
                ]
              }
            ],
            [
              "**company**",
              {
                "$ul": [
                  "**name**",
                  "**operatingName**",
                  "**taxId**: Company Tax Id must be between 6 and 30 characters long"
                ]
              }
            ],
            "**country**",
            "**created**",
            "**disabled**",
            "**disabledComment**",
            "**disabledUpdatedTimestamp**",
            "**displayName**",
            "**email**",
            "**enhancedKycCompleted**",
            "**gracePeriodEndDate**",
            [
              "**individual**",
              {
                "$ul": [
                  "**dateOfBirth**: If not authorized to view, value will be masked. Example: - XXXX-XX-XX",
                  [
                    "**name**",
                    {
                      "$ul": [
                        "**firstName**",
                        "**lastName**",
                        "**otherNames**",
                        "**title**"
                      ]
                    }
                  ],
                  "**nationalIdentification**: If not authorized to view, value will be masked. Example: XXXXX1234"
                ]
              }
            ],
            "**kycCompletedTimestamp**",
            "**language**: An IETF BCP 47 language code which has been configured for use within this Velo environment.<BR>",
            "**marketingOptInDecision**",
            "**marketingOptInTimestamp**",
            "**onboardedStatus**: Payee onboarded status. One of the following values: CREATED, INVITED, REGISTERED, ONBOARDED",
            "**pausePayment**",
            "**pausePaymentTimestamp**",
            "**payeeId**",
            "**payeeType**: Type of Payee. One of the following values: Individual, Company",
            "**payorRefs**",
            "**watchlistOverrideComment**",
            "**watchlistOverrideExpiresAtTimestamp**",
            "**watchlistStatus**: Current watchlist status. One of the following values: NONE, PENDING, REVIEW, PASSED, FAILED",
            "**watchlistStatusUpdatedTimestamp**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
