{
  "name": "GET_templates",
  "description": "**This endpoint allows you to retrieve all transactional templates.**",
  "parameters": {
    "type": "object",
    "properties": {
      "generations": {
        "default": "legacy",
        "enum": [
          "legacy",
          "dynamic",
          "legacy,dynamic"
        ],
        "type": "string",
        "description": "Comma-delimited list specifying which generations of templates to return. Options are `legacy`, `dynamic` or `legacy,dynamic`."
      },
      "page_size": {
        "maximum": 200,
        "minimum": 1,
        "type": "number",
        "description": "The number of templates to be returned in each page of results"
      },
      "page_token": {
        "type": "string",
        "description": "A token corresponding to a specific page of results, as provided by metadata"
      },
      "on-behalf-of": {
        "default": "The subuser's username. This header generates the API call as if the subuser account was making the call.",
        "type": "string"
      }
    },
    "required": [
      "page_size"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://api.sendgrid.com/v3/templates{?generations,page_size,page_token}"
    },
    "headers": {
      "on-behalf-of": {
        "$": "on-behalf-of"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**_metadata**",
              {
                "$ul": [
                  "**count**",
                  "**next**",
                  "**prev**",
                  "**self**"
                ]
              }
            ],
            "**result**: "
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
