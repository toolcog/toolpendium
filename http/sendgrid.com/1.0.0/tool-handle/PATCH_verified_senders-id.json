        "example": {
          "address": "1234 Fake St",
          "address2": "PO Box 1234",
          "city": "San Francisco",
          "country": "USA",
          "from_email": "orders@example.com",
          "from_name": "Example Orders",
          "nickname": "Orders",
          "reply_to": "orders@example.com",
          "reply_to_name": "Example Orders",
          "state": "CA",
          "zip": "94105"
        },
        "properties": {
          "address": {
            "maxLength": 100,
            "type": "string"
          },
          "address2": {
            "maxLength": 100,
            "type": "string"
          },
          "city": {
            "maxLength": 150,
            "type": "string"
          },
          "country": {
            "maxLength": 100,
            "type": "string"
          },
          "from_email": {
            "format": "email",
            "maxLength": 256,
            "type": "string"
          },
          "from_name": {
            "maxLength": 256,
            "type": "string"
          },
          "nickname": {
            "maxLength": 100,
            "type": "string"
          },
          "reply_to": {
            "format": "email",
            "maxLength": 256,
            "type": "string"
          },
          "reply_to_name": {
            "maxLength": 256,
            "type": "string"
          },
          "state": {
            "maxLength": 2,
            "type": "string"
          },
          "zip": {
            "maxLength": 10,
            "type": "string"
          }
        },
        "required": [
          "nickname",
          "from_email",
          "reply_to"
        ],
        "title": "Verified Sender Request Schema",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "http://api.sendgrid.com/v3/verified_senders/{id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
