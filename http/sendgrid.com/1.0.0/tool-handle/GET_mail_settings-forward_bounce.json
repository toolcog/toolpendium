      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Mail Settings: Forward Bounce"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**email**: The email address that you would like your bounce reports forwarded to.",
            "**enabled**: Indicates if the bounce forwarding mail setting is enabled."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
