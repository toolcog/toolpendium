{
  "name": "POST_sso-teammates",
  "description": "**This endpoint allows you to create an SSO Teammate.**\n\nThe email provided for this user will also function as the Teammate’s username.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/sso-teammate-request"
      }
    },
    "$defs": {
      "sso-teammate-request": {
        "allOf": [
          {
            "$ref": "#/$defs/sso-teammate-common-fields"
          },
          {
            "properties": {
              "scopes": {
                "description": "The permission scopes assigned to the Teammate.",
                "items": {
                  "type": "string"
                },
                "type": "array"
              }
            },
            "required": [
              "scopes"
            ],
            "type": "object"
          }
        ],
        "title": "Single Sign-On Teammate Request"
      },
      "sso-teammate-common-fields": {
        "properties": {
          "email": {
            "description": "The Teammate’s email address. This email address will also function as the Teammate’s username and must match the address assigned to the user in your IdP. This address cannot be changed after the Teammate is created.",
            "format": "email",
            "type": "string"
          },
          "first_name": {
            "description": "The Teammate’s first name.",
            "type": "string"
          },
          "is_admin": {
            "description": "Indicates if the Teammate has admin permissions.",
            "type": "boolean"
          },
          "is_read_only": {
            "description": "Indicates if the Teammate has read_only permissions.",
            "type": "boolean"
          },
          "last_name": {
            "description": "The Teammate’s last name.",
            "type": "string"
          }
        },
        "required": [
          "first_name",
          "last_name",
          "email"
        ],
        "title": "Single Sing-On Teammate Common Fields",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://api.sendgrid.com/v3/sso/teammates"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Single Sing-On Teammate Common Fields"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**email**: The Teammate’s email address. This email address will also function as the Teammate’s username and must match the address assigned to the user in your IdP. This address cannot be changed after the Teammate is created.",
            "**first_name**: The Teammate’s first name.",
            "**is_admin**: Indicates if the Teammate has admin permissions.",
            "**is_read_only**: Indicates if the Teammate has read_only permissions.",
            "**last_name**: The Teammate’s last name.",
            "**is_sso**: Indicates if the Teammate authenticates with SendGrid using SSO or with a username and password.",
            "**username**: This should be set to the Teammate's email address."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
