    "type": "object",
    "properties": {
      "on-behalf-of": {
        "default": "The subuser's username. This header generates the API call as if the subuser account was making the call.",
        "type": "string"
      },
      "batch_id": {
        "type": "string"
      },
      "body": {
        "example": {
          "status": "pause"
        },
        "properties": {
          "status": {
            "description": "The status you would like the scheduled send to have.",
            "enum": [
              "cancel",
              "pause"
            ],
            "type": "string"
          }
        },
        "required": [
          "status"
        ],
        "type": "object"
      }
    },
    "required": [
      "batch_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PATCH",
    "url": {
      "$uri": "http://api.sendgrid.com/v3/user/scheduled_sends/{batch_id}"
    },
