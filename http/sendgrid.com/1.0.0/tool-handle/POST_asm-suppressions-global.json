{
  "name": "POST_asm-suppressions-global",
  "description": "**This endpoint allows you to add one or more email addresses to the global suppressions group.**",
  "parameters": {
    "type": "object",
    "properties": {
      "on-behalf-of": {
        "default": "The subuser's username. This header generates the API call as if the subuser account was making the call.",
        "type": "string"
      },
      "body": {
        "$ref": "#/$defs/suppressions-request"
      }
    },
    "$defs": {
      "suppressions-request": {
        "example": {
          "recipient_emails": [
            "test1@example.com",
            "test2@example.com"
          ]
        },
        "properties": {
          "recipient_emails": {
            "description": "The array of email addresses to add or find.",
            "items": {
              "format": "email",
              "type": "string"
            },
            "type": "array"
          }
        },
        "required": [
          "recipient_emails"
        ],
        "title": "Suppressions Request Body",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://api.sendgrid.com/v3/asm/suppressions/global"
    },
    "headers": {
      "on-behalf-of": {
        "$": "on-behalf-of"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "201": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**recipient_emails**: The email addresses that are globally suppressed"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
