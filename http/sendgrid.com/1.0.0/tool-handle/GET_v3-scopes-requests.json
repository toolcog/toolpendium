{
  "name": "GET_v3-scopes-requests",
  "description": "**This endpoint allows you to retrieve a list of all recent access requests.**\n\nThe Response Header's `link` parameter will include pagination info.",
  "parameters": {
    "type": "object",
    "properties": {
      "limit": {
        "default": 50,
        "type": "integer",
        "description": "Optional field to limit the number of results returned."
      },
      "offset": {
        "default": 0,
        "type": "integer",
        "description": "Optional beginning point in the list to retrieve from."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://api.sendgrid.com/v3/scopes/requests{?limit,offset}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**email**: Teammate's email",
            "**first_name**: Teammate's first name",
            "**id**: Request ID",
            "**last_name**: Teammate's last name",
            "**scope_group_name**: Name of group of scopes associated to page teammate is requesting access to",
            "**username**: Teammate's username"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
