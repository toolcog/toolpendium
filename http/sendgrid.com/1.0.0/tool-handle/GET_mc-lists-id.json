{
  "name": "GET_mc-lists-id",
  "description": "**This endpoint returns data about a specific list.**\n\nSetting the optional parameter `contact_sample=true` returns the `contact_sample` in the response body. Up to fifty of the most recent contacts uploaded or attached to a list will be returned, sorted alphabetically, by email address.\n\nThe full contact count is also returned.",
  "parameters": {
    "type": "object",
    "properties": {
      "contact_sample": {
        "default": false,
        "type": "boolean",
        "description": "Setting this parameter to the true  will cause the contact_sample to be returned"
      },
      "id": {
        "type": "string"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://api.sendgrid.com/v3/marketing/lists/{id}{?contact_sample}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "list"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**_metadata**",
              {
                "$ul": [
                  "**self**: A link to this object."
                ]
              }
            ],
            "**contact_count**: The number of contacts currently stored on the list.",
            "**id**: The generated ID for your list.",
            "**name**: The name you gave your list.",
            [
              "**contact_sample**",
              {
                "$ul": [
                  [
                    "**_metadata**",
                    {
                      "$ul": [
                        "**self**: A link to this object."
                      ]
                    }
                  ],
                  "**address_line_1**",
                  "**address_line_2**",
                  "**alternate_emails**",
                  "**city**",
                  "**country**",
                  "**created_at**",
                  "**custom_fields**",
                  "**email**",
                  "**facebook**",
                  "**first_name**",
                  "**id**",
                  "**last_name**",
                  "**line**",
                  "**list_ids**",
                  "**phone_number**",
                  "**postal_code**",
                  "**segment_ids**",
                  "**state_province_region**",
                  "**unique_name**",
                  "**updated_at**",
                  "**whatsapp**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "error list"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**error_id**",
            "**field**",
            "**message**",
            "**parameter**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
