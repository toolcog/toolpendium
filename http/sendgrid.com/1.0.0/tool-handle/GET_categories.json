{
  "name": "GET_categories",
  "description": "**This endpoint allows you to retrieve a list of all of your categories.**",
  "parameters": {
    "type": "object",
    "properties": {
      "limit": {
        "default": 50,
        "type": "integer",
        "description": "The number of categories to display per page."
      },
      "category": {
        "type": "string",
        "description": "Allows you to perform a prefix search on this particular category."
      },
      "offset": {
        "default": 0,
        "type": "integer",
        "description": "The point in the list that you would like to begin displaying results."
      },
      "on-behalf-of": {
        "default": "The subuser's username. This header generates the API call as if the subuser account was making the call.",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://api.sendgrid.com/v3/categories{?limit,category,offset}"
    },
    "headers": {
      "on-behalf-of": {
        "$": "on-behalf-of"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**category**: A category used to group emails by broad topic."
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**errors**: The error returned."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
