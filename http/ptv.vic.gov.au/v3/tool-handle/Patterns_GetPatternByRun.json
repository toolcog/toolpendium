{
  "name": "Patterns_GetPatternByRun",
  "description": "View the stopping pattern for a specific trip/service run",
  "parameters": {
    "type": "object",
    "properties": {
      "run_ref": {
        "type": "string",
        "description": "The run_ref is the identifier of a run as returned by the departures/* and runs/* endpoints. WARNING, run_id is deprecated. Use run_ref instead."
      },
      "route_type": {
        "enum": [
          0,
          1,
          2,
          3,
          4
        ],
        "format": "int32",
        "type": "integer",
        "description": "Number identifying transport mode; values returned via RouteTypes API"
      },
      "expand": {
        "items": {
          "enum": [
            "All",
            "Stop",
            "Route",
            "Run",
            "Direction",
            "Disruption",
            "VehicleDescriptor",
            "VehiclePosition",
            "None"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "List of objects to be returned in full (i.e. expanded) - options include: All, Stop, Route, Run, Direction, Disruption, VehiclePosition, VehicleDescriptor and None. Default is Disruption. Run must be expanded to receive VehiclePosition and VehicleDescriptor information."
      },
      "stop_id": {
        "format": "int32",
        "type": "integer",
        "description": "Filter by stop_id; values returned by Stops API"
      },
      "date_utc": {
        "format": "date-time",
        "type": "string",
        "description": "Filter by the date and time of the request (ISO 8601 UTC format)"
      },
      "include_skipped_stops": {
        "type": "boolean",
        "description": "Include any skipped stops in a stopping pattern. Defaults to false."
      },
      "include_geopath": {
        "type": "boolean",
        "description": "Indicates if geopath data will be returned (default = false)"
      },
      "token": {
        "type": "string",
        "description": "Please ignore"
      },
      "devid": {
        "type": "string",
        "description": "Your developer id"
      },
      "signature": {
        "type": "string",
        "description": "Authentication signature for request"
      }
    },
    "required": [
      "run_ref",
      "route_type",
      "expand"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://timetableapi.ptv.vic.gov.au/v3/pattern/run/{run_ref}/route_type/{route_type}{?expand,stop_id,date_utc,include_skipped_stops,include_geopath,token,devid,signature}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**departures**: Timetabled and real-time service departures",
            "**directions**: Directions of travel of route",
            "**disruptions**: Disruption information applicable to relevant routes or stops",
            "**routes**: Train lines, tram routes, bus routes, regional coach routes, Night Bus routes",
            "**runs**: Individual trips/services of a route",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ],
            "**stops**: A train station, tram stop, bus stop, regional coach stop or Night Bus stop"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An error response",
        "**Key properties:**",
        {
          "$ul": [
            "**message**: Error message",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An error response",
        "**Key properties:**",
        {
          "$ul": [
            "**message**: Error message",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
