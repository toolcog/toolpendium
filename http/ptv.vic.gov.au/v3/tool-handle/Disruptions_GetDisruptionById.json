{
  "name": "Disruptions_GetDisruptionById",
  "description": "View a specific disruption",
  "parameters": {
    "type": "object",
    "properties": {
      "disruption_id": {
        "format": "int64",
        "type": "integer",
        "description": "Identifier of disruption; values returned by Disruptions API - /v3/disruptions OR /v3/disruptions/route/{route_id}"
      },
      "token": {
        "type": "string",
        "description": "Please ignore"
      },
      "devid": {
        "type": "string",
        "description": "Your developer id"
      },
      "signature": {
        "type": "string",
        "description": "Authentication signature for request"
      }
    },
    "required": [
      "disruption_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://timetableapi.ptv.vic.gov.au/v3/disruptions/{disruption_id}{?token,devid,signature}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**disruption**",
              {
                "$ul": [
                  "**colour**",
                  "**description**: Description of the disruption",
                  "**display_on_board**",
                  "**display_status**",
                  "**disruption_id**: Disruption information identifier",
                  "**disruption_status**: Status of the disruption (e.g. \"Planned\", \"Current\")",
                  "**disruption_type**: Type of disruption",
                  "**from_date**: Date and time at which disruption begins, in ISO 8601 UTC format",
                  "**last_updated**: Date and time disruption information was last updated by PTV, in ISO 8601 UTC format",
                  "**published_on**: Date and time disruption information is published on PTV website, in ISO 8601 UTC format",
                  "**routes**: Route relevant to a disruption (if applicable)",
                  "**stops**: Stop relevant to a disruption (if applicable)",
                  "**title**: Headline title summarising disruption information",
                  "**to_date**: Date and time at which disruption ends, in ISO 8601 UTC format (returns null if unknown)",
                  "**url**: URL of relevant article on PTV website"
                ]
              }
            ],
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An error response",
        "**Key properties:**",
        {
          "$ul": [
            "**message**: Error message",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An error response",
        "**Key properties:**",
        {
          "$ul": [
            "**message**: Error message",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
