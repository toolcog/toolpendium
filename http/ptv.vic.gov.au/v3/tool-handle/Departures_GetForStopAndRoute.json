{
  "name": "Departures_GetForStopAndRoute",
  "description": "View departures for a specific route from a stop",
  "parameters": {
    "type": "object",
    "properties": {
      "route_type": {
        "enum": [
          0,
          1,
          2,
          3,
          4
        ],
        "format": "int32",
        "type": "integer",
        "description": "Number identifying transport mode; values returned via RouteTypes API"
      },
      "stop_id": {
        "format": "int32",
        "type": "integer",
        "description": "Identifier of stop; values returned by Stops API"
      },
      "route_id": {
        "type": "string",
        "description": "Identifier of route; values returned by Routes API - v3/routes"
      },
      "direction_id": {
        "format": "int32",
        "type": "integer",
        "description": "Filter by identifier of direction of travel; values returned by Directions API - /v3/directions/route/{route_id}"
      },
      "gtfs": {
        "type": "boolean",
        "description": "Indicates that stop_id parameter will accept \"GTFS stop_id\" data"
      },
      "date_utc": {
        "format": "date-time",
        "type": "string",
        "description": "Filter by the date and time of the request (ISO 8601 UTC format) (default = current date and time)"
      },
      "max_results": {
        "format": "int32",
        "type": "integer",
        "description": "Maximum number of results returned"
      },
      "include_cancelled": {
        "type": "boolean",
        "description": "Indicates if cancelled services (if they exist) are returned (default = false) - metropolitan train only"
      },
      "look_backwards": {
        "type": "boolean",
        "description": "Indicates if filtering runs (and their departures) to those that arrive at destination before date_utc (default = false). Requires max_results &gt; 0."
      },
      "expand": {
        "items": {
          "enum": [
            "All",
            "Stop",
            "Route",
            "Run",
            "Direction",
            "Disruption",
            "VehicleDescriptor",
            "VehiclePosition",
            "None"
          ],
          "type": "string"
        },
        "type": "array",
        "description": "List of objects to be returned in full (i.e. expanded) - options include: All, Stop, Route, Run, Direction, Disruption, VehiclePosition, VehicleDescriptor or None.\r\n            Run must be expanded to receive VehiclePosition and VehicleDescriptor information."
      },
      "include_geopath": {
        "type": "boolean",
        "description": "Indicates if the route geopath should be returned"
      },
      "token": {
        "type": "string",
        "description": "Please ignore"
      },
      "devid": {
        "type": "string",
        "description": "Your developer id"
      },
      "signature": {
        "type": "string",
        "description": "Authentication signature for request"
      }
    },
    "required": [
      "route_type",
      "stop_id",
      "route_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://timetableapi.ptv.vic.gov.au/v3/departures/route_type/{route_type}/stop/{stop_id}/route/{route_id}{?direction_id,gtfs,date_utc,max_results,include_cancelled,look_backwards,expand,include_geopath,token,devid,signature}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**departures**: Timetabled and real-time service departures",
            "**directions**: Directions of travel of route",
            "**disruptions**: Disruption information applicable to relevant routes or stops",
            "**routes**: Train lines, tram routes, bus routes, regional coach routes, Night Bus routes",
            "**runs**: Individual trips/services of a route",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ],
            "**stops**: A train station, tram stop, bus stop, regional coach stop or Night Bus stop"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An error response",
        "**Key properties:**",
        {
          "$ul": [
            "**message**: Error message",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An error response",
        "**Key properties:**",
        {
          "$ul": [
            "**message**: Error message",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
