{
  "name": "Stops_StopsByGeolocation",
  "description": "View all stops near a specific location",
  "parameters": {
    "type": "object",
    "properties": {
      "latitude": {
        "format": "float",
        "type": "number",
        "description": "Geographic coordinate of latitude"
      },
      "longitude": {
        "format": "float",
        "type": "number",
        "description": "Geographic coordinate of longitude"
      },
      "route_types": {
        "items": {
          "enum": [
            0,
            1,
            2,
            3,
            4
          ],
          "format": "int32",
          "type": "integer"
        },
        "type": "array",
        "description": "Filter by route_type; values returned via RouteTypes API"
      },
      "max_results": {
        "format": "int32",
        "type": "integer",
        "description": "Maximum number of results returned (default = 30)"
      },
      "max_distance": {
        "format": "double",
        "type": "number",
        "description": "Filter by maximum distance (in metres) from location specified via latitude and longitude parameters (default = 300)"
      },
      "stop_disruptions": {
        "type": "boolean",
        "description": "Indicates if stop disruption information will be returned (default = false)"
      },
      "token": {
        "type": "string",
        "description": "Please ignore"
      },
      "devid": {
        "type": "string",
        "description": "Your developer id"
      },
      "signature": {
        "type": "string",
        "description": "Authentication signature for request"
      }
    },
    "required": [
      "latitude",
      "longitude"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://timetableapi.ptv.vic.gov.au/v3/stops/location/{latitude},{longitude}{?route_types,max_results,max_distance,stop_disruptions,token,devid,signature}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**disruptions**: Disruption information applicable to relevant routes or stops",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ],
            "**stops**: Train stations, tram stops, bus stops, regional coach stops or Night Bus stops"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "400": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An error response",
        "**Key properties:**",
        {
          "$ul": [
            "**message**: Error message",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "403": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "An error response",
        "**Key properties:**",
        {
          "$ul": [
            "**message**: Error message",
            [
              "**status**",
              {
                "$ul": [
                  "**health**: API system health status (0=offline, 1=online)",
                  "**version**: API Version number"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
