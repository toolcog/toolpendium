{
  "name": "getRelatedWords",
  "description": "Given a word as a string, returns relationships from the Word Graph",
  "parameters": {
    "type": "object",
    "properties": {
      "word": {
        "type": "string",
        "description": "Word to fetch relationships for"
      },
      "useCanonical": {
        "default": "false",
        "enum": [
          "false",
          "true"
        ],
        "type": "string",
        "description": "If true will try to return the correct word root ('cats' -> 'cat'). If false returns exactly what was requested."
      },
      "relationshipTypes": {
        "enum": [
          "synonym",
          "antonym",
          "variant",
          "equivalent",
          "cross-reference",
          "related-word",
          "rhyme",
          "form",
          "etymologically-related-term",
          "hypernym",
          "hyponym",
          "inflected-form",
          "primary",
          "same-context",
          "verb-form",
          "verb-stem",
          "has_topic"
        ],
        "type": "string",
        "description": "Limits the total results per type of relationship type"
      },
      "limitPerRelationshipType": {
        "default": 10,
        "format": "int32",
        "type": "integer",
        "description": "Restrict to the supplied relationship types"
      }
    },
    "required": [
      "word"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.wordnik.com/v4/word.json/{word}/relatedWords{?useCanonical,relationshipTypes,limitPerRelationshipType}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**gram**",
            "**label1**",
            "**label2**",
            "**label3**",
            "**label4**",
            "**relationshipType**",
            "**words**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
