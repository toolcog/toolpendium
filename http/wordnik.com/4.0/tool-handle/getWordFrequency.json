{
  "name": "getWordFrequency",
  "description": "Returns word usage over time",
  "parameters": {
    "type": "object",
    "properties": {
      "word": {
        "type": "string",
        "description": "Word to return"
      },
      "useCanonical": {
        "default": "false",
        "enum": [
          "false",
          "true"
        ],
        "type": "string",
        "description": "If true will try to return the correct word root ('cats' -> 'cat'). If false returns exactly what was requested."
      },
      "startYear": {
        "default": 1800,
        "format": "int32",
        "type": "integer",
        "description": "Starting Year"
      },
      "endYear": {
        "default": 2012,
        "format": "int32",
        "type": "integer",
        "description": "Ending Year"
      }
    },
    "required": [
      "word"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.wordnik.com/v4/word.json/{word}/frequency{?useCanonical,startYear,endYear}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**frequency**",
            "**frequencyString**",
            "**totalCount**",
            "**unknownYearCount**",
            "**word**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
