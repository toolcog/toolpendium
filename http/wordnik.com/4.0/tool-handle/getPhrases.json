{
  "name": "getPhrases",
  "description": "Fetches bi-gram phrases for a word",
  "parameters": {
    "type": "object",
    "properties": {
      "word": {
        "type": "string",
        "description": "Word to fetch phrases for"
      },
      "limit": {
        "default": 5,
        "format": "int32",
        "type": "integer",
        "description": "Maximum number of results to return"
      },
      "wlmi": {
        "default": 0,
        "format": "int32",
        "type": "integer",
        "description": "Minimum WLMI for the phrase"
      },
      "useCanonical": {
        "default": "false",
        "enum": [
          "false",
          "true"
        ],
        "type": "string",
        "description": "If true will try to return the correct word root ('cats' -> 'cat'). If false returns exactly what was requested."
      }
    },
    "required": [
      "word"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.wordnik.com/v4/word.json/{word}/phrases{?limit,wlmi,useCanonical}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**count**",
            "**gram1**",
            "**gram2**",
            "**mi**",
            "**wlmi**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
