{
  "name": "getHyphenation",
  "description": "Returns syllable information for a word",
  "parameters": {
    "type": "object",
    "properties": {
      "word": {
        "type": "string",
        "description": "Word to get syllables for"
      },
      "useCanonical": {
        "default": "false",
        "enum": [
          "false",
          "true"
        ],
        "type": "string",
        "description": "If true will try to return a correct word root ('cats' -> 'cat'). If false returns exactly what was requested."
      },
      "sourceDictionary": {
        "enum": [
          "ahd-5",
          "century",
          "wiktionary",
          "webster",
          "wordnet"
        ],
        "type": "string",
        "description": "Get from a single dictionary. Valid options: ahd-5, century, wiktionary, webster, and wordnet."
      },
      "limit": {
        "default": 50,
        "format": "int32",
        "type": "integer",
        "description": "Maximum number of results to return"
      }
    },
    "required": [
      "word"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.wordnik.com/v4/word.json/{word}/hyphenation{?useCanonical,sourceDictionary,limit}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**seq**",
            "**text**",
            "**type**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
