{
  "name": "getTopExample",
  "description": "Returns a top example for a word",
  "parameters": {
    "type": "object",
    "properties": {
      "word": {
        "type": "string",
        "description": "Word to fetch examples for"
      },
      "useCanonical": {
        "default": "false",
        "enum": [
          "false",
          "true"
        ],
        "type": "string",
        "description": "If true will try to return the correct word root ('cats' -> 'cat'). If false returns exactly what was requested."
      }
    },
    "required": [
      "word"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.wordnik.com/v4/word.json/{word}/topExample{?useCanonical}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**documentId**",
            "**exampleId**",
            "**id**",
            [
              "**provider**",
              {
                "$ul": [
                  "**id**",
                  "**name**"
                ]
              }
            ],
            "**rating**",
            [
              "**score**",
              {
                "$ul": [
                  "**baseWordScore**",
                  "**docTermCount**",
                  "**id**",
                  "**lemma**",
                  "**partOfSpeech**",
                  "**position**",
                  "**score**",
                  "**sentenceId**",
                  "**stopword**",
                  "**word**",
                  "**wordType**"
                ]
              }
            ],
            [
              "**sentence**",
              {
                "$ul": [
                  "**display**",
                  "**documentMetadataId**",
                  "**hasScoredWords**",
                  "**id**",
                  "**rating**",
                  "**scoredWords**"
                ]
              }
            ],
            "**text**",
            "**title**",
            "**url**",
            "**word**",
            "**year**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
