{
  "name": "getWordOfTheDay",
  "description": "Returns a specific WordOfTheDay",
  "parameters": {
    "type": "object",
    "properties": {
      "date": {
        "type": "string",
        "description": "Fetches by date in yyyy-MM-dd"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.wordnik.com/v4/words.json/wordOfTheDay{?date}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**category**",
            [
              "**contentProvider**",
              {
                "$ul": [
                  "**id**",
                  "**name**"
                ]
              }
            ],
            "**createdAt**",
            "**createdBy**",
            "**definitions**",
            "**examples**",
            "**htmlExtra**",
            "**id**",
            "**note**",
            "**parentId**",
            "**publishDate**",
            "**word**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
