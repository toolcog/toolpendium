{
  "name": "Get_comments",
  "description": "#### &#128275; OAuth Optional &#128196; Pagination &#10024; Extended Info\n\nReturns the most recently written comments for the user. You can optionally filter by the `comment_type` and media `type` to limit what gets returned.\n\nBy default, only top level comments are returned. Set `?include_replies=true` to return replies in addition to top level comments. Set `?include_replies=only` to return only replies and no top level comments.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "User slug"
      },
      "comment_type": {
        "enum": [
          "all",
          "reviews",
          "shouts"
        ],
        "type": "string",
        "description": ""
      },
      "type": {
        "enum": [
          "all",
          "movies",
          "shows",
          "seasons",
          "episodes",
          "lists"
        ],
        "type": "string",
        "description": ""
      },
      "include_replies": {
        "enum": [
          "true",
          "false",
          "only"
        ],
        "type": "string",
        "description": "include comment replies"
      },
      "trakt-api-version": {
        "type": "string",
        "description": "e.g. 2"
      },
      "trakt-api-key": {
        "type": "string",
        "description": "e.g. [client_id]"
      }
    },
    "required": [
      "id",
      "comment_type",
      "type"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.trakt.tv/users/{id}/comments/{comment_type}/{type}{?include_replies}"
    },
    "headers": {
      "trakt-api-version": {
        "$": "trakt-api-version"
      },
      "trakt-api-key": {
        "$": "trakt-api-key"
      }
    }
  },
  "responses": {}
}
