                "ids": {
                  "properties": {
                    "imdb": {
                      "type": "string"
                    },
                    "slug": {
                      "type": "string"
                    },
                    "tmdb": {
                      "type": "number"
                    },
                    "trakt": {
                      "type": "number"
                    }
                  },
                  "type": "object"
