{
  "name": "Get_all_episode_comments",
  "description": "#### &#128196; Pagination &#128513; Emojis\n\nReturns all top level comments for an episode. By default, the `newest` comments are returned first. Other sorting options include `oldest`, most `likes`, most `replies`, `highest` rated, `lowest` rated, and most `plays`.",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Trakt ID, Trakt slug, or IMDB ID"
      },
      "season": {
        "type": "integer",
        "description": "season number"
      },
      "episode": {
        "type": "integer",
        "description": "episode number"
      },
      "sort": {
        "enum": [
          "newest",
          "oldest",
          "likes",
          "replies",
          "highest",
          "lowest",
          "plays"
        ],
        "type": "string",
        "description": "how to sort"
      },
      "trakt-api-version": {
        "type": "string",
        "description": "e.g. 2"
      },
      "trakt-api-key": {
        "type": "string",
        "description": "e.g. [client_id]"
      }
    },
    "required": [
      "id",
      "season",
      "episode",
      "sort"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.trakt.tv/shows/{id}/seasons/{season}/episodes/{episode}/comments/{sort}"
    },
    "headers": {
      "trakt-api-version": {
        "$": "trakt-api-version"
      },
      "trakt-api-key": {
        "$": "trakt-api-key"
      }
    }
  },
  "responses": {}
}
