{
  "name": "Get_trending_comments",
  "description": "#### &#128196; Pagination &#10024; Extended Info &#128513; Emojis\n\nReturns all comments with the most likes and replies over the last 7 days. You can optionally filter by the `comment_type` and media `type` to limit what gets returned. If you want to `include_replies` that will return replies in place alongside top level comments.",
  "parameters": {
    "type": "object",
    "properties": {
      "comment_type": {
        "enum": [
          "all",
          "reviews",
          "shouts"
        ],
        "type": "string",
        "description": ""
      },
      "type": {
        "enum": [
          "all",
          "movies",
          "shows",
          "seasons",
          "episodes",
          "lists"
        ],
        "type": "string",
        "description": ""
      },
      "include_replies": {
        "type": "string",
        "description": "include comment replies"
      },
      "trakt-api-version": {
        "type": "string",
        "description": "e.g. 2"
      },
      "trakt-api-key": {
        "type": "string",
        "description": "e.g. [client_id]"
      }
    },
    "required": [
      "comment_type",
      "type"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.trakt.tv/comments/trending/{comment_type}/{type}{?include_replies}"
    },
    "headers": {
      "trakt-api-version": {
        "$": "trakt-api-version"
      },
      "trakt-api-key": {
        "$": "trakt-api-key"
      }
    }
  },
  "responses": {}
}
