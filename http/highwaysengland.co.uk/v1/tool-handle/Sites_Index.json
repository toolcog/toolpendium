{
  "name": "Sites_Index",
  "description": "Get a list of sites",
  "parameters": {
    "type": "object",
    "properties": {
      "version": {
        "type": "string"
      }
    },
    "required": [
      "version"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://webtris.highwaysengland.co.uk/api/v{version}/sites"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**row_count**",
            "**sites**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
