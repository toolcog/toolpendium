{
  "name": "SiteTypes_GetSitesForPublicFacingAPI",
  "description": "Returns the layer metadata for the LayerId specified.",
  "parameters": {
    "type": "object",
    "properties": {
      "siteType_Id": {
        "format": "int32",
        "type": "integer",
        "description": "1 = MIDAS, 2 = TAME, 3 = TMU, 4 = TRADS Legacy"
      },
      "version": {
        "type": "string"
      }
    },
    "required": [
      "siteType_Id",
      "version"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://webtris.highwaysengland.co.uk/api/v{version}/sitetypes/{siteType_Id}/sites"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**Sites**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
