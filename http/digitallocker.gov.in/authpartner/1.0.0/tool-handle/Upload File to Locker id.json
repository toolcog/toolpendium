      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**details**",
              {
                "$ul": [
                  "**Path**: The destination path of the file in DigiLocker including filename.",
                  "**size**: Size of file."
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
