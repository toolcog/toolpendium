{
  "name": "getGroupTopicByID",
  "description": "Get information about a group discussion topic",
  "parameters": {
    "type": "object",
    "properties": {
      "api_key": {
        "type": "string"
      },
      "group_id": {
        "pattern": "^([0-9]+@N[0-9]+)|([0-9a-zA-Z-_]+)$",
        "type": "string"
      },
      "topic_id": {
        "pattern": "^[0-9]+$",
        "type": "string"
      }
    },
    "required": [
      "api_key",
      "topic_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.flickr.com/services/rest?method=flickr.groups.discuss.topics.getInfo{&api_key,group_id,topic_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**stat**",
            [
              "**topic**",
              {
                "$ul": [
                  "**author**",
                  "**author_is_deleted**",
                  "**author_path_alias**",
                  "**authorname**",
                  "**can_delete**",
                  "**can_edit**",
                  "**can_reply**",
                  "**count_replies**",
                  "**datecreate**",
                  "**datelastpost**",
                  "**iconfarm**",
                  "**iconserver**",
                  "**id**",
                  "**is_locked**",
                  "**is_pro**",
                  "**is_sticky**",
                  "**last_reply**",
                  "**lastedit**",
                  [
                    "**message**",
                    {
                      "$ul": [
                        "**_content**"
                      ]
                    }
                  ],
                  "**role**",
                  "**subject**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
