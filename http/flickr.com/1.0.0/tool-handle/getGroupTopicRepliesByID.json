{
  "name": "getGroupTopicRepliesByID",
  "description": "Get information on a group topic reply",
  "parameters": {
    "type": "object",
    "properties": {
      "api_key": {
        "type": "string"
      },
      "group_id": {
        "pattern": "^([0-9]+@N[0-9]+)|([0-9a-zA-Z-_]+)$",
        "type": "string"
      },
      "topic_id": {
        "pattern": "^[0-9]+$",
        "type": "string"
      },
      "reply_id": {
        "pattern": "^[0-9]+$",
        "type": "string"
      }
    },
    "required": [
      "api_key",
      "topic_id",
      "reply_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.flickr.com/services/rest?method=flickr.groups.discuss.replies.getInfo{&api_key,group_id,topic_id,reply_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**reply**",
              {
                "$ul": [
                  "**author**",
                  "**author_is_deleted**",
                  "**author_path_alias**",
                  "**authorname**",
                  "**can_delete**",
                  "**can_edit**",
                  "**datecreate**",
                  "**iconfarm**",
                  "**iconserver**",
                  "**id**",
                  "**is_pro**",
                  "**lastedit**",
                  [
                    "**message**",
                    {
                      "$ul": [
                        "**_content**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**stat**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
