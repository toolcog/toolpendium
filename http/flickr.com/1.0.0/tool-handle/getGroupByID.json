{
  "name": "getGroupByID",
  "description": "Get information about a group",
  "parameters": {
    "type": "object",
    "properties": {
      "api_key": {
        "type": "string"
      },
      "group_id": {
        "pattern": "^([0-9]+@N[0-9]+)|([0-9a-zA-Z-_]+)$",
        "type": "string"
      },
      "group_path_alias": {
        "type": "string"
      },
      "lang": {
        "type": "string"
      }
    },
    "required": [
      "api_key"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.flickr.com/services/rest?method=flickr.groups.getInfo{&api_key,group_id,group_path_alias,lang}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**group**",
              {
                "$ul": [
                  [
                    "**blast**",
                    {
                      "$ul": [
                        "**_content**",
                        "**date_blast_added**",
                        "**user_id**"
                      ]
                    }
                  ],
                  [
                    "**cover**",
                    {
                      "$ul": [
                        "**farm**",
                        "**id**",
                        "**isfamily**",
                        "**isfriend**",
                        "**ispublic**",
                        "**owner**",
                        "**secret**",
                        "**server**",
                        "**title**",
                        "**y**"
                      ]
                    }
                  ],
                  "**coverphoto_farm**",
                  "**coverphoto_server**",
                  [
                    "**coverphoto_url**",
                    {
                      "$ul": [
                        "**h**",
                        "**l**",
                        "**s**",
                        "**t**"
                      ]
                    }
                  ],
                  [
                    "**description**",
                    {
                      "$ul": [
                        "**_content**"
                      ]
                    }
                  ],
                  "**iconfarm**",
                  "**iconserver**",
                  "**id**",
                  "**is_admin**",
                  "**is_member**",
                  "**is_moderator**",
                  "**ispoolmoderated**",
                  "**lang**",
                  [
                    "**members**",
                    {
                      "$ul": [
                        "**_content**"
                      ]
                    }
                  ],
                  [
                    "**name**",
                    {
                      "$ul": [
                        "**_content**"
                      ]
                    }
                  ],
                  "**path_alias**",
                  [
                    "**pool_count**",
                    {
                      "$ul": [
                        "**_content**"
                      ]
                    }
                  ],
                  "**pool_rows**",
                  [
                    "**privacy**",
                    {
                      "$ul": [
                        "**_content**"
                      ]
                    }
                  ],
                  [
                    "**restrictions**",
                    {
                      "$ul": [
                        "**art_ok**",
                        "**has_geo**",
                        "**images_ok**",
                        "**moderate_ok**",
                        "**photos_ok**",
                        "**restricted_ok**",
                        "**safe_ok**",
                        "**screens_ok**",
                        "**videos_ok**"
                      ]
                    }
                  ],
                  [
                    "**roles**",
                    {
                      "$ul": [
                        "**admin**",
                        "**member**",
                        "**moderator**"
                      ]
                    }
                  ],
                  [
                    "**rules**",
                    {
                      "$ul": [
                        "**_content**"
                      ]
                    }
                  ],
                  [
                    "**throttle**",
                    {
                      "$ul": [
                        "**count**",
                        "**mode**",
                        "**remaining**"
                      ]
                    }
                  ],
                  [
                    "**topic_count**",
                    {
                      "$ul": [
                        "**_content**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**stat**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
