{
  "name": "getStatesUsingGET",
  "description": "Get a list of states as per LGD.",
  "parameters": {
    "type": "object",
    "properties": {
      "Accept-Language": {
        "default": "en-US",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://healthidsbx.ndhm.gov.in/api/v1/ha/lgd/states"
    },
    "headers": {
      "Accept-Language": {
        "$": "Accept-Language"
      }
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "StatesDTO list"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**districts**",
            "**name**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": {
                "$": "$.item.name"
              }
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
