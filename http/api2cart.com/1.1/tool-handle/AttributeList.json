{
  "name": "AttributeList",
  "description": "Get attributes list",
  "parameters": {
    "type": "object",
    "properties": {
      "start": {
        "default": 0,
        "type": "integer",
        "description": "This parameter sets the number from which you want to get entities"
      },
      "count": {
        "default": 10,
        "type": "integer",
        "description": "This parameter sets the entity amount that has to be retrieved. Max allowed count=250"
      },
      "type": {
        "type": "string",
        "description": "Defines attribute's type"
      },
      "attribute_ids": {
        "type": "string",
        "description": "Filter attributes by ids"
      },
      "store_id": {
        "type": "string",
        "description": "Store Id"
      },
      "lang_id": {
        "type": "string",
        "description": "Retrieves attributes on specified language id"
      },
      "params": {
        "default": "id,name,code,type",
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to retrieve"
      },
      "exclude": {
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to ignore. Works only if parameter `params` equal force_all"
      },
      "response_fields": {
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to retrieve"
      },
      "visible": {
        "type": "boolean",
        "description": "Filter items by visibility status"
      },
      "required": {
        "type": "boolean",
        "description": "Defines if the option is required"
      },
      "system": {
        "type": "boolean",
        "description": "True if attribute is system"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/attribute.list.json{?start,count,type,attribute_ids,store_id,lang_id,params,exclude,response_fields,visible,required,system}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**additional_fields**",
            "**custom_fields**",
            [
              "**pagination**",
              {
                "$ul": [
                  "**additional_fields**",
                  "**custom_fields**",
                  "**next**",
                  "**previous**"
                ]
              }
            ],
            [
              "**result**",
              {
                "$ul": [
                  "**additional_fields**",
                  "**attribute**",
                  "**attributes_count**",
                  "**custom_fields**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
