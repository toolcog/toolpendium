{
  "name": "BasketItemAdd",
  "description": "Add item to basket",
  "parameters": {
    "type": "object",
    "properties": {
      "customer_id": {
        "type": "string",
        "description": "Retrieves orders specified by customer id"
      },
      "product_id": {
        "type": "string",
        "description": "Defines id of the product which should be added to the basket"
      },
      "variant_id": {
        "type": "string",
        "description": "Defines product's variants specified by variant id"
      },
      "quantity": {
        "default": 0,
        "type": "number",
        "description": "Defines new items quantity"
      },
      "store_id": {
        "type": "string",
        "description": "Store Id"
      }
    },
    "required": [
      "customer_id",
      "product_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/basket.item.add.json{?customer_id,product_id,variant_id,quantity,store_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**added**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
