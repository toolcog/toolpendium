{
  "name": "TaxClassInfo",
  "description": "Get info about tax",
  "parameters": {
    "type": "object",
    "properties": {
      "tax_class_id": {
        "type": "string",
        "description": "Retrieves taxes specified by class id"
      },
      "store_id": {
        "type": "string",
        "description": "Store Id"
      },
      "lang_id": {
        "type": "string",
        "description": "Language id"
      },
      "params": {
        "default": "tax_class_id,name,avail",
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to retrieve"
      },
      "response_fields": {
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to retrieve"
      },
      "exclude": {
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to ignore. Works only if parameter `params` equal force_all"
      }
    },
    "required": [
      "tax_class_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/tax.class.info.json{?tax_class_id,store_id,lang_id,params,response_fields,exclude}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**additional_fields**",
                  "**avail**",
                  "**custom_fields**",
                  "**id**",
                  "**name**",
                  "**tax**",
                  "**tax_rates**",
                  "**tax_type**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
