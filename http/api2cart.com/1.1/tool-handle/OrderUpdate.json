{
  "name": "OrderUpdate",
  "description": "Update existing order.",
  "parameters": {
    "type": "object",
    "properties": {
      "order_id": {
        "type": "string",
        "description": "Defines the orders specified by order id"
      },
      "store_id": {
        "type": "string",
        "description": "Defines store id where the order should be found"
      },
      "order_status": {
        "type": "string",
        "description": "Defines new order's status"
      },
      "comment": {
        "type": "string",
        "description": "Specifies order comment"
      },
      "admin_comment": {
        "type": "string",
        "description": "Specifies admin's order comment"
      },
      "admin_private_comment": {
        "type": "string",
        "description": "Specifies private admin's order comment"
      },
      "date_modified": {
        "type": "string",
        "description": "Specifies order's  modification date"
      },
      "date_finished": {
        "type": "string",
        "description": "Specifies order's  finished date"
      },
      "financial_status": {
        "type": "string",
        "description": "Update order financial status to specified"
      },
      "fulfillment_status": {
        "type": "string",
        "description": "Create order with fulfillment status"
      },
      "order_payment_method": {
        "type": "string",
        "description": "Defines order payment method.<br/>Setting order_payment_method on Shopify will also change financial_status field value to 'paid'"
      },
      "send_notifications": {
        "default": false,
        "type": "boolean",
        "description": "Send notifications to customer after order was created"
      }
    },
    "required": [
      "order_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/order.update.json{?order_id,store_id,order_status,comment,admin_comment,admin_private_comment,date_modified,date_finished,financial_status,fulfillment_status,order_payment_method,send_notifications}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**updated_items**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
