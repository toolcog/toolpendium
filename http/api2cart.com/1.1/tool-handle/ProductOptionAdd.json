{
  "name": "ProductOptionAdd",
  "description": "Add product option from store.",
  "parameters": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Defines option's name"
      },
      "type": {
        "enum": [
          "option_type_select",
          "option_type_text",
          "option_type_radio",
          "option_type_checkbox",
          "option_type_textarea",
          "option_type_readonly",
          "option_type_multiselect",
          "option_type_multicheckbox",
          "option_type_file",
          "option_type_date",
          "option_type_datetime",
          "option_type_time"
        ],
        "type": "string",
        "description": "Defines option's type that has to be added"
      },
      "product_id": {
        "type": "string",
        "description": "Defines product id where the option should be added"
      },
      "default_option_value": {
        "type": "string",
        "description": "Defines default option value that has to be added"
      },
      "option_values": {
        "type": "string",
        "description": "Defines option values that has to be added"
      },
      "description": {
        "type": "string",
        "description": "Defines option's description"
      },
      "avail": {
        "default": true,
        "type": "boolean",
        "description": "Defines whether the option is available"
      },
      "sort_order": {
        "default": 0,
        "type": "integer",
        "description": "Sort number in the list"
      },
      "required": {
        "default": false,
        "type": "boolean",
        "description": "Defines if the option is required"
      },
      "clear_cache": {
        "default": true,
        "type": "boolean",
        "description": "Is cache clear required"
      }
    },
    "required": [
      "name",
      "type"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/product.option.add.json{?name,type,product_id,default_option_value,option_values,description,avail,sort_order,required,clear_cache}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**option_id**",
                  "**product_option_id**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
