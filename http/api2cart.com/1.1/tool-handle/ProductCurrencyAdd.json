{
  "name": "ProductCurrencyAdd",
  "description": "Add currency and/or set default in store",
  "parameters": {
    "type": "object",
    "properties": {
      "iso3": {
        "type": "string",
        "description": "Specifies standardized currency code"
      },
      "rate": {
        "type": "number",
        "description": "Defines the numerical identifier against to the major currency"
      },
      "name": {
        "type": "string",
        "description": "Defines currency's name"
      },
      "avail": {
        "default": true,
        "type": "boolean",
        "description": "Specifies whether the currency is available"
      },
      "symbol_left": {
        "type": "string",
        "description": "Defines the symbol that is located before the currency"
      },
      "symbol_right": {
        "type": "string",
        "description": "Defines the symbol that is located after the currency"
      },
      "default": {
        "default": false,
        "type": "boolean",
        "description": "Specifies currency's default meaning"
      }
    },
    "required": [
      "iso3",
      "rate"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/product.currency.add.json{?iso3,rate,name,avail,symbol_left,symbol_right,default}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**currency_id**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
