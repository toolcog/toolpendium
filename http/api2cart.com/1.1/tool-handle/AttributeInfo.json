{
  "name": "AttributeInfo",
  "description": "Get attribute info",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Entity id"
      },
      "store_id": {
        "type": "string",
        "description": "Store Id"
      },
      "lang_id": {
        "type": "string",
        "description": "Language id"
      },
      "params": {
        "default": "force_all",
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to retrieve"
      },
      "exclude": {
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to ignore. Works only if parameter `params` equal force_all"
      },
      "response_fields": {
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to retrieve"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/attribute.info.json{?id,store_id,lang_id,params,exclude,response_fields}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**additional_fields**",
                  "**code**",
                  "**custom_fields**",
                  "**default_values**",
                  "**id**",
                  "**lang_id**",
                  "**name**",
                  "**position**",
                  "**required**",
                  "**store_id**",
                  "**system**",
                  "**type**",
                  "**values**",
                  "**visible**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
