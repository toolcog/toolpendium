{
  "name": "CartGiftcardAdd",
  "description": "Create new gift card",
  "parameters": {
    "type": "object",
    "properties": {
      "amount": {
        "type": "number",
        "description": "Defines the gift card amount value."
      },
      "code": {
        "type": "string",
        "description": "Gift card code"
      },
      "owner_email": {
        "type": "string",
        "description": "Gift card owner email"
      },
      "recipient_email": {
        "type": "string",
        "description": "Gift card recipient email"
      }
    },
    "required": [
      "amount"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/cart.giftcard.add.json{?amount,code,owner_email,recipient_email}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**code**",
                  "**id**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
