{
  "name": "AttributeCount",
  "description": "Get attributes count",
  "parameters": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "description": "Defines attribute's type"
      },
      "store_id": {
        "type": "string",
        "description": "Store Id"
      },
      "lang_id": {
        "type": "string",
        "description": "Language id"
      },
      "visible": {
        "type": "boolean",
        "description": "Filter items by visibility status"
      },
      "required": {
        "type": "boolean",
        "description": "Defines if the option is required"
      },
      "system": {
        "type": "boolean",
        "description": "True if attribute is system"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/attribute.count.json{?type,store_id,lang_id,visible,required,system}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**attributes_count**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
