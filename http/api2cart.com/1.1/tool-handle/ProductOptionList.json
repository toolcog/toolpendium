{
  "name": "ProductOptionList",
  "description": "Get list of options.",
  "parameters": {
    "type": "object",
    "properties": {
      "start": {
        "default": 0,
        "type": "integer",
        "description": "This parameter sets the number from which you want to get entities"
      },
      "count": {
        "default": 10,
        "type": "integer",
        "description": "This parameter sets the entity amount that has to be retrieved. Max allowed count=250"
      },
      "params": {
        "default": "id,name,description",
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to retrieve"
      },
      "exclude": {
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to ignore. Works only if parameter `params` equal force_all"
      },
      "response_fields": {
        "type": "string",
        "description": "Set this parameter in order to choose which entity fields you want to retrieve"
      },
      "product_id": {
        "type": "string",
        "description": "Retrieves products' options specified by product id"
      },
      "lang_id": {
        "type": "string",
        "description": "Language id"
      },
      "store_id": {
        "type": "string",
        "description": "Store Id"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/product.option.list.json{?start,count,params,exclude,response_fields,product_id,lang_id,store_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**option**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
