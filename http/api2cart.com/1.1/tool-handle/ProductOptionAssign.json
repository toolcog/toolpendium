{
  "name": "ProductOptionAssign",
  "description": "Assign option from product.",
  "parameters": {
    "type": "object",
    "properties": {
      "product_id": {
        "type": "string",
        "description": "Defines product id where the option should be assigned"
      },
      "option_id": {
        "type": "string",
        "description": "Defines option id which has to be assigned"
      },
      "required": {
        "default": false,
        "type": "boolean",
        "description": "Defines if the option is required"
      },
      "sort_order": {
        "default": 0,
        "type": "integer",
        "description": "Sort number in the list"
      },
      "option_values": {
        "type": "string",
        "description": "Defines option values that has to be assigned"
      },
      "clear_cache": {
        "default": true,
        "type": "boolean",
        "description": "Is cache clear required"
      }
    },
    "required": [
      "product_id",
      "option_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/product.option.assign.json{?product_id,option_id,required,sort_order,option_values,clear_cache}"
    }
  },
  "responses": {
