{
  "name": "AttributeAdd",
  "description": "Add new attribute",
  "parameters": {
    "type": "object",
    "properties": {
      "type": {
        "enum": [
          "text",
          "select",
          "textarea",
          "date",
          "price",
          "multiselect",
          "boolean"
        ],
        "type": "string",
        "description": "Defines attribute's type"
      },
      "code": {
        "type": "string",
        "description": "Entity code"
      },
      "name": {
        "type": "string",
        "description": "Defines attributes's name"
      },
      "store_id": {
        "type": "string",
        "description": "Store Id"
      },
      "lang_id": {
        "type": "string",
        "description": "Language id"
      },
      "visible": {
        "default": false,
        "type": "boolean",
        "description": "Set visibility status"
      },
      "required": {
        "default": false,
        "type": "boolean",
        "description": "Defines if the option is required"
      },
      "position": {
        "default": 0,
        "type": "integer",
        "description": "Attribute`s position"
      },
      "attribute_group_id": {
        "type": "string",
        "description": "Filter by attribute_group_id"
      },
      "is_global": {
        "default": "Store",
        "type": "string",
        "description": "Attribute saving scope"
      },
      "is_searchable": {
        "default": false,
        "type": "boolean",
        "description": "Use attribute in Quick Search"
      },
      "is_filterable": {
        "default": "No",
        "type": "string",
        "description": "Use In Layered Navigation"
      },
      "is_comparable": {
        "default": false,
        "type": "boolean",
        "description": "Comparable on Front-end"
      },
      "is_html_allowed_on_front": {
        "default": false,
        "type": "boolean",
        "description": "Allow HTML Tags on Frontend"
      },
      "is_filterable_in_search": {
        "default": false,
        "type": "boolean",
        "description": "Use In Search Results Layered Navigation"
      },
      "is_configurable": {
        "default": false,
        "type": "boolean",
        "description": "Use To Create Configurable Product"
      },
      "is_visible_in_advanced_search": {
        "default": false,
        "type": "boolean",
        "description": "Use in Advanced Search"
      },
      "is_used_for_promo_rules": {
        "default": false,
        "type": "boolean",
        "description": "Use for Promo Rule Conditions"
      },
      "used_in_product_listing": {
        "default": false,
        "type": "boolean",
        "description": "Used in Product Listing"
      },
      "used_for_sort_by": {
        "default": false,
        "type": "boolean",
        "description": "Used for Sorting in Product Listing"
      },
      "apply_to": {
        "default": "all_types",
        "type": "string",
        "description": "Types of products which can have this attribute"
      }
    },
    "required": [
      "type",
      "name"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.api2cart.com/v1.1/attribute.add.json{?type,code,name,store_id,lang_id,visible,required,position,attribute_group_id,is_global,is_searchable,is_filterable,is_comparable,is_html_allowed_on_front,is_filterable_in_search,is_configurable,is_visible_in_advanced_search,is_used_for_promo_rules,used_in_product_listing,used_for_sort_by,apply_to}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**id**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
