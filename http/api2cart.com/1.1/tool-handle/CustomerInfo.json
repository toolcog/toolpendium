                  "**news_letter_subscription**",
                  "**orders_count**",
                  "**phone**",
                  "**status**",
                  "**stores_ids**",
                  "**website**"
                ]
              }
            ],
            "**return_code**",
            "**return_message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
