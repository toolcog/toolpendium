        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**result**",
              {
                "$ul": [
                  "**additional_fields**",
                  "**address_book**",
                  [
                    "**birth_day**",
                    {
                      "$ul": [
                        "**additional_fields**",
                        "**custom_fields**",
                        "**format**",
                        "**value**"
                      ]
                    }
                  ],
                  "**company**",
                  [
                    "**created_time**",
                    {
                      "$ul": [
                        "**additional_fields**",
                        "**custom_fields**",
                        "**format**",
                        "**value**"
                      ]
                    }
                  ],
                  "**custom_fields**",
                  "**email**",
                  "**fax**",
                  "**first_name**",
                  "**gender**",
                  "**group**",
                  "**id**",
                  "**ip_address**",
                  "**lang_id**",
                  [
                    "**last_login**",
                    {
                      "$ul": [
                        "**additional_fields**",
