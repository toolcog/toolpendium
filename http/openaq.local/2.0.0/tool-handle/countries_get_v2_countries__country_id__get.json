{
  "name": "countries_get_v2_countries__country_id__get",
  "description": "Countries Get",
  "parameters": {
    "type": "object",
    "properties": {
      "country_id": {
        "maxLength": 2,
        "minLength": 2,
        "pattern": "[a-zA-Z][a-zA-Z]",
        "title": "Country Id",
        "type": "string"
      },
      "limit": {
        "default": 200,
        "title": "Limit",
        "type": "integer"
      },
      "page": {
        "default": 1,
        "description": "Paginate through results.",
        "exclusiveMinimum": true,
        "maximum": 6000,
        "minimum": 0,
        "title": "Page",
        "type": "integer"
      },
      "offset": {
        "default": 0,
        "maximum": 10000,
        "minimum": 0,
        "title": "Offset",
        "type": "integer"
      },
      "sort": {
        "allOf": [
          {
            "$ref": "#/$defs/Sort"
          }
        ],
        "default": "asc",
        "description": "Define sort order."
      },
      "country": {
        "description": "\n        Limit results by a certain country using two letter country code.\n        (ex. ?country=US or ?country=US&country=MX)\n        ",
        "items": {
          "maxLength": 2,
          "minLength": 2,
          "pattern": "[a-zA-Z][a-zA-Z]",
          "type": "string"
        },
        "title": "Country",
        "type": "array"
      },
      "order_by": {
        "allOf": [
          {
            "$ref": "#/$defs/CountriesOrder"
          }
        ],
        "default": "country"
      }
    },
    "required": [
      "country_id"
    ],
    "$defs": {
      "Sort": {
        "description": "An enumeration.",
        "enum": [
          "asc",
          "desc"
        ],
        "title": "Sort",
        "type": "string"
      },
      "CountriesOrder": {
        "description": "An enumeration.",
        "enum": [
          "country",
          "firstUpdated",
          "lastUpdated",
          "locations",
          "count"
        ],
        "title": "CountriesOrder",
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://openaq.local/v2/countries/{country_id}{?limit,page,offset,sort,country,order_by}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "OpenAQCountriesResult"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**meta**",
              {
                "$ul": [
                  "**found** (default: 0)",
                  "**license** (default: CC BY 4.0d)",
                  "**limit** (default: 100)",
                  "**name** (default: openaq-api)",
                  "**page** (default: 1)",
                  "**website** (default: /)"
                ]
              }
            ],
            "**results**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "422": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "HTTPValidationError"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**detail**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
