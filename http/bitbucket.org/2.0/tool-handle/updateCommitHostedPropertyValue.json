{
  "name": "updateCommitHostedPropertyValue",
  "description": "Update an [application property](/cloud/bitbucket/application-properties/) value stored against a commit.",
  "parameters": {
    "type": "object",
    "properties": {
      "workspace": {
        "type": "string",
        "description": "The repository container; either the workspace slug or the UUID in curly braces."
      },
      "repo_slug": {
        "type": "string",
        "description": "The repository."
      },
      "commit": {
        "type": "string",
        "description": "The commit."
      },
      "app_key": {
        "type": "string",
        "description": "The key of the Connect app."
      },
      "property_name": {
        "type": "string",
        "description": "The name of the property."
      },
      "body": {
        "$ref": "#/components/schemas/application_property",
        "description": "The application property to create or update."
      }
    },
    "required": [
      "workspace",
      "repo_slug",
      "commit",
      "app_key",
      "property_name",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://api.bitbucket.org/2.0/repositories/{workspace}/{repo_slug}/commit/{commit}/properties/{app_key}/{property_name}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
