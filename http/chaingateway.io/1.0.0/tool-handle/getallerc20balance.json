{
  "name": "getallerc20balance",
  "description": "Get the balance of an ERC20 address",
  "parameters": {
    "type": "object",
    "properties": {
      "address": {
        "example": "0xa1f36016221d48ce7f15cde7b826a4fbe09bacce",
        "type": "string"
      },
      "erc20_token": {
        "example": "0xa1f36016221d48ce7f15cde7b826a4fbe09bacce",
        "type": "string"
      }
    },
    "required": [
      "address",
      "erc20_token"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.api.chaingateway.io/v2/ethereum/balances/{address}/erc20/{erc20_token}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**balance**"
                ]
              }
            ],
            "**message**",
            "**ok**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
