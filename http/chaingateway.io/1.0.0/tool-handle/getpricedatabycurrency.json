{
  "name": "getpricedatabycurrency",
  "description": "getPriceDataByCurrency",
  "parameters": {
    "type": "object",
    "properties": {
      "currency1": {
        "example": "btc",
        "type": "string"
      },
      "currency2": {
        "example": "usd",
        "type": "string"
      }
    },
    "required": [
      "currency1",
      "currency2"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.api.chaingateway.io/v2/markets/data/{currency1}/{currency2}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  [
                    "**bitcoin**",
                    {
                      "$ul": [
                        "**currentPrice**",
                        "**high24h**",
                        "**low24h**",
                        "**name**",
                        "**priceChange24h**",
                        "**priceChangePercentage24h**",
                        "**symbol**"
                      ]
                    }
                  ]
                ]
              }
            ],
            "**message**",
            "**ok**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
