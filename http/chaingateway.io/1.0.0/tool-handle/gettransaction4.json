{
  "name": "gettransaction4",
  "description": "You can get your transaction decoded by add /decoded to your api call. If you want to get the transaction encoded, youst remove the /decoded part",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "example": "abf9fdf4144c999034075815455285c5a475d6e0203e4af7050844c8264f16e3",
        "type": "string",
        "description": "Transaction Id"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.api.chaingateway.io/v2/bitcoin/transactions/{id}/decoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**blockhash**",
                  "**confirmations**",
                  "**hash**",
                  "**hex**",
                  "**receivers**",
                  "**senders**",
                  "**time**",
                  "**txid**"
                ]
              }
            ],
            "**message**",
            "**ok**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
