{
  "name": "subscribeaddress2",
  "description": "Creates a new subscription/IPN for the given address (and contractaddress). You will receive a notification to the given url every time a deposit is received. Unsubscribe the address before sending tokens/ETH from it or you won't get reliable notifications anymore.\r\n",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "properties": {
          "contractaddress": {
            "example": "0x514910771af9ca656af840dff83e8264ecf986ca",
            "type": "string"
          },
          "ethereumaddress": {
            "example": "0xa2107fa5b38d9bbd2c461d6edf11b11a50f6b974",
            "type": "string"
          },
          "url": {
            "example": "https://yoururl.com/ipnreceiver.php",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://dev.api.chaingateway.io/v2/bsc/webhooks"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**contractaddress**",
                  "**from**",
                  "**id**",
                  "**to**",
                  "**tokenid**",
                  "**type**",
                  "**url**"
                ]
              }
            ],
            "**message**",
            "**ok**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
