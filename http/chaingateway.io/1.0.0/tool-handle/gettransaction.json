{
  "name": "gettransaction",
  "description": "Get info about a transaction\n\nYou can choose if you want to get the Transaction encoded or decoded by add /decoded to your request. See examlpes for details",
  "parameters": {
    "type": "object",
    "properties": {
      "transaction": {
        "example": "0x0b361c13214a0d498b69d6ea86039fdf8e578f4b6e3b28db52a422f8ed3ea037",
        "type": "string",
        "description": "Transaction hash"
      }
    },
    "required": [
      "transaction"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.api.chaingateway.io/v2/ethereum/transactions/{transaction}/decoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            "**message**",
            "**ok**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
