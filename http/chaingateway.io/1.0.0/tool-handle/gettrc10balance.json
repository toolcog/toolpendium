{
  "name": "gettrc10balance",
  "description": "getTRC10Balance",
  "parameters": {
    "type": "object",
    "properties": {
      "account": {
        "example": "TVqA9huwk2NBUxbanUNx4NVPKXjzWZqkJt",
        "type": "string",
        "description": "Account address"
      },
      "tokenId": {
        "example": "10020000",
        "type": "string",
        "description": "Token Id"
      }
    },
    "required": [
      "account",
      "tokenId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.api.chaingateway.io/v2/tron/balances/{account}/trc10/{tokenId}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**balance**",
                  "**decimals**",
                  "**tokenid**",
                  "**tronaddress**"
                ]
              }
            ],
            "**message**",
            "**ok**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
