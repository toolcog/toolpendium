{
  "name": "getbep20balance",
  "description": "Get the balance of a BEP20 address",
  "parameters": {
    "type": "object",
    "properties": {
      "contract": {
        "example": "0x1dDB2C0897daF18632662E71fdD2dbDC0eB3a9Ec",
        "type": "string",
        "description": "BEP20 contract address"
      },
      "token_id": {
        "example": "0x9dB475371B5cC2913D3219f72e16a3F101339a05",
        "type": "string",
        "description": "Token id"
      }
    },
    "required": [
      "contract",
      "token_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.api.chaingateway.io/v2/bsc/balances/{contract}/bep20/{token_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**balance**"
                ]
              }
            ],
            "**message**",
            "**ok**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
