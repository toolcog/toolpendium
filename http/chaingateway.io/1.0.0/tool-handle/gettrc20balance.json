{
  "name": "gettrc20balance",
  "description": "getTRC20Balance",
  "parameters": {
    "type": "object",
    "properties": {
      "account": {
        "example": "TVqA9huwk2NBUxbanUNx4NVPKXjzWZqkJt",
        "type": "string",
        "description": "Account address"
      },
      "token": {
        "example": "TGTE9Eo4hrkotStM1iGHSKA7gobxZxPuwQ",
        "type": "string",
        "description": "Tron TRC20 token"
      },
      "body": {
        "properties": {
          "contractaddress": {
            "example": "TGTE9Eo4hrkotStM1iGHSKA7gobxZxPuwQ",
            "type": "string"
          },
          "tronaddress": {
            "example": "TK84ZqTuFHUbfGs5BY5rMAbkMJAxdgbYB5",
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "account",
      "token"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://dev.api.chaingateway.io/v2/tron/balances/{account}/trc20/{token}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            [
              "**data**",
              {
                "$ul": [
                  "**balance**",
                  "**contractaddress**",
                  "**decimals**",
                  "**tronaddress**"
                ]
              }
            ],
            "**message**",
            "**ok**",
            "**status**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
