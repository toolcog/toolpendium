{
  "name": "sendToken",
  "description": "Sends ERC20 tokens from an address controlled by the account to a specified receiver address. The token contract address is needed to specify the token. The use of the identifier parameter is recommend and awaits an unique string. Whenever a transaction is beeing sent, the identifier is checked and the transaction gets dropped if there is one with that identifier already.",
  "parameters": {
    "type": "object",
    "properties": {
      "Authorization": {
        "example": "q9PdaWuD4j6DK6vsUgehhL8pgarSrS9m",
        "type": "string",
        "description": "API Key"
      },
      "body": {
        "$ref": "#/$defs/sendTokenRequest"
      }
    },
    "required": [
      "Authorization",
      "body"
    ],
    "$defs": {
      "sendTokenRequest": {
        "example": {
          "amount": 5,
          "contractaddress": "0xdac17f958d2ee523a2206206994597c13d831ec7",
          "from": "0x3a32c4c31fe8d2a89976af5d284a94a040b44aa8",
          "identifier": "CN562",
          "password": "padN39QkRA2hJ",
          "to": "0xef4943d727e34280a2efa0b3352dfd61f508ee48"
        },
        "properties": {
          "amount": {
            "format": "int32",
            "type": "integer"
          },
          "contractaddress": {
            "type": "string"
          },
          "from": {
            "type": "string"
          },
          "identifier": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        },
        "required": [
          "contractaddress",
          "from",
          "to",
          "password",
          "amount",
          "identifier"
        ],
        "title": "sendTokenRequest",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://eu.eth.chaingateway.io/v1/sendToken"
    },
    "headers": {
      "Authorization": {
        "$": "Authorization"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "sendToken"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**amount**",
            "**contractaddress**",
            "**from**",
            "**identifier**",
            "**ok**",
            "**to**",
            "**txid**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
