{
  "name": "sendEthereum",
  "description": "Sends ethereum from an address controlled by the account to a specified receiver address.",
  "parameters": {
    "type": "object",
    "properties": {
      "Authorization": {
        "example": "q9PdaWuD4j6DK6vsUgehhL8pgarSrS9m",
        "type": "string",
        "description": "API Key"
      },
      "body": {
        "$ref": "#/$defs/sendEthereumRequest"
      }
    },
    "required": [
      "Authorization",
      "body"
    ],
    "$defs": {
      "sendEthereumRequest": {
        "example": {
          "amount": 0.01,
          "from": "0x3a32c4c31fe8d2a89976af5d284a94a040b44aa8",
          "password": "padN39QkRA2hJ",
          "to": "0xef4943d727e34280a2efa0b3352dfd61f508ee48"
        },
        "properties": {
          "amount": {
            "type": "number"
          },
          "from": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        },
        "required": [
          "from",
          "to",
          "password",
          "amount"
        ],
        "title": "sendEthereumRequest",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://eu.eth.chaingateway.io/v1/sendEthereum"
    },
    "headers": {
      "Authorization": {
        "$": "Authorization"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "sendEthereum"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**amount**",
            "**from**",
            "**ok**",
            "**to**",
            "**txid**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
