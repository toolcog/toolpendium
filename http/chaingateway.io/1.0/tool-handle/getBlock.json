{
  "name": "getBlock",
  "description": "Returns information of an ethereum block with or without transactions",
  "parameters": {
    "type": "object",
    "properties": {
      "Authorization": {
        "example": "q9PdaWuD4j6DK6vsUgehhL8pgarSrS9m",
        "type": "string",
        "description": "API Key"
      },
      "body": {
        "$ref": "#/$defs/getBlockRequest"
      }
    },
    "required": [
      "Authorization",
      "body"
    ],
    "$defs": {
      "getBlockRequest": {
        "example": {
          "block": "5000000"
        },
        "properties": {
          "block": {
            "type": "string"
          }
        },
        "required": [
          "block"
        ],
        "title": "getBlockRequest",
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://eu.eth.chaingateway.io/v1/getBlock"
    },
    "headers": {
      "Authorization": {
        "$": "Authorization"
      }
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "getBlock"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**block_number**",
            "**difficulty**",
            "**gas_limit**",
            "**gas_used**",
            "**hash**",
            "**miner**",
            "**ok**",
            "**parent_hash**",
            "**size_in_bytes**",
            "**time_stamp**",
            "**transactions_count**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
