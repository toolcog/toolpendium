                  [
                    "**hours_of_operation**",
                    {
                      "$ul": [
                        "**friday**",
                        "**monday**",
                        "**saturday**",
                        "**sunday**",
                        "**thursday**",
                        "**tuesday**",
                        "**wednesday**"
                      ]
                    }
                  ],
                  "**lat**",
                  "**long**",
                  "**phone_number**",
                  "**postal_code**",
                  "**service_codes**",
                  "**service_point_id**",
                  "**state_province**",
                  "**type** (default: pudo)"
                ]
              }
            ]
          ]
        },
