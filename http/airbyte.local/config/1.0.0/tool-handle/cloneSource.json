{
  "name": "cloneSource",
  "description": "Clone source",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/SourceCloneRequestBody"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "SourceCloneRequestBody": {
        "description": "The values required to configure the source. The schema for this should have an id of the existing source along with the configuration you want to change in case.",
        "properties": {
          "sourceCloneId": {
            "$ref": "#/$defs/SourceId"
          },
          "sourceConfiguration": {
            "$ref": "#/$defs/SourceCloneConfiguration"
          }
        },
        "required": [
          "sourceCloneId"
        ],
        "type": "object"
      },
      "SourceId": {
        "format": "uuid",
        "type": "string"
      },
      "SourceCloneConfiguration": {
        "properties": {
          "connectionConfiguration": {
            "$ref": "#/$defs/SourceConfiguration"
          },
          "name": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "SourceConfiguration": {
        "description": "The values required to configure the source. The schema for this must match the schema return by source_definition_specifications/get for the source.",
        "example": {
          "user": "charles"
        }
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://airbyte.local/v1/sources/clone"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**connectionConfiguration**: The values required to configure the source. The schema for this must match the schema return by source_definition_specifications/get for the source.",
            "**icon**",
            "**name**",
            "**sourceDefinitionId**",
            "**sourceId**",
            "**sourceName**",
            "**workspaceId**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**exceptionClassName**",
            "**exceptionStack**",
            "**id**",
            "**message**",
            "**rootCauseExceptionClassName**",
            "**rootCauseExceptionStack**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "422": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**exceptionClassName**",
            "**exceptionStack**",
            "**message**",
            "**validationErrors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
