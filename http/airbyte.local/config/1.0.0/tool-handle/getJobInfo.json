{
  "name": "getJobInfo",
  "description": "Get information about a job",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/JobIdRequestBody"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "JobIdRequestBody": {
        "properties": {
          "id": {
            "$ref": "#/$defs/JobId"
          }
        },
        "required": [
          "id"
        ],
        "type": "object"
      },
      "JobId": {
        "format": "int64",
        "type": "integer"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://airbyte.local/v1/jobs/get"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**attempts**",
            [
              "**job**",
              {
                "$ul": [
                  "**configId**",
                  "**configType**",
                  "**createdAt**",
                  "**id**",
                  [
                    "**resetConfig**: contains information about how a reset was configured. only populated if the job was a reset.",
                    {
                      "$ul": [
                        "**streamsToReset**"
                      ]
                    }
                  ],
                  "**startedAt**",
                  "**status**",
                  "**updatedAt**"
                ]
              }
            ]
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "404": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**exceptionClassName**",
            "**exceptionStack**",
            "**id**",
            "**message**",
            "**rootCauseExceptionClassName**",
            "**rootCauseExceptionStack**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "422": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**exceptionClassName**",
            "**exceptionStack**",
            "**message**",
            "**validationErrors**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
