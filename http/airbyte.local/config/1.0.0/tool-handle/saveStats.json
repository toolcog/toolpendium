{
  "name": "saveStats",
  "description": "For worker to set sync stats of a running attempt.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/SaveStatsRequestBody"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "SaveStatsRequestBody": {
        "properties": {
          "attemptNumber": {
            "$ref": "#/$defs/AttemptNumber"
          },
          "jobId": {
            "$ref": "#/$defs/JobId"
          },
          "stats": {
            "$ref": "#/$defs/AttemptStats"
          },
          "streamStats": {
            "items": {
              "$ref": "#/$defs/AttemptStreamStats"
            },
            "type": "array"
          }
        },
        "required": [
          "jobId",
          "attemptNumber",
          "stats"
        ],
        "type": "object"
      },
      "AttemptNumber": {
        "format": "int32",
        "type": "integer"
      },
      "JobId": {
        "format": "int64",
        "type": "integer"
      },
      "AttemptStats": {
        "properties": {
          "bytesEmitted": {
            "format": "int64",
            "type": "integer"
          },
          "estimatedBytes": {
            "format": "int64",
            "type": "integer"
          },
          "estimatedRecords": {
            "format": "int64",
            "type": "integer"
          },
          "recordsCommitted": {
            "format": "int64",
            "type": "integer"
          },
          "recordsEmitted": {
            "format": "int64",
            "type": "integer"
          },
          "stateMessagesEmitted": {
            "format": "int64",
            "type": "integer"
          }
        },
        "type": "object"
      },
      "AttemptStreamStats": {
        "properties": {
          "stats": {
            "$ref": "#/$defs/AttemptStats"
          },
          "streamName": {
            "type": "string"
          },
          "streamNamespace": {
            "type": "string"
          }
        },
        "required": [
          "streamName",
          "stats"
        ],
        "type": "object"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://airbyte.local/v1/attempt/save_stats"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**succeeded**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
