{
  "name": "saveSyncConfig",
  "description": "For worker to save the AttemptSyncConfig for an attempt.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "$ref": "#/$defs/SaveAttemptSyncConfigRequestBody"
      }
    },
    "required": [
      "body"
    ],
    "$defs": {
      "SaveAttemptSyncConfigRequestBody": {
        "properties": {
          "attemptNumber": {
            "$ref": "#/$defs/AttemptNumber"
          },
          "jobId": {
            "$ref": "#/$defs/JobId"
          },
          "syncConfig": {
            "$ref": "#/$defs/AttemptSyncConfig"
          }
        },
        "required": [
          "jobId",
          "attemptNumber",
          "syncConfig"
        ],
        "type": "object"
      },
      "AttemptNumber": {
        "format": "int32",
        "type": "integer"
      },
      "JobId": {
        "format": "int64",
        "type": "integer"
      },
      "AttemptSyncConfig": {
        "properties": {
          "destinationConfiguration": {
            "$ref": "#/$defs/DestinationConfiguration"
          },
          "sourceConfiguration": {
            "$ref": "#/$defs/SourceConfiguration"
          },
          "state": {
            "$ref": "#/$defs/ConnectionState"
          }
        },
        "required": [
          "sourceConfiguration",
          "destinationConfiguration"
        ],
        "type": "object"
      },
      "DestinationConfiguration": {
        "description": "The values required to configure the destination. The schema for this must match the schema return by destination_definition_specifications/get for the destinationDefinition.",
        "example": {
          "user": "charles"
        }
      },
      "SourceConfiguration": {
        "description": "The values required to configure the source. The schema for this must match the schema return by source_definition_specifications/get for the source.",
        "example": {
          "user": "charles"
        }
      },
      "ConnectionState": {
        "description": "Contains the state for a connection. The stateType field identifies what type of state it is. Only the field corresponding to that type will be set, the rest will be null. If stateType=not_set, then none of the fields will be set.",
        "properties": {
          "connectionId": {
            "$ref": "#/$defs/ConnectionId"
          },
          "globalState": {
            "$ref": "#/$defs/GlobalState"
          },
          "state": {
            "$ref": "#/$defs/StateBlob"
          },
          "stateType": {
            "$ref": "#/$defs/ConnectionStateType"
          },
          "streamState": {
            "items": {
              "$ref": "#/$defs/StreamState"
            },
            "type": "array"
          }
        },
        "required": [
          "connectionId",
          "stateType"
        ],
        "type": "object"
      },
      "ConnectionId": {
        "format": "uuid",
        "type": "string"
      },
      "GlobalState": {
        "properties": {
          "shared_state": {
            "$ref": "#/$defs/StateBlob"
          },
          "streamStates": {
            "items": {
              "$ref": "#/$defs/StreamState"
            },
            "type": "array"
          }
        },
        "required": [
          "streamStates"
        ],
        "type": "object"
      },
      "StateBlob": {
        "type": "object"
      },
      "StreamState": {
        "properties": {
          "streamDescriptor": {
            "$ref": "#/$defs/StreamDescriptor"
          },
          "streamState": {
            "$ref": "#/$defs/StateBlob"
          }
        },
        "required": [
          "streamDescriptor"
        ],
        "type": "object"
      },
      "StreamDescriptor": {
        "properties": {
          "name": {
            "type": "string"
          },
          "namespace": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ],
        "type": "object"
      },
      "ConnectionStateType": {
        "enum": [
          "global",
          "stream",
          "legacy",
          "not_set"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "http://airbyte.local/v1/attempt/save_sync_config"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**succeeded**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
