{
  "name": "searchV1SearchGet",
  "description": "Make Full Text Search and return found Documents",
  "parameters": {
    "type": "object",
    "properties": {
      "searchCriteria[requestName]": {
        "type": "string"
      },
      "searchCriteria[filterGroups][0][filters][0][field]": {
        "type": "string",
        "description": "Field"
      },
      "searchCriteria[filterGroups][0][filters][0][value]": {
        "type": "string",
        "description": "Value"
      },
      "searchCriteria[filterGroups][0][filters][0][conditionType]": {
        "type": "string",
        "description": "Condition type"
      },
      "searchCriteria[sortOrders][0][field]": {
        "type": "string",
        "description": "Sorting field."
      },
      "searchCriteria[sortOrders][0][direction]": {
        "type": "string",
        "description": "Sorting direction."
      },
      "searchCriteria[pageSize]": {
        "type": "integer",
        "description": "Page size."
      },
      "searchCriteria[currentPage]": {
        "type": "integer",
        "description": "Current page."
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://example.com/rest/default/V1/search{?searchCriteria[requestName],searchCriteria[filterGroups][0][filters][0][field],searchCriteria[filterGroups][0][filters][0][value],searchCriteria[filterGroups][0][filters][0][conditionType],searchCriteria[sortOrders][0][field],searchCriteria[sortOrders][0][direction],searchCriteria[pageSize],searchCriteria[currentPage]}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Interface SearchResultInterface",
        "**Key properties:**",
        {
          "$ul": [
            [
              "**aggregations**: Faceted data",
              {
                "$ul": [
                  "**bucket_names**: Document field names",
                  "**buckets**: All Document fields"
                ]
              }
            ],
            "**items**",
            [
              "**search_criteria**: Interface SearchCriteriaInterface",
              {
                "$ul": [
                  "**current_page**: Current page.",
                  "**filter_groups**: A list of filter groups.",
                  "**page_size**: Page size.",
                  "**request_name**",
                  "**sort_orders**: Sort order."
                ]
              }
            ],
            "**total_count**: Total count."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: Error code",
            "**errors**: Errors list",
            "**message**: Error message",
            "**parameters**: Error parameters list",
            "**trace**: Stack trace"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
