{
  "name": "getTx",
  "description": "Returns NEBL transaction object representing a NEBL transaction",
  "parameters": {
    "type": "object",
    "properties": {
      "txid": {
        "type": "string",
        "description": "Transaction ID"
      }
    },
    "required": [
      "txid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ntp1node.nebl.io//ins/tx/{txid}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**blockhash**: Hash of the block this transaction is in",
            "**blockheight**: Block height of this transaction",
            "**blocktime**: Block time of this transaction",
            "**confirmations**: Number of transaction confirmations",
            "**fee**: Total NEBL used as fee for this transcation in satoshis",
            "**fees**: Total NEBL used in fees for this transaction",
            "**locktime**: Transaction locktime",
            "**size**: Transcation size in bytes",
            "**time**: Transaction time",
            "**totalsent**: Total NEBL sent in this transaction in satoshis",
            "**txid**: TXID of transaction",
            "**valueIn**: Total NEBL input in this transaction",
            "**valueOut**: Total NEBL output in this transaction",
            "**version**: Transaction version",
            "**vin**: Array of transaction inputs",
            "**vout**: Array of transaction outputs"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
