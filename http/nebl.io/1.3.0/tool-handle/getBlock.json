{
  "name": "getBlock",
  "description": "Returns blockchain data for a given block based upon the block hash",
  "parameters": {
    "type": "object",
    "properties": {
      "blockhash": {
        "type": "string",
        "description": "Block Hash"
      }
    },
    "required": [
      "blockhash"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ntp1node.nebl.io//ins/block/{blockhash}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**bits**: Block bits",
            "**confirmations**: Number of confirmations block has",
            "**difficulty**: Block difficulty",
            "**hash**: Block hash",
            "**height**: Block height",
            "**merkleroot**: Merkleroot of block",
            "**nextblockhash**: Hash of the next block on the chain",
            "**nonce**: Block nonce",
            "**previousblockhash**: Hash of the previous block on the chain",
            "**reward**: Number of NEBL awarded in this block",
            "**size**: Block size in bytes",
            "**time**: Block time relative to epoch",
            "**tx**: Array of tx ids in the block",
            "**version**: Block version"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
