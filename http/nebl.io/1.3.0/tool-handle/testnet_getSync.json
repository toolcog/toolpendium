{
  "name": "testnet_getSync",
  "description": "Returns information on the node's sync progress",
  "parameters": {
    "type": "object"
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ntp1node.nebl.io//testnet/ins/sync"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "Object containing node sync status",
        "**Key properties:**",
        {
          "$ul": [
            "**blockChainHeight**: Current blockchain height",
            "**error**: Recent sync error messages",
            "**height**: Height node is synced to",
            "**status**: Current sync status",
            "**syncPercentage**: Current sync percentage",
            "**type**: Node type"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
