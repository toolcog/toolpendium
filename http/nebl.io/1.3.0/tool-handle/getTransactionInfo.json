{
  "name": "getTransactionInfo",
  "description": "Returns detailed information regarding an NTP1 transaction.\n",
  "parameters": {
    "type": "object",
    "properties": {
      "txid": {
        "type": "string",
        "description": "Neblio txid to get information on."
      }
    },
    "required": [
      "txid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ntp1node.nebl.io//ntp1/transactioninfo/{txid}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**blockhash**: Hash of the block this transaction is in",
            "**blockheight**: Block height of this transaction",
            "**blocktime**: Block time of this transaction",
            "**confirmations**: Number of transaction confirmations",
            "**fee**: Total NEBL used as fee for this transcation in satoshis",
            "**hex**: Transaction in raw hex",
            "**locktime**: Transaction locktime",
            "**time**: Transaction time",
            "**totalsent**: Total NEBL sent in this transaction in satoshis",
            "**txid**: TXID of transaction",
            "**version**: Transaction version",
            "**vin**: Array of transaction inputs",
            "**vout**: Array of transaction outputs"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "default": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**",
            "**fields**",
            "**message**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
