{
  "name": "getAddressUtxos",
  "description": "Returns information on each Unspent Transaction Output contained at an address",
  "parameters": {
    "type": "object",
    "properties": {
      "address": {
        "type": "string",
        "description": "Address"
      }
    },
    "required": [
      "address"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ntp1node.nebl.io//ins/addr/{address}/utxo"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "Array of objects representing this address' UTXOs",
        "**Key properties:**",
        {
          "$ul": [
            "**address**: Address",
            "**amount**: NEBL amount",
            "**confirmations**: Number of confirmations",
            "**scriptPubKey**: scriptPubKey",
            "**ts**: Timestamp",
            "**txid**: Transaction ID",
            "**vout**: vout"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
