{
  "name": "getAddress",
  "description": "Returns NEBL address object containing information on a specific address",
  "parameters": {
    "type": "object",
    "properties": {
      "address": {
        "type": "string",
        "description": "Address"
      }
    },
    "required": [
      "address"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ntp1node.nebl.io//ins/addr/{address}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**addrStr**: Address in string form",
            "**balance**: NEBL balance",
            "**balanceSat**: NEBL balance in satoshis",
            "**totalReceived**: Total NEBL received",
            "**totalReceivedSat**: Total NEBL received in satoshis",
            "**totalSent**: Total NEBL sent",
            "**totalSentSat**: Total NEBL sent satoshis",
            "**transactions**: Array of transaction ids for this address",
            "**txAppearances**: Number of transactions for this address",
            "**unconfirmedBalance**: Unconfirmed NEBL balance",
            "**unconfirmedBalanceSat**: Unconfirmed NEBL balance in satoshis",
            "**unconfirmedTxAppearances**: Number of unconfirmed transactions for this address"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
