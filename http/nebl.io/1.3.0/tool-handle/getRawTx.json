{
  "name": "getRawTx",
  "description": "Returns raw transaction hex representing a NEBL transaction",
  "parameters": {
    "type": "object",
    "properties": {
      "txid": {
        "type": "string",
        "description": "Transaction ID"
      }
    },
    "required": [
      "txid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://ntp1node.nebl.io//ins/rawtx/{txid}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**rawtx**: Raw hex representing the transaction"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
