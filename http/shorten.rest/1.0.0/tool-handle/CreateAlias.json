{
  "name": "CreateAlias",
  "description": "This POST method creates a new alias under a specified domain. If no domain is specified in the request the alias will be attached to the default domain Short.fyi \n\n **NOTE:** You can override the domain level Meta Tags and Tracking Snippets by specifying them for each URL. Any variables you add to a specific URL will always override domain level settings.",
  "parameters": {
    "type": "object",
    "properties": {
      "domainName": {
        "default": "short.fyi",
        "type": "string",
        "description": "domain which alias will belong to (string without `http/https` or `/`)"
      },
      "aliasName": {
        "default": "@rnd",
        "type": "string",
        "description": "alias (without `/` at the beginning)"
      },
      "body": {
        "$ref": "#/components/schemas/CreateAliasModel",
        "description": "alias properties"
      }
    },
    "required": [
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.shorten.rest/aliases{?domainName,aliasName}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**aliasName**",
            "**domainName**",
            "**shortUrl**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
