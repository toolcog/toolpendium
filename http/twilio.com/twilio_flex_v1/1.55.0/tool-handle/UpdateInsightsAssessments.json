{
  "name": "UpdateInsightsAssessments",
  "description": "Update a specific Assessment assessed earlier",
  "parameters": {
    "type": "object",
    "properties": {
      "AssessmentSid": {
        "maxLength": 34,
        "minLength": 34,
        "pattern": "^FM[0-9a-fA-F]{32}$",
        "type": "string",
        "description": "The SID of the assessment to be modified"
      },
      "Authorization": {
        "type": "string",
        "description": "The Authorization HTTP request header"
      },
      "body": {
        "properties": {
          "AnswerId": {
            "description": "The id of the answer selected by user",
            "type": "string"
          },
          "AnswerText": {
            "description": "The answer text selected by user",
            "type": "string"
          },
          "Offset": {
            "description": "The offset of the conversation",
            "type": "number"
          }
        },
        "required": [
          "Offset",
          "AnswerText",
          "AnswerId"
        ],
        "title": "UpdateInsightsAssessmentsRequest",
        "type": "object"
      }
    },
    "required": [
      "AssessmentSid"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://flex-api.twilio.com/v1/Insights/QualityManagement/Assessments/{AssessmentSid}"
    },
    "headers": {
      "Authorization": {
        "$": "Authorization"
      }
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**account_sid**: The unique SID identifier of the Account.",
            "**agent_id**: The id of the Agent",
            "**answer_id**: The id of the answer selected by user",
            "**answer_text**: The answer text selected by user",
            "**assessment**: Assessment Details associated with an assessment",
            "**assessment_sid**: The SID of the assessment",
            "**offset**: Offset of the conversation",
            "**report**: The flag indicating if this assessment is part of report ",
            "**segment_id**: Segment Id of conversation",
            "**timestamp**",
            "**url**",
            "**user_email**: The email id of the user.",
            "**user_name**: The name of the user.",
            "**weight**: The weightage given to this comment"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
