{
  "name": "UpdateDeviceSecret",
  "description": "Update a secret for a Microvisor Device.",
  "parameters": {
    "type": "object",
    "properties": {
      "DeviceSid": {
        "type": "string",
        "description": "A 34-character string that uniquely identifies the Device."
      },
      "Key": {
        "type": "string",
        "description": "The secret key; up to 100 characters."
      },
      "body": {
        "properties": {
          "Value": {
            "description": "The secret value; up to 4096 characters.",
            "type": "string"
          }
        },
        "required": [
          "Value"
        ],
        "title": "UpdateDeviceSecretRequest",
        "type": "object"
      }
    },
    "required": [
      "DeviceSid",
      "Key"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://microvisor.twilio.com/v1/Devices/{DeviceSid}/Secrets/{Key}"
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**date_rotated**",
            "**device_sid**: A 34-character string that uniquely identifies the parent Device.",
            "**key**: The secret key; up to 100 characters.",
            "**url**: The absolute URL of the Secret."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
