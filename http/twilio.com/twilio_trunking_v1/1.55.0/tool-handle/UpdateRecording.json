{
  "name": "UpdateRecording",
  "description": "",
  "parameters": {
    "type": "object",
    "properties": {
      "TrunkSid": {
        "maxLength": 34,
        "minLength": 34,
        "pattern": "^TK[0-9a-fA-F]{32}$",
        "type": "string",
        "description": "The SID of the Trunk that will have its recording settings updated."
      },
      "body": {
        "properties": {
          "Mode": {
            "$ref": "#/$defs/recording_enum_recording_mode"
          },
          "Trim": {
            "$ref": "#/$defs/recording_enum_recording_trim"
          }
        },
        "title": "UpdateRecordingRequest",
        "type": "object"
      }
    },
    "required": [
      "TrunkSid"
    ],
    "$defs": {
      "recording_enum_recording_mode": {
        "enum": [
          "do-not-record",
          "record-from-ringing",
          "record-from-answer",
          "record-from-ringing-dual",
          "record-from-answer-dual"
        ],
        "type": "string"
      },
      "recording_enum_recording_trim": {
        "enum": [
          "trim-silence",
          "do-not-trim"
        ],
        "type": "string"
      }
    }
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://trunking.twilio.com/v1/Trunks/{TrunkSid}/Recording"
    },
    "body": {
      "$": "body",
      "encode": "urlencoded"
    }
  },
  "responses": {
    "202": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**mode**",
            "**trim**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
