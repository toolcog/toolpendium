{
  "name": "editCompaniesVendor",
  "description": "Edit a companies vendor",
  "parameters": {
    "type": "object",
    "properties": {
      "companies_vendor_id": {
        "format": "uuid",
        "type": "string"
      },
      "body": {
        "properties": {
          "company_id": {
            "format": "uuid",
            "type": "string"
          },
          "delivery_price": {
            "format": "float",
            "type": "number"
          },
          "free_delivery_price": {
            "format": "float",
            "type": "number"
          },
          "is_active": {
            "type": "boolean"
          },
          "password": {
            "maxLength": 255,
            "type": "string"
          },
          "receive_automatic_price_files": {
            "type": "boolean"
          },
          "receive_invoice_mails": {
            "type": "boolean"
          },
          "reviewed": {
            "type": "boolean"
          },
          "use_price_files": {
            "type": "boolean"
          },
          "username": {
            "maxLength": 255,
            "type": "string"
          },
          "vendor_account_reference": {
            "maxLength": 255,
            "type": "string"
          },
          "vendor_department_id": {
            "format": "uuid",
            "type": "string"
          },
          "vendor_email": {
            "maxLength": 255,
            "type": "string"
          },
          "vendor_id": {
            "format": "uuid",
            "type": "string"
          },
          "vendor_name": {
            "maxLength": 255,
            "type": "string"
          }
        },
        "type": "object"
      }
    },
    "required": [
      "companies_vendor_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "PUT",
    "url": {
      "$uri": "https://app.apacta.com/api/v1/companies_vendors/{companies_vendor_id}"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**data**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
