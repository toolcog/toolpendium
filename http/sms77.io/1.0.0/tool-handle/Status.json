{
  "name": "Status",
  "parameters": {
    "type": "object",
    "properties": {
      "msg_id": {
        "type": "string",
        "description": "The ID from the SMS."
      }
    },
    "required": [
      "msg_id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://gateway.seven.io/api/status{?msg_id}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$lang": "json",
      "$code": {
        "$encode": "json",
        "$indent": true,
        "$content": {
          "$": "$.body"
        }
      }
    }
  }
}
