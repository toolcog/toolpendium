{
  "name": "HooksPOST",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "enum": [
          "subscribe",
          "unsubscribe"
        ],
        "type": "string",
        "description": "Determines the action to execute."
      },
      "id": {
        "type": "integer",
        "description": "The Webhook ID you wish to unsubscribe."
      },
      "target_url": {
        "type": "string",
        "description": "Target URL of your Webhook."
      },
      "event_type": {
        "enum": [
          "all",
          "sms_mo",
          "dlr",
          "voice_status"
        ],
        "type": "string",
        "description": "Type of event for which you would like to receive a webhook."
      },
      "request_method": {
        "default": "POST",
        "enum": [
          "POST",
          "JSON",
          "GET"
        ],
        "type": "string",
        "description": "Request method in which you want to receive the webhook."
      }
    },
    "required": [
      "action"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://gateway.seven.io/api/hooks{?action,id,target_url,event_type,request_method}"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**id**",
            "**success**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
