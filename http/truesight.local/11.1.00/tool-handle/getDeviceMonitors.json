{
  "name": "getDeviceMonitors",
  "description": "You need to provide a <b>Device ID</b>:<br>- use the <b>hardware/devices</b> service to get all available device IDs.",
  "parameters": {
    "type": "object",
    "properties": {
      "deviceId": {
        "format": "int32",
        "type": "integer",
        "description": "The ID of the device."
      }
    },
    "required": [
      "deviceId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "http://truesight.local/hardware/device-monitors/{deviceId}"
    }
  },
  "responses": {
    "500": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**code**: The error's business identifier.",
            "**date**: The timestamp of the error.",
            "**message**: The error message."
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
