{
  "name": "remotestop",
  "description": "Use to request a remote stop command. The request will wait for the charge station to process the command. It will timeout after 60 seconds.",
  "parameters": {
    "type": "object",
    "properties": {
      "body": {
        "properties": {
          "chargestation": {
            "type": "string"
          },
          "driver": {
            "type": "string"
          },
          "transaction": {
            "type": "string"
          }
        },
        "type": "object",
        "description": "Remote stop transaction info here."
      }
    },
    "required": [
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "//api.edrv.io/v1/commands/remotestop"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {}
}
