{
  "name": "getDriver",
  "description": "Get a driver's data",
  "parameters": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "The driver id that needs to be fetched"
      },
      "include_tokens": {
        "type": "boolean",
        "description": "Populate tokens"
      },
      "include_group": {
        "type": "boolean",
        "description": "Populate group"
      },
      "include_organization": {
        "type": "boolean",
        "description": "Populate organization"
      }
    },
    "required": [
      "id"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "//api.edrv.io/v1/drivers/{id}{?include_tokens,include_group,include_organization}"
    }
  },
  "responses": {}
}
