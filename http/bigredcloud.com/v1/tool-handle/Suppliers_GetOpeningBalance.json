{
  "name": "Suppliers_GetOpeningBalance",
  "description": "Returns a Supplier's opening balances, calculated for the next periods: current month, one month old, two months old, three and more months old.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "format": "int64",
        "type": "integer",
        "description": "Id of Supplier to return opening balances."
      }
    },
    "required": [
      "itemId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://app.bigredcloud.com/api/v1/suppliers/{itemId}/openingBalance"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**currentMonth**",
            "**oneMonthOld**",
            "**threeMonthsOld**",
            "**twoMonthsOld**"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    }
  }
}
