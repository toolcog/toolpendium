{
  "name": "Customers_GetOpeningBalanceList",
  "description": "Returns a list of Customer's opening balance transactions.",
  "parameters": {
    "type": "object",
    "properties": {
      "itemId": {
        "format": "int64",
        "type": "integer",
        "description": "Id of Customer to return opening balances transaction."
      }
    },
    "required": [
      "itemId"
    ]
  },
  "handler": "http",
  "request": {
    "method": "GET",
    "url": {
      "$uri": "https://app.bigredcloud.com/api/v1/customers/{itemId}/openingBalanceList"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**entryDate**",
            "**id**",
            "**isChanged**",
            "**procDate**",
            "**reference**",
            "**timestamp**",
            "**total**",
            "**totalVAT**",
            "**unpaid**",
            "**vatEntries**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
