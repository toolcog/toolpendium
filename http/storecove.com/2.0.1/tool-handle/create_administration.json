{
  "name": "create_administration",
  "description": "Deprecated. Create a new Administration. An Administration is an email destination for purchase invoices.",
  "parameters": {
    "type": "object",
    "properties": {
      "legal_entity_id": {
        "format": "int64",
        "type": "integer",
        "description": "The id of the LegalEntity for which to create the Administration"
      },
      "body": {
        "$ref": "#/components/schemas/AdministrationCreate",
        "description": "Administration to create"
      }
    },
    "required": [
      "legal_entity_id",
      "body"
    ]
  },
  "handler": "http",
  "request": {
    "method": "POST",
    "url": {
      "$uri": "https://api.storecove.com/api/v2/legal_entities/{legal_entity_id}/administrations"
    },
    "body": {
      "$": "body",
      "encode": "json"
    }
  },
  "responses": {
    "200": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "Object"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**email**: The email address to send the received document to",
            "**id**: The Storecove assigned id for the Administration.",
            "**legal_entity_id**: The LegalEntity the Administration belongs to.",
            "**package_version**: The version of the package.",
            "**packaging**: How to package the purchase invoice.",
            "**sender_email_identity_id**: The id of the SenderEmailIdentity. If not provided, the Storecove default sender will be used"
          ]
        },
        {
          "$lang": "json",
          "$code": {
            "$encode": "json",
            "$indent": true,
            "$content": {
              "$": "$.body"
            }
          }
        }
      ]
    },
    "422": {
      "$encode": "markdown",
      "$block": [
        {
          "$h1": "List"
        },
        "**Key properties:**",
        {
          "$ul": [
            "**details**",
            "**source**"
          ]
        },
        {
          "$each": "$.body.*",
          "$as": "item",
          "$block": [
            {
              "$h2": "Item"
            },
            {
              "$lang": "json",
              "$code": {
                "$encode": "json",
                "$indent": true,
                "$content": {
                  "$": "$.item"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
